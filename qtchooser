#include <tunables/global>

profile qtchooser /usr/bin/qtchooser flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/qtchooser					mr,
  /usr/lib{,32,64}/qt4/bin/qtconfig			Px,
  /usr/lib{,32,64}/qt4/bin/lrelease			Px,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/qtchooser/{,**}				r,
  
  # NOISY ----------------------------------------------
  deny /usr/lib{,32,64}/qt4/bin/qmake			x,	# we don't allow this directly via qtconfig,
  								# only qt configuration should be available,
  								# qmake should be used only via portage (emerge)
}
