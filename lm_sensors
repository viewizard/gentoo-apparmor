#include <local/tunables.d/>

profile lm_sensors.sensors /usr/bin/sensors {
  #include <abstractions/base>
  #include <abstractions/sensors>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/sensors					mr,
  
  # DENY INHERIT ---------------------------------------
  deny network inet dgram,					# conky_shell
  deny network inet6 dgram,					# conky_shell
  deny @{PROC}/uptime					r,	# conky_shell
  deny @{PROC}/@{pids}/net/dev				r,	# conky_shell
}

profile lm_sensors.init.d /etc/init.d/lm_sensors flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/lm_sensors/tasks		w,
  /sys/fs/cgroup/unified/lm_sensors/cgroup.procs	w,
  /sys/fs/cgroup/unified/lm_sensors/cgroup.events	r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/sensors					Px,
  @{shell}						Cx,
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/lm_sensors				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/{openrc,unified}/lm_sensors/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/lm_sensors/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/lm_sensors/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
