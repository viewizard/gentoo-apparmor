#include <tunables/global>
profile lm_sensors.sensors /usr/bin/sensors {
  #include <abstractions/base>
  
  /sys/class/hwmon/ r,
  /sys/class/i2c-adapter/ r,
  /sys/devices/pci**/i2c-*/name r,
  /sys/devices/platform/**/{,name} r,
  
  /usr/bin/sensors r,
  
  /etc/sensors3.conf r,
  /etc/sensors.d/{,*} r,
  
}


profile lm_sensors.init.d /etc/init.d/lm_sensors {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  /usr/bin/sensors Px,
  /bin/bash Cx -> shell,
  /bin/kmod Px,
  /bin/mount Px,
  /bin/grep ix,
  
  /etc/{conf,init}.d/lm_sensors r,
  
  
  profile shell {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /lib64/rc/sh/gendepends.sh Px,
    
  }
  
}
