#include <tunables/global>
profile lm_sensors.sensors /usr/bin/sensors {
  #include <abstractions/base>
  #include <abstractions/sensors>
  
  /usr/bin/sensors mr,
  
}


profile lm_sensors.init.d /etc/init.d/lm_sensors flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  /usr/bin/sensors Px,
  /bin/bash Cx -> shell,
  /bin/kmod Px,
  /bin/mount Px,
  /bin/grep ix,
  
  /etc/{conf,init}.d/lm_sensors r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
    
  }
  
}
