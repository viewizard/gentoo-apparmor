# BUILD SYSTEM ONLY! Оставляем в профиле использование ix.
# Не при каких обстоятельствах данный пакет не должен присутствовать в
# конечной пользовательской системе или серверах.

#include <local/tunables.d/>

profile genkernel-next.genkernel /usr/bin/genkernel {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  capability dac_override,
  capability dac_read_search,
  capability sys_admin,
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  audit @{PROC}/@{pid}/mounts				r,	# FIX ME! @{pid}/@{pids} audit 18.10.2017
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/genkernel					r,
  @{shell}						Cxmr,
  /bin/uname						Px,	# sys-apps/coreutils
  /bin/sed						ix,	# sys-apps/sed		# FS ACCESS!
  /bin/mv						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/cp						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/grep						ixr,	# sys-apps/grep		# FS ACCESS!	# r - записываем в initramfs.
  /bin/egrep						Cx,	# sys-apps/grep
  /bin/fgrep						Cx,	# sys-apps/grep
  /bin/cat						ixr,	# sys-apps/coreutils	# FS ACCESS!	# r - записываем в initramfs.
  /bin/cut						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/mkdir						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/ln						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/wc						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/yes						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/rm						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/tr						Px,	# sys-apps/coreutils
  /bin/sort						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/tar						ix,	# app-arch/tar		# FS ACCESS!
  /bin/bzip2						ix,	# app-arch/bzip2	# FS ACCESS!
  /bin/cpio						ix,	# app-arch/cpio		# FS ACCESS!
  /bin/readlink						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/mknod						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/chmod						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/date						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/dirname						Px,	# sys-apps/coreutils
  /bin/basename						Px,	# sys-apps/coreutils
  /bin/udevadm						Pxr,	# sys-fs/eudev		# r - записываем в initramfs.
  /bin/echo						Px,	# sys-apps/coreutils
  /bin/mount						Cx,	# sys-apps/util-linux
  /bin/umount						Cx,	# sys-apps/util-linux
  /bin/keyctl						r,	# sys-apps/keyutils
  /bin/head						r,	# sys-apps/coreutils
  /sbin/udevd						r,	# sys-fs/eudev
  /sbin/pdata_tools					r,	# sys-block/thin-provisioning-tools
  /sbin/dmsetup						r,	# sys-fs/lvm2
  /sbin/cryptsetup					r,	# sys-fs/cryptsetup
  /sbin/mdadm						r,	# sys-fs/mdadm
  /sbin/mdmon						r,	# sys-fs/mdadm
  /sbin/mdassemble					r,	# sys-fs/mdadm
  /sbin/blkid						r,	# sys-apps/util-linux
  /sbin/lvm						r,	# sys-fs/lvm2
  /sbin/ldconfig					Pxr,	# sys-libs/glibc	# r - записываем в initramfs.
  /sbin/apparmor_parser					r,	# sys-apps/apparmor
  /usr/bin/gawk						ix,	# sys-apps/gawk		# FS ACCESS!
  /usr/bin/md5sum					ix,	# sys-apps/coreutils	# FS ACCESS!
  /usr/bin/file						ix,	# sys-apps/findutils	# FS ACCESS!
  /usr/bin/find						ix,	# sys-apps/findutils	# FS ACCESS!
  /usr/bin/pkg-config					Px,	# dev-util/pkgconfig
  /usr/bin/realpath					ix,	# sys-apps/coreutils	# FS ACCESS!
  /usr/bin/lddtree					ixr,	# app-misc/pax-utils	# FIX ME! Вынести в отдельный профиль. r - т.к. скрипт.
  /usr/bin/scanelf					ix,	# app-misc/pax-utils	# FS ACCESS!
  /usr/bin/uniq						ix,	# sys-apps/coreutils	# FIX ME! Вынести в отдельный профиль.
  /usr/bin/q						Px,	# app-portage/portage-utils
  /usr/bin/id						Px,	# sys-apps/coreutils
  /usr/bin/xargs					ix,	# sys-apps/findutils	# FS ACCESS!
  /usr/bin/xz						ix,	# app-arch/xz-utils	# FS ACCESS!
  /usr/bin/gmake					Px,	# sys-devel/make
  /usr/bin/gpg{,2,-static}				r,	# app-crypt/gnupg
  /usr/bin/test						r,	# sys-apps/coreutils
  /usr/bin/hostid					ix,	# sys-apps/coreutils	# FIX ME! Вынести в отдельный профиль.
  /usr/bin/gawk						r,	# sys-apps/gawk
  /usr/bin/find						r,	# sys-apps/findutils
  /usr/@{CHOST}/binutils-bin/[0-9]*/strings		ix,	# sys-devel/binutils	# FIX ME! Вынести в отдельный профиль.
  /usr/@{CHOST}/binutils-bin/[0-9]*/strip		ix,	# sys-devel/binutils	# FIX ME! Вынести в отдельный профиль.
  
  # READS/WRITES ---------------------------------------
  /etc/genkernel.conf					r,
  /etc/fstab						r,
  /etc/mdadm.conf					r,	# sys-fs/mdadm
  /etc/lvm/lvm.conf					r,	# sys-fs/lvm2
  /etc/udev/udev.conf					r,	# sys-fs/eudev
  /etc/ld.so.conf					r,	# app-misc/pax-utils
  /etc/ld.so.conf.d/{,*}				r,	# app-misc/pax-utils
  /etc/apparmor.d/{,**}					r,	# sys-apps/apparmor
  /usr/src/IMA/ima_policy				r,
  /usr/src/IMA/certs/x509_ima.der			r,
  /usr/src/IMA/evm-hmac/evm-{kmk,key}			r,
  /usr/src/@{kernel}/{,**}				r,	# sys-kernel/gentoo-sources
  /usr/src/@{kernel}/{sed*,.config}			w,	# sys-kernel/gentoo-sources
  /usr/share/genkernel/{,**}				r,
  /usr/share/misc/magic.mgc				r,	# sys-apps/file
  /usr/portage/distfiles/busybox-*.tar.bz2		r,
  /boot/initramfs-genkernel-*-@{kernel_ver}		w,
  /var/cache/genkernel/{,**}				rw,
  /var/log/genkernel.log				rw,
  
  # TEMP -----------------------------------------------
  /var/tmp/portage/genkernel/{,**}			rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/bzip2						ix,	# FS ACCESS!
    
    # READS/WRITES -------------------------------------
    /var/cache/genkernel/busybox-*.tar.bz2		rw,
    
    # TEMP ---------------------------------------------
    /var/tmp/portage/genkernel/{,**}			rw,
  }
  
  profile egrep /bin/egrep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/egrep						r,
    @{shell}						mr,
    /bin/grep						ix,	# sys-apps/grep		# Все правильно, для egrep используем с ix.
  }
  
  profile fgrep /bin/fgrep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/fgrep						r,
    @{shell}						mr,
    /bin/grep						ix,	# sys-apps/grep		# Все правильно, для egrep используем с ix.
  }
  
  profile mount /bin/mount {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mount						mr,
  }
  
  profile umount /bin/umount {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/umount						mr,
  }
}
