# BUILD SYSTEM ONLY! Оставляем в профиле использование ix.
# Не при каких обстоятельствах данный пакет не должен присутствовать в
# конечной пользовательской системе или серверах.

#include <tunables/global>

profile genkernel-next.genkernel /usr/bin/genkernel flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  capability dac_override,
  capability dac_read_search,
  capability sys_admin,
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/genkernel					r,
  @{shell}						Cxmr,
  /bin/uname						Px,
  /bin/sed						ix,	# FS ACCESS!
  /bin/mv						ix,	# FS ACCESS!
  /bin/cp						ix,	# FS ACCESS!
  /bin/grep						ixr,	# FS ACCESS!	# r - записываем в initramfs.
  /bin/egrep						Cx,
  /bin/fgrep						Cx,
  /bin/cat						ixr,	# FS ACCESS!	# r - записываем в initramfs.
  /bin/cut						ix,	# FS ACCESS!
  /bin/mkdir						ix,	# FS ACCESS!
  /bin/ln						ix,	# FS ACCESS!
  /bin/wc						ix,	# FS ACCESS!
  /bin/yes						ix,	# FS ACCESS!
  /bin/rm						ix,	# FS ACCESS!
  /bin/tr						Px,
  /bin/sort						ix,	# FS ACCESS!
  /bin/tar						ix,	# FS ACCESS!
  /bin/bzip2						ix,	# FS ACCESS!
  /bin/cpio						ix,	# FS ACCESS!
  /bin/readlink						ix,	# FS ACCESS!
  /bin/mknod						ix,	# FS ACCESS!
  /bin/chmod						ix,	# FS ACCESS!
  /bin/date						ix,	# FS ACCESS!
  /bin/dirname						Px,
  /bin/basename						Px,
  /bin/udevadm						Pxr,	# r - записываем в initramfs.
  /bin/echo						Px,
  /bin/mount						Cx,
  /bin/umount						Cx,
  /bin/keyctl						r,
  /bin/head						r,
  /sbin/udevd						r,
  /sbin/pdata_tools					r,
  /sbin/dmsetup						r,
  /sbin/cryptsetup					r,
  /sbin/mdadm						r,
  /sbin/mdmon						r,
  /sbin/mdassemble					r,
  /sbin/blkid						r,
  /sbin/lvm						r,
  /sbin/ldconfig					Pxr,	# r - записываем в initramfs.
  /sbin/apparmor_parser					r,
  /usr/bin/gawk						ix,	# FS ACCESS!
  /usr/bin/md5sum					ix,	# FS ACCESS!
  /usr/bin/file						ix,	# FS ACCESS!
  /usr/bin/find						ix,	# FS ACCESS!
  /usr/bin/pkg-config					Px,
  /usr/bin/realpath					ix,	# FS ACCESS!
  /usr/bin/lddtree					ixr,	# FIX ME! Вынести в отдельный профиль. r - т.к. скрипт.
  /usr/bin/scanelf					ix,	# FS ACCESS!
  /usr/bin/uniq						ix,	# FIX ME! Вынести в отдельный профиль.
  /usr/bin/q						ix,	# FIX ME! Вынести в отдельный профиль.
  /usr/bin/id						Px,
  /usr/bin/xargs					ix,	# FS ACCESS!
  /usr/bin/xz						ix,	# FS ACCESS!
  /usr/bin/gmake					Px,
  /usr/bin/gpg{,2,-static}				r,
  /usr/bin/test						r,
  /usr/bin/hostid					ix,	# FIX ME! Вынести в отдельный профиль.
  /usr/bin/gawk						r,
  /usr/bin/find						r,
  /usr/@{CHOST}/binutils-bin/[0-9]*/strings		ix,	# FIX ME! Вынести в отдельный профиль.
  /usr/@{CHOST}/binutils-bin/[0-9]*/strip		ix,	# FIX ME! Вынести в отдельный профиль.
  
  # READS/WRITES ---------------------------------------
  /etc/genkernel.conf					r,
  /etc/fstab						r,
  /etc/mdadm.conf					r,
  /etc/lvm/lvm.conf					r,
  /etc/udev/udev.conf					r,
  /etc/ld.so.conf					r,	# /usr/bin/lddtree
  /etc/ld.so.conf.d/{,*}				r,	# /usr/bin/lddtree
  /etc/apparmor.d/{,**}					r,
  /etc/portage/{,**}					r,
  /usr/portage/profiles/{,**}				r,
  /usr/share/portage/{,**}				r,
  /usr/src/IMA/ima_policy				r,
  /usr/src/IMA/certs/x509_ima.der			r,
  /usr/src/IMA/evm-hmac/evm-{kmk,key}			r,
  /usr/src/@{kernel}/{,**}				r,
  /usr/src/@{kernel}/{sed*,.config}			w,
  /usr/share/genkernel/{,**}				r,
  /usr/share/misc/magic.mgc				r,
  /usr/portage/distfiles/busybox-*.tar.bz2		r,
  /boot/initramfs-genkernel-*-@{kernel_ver}		w,
  /var/db/pkg/{,**}					r,
  /var/cache/genkernel/{,**}				rw,
  /var/log/genkernel.log				rw,
  
  # TEMP -----------------------------------------------
  /var/tmp/portage/genkernel/{,**}			rw,
  
  profile shell @{shell} flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/bzip2						ix,	# FS ACCESS!
    
    # READS/WRITES -------------------------------------
    /var/cache/genkernel/busybox-*.tar.bz2		rw,
    
    # TEMP ---------------------------------------------
    /var/tmp/portage/genkernel/{,**}			rw,
  }
  
  profile egrep /bin/egrep flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/egrep						r,
    @{shell}						mr,
    /bin/grep						ix,	# Все правильно, для egrep используем с ix.
  }
  
  profile fgrep /bin/fgrep flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/fgrep						r,
    @{shell}						mr,
    /bin/grep						ix,	# Все правильно, для egrep используем с ix.
  }
  
  profile mount /bin/mount flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mount						mr,
  }
  
  profile umount /bin/umount flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/umount						mr,
  }
}
