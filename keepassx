#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="**"
@{PROG_FILE}="{,.}*.{kdbx,csv,KDBX,CSV}{,.lock}"

profile keepassx /usr/bin/keepassx {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/cups-client>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rwk-strict>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  @{PROC}/@{pid}/{cmdline,status}			r,
  @{PROC}/@{pid}/task/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/keepassx mr,
  
  # READS/WRITES ---------------------------------------
  /usr/bin/ r,
  /usr/share/keepassx/{,**} r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/keepassx/ rw,
  owner @{HOME}/.config/keepassx/** rwk,
}
