#include <tunables/global>
profile firefox /usr/{bin/firefox,lib{,32,64}/firefox/firefox{,-bin}} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/enchant>
  #include <abstractions/audio>
  #include <abstractions/cups-client>
  #include <abstractions/gtk>
  #include <abstractions/nameservice>
  #include <abstractions/p11-kit>
  #include <abstractions/nvidia>
  #include <abstractions/user-tmp>
  #include <abstractions/user-download>
  #include <abstractions/user-upload>
  #include <abstractions/dconf>
  #include <abstractions/X>
  #include <abstractions/executable-binary-helper>
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  
  @{PROC}/ r,
  @{PROC}/@{pid}/fd/ r,
  @{PROC}/@{pid}/mountinfo r,
  @{PROC}/@{pid}/stat r,
  @{PROC}/@{pid}/net/arp r,
  owner @{PROC}/@{pid}/task/@{pid}/stat r,
  @{PROC}/filesystems r,
  /sys/devices/pci[0-9]*/**/uevent r,
  # for networking
  @{PROC}/@{pid}/net/if_inet6 r,
  @{PROC}/@{pid}/net/ipv6_route r,
  @{PROC}/@{pid}/net/dev r,
  @{PROC}/@{pid}/net/wireless r,
  # about:memory
  owner @{PROC}/@{pid}/statm r,
  owner @{PROC}/@{pid}/smaps r,
  
  /etc/ r,
  /etc/mtab r,
  /etc/fstab r,
  /etc/mime.types r,
  /etc/timezone r,
  /etc/udev/udev.conf r,
  /usr/share/myspell/ r,
  /usr/share/myspell/* r,
  owner /tmp/** m,
  owner /var/tmp/** m,
  owner @{HOME}/.macromedia/** rw,
  owner @{HOME}/.local/share/gvfs-metadata/home r,
  
  /usr/bin/firefox mr,
  /usr/lib{,32,64}/firefox/firefox{,-bin} mr,
  /bin/bash mr,
  /sbin/killall5 ixr,
  /bin/which ixr,
  /usr/bin/tr ixr,
  /bin/ps Pxr,
  /bin/uname ixr,
  /usr/bin/basename ixr,
  /usr/bin/dirname ixr,
  /usr/bin/pwd ixr,
  # Allow 'x' for downloaded extensions, but inherit policy for safety
  owner @{HOME}/.mozilla/**/extensions/** ixmr,
  /usr/lib{,32,64}/firefox/browser/extensions/** ixmr,
  # FIX ME!
  # plugin-container for flash, that must be moved to separate profile!
  audit deny /usr/lib{,32,64}/firefox/plugin-container x,
  
  # Needed for the crash reporter
  owner @{PROC}/@{pid}/environ r,
  owner @{PROC}/@{pid}/auxv r,
  /etc/lsb-release r,
  /usr/bin/expr ix,
  /sys/devices/system/cpu/ r,
  /sys/devices/system/cpu/** r,
  
  # Firefox configuration
  owner @{HOME}/.{firefox,mozilla}/ rw,
  owner @{HOME}/.{firefox,mozilla}/** rw,
  owner @{HOME}/.{firefox,mozilla}/**/*.{db,parentlock,sqlite}* k,
  owner @{HOME}/.{firefox,mozilla}/plugins/** mr,
  owner @{HOME}/.{firefox,mozilla}/**/plugins/** mr,
  owner @{HOME_CACHE}/mozilla/{,firefox/} rw,
  owner @{HOME_CACHE}/mozilla/firefox/** rw,
  owner @{HOME_CACHE}/mozilla/firefox/**/*.sqlite k,
  
}
