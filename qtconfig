  /usr/{,lib/qt4/,lib32/qt4/,lib64/qt4/}bin/{qtconfig,qtchooser} ixr,
  /usr/lib64/qt4/bin/qmake Pux,
  /usr/lib64/qt4/bin/lrelease ix,

  /etc/xdg/qtchooser/ r,
  /etc/xdg/qtchooser/** r,
  
}
