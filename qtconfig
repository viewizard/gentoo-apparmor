#include <tunables/global>
profile qtconfig /usr/{,lib/qt4/,lib32/qt4/,lib64/qt4/}bin/{qtconfig,qtchooser} flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/qt>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  
  /usr/{,lib/qt4/,lib32/qt4/,lib64/qt4/}bin/{qtconfig,qtchooser} ixr,
  /usr/lib{,32,64}/qt4/bin/lrelease ix,
  
  # we don't allow this directly via qtconfig,
  # only qt configuration should be available,
  # qmake should be used only via portage (emerge)
  deny /usr/lib{,32,64}/qt4/bin/qmake x,

  /etc/xdg/qtchooser/{,**} r,
  
}
