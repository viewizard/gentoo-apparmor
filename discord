#include <tunables/global>

profile discord /opt/discord/share/discord/Discord {
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/gtk>
  #include <abstractions/audio-pulseaudio>
  #include <abstractions/nameservice>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/xdg-open>
  
  # AUDIT CAPABILITIES ---------------------------------
  deny capability sys_ptrace,
  
  # AUDIT PTRACE ---------------------------------------
  deny ptrace (trace),
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term) peer="lsb-release",
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner /dev/shm/.org.chromium.Chromium.??????		rw,
  /sys/devices/system/cpu/				r,
  /sys/devices/system/cpu/cpufreq/policy[0-9]*/cpuinfo_max_freq r,
  /sys/devices/pci[0-9]**/{device,class,irq,resource,vendor} r,
  /sys/devices/virtual/tty/tty[0-9]**/active		r,
  @{PROC}/						r,
  @{PROC}/@{pid}/stat					r,
  owner @{PROC}/@{pid}/fd/				r,
  @{PROC}/@{pid}/auxv					r,
  
  # AUDIT PSEUDO ---------------------------------------
  deny @{PROC}/@{pid}/oom_score_adj			rw,
  deny @{PROC}/@{pid}/cmdline				r,	# Лазит по процессам и смотрит параметры запуска.
  
  # EXECUTABLES ----------------------------------------
  /opt/discord/share/discord/Discord			Pxmr,
  /usr/bin/lsb_release					Px,
  
  # READS/WRITES ---------------------------------------
  /opt/discord/**					r,
  /opt/discord/**.so					m,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/discord/{,**}			rwk,
  owner @{HOME}/.config/discord/*/modules/**.{node,so}	m,
  owner @{HOME}/.pki/nssdb/pkcs11.txt			r,
  owner @{HOME}/.pki/nssdb/cert9.db			rwk,
  owner @{HOME}/.pki/nssdb/key4.db			rwk,
  owner @{HOME}/.config/autostart/discord-stable.desktop rw,
  
  # TEMP -----------------------------------------------
  /tmp/							r,
  owner /tmp/discord.sock				rw,
  owner /tmp/.gl*					rw,
  owner /tmp/.org.chromium.Chromium.*			mrw,
  owner "/tmp/Discord Crashes/{,**}"			rw,
  /var/tmp/						r,
  owner /var/tmp/etilqs_*				rw,
  
  # DENY INHERIT ---------------------------------------
  deny unix (send, receive) peer=(label="lsb-release"),
}
