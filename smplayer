#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-rk
@{USERS_DIR_rk}="[^.]**"
@{USERS_FILE_rk}="[^.]*.{mpeg,vob,ogg,asf,wav,wmv,wma,mov,mp3,mp4,avi,mkv,mka,webm,vivo,ts,ogm,aac,h264,3p2,3gp,3ga,flv,ass,smi,srt,sub,txt,mdv,ssa,sup,tt,smil,gif,MPEG,VOB,OGG,ASF,WAV,WMV,WMA,MOV,MP3,MP4,AVI,MKV,MKA,WEBM,VIVO,TS,OGM,AAC,H264,3P2,3GP,3GA,FLV,ASS,SMI,SRT,SUB,TXT,MDV,SSA,SUP,TT,SMIL,GIF}"

profile smplayer /usr/bin/smplayer {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/X>
  #include <abstractions/video>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/dbus/mpris2-server>
  #include <abstractions/fs/access-by-users-preset-rk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/unix/gvfsd-smb>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(kill,term) peer="mpv",			# media-video/mpv
  signal (send) set=(kill,term) peer="mplayer",			# media-video/mplayer
  
  # DBUS -----------------------------------------------
  deny dbus peer=(label="networkmanager.NetworkManager"),	# Запрещаем работу с сетью.

  # NETWORK --------------------------------------------
  deny network netlink raw,					# Запрещаем работу с сетью.
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty						r,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/cmdline				r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/smplayer					mr,
  /usr/bin/mplayer					Px,	# media-video/mplayer
  /usr/bin/pacmd					Px,	# media-sound/pulseaudio
  /usr/bin/mpv						Px,	# media-video/mpv
  audit /usr/bin/aplay					Px,	# media-sound/alsa-utils	# FIX ME! audit 5.12.2017
  
  # READS/WRITES ---------------------------------------
  /usr/bin/						r,
  /usr/share/smplayer/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/smplayer/{,**}			rw,
  owner @{HOME}/.config/smplayer/{,**/}*		k,
  owner @{HOME}/mplayer.log				rw,	# media-video/mplayer
  owner @{HOME}/Pictures/smplayer_screenshots/{,*}	rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/qtsingleapp-smplay-@{TMP4}-{@{UID_HEX},@{UID_ROOT_HEX}} rw,
  owner /tmp/qtsingleapp-smplay-@{TMP4}-{@{UID_HEX},@{UID_ROOT_HEX}}-lockfile rwk,
}
