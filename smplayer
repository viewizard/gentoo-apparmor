#include <tunables/global>

# предустановка для abstractions/fs/access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]*.{mpeg,vob,ogg,asf,wav,wmv,wma,mov,mp3,mp4,avi,mkv,mka,webm,vivo,ts,ogm,aac,h264,3p2,3gp,3ga,flv,ass,smi,srt,sub,txt,mdv,ssa,sup,tt,smil,gif,MPEG,VOB,OGG,ASF,WAV,WMV,WMA,MOV,MP3,MP4,AVI,MKV,MKA,WEBM,VIVO,TS,OGM,AAC,H264,3P2,3GP,3GA,FLV,ASS,SMI,SRT,SUB,TXT,MDV,SSA,SUP,TT,SMIL,GIF}"

profile smplayer /usr/bin/smplayer {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/X>
  #include <abstractions/video>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/fs/access-by-users-preset-rk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/unix/gvfsd-smb>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(kill,term) peer="mpv",
  signal (send) set=(kill,term) peer="mplayer",
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty						r,
  /dev/tty[0-9]*					rw,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/smplayer					mr,
  /usr/bin/mplayer					Px,
  /usr/bin/pacmd					Px,
  /usr/bin/mpv						Px,
  /usr/bin/aplay					Px,
  
  # READS/WRITES ---------------------------------------
  /usr/bin/						r,
  /usr/share/smplayer/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/smplayer/			rw,
  owner @{HOME}/.config/smplayer/**			rwk,
  owner @{HOME}/mplayer.log				rw,	# mplayer
  owner @{HOME}/Pictures/smplayer_screenshots/{,*}	rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/qtsingleapp-smplay-*-*{,-lockfile}		rwk,
}
