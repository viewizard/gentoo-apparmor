#include <local/tunables.d/>

# .mpg, .mpeg
@{local_ext}=[mM][pP]{,[eE]}[gG]
# .vob
@{local_ext}+=[vV][oO][bB]
# .ogg, .ogm
@{local_ext}+=[oO][gG][gGmM]
# .asf
@{local_ext}+=[aA][sS][fF]
# .wav
@{local_ext}+=[wW][aA][vV]
# .wmv, .wma
@{local_ext}+=[wW][mM][vVaA]
# .mov
@{local_ext}+=[mM][oO][vV]
# .mp3, .mp4
@{local_ext}+=[mM][pP][34]
# .avi
@{local_ext}+=[aA][vV][iI]
# .mkv, .mka
@{local_ext}+=[mM][kK][vVaA]
# .webm
@{local_ext}+=[wW][eE][bB][mM]
# .vivo
@{local_ext}+=[vV][iI][vV][oO]
# .ts
@{local_ext}+=[tT][sS]
# .aac
@{local_ext}+=[aA][aA][cC]
# .h264
@{local_ext}+=[hH]264
# .3p2
@{local_ext}+=3[pP]2
# .3ga, .3gp
@{local_ext}+=3[gG][pPaA]
# .flv
@{local_ext}+=[fF][lL][vV]
# .ass
@{local_ext}+=[aA][sS][sS]
# .smi
@{local_ext}+=[sS][mM][iI]
# .srt
@{local_ext}+=[sS][rR][tT]
# .sub
@{local_ext}+=[sS][uU][bB]
# .txt
@{local_ext}+=[tT][xX][tT]
# .mdv
@{local_ext}+=[mM][dD][vV]
# .ssa
@{local_ext}+=[sS][sS][aA]
# .sup
@{local_ext}+=[sS][uU][pP]
# .tt
@{local_ext}+=[tT][tT]
# .smil
@{local_ext}+=[sS][mM][iI][lL]
# .gif
@{local_ext}+=[gG][iI][fF]

# форматы плей листов (открываем на чтение и запись)
# .m3u, .m3u8
@{local_ext_playlist}=[mM]3[uU]{,8}
# .xspf
@{local_ext_playlist}+=[xX][sS][pP][fF]
# .pls
@{local_ext_playlist}+=[pP][lL][sS]

# предустановка для abstractions/fs/access-by-user-preset-rk
@{USERS_DIR_rk}="[^.]**"
@{USERS_FILE_rk}="[^.]*.@{local_ext}"
# предустановка для abstractions/fs/access-by-user-preset-rwk
@{USERS_DIR_rwk}="[^.]**"
@{USERS_FILE_rwk}="[^.]*.@{local_ext_playlist}"

profile smplayer /usr/bin/smplayer {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/X>
  #include <abstractions/video>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/dbus/mpris2-server>
  #include <abstractions/fs/access-by-users-preset-rk>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/unix/gvfsd-smb>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(kill,term) peer="mpv",			# media-video/mpv
  signal (send) set=(kill,term) peer="mplayer",			# media-video/mplayer
  
  # DBUS -----------------------------------------------
  deny dbus peer=(label="networkmanager.NetworkManager"),	# Запрещаем работу с сетью.

  # NETWORK --------------------------------------------
  deny network netlink raw,					# Запрещаем работу с сетью.
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty						r,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/cmdline				r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/smplayer					mr,
  /usr/bin/mplayer					Px,	# media-video/mplayer
  /usr/bin/pacmd					Px,	# media-sound/pulseaudio
  /usr/bin/mpv						Px,	# media-video/mpv
  audit /usr/bin/aplay					Px,	# media-sound/alsa-utils	# FIX ME! audit 5.12.2017
  
  # READS/WRITES ---------------------------------------
  /usr/bin/						r,
  /usr/share/smplayer/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/smplayer/{,**}			rw,
  owner @{HOME}/.config/smplayer/{,**/}*		k,
  owner @{HOME}/mplayer.log				rw,	# media-video/mplayer
  owner @{HOME}/Pictures/smplayer_screenshots/{,*}	rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/qtsingleapp-smplay-@{TMP4}-{@{UID_HEX},@{UID_ROOT_HEX}} rw,
  owner /tmp/qtsingleapp-smplay-@{TMP4}-{@{UID_HEX},@{UID_ROOT_HEX}}-lockfile rwk,
}
