#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*.{mpeg,vob,ogg,asf,wav,wmv,wma,mov,mp3,mp4,avi,mkv,mka,webm,vivo,ts,ogm,aac,h264,3p2,3gp,3ga,flv,ass,smi,srt,sub,txt,mdv,ssa,sup,tt,smil,gif}"

profile smplayer /usr/bin/smplayer {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/dbus-session>
  #include <abstractions/gtk>
  #include <abstractions/qt>
  #include <abstractions/nvidia>
  #include <abstractions/user-tmp>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rk>
  #include <abstractions/nameservice>
  
  /dev/ r,
  
  /usr/bin/smplayer r,
  /usr/bin/mplayer ix,
  deny /usr/bin/mpv x, # have issues with smplayer (sound freez, pulseaudio), but work fine as stand alone player
  /usr/bin/aplay Px,
  
  /usr/share/smplayer/{,**} r,
  # mplayer
  /etc/mplayer/mplayer.conf r,
  /etc/terminfo/l/linux r,
  /usr/share/terminfo/u/unknown r,
  owner /tmp/.* m,
  
  owner @{HOME}/.config/smplayer/ rw,
  owner @{HOME}/.config/smplayer/** rwk,
  owner @{HOME}/mplayer.log rw,
  owner @{HOME}/.mplayer/{,config} rw,
  
}
