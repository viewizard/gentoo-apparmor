#include <tunables/global>
profile claws-mail /usr/bin/claws-mail {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/enchant>
  #include <abstractions/dbus-session>
  #include <abstractions/nameservice>
  #include <abstractions/p11-kit>
  #include <abstractions/nvidia>
  #include <abstractions/cups-client>
  #include <abstractions/gtk>
  #include <abstractions/private-files-strict>
  #include <abstractions/X>
  #include <abstractions/user-tmp>
  #include <abstractions/user-download>
  #include <abstractions/user-upload>
  #include <abstractions/xdg-open>
  
  /dev/tty[0-9]* w,
  
  /usr/bin/claws-mail mr,
  /usr/lib64/claws-mail/plugins/* m,
  /usr/share/claws-mail/** r,
  /usr/lib64/libproxy/** m,

  owner @{HOME}/.claws-mail/ rw,
  owner @{HOME}/.claws-mail/** rw,
  owner @{HOME}/Mail/ rw,
  owner @{HOME}/Mail/** rwl,
  owner @{HOME_CACHE}/webkit/ rw,
  owner @{HOME_CACHE}/webkit/** rwk,

  # noise
  deny / r,
  deny owner @{HOME}/* r,
  
}
