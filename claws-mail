#include <tunables/global>

profile claws-mail /usr/bin/claws-mail {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/enchant>
  #include <abstractions/nameservice>
  #include <abstractions/p11-kit>
  #include <abstractions/video>
  #include <abstractions/cups-client>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/networkmanager>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/fs-access-by-pattern-internet>
  #include <abstractions/xdg-open>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/claws-mail					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/lib{,32,64}/claws-mail/plugins/*.so		m,
  /usr/lib{,32,64}/libproxy/**.so			m,
  /usr/share/claws-mail/**				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.claws-mail/{,**}			rw,
  owner @{HOME}/Mail/{,**}				rw,
  owner link subset @{HOME}/Mail/queue/[0-9]*		-> /{home/*,root}/.claws-mail/tmp/queue.*,	# LINK! @{HOME}
  owner @{HOME_CACHE}/webkit/{,**}			rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/claws-mail-[1-9]*/				rw,
  /tmp/claws-mail-[1-9]*/**				rwk,
  
  # NOISY ----------------------------------------------
  deny /						r,
  deny /etc/pulse/client.conf				r,	# (?) Не очень понятно почему, но при выключении
  deny /dev/shm/					r,	# (?) лезет к данным пульсаудио. Хотя не использует
  deny /run/user/[0-9]*/pulse/native			rw,	# (?) звук.
}
