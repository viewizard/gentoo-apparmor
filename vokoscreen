#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="{qt_temp.*,[^.]*.{mkv,avi,gif,MKV,AVI,GIF}}"

profile vokoscreen /usr/bin/vokoscreen {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rwk-strict>
  #include <abstractions/executable-binary-helper>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty						r,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/vokoscreen					mr,
  /usr/bin/ffmpeg					ixr,
  /usr/bin/pactl					Px,	# FIX ME! изменен с ix, проверить.
  
  # READS/WRITES ---------------------------------------
  /etc/os-release					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/vokoscreen/			rw,
  owner @{HOME}/.config/vokoscreen/**			rwk,
}
