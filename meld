#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"

profile meld /usr/bin/meld {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/python>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/program-work-with-disk-rwk>
  #include <abstractions/executable-binary-helper>
  #include <abstractions/cups-client>
  #include <abstractions/dbus-session>
  #include <abstractions/dconf>
  
  capability dac_override,
  capability dac_read_search,
  capability fowner,
  
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* rw,
  /dev/shm/* rwl,
  @{PROC}/@{pid}/fd/ r,
  
  /usr/bin/meld r,
  /bin/env r,
  /usr/bin/which ix,
  # Usage:
  #    meld <file|folder>                Start a version control comparison
  # In the same time, "meld <file>" and git close meld with message:
  # Error: Git: Path <our file> is invalid or not present
  # Error: Path not in repository
  #/usr/bin/git Px,
  deny /usr/bin/git x,
  
  /usr/share/meld/{,**} r,
  /usr/share/gtksourceview-[2-9]*/{,**} r,
  
  owner @{HOME}/.config/meld/{,**} rw,
  owner @{HOME}/.local/share/meld/{,**} rw,
  
  /tmp/ rw,
  /tmp/** rwkl,
  
  # Noisy
#  deny /usr/lib{,32,64}/@{PYTHON}/site-packages/cairo/__init__.pyc w,
  
}


profile meld_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/python>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/program-work-with-disk-rwk>
  #include <abstractions/executable-binary-helper>
  #include <abstractions/cups-client>
  #include <abstractions/dbus-session>
  #include <abstractions/user-systemwide-files>
  #include <abstractions/dconf>
  
  capability dac_override,
  capability dac_read_search,
  capability fowner,
  
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* rw,
  /dev/shm/* rwl,
  @{PROC}/@{pid}/fd/ r,
  
  /usr/bin/meld r,
  /bin/env r,
  /usr/bin/which ix,
  # Usage:
  #    meld <file|folder>                Start a version control comparison
  # In the same time, "meld <file>" and git close meld with message:
  # Error: Git: Path <our file> is invalid or not present
  # Error: Path not in repository
  #/usr/bin/git Px -> git_root,
  deny /usr/bin/git x,
  
  /usr/share/meld/{,**} r,
  /usr/share/gtksourceview-[2-9]*/{,**} r,
  
  owner @{HOME}/.config/meld/{,**} rw,
  owner @{HOME}/.local/share/meld/{,**} rw,
  
  /tmp/ rw,
  /tmp/** rwkl,
  
  # Noisy
#  deny /usr/lib{,32,64}/@{PYTHON}/site-packages/cairo/__init__.pyc w,
  
}
