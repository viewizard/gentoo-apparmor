#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-rwk
@{USERS_DIR_rwk}="[^.]**"
@{USERS_FILE_rwk}="[^.]*"

profile meld /usr/bin/meld {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/python>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/dconf>
  #include <abstractions/cups-client>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  #include <abstractions/unix/gvfsd-trash>
  #include <abstractions/unix/gvfsd-network>
  #include <abstractions/profile_transitions/users-strict-web>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/gnome/meld"
  	interface="org.gtk.{Actions,Application}"
  	peer=(name="org.gnome.meld",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/org/gnome/meld"
  	interface="org.gtk.{Actions,Application}"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner /dev/shm/@{TMP6}				rw,	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  owner /dev/shm/sem.mp-@{TMP8}				rw,	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  owner link subset /dev/shm/sem.mp-@{TMP8}		-> /dev/shm/@{TMP6},
  @{PROC}/@{pid}/fd/					r,	# IMPROVE! UID=$USER(owner),root (!root - после удаления bprm_secureexec)
  @{PROC}/@{pid}/mounts					r,	# IMPROVE! UID=$USER(owner),root (!root - после удаления bprm_secureexec)
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/meld						mr,
  /bin/env						r,
  /usr/bin/which					Px,	# sys-apps/which
  # Usage:
  #    meld <file|folder>                Start a version control comparison
  # In the same time, "meld <file>" and git close meld with message:
  # Error: Git: Path <our file> is invalid or not present
  # Error: Path not in repository
  #/usr/bin/git Px,
  deny /usr/bin/git					x,	# dev-vcs/git
  
  # READS/WRITES ---------------------------------------
  /usr/bin/						r,
  /usr/share/meld/{,**}					r,
  /usr/share/gtksourceview-[2-9]*/{,**}			r,	# x11-libs/gtksourceview
  @{PYTHON_PACKAGES}/cairo/{,**/}			w,	# dev-python/pycairo
  @{PYTHON_PACKAGES}/cairo/**.pyc{,.*}			w,	# dev-python/pycairo
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/meld/{,**}			rw,
  owner @{HOME}/.local/share/meld/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/*						rw,	# системы контроля версий передают файлы на проверку через tmp.
  								# IMPROVE! Потом работать с xattr, чтобы ограничить только на текущий
  								# процесc, rapidsvn, qgit.
  audit owner /var/tmp/??????				rw,	# FIX ME! audit 25.11.2017	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
}

profile meld_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/python>
  #include <abstractions/video>
  #include <abstractions/X_sudo>
  #include <abstractions/nameservice>
  #include <abstractions/dconf>
  #include <abstractions/cups-client>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/access-by-pattern-systemusers>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  #include <abstractions/unix/gvfsd-trash>
  #include <abstractions/unix/gvfsd-network>
  #include <abstractions/profile_transitions/root-deny-web>
  
  # CAPABILITIES ---------------------------------------
  capability fowner,
  capability mknod,
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/gnome/meld"
  	interface="org.gtk.{Actions,Application}"
  	peer=(name="org.gnome.meld",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/org/gnome/meld"
  	interface="org.gtk.{Actions,Application}"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner /dev/shm/@{TMP6}				rw,	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  owner /dev/shm/sem.mp-@{TMP8}				rw,	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  owner link subset /dev/shm/sem.mp-@{TMP8}		-> /dev/shm/@{TMP6},
  owner @{PROC}/@{pid}/fd/				r,
  owner @{PROC}/@{pid}/mounts				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/meld						mr,
  /bin/env						r,
  /usr/bin/which					Px,	# sys-apps/which
  # Usage:
  #    meld <file|folder>                Start a version control comparison
  # In the same time, "meld <file>" and git close meld with message:
  # Error: Git: Path <our file> is invalid or not present
  # Error: Path not in repository
  #/usr/bin/git Px -> git_root,
  deny /usr/bin/git					x,	# dev-vcs/git
  
  # READS/WRITES ---------------------------------------
  /usr/bin/						r,
  /usr/share/meld/{,**}					r,
  /usr/share/gtksourceview-[2-9]*/{,**}			r,	# x11-libs/gtksourceview
  @{PYTHON_PACKAGES}/cairo/{,**/}			w,	# dev-python/pycairo
  @{PYTHON_PACKAGES}/cairo/**.pyc{,.*}			w,	# dev-python/pycairo
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/meld/{,**}			rw,
  owner @{HOME}/.local/share/meld/{,**}			rw,
  
  # TEMP -----------------------------------------------
  /tmp/							r,
  owner /tmp/*						rw,	# системы контроля версий передают файлы на проверку через tmp.
  								# IMPROVE! Потом работать с xattr, чтобы ограничить только на текущий
  								# процеcс, rapidsvn, qgit.
  audit owner /var/tmp/??????				rw,	# FIX ME! audit 25.11.2017	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
}
