#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]*"

profile meld /usr/bin/meld {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/python>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/binary-helper-strict-web>
  #include <abstractions/cups-client>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/dconf>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  #include <abstractions/unix/gvfsd-trash>
  #include <abstractions/unix/gvfsd-network>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/gnome/meld"
  	interface="org.gtk.{Actions,Application}"
  	peer=(name="org.gnome.meld",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/org/gnome/meld"
  	interface="org.gtk.{Actions,Application}"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner /dev/shm/??????					rw,
  owner /dev/shm/sem.*-[0-9]*				rw,
  owner link subset /dev/shm/sem.*-[0-9]*		-> /dev/shm/??????,
  owner @{PROC}/@{pid}/fd/				r,
  owner @{PROC}/@{pid}/mounts				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/meld						mr,
  /bin/env						r,
  /usr/bin/which					Px,
  # Usage:
  #    meld <file|folder>                Start a version control comparison
  # In the same time, "meld <file>" and git close meld with message:
  # Error: Git: Path <our file> is invalid or not present
  # Error: Path not in repository
  #/usr/bin/git Px,
  deny /usr/bin/git					x,
  
  # READS/WRITES ---------------------------------------
  /usr/share/meld/{,**}					r,
  /usr/share/gtksourceview-[2-9]*/{,**}			r,
  @{PYTHON_PACKAGES}/cairo/**.pyc{,.*}			w,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/meld/{,**}			rw,
  owner @{HOME}/.local/share/meld/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/*						rw,	# системы контроля версий передают файлы на проверку через tmp.
  owner /var/tmp/??????					rw,
}

profile meld_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/python>
  #include <abstractions/video>
  #include <abstractions/X_sudo>
  #include <abstractions/nameservice>
  #include <abstractions/binary-helper-strict-web_root>
  #include <abstractions/cups-client>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/dconf>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/access-by-pattern-systemusers>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  #include <abstractions/unix/gvfsd-trash>
  #include <abstractions/unix/gvfsd-network>
  
  # CAPABILITIES ---------------------------------------
  capability fowner,
  capability mknod,
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/gnome/meld"
  	interface="org.gtk.{Actions,Application}"
  	peer=(name="org.gnome.meld",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/org/gnome/meld"
  	interface="org.gtk.{Actions,Application}"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner /dev/shm/??????					rw,
  owner /dev/shm/sem.*-[0-9]*				rw,
  owner link subset /dev/shm/sem.*-[0-9]*		-> /dev/shm/??????,
  owner @{PROC}/@{pid}/fd/				r,
  owner @{PROC}/@{pid}/mounts				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/meld						mr,
  /bin/env						r,
  /usr/bin/which					Px,
  # Usage:
  #    meld <file|folder>                Start a version control comparison
  # In the same time, "meld <file>" and git close meld with message:
  # Error: Git: Path <our file> is invalid or not present
  # Error: Path not in repository
  #/usr/bin/git Px -> git_root,
  deny /usr/bin/git					x,
  
  # READS/WRITES ---------------------------------------
  /usr/share/meld/{,**}					r,
  /usr/share/gtksourceview-[2-9]*/{,**}			r,
  @{PYTHON_PACKAGES}/cairo/**.pyc{,.*}			w,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/meld/{,**}			rw,
  owner @{HOME}/.local/share/meld/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/??????{,_*}				rw,
  owner /var/tmp/??????					rw,
}
