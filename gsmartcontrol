#include <tunables/global>
profile gsmartcontrol /usr/bin/gsmartcontrol {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  
  capability dac_override,
  capability sys_rawio,
  
  /dev/tty[0-9]* w,
  /dev/sd[a-z] r,
  /dev/zd[0-9]* r,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/**/{idVendor,idProduct,bcdDevice} r,
  
  @{PROC}/@{pid}/fd/ r,
  @{PROC}/partitions r,
  @{PROC}/devices r,
  @{PROC}/scsi/scsi r,

  /usr/bin/gsmartcontrol mr,
  /usr/sbin/smartctl ix,
  /usr/bin/exo-open Px,
  
  /etc/fstab r,
  /usr/share/smartmontools/{,**} r,
  
  owner @{HOME}/.config/gsmartcontrol/{,gsmartcontrol.conf} rw,
  
}


profile gsmartcontrol-root /usr/bin/gsmartcontrol-root {
  #include <abstractions/base>
  
  /bin/bash Cx -> shell,
  /bin/env mr,
  
  
  profile shell {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash mr,
    /usr/bin/gsmartcontrol-root r,
    /usr/bin/which ix,
    /usr/bin/sudo Px,
    /usr/bin/gksu Px,
    
  }
  
}
