#include <tunables/global>

profile gsmartcontrol /usr/bin/gsmartcontrol {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/**/{idVendor,idProduct,bcdDevice} r,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/partitions					r,
  @{PROC}/devices					r,
  @{PROC}/scsi/scsi					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gsmartcontrol				mr,
  /usr/sbin/smartctl					Px,
  /usr/bin/exo-open					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/gsmartcontrol/{,gsmartcontrol.conf} rw,
  
}

profile gsmartcontrol-root /usr/bin/gsmartcontrol-root {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /bin/bash						Cx -> shell,
  /bin/env						mr,
  
  
  profile shell {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    /bin/bash						mr,
    /usr/bin/gsmartcontrol-root				r,
    /usr/bin/which					ix,
    /usr/bin/sudo					Px,
    /usr/bin/gksu					Px,
    
  }
  
}
