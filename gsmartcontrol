#include <tunables/global>

profile gsmartcontrol /usr/bin/gsmartcontrol {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X_sudo>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/**/{idVendor,idProduct,bcdDevice} r,
  @{PROC}/partitions					r,
  @{PROC}/devices					r,
  @{PROC}/scsi/scsi					r,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gsmartcontrol				mr,
  /usr/sbin/smartctl					Px,
  /usr/bin/exo-open					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  /usr/share/gvfs/remote-volume-monitors/{,*.monitor}	r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/gsmartcontrol/{,gsmartcontrol.conf} rw,
}

profile gsmartcontrol.gsmartcontrol-root /usr/bin/gsmartcontrol-root {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/env						mr,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /usr/bin/gsmartcontrol-root				r,
    /usr/bin/which					Px,
    /usr/bin/sudo					Px,
    /usr/bin/gksu					Px,
  }
}
