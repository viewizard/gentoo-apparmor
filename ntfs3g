#include <local/tunables.d/>

profile ntfs3g /usr/bin/ntfs-3g {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/fuse						rw,
  /dev/@{BLOCK_ALL}					rwk,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/{,*/}name	r,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/ntfs-3g					mr,
}
