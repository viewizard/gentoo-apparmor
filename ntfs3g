#include <tunables/global>
profile ntfs3g /usr/bin/ntfs-3g flags=(complain) {
  #include <abstractions/base>
  
  capability sys_admin,
  
  /dev/fuse rw,
  /dev/sd[a-z][0-9]* rwk,
  /sys/devices/virtual/block/dm-[0-9]*/dm/name r,
  @{PROC}/@{pid}/mounts r,
  
  /usr/bin/ntfs-3g r,
  
}
