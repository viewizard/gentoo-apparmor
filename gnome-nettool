#include <tunables/global>

profile gnome-nettool /usr/bin/gnome-nettool {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/nameservice>
  #include <abstractions/binary-helper-strict-web>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(int,kill) peer="nmap",
  signal (send) set=(int,kill) peer="dig",
  signal (send) set=(int,kill) peer="whois",
  signal (send) set=(int,kill) peer="traceroute",
  signal (send) set=(int,kill) peer="netkit-fingerd.finger",
  signal (send) set=(int,kill) peer="iputils.ping",
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /sys/devices/{virtual,pci**}/net/*/statistics/*	r,
  owner @{PROC}/@{pid}/fd/				r,
  @{PROC}/@{pid}/net/{dev,tcp,udp,udplite,raw,igmp}	r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gnome-nettool				mr,
  /bin/ping						Px,
  /bin/netstat						Px,
  /usr/bin/finger					Px,
  /usr/bin/nmap						Px,
  /usr/bin/dig						Px,
  /usr/bin/whois					Px,
  /usr/bin/traceroute					Px,
  /usr/bin/nm-connection-editor				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/ssl/openssl.cnf					r,
  /usr/share/gnome-nettool/{,**}			r,
}
