#include <tunables/global>
profile gnome-nettool /usr/bin/gnome-nettool {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/nameservice>
  #include <abstractions/executable-binary-helper>
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  
  /sys/devices/{virtual,pci**}/net/*/statistics/* r,
  owner @{PROC}/@{pid}/fd/ r,
  @{PROC}/@{pid}/net/{dev,tcp,udp,udplite,raw,igmp} r,
  
  /usr/bin/gnome-nettool mr,
  /bin/ping Px,
  /usr/sbin/tracepath ix,
  /usr/bin/finger ix,
  /usr/bin/nmap ix,
  /usr/bin/dig ix,
  /usr/bin/whois ix,
  /bin/netstat ix,
  
  /etc/whois.conf r,
  /etc/ssl/openssl.cnf r,
  /usr/share/nmap/* r,
  /usr/share/gnome-nettool/{,**} r,
  
}
