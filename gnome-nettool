#include <local/tunables.d/>

profile gnome-nettool /usr/bin/gnome-nettool {
  #include <abstractions/base>
  #include <abstractions-user/freedesktop.org>
  #include <abstractions-user/fonts>
  #include <abstractions-user/audio>
  #include <abstractions-user/gtk>
  #include <abstractions-user/video>
  #include <abstractions-user/X>
  #include <abstractions-user/dconf>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions-user/profile_transitions/allow-strict-web>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(int,kill) peer="nmap",			# net-analyzer/nmap
  signal (send) set=(int,kill) peer="dig",			# net-dns/bind-tools
  signal (send) set=(int,kill) peer="whois",			# net-misc/whois
  signal (send) set=(int,kill) peer="traceroute",		# net-analyzer/traceroute
  signal (send) set=(int,kill) peer="netkit-fingerd.finger",	# net-misc/netkit-fingerd
  signal (send) set=(int,kill) peer="iputils.ping",		# net-misc/iputils
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{SYS_D}/devices/pci@{PCI2}/**/@{PCI4}/net/@{NIC}/statistics/* r,
  @{SYS_D}/devices/virtual/net/@{VNIC}/statistics/*	r,
  @{PROC_D}/@{pid}/fd/					r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  @{PROC_D}/@{pid}/net/dev				r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  audit @{PROC_D}/@{pid}/net/{tcp,udp,udplite,raw,igmp}	r,	# FIX ME! @{pid}/@{pids} audit 18.10.2017
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gnome-nettool				mr,
  /bin/ping						Px,	# net-misc/iputils
  /bin/netstat						Px,	# sys-apps/net-tools
  /usr/bin/finger					Px,	# net-misc/netkit-fingerd
  /usr/bin/nmap						Px,	# net-analyzer/nmap
  /usr/bin/dig						Px,	# net-dns/bind-tools
  /usr/bin/whois					Px,	# net-misc/whois
  /usr/bin/traceroute					Px,	# net-analyzer/traceroute
  /usr/bin/nm-connection-editor				Px,	# gnome-extra/nm-applet
  
  # READS/WRITES ---------------------------------------
  /etc/ssl/openssl.cnf					r,	# dev-libs/openssl
  /usr/share/gnome-nettool/{,**}			r,
}
