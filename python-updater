#include <tunables/global>

profile python-updater /usr/sbin/python-updater flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/python-updater				r,
  @{PYTHON_EXEC_WRAPPER}				Cx -> portage,
  @{shell}						mr,
  /bin/grep						ix,
  /bin/sort						ix,
  /bin/sed						ix,
  /bin/bzip2						ix,
  /bin/stty						ix,
  /bin/cut						ix,
  /bin/cat						ix,
  /bin/readlink						ix,
  /sbin/consoletype					ix,
  /usr/bin/python-wrapper				Px,
  /usr/bin/find						ix,
  /usr/bin/tput						ix,
  /usr/bin/scanelf					ix,
  /usr/bin/scanmacho					ix,
  
  # READS/WRITES ---------------------------------------
  /etc/terminfo/x/xterm					r,
  /							r,
  /etc/{,**}						r,
  /usr/{,**}						r,
  /opt/{,**}						r,
  /bin/{,**}						r,
  /sbin/{,**}						r,
  /var/lib/{,**}					r,
  /var/db/{,**}						r,
  /var/nullmailer/{,**}					r,
  /var/**/.keep*					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/sh-thd.*					rw,
  
  profile portage {
    #include <abstractions/base>
    #include <abstractions/python>
    #include <abstractions/python-exec>
    #include <abstractions/nameservice>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					w,
    
    # EXECUTABLES --------------------------------------
    @{shell}						Px -> python_updater_shell,
    @{PYTHON_EXEC}/emerge				Px,
    @{PYTHON_EXEC}/portageq				Px,
    
    # READS/WRITES ---------------------------------------
    /etc/profile.env					r,
    /etc/portage/{,**}					r,
    /usr/portage/{,**}					r,
    /usr/local/portage/{,**}				r,
    /usr/share/portage/{,**}				r,
  }
}

# FIX ME! Т.к. не поддерживаем двойные вложения профилей и не можем вызывать
# другие вложенные профили через "профиль1//профиль2" - используем отдельный
# внешний профиль под shell.
profile python_updater_shell flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/uname						ix,
}
