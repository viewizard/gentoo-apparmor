#include <local/tunables.d/>

profile python-updater /usr/sbin/python-updater {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/python-updater				r,
  @{PYTHON_EXEC_WRAPPER}				Cx -> portage,
  @{shell}						mr,
  /bin/grep						Cx,
  /bin/sort						Cx,
  /bin/sed						Cx,
  /bin/bzip2						Cx,
  /bin/stty						Px,
  /bin/cut						Cx,
  /bin/cat						Cx,
  /bin/readlink						Cx,
  /sbin/consoletype					Px,
  /usr/bin/python-wrapper				Px,
  /usr/bin/find						Cx,
  /usr/bin/tput						Px,
  /usr/bin/scanelf					Cx,
  /usr/bin/scanmacho					Cx,
  
  # READS/WRITES ---------------------------------------
  /var/db/pkg/{,**}					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/sh-thd.*					rw,
  
  profile portage {
    #include <abstractions/base>
    #include <abstractions/python>
    #include <abstractions/python-exec>
    #include <abstractions/nameservice>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # EXECUTABLES --------------------------------------
    @{shell}						Px -> python_updater_shell,
    @{PYTHON_EXEC}/emerge				Px,
    @{PYTHON_EXEC}/portageq				Px,
    
    # READS/WRITES ---------------------------------------
    /etc/profile.env					r,
    /etc/portage/{,**}					r,
    /usr/portage/{,**}					r,
    /usr/local/portage/{,**}				r,
    /usr/share/portage/{,**}				r,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
    
    # READS/WRITES -------------------------------------
    /var/db/{,**}					r,
  }
  
  profile sort /bin/sort {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sort						mr,
  }
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
  
  profile bzip2 /bin/bzip2 {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/bzip2						mr,
    
    # READS/WRITES -------------------------------------
    /var/db/pkg/**.bz2					r,
  }
  
  profile cut /bin/cut {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cut						mr,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
  
  profile readlink /bin/readlink {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/readlink					mr,
  }
  
  profile find /usr/bin/find {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/find					mr,
    
    # READS/WRITES -------------------------------------
    /var/db/{,**}					r,
  }
  
  profile scanelf /usr/bin/scanelf {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    capability dac_override,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/scanelf					mr,
    
    # READS/WRITES -------------------------------------
    /bin/{,**}						r,
    /sbin/{,**}						r,
    /opt/{,**}						r,
    /etc/{,**}						r,
    /usr/{,**}						r,
    /var/{,**}						r,
  }
  
  profile scanmacho /usr/bin/scanmacho {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    capability dac_override,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/scanmacho					mr,
    
    # READS/WRITES -------------------------------------
    /bin/{,**}						r,
    /sbin/{,**}						r,
    /opt/{,**}						r,
    /etc/{,**}						r,
    /usr/{,**}						r,
    /var/{,**}						r,
  }
}

# IMPROVE! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile python_updater_shell {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/uname						Px,
}
