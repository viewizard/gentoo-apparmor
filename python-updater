#include <tunables/global>
profile python-updater /usr/sbin/python-updater flags=(complain) {
  #include <abstractions/base>
  
  capability sys_admin,
  
  /dev/tty rw,
  /dev/pts/[0-9]* w,
  
  /usr/sbin/python-updater r,
  /usr/bin/python-wrapper Px,
  @{PYTHON_EXEC_WRAPPER} Cx -> portage,
  /bin/bash mr,
  /bin/grep ix,
  /bin/sort ix,
  /bin/sed ix,
  /bin/bzip2 ix,
  /bin/stty ix,
  /bin/cut ix,
  /bin/cat ix,
  /bin/readlink ix,
  /sbin/consoletype ix,
  /usr/bin/find ix,
  /usr/bin/tput ix,
  /usr/bin/scanelf ix,
  /usr/bin/scanmacho ix,
  
  /etc/terminfo/x/xterm r,
  / r,
  /etc/{,**} r,
  /usr/{,**} r,
  /opt/{,**} r,
  /bin/{,**} r,
  /sbin/{,**} r,
  /var/lib/{,**} r,
  /var/db/{,**} r,
  /var/nullmailer/{,**} r,
  /var/**/.keep* r,
  
  owner /tmp/sh-thd.* rw,
  
  
  profile portage {
    #include <abstractions/base>
    #include <abstractions/python>
    #include <abstractions/python-exec>
    #include <abstractions/nameservice>
    
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					w,
    
    /bin/bash ix,
    /bin/uname ix,
    @{PYTHON_EXEC}/emerge Px,
    @{PYTHON_EXEC}/portageq Px,
    
    /etc/profile.env r,
    /etc/portage/{,**} r,
    /usr/portage/{,**} r,
    /usr/local/portage/{,**} r,
    /usr/share/portage/{,**} r,
    
  }
  
}
