#include <tunables/global>

# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]*.{png,PNG}"

profile alacarte @{PYTHON2_EXEC}/alacarte {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/dconf>
  #include <abstractions/gtk>
  #include <abstractions/python>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/fs-access-by-users-preset-rk>
  #include <abstractions/fs-deny-by-pattern-internet>
  #include <abstractions/unix-pattern/gvfsd-trash>
  #include <abstractions/unix-pattern/gvfsd-network>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/menus/{,**/,**.menu}				r,
  /usr/share/alacarte/{,*}				r,
  /usr/share/desktop-directories/{,*.directory}		r,
  /opt/**.png						r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/menus/{,**/}			r,
  owner @{HOME}/.config/menus/**.menu			rw,
  owner @{HOME}/.local/					r,
  owner @{HOME}/.local/share/				r,
  owner @{HOME}/.local/share/icons/{,**}		r,
  owner @{HOME}/.local/share/applications/{,**/}	r,
  owner @{HOME}/.local/share/applications/**.desktop	rw,
  owner @{HOME}/.local/share/desktop-directories/{,*.directory} rw,
}
