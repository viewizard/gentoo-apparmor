#include <tunables/global>

profile chkrootkit /usr/sbin/chkrootkit {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/{,**}						r,
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cxmr,
  /bin/sed						ix,
  /bin/uname						Px,
  /bin/ps						Px,
  /bin/cut						ix,
  /bin/egrep						ix,
  /bin/grep						ix,
  /bin/basename						ix,
  /bin/ls						ix,
  /bin/head						ix,
  /bin/echo						ix,
  /bin/tr						Px,
  /bin/wc						ix,
  /bin/cat						ix,
  /bin/netstat						Px,
  /usr/bin/id						Px,
  /usr/bin/crontab					ix,
  /usr/bin/gawk						ix,
  /usr/bin/find						ix,
  /usr/sbin/chkdirs					ix,
  /usr/sbin/strings-static				ix,
  /usr/sbin/chkproc					ix,
  /usr/sbin/ifpromisc					ix,
  /usr/sbin/chkwtmp					ix,
  /usr/sbin/chklastlog					ix,
  /usr/sbin/chkutmp					ix,
  
  # READS/WRITES ---------------------------------------
  /{,**}						r,
  owner /tmp/chkrootkit.cron.*				rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/ps						Px,
    /bin/tr						Px,
    /bin/cut						ix,
  }
}
