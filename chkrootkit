#include <tunables/global>
profile chkrootkit /usr/sbin/chkrootkit {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>
  
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  /dev/{,**} r,
  /dev/tty rw,
  @{PROC}/@{pid}/net/* r,
  
  /bin/bash Cxmr -> shell,
  /bin/sed ix,
  /bin/uname ix,
  /bin/ps Px,
  /bin/cut ix,
  /bin/egrep ix,
  /bin/grep ix,
  /bin/basename ix,
  /bin/ls ix,
  /bin/head ix,
  /bin/echo ix,
  /bin/tr ix,
  /bin/wc ix,
  /bin/cat ix,
  /bin/netstat ix,
  /usr/bin/id ix,
  /usr/bin/crontab ix,
  /usr/bin/gawk ix,
  /usr/bin/find ix,
  /usr/sbin/chkdirs ix,
  /usr/sbin/strings-static ix,
  /usr/sbin/chkproc ix,
  /usr/sbin/ifpromisc ix,
  /usr/sbin/chkwtmp ix,
  /usr/sbin/chklastlog ix,
  /usr/sbin/chkutmp ix,
  
  /{,**} r,
  
  
  profile shell {
    #include <abstractions/base>
    
    capability dac_override,
    capability dac_read_search,
    
    /dev/tty rw,
    
    /bin/bash mr,
    /bin/ps Px,
    /bin/tr ix,
    /bin/cut ix,
    
  }
  
}
