#include <tunables/global>

profile chkrootkit /usr/sbin/chkrootkit {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PTRACE ---------------------------------------------
  ptrace (trace) peer="sysvinit.init",
  
  # PSEUDO ---------------------------------------------
  /dev/tty						w,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/chkrootkit					r,
  @{shell}						mr,
  /bin/sed						ix,
  /bin/uname						Px,
  /bin/ps						Px,
  /bin/cut						ix,
  /bin/egrep						ix,
  /bin/grep						ix,
  /bin/ls						ix,
  /bin/head						ix,
  /bin/echo						Px,
  /bin/tr						Px,
  /bin/wc						ix,
  /bin/cat						ix,
  /bin/netstat						Px,
  /usr/bin/id						Px,
  /usr/bin/crontab					Px,
  /usr/bin/gawk						ix,
  /usr/bin/find						ix,
  /usr/sbin/chkdirs					Px,
  /usr/sbin/strings-static				Px,
  /usr/sbin/chkproc					Px,
  /usr/sbin/ifpromisc					Px,
  /usr/sbin/chkwtmp					Px,
  /usr/sbin/chklastlog					Px,
  /usr/sbin/chkutmp					Px,
  
  # READS/WRITES ---------------------------------------
  /{,**}						r,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
}

profile chkrootkit.chkdirs /usr/sbin/chkdirs {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/chkdirs					mr,
  
  # READS/WRITES ---------------------------------------
  /{,**}/						r,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
}

profile chkrootkit.strings-static /usr/sbin/strings-static {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/strings-static				mr,
  
  # READS/WRITES ---------------------------------------
  /{,**}						r,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
}

profile chkrootkit.chkproc /usr/sbin/chkproc {
  #include <abstractions/base>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(xfsz) peer="sysvinit.init",
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/						r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/chkproc					mr,
  @{shell}						Cx,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    
    # PSEUDO ---------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/ps						Px,
    /bin/tr						Px,
    /bin/cut						ix,
    
    # TEMP ---------------------------------------------
    owner /tmp/chkrootkit.cron.*			w,	# DELEGATION! chkrootkit.cron.daily
  }
}

profile chkrootkit.ifpromisc /usr/sbin/ifpromisc {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # NETWORK --------------------------------------------
  network inet dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/						r,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/@{pid}/net/packet				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/ifpromisc					mr,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
}

profile chkrootkit.chkwtmp /usr/sbin/chkwtmp {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/chkwtmp					mr,
  
  # READS/WRITES ---------------------------------------
  /var/log/wtmp						r,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
}

