  # EXECUTABLES ----------------------------------------
  /usr/sbin/chklastlog					mr,
  
  # READS/WRITES ---------------------------------------
  /var/log/**						r,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
}

profile chkrootkit.chkutmp /usr/sbin/chkutmp {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/chkutmp					mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /run/utmp						r,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/ps						Px,
    
    # TEMP ---------------------------------------------
    owner /tmp/chkrootkit.cron.*			w,	# DELEGATION! chkrootkit.cron.daily
  }
}

# Профиль модифицированного скрипта для запуска chkrootkit по cron-у.
profile chkrootkit.cron.daily /etc/cron.daily/chkrootkit {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.daily/chkrootkit				r,
  @{shell}						mr,
  /bin/mktemp						ix,
  /bin/cat						ix,
  /bin/rm						ix,
  /bin/basename						Px,
  /usr/bin/libnotify-notify-send-users			Px,
  /usr/bin/mail						Px,
  /usr/bin/logger					Px,
  /usr/sbin/chkrootkit					Px,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.??????			rw,
}
