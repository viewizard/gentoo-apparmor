#include <tunables/global>

profile pciutils.lspci /usr/sbin/lspci {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  /sys/bus/pci/devices/					r,
  /sys/bus/pci/slots/					r,
  /sys/devices/pci*/**/{resource,irq,vendor,device,class,config} r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/lspci					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /etc/udev/hwdb.bin					r,
  /usr/share/misc/pci.ids.gz				r,
}
