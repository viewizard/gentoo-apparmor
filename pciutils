#include <tunables/global>
profile pciutils.lspci /usr/sbin/lspci flags=(complain) {
  #include <abstractions/base>
  
  capability sys_admin,
  
  /dev/pts/[0-9]* w,
  
  /sys/bus/pci/devices/ r,
  /sys/bus/pci/slots/ r,
  /sys/devices/pci*/**/{resource,irq,vendor,device,class,config} r,
  
  /usr/sbin/lspci r,
  
  /etc/udev/udev.conf r,
  /etc/udev/hwdb.bin r,
  /usr/share/misc/pci.ids.gz r,
  
}
