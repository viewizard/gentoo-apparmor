#include <local/tunables.d/>

profile xfce4-sensors-plugin@{p_user} /usr/lib{,32,64}/xfce4/panel-plugins/xfce4-sensors-plugin@{t_user} {
  #include <abstractions/base>
  #include <abstractions-user/freedesktop.org>
  #include <abstractions-user/fonts>
  #include <abstractions-user/X>
  #include <abstractions-user/gtk>
  #include <abstractions/sensors>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC_D}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/xfce4/panel-plugins/xfce4-sensors-plugin m,
  /usr/bin/xfce4-sensors@{t_user}			Px,
  
  # USERS ----------------------------------------------
  owner @{USER_HOME_D}/.config/xfce4/panel/{,*.rc*}	rw,
}

profile xfce4-sensors-plugin.xfce4-sensors@{p_user} /usr/bin/xfce4-sensors@{t_user} {
  #include <abstractions/base>
  #include <abstractions-user/freedesktop.org>
  #include <abstractions-user/fonts>
  #include <abstractions-user/gtk>
  #include <abstractions-user/video>
  #include <abstractions-user/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/nameservice>
  #include <abstractions/sensors>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4-sensors				mr,
}
