#include <tunables/global>

profile icedtea-bin.java /opt/icedtea-bin-*/{,jre/}bin/java {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /sys/devices/system/cpu/				r,
  
  # EXECUTABLES ----------------------------------------
  /opt/icedtea-bin-*/{,jre/}bin/java			ixmr,
  
  # READS/WRITES ---------------------------------------
  /opt/icedtea-bin-*/**					r,
  /opt/icedtea-bin-*/lib/**.so				mr,
  /opt/icedtea-bin-*/jre/lib/**.so			mr,
  
  # NOISY ----------------------------------------------
  deny @{HOME}/						r,
  
}
