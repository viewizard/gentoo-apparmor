#include <tunables/global>
profile bridge-utils.brctl /sbin/brctl flags=(complain) {
  #include <abstractions/base>
  
  capability net_admin,
  
  /sys/devices/virtual/net/** rw,
  
  /sbin/brctl mr,
  
}
