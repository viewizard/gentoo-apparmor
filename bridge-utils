#include <local/tunables.d/>

profile bridge-utils.brctl /sbin/brctl {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability net_admin,
  
  # PSEUDO ---------------------------------------------
  audit @{sys}/devices/virtual/net/**			rw,	# FIX ME! audit 5.12.2017
  
  # EXECUTABLES ----------------------------------------
  /sbin/brctl						mr,
}
