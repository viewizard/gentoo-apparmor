#include <tunables/global>

profile genkernel /usr/bin/genkernel flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  capability sys_chroot,
  capability dac_override,
  capability dac_read_search,
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  /dev/pts/[0-9]*					w,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/genkernel					r,
  @{shell}						mr,
  /bin/uname						Px,
  /bin/sed						ix,
  /bin/mv						ix,
  /bin/cp						ix,
  /bin/grep						ixr,
  /bin/egrep						ixr,
  /bin/fgrep						ixr,
  /bin/cat						ixr,
  /bin/cut						ix,
  /bin/mkdir						ix,
  /bin/ln						ix,
  /bin/wc						ix,
  /bin/rm						ixr,
  /bin/tr						Px,
  /bin/sort						ix,
  /bin/tar						ix,
  /bin/bzip2						ix,
  /bin/cpio						ix,
  /bin/readlink						ix,
  /bin/mknod						ix,
  /bin/chmod						ix,
  /bin/date						ix,
  /bin/dirname						ix,
  /bin/basename						ix,
  /bin/udevadm						Pxr,
  /bin/echo						ix,
  /bin/mount						Px,
  /bin/umount						Px,
  /bin/keyctl						r,
  /bin/head						r,
  /sbin/udevd						r,
  /sbin/pdata_tools					r,
  /sbin/dmsetup						r,
  /sbin/cryptsetup					r,
  /sbin/mdadm						r,
  /sbin/mdmon						r,
  /sbin/mdassemble					r,
  /sbin/blkid						r,
  /sbin/lvm						r,
  /sbin/ldconfig					ixr,
  /sbin/apparmor_parser					r,
  /usr/bin/gawk						ix,
  /usr/bin/md5sum					ix,
  /usr/bin/file						ix,
  /usr/bin/find						ix,
  /usr/bin/pkg-config					ix,
  /usr/bin/realpath					ix,
  /usr/bin/lddtree					ixr,
  /usr/bin/scanelf					ix,
  /usr/bin/uniq						ix,
  /usr/bin/q						ix,
  /usr/bin/id						ix,
  /usr/bin/xargs					ix,
  /usr/bin/xz						ix,
  /usr/bin/gmake					Px,
  /usr/bin/gpg{,2,-static}				r,
  /usr/bin/test						r,
  /usr/bin/hostid					ix,
  /usr/bin/gawk						r,
  /usr/bin/find						r,
  /usr/@{CHOST}/binutils-bin/*/strings			ix,
  
  # READS/WRITES ---------------------------------------
  /etc/genkernel.conf					r,
  /etc/fstab						r,
  /etc/mdadm.conf					r,
  /etc/lvm/lvm.conf					r,
  /etc/udev/udev.conf					r,
  /etc/ld.so.conf					r,
  /etc/ld.so.conf.d/{,*}				r,
  /etc/apparmor.d/{,**}					r,
  /etc/portage/{,**}					r,
  /usr/portage/profiles/{,**}				r,
  /usr/share/portage/{,**}				r,
  /usr/src/IMA/ima_policy				r,
  /usr/src/IMA/certs/x509_ima.der			r,
  /usr/src/IMA/evm-hmac/evm-{kmk,key}			r,
  /usr/src/@{kernel}/{,**}				r,
  /usr/src/@{kernel}/{sed*,.config}			w,
  /usr/share/genkernel/{,**}				r,
  /usr/share/pkgconfig/{,**}				r,
  /usr/share/misc/magic.mgc				r,
  /boot/initramfs-genkernel-*-@{kernel_ver}		w,
  /var/db/pkg/{,**}					r,
  /var/cache/genkernel/{,**}				rw,
  /var/log/genkernel.log				rw,
  
  # TEMP -----------------------------------------------
  /var/tmp/portage/genkernel/{,**}			rw,
}
