#include <tunables/global>

profile eselect /usr/bin/eselect flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/user-systemwide-files>
  
  # CAPABILITIES ---------------------------------------
  capability fsetid,
  capability sys_admin,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/readlink						ix,
  /bin/ln						ix,
  /bin/mv						ix,
  /bin/rm						ix,
  /bin/sed						ix,
  /bin/sort						ix,
  /bin/head						ix,
  /bin/mkdir						ix,
  /bin/mktemp						ix,
  /bin/cut						ix,
  /bin/grep						ix,
  /bin/chgrp						ix,
  /bin/chmod						ix,
  /bin/cat						ix,
  /bin/uname						ix,
  /usr/bin/file						ix,
  /usr/bin/scanelf					ix,
  /usr/bin/tput						ix,
  /usr/bin/binutils-config				Px,
  /lib{,32,64}/rc/bin/service_stopp{ing,ed}		ix,
  /lib{,32,64}/rc/bin/service_start{ing,ed}		ix,
  /lib{,32,64}/rc/bin/service_inactive			ix,
  /lib{,32,64}/rc/bin/service_crashed			ix,
  /lib{,32,64}/rc/bin/service_hotplugged		ix,
  @{PYTHON_EXEC_WRAPPER}				Cx -> portage,
  
  profile portage {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/portageq				Px,
    @{PYTHON_EXEC}/env-update				Px,
  }
}
