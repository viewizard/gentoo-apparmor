#include <tunables/global>
profile dosfstools.fsck.fat /usr/sbin/fsck.fat flags=(complain) {
  #include <abstractions/base>
  
  /dev/pts/[0-9]* rw,
  /dev/sd[a-z][0-9]* rw,
  
  /usr/sbin/fsck.fat r,
  
}
