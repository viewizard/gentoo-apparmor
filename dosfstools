#include <tunables/global>

profile dosfstools.fsck.fat /usr/sbin/fsck.fat flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/fsck.fat					mr,
  
}
