#include <local/tunables.d/>

profile dosfstools.fsck.fat /usr/sbin/fsck.fat {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/fsck.fat					mr,
}

profile dosfstools.mkfs.fat /usr/sbin/mkfs.fat {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  @{sys}/devices/virtual/block/@{BLOCK_VIRT}/{,**}	r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/{ata@{ATA1},usb@{USB1}}/**/block/@{BLOCK_REAL}/{,**} r,
  audit @{PROC_D}/@{pid}/mounts				r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/mkfs.fat					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
}
