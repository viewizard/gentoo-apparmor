#include <tunables/global>

profile nm-applet /usr/bin/nm-applet {
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/video>
  #include <abstractions/dconf>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/gnome-keyring>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/nameservice>
  #include <abstractions/binary-helper-strict-web>
  
  # DBUS -------------------------------------------------
  dbus send
  	bus=system
  	path="/org/freedesktop/DBus"
  	interface="org.freedesktop.DBus"
  	member=GetConnectionUnixUser
  	peer=(name="org.freedesktop.DBus",label="dbus.dbus-daemon"),
  dbus receive
  	bus=system
  	path="/org/freedesktop"
  	interface="org.freedesktop.DBus.ObjectManager"
  	member={InterfacesAdded,InterfacesRemoved}
  	peer=(name=":[0-9]*.[0-9]*",label="networkmanager.NetworkManager"),
  dbus (send, receive)
  	bus=system
  	path="/org/freedesktop/NetworkManager{,/**}"
  	interface="org.freedesktop.DBus.Properties"
  	peer=(name=":[0-9]*.[0-9]*",label="networkmanager.NetworkManager"),
  dbus (send, receive)
  	bus=system
  	path="/org/freedesktop/NetworkManager{,/**}"
  	interface="org.freedesktop.NetworkManager*"
  	peer=(name=":[0-9]*.[0-9]*",label="networkmanager.NetworkManager"),
  dbus (send, receive)
  	bus=system
  	path="/org/freedesktop/ModemManager[0-9]*"
  	interface="org.freedesktop.DBus.ObjectManager"
  	peer=(name=":[0-9]*.[0-9]*",label="modemmanager.ModemManager"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /sys/devices/pci[0-9]**/net/{,**}			r,
  /sys/devices/pci[0-9]**/uevent			r,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/nm-applet					mr,
  /usr/bin/nm-connection-editor				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /run/udev/data/{,*}					r,
}

profile nm-applet.nm-connection-editor /usr/bin/nm-connection-editor {
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/networkmanager>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/unix/gvfsd-trash>
  #include <abstractions/unix/gvfsd-network>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/nm-connection-editor				mr,
}
