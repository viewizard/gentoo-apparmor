# Запуск с установкой нужного WINEPREFIX.

# EXECUTABLES ------------------------------------------
/bin/env@{t_user}					Cx,

profile env /bin/env@{t_user} {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/env						mr,
  /usr/bin/wine@{t_user}				Px,	# app-emulation/wine
  /usr/bin/wine-{any,d3d9,staging,vanilla}-[0-9]*@{t_user} Px,	# app-emulation/wine-*
}
