^logcheck {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <abstractions/authentication-pam_mount>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Px -> shell_logcheck,
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,
}
