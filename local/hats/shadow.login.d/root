^root {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/consolekit>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <abstractions/authentication-pam_mount>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  capability chown,
  capability fowner,
  capability fsetid,
  capability dac_read_search,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/urandom						r,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Px -> shell_root,
  /usr/bin/gnome-keyring-daemon				Px,	# В случае запуска через pam модуль.
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,
  /run/utmp						rwk,
  /var/log/wtmp						wk,
}
