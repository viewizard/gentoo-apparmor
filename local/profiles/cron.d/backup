# Важно! Не должен содержать <local/tunables.d/>.
# Уже включен в тело /etc/apparmor.d/2_local профиля.

# Важно! Перезагрузка профиля выполняется командой:
# apparmor_parser -r /etc/apparmor.d/2_local

profile backup_daily.sh.cron.daily /etc/cron.daily/backup_daily.sh {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/null						w,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.daily/backup_daily.sh			r,
  @{shell}						mr,
  /bin/chmod						Cx,	# sys-apps/coreutils
  /bin/date						Cx,	# sys-apps/coreutils
  /bin/tar						Cx,	# app-arch/tar
  /bin/rm						Cx,	# sys-apps/coreutils
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/mktemp						Cx,	# sys-apps/coreutils
  /bin/sort						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/mount						Cx,	# sys-apps/util-linux
  /bin/umount						Cx,	# sys-apps/util-linux
  /bin/basename						Px,	# sys-apps/coreutils
  audit /sbin/cryptsetup				Px,	# sys-fs/cryptsetup	# FIX ME! 10.11.2017 audit
  /sbin/lvm						Px,	# sys-fs/lvm2
  /usr/bin/libnotify-notify-send-users			Px,	# x11-libs/libnotify
  /usr/bin/gawk						Cx,	# sys-apps/gawk
  /usr/bin/find						Cx,	# sys-apps/findutils
  /usr/bin/stat						Cx,	# sys-apps/coreutils
  /usr/bin/mail						Px,	# mail-client/mailx
  /usr/bin/logger					Px,	# sys-apps/util-linux
  
  # READS/WRITES ---------------------------------------
  /etc/backup_daily.conf				r,
  
  # TEMP -----------------------------------------------
  /tmp/dailyhomebackup.cron.@{TMP6}			rw,
  /tmp/dailyhomebackup.cron.@{TMP6}/			r,
  
  profile chmod /bin/chmod {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/chmod						mr,
    
    # READS/WRITES -------------------------------------
    /mnt/backup/Gentoo_Backup/daily_gentoo_home_*.tar	w,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/dailyhomebackup.cron.@{TMP6}		w,
  }
  
  profile date /bin/date {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/date						mr,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/dailyhomebackup.cron.@{TMP6}		w,
  }
  
  profile tar /bin/tar {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    
    # PSEUDO -------------------------------------------
    owner @{PROC_D}/@{pid}/fd/				r,
    
    # EXECUTABLES --------------------------------------
    /bin/tar						mr,
    
    # READS/WRITES -------------------------------------
    /mnt/backup/Gentoo_Backup/daily_gentoo_home_*.tar	w,
    
    # TEMP ---------------------------------------------
    /tmp/dailyhomebackup.cron.@{TMP6}/{,**}		r,	# Точка монтирования снапшота с /home.
    
    # DENY INHERIT -------------------------------------
    deny /tmp/dailyhomebackup.cron.@{TMP6}		w,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # READS/WRITES -------------------------------------
    /mnt/backup/Gentoo_Backup/daily_gentoo_home_*.tar	w,
    /tmp/dailyhomebackup.cron.@{TMP6}{,/}		rw,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # READS/WRITES -------------------------------------
    /tmp/dailyhomebackup.cron.@{TMP6}			r,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/dailyhomebackup.cron.@{TMP6}		w,
  }
  
  profile mktemp /bin/mktemp {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mktemp						mr,
    
    # TEMP ---------------------------------------------
    /tmp/dailyhomebackup.cron.@{TMP6}{,/}		rw,
  }
  
  profile sort /bin/sort {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/sort						mr,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/dailyhomebackup.cron.@{TMP6}		w,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
    
    # TEMP ---------------------------------------------
    /tmp/dailyhomebackup.cron.@{TMP6}			w,
  }
  
  profile mount /bin/mount {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    
    # MOUNT --------------------------------------------
    mount fstype=ext4 options=(ro) /dev/@{BLOCK_ALL} -> /tmp/dailyhomebackup.cron.@{TMP6}/,
    
    # PSEUDO -------------------------------------------
    /dev/@{BLOCK_VIRT}					r,
    @{sys}/devices/virtual/block/@{BLOCK_VIRT}/{,**}	r,
    
    # EXECUTABLES --------------------------------------
    /bin/mount						mr,
    
    # READS/WRITES -------------------------------------
    /run/mount/utab					rw,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/dailyhomebackup.cron.@{TMP6}		w,
  }
  
  profile umount /bin/umount {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    
    # MOUNT --------------------------------------------
    umount /tmp/dailyhomebackup.cron.@{TMP6}/,
    
    # EXECUTABLES --------------------------------------
    /bin/umount						mr,
    
    # READS/WRITES -------------------------------------
    /run/mount/utab					rw,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/dailyhomebackup.cron.@{TMP6}		w,
  }
  
  profile gawk /usr/bin/gawk {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gawk					mr,
    
    # TEMP ---------------------------------------------
    /tmp/dailyhomebackup.cron.@{TMP6}			w,
  }
  
  profile find /usr/bin/find {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/find					mr,
    
    # READS/WRITES -------------------------------------
    /							r,
    /mnt/backup/Gentoo_Backup/				r,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/dailyhomebackup.cron.@{TMP6}		w,
  }
  
  profile stat /usr/bin/stat {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/stat					mr,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/dailyhomebackup.cron.@{TMP6}		w,
  }
}

profile backup_weekly.sh.cron.weekly /etc/cron.weekly/backup_weekly.sh {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  owner @{PROC_D}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.weekly/backup_weekly.sh			r,
  @{shell}						mr,
  /bin/chmod						Cx,	# sys-apps/coreutils
  /bin/date						Cx,	# sys-apps/coreutils
  /bin/tar						Cx,	# app-arch/tar
  /bin/rm						Cx,	# sys-apps/coreutils
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/mktemp						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/sort						Cx,	# sys-apps/coreutils
  /bin/mount						Cx,	# sys-apps/util-linux
  /bin/umount						Cx,	# sys-apps/util-linux
  /bin/basename						Px,	# sys-apps/coreutils
  /sbin/lvm						Px,	# sys-fs/lvm2
  /usr/bin/libnotify-notify-send-users			Px,	# x11-libs/libnotify
  /usr/bin/gawk						Cx,	# sys-apps/gawk
  /usr/bin/find						Cx,	# sys-apps/findutils
  /usr/bin/stat						Cx,	# sys-apps/coreutils
  /usr/bin/mail						Px,	# mail-client/mailx
  /usr/bin/logger					Px,	# sys-apps/util-linux
  
  # READS/WRITES ---------------------------------------
  /etc/backup_weekly.conf				r,
  
  # TEMP -----------------------------------------------
  /tmp/rootbackup.cron.@{TMP6}				rw,
  /tmp/rootbackup.cron.@{TMP6}/				r,
  
  profile chmod /bin/chmod {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/chmod						mr,
    
    # READS/WRITES -------------------------------------
    /mnt/backup/Gentoo_Backup/gentoo_root_*.tar		w,
    /mnt/backup/Gentoo_Backup/gentoo_var_*.tar		w,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/rootbackup.cron.@{TMP6}			w,
  }
  
  profile date /bin/date {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/date						mr,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/rootbackup.cron.@{TMP6}			w,
  }
  
  profile tar /bin/tar {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    
    # PSEUDO -------------------------------------------
    owner @{PROC_D}/@{pid}/fd/				r,
    
    # EXECUTABLES --------------------------------------
    /bin/tar						mr,
    
    # READS/WRITES -------------------------------------
    /mnt/backup/Gentoo_Backup/gentoo_root_*.tar		w,
    /mnt/backup/Gentoo_Backup/gentoo_var_*.tar		w,
    
    # TEMP ---------------------------------------------
    /tmp/rootbackup.cron.@{TMP6}/{,**}			r,	# Точка монтирования снапшота c root и var.
    
    # DENY INHERIT -------------------------------------
    deny /tmp/rootbackup.cron.@{TMP6}			w,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # READS/WRITES -------------------------------------
    /mnt/backup/Gentoo_Backup/gentoo_root_*.tar		w,
    /mnt/backup/Gentoo_Backup/gentoo_var_*.tar		w,
    /tmp/rootbackup.cron.@{TMP6}{,/}			rw,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # READS/WRITES -------------------------------------
    /tmp/rootbackup.cron.@{TMP6}			r,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/rootbackup.cron.@{TMP6}			w,
  }
  
  profile mktemp /bin/mktemp {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mktemp						mr,
    
    # TEMP ---------------------------------------------
    /tmp/rootbackup.cron.@{TMP6}{,/}			rw,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
    
    # TEMP ---------------------------------------------
    /tmp/rootbackup.cron.@{TMP6}			w,
  }
  
  profile sort /bin/sort {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/sort						mr,
    
    # TEMP ---------------------------------------------
    /tmp/rootbackup.cron.@{TMP6}			w,
  }
  
  profile mount /bin/mount {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    
    # MOUNT --------------------------------------------
    mount fstype=ext4 options=(ro) /dev/@{BLOCK_ALL} -> /tmp/rootbackup.cron.@{TMP6}/,
    
    # PSEUDO -------------------------------------------
    /dev/@{BLOCK_VIRT}					r,
    @{sys}/devices/virtual/block/@{BLOCK_VIRT}/{,**}	r,
    
    # EXECUTABLES --------------------------------------
    /bin/mount						mr,
    
    # READS/WRITES -------------------------------------
    /run/mount/utab					rw,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/rootbackup.cron.@{TMP6}			w,
  }
  
  profile umount /bin/umount {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    
    # MOUNT --------------------------------------------
    umount /tmp/rootbackup.cron.@{TMP6}/,
    
    # EXECUTABLES --------------------------------------
    /bin/umount						mr,
    
    # READS/WRITES -------------------------------------
    /run/mount/utab					rw,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/rootbackup.cron.@{TMP6}			w,
  }
  
  profile gawk /usr/bin/gawk {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gawk					mr,
    
    # TEMP ---------------------------------------------
    /tmp/rootbackup.cron.@{TMP6}			w,
  }
  
  profile find /usr/bin/find {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/find					mr,
    
    # READS/WRITES -------------------------------------
    /							r,
    /mnt/backup/Gentoo_Backup/				r,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/rootbackup.cron.@{TMP6}			w,
  }
  
  profile stat /usr/bin/stat {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/stat					mr,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/rootbackup.cron.@{TMP6}			w,
  }
}
