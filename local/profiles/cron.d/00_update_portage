# Важно! Не должен содержать <local/tunables.d/>.
# Уже включен в тело /etc/apparmor.d/2_local профиля.

# Важно! Перезагрузка профиля выполняется командой:
# apparmor_parser -r /etc/apparmor.d/2_local

profile 00_update_portage.cron.daily /etc/cron.daily/00_update_portage {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.daily/00_update_portage			r,
  @{shell}						mr,
  /bin/mktemp						Cx,	# sys-apps/coreutils
  /bin/rm						Cx,	# sys-apps/coreutils
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/basename						Px,	# sys-apps/coreutils
  /bin/cp						Cx,	# sys-apps/coreutils
  /usr/bin/eix						Pxr,	# app-portage/eix (r - т.к. проверяем наличие файла)
  /usr/bin/libnotify-notify-send-users			Px,	# x11-libs/libnotify
  /usr/bin/mail						Px,	# mail-client/mailx
  /usr/bin/logger					Px,	# sys-apps/util-linux
  @{PYTHON_EXEC_WRAPPER}				Cx -> emerge,	# dev-lang/python-exec	# Выполняем синхронизацию.
  
  # READS/WRITES ---------------------------------------
  /etc/portage/cron_update.conf				r,
  
  # TEMP -----------------------------------------------
  owner /tmp/portage.cron.??????			rw,
  
  profile mktemp /bin/mktemp {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mktemp						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/portage.cron.??????			rw,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/portage.cron.??????			w,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/portage.cron.??????			rw,
  }
  
  profile cp /bin/cp {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability fowner,
    capability fsetid,
    capability dac_override,
    
    # EXECUTABLES --------------------------------------
    /bin/cp						mr,
    
    # READS/WRITES -------------------------------------
    /var/cache/eix/portage.eix				r,
    /var/cache/eix/previous.eix				rw,
    
    # TEMP ---------------------------------------------
    owner /tmp/portage.cron.??????			w,
  }
  
  profile emerge {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # CAPABILITIES -------------------------------------
    capability mknod,
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/emerge				Px,	# sys-apps/portage
    
    # TEMP ---------------------------------------------
    owner /tmp/portage.cron.??????			rw,
  }
}
