# Важно! Не должен содержать <local/tunables.d/>.
# Уже включен в тело /etc/apparmor.d/2_local профиля.

# Важно! Перезагрузка профиля выполняется командой:
# apparmor_parser -r /etc/apparmor.d/2_local

profile hosts.sh.cron.daily /etc/cron.daily/hosts.sh {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.daily/hosts.sh				r,
  @{shell}						mr,
  /bin/date						Cx,	# sys-apps/coreutils
  /bin/mv						Cx,	# sys-apps/coreutils
  /bin/chmod						Cx,	# sys-apps/coreutils
  /bin/basename						Px,	# sys-apps/coreutils
  /usr/bin/libnotify-notify-send-users			Px,	# x11-libs/libnotify
  /usr/bin/wget						Px,	# net-misc/wget
  /usr/bin/stat						Cx,	# sys-apps/coreutils
  /usr/bin/mail						Px,	# mail-client/mailx
  /usr/bin/logger					Px,	# sys-apps/util-linux
  
  # READS/WRITES ---------------------------------------
  /var/lib/hosts.blacklist				w,
  /var/log/hosts.log					w,
  
  # TEMP -----------------------------------------------
  owner /tmp/hosts					rw,
  
  profile date /bin/date {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/date						mr,
  }
  
  profile mv /bin/mv {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    
    # EXECUTABLES --------------------------------------
    /bin/mv						mr,
    
    # READS/WRITES -------------------------------------
    /var/lib/hosts.blacklist				w,
    
    # TEMP ---------------------------------------------
    owner /tmp/hosts					rw,
  }
  
  profile chmod /bin/chmod {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/chmod						mr,
    
    # READS/WRITES -------------------------------------
    /var/lib/hosts.blacklist				w,
  }
  
  profile stat /usr/bin/stat {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/stat					mr,
  }
}
