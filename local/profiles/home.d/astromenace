profile local.home.AstroMenace /home/**/AstroMenace/AstroMenace {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/input/event[0-9]*				r,
  @{sys}/bus/						r,
  @{sys}/class/						r,
  @{sys}/class/input/					r,
  @{sys}/class/sound/					r,
  @{sys}/devices/**/uevent				r,
  @{sys}/devices/**/input@{input}/capabilities/*	r,
  
  # EXECUTABLES ----------------------------------------
  @{HOME}/**/AstroMenace/AstroMenace			mr,	# IMA! Требуется IMA digsig xattr или исключения по fowner в правилах IMA.
  
  # USERS ----------------------------------------------
  owner @{HOME}/**/AstroMenace/{,**}			r,
  owner @{HOME}/.config/astromenace/{,*}		rw,
  
  # READS/WRITES ---------------------------------------
  /run/udev/data/[a-z]*[0-9]*:[0-9]*			r,
}
