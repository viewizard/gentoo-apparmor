profile local.home.astromenace@{p_user} /home/**/AstroMenace/astromenace@{t_user} {
  #include <abstractions/base>
  #include <abstractions-user/freedesktop.org>
  #include <abstractions-user/fonts>
  #include <abstractions-user/audio>
  #include <abstractions-user/video>
  #include <abstractions-user/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/input/event[0-9]*				r,
  @{SYS_D}/bus/						r,
  @{SYS_D}/class/					r,
  @{SYS_D}/class/input/					r,
  @{SYS_D}/class/sound/					r,
  @{SYS_D}/devices/**/uevent				r,
  @{SYS_D}/devices/**/input@{input}/capabilities/*	r,
  
  # EXECUTABLES ----------------------------------------
  @{USER_HOME_D}/**/AstroMenace/astromenace		mr,	# IMA! Требуется IMA digsig xattr или исключения по fowner в правилах IMA.
  
  # USERS ----------------------------------------------
  owner @{USER_HOME_D}/**/AstroMenace/{,**}		r,
  owner @{USER_HOME_D}/.config/astromenace/{,*}		rw,
  owner @{USER_HOME_D}/**/AstroMenace/gamedata.vfs	rw,	# Создание VFS файла.
  owner @{USER_HOME_D}/*/AstroMenaceScreenshot[0-9]*.bmp rw,	# Создание скриншота
  
  # READS/WRITES ---------------------------------------
  /run/udev/data/[a-z]*[0-9]*:[0-9]*			r,
}
