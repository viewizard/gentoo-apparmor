# Важно! Не должен содержать <tunables/global>.
# Уже включен в тело /etc/apparmor.d/2_local профиля.

# Важно! Перезагрузка профиля выполняется командой:
# apparmor_parser -r /etc/apparmor.d/2_local

profile local.bin.symlink_ondesktop /usr/local/bin/symlink_ondesktop.sh {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/local/bin/symlink_ondesktop.sh			r,
  @{shell}						mr,
  /bin/ln						Cx,
  
  # USERS --------------------------------------------
  owner @{HOME}/.session.log				w,	# XFCE4, <abstractions/X>
  
  profile ln /bin/ln {
   #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/ln						mr,
    
    # USERS --------------------------------------------
    owner @{HOME}/@{XDG_DESKTOP_DIR}/*			w,
  }
}
