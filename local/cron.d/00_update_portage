# Важно! Не должен содержать <tunables/global>.
# Уже включен в тело /etc/apparmor.d/2_local профиля.

# Важно! Перезагрузка профиля выполняется командой:
# apparmor_parser -r /etc/apparmor.d/2_local

profile 00_update_portage.cron.daily /etc/cron.daily/00_update_portage {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.daily/00_update_portage			r,
  @{shell}						mr,
  /bin/mktemp						ix,
  /bin/rm						ix,
  /bin/cat						ix,
  /bin/env						ix,	# FIX ME! Вынести в отдельный профиль.
  /bin/basename						Px,
  /usr/bin/libnotify-notify-send-users			Px,
  /usr/bin/mail						Px,
  /usr/bin/logger					Px,
  @{PYTHON_EXEC_WRAPPER}				Cx -> emerge,
  /lib{,32,64}/rc/bin/checkpath				ix,
  
  # TEMP -----------------------------------------------
  owner /tmp/portage.cron.??????			rw,
  
  profile emerge {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # CAPABILITIES -------------------------------------
    capability mknod,
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/emerge				Px,
    
    # TEMP ---------------------------------------------
    owner /tmp/portage.cron.??????			rw,
  }
}
