# Важно! Не должен содержать <tunables/global>.
# Уже включен в тело /etc/apparmor.d/2_local профиля.

# Важно! Перезагрузка профиля выполняется командой:
# apparmor_parser -r /etc/apparmor.d/2_local

profile glsa.cron.daily /etc/cron.daily/glsa {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.daily/glsa					r,
  @{shell}						mr,
  /bin/mktemp						ix,
  /bin/cat						ix,
  /bin/rm						ix,
  /bin/basename						Px,
  /usr/bin/libnotify-notify-send-users			Px,
  /usr/bin/mail						Px,
  /usr/bin/logger					Px,
  @{PYTHON_EXEC_WRAPPER}				Cx -> glsa_check,
  
  # TEMP -----------------------------------------------
  owner /tmp/glsa.cron.??????				rw,
  
  profile glsa_check {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/glsa-check				Px,
    
    # TEMP ---------------------------------------------
    owner /tmp/glsa.cron.??????				w,
  }
}
