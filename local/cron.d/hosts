# Важно! Не должен содержать <tunables/global>.
# Уже включен в тело /etc/apparmor.d/2_local профиля.

# Важно! Перезагрузка профиля выполняется командой:
# apparmor_parser -r /etc/apparmor.d/2_local

profile hosts.sh.cron.daily /etc/cron.daily/hosts.sh {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.daily/hosts.sh				r,
  @{shell}						mr,
  /bin/date						ix,
  /bin/mv						ix,
  /bin/chmod						ix,
  /bin/basename						Px,
  /usr/bin/libnotify-notify-send-users			Px,
  /usr/bin/wget						Px,
  /usr/bin/stat						ix,
  /usr/bin/mail						Px,
  /usr/bin/logger					Px,
  
  # READS/WRITES ---------------------------------------
  /var/lib/hosts.blacklist				w,
  /var/log/hosts.log					w,
  
  # TEMP -----------------------------------------------
  owner /tmp/hosts					rw,
}
