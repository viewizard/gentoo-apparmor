# Важно! Не должен содержать <tunables/global>.
# Уже включен в тело /etc/apparmor.d/2_local профиля.

# Важно! Перезагрузка профиля выполняется командой:
# apparmor_parser -r /etc/apparmor.d/2_local

profile daily_backup.sh.cron.daily /etc/cron.daily/daily_backup.sh {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/null						w,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/chmod						ix,
  /bin/date						ix,
  /bin/tar						ix,
  /bin/rm						ix,
  /bin/cat						ix,
  /bin/mktemp						ix,
  /bin/lsblk						Px,
  /bin/sort						ix,
  /bin/mount						Px,
  /bin/umount						Px,
  /bin/basename						Px,
  /sbin/cryptsetup					Px,
  /sbin/lvm						Px,
  /usr/bin/libnotify-notify-send-users			Px,
  /usr/bin/find						ix,
  /usr/bin/mail						Px,
  /usr/bin/logger					Px,
  /usr/bin/uniq						ix,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /home/{,**}						r,
  /etc/**						r,
  /usr/**						r,
  /var/lib/**						r,
  /mnt/backup/Gentoo_Backup/				r,
  /mnt/backup/Gentoo_Backup/*				rw,
  
  # TEMP -----------------------------------------------
  /tmp/dailyhomebackup.cron.??????{,/,/**}		rw,
}

