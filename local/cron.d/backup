profile monthly_backup.sh.cron.monthly /etc/cron.monthly/monthly_backup.sh {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/chmod						ix,
  /bin/date						ix,
  /bin/tar						ix,
  /bin/rm						ix,
  /bin/cat						ix,
  /bin/mktemp						ix,
  /bin/mount						Px,
  /bin/umount						Px,
  /bin/basename						Px,
  /sbin/lvm						Px,
  /usr/bin/libnotify-notify-send-users			Px,
  /usr/bin/find						ix,
  /usr/bin/mail						Px,
  /usr/bin/logger					Px,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /*/							r,
  /bin/**						r,
  /boot/**						r,
  /etc/**						r,
  /lib{,32,64}/**					r,
  /opt/**						r,
  /root/**						r,
  /sbin/**						r,
  /usr/**						r,
  /var/**						r,
  /mnt/backup/Gentoo_Backup/				r,
  /mnt/backup/Gentoo_Backup/*				rw,
  
  # TEMP -----------------------------------------------
  /tmp/rootbackup.cron.??????{,/,/**}			rw,
}
