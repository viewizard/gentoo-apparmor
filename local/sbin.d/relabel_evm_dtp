# Важно! Не должен содержать <tunables/global>.
# Уже включен в тело /etc/apparmor.d/2_local профиля.

# Важно! Перезагрузка профиля выполняется командой:
# apparmor_parser -r /etc/apparmor.d/2_local

profile local.sbin.relabel_evm_dtp /usr/local/sbin/relabel_evm_dtp.sh {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/local/sbin/relabel_evm_dtp.sh			r,
  @{shell}						mr,
  /bin/touch						Cx,	# FS ACCESS! touch
  /bin/rm						Cx,	# FS ACCESS! rm
  /usr/bin/find						Cx,	# FS ACCESS! find
  
  profile touch /bin/touch {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/touch						mr,
    
    # READS/WRITES -------------------------------------
    /**.evmdtpcreate.xattr				w,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # READS/WRITES -------------------------------------
    /**.evmdtpcreate.xattr				w,
  }
  
  profile find /usr/bin/find {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    @{PROC}/@{pid}/mountinfo				r,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/find					mr,
    
    # READS/WRITES -------------------------------------
    /{,**/}						r,
  }
}
