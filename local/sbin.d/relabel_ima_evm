# Важно! Не должен содержать <tunables/global>.
# Уже включен в тело /etc/apparmor.d/2_local профиля.

# Важно! Перезагрузка профиля выполняется командой:
# apparmor_parser -r /etc/apparmor.d/2_local

profile local.sbin.relabel_ima_evm /usr/local/sbin/relabel_ima_evm.sh {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/local/sbin/relabel_ima_evm.sh			r,
  @{shell}						mr,
  /bin/grep						Cx,	# FS ACCESS! grep
  /usr/bin/find						Cx,	# FS ACCESS! find
  /usr/bin/evmctl					Px,
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
    
    # DENY INHERIT -------------------------------------
    deny /dev/pts/[0-9]*				rw,
  }
  
  profile find /usr/bin/find {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/find					mr,
    
    # READS/WRITES -------------------------------------
    /{,**}						r,
    
    # DENY INHERIT -------------------------------------
    deny /dev/pts/[0-9]*				rw,
  }
}
