# BUILD SYSTEM ONLY!

# Важно! Не должен содержать <tunables/global>.
# Уже включен в тело /etc/apparmor.d/2_local профиля.

# Важно! Перезагрузка профиля выполняется командой:
# apparmor_parser -r /etc/apparmor.d/2_local

profile local.sbin.aa_portage /usr/local/sbin/aa_portage.sh {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/local/sbin/aa_portage.sh				r,
  @{shell}						mr,
  /bin/basename						Px,
  /bin/cat						Cx,
  /bin/grep						Cx,
  /bin/rm						Cx,
  /bin/ln						Cx,
  /sbin/apparmor_parser					Px,
  @{PYTHON_EXEC_WRAPPER}				Cx -> equery,
  
  # READS/WRITES ---------------------------------------
  /etc/apparmor.d/{,**}					r,
  /etc/apparmor.d/disable/*				w,
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # READS/WRITES -------------------------------------
    /etc/apparmor.d/disable/*				w,
    /etc/apparmor.d/cache/*				w,
  }
  
  profile ln /bin/ln {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/ln						mr,
    
    # READS/WRITES -------------------------------------
    /etc/apparmor.d/disable/*				w,
  }
  
  profile equery {
    #include <abstractions/base>
    #include <abstractions/python>
    #include <abstractions/python-exec>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/equery				Px,
  }
}
