# EXECUTABLES ------------------------------------------
owner @{HOME}/**/AstroMenace				Cx -> AstroMenace,

profile AstroMenace {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/fs-access-by-users-preset-rk>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /sys/bus/						r,
  /sys/class/						r,
  /sys/class/input/					r,
  /sys/class/sound/					r,
  /sys/devices/**/uevent				r,
  /sys/devices/pci**/sound/**/capabilities/*		r,
  
  # EXECUTABLES ----------------------------------------
  @{HOME}/**/AstroMenace				mr,
  
  # READS/WRITES ---------------------------------------
  /run/udev/data/*					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/astromenace/{,*}		rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/.gl*					rw,
}
