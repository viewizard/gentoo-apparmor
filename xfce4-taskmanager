#include <tunables/global>

profile xfce4-taskmanager /usr/bin/xfce4-taskmanager {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/nameservice>
  #include <abstractions/executable-binary-helper>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term, stop, kill),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/						r,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/@{pid}/{cmdline,status,stat}			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4-taskmanager				mr,
  /usr/bin/xfce4-appfinder				Px,
  /usr/bin/exo-open					Px,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/xfce4/xfce4-taskmanager.rc*	rw,
}
