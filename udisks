#include <tunables/global>

profile udisks.udisks-daemon /usr/lib{,32,64}/udisks/udisks-daemon {	# Относится к версии 1.х (0-й слот).
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_rawio,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/@{BLOCK_ALL}					r,
  /sys/bus/						r,
  /sys/bus/pci/devices/					r,
  /sys/class/						r,
  /sys/class/block/					r,
  /sys/class/scsi_host/					r,
  /sys/module/block/parameters/events_dfl_poll_msecs	r,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/{,**}	r,
  /sys/devices/pci[0-9]*/**/{,class,uevent}		r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/*	r,
  @{PROC}/mdstat					r,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/@{pid}/mount{s,info}				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/udisks/udisks-daemon			mr,
  /usr/lib{,32,64}/udisks/*				ix,	# FIX ME! Ограничить списком.
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /etc/fstab						r,
  /run/udisks/						rw,
  /run/udev/data/*					r,
}

profile udisks.udisksd /usr/libexec/udisks2/udisksd {		# Относится к версии 2.х (2-й слот).
  #include <abstractions/base>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-pattern/polkit>
  #include <abstractions/dbus-pattern/system-bind>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_rawio,
  capability mknod,
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=system
  	path="/org/freedesktop/DBus"
  	interface="org.freedesktop.DBus"
  	member=GetConnectionUnixUser
  	peer=(name="org.freedesktop.DBus",label="dbus.dbus-daemon"),
  dbus send
  	bus=system
  	path="/org/freedesktop/UDisks2/**"
  	interface="org.freedesktop.DBus.Properties"
  	member=PropertiesChanged
  	peer=(name="org.freedesktop.DBus"),
  dbus receive
  	bus=system
  	path="/org/freedesktop/UDisks2/**"
  	interface="org.freedesktop.DBus.Properties"
  	member=EnumerateDevices
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus send
  	bus=system
  	path="/org/freedesktop/UDisks2/**"
  	interface="org.freedesktop.UDisks2.*"
  	peer=(name="org.freedesktop.DBus"),
  dbus receive
  	bus=system
  	path="/org/freedesktop/UDisks2/**"
  	interface="org.freedesktop.UDisks2.*"
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus send
  	bus=system
  	path="/org/freedesktop/UDisks2"
  	interface="org.freedesktop.DBus.ObjectManager"
  	member={InterfacesAdded,InterfacesRemoved}
  	peer=(name="org.freedesktop.DBus"),
  dbus receive
  	bus=system
  	path="/org/freedesktop/UDisks2"
  	interface="org.freedesktop.DBus.ObjectManager"
  	member=GetManagedObjects
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/@{BLOCK_ALL}					r,
  /sys/bus/						r,
  /sys/class/						r,
  /sys/class/block/					r,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/{,**}	r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/{,**} r,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/{,**/}{remove,uevent} rw,
  @{PROC}/@{pid}/mountinfo				r,
  @{PROC}/swaps						r,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/udisks2/udisksd				mr,
  /bin/mount						Cx,	# FS ACCESS! mount
  /bin/umount						Cx,	# FS ACCESS! umount
  /sbin/cryptsetup					Px,
  /usr/bin/eject					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /etc/fstab						r,
  /usr/share/gvfs/remote-volume-monitors/{,*.monitor}	r,
  /run/udisks2/{,mounted-fs*,unlocked-luks*}		rw,
  /run/udev/data/*					r,
  /run/media/{,*/,*/*/}					w,
  /media/*/						w,
  
  profile mount /bin/mount {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    capability dac_override,
    
    # MOUNT --------------------------------------------
    mount options=(rw, nosuid, nodev, noexec) /dev/@{BLOCK_ALL} -> /media/*/,	# Важно! noexec - т.к. мы патчим udisks.
    mount options=(rw, nosuid, nodev, noexec) /dev/@{BLOCK_ALL} -> /run/media/*/*/,	# /run/media/$USER/VolumeName/
    
    # EXECUTABLES --------------------------------------
    /bin/mount						mr,
    
    # READS/WRITES -------------------------------------
    /etc/fstab						r,
    /run/mount/utab					rw,
    /run/mount/utab.*					rwk,
  }
  
  profile umount /bin/umount {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    
    # MOUNT --------------------------------------------
    umount /media/*/,
    umount /run/media/*/*/,
    
    # PSEUDO -------------------------------------------
    @{PROC}/@{pid}/mountinfo				r,
    
    # EXECUTABLES --------------------------------------
    /bin/umount						mr,
    
    # READS/WRITES -------------------------------------
    /run/mount/utab					rw,
    /run/mount/utab.*					rwk,
  }
}
