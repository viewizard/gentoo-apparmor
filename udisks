#include <tunables/global>
profile udisks-daemon /usr/lib{,32,64}/udisks/udisks-daemon {
  #include <abstractions/base>
  
  capability sys_rawio,
  capability dac_override,
  capability dac_read_search,
  
  /dev/sd[a-z] r,
  /dev/{dm-,loop,md,zd}[0-9]* r,
  /sys/bus/ r,
  /sys/bus/pci/devices/ r,
  /sys/class/ r,
  /sys/class/block/ r,
  /sys/class/scsi_host/ r,
  /sys/module/block/parameters/events_dfl_poll_msecs r,
  /sys/devices/virtual/block/{dm-,loop,md,zd}[0-9]*/{,**} r,
  /sys/devices/virtual/block/zd[0-9]*/zd[0-9]*/{,**} r,
  /sys/devices/pci[0-9]*/**/{,class,uevent} r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/* r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/sd[a-z]/{,**} r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/sd[a-z]/sd[a-z][0-9]*/{,**} r,
  @{PROC}/mdstat r,
  @{PROC}/@{pid}/fd/ r,
  @{PROC}/@{pid}/mountinfo r,
  @{PROC}/@{pid}/mounts r,
  
  /etc/udev/udev.conf r,
  /etc/fstab r,
  
  /usr/lib{,32,64}/udisks/udisks-daemon m,
  /usr/lib{,32,64}/udisks/* ix,
  
  /run/udisks/ rw,
  /run/udev/data/* r,
  
}

profile udisks.udisksd /usr/libexec/udisks2/udisksd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability sys_rawio,
  
  /dev/sd[a-z] r,
  /dev/{dm-,loop,zd}[0-9]* r,
  /sys/bus/ r,
  /sys/class/ r,
  /sys/class/block/ r,
  /sys/devices/virtual/block/{dm-,loop,md,zd}[0-9]*/{,**} r,
  /sys/devices/virtual/block/zd[0-9]*/zd[0-9]*/{,**} r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/{sd[a-z],sr[0-9]*}/{,**} r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/sd[a-z]/sd[a-z][0-9]*/{,**} r,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/{,**/}{remove,uevent} rw,
  
  @{PROC}/@{pid}/mountinfo r,
  @{PROC}/swaps r,
  @{PROC}/@{pid}/fd/ r,
  
  /usr/libexec/udisks2/udisksd mr,
  /bin/mount Px,
  /bin/umount Px,
  /sbin/cryptsetup Px,
  /usr/bin/eject Px,
  
  /etc/udev/udev.conf r,
  /etc/fstab r,
  /media/*/ w,
  /usr/share/gvfs/remote-volume-monitors/{,*} r,
  
  /run/udisks2/{,mounted-fs*,unlocked-luks*} rw,
  /run/udev/data/* r,
  
}
