#include <tunables/global>
profile xfce4-terminal /usr/bin/xfce4-terminal flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/nvidia>
  #include <abstractions/user-tmp>
  #include <abstractions/nameservice>
  #include <abstractions/executable-binary-helper>
  #include <abstractions/dbus-session>


  /bin/bash Pux,
  /usr/bin/htop Cx,
  /usr/libexec/gnome-pty-helper Cx,
  /usr/bin/passwd.sh Cx,
  /usr/bin/dbus-daemon Px,

  owner @{PROC}/@{pid}/fd/ r,  
  /dev/pts/[0-9]* rw,
  /dev/ptmx rw,
  
  /usr/bin/xfce4-terminal rm,
  /etc/terminfo/x/xterm r,
  /usr/share/vte/termcap-0.0/xterm r,
  
  owner @{HOME}/.config/xfce4/terminal/* rw,
  owner @{HOME}/.config/xfce4/help.rc* rw,

  
  profile gnome-pty-helper /usr/libexec/gnome-pty-helper {
    #include <abstractions/base>
    #include <abstractions/freedesktop.org>
    #include <abstractions/nvidia>
    #include <abstractions/nameservice>
        
    capability setuid,
    capability setgid,
    capability fsetid,

    /dev/pts/* rw,
    /dev/ptmx rw,
    /run/utmp rw,
    deny /run/utmp k,
    /var/log/wtmp w,
    /usr/libexec/gnome-pty-helper r,
    /var/log/wtmp wk,
  }
  
  profile htop /usr/bin/htop {
    #include <abstractions/base>
    #include <abstractions/freedesktop.org>
    #include <abstractions/fonts>
    #include <abstractions/nameservice>
    
    capability sys_ptrace,
    
    /dev/pts/[0-9]* rw,
    
    /usr/bin/htop r,
    /etc/terminfo/x/xterm r,
    
    @{PROC}/sys/kernel/pid_max r,
    @{PROC}/ r,
    @{PROC}/loadavg r,
    @{PROC}/uptime r,
    @{PROC}/@{pid}/task/ r,
    @{PROC}/@{pid}/statm r,
    @{PROC}/@{pid}/stat r,
    @{PROC}/@{pid}/cmdline r,
    @{PROC}/@{pid}/task/@{pid}/statm r,
    @{PROC}/@{pid}/task/@{pid}/stat r,
    @{PROC}/@{pid}/task/@{pid}/cmdline r,
    
    owner @{HOME}/.config/htop/htoprc rw,
  }
  
  # since we don't have GUI in xfce4 for passwd, we use our script
  profile passwd.sh /usr/bin/passwd.sh flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/authentication>
    
    capability chown,
    capability fsetid,
    capability sys_ptrace,
    
    /dev/tty rw,
    /dev/pts/[0-9]* rw,
    owner @{PROC}/@{pid}/loginuid r,
    @{PROC}/ r,
    @{PROC}/@{pid}/stat r,
    @{PROC}/@{pid}/status r,
    @{PROC}/@{pid}/cmdline r,
    @{PROC}/uptime r,
    
    /etc/.pwd.lock rwk,
    /etc/nshadow rw,
    /etc/shadow rw,
    /etc/terminfo/x/xterm r,
    
    /usr/bin/passwd.sh r,
    /bin/bash r,
    
    /bin/passwd rix,
    /bin/sleep ix,
    /bin/ps ix,
    /bin/basename ix,
    /usr/bin/tput ix,
    
    /run/utmp rk,

  }
  
}
