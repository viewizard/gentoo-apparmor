#include <tunables/global>
profile xfce4-terminal /usr/bin/xfce4-terminal flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dbus-session>
  #include <abstractions/nvidia>
  #include <abstractions/user-tmp>
  #include <abstractions/nameservice>
  #include <abstractions/executable-binary-helper>
  
  /dev/ptmx rw,
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* rw,
  owner @{PROC}/@{pid}/fd/ r,
  
  /usr/bin/xfce4-terminal rm,
  /bin/bash Pux,  # Must be bash_default only by default.
  /usr/bin/sudo Px,
  /usr/bin/htop Cx,
  /usr/libexec/gnome-pty-helper Cx,
  /usr/bin/passwd.sh Px,
  /usr/bin/dbus-daemon Px,
  
  /etc/terminfo/x/xterm r,
  /usr/share/ r,
  /usr/share/xfce4/ r,
  /usr/share/xfce4/terminal/ r,
  /usr/share/xfce4/terminal/** r,
  /usr/share/vte/termcap-0.0/xterm r,
  
  owner @{HOME}/.local/share/ r,
  owner @{HOME}/.local/share/xfce4/ r,
  owner @{HOME}/.local/share/xfce4/terminal/ r,
  owner @{HOME}/.local/share/xfce4/terminal/** r,
  owner @{HOME}/.config/xfce4/terminal/* rw,
  owner @{HOME}/.config/xfce4/help.rc* rw,
  owner @{HOME}/.dbus/ rw,
  owner @{HOME}/.dbus/** rw,

  
  profile gnome-pty-helper /usr/libexec/gnome-pty-helper {
    #include <abstractions/base>
    #include <abstractions/freedesktop.org>
    #include <abstractions/nvidia>
    #include <abstractions/nameservice>
        
    capability setuid,
    capability setgid,
    capability fsetid,

    /dev/pts/[0-9]* rw,
    /dev/ptmx rw,
    
    /usr/libexec/gnome-pty-helper r,
    
    /run/utmp rwk,
    /var/log/wtmp wk,
  }
  
  profile htop /usr/bin/htop {
    #include <abstractions/base>
    #include <abstractions/freedesktop.org>
    #include <abstractions/fonts>
    #include <abstractions/nameservice>
    
    capability sys_ptrace,
    
    /dev/pts/[0-9]* rw,    
    @{PROC}/sys/kernel/pid_max r,
    @{PROC}/ r,
    @{PROC}/loadavg r,
    @{PROC}/uptime r,
    @{PROC}/@{pid}/task/ r,
    @{PROC}/@{pid}/statm r,
    @{PROC}/@{pid}/stat r,
    @{PROC}/@{pid}/cmdline r,
    @{PROC}/@{pid}/task/@{pid}/statm r,
    @{PROC}/@{pid}/task/@{pid}/stat r,
    @{PROC}/@{pid}/task/@{pid}/cmdline r,
    
    /usr/bin/htop r,
    
    /etc/terminfo/x/xterm r,
    
    owner @{HOME}/.config/htop/htoprc rw,
  }
  
}
