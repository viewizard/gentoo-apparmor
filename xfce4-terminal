#include <tunables/global>

profile xfce4-terminal /usr/bin/xfce4-terminal {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/dbus-pattern/session-bind>
  #include <abstractions/video>
  #include <abstractions/nameservice>
  #include <abstractions/binary-helper-strict-web>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term)
  	peer="xfce4-terminal//gnome-pty-helper",
  signal (send) set=(hup),
  
  # UNIX -----------------------------------------------
  unix (send, receive)
  	type=stream
  	peer=(label="xfce4-terminal//gnome-pty-helper"),
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/xfce/Terminal"
  	interface="org.xfce.Terminal[0-9]*"
  	peer=(name="org.xfce.Terminal[0-9]*",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/org/xfce/Terminal"
  	interface="org.xfce.Terminal[0-9]*"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/ptmx						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4-terminal				mr,
  @{shell}						Px -> shell_users,	# Должен быть пользовательский профиль.
  /bin/rc-status					Px,
  /usr/bin/sudo						Px,
  /usr/bin/htop						Px,
  /usr/bin/passwd.sh					Px,
  /usr/bin/exo-open					Px,
  /usr/libexec/gnome-pty-helper				Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/terminfo/x/xterm					r,
  /usr/share/						r,
  /usr/share/xfce4/					r,
  /usr/share/xfce4/terminal/{,**}			r,
  /usr/share/vte/termcap-0.0/xterm			r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/				r,
  owner @{HOME}/.local/share/xfce4/			r,
  owner @{HOME}/.local/share/xfce4/terminal/{,**}	r,
  owner @{HOME}/.config/xfce4/terminal/*		rw,
  owner @{HOME}/.config/xfce4/help.rc*			rw,
  owner @{HOME}/.dbus/{,**}				rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/vte*					rw,
  
  profile gnome-pty-helper /usr/libexec/gnome-pty-helper {
    #include <abstractions/base>
    #include <abstractions/freedesktop.org>
    #include <abstractions/video>
    #include <abstractions/nameservice>
    
    # CAPABILITIES -------------------------------------
    capability setuid,
    capability setgid,
    capability fsetid,
    
    # UNIX -----------------------------------------------
    unix (send, receive)
    		type=stream
    		peer=(label="xfce4-terminal"),
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    /dev/ptmx						rw,
    
    # EXECUTABLES --------------------------------------
    /usr/libexec/gnome-pty-helper			mr,
    
    # READS/WRITES -------------------------------------
    /run/utmp						rwk,
    /var/log/wtmp					wk,
  }
}
