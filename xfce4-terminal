#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-w
@{USERS_DIR_w}="[^.]**"
@{USERS_FILE_w}="{[^.]*,.goutputstream-@{TMP6}}"

profile xfce4-terminal /usr/bin/xfce4-terminal {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/video>
  #include <abstractions/nameservice>
  #include <abstractions/ncurses>
  #include <abstractions/dconf>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/unix/gvfsd-trash>
  #include <abstractions/unix/gvfsd-network>
  #include <abstractions/fs/access-by-users-preset-w>		# Разрешаем только запись для сохранения содержимого в файл.
  								# В терминале ПКМ -> Сохранить содержимое...
  								# Разрешаем только создание/запись в файл .goutputstream-@{TMP6}.
  #include <abstractions/profile_transitions/users-strict-web>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(hup),
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/xfce/Terminal"
  	interface="org.xfce.Terminal[0-9]*"
  	peer=(name="org.xfce.Terminal[0-9]*",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/org/xfce/Terminal"
  	interface="org.xfce.Terminal[0-9]*"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/ptmx						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4-terminal				mr,
  @{shell}						Px -> shell_users,	# Должен быть пользовательский профиль.
  /bin/rc-status					Px,	# sys-apps/openrc
  /bin/su						Px,	# sys-apps/shadow
  /usr/bin/sudo						Px,	# app-admin/sudo
  /usr/bin/htop						Px,	# sys-process/htop
  /usr/bin/passwd.sh					Px,	# sys-apps/shadow
  /usr/bin/exo-open					Px,	# xfce-base/exo
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/						r,
  /etc/xdg/xfce4/					r,
  /usr/share/						r,
  /usr/share/xfce4/					r,
  /usr/share/xfce4/terminal/{,**}			r,
  /usr/local/share/					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/				r,
  owner @{HOME}/.local/share/xfce4/			r,
  owner @{HOME}/.local/share/xfce4/terminal/{,**}	r,
  owner @{HOME}/.config/				r,
  owner @{HOME}/.config/xfce4/				r,
  owner @{HOME}/.config/xfce4/terminal/			r,
  owner @{HOME}/.config/xfce4/terminal/*		rw,
  owner @{HOME}/.config/xfce4/help.rc*			rw,
  owner @{HOME}/.dbus/{,**}				rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/#@{pids}					rw,	# На самом деле не PID, 5-6 символов (цифры).
  								# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  owner /tmp/vte@{TMP6}					rw,	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
}
