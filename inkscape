#include <tunables/global>

# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]*.{cdr,cdt,ccx,cmx,ggr,ai,svg,svgz,plt,hpgl,cgm,ai,xaml,dxf,sk1,eps,ps,dhw,gdkp,gtif,qif,xbm,jpeg,jpe,jpg,gif,pnm,pbm,pgm,ppm,ico,cur,fxg,ani,tga,targa,xpm,png,icns,tiff,tif,bmp,pdf,vsd,tex,pov,sig,htm,html,emf,wmf,cgm,CDR,CDT,CCX,CMX,GGR,AI,SVG,SVGZ,PLT,HPGL,CGM,AI,XAML,DXF,SK1,EPS,PS,DHW,GDKP,GTIF,QIF,XMB,JPEG,JPE,JPG,GIF,PNM,PBM,PGM,PPM,ICO,CUR,FXG,ANI,TGA,TARGA,XPM,PNG,ICNS,TIFF,TIF,BMP,PDF,VSD,TEX,POV,SIG,HTM,HTMPL,EMF,WMF,CGM}"

profile inkscape /usr/bin/inkscape {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/cups-client>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/enchant>
  #include <abstractions/python>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/dbus-pattern/session-bind>
  #include <abstractions/xdg-open>
  #include <abstractions/fs-access-by-users-preset-rwk>
  #include <abstractions/fs-deny-by-pattern-internet>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /sys/devices/system/cpu/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/inkscape					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/inkscape/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME_CACHE}/inkscape/{,**}			rw,
  owner @{HOME}/.config/inkscape/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/ink_ext_??????.svg??????			rw,
}
