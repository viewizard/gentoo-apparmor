#include <tunables/global>

profile zfs /sbin/zfs flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_resource,
  
  # PSEUDO ---------------------------------------------
  /dev/zfs						rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/mounts					r,
  @{PROC}/sys/fs/pipe-max-size				r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/zfs						mr,
#  /bin/mount						Px,	# FS ACCESS!
  
  # READS/WRITES ---------------------------------------
  /etc/dfs/sharetab					r,
}

profile zfs.mount /sbin/mount.zfs flags=(complain) {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /sbin/mount.zfs					mr,
}

profile zfs.zpool /sbin/zpool flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/zfs						rw,
  /dev/pts/[0-9]*					rw,
  /sys/module/spl/parameters/spl_hostid			r,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/zpool						mr,
#  /bin/umount						Px,	# FS ACCESS!
  /usr/libexec/zfs/zed.d/all-syslog.sh			Px,
  
  # READS/WRITES ---------------------------------------
  /etc/dfs/sharetab					r,
  /etc/zfs/zpool.cache					rw,
}

profile zfs.zed /sbin/zed flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/zfs						rw,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/zed						mr,
  /usr/libexec/zfs/zed.d/all-syslog.sh			Px,
  
  # READS/WRITES ---------------------------------------
  /etc/dfs/sharetab					r,
  /etc/zfs/zed.d/{,*}					r,
  /var/lib/run/zed.{pid,state}				rwk,
}

profile zfs.zed.d /usr/libexec/zfs/zed.d/*.sh {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/zfs/zed.d/*.sh				r,
  @{shell}						mr,
  /usr/bin/logger					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/zfs/zed.d/zed-functions.sh			r,
  /etc/zfs/zed.d/zed.rc					r,
}

profile zfs.zfs-zed.init.d /etc/init.d/zfs-zed {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/zfs-zed/tasks			w,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /sbin/zpool						Px,
  /sbin/zed						Px,
  /bin/rm						Cx,	# FS ACCESS! rm
  /bin/mkdir						Cx,	# FS ACCESS! mkdir
  /bin/kmod						Pxr,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /etc/{conf,init}.d/zfs-zed				r,
  /etc/conf.d/zfs					r,
  /etc/zfs/zfs-functions				r,
  /var/lib/run/zed.pid					r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile rm /bin/rm flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
  }
  
  profile mkdir /bin/mkdir flags=(complain) {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/openrc/zfs-zed/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
}

profile zfs.zfs-import.init.d /etc/init.d/zfs-import {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/zfs-import/tasks		w,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/grep						ix,	# FS ACCESS!
  /bin/uname						Px,
  /bin/udevadm						Px,
  /bin/kmod						Pxr,
  /bin/mkdir						Cx,	# FS ACCESS! mkdir
  /sbin/zpool						Px,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /etc/conf.d/zfs					r,
  /etc/zfs/zfs-functions				r,
  /etc/{conf,init}.d/zfs-import				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir flags=(complain) {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/openrc/zfs-import/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
}
