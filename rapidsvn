#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"

profile rapidsvn /usr/bin/rapidsvn flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rwk-strict>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/rapidsvn					mr,
  @{shell}						Cx,
  /usr/bin/meld						Px,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.subversion/{,**}			rw,
  owner @{HOME}/.RapidSVN*				rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/*						rw,
  
  profile shell @{shell} flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						rm,
    /bin/uname						ix,
    /usr/bin/lsb_release				Px,
  }
}
