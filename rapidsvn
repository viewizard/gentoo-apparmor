#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"

profile rapidsvn /usr/bin/rapidsvn flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/user-tmp>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rwk>
  #include <abstractions/nameservice>
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  
  /usr/bin/rapidsvn mr,
  /usr/bin/meld Px,
  /usr/bin/lsb_release Cxr -> lsb_release,
  /bin/bash ix,
  /bin/uname ix,
  
  owner @{HOME}/.subversion/{,**} rw,
  owner @{HOME}/.RapidSVN* rw,
  
  
  profile lsb_release {
    #include <abstractions/base>
    #include <abstractions/python>
    
    /dev/tty rw,
    
    /usr/bin/lsb_release r,
    /bin/bash ixmr,
    /bin/sed ixr,
    /bin/head ixr,
    /bin/tr ixr,
    /usr/bin/getopt ixr,
    /usr/bin/dpkg-query ixr,
    deny /usr/bin/find xr,
    
    /etc/lsb-release r,
    /usr/bin/ r,
    
    /var/lib/dpkg/** r,
  }
}
