#include <tunables/global>

profile gnome-keyring-daemon /usr/bin/gnome-keyring-daemon {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  @{PROC}/@{pid}/status					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gnome-keyring-daemon				mr,
  
  # READS/WRITES ---------------------------------------
  owner /run/user/*/keyring/{,control,pkcs11,ssh}	rw,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/keyrings/			rw,
  owner @{HOME}/.local/share/keyrings/*			rwl,
  owner @{HOME_CACHE}/keyring-*/{,*}			rw,
  owner @{HOME}/.ssh/					r,
  owner @{HOME}/.session.log				w,	# <abstractions/X>
}
