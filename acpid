#include <tunables/global>

profile acpid /usr/sbin/acpid {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_tty_config,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /dev/input/						r,
  /dev/input/by-id/					r,
  /dev/input/by-path/					r,
  /dev/input/event*					r,
  /dev/input/mouse*					r,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/acpid					mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/acpi/{,**}					r,
  /run/acpid.pid					rw,
  /run/acpid.socket					rw,
  
  profile shell @{shell} flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # CAPABILITIES -------------------------------------
    capability mknod,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/ps						Px,
    /bin/sed						ix,
    /bin/cut						ix,
    /sbin/shutdown					Px,
    /usr/bin/fgconsole					Px,
    /usr/bin/gawk					ix,
    /usr/bin/logger					Px,
    /usr/bin/pinky					Px,
    /usr/bin/pgrep					Px,
    /usr/bin/pidof					Px,
    /usr/bin/getent					ix,
    /etc/acpi/default.sh				ixr,
    /etc/acpi/actions/powerbtn.sh			ixr,
    
    # READS/WRITES -------------------------------------
#    /run/utmp						rk,	# /usr/bin/pinky
  }
}

profile acpid.acpi_listen /usr/bin/acpi_listen flags=(complain) {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/acpi_listen					mr,
}

profile acpid.kacpimon /usr/sbin/kacpimon {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  /dev/input/{,event*}					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/kacpimon					mr,
}

profile acpid.init.d /etc/init.d/acpid {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/acpid					Px,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/acpid				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
}
