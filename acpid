#include <local/tunables.d/>

profile acpid /usr/sbin/acpid {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_tty_config,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /dev/input/						r,
  /dev/input/by-id/					r,
  /dev/input/by-path/					r,
  /dev/input/event*					r,
  /dev/input/mouse*					r,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/acpid					mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/acpi/{,**}					r,
  /run/acpid.pid					rw,
  /run/acpid.socket					rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /etc/acpi/default.sh				Px,
  }
}

profile acpid.default.sh /etc/acpi/default.sh {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/acpi/default.sh					r,
  @{shell}						mr,
  /usr/bin/logger					Px,	# sys-apps/util-linux
  /etc/acpi/actions/powerbtn.sh				Px,
}

profile acpid.powerbtn.sh /etc/acpi/actions/powerbtn.sh {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/acpi/actions/powerbtn.sh				r,
  @{shell}						mr,
  /bin/ps						Px,	# sys-process/procps
  /bin/sed						Cx,	# sys-apps/sed
  /bin/cut						Cx,	# sys-apps/coreutils
  /sbin/shutdown					Px,	# sys-apps/sysvinit
  /usr/bin/fgconsole					Px,	# sys-apps/kbd
  /usr/bin/gawk						Cx,	# sys-apps/gawk
  /usr/bin/pinky					Px,	# sys-apps/coreutils
  /usr/bin/pgrep					Px,	# sys-process/procps
  /usr/bin/pidof					Px,	# sys-process/procps
  /usr/bin/getent					Px,	# sys-libs/glibc
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
  
  profile cut /bin/cut {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cut						mr,
  }
  
  profile gawk /usr/bin/gawk {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability mknod,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gawk					mr,
  }
}

profile acpid.acpi_listen /usr/bin/acpi_listen {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/acpi_listen					mr,
}

profile acpid.kacpimon /usr/sbin/kacpimon {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/input/{,event*}					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/kacpimon					mr,
}

profile acpid.init.d /etc/init.d/acpid flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  @{sys}/fs/cgroup/openrc/acpid/tasks			w,
  @{sys}/fs/cgroup/unified/acpid/cgroup.procs		w,
  @{sys}/fs/cgroup/unified/acpid/cgroup.events		r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/acpid					Px,
  @{shell}						Cx,
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/acpid				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{sys}/fs/cgroup/{openrc,unified}/acpid/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{sys}/fs/cgroup/unified/acpid/cgroup.procs		r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{sys}/fs/cgroup/unified/acpid/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
