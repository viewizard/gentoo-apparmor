#include <tunables/global>

profile perl-cleaner /usr/sbin/perl-cleaner flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/perl>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability dac_override,
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/perl-cleaner				mr,
  @{shell}						cxmr,	# Все правильно, запуск и mmap.
  /bin/grep						ix,	# FS ACCESS!
  /bin/tr						Px,
  /bin/rmdir						ix,	# FS ACCESS!
  /bin/sort						ix,	# FS ACCESS!
  /bin/stty						Px,
  /bin/cat						ix,	# FS ACCESS!
  /bin/rm						ix,	# FS ACCESS!
  /sbin/consoletype					Px,
  /usr/bin/q						ix,	# FIX ME! Вынести в отдельный профиль.
  /usr/bin/xargs					ix,	# FS ACCESS!
  /usr/bin/gawk						ix,	# FS ACCESS!
  /usr/bin/tput						Px,
  /usr/bin/scanelf					ix,	# FS ACCESS!
  /usr/bin/find						ix,	# FS ACCESS!
  /usr/bin/realpath					ix,	# FS ACCESS!
  /usr/bin/h2ph						ix,	# FIX ME! Вынести в отдельный профиль.
  @{PYTHON_EXEC_WRAPPER}				Cx -> portage,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /{bin,sbin,usr,opt,var}/{,**}				r,
  /etc/portage/{,**}					r,
  /etc/env.d/cblas/lib{,32,64}/{,**}			r,
  /usr/lib{,32,64}/perl**				w,
  
  # TEMP -----------------------------------------------
  owner /tmp/sh-thd.*					rw,
  
  profile shell @{shell} flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/grep						ix,	# FS ACCESS!
    /usr/bin/gawk					ix,	# FS ACCESS!
    /usr/bin/@{CHOST}-gcc				ix,	# FIX ME! Вынести в отдельный профиль.
    /usr/@{CHOST}/gcc-bin/*/@{CHOST}-gcc		ix,	# FIX ME! Вынести в отдельный профиль.
    /usr/libexec/gcc/@{CHOST}/*/cc1			ix,	# FIX ME! Вынести в отдельный профиль.
    
    # READS/WRITES -------------------------------------
    /etc/env.d/gcc/{,**}				r,
    /usr/include/{,**}					r,
  }
  
  profile portage {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/emerge				Px,
    @{PYTHON_EXEC}/portageq				Px,
  }
}
