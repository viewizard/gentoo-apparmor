#include <local/tunables.d/>

profile perl-cleaner /usr/sbin/perl-cleaner {
  #include <abstractions/base>
  #include <abstractions/perl>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/perl-cleaner				mr,
  @{shell}						pxmr -> perl_cleaner_shell,	# Все правильно, запуск и mmap.
  /bin/grep						Cx,	# sys-apps/grep
  /bin/tr						Px,	# sys-apps/coreutils
  /bin/sort						Cx,	# sys-apps/coreutils
  /bin/stty						Px,	# sys-apps/coreutils
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/rm						Cx,	# sys-apps/coreutils
  /sbin/consoletype					Px,	# sys-apps/gentoo-functions
  /usr/bin/q						Px,	# app-portage/portage-utils
  /usr/bin/xargs					Cx,	# sys-apps/findutils
  /usr/bin/gawk						Cx,	# sys-apps/gawk
  /usr/bin/tput						Px,	# sys-libs/ncurses
  /usr/bin/scanelf					Cx,	# app-misc/pax-utils
  /usr/bin/find						Cx,	# sys-apps/findutils
  /usr/bin/realpath					Cx,	# sys-apps/coreutils
  /usr/bin/h2ph						Px,	# dev-lang/perl
  @{PYTHON_EXEC_WRAPPER}				Cx -> portage,	# dev-lang/python-exec
  
  # READS/WRITES ---------------------------------------
  /var/db/pkg/{,**}					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/@{TMP_SH}					rw,	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile sort /bin/sort {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sort						mr,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
  }
  
  profile xargs /usr/bin/xargs {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    owner @{PROC_D}/@{pid}/fd/				r,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/xargs					mr,
    /bin/rmdir						ix,	# sys-apps/coreutils	# Оставляем вызов через ix.
    
    # READS/WRITES -------------------------------------
    /usr/lib{,32,64}/perl[0-9]*/{,**/}			w,
  }
  
  profile gawk /usr/bin/gawk {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gawk					mr,
    
    # READS/WRITES -------------------------------------
    /var/db/pkg/{,**}					r,
  }
  
  profile scanelf /usr/bin/scanelf {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    capability dac_override,
    capability dac_read_search,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/scanelf					mr,
    
    # READS/WRITES -------------------------------------
    /{bin,sbin,opt,usr}/{,**}				r,
    /etc/env.d/cblas/lib{,32,64}/gsl			r,	# sci-libs/gsl
    /etc/portage/bin/{,*}				r,	# sys-apps/portage
    /var/lib/{,**}					r,
    deny /usr/src/{,**}					r,	# sys-kernel/gentoo-sources
  }
  
  profile find /usr/bin/find {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/find					mr,
    
    # READS/WRITES -------------------------------------
    /							r,
    /var/db/pkg/{,**}					r,
  }
  
  profile realpath /usr/bin/realpath {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/realpath					mr,
  }
  
  profile portage {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/emerge				Px,	# sys-apps/portage
    @{PYTHON_EXEC}/portageq				Px,	# sys-apps/portage
  }
}

profile perl_cleaner_shell {
  #include <abstractions/base>
  
  # PSEUDO -------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES --------------------------------------
  @{shell}						mr,
  /bin/grep						Cx,	# sys-apps/grep
  /usr/bin/gawk						Cx,	# sys-apps/gawk
  /usr/bin/@{CHOST}-gcc					Cx,	# sys-devel/gcc
  /usr/@{CHOST}/gcc-bin/[0-9]*/@{CHOST}-gcc		Cx -> gcc,	# sys-devel/gcc
  /usr/libexec/gcc/@{CHOST}/[0-9]*/cc1			Cx,	# sys-devel/gcc
  
  # READS/WRITES -------------------------------------
  /etc/env.d/gcc/{,**}					r,	# sys-devel/gcc
  /usr/include/{,**}					r,
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile gawk /usr/bin/gawk {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gawk					mr,
  }
  
  profile gcc /usr/bin/@{CHOST}-gcc {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/@{CHOST}-gcc				mr,
  }
  
  profile cc1 /usr/libexec/gcc/@{CHOST}/[0-9]*/cc1 {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/libexec/gcc/@{CHOST}/[0-9]*/cc1		mr,
  }
}
