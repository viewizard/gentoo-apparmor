#include <tunables/global>
profile perl-cleaner /usr/sbin/perl-cleaner flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/perl>
  
  capability sys_admin,
  
  /dev/tty rw,
  /dev/pts/[0-9]* w,
  @{PROC}/@{pid}/fd/ r,
  
  /usr/sbin/perl-cleaner r,
  /bin/bash cxr -> shell,
  /bin/grep ix,
  /bin/tr ix,
  /bin/rmdir ix,
  /bin/sort ix,
  /bin/stty ix,
  /sbin/consoletype ix,
  /usr/bin/q ix,
  /usr/bin/xargs ix,
  /usr/bin/gawk ix,
  /usr/bin/tput ix,
  /usr/bin/scanelf ix,
  /usr/bin/find ix,
  /usr/bin/realpath ix,
  /usr/bin/h2ph ix,
  /usr/lib64/python-exec/python-exec2 Px,
  
  /etc/terminfo/x/xterm r,
  /etc/portage/{,**} r,
  
  / r,
  /{bin,sbin,usr,opt,var}/{,**} r,
  /etc/portage/bin/{,**} r,
  /etc/env.d/cblas/lib64/{,**} r,
  /usr/lib{,32,64}/perl** w,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /bin/grep ix,
    /usr/bin/gawk ix,
    /usr/bin/x86_64-pc-linux-gnu-gcc ix,
    /usr/x86_64-pc-linux-gnu/gcc-bin/*/x86_64-pc-linux-gnu-gcc ix,
    /usr/libexec/gcc/x86_64-pc-linux-gnu/*/cc1 ix,
    
    /etc/env.d/gcc/{,**} r,
    /usr/include/{,**} r,
    
  }
  
}
