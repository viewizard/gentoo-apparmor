#include <tunables/global>

profile gentoolkit.glsa-check @{PYTHON_EXEC}/glsa-check flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/mime.types					r,
  /etc/profile.env					r,
  /etc/portage/**					r,
  /usr/portage/**					r,
  /usr/local/portage/**					r,
  /usr/share/portage/config/*				r,
  /var/db/pkg/{,**}					r,
  /var/cache/edb/**					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/glsa.cron.*				w,
  
  profile shell @{shell} flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
    
    # TEMP ---------------------------------------------
    owner /tmp/glsa.cron.*				w,	# DELEGATION! glsa.cron.daily
  }
}

profile gentoolkit.equery @{PYTHON_EXEC}/equery flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/profile.env					r,
  /etc/terminfo/x/xterm					r,
  /etc/portage/**					r,
  /usr/portage/**					r,
  /usr/local/portage/**					r,
  /usr/share/portage/config/*				r,
  /var/db/pkg/{,**}					r,
  /var/cache/edb/{,**}					r,
  
  profile shell @{shell} flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
  }
}

