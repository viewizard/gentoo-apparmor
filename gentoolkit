profile gentoolkit.revdep-rebuild /usr/lib{,32,64}/python-exec/@{PYTHON}/revdep-rebuild flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  capability sys_admin,
  
  /dev/pts/[0-9]* rw,
  
  /bin/bash Cx -> shell,
  /usr/bin/scanelf ix,
  
  / r,
  /{bin,sbin,usr,opt,lib,lib32,lib64}/ r,
  /{bin,sbin,opt,lib,lib32,lib64}/** r,
  /usr/{bin,sbin,lib,lib32,lib64,libexec,x86_64-pc-linux-gnu}/{,**} r,
  /usr/local/lib{,32,64}/{,**} r,
  
  /etc/profile.env r,
  /etc/ld.so.conf r,
  /etc/ld.so.conf.d/{,*} r,
  /etc/portage/{,**} r,
  /usr/portage/{,**} r,
  /usr/share/portage/{,**} r,
  /usr/local/portage/{,**} r,
  /etc/revdep-rebuild/{,**} r,
  
  /var/cache/revdep-rebuild/{,**} rw,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash mr,
    /bin/uname ix,
    
  }
  
}

# устаревший, будет заменен на gentoolkit.revdep-rebuild
profile gentoolkit.revdep-rebuild.sh /usr/bin/revdep-rebuild.sh flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  capability fsetid,
  capability chown,
  
  /dev/tty rw,
  /dev/pts/[0-9]* w,
  
  /usr/{bin,lib{,32,64}/python-exec}/python-exec2{,c} Cx -> portageq,
  
  / r,
  /{bin,sbin,usr,opt,lib,lib32,lib64}/ r,
  /{bin,sbin,opt,lib,lib32,lib64}/** ixmr,
  /usr/{bin,sbin,lib,lib32,lib64,libexec,x86_64-pc-linux-gnu}/ r,
  /usr/{bin,sbin,lib,lib32,lib64,libexec,x86_64-pc-linux-gnu}/** ixmr,
  /usr/local/lib{,32,64}/ r,
  /usr/local/lib{,32,64}/** ixmr,
  
  /etc/profile.env r,
  /etc/ld.so.conf r,
  /etc/ld.so.conf.d/{,*} r,
  /etc/revdep-rebuild/{,*} r,
  /etc/env.d/python/config r,
  /etc/terminfo/x/xterm r,
  
  /var/cache/revdep-rebuild/{,**} rw,
  
  owner /tmp/sh-thd.* rw,
  
  
  profile portageq {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    /usr/lib{,32,64}/python-exec/@{PYTHON}/portageq Px,
    
  }
  
}
