profile gentoolkit.revdep-rebuild @{PYTHON_EXEC}/revdep-rebuild flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability dac_override,
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /usr/bin/scanelf					ix,
  # FIX ME! должен вызывать emerge (?)
  
  # READS/WRITES ---------------------------------------
  /							r,
  /{bin,sbin,usr,opt,lib{,32,64}}/			r,
  /{bin,sbin,opt,lib{,32,64}}/**			r,
  /usr/{bin,sbin,lib{,32,64,exec},@{CHOST}}/{,**}	r,
  /usr/local/lib{,32,64}/{,**}				r,
  /etc/profile.env					r,
  /etc/ld.so.conf					r,
  /etc/ld.so.conf.d/{,*}				r,
  /etc/revdep-rebuild/{,**}				r,
  /etc/portage/{,**}					r,
  /usr/portage/{,**}					r,
  /usr/share/portage/{,**}				r,
  /usr/local/portage/{,**}				r,
  /var/cache/revdep-rebuild/{,**}			rw,
  
  profile shell @{shell} flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
  }
}

# FIX ME! Устаревший, будет заменен на gentoolkit.revdep-rebuild
profile gentoolkit.revdep-rebuild.sh /usr/bin/revdep-rebuild.sh flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability fsetid,
  capability chown,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{PYTHON_EXEC_WRAPPER}				Cx -> portage,
  @{shell}						mr,
  /bin/chown						ix,
  /bin/chmod						ix,
  /bin/grep						ix,
  /bin/sort						ix,
  /bin/rm						ix,
  /bin/cat						ix,
  /bin/sed						ix,
  /bin/tr						Px,
  /bin/stty						Px,
  /bin/sleep						Px,
  /sbin/consoletype					Px,
  /usr/bin/find						ix,
  /usr/bin/tput						Px,
  /usr/bin/gawk						ix,
  /usr/bin/renice					ix,
  /usr/bin/nice						ix,
  /usr/bin/xargs					ix,
  /usr/bin/realpath					ix,
  /usr/bin/ldd						Px,
  /usr/@{CHOST}/binutils-bin/*/objdump			ix,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /{bin,sbin,usr,opt,lib{,32,64}}/			r,
  /{bin,sbin,opt,lib{,32,64}}/**			r,
  /usr/{bin,sbin,lib{,32,64,exec},@{CHOST}}/{,**}	r,
  /usr/local/lib{,32,64}/{,**}				r,
  /etc/profile.env					r,
  /etc/ld.so.conf					r,
  /etc/ld.so.conf.d/{,*}				r,
  /etc/revdep-rebuild/{,*}				r,
  /etc/env.d/python/config				r,
  /etc/terminfo/x/xterm					r,
  /var/db/pkg/{,**}					r,
  /var/cache/revdep-rebuild/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/sh-thd.*					rw,
  owner /tmp/revdep-rebuild.**				rw,
  
  profile portage {
    #include <abstractions/base>
    #include <abstractions/python>
    #include <abstractions/python-exec>
    #include <abstractions/nameservice>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/portageq				Px,
    @{PYTHON_EXEC}/emerge				Px,
  }
}
