  /etc/profile.env r,
  /etc/terminfo/x/xterm r,
  /etc/portage/** r,
  /usr/portage/** r,
  /usr/local/portage/** r,
  /usr/share/portage/config/* r,
  /var/db/pkg/ r,
  /var/db/pkg/** r,
  /var/cache/edb/ r,
  /var/cache/edb/** r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /bin/uname ix,
    
  }
  
}


