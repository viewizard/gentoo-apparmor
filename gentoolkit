  /usr/local/portage/** r,
  /usr/share/portage/config/* r,
  /var/db/pkg/ r,
  /var/db/pkg/** r,
  /var/cache/edb/ r,
  /var/cache/edb/** r,
  
  
  profile shell flags=(complain) {
