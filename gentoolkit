#include <tunables/global>

profile gentoolkit.glsa-check @{PYTHON_EXEC}/glsa-check {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/mime.types					r,
  /etc/profile.env					r,
  /etc/portage/**					r,
  /usr/portage/**					r,
  /usr/local/portage/**					r,
  /usr/share/portage/config/*				r,
  /var/db/pkg/{,**}					r,
  /var/cache/edb/**					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/glsa.cron.*				w,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
    
    # TEMP ---------------------------------------------
    owner /tmp/glsa.cron.*				w,	# DELEGATION! glsa.cron.daily
  }
}

profile gentoolkit.equery @{PYTHON_EXEC}/equery {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/ncurses>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/profile.env					r,
  /etc/portage/**					r,
  /usr/portage/**					r,
  /usr/local/portage/**					r,
  /usr/share/portage/config/*				r,
  /var/db/pkg/{,**}					r,
  /var/cache/edb/{,**}					r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
  }
}

profile gentoolkit.eclean @{PYTHON_EXEC}/eclean {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /usr/bin/sandbox					cx,
  
  # READS/WRITES ---------------------------------------
  /etc/profile.env					r,
  /etc/eclean/{,*}					r,
  /etc/portage/**					r,
  /usr/portage/**					r,
  /usr/portage/distfiles/**				rw,
  /usr/portage/packages/**				rw,
  /usr/local/portage/**					r,
  /usr/share/portage/config/*				r,
  /var/db/pkg/{,**}					r,
  /var/cache/edb/{,**}					rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
  }
  
  profile sandbox /usr/bin/sandbox {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/sandbox					mr,
    @{shell}						px -> gentoolkit_eclean_sandbox_shell,
    
    # READS/WRITES -------------------------------------
    /etc/sandbox.conf					r,
    /etc/sandbox.d/{,**}				r,
  }
}

profile gentoolkit_eclean_sandbox_shell {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /usr/lib{,32,64}/portage/@{PYTHON}/ebuild.sh		ix,	# FIX ME! Вынести в отдельный профиль.
  
  # READS/WRITES ---------------------------------------
  /usr/share/sandbox/sandbox.bashrc			r,
}

profile gentoolkit.revdep-rebuild @{PYTHON_EXEC}/revdep-rebuild {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  @{PYTHON_EXEC_WRAPPER}				Cx -> portage,
  /usr/bin/scanelf					Cx,	# FS ACCESS! scanelf
  
  # READS/WRITES ---------------------------------------
  /							r,
  /{bin,sbin,usr,opt,lib{,32,64}}/			r,
  /{bin,sbin,opt,lib{,32,64}}/**			r,
  /usr/{bin,sbin,lib{,32,64,exec},@{CHOST}}/{,**}	r,
  /usr/local/lib{,32,64}/{,**}				r,
  /etc/profile.env					r,
  /etc/ld.so.conf					r,
  /etc/ld.so.conf.d/{,*}				r,
  /etc/revdep-rebuild/{,**}				r,
  /etc/portage/{,**}					r,
  /usr/portage/{,**}					r,
  /usr/share/portage/{,**}				r,
  /usr/local/portage/{,**}				r,
  /var/db/pkg/{,**}					r,
  /var/cache/edb/dep/usr/local/portage/{,**}		r,
  /var/cache/revdep-rebuild/{,**}			rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
  }
  
  profile portage {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/emerge				Px,
  }
  
  profile scanelf /usr/bin/scanelf {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    capability dac_override,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/scanelf					mr,
    
    # READS/WRITES -------------------------------------
    /							r,
    /{bin,sbin,opt,lib{,32,64}}/**			r,
    /usr/{bin,sbin,lib{,32,64,exec},@{CHOST}}/**	r,
    /usr/local/lib{,32,64}/**				r,
  }
}

# FIX ME! Устаревший, будет заменен на gentoolkit.revdep-rebuild
# BUG! Работает некорректно, пересустанавливает постоянно samba.
profile gentoolkit.revdep-rebuild.sh /usr/bin/revdep-rebuild.sh {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/ncurses>
  
  # CAPABILITIES ---------------------------------------
  capability fsetid,
  capability chown,
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{PYTHON_EXEC_WRAPPER}				Cx -> portage,
  @{shell}						mr,
  /bin/chown						ix,	# FS ACCESS!
  /bin/chmod						ix,	# FS ACCESS!
  /bin/grep						ix,	# FS ACCESS!
  /bin/sort						ix,	# FS ACCESS!
  /bin/rm						ix,	# FS ACCESS!
  /bin/cat						ix,	# FS ACCESS!
  /bin/sed						ix,	# FS ACCESS!
  /bin/tr						Px,
  /bin/stty						Px,
  /bin/sleep						Px,
  /sbin/consoletype					Px,
  /usr/bin/find						ix,	# FS ACCESS!
  /usr/bin/tput						Px,
  /usr/bin/gawk						ix,	# FS ACCESS!
  /usr/bin/renice					Px,
  /usr/bin/nice						ix,	# FS ACCESS!
  /usr/bin/xargs					ix,	# FS ACCESS!
  /usr/bin/realpath					ix,	# FS ACCESS!
  /usr/bin/ldd						Px,
  /usr/@{CHOST}/binutils-bin/*/objdump			ix,	# FIX ME! Вынести в отдельный профиль.
  
  # READS/WRITES ---------------------------------------
  /							r,
  /{bin,sbin,usr,opt,lib{,32,64}}/			r,
  /{bin,sbin,opt,lib{,32,64}}/**			r,
  /usr/{bin,sbin,lib{,32,64,exec},@{CHOST}}/{,**}	r,
  /usr/local/lib{,32,64}/{,**}				r,
  /etc/profile.env					r,
  /etc/ld.so.conf					r,
  /etc/ld.so.conf.d/{,*}				r,
  /etc/revdep-rebuild/{,*}				r,
  /etc/env.d/python/config				r,
  /var/db/pkg/{,**}					r,
  /var/cache/revdep-rebuild/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/sh-thd.*					rw,
  owner /tmp/revdep-rebuild.**				rw,
  
  profile portage {
    #include <abstractions/base>
    #include <abstractions/python>
    #include <abstractions/python-exec>
    #include <abstractions/nameservice>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/portageq				Px,
    @{PYTHON_EXEC}/emerge				Px,
  }
}
