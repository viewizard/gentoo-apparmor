#include <tunables/global>
profile gentoolkit.glsa-check /usr/lib{,32,64}/python-exec/python*/glsa-check flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  /dev/pts/[0-9]* w,
  
  /bin/bash Cx -> shell,
  
  /etc/mime.types r,
  /etc/profile.env r,
  /etc/portage/** r,
  /usr/portage/** r,
  /usr/local/portage/** r,
  /usr/share/portage/config/* r,
  /var/db/pkg/ r,
  /var/db/pkg/** r,
  /var/cache/edb/** r,
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <local/thunar-custom-actions>
    
    /dev/tty rw,
    
    /bin/bash r,
    /bin/uname ix,
    
  }
  
}
