#include <tunables/global>
profile gentoolkit.glsa-check /usr/lib{,32,64}/python-exec/python[2-3].[0-9]*/glsa-check flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>
  
  /dev/pts/[0-9]* w,
  
  /bin/bash Cx -> shell,
  
  /etc/mime.types r,
  /etc/profile.env r,
  /etc/portage/** r,
  /usr/portage/** r,
  /usr/local/portage/** r,
  /usr/share/portage/config/* r,
  /var/db/pkg/ r,
  /var/db/pkg/** r,
  /var/cache/edb/** r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /bin/uname ix,
    
  }
  
}


profile gentoolkit.equery /usr/lib{,32,64}/python-exec/python[2-3].[0-9]*/equery flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  /dev/pts/[0-9]* w,
  @{PROC}/@{pid}/fd/ r,
  
  /bin/bash Cx -> shell,
  
  /etc/profile.env r,
  /etc/terminfo/x/xterm r,
  /etc/portage/** r,
  /usr/portage/** r,
  /usr/local/portage/** r,
  /usr/share/portage/config/* r,
  /var/db/pkg/ r,
  /var/db/pkg/** r,
  /var/cache/edb/ r,
  /var/cache/edb/** r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /bin/uname ix,
    
  }
  
}


