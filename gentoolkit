    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
  }
}

profile gentoolkit.eclean @{PYTHON_EXEC}/eclean {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/ncurses>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  capability chown,
  capability setuid,
  capability setgid,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/stty						Px,
  /usr/bin/sandbox					cx,
  /usr/bin/id						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/profile.env					r,
  /etc/eclean/{,*}					r,
  /etc/portage/**					r,
  /usr/portage/**					r,
  /usr/portage/distfiles/**				rw,
  /usr/portage/packages/**				rwk,
  /usr/local/portage/**					r,
  /usr/share/portage/config/*				r,
  /var/db/pkg/{,**}					r,
  /var/cache/edb/{,**}					rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/??????					rw,
  owner /tmp/tmp??????					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
  }
  
  profile sandbox /usr/bin/sandbox {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/sandbox					mr,
    @{shell}						px -> gentoolkit_eclean_sandbox_shell,
    
    # READS/WRITES -------------------------------------
    /etc/sandbox.conf					r,
    /etc/sandbox.d/{,**}				r,
  }
}

profile gentoolkit_eclean_sandbox_shell {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /usr/lib{,32,64}/portage/@{PYTHON}/ebuild.sh		Px,
}

profile gentoolkit.revdep-rebuild @{PYTHON_EXEC}/revdep-rebuild {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  @{PYTHON_EXEC_WRAPPER}				Cx -> portage,
  /usr/bin/scanelf					Cx,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /{bin,sbin,usr,opt,lib{,32,64}}/			r,
  /{bin,sbin,opt,lib{,32,64}}/**			r,
  /usr/{bin,sbin,lib{,32,64,exec},@{CHOST}}/{,**}	r,
  /usr/local/lib{,32,64}/{,**}				r,
  /etc/profile.env					r,
  /etc/ld.so.conf					r,
  /etc/ld.so.conf.d/{,*}				r,
  /etc/revdep-rebuild/{,**}				r,
  /etc/portage/{,**}					r,
  /usr/portage/{,**}					r,
  /usr/share/portage/{,**}				r,
  /usr/local/portage/{,**}				r,
  /var/db/pkg/{,**}					r,
  /var/cache/edb/dep/usr/local/portage/{,**}		r,
  /var/cache/revdep-rebuild/{,**}			rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
  }
  
  profile portage {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/emerge				Px,
  }
  
  profile scanelf /usr/bin/scanelf {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/scanelf					mr,
    
    # READS/WRITES -------------------------------------
    /							r,
    /{bin,sbin,opt,lib{,32,64}}/**			r,
    /usr/{bin,sbin,lib{,32,64,exec},@{CHOST}}/**	r,
    /usr/local/lib{,32,64}/**				r,
  }
}
