profile gentoolkit.revdep-rebuild /usr/bin/revdep-rebuild{,.sh} flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>
  
  
  capability fsetid,
  capability chown,
  
  /dev/tty rw,
  /dev/pts/[0-9]* w,
  
  /usr/lib{,32,64}/python-exec/python-exec2 Cx -> portageq,
  
  / r,
  /{bin,sbin,usr,opt,lib,lib32,lib64}/ r,
  /{bin,sbin,opt,lib,lib32,lib64}/** ixmr,
  /usr/{bin,sbin,lib,lib32,lib64,libexec,x86_64-pc-linux-gnu}/ r,
  /usr/{bin,sbin,lib,lib32,lib64,libexec,x86_64-pc-linux-gnu}/** ixmr,
  /usr/local/lib{,32,64}/ r,
  /usr/local/lib{,32,64}/** ixmr,
  
  /etc/profile.env r,
  /etc/ld.so.conf r,
  /etc/ld.so.conf.d/{,*} r,
  /etc/revdep-rebuild/{,*} r,
  /etc/env.d/python/config r,
  /etc/terminfo/x/xterm r,
  
  /var/cache/revdep-rebuild/ r,
  /var/cache/revdep-rebuild/* rw,
  
  
  profile portageq {
    #include <abstractions/base>
    
    /bin/env r,
    
    /usr/lib{,32,64}/python-exec/@{PYTHON}/portageq Px,
    
    /etc/env.d/python/config r,
    
  }
  
}
