#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*.{ogg,mp3,mp4,wma,s3m,stm,wav,m3u,OGG,MP3,MP4,WMA,S3M,STM,WAV,M3U}"

profile audacious /usr/bin/audacious {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/executable-binary-helper>
  #include <abstractions/program-work-with-disk-rwk-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/audacious					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/lib{,32,64}/audacious/{,*/}			r,
  /usr/lib{,32,64}/audacious/*/*.so			mr,
  /usr/share/audacious/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/audacious/			rw,
  owner @{HOME}/.config/audacious/**			rwk,
}
