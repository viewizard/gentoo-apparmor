#include <local/tunables.d/>

profile cronbase.run-crons /usr/sbin/run-crons {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/run-crons					r,
  @{shell}						mr,
  /bin/ln						Cx,
  /bin/cat						Cx,
  /bin/echo						Px,
  /bin/rm						Cx,
  /bin/tr						Px,
  /bin/touch						Cx,
  /bin/readlink						Cx,
  /usr/bin/find						Cx,
  /usr/bin/whoami					Px,
  /usr/bin/logger					Px,
  /etc/cron.{daily,hourly,monthly,weekly}/*		Px,
  
  # READS/WRITES ---------------------------------------
  /etc/cron.*/						r,
  
  profile ln /bin/ln {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/ln						mr,
    
    # READS/WRITES -------------------------------------
    /run/lock/cron.*					w,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    owner @{PROC}/@{pids}/cmdline			r,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # READS/WRITES -------------------------------------
    /run/lock/cron.*					w,
  }
  
  profile touch /bin/touch {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/touch						mr,
    
    # READS/WRITES -------------------------------------
    /var/spool/cron/lastrun/cron.*			w,
  }
  
  profile readlink /bin/readlink {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/readlink					mr,
  }
  
  profile find /usr/bin/find {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/find					mr,
    /bin/rm						Px -> cronbase_rm,
    
    # READS/WRITES -------------------------------------
    /var/spool/cron/lastrun/				r,
    
    # NOISY --------------------------------------------
    deny /						r,
  }
}

# IMPROVE! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile cronbase_rm {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /bin/rm						mr,
  
  # READS/WRITES ---------------------------------------
  /var/spool/cron/lastrun/cron.*			w,
}
