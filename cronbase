#include <tunables/global>
#include <local/cron-scripts-profiles>
profile cronbase.run-crons /usr/sbin/run-crons {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  /dev/tty rw,
  
  /bin/bash r,
  /usr/sbin/run-crons r,
  
  /bin/ln ix,
  /bin/cat ix,
  /bin/echo ix,
  /bin/rm ix,
  /bin/tr ix,
  /bin/touch ix,
  /bin/readlink ixr,
  /bin/sed ix,
  /usr/bin/diff ix,
  /usr/bin/find ix,
  /usr/bin/whoami ix,
  /usr/bin/logger Px,
  
  # Make sure, that all cron scripts have profile in "local/cron-scripts-profiles"!
  /etc/cron.*/ r,
  /etc/cron.*/* Pxr,
  
  /run/lock/cron.* rw,
  /var/spool/cron/lastrun/{,*} rw,
  
  # Noisy
  deny / r,
  
}
