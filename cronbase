#include <tunables/global>
#include <local/cron-scripts-profiles>

profile cronbase.run-crons /usr/sbin/run-crons {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/run-crons					r,
  @{shell}						mr,
  /bin/ln						ix,
  /bin/cat						ix,
  /bin/echo						Px,
  /bin/rm						ix,
  /bin/tr						Px,
  /bin/touch						ix,
  /bin/readlink						ixr,
  /bin/sed						ix,
  /usr/bin/diff						ix,
  /usr/bin/find						ix,
  /usr/bin/whoami					Px,
  /usr/bin/logger					Px,
  # Make sure, that all cron scripts have
  # profile in "local/cron-scripts-profiles"!
  /etc/cron.{daily,hourly,monthly,weekly}/*		Pxr,
  
  # READS/WRITES ---------------------------------------
  /etc/cron.*/ r,
  /run/lock/cron.* rw,
  /var/spool/cron/lastrun/{,*} rw,
  
  # NOISY ----------------------------------------------
  deny / r,
}
