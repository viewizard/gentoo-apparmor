#include <tunables/global>

profile pam-script /etc/security/pam-script/pam_script* flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/security/pam-script/pam_script*			r,
  @{shell}						Cxmr,	# Все правильно, запуск и mmap.
  /bin/dirname						Px,
  /bin/basename						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/security/pam-script/pam-script.d/{,**} r,
  
  profile shell @{shell} flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					w,
    /dev/pts/[0-9]*					w,
    
    # EXECUTABLES --------------------------------------
    /etc/security/pam-script/pam-script.d/pam_script*	r,
    @{shell}						mr,
  }
}
