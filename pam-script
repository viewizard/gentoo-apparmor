#include <tunables/global>
profile pam-script /etc/security/pam-script/pam_script* flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability setuid,
  
  /dev/tty rw,
  
  /etc/security/pam-script/pam_script* r,
  /bin/bash mrCx -> shell,
  /bin/dirname ix,
  /bin/basename ix,
  
  /etc/security/pam-script/pam-script.d/{,**} r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    /dev/tty rw,
    /dev/tty[0-9]* w,
    /dev/pts/[0-9]* w,
    
    /etc/security/pam-script/pam-script.d/pam_script* r,
    /bin/bash mr,
    
  }
  
}
