#include <tunables/global>

profile xdg-utils.xdg-open /usr/bin/xdg-open {
  #include <abstractions/base>
  #include <abstractions/dbus>
  #include <abstractions/dbus-session>
  #include <abstractions/freedesktop.org>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xdg-open					r,
  @{shell}						mr,
  /bin/grep						ix,
  /usr/bin/exo-open					Px,
  /usr/bin/dbus-send					Px,
  /usr/bin/xprop					ix,
}

profile xdg-utils.xdg-email /usr/bin/xdg-email {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xdg-email					r,
  @{shell}						mr,
  /bin/sed						ix,
  /usr/bin/which					Px,
  /usr/bin/exo-open					Px,
}

profile xdg-utils.xdg-screensaver /usr/bin/xdg-screensaver {
  #include <abstractions/base>
  #include <abstractions/dbus-session>
  #include <abstractions/X>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xdg-screensaver				r,
  @{shell}						mr,
  /bin/grep						ix,
  /bin/mv						ix,
  /bin/sed						ix,
  /bin/hostname						ix,
  /usr/bin/which					Px,
  /usr/bin/dbus-send					Px,
  /usr/bin/xset						ix,
  /usr/bin/xautolock					Px,
}

# Первоначально был дочерним профилем chromium, требует доработки.
# Тестировать с chromium.
profile xdg-utils.xdg-settings /usr/bin/xdg-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/shell>
  #include <abstractions/gtk>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xdg-settings					mr,
  # Checking default browser
  @{shell}						mr,
  /bin/grep						ixr,
  /bin/readlink						ixr,
  /bin/sed						ixr,
  /usr/bin/which					Pxr,
  /usr/bin/basename					Pxr,
  /usr/bin/cut						ixr,
  # Setting the default browser
  /bin/mkdir						ix,
  /bin/mv						ix,
  /bin/touch						ix,
  /bin/cut						ix,
  /bin/dirname						Px,
  /usr/bin/gconftool-2					ix,
  /usr/bin/[gm]awk					ixr,
  /usr/bin/xdg-mime					ixr,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/xfce4/helpers.rc				r,
  owner @{HOME}/.config/xfce4/helpers.rc		r,
  owner @{HOME}/.local/share/applications/		w,
  owner @{HOME}/.local/share/applications/mimeapps.list* rw,
  
  # NOISY ----------------------------------------------
  deny @{shell}						x,	# checking default browser
}

profile xdg_open_root {
  #include <abstractions/base>
  #include <abstractions/dbus>
  #include <abstractions/dbus-session>
  #include <abstractions/freedesktop.org>
  #include <abstractions/nameservice>
  #include <abstractions/X>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xdg-open					r,
  @{shell}						mr,
  /bin/grep						ix,
  /usr/bin/exo-open					Px -> exo_open_root,
  /usr/bin/dbus-send					Px,
  /usr/bin/xprop					ix,
}

profile xdg_email_root {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xdg-email					r,
  @{shell}						mr,
  /bin/sed						ix,
  /usr/bin/which					Px,
  /usr/bin/exo-open					Px -> exo_open_root,
}
