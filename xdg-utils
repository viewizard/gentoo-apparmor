#include <local/tunables.d/>

profile xdg-utils.xdg-open /usr/bin/xdg-open flags=(attach_disconnected) {
  #include <abstractions/base>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/freedesktop.org>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xdg-open					r,
  @{shell}						mr,
  /bin/grep						Cx,	# sys-apps/grep
  /bin/egrep						Cx,	# sys-apps/grep
  /usr/bin/exo-open					Px,	# xfce-base/exo
  /usr/bin/dbus-send					Px,	# sys-apps/dbus
  
  # DENY INHERIT ---------------------------------------
  deny unix peer=(label="wps-office"),				# app-office/wps-office, wps-office
  deny unix peer=(label="qpdfview"),				# app-text/qpdfview, qpdfview
  deny unix peer=(label="local.home.evelauncher"),		# local.home.evelauncher
  deny unix peer=(label="teamspeak-client-bin.teamspeak"),	# media-sound/teamspeak-client-bin, teamspeak-client-bin.teamspeak
  deny unix peer=(label="keepassxc"),				# app-admin/keepassxc, keepassxc
  deny network netlink raw,					# local.home.evelauncher
  deny network inet dgram,					# media-sound/teamspeak-client-bin, teamspeak-client-bin.teamspeak
  deny network inet6 dgram,					# media-sound/teamspeak-client-bin, teamspeak-client-bin.teamspeak
  deny network inet stream,					# local.home.evelauncher
  deny network inet6 stream,					# local.home.evelauncher
  deny /dev/shm/.org.chromium.Chromium.*		ra,	# local.home.evelauncher
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
  deny /usr/share/qt[0-9]*/**				r,	# media-sound/teamspeak-client-bin, teamspeak-client-bin.teamspeak
  deny /usr/share/pyfa/imgs.zip				r,	# games-util/pyfa, pyfa
  deny /run/user/[0-9]*/poedit.lock			w,	# app-i18n/poedit, poedit
  deny @{HOME}/.local/share/poedit/TranslationMemory/*	rw,	# app-i18n/poedit, poedit
  deny @{HOME}/.kingsoft/office6/**			rw,	# app-office/wps-office, wps-office
  deny @{HOME}/.ts3client/**				rw,	# media-sound/teamspeak-client-bin, teamspeak-client-bin.teamspeak
  deny @{HOME}/evelauncher/**				r,	# local.home.evelauncher
  deny @{HOME}/.local/share/CCP/**			rw,	# local.home.evelauncher
  deny @{HOME}/.pyfa/Pyfa-[0-9]*.log			w,	# games-util/pyfa, pyfa
  deny @{HOME_CACHE}/CCP/**				rw,	# local.home.evelauncher
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile egrep /bin/egrep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/egrep						r,
    @{shell}						mr,
    /bin/grep						ix,	# sys-apps/grep		# Все правильно, для egrep используем с ix.
  }
}

profile xdg-utils.xdg-email /usr/bin/xdg-email {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xdg-email					r,
  @{shell}						mr,
  /bin/sed						Cx,	# sys-apps/sed
  /usr/bin/which					Px,	# sys-apps/which
  /usr/bin/exo-open					Px,	# xfce-base/exo
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
}

profile xdg-utils.xdg-screensaver /usr/bin/xdg-screensaver {
  #include <abstractions/base>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/X>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xdg-screensaver				r,
  @{shell}						mr,
  /bin/grep						Cx,	# sys-apps/grep
  /bin/mv						Cx,	# sys-apps/coreutils
  /bin/sed						Cx,	# sys-apps/sed
  /bin/hostname						Px,	# sys-apps/net-tools
  /usr/bin/which					Px,	# sys-apps/which
  /usr/bin/dbus-send					Px,	# sys-apps/dbus
  /usr/bin/xset						ix,	# x11-apps/xset		# FIX ME! Вынести в отдельный профиль.
  /usr/bin/xautolock					Px,	# x11-misc/xautolock
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile mv /bin/mv {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/mv						mr,
  }
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
}

# Первоначально был дочерним профилем chromium, тестировать с chromium.
# BUG! (модуль v3.6) При запуске xdg-settings в chromium с Px, выводит
# в kernel.log дамп на AA_BUG: security/apparmor/file.c:136 aa_audit_file
# если в настройках хромиума попытаться установить хромиум браузером
# по умолчанию (в любом случае, в XFCE4 такой метод не работает).
profile xdg-utils.xdg-settings /usr/bin/xdg-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xdg-settings					mr,
  # Checking default browser
  @{shell}						mr,
  /bin/grep						Cx,	# sys-apps/grep
  /bin/readlink						Cx,	# sys-apps/coreutils
  /bin/sed						Cx,	# sys-apps/sed
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/mv						Cx,	# sys-apps/coreutils
  /bin/touch						Cx,	# sys-apps/coreutils
  /bin/cut						Cx,	# sys-apps/coreutils
  /bin/dirname						Px,	# sys-apps/coreutils
  /usr/bin/which					Px,	# sys-apps/which
  /usr/bin/basename					Px,	# sys-apps/coreutils
  /usr/bin/gconftool-2					Px,	# gnome-base/gconf	# Detect proxy settings for gnome2/gnome3.
  /usr/bin/gawk						Cx,	# sys-apps/gawk
  /usr/bin/xdg-mime					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/xfce4/helpers.rc				r,
  owner @{HOME}/.config/xfce4/helpers.rc		r,
  owner @{HOME}/.local/share/applications/		w,
  owner @{HOME}/.local/share/applications/mimeapps.list* rw,
  
  # NOISY ----------------------------------------------
  deny @{shell}						x,	# checking default browser
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
    
    # READS/WRITES -------------------------------------
    owner @{HOME}/.config/xfce4/helpers.rc		r,
  }
  
  profile readlink /bin/readlink {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/readlink					mr,
  }
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile mv /bin/mv {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mv						mr,
  }
  
  profile touch /bin/touch {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/touch						mr,
  }
  
  profile cut /bin/cut {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cut						mr,
  }
  
  profile gawk /usr/bin/gawk {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/gawk						mr,
  }
}

profile xdg-utils.xdg-mime /usr/bin/xdg-mime {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xdg-mime					mr,
}

profile xdg_open_root {
  #include <abstractions/base>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/freedesktop.org>
  #include <abstractions/nameservice>
  #include <abstractions/X>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xdg-open					r,
  @{shell}						mr,
  /bin/uname						Px,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/egrep						Cx,	# sys-apps/grep
  /usr/bin/exo-open					Px -> exo_open_root,	# xfce-base/exo
  /usr/bin/dbus-send					Px,	# sys-apps/dbus
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile egrep /bin/egrep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/egrep						r,
    @{shell}						mr,
    /bin/grep						ix,	# Все правильно, для egrep используем с ix.
  }
}

