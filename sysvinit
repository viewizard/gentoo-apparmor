#include <tunables/global>
profile sysvinit.halt /sbin/{halt,poweroff,reboot} {
  #include <abstractions/base>
  
  capability sys_boot,
  
  /sbin/{halt,poweroff,reboot} mr,
  /sbin/shutdown Px,
  
  /run/utmp rk,
  
  /var/log/wtmp wk,
  
}

profile sysvinit.shutdown /sbin/shutdown {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability setuid,
  capability dac_override,
  capability sys_tty_config,
  
  /dev/tty[0-9]* w,
  /dev/initctl w,
  /dev/pts/[0-9]* w,
  
  /sbin/shutdown mr,
  /sbin/init Px,
  
  /run/shutdown.pid w,
  /run/utmp rk,
  
}

profile sysvinit.init /sbin/init {
  #include <abstractions/base>
  
  capability sys_boot,
  capability sys_admin,
  capability sys_tty_config,
  capability kill,
  
  /dev/tty[0-9]* rw,
  /dev/initctl rw,
  /dev/console rw,
  
  /sbin/init Pxmr,
  /sbin/openrc Px,
  /sbin/{halt,poweroff,reboot} Px,
  /sbin/agetty Px,
  /sbin/shutdown Px,
#  /sbin/sulogin Px,
#  /etc/X11/startDM.sh Px,
  
  /etc/inittab r,
  
  /run/utmp rwk,
  
  /var/log/wtmp wk,
  
}

profile sysvinit.killall5 /sbin/killall5 flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability sys_ptrace,
  
  /dev/tty[0-9]* w,
  @{PROC}/ r,
  @{PROC}/@{pid}/{stat,status,cmdline} r,
  
  /sbin/killall5 mr,
  
}
