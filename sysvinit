#include <local/tunables.d/>

profile sysvinit.halt /sbin/{halt,poweroff,reboot} {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_boot,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /dev/block/						r,
  @{SYS_D}/block/					r,
  @{SYS_D}/devices/pci@{PCI2}/**/{removable,manage_start_stop} r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/{halt,poweroff,reboot}				mr,
  /sbin/shutdown					Px,
  
  # READS/WRITES ---------------------------------------
  /run/utmp						rk,
  /var/log/wtmp						wk,
}

profile sysvinit.shutdown /sbin/shutdown {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability dac_override,
  capability sys_tty_config,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/initctl						w,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /sbin/shutdown					mr,
  /sbin/init						Px,
  
  # READS/WRITES ---------------------------------------
  /run/shutdown.pid					w,
  /run/utmp						rk,
}

profile sysvinit.init /sbin/init {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_boot,
  capability sys_admin,
  capability sys_tty_config,
  capability kill,
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term),
  signal (receive) set=(xfsz),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/initctl						rw,
  /dev/console						rw,
  
  # EXECUTABLES ----------------------------------------
  /sbin/init						Pxmr,
  /sbin/openrc						Px,	# sys-apps/openrc
  /sbin/{halt,poweroff,reboot}				Px,
  /sbin/agetty						Px,	# sys-apps/util-linux
  /sbin/shutdown					Px,
#  /sbin/sulogin					Px,	# sys-apps/util-linux	# не задействуем
#  /etc/X11/startDM.sh					Px,	# x11-apps/xinit	# не задействуем
  
  # READS/WRITES ---------------------------------------
  /etc/inittab						r,
  /run/utmp						rwk,
  /var/log/wtmp						wk,
}

profile sysvinit.killall5 /sbin/killall5 {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # SIGNAL ---------------------------------------------
  signal (send),						# Все правильно, должны иметь возможность передать
  								# любой сигнал любому процессу.
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC_D}/						r,
  audit @{PROC_D}/@{pid}/{stat,status,cmdline}		r,	# FIX ME! @{pid}/@{pids} audit 18.10.2017
  
  # EXECUTABLES ----------------------------------------
  /sbin/killall5					mr,
}
