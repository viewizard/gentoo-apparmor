#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="{[^.]*.*,.~*}"

profile libreoffice /usr/{bin,lib64/libreoffice/program}/soffice {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  
  /bin/dirname ix,
  /bin/basename ix,
  /bin/grep ix,
  /bin/uname ix,
  /bin/ls ix,
  /bin/sed ix,
  /bin/bash r,
  /usr/lib64/libreoffice/program/oosplash Px,
  
}


profile libreoffice.oosplash /usr/lib64/libreoffice/program/oosplash {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  /usr/lib64/libreoffice/program/javaldx Px,
  /usr/lib64/libreoffice/program/soffice.bin Px,
  
  owner @{HOME}/.Xauthority r,
  
}


profile libreoffice.javaldx /usr/lib64/libreoffice/program/javaldx {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  owner @{HOME}/.config/libreoffice/ rw,
  owner @{HOME}/.config/libreoffice/** rwk,
  
}


profile libreoffice.bin /usr/lib64/libreoffice/program/soffice.bin {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/dbus-session>
  #include <abstractions/dconf>
  #include <abstractions/enchant>
  #include <abstractions/gtk>
  #include <abstractions/qt>
  #include <abstractions/nvidia>
  #include <abstractions/user-tmp>
  #include <abstractions/X>
  #include <abstractions/ssl_keys>
  #include <abstractions/cups-client>
  #include <abstractions/xdg-open>
  #include <abstractions/program-work-with-disk-rwk>
  #include <abstractions/nameservice>
  
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* rw,
  /sys/devices/system/cpu/ r,
  @{PROC}/version r,
  
  /bin/bash Cxr -> shell,
  
  /etc/OpenCL/vendors/{,*} r,
  /usr/lib64/libreoffice/{,**} r,
  /usr/share/liblangtag/** r,
  /usr/share/libexttextcat/{,*} r,
  /opt/icedtea-bin-*/jre/lib/** rm,
  /tmp/.* m,  
  
  owner @{HOME}/.config/libreoffice/ rw,
  owner @{HOME}/.config/libreoffice/** rwk,
  owner @{HOME}/.languagetool-ooo.cfg rw,
  
  # Noisy
  deny @{HOMEDIRS}/* w,
  deny @{HOMEDIRS}/*/ w,
  deny /usr/lib64/libreoffice/share/uno_packages/cache/* w,
  
  
  profile shell {
    #include <abstractions/base>
    #include <abstractions/xdg-open>
    
    /dev/tty rw,
    
    /bin/bash r,
    /bin/sed ix,
    /bin/grep ix,
    /usr/bin/paperconf ix,
    /usr/lib64/libreoffice/program/open-url ix,
    
  }
  
}
