#include <tunables/global>

profile pulseaudio /usr/bin/pulseaudio {
  #include <abstractions/base>
  #include <abstractions/audio>
  #include <abstractions/dbus-session>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /sys/bus/						r,
  /sys/class/						r,
  /sys/class/sound/					r,
  /sys/devices/pci[0-9]*/**/sound/card*/uevent		r,
  /sys/devices/pci[0-9]*/**/sound/card*/pcm*/pcm_class	r,
  /sys/devices/system/cpu/				r,
  /sys/devices/virtual/dmi/id/{sys_vendor,board_vendor,bios_vendor} r,
  owner @{PROC}/@{pid}/fd/				r,
  owner @{PROC}/@{pid}/stat				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pulseaudio					ixmr,
  /usr/libexec/pulse/gconf-helper			ix,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /usr/lib{,32,64}/pulseaudio/{,**}			r,
  /usr/lib{,32,64}/pulse-*/modules/**			m,
  /usr/share/pulseaudio/**				r,
  /usr/share/applications/{,*}				r,
  /run/udev/data/+sound:card*				r,
  owner /run/user/*/pulse/autospawn.lock		rwk,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/pulse/				rw,
  owner @{HOME}/.config/pulse/**			rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/pulse-*/autospawn.lock			rwk,
}

profile pulseaudio.start-pulseaudio-x11 /usr/bin/start-pulseaudio-x11 {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/start-pulseaudio-x11				r,
  @{shell}						mr,
  /usr/bin/pactl					Px,
}

profile pulseaudio.pactl /usr/bin/pactl {
  #include <abstractions/base>
  #include <abstractions/audio>
  #include <abstractions/X>
  #include <abstractions/dbus-session>
  
#  capability dac_read_search,					# RBAC! Нужно только для выполнения под root-ом
#  capability dac_override,					# если сервер запущен от имени пользователя.
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  /dev/pts/[0-9]*					w,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pactl					mr,
  /usr/bin/pulseaudio					Px,
  
  # USERS ----------------------------------------------
#  @{HOME}/.Xauthority					r,	# RBAC! Нужно только для выполнения под root-ом
  								# если сервер запущен от имени пользователя.
}
