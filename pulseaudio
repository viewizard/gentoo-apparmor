#include <local/tunables.d/>

profile pulseaudio /usr/bin/pulseaudio {
  #include <abstractions/base>
  #include <abstractions/audio>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/consolekit>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/nameservice>
  #include <abstractions/X-authentication-strict>
  #include <abstractions/X-connection-strict>
  
  # PTRACE ---------------------------------------------
  ptrace (trace) peer=@{profile_name},
  
  # SIGNAL ---------------------------------------------
  signal (receive) set=(usr2) peer="pulseaudio.pacmd",
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /sys/bus/						r,
  /sys/class/						r,
  /sys/class/sound/					r,
  /sys/devices/pci@{PCI2}/@{PCI4}/sound/card[0-9]*/uevent r,
  /sys/devices/pci@{PCI2}/**/@{PCI4}/sound/card[0-9]*/uevent r,
  /sys/devices/pci@{PCI2}/@{PCI4}/sound/card[0-9]*/pcm*/pcm_class r,
  /sys/devices/pci@{PCI2}/**/@{PCI4}/sound/card[0-9]*/pcm*/pcm_class r,
  /sys/devices/system/cpu/				r,
  /sys/devices/virtual/dmi/id/{sys_vendor,board_vendor,bios_vendor} r,
  owner @{PROC}/@{pid}/fd/				r,
  owner @{PROC}/@{pids}/stat				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pulseaudio					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /usr/lib{,32,64}/pulseaudio/{,**}			r,
  /usr/lib{,32,64}/pulse-*/modules/**			m,
  /usr/share/pulseaudio/**				r,
  /usr/share/applications/{,*}				r,
  /run/udev/data/+sound:card*				r,
  owner /run/user/@{UID}/{,pulse/}			w,
  owner /run/user/@{UID}/pulse/autospawn.lock		rwk,
  owner /run/user/@{UID}/pulse/cli			rw,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/pulse/				rw,
  owner @{HOME}/.config/pulse/**			rwk,
  
  # TEMP -----------------------------------------------
  audit owner /tmp/pulse-*/{,*}				rwk,	# FIX ME! audit 26.11.2017
}

profile pulseaudio.start-pulseaudio-x11 /usr/bin/start-pulseaudio-x11 {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/start-pulseaudio-x11				r,
  @{shell}						mr,
  /usr/bin/pactl					Px,
}

profile pulseaudio.pactl /usr/bin/pactl {
  #include <abstractions/base>
  #include <abstractions/audio>
  #include <abstractions/X>					# RBAC! <abstractions/X_sudo> если запуск с sudo.
  #include <abstractions/dbus/session-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pactl					mr,
}

profile pulseaudio.pacmd /usr/bin/pacmd {
  #include <abstractions/base>
  
  # PTRACE ---------------------------------------------
  ptrace (trace) peer="pulseaudio",
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(usr2) peer="pulseaudio",
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pids}/stat				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pacmd					mr,
  
  # READS/WRITES ---------------------------------------
  owner /run/user/@{UID}/pulse/				r,
  owner /run/user/@{UID}/pulse/pid			rk,
  owner /run/user/@{UID}/pulse/cli			rw,
}
