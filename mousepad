#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"

profile mousepad /usr/bin/mousepad {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/gtk>
  #include <abstractions/cups-client>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/nameservice>
  #include <abstractions/program-work-with-disk-rwk-strict>
  #include <abstractions/binary-helper-strict-web>
  #include <abstractions/fs-access-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/mousepad					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/gtksourceview-[2-9]*/**			r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/Mousepad/			rw,
  owner @{HOME}/.config/Mousepad/*			rwk,
}

profile mousepad_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/gtk>
  #include <abstractions/cups-client>
  #include <abstractions/video>
  #include <abstractions/X_sudo>
  #include <abstractions/dconf>
  #include <abstractions/nameservice>
  #include <abstractions/program-work-with-disk-rwk-strict>
  #include <abstractions/binary-helper-strict-web_root>
  #include <abstractions/fs-access-by-pattern-systemusers>
  
  # CAPABILITIES ---------------------------------------
  capability fowner,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/mousepad					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/gtksourceview-[2-9]*/**			r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/Mousepad/			rw,
  owner @{HOME}/.config/Mousepad/*			rwk,
}
