#include <local/tunables.d/>

profile iceauth /usr/bin/iceauth {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/iceauth					mr,
  
  # USERS ----------------------------------------------
  owner @{HOME_D}/.ICEauthority{,-@{TMP}}		rw,
  owner link subset @{HOME_D}/.ICEauthority{,-@{TMP}}	-> @{HOME_D}/.ICEauthority{,-@{TMP}},
  owner @{HOME_D}/.xfce4-session.verbose-log		w,	# xfce-base/xfce4-session
  
  # TEMP -----------------------------------------------
  owner /tmp/.xfsm-ICE-@{TMP6}				rw,
}
