#include <tunables/global>
profile iceauth /usr/bin/iceauth flags=(complain) {
  #include <abstractions/base>
  
  /usr/bin/iceauth mr,
  
  owner @{HOME}/.ICEauthority* rwl,
  
  owner /tmp/.xfsm-ICE-* rw,
  
}
