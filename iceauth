#include <local/tunables.d/>

profile iceauth /usr/bin/iceauth {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/iceauth					mr,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.ICEauthority*				rw,
  owner link subset @{HOME}/.ICEauthority*		-> /{home/*,root}/.ICEauthority*,	# LINK! @{HOME}
  owner @{HOME}/.xfce4-session.verbose-log		w,	# XFCE4
  
  # TEMP -----------------------------------------------
  owner /tmp/.xfsm-ICE-*				rw,
}
