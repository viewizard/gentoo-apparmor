# Оставляем в профиле использование ix.
# grub будет удален из систем, и заменен на использование uefi secure boot
# работающей непосредственно с подписанным цифровым сертификатом ядром.

#include <local/tunables.d/>

profile grub.grub-mkconfig /usr/sbin/grub-mkconfig {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/grub-mkconfig				r,
  @{shell}						mr,
  /bin/basename						Px,	# sys-apps/coreutils
  /bin/rm						Cx,	# sys-apps/coreutils
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/mv						Cx,	# sys-apps/coreutils
  /usr/bin/which					Px,	# sys-apps/which
  /usr/bin/gettext					Px,	# sys-devel/gettext
  /usr/bin/grub-script-check				Px,
  /usr/sbin/grub-probe					Px,
  /etc/grub.d/*						Px,
  
  # READS/WRITES ---------------------------------------
  /boot/grub/grub.cfg.new				w,
  /etc/default/grub					r,
  /etc/grub.d/						r,
  /usr/share/grub/{,**}					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/@{TMP_SH}					rw,
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # READS/WRITES -------------------------------------
    /boot/grub/grub.cfg.new				rw,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # READS/WRITES -------------------------------------
    /boot/grub/grub.cfg.new				w,
    
    # DENY INHERIT -------------------------------------
    /tmp/@{TMP_SH}					rw,
  }
  
  profile mv /bin/mv {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/mv						mr,
    
    # READS/WRITES -------------------------------------
    /boot/grub/grub.cfg{,.new}				rw,
  }
}

profile grub.grub-script-check /usr/bin/grub-script-check {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/grub-script-check				mr,
  
  # READS/WRITES ---------------------------------------
  /boot/grub/grub.cfg.new				rw,
}

profile grub.grub-mkrelpath /usr/bin/grub-mkrelpath {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/mountinfo			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/grub-mkrelpath				mr,
}

profile grub.grub.d /etc/grub.d/* {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/grub.d/*						r,
  @{shell}						mr,
  /bin/tr						Px,	# sys-apps/coreutils
  /bin/cut						Cx,	# sys-apps/coreutils
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/sed						Cx,	# sys-apps/sed
  /bin/tail						Cx,	# sys-apps/coreutils
  /bin/sort						Cx,	# sys-apps/coreutils
  /bin/head						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/fgrep						Cx,	# sys-apps/grep
  /bin/uname						Px,	# sys-apps/coreutils
  /bin/basename						Px,	# sys-apps/coreutils
  /bin/dirname						Px,	# sys-apps/coreutils
  /usr/bin/which					Px,	# sys-apps/which
  /usr/bin/gettext					Px,	# sys-devel/gettext
  /usr/bin/grub-mkrelpath				Px,
  /usr/sbin/grub-probe					Px,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /boot/						r,
  /boot/grub/grub.cfg.new				w,
  /usr/share/grub/{,**}					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/@{TMP_SH}					rw,
  
  profile cut /bin/cut {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cut						mr,
    
    # DENY INHERIT -------------------------------------
    /boot/grub/grub.cfg.new				w,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # DENY INHERIT -------------------------------------
    /boot/grub/grub.cfg.new				w,
    /tmp/@{TMP_SH}					rw,
  }
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
    
    # DENY INHERIT -------------------------------------
    /boot/grub/grub.cfg.new				w,
    /tmp/@{TMP_SH}					rw,
  }
  
  profile tail /bin/tail {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/tail						mr,
    
    # READS/WRITES -------------------------------------
    /etc/grub.d/40_custom				r,
    
    # DENY INHERIT -------------------------------------
    /boot/grub/grub.cfg.new				w,
  }
  
  profile sort /bin/sort {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # CAPABILITIES -------------------------------------
    capability mknod,
    
    # EXECUTABLES --------------------------------------
    /bin/sort						mr,
  }
  
  profile head /bin/head {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/head						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
    
    # DENY INHERIT -------------------------------------
    /boot/grub/grub.cfg.new				w,
  }
  
  profile fgrep /bin/fgrep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    /bin/fgrep						r,
    @{shell}						mr,
    /bin/grep						ix,	# sys-apps/grep		# Все правильно, для egrep используем с ix.
  }
}

profile grub.grub-probe /usr/sbin/grub-probe {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_rawio,
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					r,
  /dev/{,**/}						r,
  /dev/@{BLOCK_REAL}					r,
  /dev/mapper/control					rw,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/vendor	r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/{,*/}start r,
  @{PROC}/devices					r,
  owner @{PROC}/@{pid}/mountinfo			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/grub-probe					mr,
  /bin/udevadm						Px,	# sys-fs/eudev
  /sbin/lvm						Px,	# sys-fs/lvm2
}

profile grub.grub-install /usr/sbin/grub-install {
  #include <abstractions/base>
  
  # CAPABILITIES -------------------------------------
  capability sys_admin,
  capability sys_rawio,
  
  # PSEUDO ---------------------------------------------
  /dev/{,**}						r,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_REAL}					rw,
  /dev/mapper/control					rw,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/{,*/}start r,
  @{PROC}/devices					r,
  owner @{PROC}/@{pid}/mountinfo			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/grub-install				mr,
  @{shell}						Cx,
  /bin/kmod						Px,	# sys-apps/kmod
  /bin/udevadm						Px,	# sys-fs/eudev
  /sbin/lvm						Px,	# sys-fs/lvm2
  
  # READS/WRITES ---------------------------------------
  /boot/grub/{,**}					rw,
  /usr/share/grub/{,**}					r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    
    # READS/WRITES -------------------------------------
    /etc/default/grub					r,
  }
}
