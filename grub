# Оставляем в профиле использование ix.
# grub будет удален из систем, и заменен на использование uefi secure boot
# работающей непосредственно с подписанным цифровым сертификатом ядром.

#include <tunables/global>

profile grub.grub-mkconfig /usr/sbin/grub-mkconfig flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/mountinfo				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/grub-mkconfig				r,
  @{shell}						mr,
  /bin/basename						Px,
  /bin/dirname						Px,
  /bin/rm						ix,	# FS ACCESS!
  /bin/cat						ix,	# FS ACCESS!
  /bin/cut						ix,	# FS ACCESS!
  /bin/sed						ix,	# FS ACCESS!
  /bin/tr						Px,
  /bin/sort						ix,	# FS ACCESS!
  /bin/head						ix,	# FS ACCESS!
  /bin/grep						ix,	# FS ACCESS!
  /bin/fgrep						ixr,	# FS ACCESS!
  /bin/tail						ix,	# FS ACCESS!
  /bin/mv						ix,	# FS ACCESS!
  /bin/uname						Px,
  /usr/bin/which					Px,
  /usr/bin/gettext					ix,	# FIX ME! Вынести в отдельный профиль.
  /usr/bin/grub-script-check				ix,	# FIX ME! Вынести в отдельный профиль.
  /usr/bin/grub-mkrelpath				ix,	# FIX ME! Вынести в отдельный профиль.
  /usr/sbin/grub-probe					Px,
  /etc/grub.d/{,*}					ixr,	# FIX ME! Вынести в отдельный профиль.
  
  # READS/WRITES ---------------------------------------
  /							r,
  /boot/						r,
  /boot/grub/grub.cfg*					wr,
  /etc/default/grub					r,
  /usr/share/grub/{,**}					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/sh-thd.*					rw,
}

profile grub.grub-probe /usr/sbin/grub-probe flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_rawio,
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					r,
  /dev/{,**/}						r,
  /dev/@{BLOCK_REAL}					r,
  /dev/mapper/control					rw,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/vendor	r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/{,*/}start r,
  @{PROC}/devices					r,
  @{PROC}/@{pid}/mountinfo				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/grub-probe					mr,
  /bin/udevadm						Px,
  /sbin/lvm						Px,
}

profile grub.grub-install /usr/sbin/grub-install flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES -------------------------------------
  capability sys_admin,
  capability sys_rawio,
  
  # PSEUDO ---------------------------------------------
  /dev/{,**}						r,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_REAL}					rw,
  /dev/mapper/control					rw,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/{,*/}start r,
  @{PROC}/devices					r,
  @{PROC}/@{pid}/mountinfo				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/grub-install				mr,
  @{shell}						Cx,
  /bin/kmod						Px,
  /bin/udevadm						Px,
  /sbin/lvm						Px,
  
  # READS/WRITES ---------------------------------------
  /boot/grub/{,**}					rw,
  /usr/share/grub/{,**}					r,
  
  profile shell @{shell} flags=(complain) {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    
    # READS/WRITES -------------------------------------
    /etc/default/grub					r,
  }
}
