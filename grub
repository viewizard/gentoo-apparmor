#include <tunables/global>
profile grub.grub-mkconfig /usr/sbin/grub{,2}-mkconfig flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/user-tmp>
  
  /dev/tty rw,
  /dev/pts/[0-9]* w,
  @{PROC}/@{pid}/mountinfo r,
  
  /usr/sbin/grub{,2}-mkconfig r,
  /bin/bash r,
  /bin/basename ix,
  /bin/dirname ix,
  /bin/rm ix,
  /bin/cat ix,
  /bin/cut ix,
  /bin/sed ix,
  /bin/tr ix,
  /bin/sort ix,
  /bin/head ix,
  /bin/grep ix,
  /bin/fgrep ixr,
  /bin/tail ix,
  /bin/mv ix,
  /bin/uname ix,
  /usr/bin/which ix,
  /usr/bin/gettext ix,
  /usr/bin/grub{,2}-script-check ix,
  /usr/bin/grub{,2}-mkrelpath ix,
  /usr/sbin/grub{,2}-probe Px,
  /etc/grub.d/{,*} rix,
  
  / r,
  /boot/ r,
  /boot/grub/grub.cfg* wr,
  /etc/default/grub r,
  /usr/share/grub/{,**} r,
  
}


profile grub.grub-probe /usr/sbin/grub{,2}-probe flags=(complain) {
  #include <abstractions/base>
  
  capability sys_admin,
  
  /dev/{,**/} r,
  /dev/sd[a-z]{,[0-9]*} r,
  /dev/dm-[0-9]* r,
  /dev/mapper/control rw,
  /sys/devices/pci**/ata[0-9]*/**/block/sd[a-z]/sd[a-z][0-9]*/start r,
  /sys/devices/pci**/ata[0-9]*/**/vendor r,
  /sys/devices/pci**/usb[0-9]*/**/block/sd[a-z]/sd[a-z][0-9]*/start r,
  @{PROC}/devices r,
  @{PROC}/@{pid}/mountinfo r,
  
  /usr/sbin/grub{,2}-probe r,
  /bin/udevadm Px,
  /sbin/lvm Px,
  
}


profile grub.grub-install /usr/sbin/grub{,2}-install flags=(complain) {
  #include <abstractions/base>
  
  capability sys_admin,
  
  /dev/sd[a-z] rw,
  /dev/sd[a-z][0-9]* r,
  /dev/pts/[0-9]* w,
  /dev/mapper/control rw,
  /sys/devices/pci**/ata[0-9]*/**/block/sd[a-z]/sd[a-z][0-9]*/start r,
  /sys/devices/pci**/usb[0-9]*/**/block/sd[a-z]/sd[a-z][0-9]*/start r,
  @{PROC}/devices r,
  @{PROC}/@{pid}/mountinfo r,
  
  /usr/sbin/grub{,2}-install r,
  /bin/bash Cxr -> shell,
  /bin/kmod Px,
  /bin/udevadm Px,
  
  /boot/grub/{,**} rw,
  /usr/share/grub/{,**} r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    capability dac_override,
    capability dac_read_search,
    
    /dev/tty rw,
    /dev/pts/[0-9]* w,
    
    /bin/bash r,
    
    /etc/default/grub r,
    
  }
  
}
