#include <tunables/global>

profile eudev.udevadm /bin/udevadm flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/input/event[0-9]*				r,
  /dev/snd/**						w,
  /sys/bus/						r,
  /sys/class/						r,
  /sys/module/						r,
  /sys/class/*/						rw,
  /sys/bus/**/{,uevent}					rw,
  /sys/module/*/uevent					rw,
  /sys/devices/**/uevent				rw,
  /sys/module/block/parameters/events_dfl_poll_msecs	rw,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/** rw,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/**		rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/udevadm						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /run/udev/tags/{,**}					w,
}

profile eudev.udevd /sbin/udevd flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_module,
  capability sys_resource,
  capability net_admin,
  capability dac_override,
  capability chown,
  
  # PSEUDO ---------------------------------------------
  /dev/*						w,
  /dev/pts/[0-9]*					rw,
  /dev/input/event[0-9]*				r,
  /dev/snd/**						w,
  /dev/@{BLOCK_ALL}					rk,
  /dev/vg[0-9]*{,/*}					w,
  /dev/md/{,*:*}					rw,
  /dev/disk/{,**}					rw,
  /dev/input/{,**}					w,
  /dev/{block,char,mapper}/{,*}				w,
  /dev/bus/usb/**					w,
  /sys/bus/pci/slots/					r,
  /sys/**/uevent					rw,
  /sys/devices/pci[0-9]**/**				r,
  /sys/devices/virtual/**				r,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/queue/scheduler w,
  /sys/devices/pci[0-9]**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/queue/scheduler w,
  /sys/devices/**/input/input[0-9]*/{,capabilities/}*	r,
  /sys/devices/pnp[0-9]*/*/rtc/rtc[0-9]*/hctosys	r,
  /sys/module/block/parameters/events_dfl_poll_msecs	rw,
  /sys/module/coretemp/initstate			r,
  @{PROC}/cmdline					r,
  @{PROC}/@{pid}/oom_score_adj				rw,
  
  # EXECUTABLES ----------------------------------------
  /sbin/udevd						mr,
  /bin/bash						Cx -> shell,
  /sbin/dmsetup						Px,
  /sbin/mdadm						Px,
  /sbin/lvm						Px,
  /usr/sbin/alsactl					Px,
  /lib{,32,64}/udev/net.sh				Px,
  /lib{,32,64}/udev/nvidia-udev.sh			Px,
  /lib{,32,64}/udev/ata_id				Px,
  /lib{,32,64}/udev/scsi_id				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/group						r,
  /etc/udev/{,**}					r,
  /etc/modprobe.d/{,*}					r,
  /lib{,32,64}/udev/rules.d/{,*}			r,
  /lib{,32,64}/modprobe.d/{,*}				r,
  /lib{,32,64}/modules/[0-9]*-{hardened,gentoo}*/modules.{dep,alias,symbols,builtin}.bin r,
  /run/udev/control					w,
  /run/udev/rules.d/{,*}				r,
  /run/udev/queue					rw,
  /run/udev/tags/{,**}					w,
  /run/udev/{data,watch,links}/**			rw,
  /run/udev/watch{,.old}/{,[0-9]*}			rw,
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    /bin/bash						mr,
    /bin/sed						ix,
    /sbin/mdadm						Px,
  }
}

profile eudev.ata_id /lib{,32,64}/udev/ata_id flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_rawio,
  
  # PSEUDO ---------------------------------------------
  /dev/@{BLOCK_REAL}					r,
  
  # EXECUTABLES ----------------------------------------
  /lib{,32,64}/udev/ata_id				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
}

profile eudev.scsi_id /lib{,32,64}/udev/scsi_id flags=(complain) {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /lib{,32,64}/udev/scsi_id				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
}
