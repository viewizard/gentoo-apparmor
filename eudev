#include <tunables.d/>

profile eudev.udevadm /bin/udevadm {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability net_admin,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_REAL}					r,
  /dev/input/event[0-9]*				r,
  /dev/snd/**						w,
  /sys/bus/						r,
  /sys/class/						r,
  /sys/module/						r,
  /sys/class/*/						rw,
  /sys/bus/**/{,uevent}					rw,
  /sys/module/*/uevent					rw,
  /sys/devices/**/uevent				rw,
  /sys/module/block/parameters/events_dfl_poll_msecs	rw,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/** rw,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/**		rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/udevadm						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /run/udev/control					rw,
  /run/udev/tags/{,**}					w,
}

profile eudev.udevd /sbin/udevd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_module,
  capability sys_resource,
  capability sys_tty_config,
  capability net_admin,
  capability dac_override,
  capability dac_read_search,
  capability chown,
  capability mknod,
  capability fsetid,
  capability fowner,
  capability sys_rawio,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/{,*}						w,
  /dev/tty[0-9]*					rw,
  /dev/console						r,
  /dev/pts/[0-9]*					rw,
  /dev/dri/card[0-9]*					w,
  /dev/dri/render*					w,
  /dev/input/event[0-9]*				r,
  /dev/snd/**						w,
  /dev/@{BLOCK_ALL}					rk,
  /dev/vg[0-9]*{,/*}					w,
  /dev/md/{,*:*}					rw,
  /dev/disk/{,**}					rw,
  /dev/input/{,**}					w,
  /dev/{block,char,mapper}/{,*}				w,
  /dev/v4l/{,**}					w,
  /dev/bus/usb/**					rw,
  /sys/bus/pci/slots/					r,
  /sys/**/uevent					rw,
  /sys/devices/pci[0-9]**/**				r,
  /sys/devices/virtual/**				r,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/queue/scheduler w,
  /sys/devices/pci[0-9]**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/queue/scheduler w,
  /sys/devices/**/input/input[0-9]*/{,capabilities/}*	r,
  /sys/devices/pnp[0-9]*/*/rtc/rtc[0-9]*/hctosys	r,
  /sys/module/block/parameters/events_dfl_poll_msecs	rw,
  /sys/module/*/initstate				r,
  @{PROC}/cmdline					r,
  @{PROC}/@{pid}/oom_score_adj				rw,
  
  # EXECUTABLES ----------------------------------------
  /sbin/udevd						mr,
  @{shell}						Cx,
  /sbin/dmsetup						Px,
  /sbin/mdadm						Px,
  /sbin/lvm						Px,
  /usr/sbin/crda					Px,
  /usr/sbin/alsactl					Px,
  /lib{,32,64}/udev/net.sh				Px,
  /lib{,32,64}/udev/nvidia-udev.sh			Px,
  /lib{,32,64}/udev/ata_id				Px,
  /lib{,32,64}/udev/scsi_id				Px,
  /lib{,32,64}/udev/v4l_id				Px,
  /lib{,32,64}/udev/cdrom_id				Px,
  /usr/lib{,32,64}/ConsoleKit/udev-acl			Px,
  
  # READS/WRITES ---------------------------------------
  /etc/group						r,
  /etc/udev/{,**}					r,
  /etc/modprobe.d/{,*}					r,
  /lib{,32,64}/udev/rules.d/{,*}			r,
  /lib{,32,64}/modprobe.d/{,*}				r,
  /lib{,32,64}/modules/@{kernel_ver}/modules.{dep,alias,symbols,builtin}.bin r,
  /run/udev/**						rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/sed						Px -> eudev_udevd_sed,
    /sbin/mdadm						Px,
  }
}

# FIX ME! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile eudev_udevd_sed {
  #include <abstractions/base>
  
  # EXECUTABLES --------------------------------------
  /bin/sed						mr,
}

profile eudev.ata_id /lib{,32,64}/udev/ata_id {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_rawio,
  
  # PSEUDO ---------------------------------------------
  /dev/@{BLOCK_REAL}					r,
  
  # EXECUTABLES ----------------------------------------
  /lib{,32,64}/udev/ata_id				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
}

profile eudev.scsi_id /lib{,32,64}/udev/scsi_id {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /lib{,32,64}/udev/scsi_id				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
}

profile eudev.v4l_id /lib{,32,64}/udev/v4l_id {
  #include <abstractions/base>
  #include <abstractions/camera>
  
  # EXECUTABLES ----------------------------------------
  /lib{,32,64}/udev/v4l_id				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
}

profile eudev.cdrom_id /lib{,32,64}/udev/cdrom_id {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_rawio,
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/@{BLOCK_MEDIA}					r,
  @{PROC}/@{pid}/mountinfo				r,
  
  # EXECUTABLES ----------------------------------------
  /lib{,32,64}/udev/cdrom_id				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
}
