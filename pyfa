#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-rwk
@{USERS_DIR_rwk}="[^.]**"
@{USERS_FILE_rwk}="[^.]*.{emp,xml,txt,EMP,XML,TXT}"

profile pyfa @{PYTHON2_EXEC}/pyfa {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/python>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/nameservice>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/xdg-open>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/mounts				r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/env						mr,
  /sbin/ldconfig					Px,	# sys-libs/glibc
  /usr/bin/fc-list					Px,	# media-libs/fontconfig
  deny /usr/bin/chromium-browser			x,	# www-client/chromium	# Должен работать только через xdg-open.
  
  # READS/WRITES ---------------------------------------
  /etc/							r,
  /etc/gentoo-release					r,	# sys-apps/baselayout
  /usr/share/pyfa/					r,
  /usr/share/pyfa/*					rk,
  @{PYTHON2_PACKAGES}/wxversion.pyc{,.*}		w,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.pyfa/					rw,
  owner @{HOME}/.pyfa/**				rwk,
  owner @{HOME}/.config/matplotlib/{,**}		rw,	# dev-python/matplotlib
  owner @{HOME_CACHE}/matplotlib/{,**}			rw,	# dev-python/matplotlib
  
  # TEMP -----------------------------------------------
  audit owner /tmp/tmp??????				rw,	# FIX ME! audit 25.11.2017
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,	# sys-apps/coreutils
    
    # DENY INHERIT -------------------------------------
    deny /usr/share/pyfa/{,**}				r,
  }
}
