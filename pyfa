#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*.{emp,xml,txt,EMP,XML,TXT}"

profile pyfa @{PYTHON2_EXEC}/pyfa {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/python>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/program-work-with-disk-rwk-strict>
  #include <abstractions/xdg-open>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /bin/bash						ix,	# FIX ME! почему он в основном профиле с ix?
  /bin/env						mr,
  /sbin/ldconfig					ix,
  
  # READS/WRITES ---------------------------------------
  /usr/share/pyfa/					r,
  /usr/share/pyfa/*					rk,
  @{PYTHON2_PACKAGES}/wxversion.pyc{,.*}		w,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.pyfa/					rw,
  owner @{HOME}/.pyfa/**				rwk,
}
