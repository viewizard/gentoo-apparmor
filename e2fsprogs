#include <tunables/global>

profile e2fsprogs.e2fsck /sbin/e2fsck flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/console						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  @{PROC}/swaps						r,
  @{PROC}/@{pid}/mounts					r,
  @{PROC}/acpi/ac_adapter/				r,	# Опция "defer_check_on_battery" (man e2fsck.conf).
  
  # EXECUTABLES ----------------------------------------
  /sbin/e2fsck						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/e2fsck.conf					r,
  /run/blkid/blkid.tab					r,
}

profile e2fsprogs.mke2fs /sbin/mke2fs flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/		r,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/{,*/}uuid	r,
  /sys/devices/pci[0-9]**/ata[0-9]**/block/@{BLOCK_REAL}/** r,
  @{PROC}/swaps						r,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/mke2fs						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/mke2fs.conf					r,
  /usr/share/misc/magic.mgc				r,
  /run/blkid/blkid.tab*					rw,
  owner link subset /run/blkid/blkid.tab*		-> /run/blkid/blkid.tab,
}

profile e2fsprogs.tune2fs /sbin/tune2fs flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  @{PROC}/swaps						r,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/tune2fs						mr,
  
  # READS/WRITES ---------------------------------------
  /run/blkid/blkid.tab*					r,
}

profile e2fsprogs.resize2fs /sbin/resize2fs flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  @{PROC}/swaps						r,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/resize2fs					mr,
}

profile e2fsprogs.dumpe2fs /sbin/dumpe2fs flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/dumpe2fs					mr,
}
