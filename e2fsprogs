#include <local/tunables.d/>

profile e2fsprogs.e2fsck /sbin/e2fsck {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/console						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  @{SYS_D}/devices/virtual/block/@{BLOCK_VIRT}/{,**/}name r,
  @{PROC_D}/swaps					r,
  owner @{PROC_D}/@{pid}/mounts				r,
  @{PROC_D}/acpi/ac_adapter/				r,	# Опция "defer_check_on_battery" (man e2fsck.conf).
  
  # EXECUTABLES ----------------------------------------
  /sbin/e2fsck						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/e2fsck.conf					r,
  /run/blkid/blkid.tab					r,
}

profile e2fsprogs.mke2fs /sbin/mke2fs {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  @{SYS_D}/devices/virtual/block/@{BLOCK_VIRT}/		r,
  @{SYS_D}/devices/virtual/block/@{BLOCK_VIRT}/{,*/}uuid r,
  @{SYS_D}/devices/pci@{PCI2}/@{PCI4}/{ata@{ATA1},usb@{USB1}}/**/block/@{BLOCK_REAL}/{,**} r,
  @{PROC_D}/swaps					r,
  audit @{PROC_D}/@{pid}/mounts				r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  
  # EXECUTABLES ----------------------------------------
  /sbin/mke2fs						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/mke2fs.conf					r,
  /usr/share/misc/magic.mgc				r,
  /run/blkid/blkid.tab{,.old,-@{TMP6}}			rw,
  link subset /run/blkid/blkid.tab.old			-> /run/blkid/blkid.tab,
}

profile e2fsprogs.tune2fs /sbin/tune2fs {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  @{PROC_D}/swaps					r,
  owner @{PROC_D}/@{pid}/mounts				r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/tune2fs						mr,
  
  # READS/WRITES ---------------------------------------
  /run/blkid/blkid.tab					r,
}

