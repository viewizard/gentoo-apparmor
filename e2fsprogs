#include <tunables/global>
profile e2fsprogs.e2fsck /sbin/e2fsck flags=(complain) {
  #include <abstractions/base>
  
  /dev/pts/[0-9]* w,
  /dev/{dm-,loop,md,sd[a-z],zd}[0-9]* rw,
  @{PROC}/swaps r,
  @{PROC}/@{pid}/mounts r,
  
  /sbin/e2fsck r,
  
  /etc/e2fsck.conf r,
  
  /run/blkid/blkid.tab r,
  
}


profile e2fsprogs.mke2fs /sbin/mke2fs flags=(complain) {
  #include <abstractions/base>
  
  /dev/pts/[0-9]* rw,
  /dev/{dm-,zd}[0-9]* rw,
  /sys/devices/virtual/block/{dm-,zd}[0-9]*/ r,
  /sys/devices/virtual/block/{dm-,zd}[0-9]*/dm/uuid r,
  @{PROC}/swaps r,
  @{PROC}/@{pid}/mounts r,
  
  /sbin/mke2fs r,
  
  /etc/mke2fs.conf r,
  
  /run/blkid/blkid.tab* rwl,
  
}
