#include <tunables/global>
profile e2fsprogs.e2fsck /sbin/e2fsck flags=(complain) {
  #include <abstractions/base>
  
  /dev/pts/[0-9]* w,
  /dev/dm-[0-9]* rw,
  /dev/md[0-9]* rw,
  /dev/loop[0-9]* rw,
  /dev/sd[a-z][0-9]* rw,
  /dev/zd[0-9]* rw,
  @{PROC}/swaps r,
  @{PROC}/@{pid}/mounts r,
  
  /sbin/e2fsck r,
  
  /etc/e2fsck.conf r,
  
  /run/blkid/blkid.tab r,
  
}
