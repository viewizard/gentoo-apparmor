#include <tunables/global>

profile e2fsprogs.e2fsck /sbin/e2fsck flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  /dev/@{BLOCK_ALL}					rw,
  @{PROC}/swaps						r,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/e2fsck						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/e2fsck.conf					r,
  /run/blkid/blkid.tab					r,
  
}

profile e2fsprogs.mke2fs /sbin/mke2fs flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/{,*/}uuid	r,
  @{PROC}/swaps						r,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/mke2fs						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/mke2fs.conf					r,
  /run/blkid/blkid.tab*					rwl,
  
}
