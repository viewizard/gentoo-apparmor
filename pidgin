#include <tunables/global>

profile pidgin /usr/bin/pidgin {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/enchant>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/networkmanager>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/dbus-pattern/session-bind>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/nameservice>
  #include <abstractions/X>
  #include <abstractions/private-files-strict>
  #include <abstractions/ssl-certs>
  #include <abstractions/xdg-open>
  #include <abstractions/fs-access-by-pattern-internet>
  
  # AUDIT CAPABILITIES ---------------------------------
  deny capability sys_ptrace,
  
  # AUDIT PTRACE ---------------------------------------
  deny ptrace (trace),
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/im/pidgin/purple/PurpleObject"
  	interface="im.pidgin.purple.PurpleInterface"
  	peer=(name="im.pidgin.purple.PurpleService",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/im/pidgin/purple/PurpleObject"
  	interface="im.pidgin.purple.PurpleInterface"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pidgin					mr,
  /usr/bin/gconftool-2					ixr,
  
  # READS/WRITES ---------------------------------------
  /etc/pulse/client.conf				r,
  /usr/lib{,32,64}/libvisual-*/**.so			mr,
  /usr/lib{,32,64}/pidgin/*.so				mr,
  /usr/lib{,32,64}/purple*/*.so				mr,
  /usr/share/purple/ca-certs/{,**}			r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.purple/				rw,
  owner @{HOME}/.purple/**				rwk,
  
  # AUDIT USERS ----------------------------------------
  audit deny @{HOME}/.purple/plugins/**			m,	# Не разрешаем использовать плагины пользователя,
  								# в любом случае их не пропустит IMA/EVM.
  
  # TEMP -----------------------------------------------
  /tmp/							r,
  /var/tmp/						r,
}
