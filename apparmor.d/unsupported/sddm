#include <local/tunables.d/>

profile sddm /usr/bin/sddm {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/nameservice>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/sddm						mr,
  @{shell}						Cx,
  /usr/bin/Xorg						Px,	# x11-base/xorg-server
  
  # READS/WRITES ---------------------------------------
  /							r,
  /etc/sddm.conf					r,
  /var/log/sddm.log					rw,
  
  # TEMP -----------------------------------------------
  audit owner /tmp/sddm-auth*				rw,	# FIX ME! Использовать @{TMP} переменные.
  audit owner /tmp/??????/				rw,	# FIX ME! Использовать @{TMP} переменные.	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    @{shell}						rm,
  }
}
