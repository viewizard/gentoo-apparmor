#include <local/tunables.d/>

profile oracle-jdk-bin.java /opt/oracle-jdk-bin-[0-9]*/{,jre/}bin/java {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  @{SYS_D}/devices/system/cpu/				r,
  
  # EXECUTABLES ----------------------------------------
  /opt/oracle-jdk-bin-[0-9]*/{,jre/}bin/java		mr,
  /opt/oracle-jdk-bin-[0-9]*/{,jre/}bin/java		ix,
  
  # READS/WRITES ---------------------------------------
  /opt/oracle-jdk-bin-[0-9]*/**				r,
  /opt/oracle-jdk-bin-[0-9]*/lib/**.so			mr,
  /opt/oracle-jdk-bin-[0-9]*/jre/lib/**.so		mr,
  
  # NOISY ----------------------------------------------
  deny @{USER_HOME_D}/					r,
}
