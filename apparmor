#include <tunables/global>
profile apparmor_parser /sbin/apparmor_parser flags=(complain) {
  #include <abstractions/base>
  
  capability mac_admin,
  
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* w,
  /sys/kernel/security/apparmor/{,**} r,
  /sys/kernel/security/apparmor/{.load,.replace,.remove} w,
  @{PROC}/@{pid}/mounts r,
  @{PROC}/sys/kernel/osrelease r,
  
  /sbin/apparmor_parser r,
  
  /etc/apparmor.d/{,**} r,
  /etc/apparmor/parser.conf r,
  
}


profile apparmor.aa-status /usr/lib{,32,64}/python-exec/@{PYTHON}/aa-status flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  
  capability sys_ptrace,
  
  /dev/pts/[0-9]* w,
  /sys/kernel/security/apparmor/* r,
  @{PROC}/ r,
  @{PROC}/@{pid}/attr/{current,prev,exec} r,
  @{PROC}/@{pid}/mounts r,
  
  /bin/env ixr,
  
  /usr/lib{,32,64}/@{PYTHON}/site-packages/apparmor/*.pyc w,
  
}


profile apparmor.aa-unconfined /usr/lib{,32,64}/python-exec/@{PYTHON}/aa-unconfined flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/user-tmp>
  
  capability sys_ptrace,
  
  /dev/pts/[0-9]* w,
  @{PROC}/@{pid}/mounts r,
  @{PROC}/@{pid}/attr/{current,prev,exec} r,
  
  /bin/env r,
  /bin/bash Cx -> shell,
  /bin/cat ix,
  
  /etc/apparmor/logprof.conf r,
  /etc/inputrc r,
  /etc/terminfo/x/xterm r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    capability sys_ptrace,
    
    /dev/tty rw,
    @{PROC}/ r,
    @{PROC}/@{pid}/fd/ r,
    @{PROC}/@{pid}/cmdline r,
    @{PROC}/@{pid}/net/* r,
    
    /bin/bash r,
    /bin/netstat ix,
    
  }
  
}


profile apparmor.init.d /etc/init.d/apparmor flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  capability mac_admin,
  
  /sys/kernel/security/apparmor/* wr,
  @{PROC}/@{pid}/mounts r,
  
  /bin/bash Cx -> shell,
  /bin/grep ix,
  /bin/sed ix,
  /bin/sort ix,
  
  /etc/fstab r,
  /etc/init.d/apparmor r,
  /usr/libexec/rc.apparmor.functions r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/openrc_shell>
    
  }
  
}
