#include <tunables/global>
profile openrc.apparmor.init.d /etc/init.d/apparmor flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  capability mac_admin,
  
  /sys/kernel/security/apparmor/* wr,
  @{PROC}/@{pid}/mounts r,
  
  /bin/grep ix,
  /bin/sed ix,
  /bin/sort ix,
  
  /etc/fstab r,
  /etc/init.d/apparmor r,
  /usr/libexec/rc.apparmor.functions r,
  
}
