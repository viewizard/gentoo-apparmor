#include <local/tunables.d/>

profile apparmor.apparmor_parser /sbin/apparmor_parser {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mac_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /sys/devices/system/cpu/				r,
  /sys/kernel/security/apparmor/{,**}			r,
  /sys/kernel/security/apparmor/.{load,replace,remove}	w,
  @{PROC}/@{pid}/mounts					r,
  @{PROC}/sys/kernel/osrelease				r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/apparmor_parser					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/apparmor/parser.conf				r,
  /etc/apparmor.d/{,**}					r,
  /etc/apparmor.d/cache/{,*}				w,
}

profile apparmor.init.d /etc/init.d/apparmor {			# Не используем запуск как сервис, загружаем профили в ядре.
}
