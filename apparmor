#include <tunables/global>

profile apparmor.apparmor_parser /sbin/apparmor_parser flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mac_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /sys/devices/system/cpu/				r,
  /sys/kernel/security/apparmor/{,**}			r,
  /sys/kernel/security/apparmor/.{load,replace,remove}	w,
  @{PROC}/@{pid}/mounts					r,
  @{PROC}/sys/kernel/osrelease				r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/apparmor_parser					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/apparmor/parser.conf				r,
  /etc/apparmor.d/{,**}					r,
  /etc/apparmor.d/cache/{,*}				w,
}

profile apparmor.init.d /etc/init.d/apparmor {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability mac_admin,
  
  # PSEUDO ---------------------------------------------
  /sys/kernel/security/apparmor/*			rw,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/grep						ix,
  /bin/sed						ix,
  /bin/sort						ix,
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  /etc/{conf,init}.d/apparmor				r,
  /usr/libexec/rc.apparmor.functions			r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
}
