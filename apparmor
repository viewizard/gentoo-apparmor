#include <tunables/global>
profile apparmor_parser /sbin/apparmor_parser flags=(complain) {
  #include <abstractions/base>
  
  capability mac_admin,
  
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* w,
  /sys/kernel/security/apparmor/{,**} r,
  /sys/kernel/security/apparmor/{.load,.replace,.remove} w,
  @{PROC}/@{pid}/mounts r,
  @{PROC}/sys/kernel/osrelease r,
  
  /sbin/apparmor_parser mr,
  
  /etc/apparmor.d/{,**} r,
  /etc/apparmor/parser.conf r,
  
}


profile apparmor.init.d /etc/init.d/apparmor flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  capability mac_admin,
  
  /sys/kernel/security/apparmor/* wr,
  @{PROC}/@{pid}/mounts r,
  
  /bin/bash Cx -> shell,
  /bin/grep ix,
  /bin/sed ix,
  /bin/sort ix,
  
  /etc/fstab r,
  /etc/init.d/apparmor r,
  /usr/libexec/rc.apparmor.functions r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
    
  }
  
}
