#include <tunables/global>
profile xfwm4 /usr/bin/xfwm4 {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>
  
  /dev/tty[0-9]* w,
  owner @{PROC}/@{pid}/fd/ r,
  
  /usr/bin/xfwm4 mr,
  /usr/lib{,32,64}/xfce4/xfwm4/helper-dialog ix,
  /usr/bin/pulseaudio Px,
  
  /usr/share/xfwm4/{,**} r,
  
  owner @{HOME_CACHE}/sessions/{,xfwm4-*.state} rw,
  
}


profile xfwm4-settings /usr/bin/xfwm4{,-tweaks,-workspace}-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  
  /dev/tty[0-9]* w,
  
  /usr/bin/xfwm4{,-tweaks,-workspace}-settings mr,
  
}
