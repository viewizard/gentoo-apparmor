#include <tunables/global>
profile xfwm4 /usr/bin/xfwm4 flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice-local>


  /usr/bin/xfwm4 rm,
  
  /usr/share/xfwm4/ r,
  /usr/share/xfwm4/** r,

  owner @{HOME}/.cache/sessions/ rw,
  owner @{HOME}/.cache/sessions/xfwm4-*.state rw,
  
}


profile xfwm4-settings /usr/bin/xfwm4{,-tweaks,-workspace}-settings flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>

  
  /usr/bin/xfwm4{,-tweaks,-workspace}-settings r,

}
