#include <tunables/global>

profile xfwm4 /usr/bin/xfwm4 {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/nameservice>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(kill),					# Кнопка закрыть, для зависшего приложения.
  								# FIX ME! Отсылать только приложениям с GUI.
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfwm4					mr,
  /usr/lib{,32,64}/xfce4/xfwm4/helper-dialog		ix,
  /usr/bin/pulseaudio					Px,
  
  # READS/WRITES ---------------------------------------
  /usr/share/xfwm4/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME_CACHE}/sessions/{,xfwm4-*.state}		rw,
  owner @{HOME}/.config/xfce4/xfwm4/			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/.gl* rw,
}

profile xfwm4.xfwm4-settings /usr/bin/xfwm4{,-tweaks,-workspace}-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfwm4{,-tweaks,-workspace}-settings		mr,
}
