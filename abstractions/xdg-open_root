# execution external programs with xdg-open
/usr/bin/xdg-open Pxr -> xdg_open_root,
/usr/bin/xdg-email Pxr -> xdg_email_root,
/usr/bin/xdg-screensaver Pxr,
owner @{PROC}/@{pid}/fd/ r,

# sg/newgrp for work with network connection via iptables uid/gid-owner
/usr/bin/newgrp Px,
/usr/bin/id ixr,

# program-related places for xdg-open:
#include <abstractions/xdg-open-folders_root>
