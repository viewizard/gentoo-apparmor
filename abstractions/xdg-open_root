#include <abstractions/fs/access-by-pattern-xdg-open_sudo>

# execution external programs with xdg-open
owner @{PROC}/@{pid}/fd/				r,
/usr/bin/xdg-open					Px -> xdg_open_root,
/usr/bin/xdg-email					Px -> xdg_email_root,
# /usr/bin/xdg-screensaver используем непосредственно в профилях.

# sg/newgrp for work with network connection via iptables uid/gid-owner
# IMPROVE! После возможности блокировки адресов и портов - убрать.
/usr/bin/newgrp						Px,
/usr/bin/id						Px,

# DENY INHERIT -----------------------------------------
deny unix peer=(label="xdg_open_root"),				# xdg_open_root
