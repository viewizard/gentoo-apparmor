# program-related places for xdg-open:
owner @{HOME}/.claws-mail/mimetmp/ r,
owner @{HOME}/.claws-mail/mimetmp/* r,

# sg/newgrp for work with network connection via iptables uid/gid-owner
/usr/bin/newgrp Px,
/usr/bin/id ixr,

######################################################
# Since all programs will be able to launch this
# binaryes we can't use abstractions/executable-binary
# or even abstractions/executable-binary-strict
# here, we need more strict rules with fixed programs 
# list and Px only!
######################################################

#-----------------------------------------------------
# web-browser
#-----------------------------------------------------

# chromium
/usr/bin/chromium-browser Px,
/usr/lib64/chromium-browser/chromium-launcher.sh Px,
# firefox
/usr/bin/firefox Px,
/usr/lib64/firefox/firefox Px,


#-----------------------------------------------------
# email client
#-----------------------------------------------------

# claws-mail
/usr/bin/claws-mail Px,


#-----------------------------------------------------
# p-2-p (torrent, etc)
#-----------------------------------------------------

# transmission
/usr/bin/transmission-* Px,


#-----------------------------------------------------
# office
#-----------------------------------------------------

# libreoffice
