# доступ к файлам в @{HOME}, gvfs и /media с пользовательской
# предустановкой для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}

#include <abstractions/fs-access-by-pattern-xdg-open>

# Не разрешаем работать с доступными для интернет-программ ресурсами
deny @{HOME}/@{XDG_PUBLICSHARE_DIR}/{,**}		rwkl,
deny @{HOME}/@{XDG_DOWNLOAD_DIR}/{,**}			rwkl,

/							r,
@{HOMEDIRS}/						r,
owner @{HOME}/						r,
owner @{HOME}/@{USERS_DIR}/				r,
owner @{HOME}/@{USERS_FILE}				rwk,
owner @{HOME}/@{USERS_DIR}/@{USERS_FILE}		rwk,
owner /run/user/[0-9]*/gvfs/*/				r,
owner /run/user/[0-9]*/gvfs/*/@{USERS_DIR}/		r,
owner /run/user/[0-9]*/gvfs/*/@{USERS_FILE}		rwk,
owner /run/user/[0-9]*/gvfs/*/@{USERS_DIR}/@{USERS_FILE} rwk,
/media/							r,
/media/@{USERS_DIR}/					r,
/media/@{USERS_FILE}					rwk,
/media/@{USERS_DIR}/@{USERS_FILE}			rwk,
