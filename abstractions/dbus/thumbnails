dbus send
	bus=session
	path="/org/freedesktop/thumbnails/*"
	interface="org.freedesktop.thumbnails.*"
	peer=(name="org.freedesktop.thumbnails.*",label="tumbler@{p_any}"),	# xfce-extra/tumbler
dbus receive
	bus=session
	path="/org/freedesktop/thumbnails/*"
	interface="org.freedesktop.thumbnails.*"
	peer=(name=":[0-9]*.[0-9]*",label="tumbler@{p_any}"),			# xfce-extra/tumbler
