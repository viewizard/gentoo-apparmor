# Some programs should work with disk - read user data, store results.
# Don't forget, provide configuration in profile, like:
# @{PROG_DIR}="[^.]**"
# @{PROG_FILE}="{[^.]*.pdf,[^.]*.xps,qt_temp.*}"

#include <abstractions/fs-access-by-pattern-xdg-open>

# Не разрешаем работать с доступными для интернет-программ ресурсами
deny @{HOME}/@{XDG_PUBLICSHARE_DIR}/{,**}		rwkl,
deny @{HOME}/@{XDG_DOWNLOAD_DIR}/{,**}			rwkl,

/							r,
@{HOMEDIRS}/						r,
owner @{HOME}/						r,
owner @{HOME}/@{PROG_DIR}/				r,
owner @{HOME}/@{PROG_FILE}				rwk,
owner @{HOME}/@{PROG_DIR}/@{PROG_FILE}			rwk,
owner /run/user/[0-9]*/gvfs/*/				r,
owner /run/user/[0-9]*/gvfs/*/@{PROG_DIR}/		r,
owner /run/user/[0-9]*/gvfs/*/@{PROG_FILE}		rwk,
owner /run/user/[0-9]*/gvfs/*/@{PROG_DIR}/@{PROG_FILE}	rwk,
/media/							r,
/media/@{PROG_DIR}/					r,
/media/@{PROG_FILE}					rwk,
/media/@{PROG_DIR}/@{PROG_FILE}				rwk,

owner link subset @{HOME}/@{PROG_FILE}			-> @{HOME}/@{PROG_FILE},
owner link subset @{HOME}/@{PROG_DIR}/@{PROG_FILE}	-> @{HOME}/@{PROG_DIR}/@{PROG_FILE},
owner link subset /run/user/[0-9]*/gvfs/*/@{PROG_FILE}	-> /run/user/[0-9]*/gvfs/*/@{PROG_FILE},
owner link subset /run/user/[0-9]*/gvfs/*/@{PROG_DIR}/@{PROG_FILE}	-> /run/user/[0-9]*/gvfs/*/@{PROG_DIR}/@{PROG_FILE},
link subset /media/@{PROG_FILE}				-> /media/@{PROG_FILE},
link subset /media/@{PROG_DIR}/@{PROG_FILE}		-> /media/@{PROG_DIR}/@{PROG_FILE},
