# Since we could use QT with gtkstyle, we need GTK abstractions.
#include <abstractions/gtk>
#include <abstractions/dbus/at-spi>
#include <abstractions/dbus/gvfs>
#include <abstractions/dbus/gconf>				# Для QT_QPA_PLATFORMTHEME=gtk2.

# READS/WRITES -----------------------------------------
/usr/share/icons/{,**}					r,
/usr/share/qt{4,5}/**					r,
/usr/lib{,32,64}/qt4/lib*.so{,.[0-9]*}			mr,
/usr/lib{,32,64}/qt{4,5}/plugins/{,**/}*.so		mr,

# USERS ------------------------------------------------
owner @{HOME_D}/.ICEauthority				r,
owner @{HOME_D}/.config/Trolltech.conf			rwk,
owner @{HOME_D}/.config/QtProject.conf{,.lock,.@{TMP6}}	rwk,
owner @{HOME_D}/.config/qt5ct/qt5ct.conf		rwk,	# x11-misc/qt5ct
owner @{HOME_D}/.config/.@{TMP6}			rwk,	# Временные файлы, Qt5
owner @{HOME_CACHE_D}/qt_compose_cache_little_endian_*	rw,	# * - 32 символа (цифры, маленькие буквы)
