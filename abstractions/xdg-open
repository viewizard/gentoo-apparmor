#include <abstractions/fs/access-by-pattern-xdg-open>

# execution external programs with xdg-open
@{PROC}/@{pid}/fd/					r,	# IMPROVE! fsuid=$USER ouid=$USER,root
/usr/bin/xdg-open					Px,
/usr/bin/xdg-email					Px,
# /usr/bin/xdg-screensaver используем непосредственно в профилях.

# sg/newgrp for work with network connection via iptables uid/gid-owner
# IMPROVE! После возможности блокировки адресов и портов - убрать.
/usr/bin/newgrp						Px,	# sys-apps/shadow
/usr/bin/id						Px,	# sys-apps/coreutils

# DENY INHERIT -----------------------------------------
deny unix peer=(label="xdg-utils.xdg-open"),			# xdg-utils.xdg-open
