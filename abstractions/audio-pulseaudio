# PSEUDO -----------------------------------------------
/dev/shm/						r,
audit owner /dev/shm/pulse-shm*				rwk,	# FIX ME! audit 24.11.2017
owner @{PROC_D}/@{pid}/fd/				r,

# EXECUTABLES ------------------------------------------
/usr/bin/pulseaudio					Px,

# READS/WRITES -----------------------------------------
/etc/machine-id						r,
/etc/pulse/{,**}					r,
owner /run/user/@{UID}/pulse/				rw,
owner /run/user/@{UID}/pulse/{native,pid}		rwk,

# USERS ------------------------------------------------
owner @{HOME_D}/.config/pulse/				rw,
owner @{HOME_D}/.config/pulse/*				rwk,
