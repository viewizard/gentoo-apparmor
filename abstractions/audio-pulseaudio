# PSEUDO -----------------------------------------------
/dev/shm/						r,
owner /dev/shm/pulse-shm*				rwk,

# READS/WRITES -----------------------------------------
/etc/machine-id						r,
/etc/pulse/{,*}						r,
owner /run/user/*/pulse/				rw,
owner /run/user/*/pulse/{native,pid}			rwk,

# USERS ------------------------------------------------
owner @{HOME}/.config/pulse/				rw,
owner @{HOME}/.config/pulse/*				rwk,
