# PSEUDO -----------------------------------------------
/dev/shm/						r,
owner /dev/shm/pulse-shm*				rwk,
owner @{PROC}/@{pid}/fd/				r,

# EXECUTABLES ------------------------------------------
/usr/bin/pulseaudio					Px,

# READS/WRITES -----------------------------------------
/etc/machine-id						r,
/etc/pulse/{,*}						r,
owner /run/user/[0-9]*/pulse/				rw,
owner /run/user/[0-9]*/pulse/{native,pid}		rwk,

# USERS ------------------------------------------------
owner @{HOME}/.config/pulse/				rw,
owner @{HOME}/.config/pulse/*				rwk,
