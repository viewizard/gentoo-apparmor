#include <abstractions/ncurses>

# CAPABILITIES -----------------------------------------
capability kill,
capability sys_ptrace,
capability dac_override,
capability sys_tty_config,

# PTRACE -----------------------------------------------
ptrace (trace),

# SIGNAL -----------------------------------------------
signal (send) set=(term, hup),

# PSEUDO -----------------------------------------------
/dev/tty						rw,
/dev/console						rw,
/dev/pts/[0-9]*						rw,
/sys/fs/cgroup/						r,
/sys/fs/cgroup/*/tasks					w,
@{PROC}/						r,
@{PROC}/cmdline						r,
@{PROC}/@{pid}/environ					r,
@{PROC}/@{pid}/stat					r,
owner @{PROC}/@{pid}/cmdline				r,

# EXECUTABLES ------------------------------------------
/sbin/openrc-run					mr,
/sbin/start-stop-daemon					ix,	# /rc/bin/*, openrc-run.sh и start-stop-daemon
/lib{,32,64}/rc/sh/openrc-run.sh			ix,	# запускаем в профиле скрипта, чтобы все уникальные
/lib{,32,64}/rc/bin/*					ix,	# части были в скрипте пакета.

# READS/WRITES -----------------------------------------
/etc/rc.conf						r,
/etc/profile.env					r,
/etc/{conf,init}.d/					r,
/run/openrc/**						rwk,
