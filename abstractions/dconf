#include <abstractions/dbus/dconf>

# READS/WRITES -----------------------------------------
owner /run/user/@{UID}/dconf/{,user}			rw,	# IMPROVE! Только для пользователей (owner>=1000).

# USERS ------------------------------------------------
owner @{HOME_CACHE}/dconf/{,user}			rw,	# IMPROVE! Только для root (owner==root).
owner @{HOME}/.config/dconf/user			r,
