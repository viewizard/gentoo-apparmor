#include <abstractions/fs/access-by-pattern-xdg-open_sudo>
#include <abstractions/profile_transitions/root-deny-web>

# sg/newgrp for work with network connection via iptables uid/gid-owner
# IMPROVE! После возможности блокировки адресов и портов - убрать.
/usr/bin/newgrp						Px,	# sys-apps/shadow
/usr/bin/id						Px,	# sys-apps/coreutils

############################################################
# Since all programs will be able to launch this binaries
# we can't use abstractions/profile_transitions/root-all
# here, we need more strict rules with fixed programs list.
############################################################

/usr/bin/ghex						Px -> ghex_root,	# app-editors/ghex
/usr/bin/juffed						Px -> juffed_root,	# app-editors/juffed
/usr/bin/mousepad					Px -> mousepad_root,	# app-editors/mousepad
/usr/bin/engrampa					Px -> engrampa_root,	# app-arch/engrampa
/usr/bin/thunar						Px -> thunar_root,	# xfce-base/thunar

/usr/bin/transmission-gtk				Px,	# net-p2p/transmission
/usr/lib{,32,64}/libreoffice/program/soffice		Px,	# app-office/libreoffice
/usr/bin/{et,wpp,wps}					Px,	# app-office/wps-office
/usr/bin/ristretto					Px,	# media-gfx/ristretto
/usr/bin/gimp*						Px,	# media-gfx/gimp
/usr/bin/inkscape					Px,	# media-gfx/inkscape
/usr/bin/qpdfview					Px,	# app-text/qpdfview
/usr/bin/audacious					Px,	# media-sound/audacious
/usr/bin/mpv						Px,	# media-video/mpv
/usr/bin/smplayer					Px,	# media-video/smplayer
/usr/bin/vlc						Px,	# media-video/vlc
/usr/bin/xfce4-terminal					Px,	# x11-terms/xfce4-terminal
