# доступ к файлам в @{HOME}, gvfs и /media с пользовательской
# предустановкой для abstractions/fs/access-by-user-preset-rk

#include <abstractions/fs/access-by-pattern-xdg-open>

/							r,
@{HOMEDIRS}/						r,
owner @{HOME}/						r,
owner @{HOME}/@{USERS_DIR_rk}/				r,
owner @{HOME}/@{USERS_FILE_rk}				rk,
owner @{HOME}/@{USERS_DIR_rk}/@{USERS_FILE_rk}		rk,
owner /run/user/[0-9]*/gvfs/				r,	# gvfs
owner /run/user/[0-9]*/gvfs/*/@{USERS_DIR_rk}/		r,	# gvfs
owner /run/user/[0-9]*/gvfs/*/@{USERS_FILE_rk}		rk,	# gvfs
owner /run/user/[0-9]*/gvfs/*/@{USERS_DIR_rk}/@{USERS_FILE_rk} rk,	# gvfs
/media/{,*/}						r,
/media/*/@{USERS_DIR_rk}/				r,
/media/*/@{USERS_FILE_rk}				rk,
/media/*/@{USERS_DIR_rk}/@{USERS_FILE_rk}		rk,
/run/media/*/{,*/}					r,	# udisks2, /run/media/$USER/VolumeName/
/run/media/*/*/@{USERS_DIR_rk}/				r,	# udisks2, /run/media/$USER/VolumeName/
/run/media/*/*/@{USERS_FILE_rk}				rk,	# udisks2, /run/media/$USER/VolumeName/
/run/media/*/*/@{USERS_DIR_rk}/@{USERS_FILE_rk}		rk,	# udisks2, /run/media/$USER/VolumeName/
