#include <abstractions/kerberos-client>				# kerberos
#include <abstractions/p11-kit>					# p11-kit (PKCS#11 modules configuration)

# EXECUTABLES ------------------------------------------
/etc/security/pam-script/pam_script*			Px,	# pam-script

# READS/WRITES -----------------------------------------
/etc/pamusb.conf					r,	# pam_usb
/etc/pam.d/*						r,	# PAM
/etc/security/*						r,	# PAM
/etc/shadow						r,	# PAM
/etc/gshadow						r,	# PAM
/etc/passwd						r,	# PAM
/etc/login.defs						r,	# PAM
/lib{,32,64}/security/					r,	# PAM
/lib{,32,64}/security/pam_*.so				mr,	# PAM
/lib{,32,64}/security/pam_filter/*			mr,	# PAM
/run/pam_mount/*					rwk,	# pam_mount
/media/*/.pamusb/*.pad					rw,	# pam_usb

# USERS ------------------------------------------------
@{HOME}/.pamusb/*.pad					rw,	# pam_usb
