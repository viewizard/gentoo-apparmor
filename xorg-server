#include <tunables/global>

profile xorg-server.Xorg /usr/bin/Xorg {
  #include <abstractions/base>
  #include <abstractions/fonts>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_rawio,
  capability syslog,
  capability sys_tty_config,
  capability mknod,
  capability setuid,
  capability setgid,
  capability fsetid,
  capability ipc_owner,
  capability chown,
  
  # UNIX -----------------------------------------------
  unix (bind)
	type=dgram,
  unix (receive)
  	type=dgram
  	peer=(addr="none"),
  unix (bind, listen, send, receive, accept)
	type=stream
  	addr="@/tmp/.X11-unix/X[0-9]",
  unix (send, receive)
  	type=stream
  	addr="none"
  	peer=(addr="none"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(usr1) peer=xinit,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/nvidiactl					rw,
  /dev/nvidia[0-9]*					rw,
  /dev/nvidia-modeset					rw,
  /dev/vga_arbiter					rw,
  /dev/dri/{,card[0-9]*}				rw,
  /dev/input/event[0-9]*				rw,
  /sys/bus/						r,
  /sys/class/						r,
  /sys/class/tty/					r,
  /sys/class/drm/					r,
  /sys/class/input/					r,
  /sys/bus/pci/devices/					r,
  /sys/devices/**/{id,uevent,name}			r,
  /sys/devices/pci[0-9]*/**/{,config,resource,boot_vga}	r,
  @{PROC}/mtrr						rw,
  @{PROC}/cmdline					r,
  @{PROC}/modules					r,
  @{PROC}/@{pid}/cmdline				r,
  @{PROC}/driver/nvidia/params				r,
  @{PROC}/sys/kernel/modprobe				r,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/Xorg						mr,
  @{shell}						Cx,
  /bin/kmod						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/drirc						r,
  /etc/udev/udev.conf					r,
  /etc/X11/xorg.conf					r,
  /etc/X11/xorg.conf.d/{,*}				r,
  /usr/lib{,32,64}/xorg/modules/**.so			m,
  /usr/lib{,32,64}/mesa/**.so				m,
  /usr/share/X11/{,**}					r,
  /run/acpid.socket					rw,
  /run/udev/data/*					r,
  /var/log/Xorg.[0-9].log{,.old}			rw,
  /var/lib/xkb/server-[0-9].xkm				rw,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.serverauth*				r,
  
  # TEMP -----------------------------------------------
  owner /tmp/.tX[0-9]-lock				w,	# 0-9 ONLY!
  owner /tmp/.X[0-9]-lock				w,	# 0-9 ONLY!
  owner link subset /tmp/.X[0-9]-lock			-> /tmp/.tX[0-9]-lock,
  owner /tmp/.X11-unix/X[0-9]				w,	# 0-9 ONLY!
  /tmp/server-[0-9].xkm					rw,	# 0-9 ONLY!
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/X-connection-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/input/event[0-9]*				rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /usr/bin/xkbcomp					Px,
    
    # READS/WRITES -------------------------------------
    /run/acpid.socket					rw,
    /var/log/Xorg.[0-9].log				w,
  }
}

profile xorg-server.Xephyr /usr/bin/Xephyr {
  #include <abstractions/base>
  #include <abstractions/fonts>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/Xephyr					mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /usr/lib{,32,64}/mesa/swrastg_dri.so			m,
  /usr/share/X11/xkb/rules/evdev			r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.Xauthority				r,	# FIX ME! Сдела аналогично X-connection-strict.
  
  # TEMP -----------------------------------------------
  # tmp работать только с дисплеями 10 и выше, 0-9 закреплены за xorg-server
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /usr/bin/xkbcomp					Px,
  }
}

profile xorg-server.xdm-setup.init.d /etc/init.d/xdm-setup {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/xdm-setup/tasks			w,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/cat						Cx,	# FS ACCESS! cat
  /bin/tr						Px,
  /bin/grep						Cx,	# FS ACCESS! grep
  /bin/mkdir						Cx,	# FS ACCESS! mkdir
  /etc/X11/startDM.sh					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/xdm-setup				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/openrc/xdm-setup/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
}

profile xorg-server.xdm.init.d /etc/init.d/xdm {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /sys/fs/cgroup/openrc/xdm/tasks			w,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/tr						Px,
  /bin/grep						Cx,	# FS ACCESS! grep
  /bin/mkdir						Cx,	# FS ACCESS! mkdir
  /usr/bin/fgconsole					Px,
  /usr/bin/chvt						Px,
  /etc/init.d/xdm-setup					Px,
  /etc/X11/startDM.sh					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/xdm				r,
  /run/sddm.pid						rw,	# sddm
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/openrc/xdm/				w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
    
    # READS/WRITES -------------------------------------
    /etc/inittab					r,
  }
}
