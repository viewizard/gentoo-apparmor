#include <local/tunables.d/>

profile xorg-server.Xorg /usr/bin/Xorg {
  #include <abstractions/base>
  #include <abstractions/fonts>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_rawio,
  capability syslog,
  capability sys_tty_config,
  capability mknod,
  capability setuid,
  capability setgid,
  capability fsetid,
  capability ipc_owner,
  capability chown,
  capability dac_override,
  
  # UNIX -----------------------------------------------
  unix (bind)
	type=dgram,
  unix (receive)
  	type=dgram
  	peer=(addr="none"),
  unix (bind, listen, send, receive, accept)
	type=stream
  	addr="@/tmp/.X11-unix/X@{X_DISPLAY}",
  unix (send, receive)
  	type=stream
  	addr="none"
  	peer=(addr="none"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(usr1) peer=xinit,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/nvidiactl					rw,	# x11-drivers/nvidia-drivers
  /dev/nvidia[0-9]*					rw,	# x11-drivers/nvidia-drivers
  /dev/nvidia-modeset					rw,	# x11-drivers/nvidia-drivers
  /dev/vga_arbiter					rw,
  /dev/dri/{,card[0-9]*}				rw,
  /dev/input/event[0-9]*				rw,
  @{SYS_D}/bus/						r,
  @{SYS_D}/class/					r,
  @{SYS_D}/class/tty/					r,
  @{SYS_D}/class/drm/					r,
  @{SYS_D}/class/input/					r,
  @{SYS_D}/bus/pci/devices/				r,
  @{SYS_D}/devices/**/{id,uevent,name}			r,
  @{SYS_D}/devices/pci@{PCI2}/@{PCI4}/{,**}		r,
  @{PROC_D}/mtrr					rw,
  @{PROC_D}/cmdline					r,
  @{PROC_D}/modules					r,
  @{PROC_D}/@{pids}/cmdline				r,
  @{PROC_D}/driver/nvidia/params			r,	# x11-drivers/nvidia-drivers
  @{PROC_D}/sys/kernel/modprobe				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/Xorg						mr,
  @{shell}						Cx,
  /bin/kmod						Px,	# sys-apps/kmod
  /opt/bin/nvidia-modprobe				Px,	# x11-drivers/nvidia-drivers
  
  # READS/WRITES ---------------------------------------
  /etc/drirc						r,	# media-libs/mesa
  /etc/udev/udev.conf					r,	# sys-fs/eudev
  /etc/X11/xorg.conf					r,
  /etc/X11/xorg.conf.d/{,*}				r,
  /usr/lib{,32,64}/xorg/modules/**.so			m,
  /usr/lib{,32,64}/mesa/*.so				m,	# media-libs/mesa
  /usr/share/X11/{,**}					r,
  /run/acpid.socket					rw,	# sys-power/acpid
  /run/udev/data/{[a-z]*[0-9]*:[0-9]*,+input:input@{input}} r,
  /var/log/Xorg.@{X_DISPLAY}.log{,.old}			rw,
  /var/lib/xkb/server-@{X_DISPLAY}.xkm			rw,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.serverauth.*				r,	# * - 1-8 символов @{pid} + 0(нет) или 2 символа {[a-z],-}
  owner @{HOME}/.local/share/xorg/{,**}			rw,	# Нужно для запуска под пользователем (без suid), хранит там логи сервера.
  
  # TEMP -----------------------------------------------
  owner /tmp/.tX@{X_DISPLAY}-lock			w,
  owner /tmp/.X@{X_DISPLAY}-lock			w,
  owner link subset /tmp/.X@{X_DISPLAY}-lock		-> /tmp/.tX@{X_DISPLAY}-lock,
  owner /tmp/.X11-unix/X@{X_DISPLAY}			w,
  /tmp/server-@{X_DISPLAY}.xkm				rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/X-connection-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/input/event[0-9]*				rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /usr/bin/xkbcomp					Px,	# x11-apps/xkbcomp
    
    # USERS --------------------------------------------
    owner @{HOME}/.local/share/xorg/{,**}		rw,	# Нужно для запуска под пользователем (без suid), хранит там логи сервера.
    
    # READS/WRITES -------------------------------------
    /run/acpid.socket					rw,	# sys-power/acpid
    /var/log/Xorg.@{X_DISPLAY}.log			w,
  }
}

profile xorg-server.xdm-setup.init.d /etc/init.d/xdm-setup flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  @{SYS_D}/fs/cgroup/openrc/xdm-setup/tasks		w,
  @{SYS_D}/fs/cgroup/unified/xdm-setup/cgroup.procs	w,
  @{SYS_D}/fs/cgroup/unified/xdm-setup/cgroup.events	r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/tr						Px,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/rmdir						Cx,	# sys-apps/coreutils
  /etc/X11/startDM.sh					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/xdm-setup				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/{openrc,unified}/xdm-setup/	w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/xdm-setup/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/xdm-setup/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}

profile xorg-server.xdm.init.d /etc/init.d/xdm flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{SYS_D}/fs/cgroup/openrc/xdm/tasks			w,
  @{SYS_D}/fs/cgroup/unified/xdm/cgroup.procs		w,
  @{SYS_D}/fs/cgroup/unified/xdm/cgroup.events		r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/tr						Px,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/rmdir						Cx,	# sys-apps/coreutils
  /usr/bin/fgconsole					Px,	# sys-apps/kbd
  /usr/bin/chvt						Px,	# sys-apps/kbd
  /etc/init.d/xdm-setup					Px,
  /etc/X11/startDM.sh					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/xdm				r,
  /run/sddm.pid						rw,	# x11-misc/sddm
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/{openrc,unified}/xdm/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/xdm/cgroup.procs		r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
    
    # READS/WRITES -------------------------------------
    /etc/inittab					r,	# sys-apps/sysvinit
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/xdm/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
