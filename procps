#include <tunables/global>
profile procps.ps /bin/ps {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>
  
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  /dev/tty r,
  /dev/pts/[0-9]* rw,
  
  @{PROC}/ r,
  @{PROC}/uptime r,
  @{PROC}/sys/kernel/pid_max r,
  @{PROC}/sys/kernel/osrelease r,
  @{PROC}/tty/drivers r,
  @{PROC}/@{pid}/{stat,status,cmdline} r,
  @{PROC}/@{pid}/task/{,**} r,
  
  /bin/ps r,
  
  /usr/src/linux-*-{hardened,gentoo}*/System.map r,
  
}


profile procps.pidof /bin/pidof flags=(complain) {
  #include <abstractions/base>
  
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  @{PROC}/ r,
  @{PROC}/@{pid}/{stat,cmdline} r,
  
  /bin/pidof r,
  
}


profile procps.pgrep /usr/bin/pgrep flags=(complain) {
  #include <abstractions/base>
  
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  @{PROC}/ r,
  @{PROC}/@{pid}/{stat,cmdline,loginuid} r,
  
  /usr/bin/pgrep r,
  
}


profile procps.sysctl /{,usr/}sbin/sysctl flags=(complain) {
  #include <abstractions/base>
  
  capability sys_admin,
  capability net_admin,
  
  /dev/pts/[0-9]* rw,
  @{PROC}/sys/** rw,
  
  /{,usr/}sbin/sysctl r,
  
  /etc/sysctl.conf r,
  /etc/sysctl.d/{,*} r,
  
}
