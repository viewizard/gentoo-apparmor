#include <tunables/global>
profile procps.ps /bin/ps {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>
  
  capability sys_ptrace,
  capability dac_read_search,
  
  /dev/tty r,
  /dev/pts/[0-9]* rw,
  
  @{PROC}/ r,
  @{PROC}/uptime r,
  @{PROC}/sys/kernel/pid_max r,
  @{PROC}/tty/drivers r,
  @{PROC}/@{pid}/stat r,
  @{PROC}/@{pid}/status r,
  @{PROC}/@{pid}/cmdline r,
  @{PROC}/@{pid}/task/ r,
  @{PROC}/@{pid}/task/** r,

  /bin/ps r,
  
  /usr/src/linux-*-{hardened,gentoo}*/System.map r,
    
}


profile procps.sysctl /sbin/sysctl flags=(complain) {
  #include <abstractions/base>
  
  capability sys_admin,
  capability net_admin,
  
  /dev/pts/[0-9]* rw,
  @{PROC}/sys/** rw,
  
  /sbin/sysctl r,
  
  /etc/sysctl.conf r,
  /etc/sysctl.d/ r,
  /etc/sysctl.d/* r,
  
}
