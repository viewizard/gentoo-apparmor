#include <local/tunables.d/>

profile procps.ps /bin/ps {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # PSEUDO ---------------------------------------------
  /dev/tty						r,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/						r,
  @{PROC}/uptime					r,
  @{PROC}/sys/kernel/pid_max				r,
  @{PROC}/sys/kernel/osrelease				r,
  @{PROC}/tty/drivers					r,
  @{PROC}/@{pids}/{stat,status,cmdline,wchan}		r,
  @{PROC}/@{pids}/task/					r,
  @{PROC}/@{pids}/task/@{pids}/				r,
  @{PROC}/@{pids}/task/@{pids}/{stat,status,cmdline}	r,
  @{PROC}/@{pids}/attr/current				r,	# Нужен для запуска с параметром -Z.
  
  # EXECUTABLES ----------------------------------------
  /bin/ps						mr,
  
  # READS/WRITES ---------------------------------------
  /usr/src/@{kernel}/System.map				r,	# sys-kernel/gentoo-sources
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/lynis.cron.*				w,	# lynis.cron.daily
  deny /tmp/oinkmaster.cron.*				w,	# oinkmaster.cron.daily
  deny /tmp/chkrootkit.cron.*				w,	# chkrootkit.cron.daily
}

profile procps.pidof /usr/bin/pidof {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # PSEUDO ---------------------------------------------
  @{PROC}/						r,
  @{PROC}/@{pids}/stat					r,
  @{PROC}/@{pids}/cmdline				r,
  @{PROC}/sys/kernel/osrelease				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pidof					mr,
}

profile procps.pgrep /usr/bin/pgrep {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/						r,
  @{PROC}/@{pids}/stat					r,
  @{PROC}/@{pids}/status				r,
  @{PROC}/@{pids}/cmdline				r,
  audit @{PROC}/@{pid}/loginuid				r,	# FIX ME! @{pid}/@{pids} audit 20.10.2017
  @{PROC}/sys/kernel/osrelease				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pgrep					mr,
}

profile procps.sysctl /usr/sbin/sysctl {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability net_admin,
  capability mac_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/sys/						r,
  @{PROC}/sys/**					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/sysctl					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/sysctl.conf					r,	# sys-apps/baselayout
  /etc/sysctl.d/{,*}					r,	# sys-apps/openrc
}
