#include <tunables/global>
profile procps.ps /bin/ps {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>
  
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  /dev/tty r,
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* rw,
  
  @{PROC}/ r,
  @{PROC}/uptime r,
  @{PROC}/sys/kernel/pid_max r,
  @{PROC}/sys/kernel/osrelease r,
  @{PROC}/tty/drivers r,
  @{PROC}/@{pid}/{stat,status,cmdline} r,
  @{PROC}/@{pid}/task/{,**} r,
  
  /bin/ps mr,
  
  /usr/src/linux-[0-9]*-{hardened,gentoo}*/System.map r,
  
}


profile procps.pidof /usr/bin/pidof {
  #include <abstractions/base>
  
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  @{PROC}/ r,
  @{PROC}/@{pid}/{stat,cmdline} r,
  @{PROC}/sys/kernel/osrelease r,
  
  /usr/bin/pidof mr,
  
}


profile procps.pgrep /usr/bin/pgrep {
  #include <abstractions/base>
  
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  @{PROC}/ r,
  @{PROC}/@{pid}/{stat,cmdline,loginuid} r,
  @{PROC}/sys/kernel/osrelease r,
  
  /usr/bin/pgrep mr,
  
}


profile procps.sysctl /usr/sbin/sysctl {
  #include <abstractions/base>
  
  capability sys_admin,
  capability net_admin,
  
  /dev/pts/[0-9]* rw,
  @{PROC}/sys/ r,
  @{PROC}/sys/** rw,
  
  /usr/sbin/sysctl mr,
  
  /etc/sysctl.conf r,
  /etc/sysctl.d/{,*} r,
  
}
