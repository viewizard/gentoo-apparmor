#include <local/tunables.d/>

profile links /usr/bin/links {
  #include <abstractions/base>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/fs/access-by-pattern-internet>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{SYS_D}/devices/system/cpu/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/links					mr,
  
  # USERS ----------------------------------------------
  owner @{HOME_D}/.links/{,**}				rw,
}
