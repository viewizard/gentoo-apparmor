#include <tunables/global>
profile xfce4-settings /usr/bin/xfce4{,-accessibility,-appearance,-display,-keyboard,-mime,-mouse}-settings{,-editor,-manager} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/qt>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>  # need for CUPS (web browser)
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  owner @{PROC}/@{pid}/fd/ r,
  
  # we can use current profile for binaries:
  /usr/bin/xfce4{,-accessibility,-appearance,-display,-keyboard,-mime,-mouse}-settings{,-editor,-manager} ixr,
  /usr/bin/xfce4-session-settings Pixr,
  /usr/bin/thunar-volman-settings Pixr,
  /usr/bin/xfwm4{,-tweaks,-workspace}-settings Pixr,
  /usr/bin/exo-preferred-applications Pixr,
  /usr/bin/xfce4-panel Pixr,
  /usr/bin/xfce4-notifyd-config Pixr,
  /usr/bin/thunar-settings Pixr,
  /usr/bin/dbus-send Pixr,
  
  # rest binaries should use their own profile:
  /usr/bin/qtchooser Px,
  /usr/bin/gparted-pkexec Px,
  /usr/bin/pavucontrol Px,
  /usr/lib{,32,64}/python-exec/python-exec2 Cx -> alacarte,
  /usr/bin/passwd.sh Px,
  /usr/bin/xfdesktop-settings Px,
  /usr/bin/mate-screensaver-preferences Px,
  /usr/bin/exo-open Px,
  /usr/bin/vino-preferences Px,
  /usr/bin/onboard-settings Px,
  /usr/bin/xfce4-terminal Px,

  /etc/xdg/ r,
  /etc/xdg/autostart/{,*} r,
  /etc/xdg/menus/xfce-settings-manager.menu r,
  /usr/share/ r,
  /usr/share/mime/ r,
  /usr/share/cursors/ r,
  /usr/share/desktop-directories/* r,
  /opt/**.png r,
  
  owner @{HOME}/.local/share/ r,
  owner @{HOME}/.config/ r,
  owner @{HOME}/.config/autostart/ r,
  owner @{HOME}/.config/autostart/* rw,
  owner @{HOME}/.config/mimeapps.list* rw,
  owner @{HOME}/.config/xfce4/help.rc* rw,
  
  
  profile alacarte {
    #include <abstractions/base>
    
    /bin/env r,
    
    /usr/lib{,32,64}/python-exec/@{PYTHON}/alacarte Px,
    
    /etc/env.d/python/config r,
    
  }
  
}

profile xfce4-settings.xfsettingsd /usr/bin/xfsettingsd {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/user-tmp>
  #include <abstractions/nameservice>
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  owner @{PROC}/@{pid}/fd/ r,
  
  /usr/bin/xfsettingsd r,
  /usr/bin/xkbcomp ixr,
  /usr/bin/xflock4 Pxr,
  /usr/bin/xfce4-display-settings Px,
  
  /etc/xdg/autostart/xfsettingsd.desktop r,
  
}
