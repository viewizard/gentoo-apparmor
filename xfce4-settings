#include <local/tunables.d/>

profile xfce4-settings /usr/bin/xfce4{,-accessibility,-appearance,-display,-keyboard,-mime,-mouse}-settings{,-editor,-manager} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/xfconf>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/xdg-open>  # need for net-print/cups (web browser)
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4{,-accessibility,-appearance,-display,-keyboard,-mime,-mouse}-settings{,-editor,-manager} Pxmr,
  /usr/bin/xfce4-session-settings			Px,	# xfce-base/xfce4-session
  /usr/bin/thunar-volman-settings			Px,	# xfce-extra/thunar-volman
  /usr/bin/xfwm4{,-tweaks,-workspace}-settings		Px,	# xfce-base/xfwm4
  /usr/bin/exo-preferred-applications			Px,	# xfce-base/exo
  /usr/bin/xfce4-panel					Px,	# xfce-base/xfce4-panel
  /usr/bin/xfce4-notifyd-config				Px,	# xfce-extra/xfce4-notifyd
  /usr/bin/xfce4-power-manager-settings			Px,	# xfce-extra/xfce4-power-manager
  /usr/bin/thunar-settings				Px,	# xfce-base/thunar
  /usr/bin/dbus-send					Px,	# sys-apps/dbus
  /usr/bin/qtchooser					Px,	# dev-qt/qtchooser
  /usr/bin/gparted-pkexec				Px,	# sys-block/gparted
  /usr/bin/pavucontrol					Px,	# media-sound/pavucontrol
  /usr/bin/passwd.sh					Px,	# sys-apps/shadow
  /usr/bin/xfdesktop-settings				Px,	# xfce-base/xfdesktop
  /usr/bin/mate-screensaver-preferences			Px,	# mate-extra/mate-screensaver
  /usr/bin/exo-open					Px,	# xfce-base/exo
  /usr/bin/vino-preferences				Px,	# net-misc/vino-preferences
  /usr/bin/onboard-settings				Px,	# app-accessibility/onboard
  /usr/bin/xfce4-terminal				Px,	# x11-terms/xfce4-terminal
  /usr/bin/nm-connection-editor				Px,	# gnome-extra/nm-applet
  /usr/bin/xfce4-sensors				Px,	# xfce-extra/xfce4-sensors-plugin
  /usr/bin/gsmartcontrol-root				Px,	# sys-apps/gsmartcontrol
  /usr/bin/dconf-editor					Px,	# gnome-base/dconf-editor
  /usr/bin/gconf-editor					Px,	# gnome-extra/gconf-editor
  /usr/bin/qt5ct					Px,	# x11-misc/qt5ct
  @{PYTHON_EXEC_WRAPPER}				Cx -> alacarte,	# dev-lang/python-exec
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/						r,
  /etc/xdg/autostart/{,*}				r,
  /etc/xdg/menus/xfce-settings-manager.menu		r,
  /usr/share/						r,
  /usr/share/mime/					r,
  /usr/share/cursors/					r,
  /usr/share/desktop-directories/*			r,
  /opt/**.png						r,
  
  # USERS ----------------------------------------------
  owner @{HOME_D}/.local/share/				r,
  owner @{HOME_D}/.config/				r,
  owner @{HOME_D}/.config/autostart/			r,
  owner @{HOME_D}/.config/autostart/*			rw,
  owner @{HOME_D}/.config/mimeapps.list*		rw,
  owner @{HOME_D}/.config/xfce4/help.rc*		rw,
  
  profile alacarte {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/alacarte				Px,	# x11-misc/alacarte
  }
}

profile xfce4-settings.xfsettingsd /usr/bin/xfsettingsd {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/xfconf>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/upower>
  #include <abstractions/dbus/notifications>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC_D}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfsettingsd					mr,
  /usr/bin/xkbcomp					Px,	# x11-apps/xkbcomp
  /usr/bin/xflock4					Px,	# xfce-base/xfce4-session
  /usr/bin/xfce4-display-settings			Px,
  /usr/bin/xfdesktop					Px,	# xfce-base/xfdesktop
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/autostart/xfsettingsd.desktop		r,	# xfce-base/xfdesktop
  
  # USERS ----------------------------------------------
  owner @{HOME_D}/.xfce4-session.verbose-log		w,
  
  # TEMP -----------------------------------------------
  owner /tmp/file@{TMP6}				rw,	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
}
