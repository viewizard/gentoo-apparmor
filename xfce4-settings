#include <tunables/global>

profile xfce4-settings /usr/bin/xfce4{,-accessibility,-appearance,-display,-keyboard,-mime,-mouse}-settings{,-editor,-manager} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>  # need for CUPS (web browser)
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4{,-accessibility,-appearance,-display,-keyboard,-mime,-mouse}-settings{,-editor,-manager} Pxmr,
  /usr/bin/xfce4-session-settings			Px,
  /usr/bin/thunar-volman-settings			Px,
  /usr/bin/xfwm4{,-tweaks,-workspace}-settings		Px,
  /usr/bin/exo-preferred-applications			Px,
  /usr/bin/xfce4-panel					Px,
  /usr/bin/xfce4-notifyd-config				Px,
  /usr/bin/thunar-settings				Px,
  /usr/bin/dbus-send					Px,
  /usr/bin/qtchooser					Px,
  /usr/bin/gparted-pkexec				Px,
  /usr/bin/pavucontrol					Px,
  /usr/bin/passwd.sh					Px,
  /usr/bin/xfdesktop-settings				Px,
  /usr/bin/mate-screensaver-preferences			Px,	# MATE
  /usr/bin/exo-open					Px,
  /usr/bin/vino-preferences				Px,
  /usr/bin/onboard-settings				Px,
  /usr/bin/xfce4-terminal				Px,
  @{PYTHON_EXEC_WRAPPER}				Cx -> alacarte,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/						r,
  /etc/xdg/autostart/{,*}				r,
  /etc/xdg/menus/xfce-settings-manager.menu		r,
  /usr/share/						r,
  /usr/share/mime/					r,
  /usr/share/cursors/					r,
  /usr/share/desktop-directories/*			r,
  /opt/**.png						r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/				r,
  owner @{HOME}/.config/				r,
  owner @{HOME}/.config/autostart/			r,
  owner @{HOME}/.config/autostart/*			rw,
  owner @{HOME}/.config/mimeapps.list*			rw,
  owner @{HOME}/.config/xfce4/help.rc*			rw,
  
  profile alacarte {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/alacarte				Px,
  }
}

profile xfce4-settings.xfsettingsd /usr/bin/xfsettingsd {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfsettingsd					mr,
  /usr/bin/xkbcomp					Pxr,
  /usr/bin/xflock4					Pxr,
  /usr/bin/xfce4-display-settings			Px,
  /usr/bin/xfdesktop					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/autostart/xfsettingsd.desktop		r,
  
  # TEMP -----------------------------------------------
  owner /tmp/file*					rw,
}
