#include <local/tunables.d/>

# .jpeg, .jpg, .jpe
@{local_ext}=[jJ][pP]{[eE][gG],[eEgG]}
# .png
@{local_ext}+=[pP][nN][gG]
# .bmp
@{local_ext}+=[bB][mM][pP]

profile xfdesktop /usr/bin/xfdesktop {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/xfconf>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/thumbnails>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/profile_transitions/users-all>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/xfce/FileManager"
  	interface="org.xfce.{FileManager,Trash}"
  	peer=(name="org.xfce.FileManager",label="thunar"),	# xfce-base/thunar
  								# RBAC! Для root ветки label="thunar_root".
  dbus receive
  	bus=session
  	path="/org/xfce/FileManager"
  	interface="org.xfce.Trash"
  	peer=(name=":[0-9]*.[0-9]*",label="thunar"),		# xfce-base/thunar
  								# RBAC! Для root ветки label="thunar_root".
  dbus send
  	bus=session
  	path="/org/xfce/xfdesktop"
  	interface="org.gtk.Actions"
  	peer=(name="org.xfce.xfdesktop",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/org/xfce/xfdesktop"
  	interface="org.gtk.Actions"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{SYS_D}/devices/virtual/block/@{BLOCK_VIRT}/{,*/}name r,
  @{PROC_D}/@{pid}/fd/					r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  @{PROC_D}/@{pid}/mount{s,info}			r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfdesktop					mr,
  @{shell}						Cx,
  /usr/lib{,32,64}/xfce4/exo-1/exo-helper-1		Px,	# xfce-base/exo
  /usr/bin/exo-desktop-item-edit			Px,	# xfce-base/exo
  /usr/bin/xfdesktop-settings				Px,
  /usr/bin/xfce4-session-logout				Px,	# xfce-base/xfce4-session
  /usr/libexec/thunar-archive-plugin/engrampa.tap	Px,	# xfce-extra/thunar-archive-plugin
  								# RBAC! В случае root, использовать engrampa_tap_root
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/menus/**.menu				r,
  /etc/xdg/menus/applications-merged/			r,
  /usr/share/desktop-directories/{,*.directory}		r,
  /usr/{,local/}share/**/				r,
  /usr/{,local/}share/**.@{local_ext}			r,
  /usr/lib{,32,64}/thunarx-2/*.so			m,	# xfce-base/thunar
  /opt/**/						r,
  /opt/**.@{local_ext}					r,
  /run/mount/utab					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/					r,
  owner @{HOME}/[^.]**					r,
  owner @{HOME}/**.@{local_ext}				r,
  owner @{HOME}/[^.]**/					r,
  owner @{HOME}/.config/xfce4/desktop/{,**}		rw,
  owner @{HOME}/.config/Thunar/{,**}			rw,	# xfce-base/thunar
  owner @{HOME}/.config/menus/**.menu			r,
  owner @{HOME}/.config/menus/applications-merged/	r,
  owner @{HOME}/.local/share/desktop-directories/{,*.directory} r,
  owner @{HOME}/.local/share/gvfs-metadata/{,*}		r,	# gnome-base/gvfs
  owner @{HOME}/.xfce4-session.verbose-log		rw,
  
  # TEMP -----------------------------------------------
  audit owner /tmp/gdkpixbuf-xpm-tmp.*			rw,	# FIX ME! audit 25.11.2017	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <local/profile_blocks/thunar-custom-actions.d/>	# Must be the same as thunar custom actions!
    								# RBAC! Для root ветки <local/profile_blocks/thunar_root-custom-actions.d/>.
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /usr/bin/{gksu,gksudo}				Px,	# app-admin/sudo
  }
}

profile xfdesktop.xfdesktop-settings /usr/bin/xfdesktop-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/xfconf>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/thumbnails>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC_D}/@{pid}/mountinfo			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfdesktop-settings				mr,
  
  # READS/WRITES ---------------------------------------
  /usr/{,local/}share/**/				r,
  /usr/{,local/}share/**.@{local_ext}			r,
  /opt/**/ r,
  /opt/**.@{local_ext}					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/					r,
  owner @{HOME}/**.@{local_ext}				r,
  owner @{HOME}/**/					r,
  owner @{HOME}/.local/share/gvfs-metadata/{home,root}{,-@{TMP8}.log} r,	# gnome-base/gvfs
}
