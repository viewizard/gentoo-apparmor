#include <tunables/global>

@{local_ext}="{png,jpeg,jpg,bmp,PNG,JPEG,JPG,BMP}"

profile xfdesktop /usr/bin/xfdesktop {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/gtk>
  #include <abstractions/nameservice>
  #include <abstractions/executable-binary-programs>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/{,*/}name	r,
  @{PROC}/@{pid}/fd/					r,
  owner @{PROC}/@{pid}/mountinfo			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfdesktop					mr,
  @{shell}						Cx,
  /usr/lib{,32,64}/xfce4/exo-1/exo-helper-1		Px,
  /usr/bin/exo-desktop-item-edit			Px,
  /usr/bin/xfdesktop-settings				Px,
  /usr/bin/xfce4-session-logout				Px,
  /usr/libexec/thunar-archive-plugin/xarchiver.tap	Px,	# RBAC! В случае root, вызывать xarchiver_tap_root
  /usr/libexec/thunar-archive-plugin/engrampa.tap	Px,	# RBAC! В случае root, вызывать engrampa_tap_root
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/menus/**.menu				r,
  /etc/xdg/menus/applications-merged/			r,
  /usr/share/desktop-directories/{,*.directory}		r,
  /usr/{,local/}share/**/				r,
  /usr/{,local/}share/**.@{local_ext}			r,
  /usr/lib{,32,64}/thunarx-2/*.so			m,
  /opt/**/						r,
  /opt/**.@{local_ext}					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/					r,
  owner @{HOME}/[^.]**					r,
  owner @{HOME}/**.@{local_ext}				r,
  owner @{HOME}/[^.]**/					r,
  owner @{HOME}/.config/xfce4/desktop/{,**}		rw,
  owner @{HOME}/.config/Thunar/{,**}			rw,
  owner @{HOME}/.config/menus/**.menu			r,
  owner @{HOME}/.config/menus/applications-merged/	r,
  owner @{HOME}/.local/share/desktop-directories/{,*.directory} r,
  owner @{HOME}/.local/share/gvfs-metadata/{,*}		r,
  owner @{HOME}/.xfce4-session.verbose-log		rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <local/thunar-custom-actions>  # Must be the same as thunar custom actions!
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /usr/bin/{gksu,gksudo}				Px,
    
    # USERS --------------------------------------------
    owner @{HOME}/.session.log				w,	# XFCE4, <abstractions/X>
  }
}

profile xfdesktop.xfdesktop-settings /usr/bin/xfdesktop-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/dbus-session-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pid}/mountinfo				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfdesktop-settings				mr,
  
  # READS/WRITES ---------------------------------------
  /usr/{,local/}share/**/				r,
  /usr/{,local/}share/**.@{local_ext}			r,
  /opt/**/ r,
  /opt/**.@{local_ext}					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/					r,
  owner @{HOME}/**.@{local_ext}				r,
  owner @{HOME}/**/					r,
  owner @{HOME}/.local/share/gvfs-metadata/{home,root}*	r,
  
  # NOISY ----------------------------------------------
#  deny @{HOME}/.*					r,	# 31.03.2017 @{HOME}/.Xauthority может потребоваться доступ
}
