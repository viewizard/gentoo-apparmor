#include <tunables/global>

profile onboard /usr/bin/onboard flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/python>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dconf>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/onboard					mr,
  /usr/bin/tput						Px,	# FIX ME! 05.04.2017 изменен c ix, flags=(complain)
  
  # READS/WRITES ---------------------------------------
  /usr/bin/						r,
  /usr/share/onboard/{,**}				r,
  /usr/share/xml/iso-codes/{,*}				r,
  @{PYTHON_PACKAGES}/cairo/**.pyc{,.*}			w,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/onboard/{,**}		rw,
  
  # NOISY ----------------------------------------------
  deny @{HOME}/						r,
}

profile onboard-settings /usr/bin/onboard-settings flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/python>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dconf>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/onboard-settings				mr,
  /usr/bin/tput						Px,	# FIX ME! 05.04.2017 изменен c ix, flags=(complain)
  
  # READS/WRITES ---------------------------------------
  /usr/bin/						r,
  /usr/share/onboard/{,**}				r,
  @{PYTHON_PACKAGES}/cairo/**.pyc{,.*}			w,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/onboard/{,**}		rw,
}
