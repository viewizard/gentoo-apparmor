#include <local/tunables.d/>

profile onboard /usr/bin/onboard {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/python>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/session-bind>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/freedesktop/DBus"
  	interface="org.freedesktop.DBus.Introspectable"
  	member=Introspect
  	peer=(name="org.freedesktop.DBus",label="dbus.dbus-daemon"),
  dbus (send, receive)
  	bus=session
  	path="/org/onboard/Onboard/Keyboard"
  	interface="org.freedesktop.DBus.Introspectable"
  	member=Introspect
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  dbus (send, receive)
  	bus=session
  	path="/org/onboard/Onboard/Keyboard"
  	interface="org.onboard.Onboard.Keyboard"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC_D}/@{pid}/fd/				r,	# FIX ME! Проверить доступ.
  owner @{PROC_D}/@{pid}/mounts				r,	# FIX ME! Проверить доступ.
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/onboard					mr,
  /usr/bin/tput						Px,	# sys-libs/ncurses
  @{PYTHON_EXEC_WRAPPER}				Px -> onboard_settings,	# dev-lang/python-exec	# Запускает не как /usr/bin/...,
  													# а через python-exec.
  
  # READS/WRITES ---------------------------------------
  /usr/bin/						r,
  /usr/share/onboard/{,**}				r,
  /usr/share/xml/iso-codes/{,*}				r,	# app-text/iso-codes
  @{PYTHON_PACKAGES_D}/cairo/{,**/}			w,	# dev-python/pycairo
  @{PYTHON_PACKAGES_D}/cairo/**.pyc{,.*}		w,	# dev-python/pycairo
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/onboard/{,**}		rw,
  
  # NOISY ----------------------------------------------
  deny @{HOME}/						r,
}

profile onboard_settings /usr/bin/onboard-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/python>
  #include <abstractions/python-exec>		# DELEGATION! onboard, нужен только при запуске через python-exec
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/freedesktop/DBus"
  	interface="org.freedesktop.DBus.Introspectable"
  	member=Introspect
  	peer=(name="org.freedesktop.DBus",label="dbus.dbus-daemon"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{SYS_D}/bus/						r,
  @{SYS_D}/class/					r,
  @{SYS_D}/class/input/					r,
  @{SYS_D}/devices/**/input@{input}/uevent		r,
  owner @{PROC_D}/@{pid}/fd/				r,	# FIX ME! Проверить доступ.
  owner @{PROC_D}/@{pid}/mounts				r,	# FIX ME! Проверить доступ.
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/onboard-settings				mr,
  /usr/bin/tput						Px,	# sys-libs/ncurses
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,	# sys-fs/eudev
  /usr/bin/						r,
  /usr/share/onboard/{,**}				r,
  @{PYTHON_PACKAGES_D}/cairo/{,**/}			w,	# dev-python/pycairo
  @{PYTHON_PACKAGES_D}/cairo/**.pyc{,.*}		w,	# dev-python/pycairo
  audit /run/udev/data/*				r,	# FIX ME! audit 11.12.2017
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/onboard/{,**}		rw,
  
  # NOISY ----------------------------------------------
  deny @{HOME}/						r,
}
