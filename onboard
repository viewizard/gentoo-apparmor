#include <tunables/global>

profile onboard /usr/bin/onboard {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/python>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/dbus-session-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/onboard					mr,
  /usr/bin/tput						Px,
  @{PYTHON_EXEC_WRAPPER}				Px -> onboard_settings,		# Запускает не как /usr/bin/...,
  											# а через python-exec.
  
  # READS/WRITES ---------------------------------------
  /usr/bin/						r,
  /usr/share/onboard/{,**}				r,
  /usr/share/xml/iso-codes/{,*}				r,
  /usr/share/onboard/scripts/__pycache__/		w,
  @{PYTHON_PACKAGES}/cairo/{**/,**.pyc{,.*}}		w,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/onboard/{,**}		rw,
  
  # NOISY ----------------------------------------------
  deny @{HOME}/						r,
}

profile onboard_settings /usr/bin/onboard-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/python>
  #include <abstractions/python-exec>				# DELEGATION! onboard, нужен только при запуске через python-exec
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/dbus-session-strict>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /sys/bus/						r,
  /sys/class/						r,
  /sys/class/input/					r,
  /sys/devices/**/input**/uevent			r,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/onboard-settings				mr,
  /usr/bin/tput						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /usr/bin/						r,
  /usr/share/onboard/{,**}				r,
  @{PYTHON_PACKAGES}/cairo/{**/,**.pyc{,.*}}		w,
  /run/udev/data/*					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/onboard/{,**}		rw,
  
  # NOISY ----------------------------------------------
  deny @{HOME}/						r,
}
