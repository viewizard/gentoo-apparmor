#include <tunables.d/>

profile onboard /usr/bin/onboard {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/python>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/session-bind>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/freedesktop/DBus"
  	interface="org.freedesktop.DBus.Introspectable"
  	member=Introspect
  	peer=(name="org.freedesktop.DBus",label="dbus.dbus-daemon"),
  dbus (send, receive)
  	bus=session
  	path="/org/onboard/Onboard/Keyboard"
  	interface="org.freedesktop.DBus.Introspectable"
  	member=Introspect
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  dbus (send, receive)
  	bus=session
  	path="/org/onboard/Onboard/Keyboard"
  	interface="org.onboard.Onboard.Keyboard"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/onboard					mr,
  /usr/bin/tput						Px,
  @{PYTHON_EXEC_WRAPPER}				Px -> onboard_settings,		# Запускает не как /usr/bin/...,
  											# а через python-exec.
  
  # READS/WRITES ---------------------------------------
  /usr/bin/						r,
  /usr/share/onboard/{,**}				r,
  /usr/share/xml/iso-codes/{,*}				r,
  /usr/share/onboard/scripts/__pycache__/		w,
  @{PYTHON_PACKAGES}/cairo/{**/,**.pyc{,.*}}		w,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/onboard/{,**}		rw,
  
  # NOISY ----------------------------------------------
  deny @{HOME}/						r,
}

profile onboard_settings /usr/bin/onboard-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/python>
  #include <abstractions/python-exec>		# DELEGATION! onboard, нужен только при запуске через python-exec
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/freedesktop/DBus"
  	interface="org.freedesktop.DBus.Introspectable"
  	member=Introspect
  	peer=(name="org.freedesktop.DBus",label="dbus.dbus-daemon"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /sys/bus/						r,
  /sys/class/						r,
  /sys/class/input/					r,
  /sys/devices/**/input**/uevent			r,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/onboard-settings				mr,
  /usr/bin/tput						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /usr/bin/						r,
  /usr/share/onboard/{,**}				r,
  @{PYTHON_PACKAGES}/cairo/{**/,**.pyc{,.*}}		w,
  /run/udev/data/*					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/onboard/{,**}		rw,
  
  # NOISY ----------------------------------------------
  deny @{HOME}/						r,
}
