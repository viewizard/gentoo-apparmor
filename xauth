#include <local/tunables.d/>

profile xauth /usr/bin/xauth {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xauth					mr,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.Xauthority*				rw,
  owner link subset @{HOME}/.Xauthority*		-> /{home/*,root}/.Xauthority*,		# TARGET! @{HOME}
  owner @{HOME}/.serverauth.*				rw,
  owner link subset @{HOME}/.serverauth.*		-> /{home/*,root}/.serverauth.*,	# TARGET! @{HOME}
  owner @{HOME}/.xauth*					rw,
  owner link subset @{HOME}/.xauth*			-> /{home/*,root}/.xauth*,	# TARGET! @{HOME}
  
  # TEMP -----------------------------------------------
  owner /tmp/@{TMP_SH}					rw,
}
