#include <tunables/global>
profile gptfdisk.gdisk /usr/sbin/gdisk flags=(complain) {
  #include <abstractions/base>
  
  /dev/sd[a-z] rw,
  
  /dev/pts/[0-9]* rw,
  
  /usr/sbin/gdisk mr,
  
}
