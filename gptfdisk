#include <tunables.d/>

profile gptfdisk.gdisk /usr/sbin/gdisk flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/gdisk					mr,
}
