#include <local/tunables.d/>

profile uget.uget-gtk /usr/bin/uget-gtk {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/unix/gvfsd-trash>
  #include <abstractions/unix/gvfsd-network>
  #include <abstractions/fs/access-by-pattern-internet>
  #include <abstractions/profile_transitions/users-mime-related>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC_D}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/uget-gtk					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/ssl/openssl.cnf					r,	# dev-libs/openssl
  
  # USERS ----------------------------------------------
  owner @{HOME_D}/.config/uGet/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/uGetIPC-@{USER}				rw,
  
  # NOISY ----------------------------------------------
  deny @{HOMEDIRS_D}/					r,
  deny @{HOME_D}/					r,
}

profile uget.uget-cmd /usr/bin/uget-cmd {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fs/access-by-pattern-internet>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/uget-cmd					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/ssl/openssl.cnf					r,	# dev-libs/openssl
  
  # USERS ----------------------------------------------
  owner @{HOME_D}/.config/uGet/{,**}			rw,
}
