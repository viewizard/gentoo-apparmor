#include <local/tunables.d/>

profile bind-tools.dig@{p_all} /usr/bin/dig@{t_all} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/ssl-certs>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dig						mr,
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/lynis.cron.@{TMP6}				w,	# lynis.cron.daily
}
