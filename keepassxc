#include <tunables/global>

# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="**"
@{USERS_FILE}="{,.}*.{kdbx,csv,KDBX,CSV}{,.lock}"

profile keepassxc /usr/bin/keepassxc {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/dbus-pattern/gconf>
  #include <abstractions/fs-access-by-users-preset-rwk>
  #include <abstractions/fs-deny-by-pattern-internet>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  
  # NETWORK --------------------------------------------
  network inet stream,						# FIX ME! Только локальный адрес!
  network inet6 stream,						# FIX ME! Только локальный адрес!
  
  # PSEUDO ---------------------------------------------
  /dev/tty						r,
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pid}/{cmdline,status}			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/keepassxc					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/bin/						r,
  /usr/share/keepassxc/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/				r,
  owner @{HOME}/.config/keepassxc/			rw,
  owner @{HOME}/.config/keepassxc/**			rwk,
  owner @{HOME}/.config/.??????				rwk,
}
