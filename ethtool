#include <tunables/global>

profile ethtool /usr/sbin/ethtool flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability net_admin,
  capability sys_module,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/ethtool					mr,
}
