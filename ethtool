#include <tunables/global>
profile ethtool /usr/sbin/ethtool flags=(complain) {
  #include <abstractions/base>
  
  capability net_admin,
  
  /dev/pts/[0-9]* w,
  
  /usr/sbin/ethtool r,
  
}
