#include <tunables/global>

profile udev-init-scripts.udev.init.d /etc/init.d/udev flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  @{PROC}/@{pid}/mounts					r,
  @{PROC}/sys/kernel/hotplug				w,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/grep						ix,
  /bin/udevadm						Px,
  /sbin/udevd						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  /etc/{conf,init}.d/udev				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}

profile udev-init-scripts.udev-trigger.init.d /etc/init.d/udev-trigger flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/udevadm						Px,
  /bin/cat						ix,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/udev-trigger			r,
  /run/udev/rules.d/*.rules				w,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}

