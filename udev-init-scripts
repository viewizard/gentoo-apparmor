#include <local/tunables.d/>

profile udev-init-scripts.udev.init.d /etc/init.d/udev {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/udev/tasks			w,
  @{PROC}/@{pid}/mounts					r,
  @{PROC}/sys/kernel/hotplug				w,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/grep						Cx,
  /bin/mkdir						Cx,
  /bin/udevadm						Px,
  /sbin/udevd						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  /etc/{conf,init}.d/udev				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{PROC}/filesystems					r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /dev/pts/						w,
    /sys/fs/cgroup/openrc/udev/				w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
}

profile udev-init-scripts.udev-trigger.init.d /etc/init.d/udev-trigger {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/udev-trigger/tasks		w,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/udevadm						Px,
  /bin/mkdir						Cx,
  /bin/cat						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/udev-trigger			r,
  /run/udev/rules.d/*.rules				w,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/openrc/udev-trigger/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
    
    # READS/WRITES -------------------------------------
    /run/udev/rules.d/					w,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{PROC}/cmdline					r,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
}

