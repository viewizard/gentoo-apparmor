#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*.{rdp,RDP}"

profile remmina /usr/bin/remmina {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dconf>
  #include <abstractions/nameservice>
  #include <abstractions/program-work-with-disk-rwk-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/remmina					mr,
  /usr/lib{,32,64}/remmina/plugins/**.so		m,
  
  # READS/WRITES ---------------------------------------
  /etc/timezone						r,
  /usr/share/remmina/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.remmina/{,*}				rw,
  owner @{HOME}/.config/autostart/remmina-applet.desktop r,
  owner @{HOME}/.config/freerdp/{,**}			rw,
  owner @{HOME}/.config/remmina/{,**}			rw,
  owner @{HOME}/.local/share/remmina/{,**}		rw,
}
