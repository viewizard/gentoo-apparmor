#include <local/tunables.d/>

profile thunar-volman /usr/bin/thunar-volman {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/xfconf>
  #include <abstractions/dbus/notifications>
  #include <abstractions/nameservice>
  #include <abstractions/X_sudo>				# RBAC! Нужно только для выполнения под root-ом
								# thunar-a, например, если запускаем через sudo.
  								# Временно делаем одним профилем, чтобы уменьшить
  								# кол-во переходов из профиля thunar.
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/{,**/}uevent rw,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/ata@{ATA1}/**/block/@{BLOCK_REAL}/{,*/}uevent r,
  @{sys}/devices/virtual/block/@{BLOCK_VIRT}/{,*/}{,name,uevent} r,
  owner @{PROC}/@{pid}/fd/				r,
  owner @{PROC}/@{pid}/mountinfo			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/thunar-volman				mr,
  /usr/bin/thunar-volman-settings			Px,
  /usr/bin/thunar					Px,	# xfce-base/thunar
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  /etc/udev/udev.conf					r,	# sys-fs/eudev
  /usr/share/gvfs/remote-volume-monitors/{,*.monitor}	r,	# gnome-base/gvfs
  /run/udev/data/{[a-z]*[0-9]*:[0-9]*,+usb:@{USB4}}	r,
  /run/mount/utab					r,
}

profile thunar-volman.thunar-volman-settings /usr/bin/thunar-volman-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/xfconf>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/thunar-volman-settings			mr,
  /usr/bin/exo-open					Px,	# xfce-base/exo
  
  # USERS ----------------------------------------------
  @{HOME}/.config/xfce4/help.rc				r,
}
