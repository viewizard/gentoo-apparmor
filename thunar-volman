#include <tunables/global>

profile thunar-volman /usr/bin/thunar-volman {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/dbus-pattern/xfconf>
  #include <abstractions/dbus-pattern/notifications>
  #include <abstractions/nameservice>
  #include <abstractions/X_sudo>				# RBAC! Нужно только для выполнения под root-ом
								# thunar-a, например, если запускаем через sudo.
  								# Временно делаем одним профилем, чтобы уменьшить
  								# кол-во переходов из профиля thunar.
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/{,**/}uevent	rw,
  /sys/devices/pci[0-9]*/**/ata[0-9]*/**/block/@{BLOCK_REAL}/{,*/}uevent r,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/{,*/}{,name,uevent} r,
  @{PROC}/@{pid}/fd/					r,
  owner @{PROC}/@{pid}/mountinfo			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/thunar-volman				mr,
  /usr/bin/thunar-volman-settings			Px,
  /usr/bin/thunar					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  /etc/udev/udev.conf					r,
  /usr/share/gvfs/remote-volume-monitors/{,*.monitor}	r,
  /run/udev/data/*					r,
  /run/mount/utab					r,
}

profile thunar-volman.thunar-volman-settings /usr/bin/thunar-volman-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/dbus-pattern/xfconf>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/thunar-volman-settings			mr,
}
