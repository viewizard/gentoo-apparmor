  # EXECUTABLES ----------------------------------------
  /bin/env						mr,
  /sbin/apparmor_parser					Px,	# sys-apps/apparmor
  
  # READS/WRITES ---------------------------------------
  /etc/inputrc						r,
  /etc/apparmor/logprof.conf				r,
  /etc/apparmor.d/{,**}					r,
  /etc/apparmor.d/*					w,
