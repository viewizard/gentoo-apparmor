#include <tunables/global>
profile xautolock /usr/bin/xautolock flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/X>
  
  /dev/pts/[0-9]* w,
  
  /usr/bin/xautolock r,
  /bin/bash Cx -> shell,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /usr/bin/mate-screensaver-command Px,
    
  }
  
}
