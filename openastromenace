#include <local/tunables.d/>

profile openastromenace /usr/{,games/}bin/openastromenace {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/video>
  #include <abstractions/X>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/input/event[0-9]*				r,
  @{sys}/bus/						r,
  @{sys}/class/						r,
  @{sys}/class/input/					r,
  @{sys}/class/sound/					r,
  @{sys}/devices/**/uevent				r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/**/sound/**/capabilities/* r,
  
  # EXECUTABLES ----------------------------------------
  /usr/{,games/}bin/openastromenace			mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/{,games/}openastromenace/{,**}		r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/astromenace/{,*}		rw,
}
