#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*.*"

profile gimp /usr/bin/{gimp,gimp-*,gimp-console,gimp-console-*} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/cups-client>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/executable-binary-helper>
  #include <abstractions/program-work-with-disk-rwk-strict>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gimp-*					rm,
  /usr/bin/gimp-console-*				mr,
  /usr/lib{,32,64}/gimp/[0-9].[0-9]/plug-ins/*		ix,
  
  # READS/WRITES ---------------------------------------
  /etc/gimp/{,**}					r,
  /usr/lib{,32,64}/gimp/{,**}				r,
  /usr/lib{,32,64}/{babl,gegl}-[0-9].[0-9]/*.so		m,
  /usr/share/gimp/{,**}					r,
  /usr/share/xml/iso-codes/*				r,
  
  # USERS ----------------------------------------------
  owner @{HOME_CACHE}/gegl-[0-9].[0-9]/{,**}		rw,
  owner @{HOME}/.local/share/gegl-[0-9].[0-9]/{,**}	rw,
  owner @{HOME}/.gimp-[0-9].[0-9]/			rw,
  owner @{HOME}/.gimp-[0-9].[0-9]/**			rwk,
}
