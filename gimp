#include <tunables/global>

# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]*.*"

profile gimp /usr/bin/{gimp,gimp-*,gimp-console,gimp-console-*} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/cups-client>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/dbus-pattern/session-bind>
  #include <abstractions/binary-helper-strict-web>
  #include <abstractions/fs-access-by-users-preset-rwk>
  #include <abstractions/nameservice>
  #include <abstractions/unix-pattern/gvfsd-http>
  #include <abstractions/unix-pattern/gvfsd-http-virtual>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/gimp/GIMP/UI"
  	interface="org.gimp.GIMP.UI"
  	peer=(name="org.gimp.GIMP.UI",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/org/gimp/GIMP/UI"
  	interface="org.gimp.GIMP.UI"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gimp-*					rm,
  /usr/bin/gimp-console-*				mr,
  /usr/lib{,32,64}/gimp/[0-9].[0-9]/plug-ins/*		ix,
  
  # READS/WRITES ---------------------------------------
  /etc/gimp/{,**}					r,
  /usr/lib{,32,64}/gimp/{,**}				r,
  /usr/lib{,32,64}/{babl,gegl}-[0-9].[0-9]/*.so		m,
  /usr/share/gimp/{,**}					r,
  /usr/share/xml/iso-codes/*				r,
  
  # USERS ----------------------------------------------
  owner @{HOME_CACHE}/gegl-[0-9].[0-9]/{,**}		rw,
  owner @{HOME}/.local/share/gegl-[0-9].[0-9]/{,**}	rw,
  owner @{HOME}/.gimp-[0-9].[0-9]/			rw,
  owner @{HOME}/.gimp-[0-9].[0-9]/**			rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/gdkpixbuf-save-tmp.*			rw,
  owner /tmp/gtkprint_*					rw,
}
