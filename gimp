#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-rwk
@{USERS_DIR_rwk}="[^.]**"
@{USERS_FILE_rwk}="[^.]*.*"

@{GIMP_VER}=[0-9].[0-9]
@{BABL_VER}=[0-9].[0-9]
@{GEGL_VER}=[0-9].[0-9]

profile gimp /usr/bin/gimp{,-@{GIMP_VER},-console,-console-@{GIMP_VER}} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/cups-client>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(kill) peer="gimp.plug-ins",
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/gimp/GIMP/UI"
  	interface="org.gimp.GIMP.UI"
  	peer=(name="org.gimp.GIMP.UI",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/org/gimp/GIMP/UI"
  	interface="org.gimp.GIMP.UI"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gimp-@{GIMP_VER}				mr,
  /usr/bin/gimp-console-@{GIMP_VER}			mr,
  /usr/lib{,32,64}/gimp/@{GIMP_VER}/plug-ins/*		Px,
  
  # READS/WRITES ---------------------------------------
  /etc/gimp/{,**}					r,
  /usr/lib{,32,64}/gimp/{,**}				r,
  /usr/lib{,32,64}/babl-@{BABL_VER}/*.so		m,
  /usr/lib{,32,64}/gegl-@{GEGL_VER}/*.so		m,
  /usr/share/gimp/{,**}					r,
  /usr/share/xml/iso-codes/*				r,
  
  # USERS ----------------------------------------------
  owner @{HOME_CACHE}/gegl-@{GEGL_VER}/{,**}		rw,
  owner @{HOME}/.local/share/gegl-@{GEGL_VER}/{,**}	rw,
  owner @{HOME}/.gimp-@{GIMP_VER}/{,**}			rw,
  owner @{HOME}/.gimp-@{GIMP_VER}/{,**/}*		k,
  
  # TEMP -----------------------------------------------
  audit owner /tmp/gdkpixbuf-save-tmp.*			rw,	# FIX ME! audit 25.11.2017	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  audit owner /tmp/gtkprint_*				rw,	# FIX ME! audit 25.11.2017	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
}

profile gimp.plug-ins /usr/lib{,32,64}/gimp/@{GIMP_VER}/plug-ins/* {
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/unix/gvfsd-http>
  #include <abstractions/unix/gvfsd-http-virtual>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  #include <abstractions/profile_transitions/users-strict-web>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/gimp/@{GIMP_VER}/plug-ins/*		mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/gimp/@{GIMP_VER}/scripts/{,*}		r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.gimp-@{GIMP_VER}/**			rw,
}