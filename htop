#include <local/tunables.d/>

profile htop /usr/bin/htop {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/nameservice>
  #include <abstractions/ncurses>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability setuid,
  capability kill,
  capability sys_nice,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # SIGNAL ---------------------------------------------
  signal (send),						# Все правильно, должны иметь возможность передать
  								# любой сигнал любому процессу.
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/						r,
  @{PROC}/{loadavg,uptime}				r,
  @{PROC}/sys/kernel/pid_max				r,
  @{PROC}/@{pids}/{stat,statm,cmdline}			r,
  @{PROC}/@{pids}/task/					r,
  @{PROC}/@{pids}/task/@{pids}/{stat,statm,cmdline}	r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/htop mr,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/htop/{,htoprc} rw,
}
