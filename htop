#include <tunables/global>

profile htop /usr/bin/htop {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability kill,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # SIGNAL ---------------------------------------------
  signal (send),
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/sys/kernel/pid_max				r,
  @{PROC}/{,loadavg,uptime}				r,
  @{PROC}/@{pid}/{stat,statm,cmdline}			r,
  @{PROC}/@{pid}/task/					r,
  @{PROC}/@{pid}/task/@{pid}/{stat,statm,cmdline}	r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/htop mr,
  
  # READS/WRITES ---------------------------------------
  /etc/terminfo/x/xterm r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/htop/{,htoprc} rw,
}
