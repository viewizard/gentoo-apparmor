#include <tunables/global>
profile wine /usr/bin/wine {
  #include <abstractions/X>
  #include <abstractions/audio>
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/nameservice>
  #include <abstractions/p11-kit>
  #include <abstractions/private-files-strict>
  #include <abstractions/user-tmp>

  capability sys_ptrace,

  owner /dev/shm/pulse-shm* k,
  /dev/shm/pulse-shm* rw,

  /usr/bin/ntlm_auth rPx,
  /usr/bin/wine mr,
  /usr/bin/wine-preloader Px,
  /usr/bin/wineserver rPx,
  
  @{PROC}/cpuinfo r,
  @{PROC}/meminfo r,
  @{PROC}/scsi/scsi r,
  owner @{PROC}/@{pid}/mem r,
    
  /usr/share/wine/** r,
  owner @{HOME_CACHE}/fontconfig/* r,
  owner @{HOME}/.config/fontconfig/fonts.conf r,
  owner @{HOME}/.config/pulse/cookie rk,

  # Noisy
  deny / r,
  deny /var/lib/dbus/machine-id r,


  # FIX ME!
  owner @{HOME}/.wine*/** mrwk,

}


profile wine.ntlm_auth /usr/bin/ntlm_auth {
  #include <abstractions/base>
  #include <abstractions/private-files-strict>

  /usr/bin/ntlm_auth mr,

}


profile wine-preloader /usr/bin/wine-preloader {
  #include <abstractions/X>
  #include <abstractions/audio>
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/nameservice>
  #include <abstractions/p11-kit>
  #include <abstractions/private-files-strict>
  #include <abstractions/X>
  #include <abstractions/nvidia>
  #include <abstractions/user-tmp>

  /dev/pts/[0-9]* rw,

  /sys/devices/system/cpu/cpu*/cpufreq/* r,
  /sys/devices/system/cpu/cpu*/cache/index*/* r,
  /sys/devices/system/cpu/cpufreq/policy*/{scaling_cur_freq,scaling_max_freq,cpuinfo_max_freq} r,
  /sys/devices/system/node/** r,
  @{PROC}/cpuinfo r,
  @{PROC}/meminfo r,
  @{PROC}/scsi/scsi r,
  @{PROC}/@{pid}/mounts r,
  owner /dev/shm/#* rw,
  owner /dev/shm/pulse-shm* k,
  /dev/shm/pulse-shm* rw,

  /usr/bin/wine rm,
  /usr/bin/ntlm_auth rPx,
  /usr/bin/wine-preloader mrPx,
  /usr/bin/wineserver Px,
  
  /etc/mime.types r,
  /etc/localtime r,
  /etc/fstab r,
  /etc/printcap r,
  /etc/machine-id r,
  /etc/terminfo/x/xterm r,
  /usr/lib32/wine/* m,
  /usr/share/wine/** r,
  /usr/share/icons/** r,
  /tmp/* m,
  
  owner @{HOME}/.config/pulse/cookie rk,
  owner @{HOME}/.wine*/* mrw,
  owner @{HOME}/.wine*/** mrw,

  # Noisy
  deny / r,
  deny /etc/fstab r,
  deny /var/lib/dbus/machine-id r,
  deny @{HOMEDIRS}/* w,
  deny @{HOMEDIRS}/*/ w,
  deny /etc/ r,
  deny /usr/local/ r,
  deny /usr/local/lib64/ r,
  

  # FIX ME!
  owner @{HOME_CACHE}/eve*/ rw,
  owner @{HOME_CACHE}/eve*/** rw,
  owner @{HOME}/Desktop/AstroMenace/ rwm,
  owner @{HOME}/Desktop/AstroMenace/** rwm,

}


profile wineserver /usr/bin/wineserver {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/private-files-strict>
  #include <abstractions/user-tmp>

  capability sys_ptrace,

  owner @{PROC}/@{pid}/mem r,

  /etc/mime.types r,
  /usr/bin/wineserver mr,
  /usr/share/wine/* r,
  /tmp/.wine-*/** m,
  owner /tmp/.wine-*/** rwlk,
  
  owner @{HOME}/.local/share/icons/hicolor/** w,
  owner @{HOME}/.wine*/ rw,
  owner @{HOME}/.wine*/* mrw,
  owner @{HOME}/.wine*/** mrw,
  owner @{HOME}/.wine*/drive_c/ r,
  owner @{HOME}/.wine*/drive_c/** rwk,

  # Noisy
  deny / r,
  deny /media/*/ r,
  deny /mnt/*/ r,
  

  # FIX ME!
  owner @{HOME_CACHE}/eve*/ rw,
  owner @{HOME_CACHE}/eve*/** rw,
  owner @{HOME}/Desktop/AstroMenace/ rw,
  owner @{HOME}/Desktop/AstroMenace/** rw,
  
}