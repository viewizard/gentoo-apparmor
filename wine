#include <tunables/global>
profile wine /usr/bin/wine {
  #include <abstractions/X>
  #include <abstractions/audio>
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/nameservice>
  #include <abstractions/p11-kit>
  #include <abstractions/private-files-strict>
  #include <abstractions/user-tmp>
  #include <local/wine-custom-locations>
  
  capability sys_ptrace,
  
  @{PROC}/cpuinfo r,
  @{PROC}/meminfo r,
  @{PROC}/scsi/scsi r,
  owner @{PROC}/@{pid}/mem r,
  
  /usr/bin/ntlm_auth rPx,
  /usr/bin/wine mr,
  /usr/bin/wine-preloader Px,
  /usr/bin/wineserver rPx,
  
  /usr/share/wine/** rk,
  
  # Noisy
  deny / r,
  deny /var/lib/dbus/machine-id r,
  
}


profile wine.ntlm_auth /usr/bin/ntlm_auth {
  #include <abstractions/base>
  #include <abstractions/private-files-strict>
  
  /usr/bin/ntlm_auth mr,
  
  /usr/share/samba/codepages/** r,
  
}


profile wine-preloader /usr/bin/wine-preloader {
  #include <abstractions/X>
  #include <abstractions/audio>
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/nameservice>
  #include <abstractions/p11-kit>
  #include <abstractions/private-files-strict>
  #include <abstractions/X>
  #include <abstractions/nvidia>
  #include <abstractions/user-tmp>
  #include <local/wine-custom-locations>
  
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* rw,
  owner /dev/shm/#* rw,
  /sys/devices/system/cpu/cpu*/cpufreq/* r,
  /sys/devices/system/cpu/cpu*/cache/index*/* r,
  /sys/devices/system/cpu/cpufreq/policy*/{scaling_cur_freq,scaling_max_freq,cpuinfo_max_freq} r,
  /sys/devices/system/node/** r,
  @{PROC}/cpuinfo r,
  @{PROC}/meminfo r,
  @{PROC}/scsi/scsi r,
  @{PROC}/@{pid}/mounts r,
  
  /usr/bin/wine rm,
  /usr/bin/ntlm_auth rPx,
  /usr/bin/wine-preloader mrPx,
  /usr/bin/wineserver Px,
  /usr/bin/xdg-open Px,
  
  /etc/mime.types r,
  /etc/fstab r,
  /etc/printcap r,
  /etc/machine-id r,
  /etc/terminfo/x/xterm r,
  /usr/lib32/wine/* m,
  /usr/share/wine/** rk,
  /usr/share/icons/** r,
  /tmp/* m,
  
  # Noisy
  deny / r,
  deny /etc/fstab r,
  deny /var/lib/dbus/machine-id r,
  deny @{HOME}/ r,
  deny @{HOME}/.* w,
  deny @{HOMEDIRS}/* w,
  deny @{HOMEDIRS}/*/ w,
  deny /etc/ r,
  deny /usr/local/ r,
  deny /usr/local/lib64/ r,
  
}


profile wineserver /usr/bin/wineserver {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/private-files-strict>
  #include <abstractions/user-tmp>
  #include <local/wine-custom-locations>
  
  capability sys_ptrace,
  
  owner @{PROC}/@{pid}/mem r,
  
  /etc/mime.types r,
  /usr/bin/wineserver mr,
  /usr/share/wine/** rk,
  /tmp/.wine-*/** m,
  owner /tmp/.wine-*/** rwlk,
  
  owner @{HOME}/.local/share/icons/hicolor/** w,
  
  # Noisy
  deny / r,
  deny /media/*/ r,
  deny /mnt/*/ r,
  deny @{HOME}/ r,
  deny /dev/sd[a-z] r,
  deny /dev/sd[a-z][0-9] r,
  
}


profile wine.notepad /usr/bin/notepad {
  #include <abstractions/base>
  
  /dev/tty rw,
  
  /usr/bin/notepad r,
  /bin/bash r,
  /bin/basename ix,
  /bin/dirname ix,
  /usr/bin/wine Px,
  
}


profile wine.winecfg /usr/bin/winecfg {
  #include <abstractions/base>
  
  /dev/tty rw,
  
  /usr/bin/winecfg r,
  /bin/bash r,
  /bin/basename ix,
  /bin/dirname ix,
  /usr/bin/wine Px,
  
}
