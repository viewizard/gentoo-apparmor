#include <tunables/global>

profile evelauncher.sh /home/*/evelauncher/evelauncher.sh {
  #include <abstractions/base>
  include <abstractions/X-connection-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  owner @{HOME}/evelauncher/evelauncher.sh		r,
  owner @{HOME}/evelauncher/evelauncher			px,
  @{shell}						mr,
  /bin/sed						ix,
  /bin/basename						Px,
  /bin/dirname						Px,
}

profile evelauncher /home/*/evelauncher/evelauncher flags=(attach_disconnected) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/nameservice>
  #include <abstractions/ssl_certs>
  #include <abstractions/xdg-open>
  
  # UNIX -----------------------------------------------
  unix (send, receive)
  		peer=(label="evelauncher.updater"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/disk/by-label/					r,
  owner /dev/shm/.org.chromium.Chromium.??????		rw,
  /sys/bus/pci/devices/					r,
  /sys/devices/system/cpu/				r,
  /sys/devices/pci[0-9]*/**/{resource,irq,vendor,device,class,config} r,
  @{PROC}/sys/kernel/shmmax				r,
  owner /proc/@{pid}/fd/				r,
  
  # AUDIT PSEUDO ---------------------------------------
  deny @{PROC}/@{pid}/oom_score_adj			rw,
  deny @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  owner @{HOME}/evelauncher/evelauncher			mr,
  /usr/bin/wine						Px,
  owner @{HOME}/{.eve,evelauncher}/updater		px,
  owner @{HOME}/evelauncher/QtWebEngineProcess		ix,
  owner @{HOME}/evelauncher/LogLite			px,
  
  # READS/WRITES ---------------------------------------
  /etc/os-release					r,
  /							r,
  /home/						r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/					r,
  owner @{HOME}/evelauncher/				r,
  owner @{HOME}/evelauncher/**				rw,
  owner @{HOME}/evelauncher/**.so{,.[0-9]*}		m,
  owner @{HOME}/.eve/{,**}				rw,
  owner @{HOME}/.config/CCP/{,**}			rwk,
  owner @{HOME}/.local/share/CCP/{,**}			rwk,
  owner @{HOME}/.pki/nssdb/{,**}			rwk,
  owner @{HOME_CACHE}/CCP/{,**}				rw,
  
  # TEMP -----------------------------------------------
  /tmp/							r,
  owner /tmp/.gl*					rw,
  /var/tmp/						r,
  owner /var/tmp/etilqs_*				rw,
  
  # DENY INHERIT ---------------------------------------
  deny unix (send, receive) peer=(label="wine*"),		# wine
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile evelauncher.updater /home/*/{.eve,evelauncher}/updater {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # UNIX -----------------------------------------------
  unix (send, receive)
  		peer=(label="evelauncher"),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  owner @{HOME}/{.eve,evelauncher}/updater		mr,
  owner @{HOME}/evelauncher/evelauncher			px,
  
  # USERS ----------------------------------------------
  owner @{HOME}/evelauncher/{,**}			rw,
  owner @{HOME}/.eve/{,**}				rw,
  owner @{HOME}/.session.log				w,	# XFCE4, <abstractions/X>
  
  # DENY INHERIT ---------------------------------------
  deny /dev/shm/.org.chromium.Chromium.??????		ra,		# evelauncher
  deny @{HOME_CACHE}/CCP/EVE/QtWebEngine/Default/Cache/{,**} rw,	# evelauncher
  deny @{HOME}/.local/share/CCP/EVE/QtWebEngine/Default/{,**} rw,	# evelauncher
}

profile evelauncher.LogLite.sh /home/*/evelauncher/LogLite.sh {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  owner @{HOME}/evelauncher/LogLite			px,
  @{shell}						mr,
  /bin/sed						ix,
  /bin/basename						Px,
  /bin/dirname						Px,
}

profile evelauncher.LogLite /home/*/evelauncher/LogLite {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  owner @{HOME}/evelauncher/LogLite			mr,
  
  # USERS ----------------------------------------------
  owner @{HOME}/evelauncher/{,**}			r,
  owner @{HOME}/evelauncher/**.so{,.[0-9]*}		m,
  owner @{HOME}/.config/CCP/{,**}			rwk,
}
