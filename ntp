#include <tunables/global>

profile ntp.ntpd /usr/sbin/ntpd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_resource,
  capability net_bind_service,
  capability sys_time,
  capability dac_override,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/ntpd					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/ntp.conf						r,
  /usr/@{CHOST}/gcc-bin/[0-9]*.[0-9]*.[0-9]*/		r,
  /var/lib/ntp/ntp.drift*				rw,
  /var/log/ntp.log					w,
  /run/ntpd.pid						rw,
  
  # NOISY ----------------------------------------------
  deny /{,s}bin/					r,
  deny /opt/bin/					r,
  deny /usr/{,s}bin/					r,
  deny /usr/local/{,s}bin/				r,
}

profile ntp.ntpq /usr/bin/ntpq {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/ntpq						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/inputrc						r,
  /etc/terminfo/x/xterm					r,
  
  # NOISY ----------------------------------------------
  deny /{,s}bin/					r,
  deny /opt/bin/					r,
  deny /usr/{,s}bin/					r,
  deny /usr/local/{,s}bin/				r,
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/lynis.cron.*				w,	# lynis.cron.daily
}

profile ntp.init.d /etc/init.d/ntpd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/ntpd					Px,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/ntpd				r,
  /run/ntpd.pid						rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}
