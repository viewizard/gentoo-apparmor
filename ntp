#include <tunables/global>
profile ntp.ntpd /usr/sbin/ntpd flags=(attach_disconnected) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability sys_resource,
  capability net_bind_service,
  capability sys_time,
  capability dac_override,
  
  /usr/sbin/ntpd mr,
  /usr/x86_64-pc-linux-gnu/gcc-bin/[0-9]*.[0-9]*.[0-9]*/ r,
  
  /etc/ntp.conf r,
  
  /var/lib/ntp/ntp.drift* rw,
  /var/log/ntp.log w,
  /run/ntpd.pid rw,
  
  # Noisy
  deny /bin/ r,
  deny /sbin/ r,
  deny /opt/bin/ r,
  deny /usr/bin/ r,
  deny /usr/sbin/ r,
  deny /usr/local/bin/ r,
  deny /usr/local/sbin/ r,

}


profile ntp.ntpq /usr/bin/ntpq {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability dac_read_search,
  capability dac_override,
  
  /dev/pts/[0-9]* w,
  
  /usr/bin/ntpq mr,
  
  # Noisy
  deny /bin/ r,
  deny /sbin/ r,
  deny /opt/bin/ r,
  deny /usr/bin/ r,
  deny /usr/sbin/ r,
  deny /usr/local/bin/ r,
  deny /usr/local/sbin/ r,
  
}


profile ntp.init.d /etc/init.d/ntpd flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  /usr/sbin/ntpd Px,
  /bin/bash Cx -> shell,
  
  /etc/{conf,init}.d/ntpd r,
  
  /run/ntpd.pid rwk,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/openrc_shell>
    
  }
  
}
