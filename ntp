#include <local/tunables.d/>

profile ntp.ntpd /usr/sbin/ntpd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_resource,
  capability net_bind_service,
  capability sys_time,
  capability dac_override,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/ntpd					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/ntp.conf						r,
  /usr/@{CHOST}/gcc-bin/[0-9]*/				r,
  /var/lib/ntp/ntp.drift*				rw,
  /var/log/ntp.log					w,
  /run/ntpd.pid						rw,
  
  # NOISY ----------------------------------------------
  deny /{,s}bin/					r,
  deny /opt/bin/					r,
  deny /usr/{,s}bin/					r,
  deny /usr/local/{,s}bin/				r,
  deny /usr/games/bin/					r,
}

profile ntp.ntpq /usr/bin/ntpq {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/ncurses>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/ntpq						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/inputrc						r,
  
  # NOISY ----------------------------------------------
  deny /{,s}bin/					r,
  deny /opt/bin/					r,
  deny /usr/{,s}bin/					r,
  deny /usr/local/{,s}bin/				r,
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/lynis.cron.@{TMP6}				w,	# app-forensics/lynis, lynis.cron.daily
}

profile ntp.init.d /etc/init.d/ntpd flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  @{SYS_D}/fs/cgroup/openrc/ntpd/tasks			w,
  @{SYS_D}/fs/cgroup/unified/ntpd/cgroup.procs		w,
  @{SYS_D}/fs/cgroup/unified/ntpd/cgroup.events		r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/ntpd					Px,
  @{shell}						Cx,
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/ntpd				r,
  /run/ntpd.pid						rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/{openrc,unified}/ntpd/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/ntpd/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/ntpd/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
