#include <tunables/global>
profile ntp.ntpd /usr/sbin/ntpd flags=(attach_disconnected,complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability sys_resource,
  capability net_bind_service,
  capability sys_time,
  
  /usr/sbin/ntpd r,
  
  /etc/ntp.conf r,
  
  /var/lib/ntp/ntp.drift* rw,
  /var/log/ntp.log w,
  /run/ntpd.pid rw,
  
  # Noisy
  deny /bin/ r,
  deny /sbin/ r,
  deny /opt/bin/ r,
  deny /usr/bin/ r,
  deny /usr/sbin/ r,
  deny /usr/local/bin/ r,
  deny /usr/local/sbin/ r,

}


profile ntp.ntpq /usr/bin/ntpq {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability dac_read_search,
  capability dac_override,
  
  /dev/pts/[0-9]* w,
  
  /usr/bin/ntpq r,
  
  # Noisy
  deny /bin/ r,
  deny /sbin/ r,
  deny /opt/bin/ r,
  deny /usr/bin/ r,
  deny /usr/sbin/ r,
  deny /usr/local/bin/ r,
  deny /usr/local/sbin/ r,
  
}


profile ntp.init.d /etc/init.d/ntpd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  /usr/sbin/ntpd Px,
  
  /etc/{conf,init}.d/ntpd r,
  
  /run/ntpd.pid rwk,
  
}
