#include <tunables/global>

profile xfce4-appfinder /usr/bin/{xfrun4,xfce4-appfinder} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/binary-helper>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/{xfrun4,xfce4-appfinder}			mr,
  /bin/env						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/menus/{,**}					r,
  /usr/share/desktop-directories/{,*}			r,
  /usr/lib{,32,64}/pango/*/modules/*			m,
  /opt/**.png						r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/menus/{,**}			r,
  owner @{HOME}/.local/share/mime/mime.cache		r,
  owner @{HOME}/.local/share/desktop-directories/{,*}	r,
  
  profile env /bin/env {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/env						mr,
    /usr/bin/wine					Px,
  }
}
