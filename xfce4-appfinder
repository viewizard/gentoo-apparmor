#include <local/tunables.d/>

profile xfce4-appfinder /usr/bin/{xfrun4,xfce4-appfinder} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/xfconf>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/profile_transitions/users-all>
  
  # DBUS -----------------------------------------------
  dbus (send, receive)
  	bus=session
  	path="/org/xfce/Appfinder"
  	interface="org.xfce.Appfinder"
  	peer=(name="org.xfce.Appfinder",label=@{profile_name}),
  dbus (send, receive)
  	bus=session
  	path="/org/xfce/Appfinder"
  	interface="org.xfce.Appfinder"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/{xfrun4,xfce4-appfinder}			mr,
  /bin/env						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/menus/{,**}					r,
  /usr/share/desktop-directories/{,*}			r,
  /opt/**.png						r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/menus/{,**}			r,
  owner @{HOME}/.local/share/mime/mime.cache		r,
  owner @{HOME}/.local/share/desktop-directories/{,*}	r,
  
  profile env /bin/env {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/env						mr,
    /usr/bin/wine					Px,	# app-emulation/wine
  }
}
