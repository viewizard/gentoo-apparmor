#include <tunables/global>
profile xfce4-appfinder /usr/bin/{xfrun4,xfce4-appfinder} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/gtk>

  /opt/** Pux,
  /usr/bin/* Pux,
  /usr/sbin/* Pux,
  /usr/lib{,32,64}/** Pux,

  @{PROC}/@{pid}/fd/ r,
  /usr/bin/xfce4-appfinder r,
  /usr/lib64/pango/*/modules/* m,
  
  /etc/xdg/menus/ r,
  /etc/xdg/menus/** r,
  /usr/share/desktop-directories/ r,
  /usr/share/desktop-directories/* r,
  /opt/**.png r,
  
  owner @{HOME}/.local/share/mime/mime.cache r,
  owner @{HOME}/.config/menus/ r,
  owner @{HOME}/.config/menus/** r,
  owner @{HOME}/.local/share/desktop-directories/ r,
  owner @{HOME}/.local/share/desktop-directories/* r,
  
}
