#include <tunables/global>
profile xfce4-appfinder /usr/bin/{xfrun4,xfce4-appfinder} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/executable-binary-programs>
  
  @{PROC}/@{pid}/fd/ r,
  
  /usr/bin/xfce4-appfinder r,
  /bin/env Cx -> env,
  
  /etc/xdg/menus/ r,
  /etc/xdg/menus/** r,
  /usr/share/desktop-directories/ r,
  /usr/share/desktop-directories/* r,
  /usr/lib64/pango/*/modules/* m,
  /opt/**.png r,
  
  owner @{HOME}/.local/share/mime/mime.cache r,
  owner @{HOME}/.config/menus/ r,
  owner @{HOME}/.config/menus/** r,
  owner @{HOME}/.local/share/desktop-directories/ r,
  owner @{HOME}/.local/share/desktop-directories/* r,
  
  
  profile env {
    #include <abstractions/base>
    
    /dev/tty[0-9]* w,
    /dev/pts/[0-9]* rw,
    
    /bin/env r,
    /usr/bin/wine Px,
    
  }
  
}
