#include <tunables/global>
profile gnupg.gpg-agent /usr/bin/gpg-agent flags=(complain) {
  #include <abstractions/base>
  
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* w,
  @{PROC}/@{pid}/fd/ r,
  
  /usr/bin/gpg-agent mr,
  /usr/bin/pinentry-* Px,
  
  owner /run/user/*/gnupg/{,**} rw,
  
  owner @{HOME_CACHE}/gpg-agent-info rw,
  owner @{HOME}/.gnupg/private-keys-*/{,**} w,
  
}


profile gnupg.gpg /usr/bin/gpg{,2,-static} flags=(complain) {
  #include <abstractions/base>
  
  /dev/tty rw,
  /dev/pts/[0-9]* rw,
  
  /usr/bin/gpg{,2,-static} mr,
  /usr/bin/gpg-agent Px,
  
  /etc/inputrc r,
  /etc/terminfo/x/xterm r,
  
  /run/openrc/dm-crypt-remdev.*/* r,
  /var/lib/gentoo/gkeys/keyrings/gentoo/release/ r,
  /var/lib/gentoo/gkeys/keyrings/gentoo/release/** rwl,
  
  owner @{HOME}/.gnupg/ rw,
  owner @{HOME}/.gnupg/** rwk,
    
  # Noisy
  deny /.gnupg/{,**} r,
  
}


profile gnupg.gpgconf /usr/bin/gpgconf flags=(complain) {
  #include <abstractions/base>
  
  @{PROC}/@{pid}/fd/ r,
  
  /usr/bin/gpgconf mr,
  
  /run/user/*/gnupg/{,**} w,
  
  owner @{HOME}/.gnupg/ rw,
  owner @{HOME}/.gnupg/** rwl,
  
}


profile gnupg.gpgsm /usr/bin/gpgsm flags=(complain) {
  #include <abstractions/base>
  
  /usr/bin/gpgsm mr,
  
}
