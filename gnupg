#include <tunables/global>
profile gnupg.gpg-agent /usr/bin/gpg-agent flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/user-tmp>
  
  /dev/pts/[0-9]* w,
  
  /usr/bin/gpg-agent r,
  /usr/bin/pinentry-* Px,
  
  owner @{HOME_CACHE}/gpg-agent-info rw,
  
}


profile gnupg.gpg /usr/bin/gpg{,2,-static} flags=(complain) {
  #include <abstractions/base>
  
  /dev/tty rw,
  /dev/pts/[0-9]* rw,
  
  /usr/bin/gpg{,2,-static} r,
  /usr/bin/gpg-agent Px,
  
  /etc/inputrc r,
  /etc/terminfo/x/xterm r,
  
  /run/openrc/dm-crypt-remdev.*/* r,
  
  owner @{HOME}/.gnupg/ rw,
  owner @{HOME}/.gnupg/** rwk,
    
  # Noisy
  deny /.gnupg/{,**} r,
  
}


profile gnupg.gpgconf /usr/bin/gpgconf flags=(complain) {
  #include <abstractions/base>
  
  /usr/bin/gpgconf r,
  
}


profile gnupg.gpgsm /usr/bin/gpgsm flags=(complain) {
  #include <abstractions/base>
  
  /usr/bin/gpgsm r,
  
}
