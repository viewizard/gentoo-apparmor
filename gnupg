#include <tunables/global>
profile gnupg.gpg-agent /usr/bin/gpg-agent flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/user-tmp>
  
  /dev/pts/[0-9]* w,
  
  /usr/bin/gpg-agent r,
  /usr/bin/pinentry-* Px,
  
  owner @{HOME}/.cache/gpg-agent-info rw,
  
}


profile gnupg.gpg2 /usr/bin/gpg2 flags=(complain) {
  #include <abstractions/base>
  
  /dev/tty rw,
  /dev/pts/[0-9]* rw,
  
  /usr/bin/gpg2 r,
  /usr/bin/gpg-agent Px,
  
  /etc/inputrc r,
  /etc/terminfo/x/xterm r,
  
  /run/openrc/dm-crypt-remdev.*/* r,
  
  owner @{HOME}/.gnupg/gpg.conf r,
  owner @{HOME}/.gnupg/pubring.gpg r,
  owner @{HOME}/.gnupg/random_seed rwk,
    
  # Noisy
  deny /.gnupg/{,**} r,
  
}
