#include <tunables/global>

profile portage-utils.q /usr/bin/q {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/q						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/portage/{,**}					r,
  /usr/portage/{,**}					r,
  /usr/share/portage/{,**}				r,
  /var/db/pkg/{,**}					r,
}
