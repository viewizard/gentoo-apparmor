#include <local/tunables.d/>

profile networkmanager.NetworkManager /usr/sbin/NetworkManager {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/consolekit>
  #include <abstractions/dbus/polkit>
  #include <abstractions/dbus/system-bind>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  capability kill,
  capability net_admin,
  capability net_raw,
  capability sys_ptrace,
  capability wake_alarm,
  capability net_bind_service,
  capability dac_override,
  
  # PTRACE ---------------------------------------------
  ptrace (trace) peer="networkmanager.nm-online",
  ptrace (trace) peer="nm-applet",				# gnome-extra/nm-applet
  ptrace (trace) peer="nm-applet.nm-connection-editor",		# gnome-extra/nm-applet
  ptrace (trace) peer="dhcp.dhclient",				# net-misc/dhcp
  ptrace (trace) peer="dnsmasq",				# net-dns/dnsmasq
  ptrace (trace) peer="local.home.evelauncher",			# evelauncher (локальный профиль)	# FIX ME! убрать в local
  ptrace (trace) peer="teamspeak-client-bin.teamspeak",		# media-sound/teamspeak-client-bin
  ptrace (trace) peer="vokoscreen",				# media-video/vokoscreen
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term, kill) peer="dhcp.dhclient",		# net-misc/dhcp
  signal (send) set=(term, kill) peer="dnsmasq",		# net-dns/dnsmasq
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=system
  	path="/org/freedesktop/NetworkManager{,/**}"
  	interface="org.freedesktop.DBus.Properties"
  	peer=(name="org.freedesktop.DBus"),
  dbus receive
  	bus=system
  	path="/org/freedesktop/NetworkManager{,/**}"
  	interface="org.freedesktop.DBus.Properties"
  	member={Get,GetAll}
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus send
  	bus=system
  	path="/org/freedesktop/DBus"
  	interface="org.freedesktop.DBus"
  	member={GetConnectionUnixUser,GetConnectionUnixProcessID}
  	peer=(name="org.freedesktop.DBus",label="dbus.dbus-daemon"),
  dbus send
  	bus=system
  	path="/org/freedesktop/NetworkManager{,/**}"
  	interface="org.freedesktop.NetworkManager*"
  	peer=(name="org.freedesktop.DBus"),
  dbus (send, receive)
  	bus=system
  	path="/org/freedesktop/NetworkManager{,/**}"
  	interface="org.freedesktop.NetworkManager*"
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus receive
  	bus=system
  	path="/org/freedesktop"
  	interface="org.freedesktop.DBus.ObjectManager"
  	peer=(name=":[0-9]*.[0-9]*",label="networkmanager.nm-online"),
  dbus send
  	bus=system
  	path="/org/freedesktop"
  	interface="org.freedesktop.DBus.ObjectManager"
  	peer=(name="org.freedesktop.DBus",label="networkmanager.nm-online"),
  dbus receive
  	bus=system
  	path="/org/freedesktop"
  	interface="org.freedesktop.DBus.ObjectManager"
  	peer=(name=":[0-9]*.[0-9]*",label="nm-applet.nm-connection-editor"),		# gnome-extra/nm-applet
  dbus send
  	bus=system
  	path="/org/freedesktop"
  	interface="org.freedesktop.DBus.ObjectManager"
  	peer=(name="org.freedesktop.DBus",label="nm-applet.nm-connection-editor"),	# gnome-extra/nm-applet
  dbus receive
  	bus=system
  	path="/org/freedesktop"
  	interface="org.freedesktop.DBus.ObjectManager"
  	peer=(name=":[0-9]*.[0-9]*",label="nm-applet"),					# gnome-extra/nm-applet
  dbus send
  	bus=system
  	path="/org/freedesktop"
  	interface="org.freedesktop.DBus.ObjectManager"
  	peer=(name="org.freedesktop.DBus",label="nm-applet"),				# gnome-extra/nm-applet
  
  dbus (send, receive)
  	bus=system
  	path="/uk/org/thekelleys/dnsmasq"
  	interface="org.freedesktop.{NetworkManager.dnsmasq,DBus.Properties}"
  	peer=(name=":[0-9]*.[0-9]*",label="dnsmasq"),					# net-dns/dnsmasq
  dbus send
  	bus=system
  	path="/org/freedesktop/ModemManager[0-9]*"
  	interface="org.freedesktop.DBus.{ObjectManager,Peer}"
  	peer=(name="{:[0-9]*.[0-9]*,org.freedesktop.ModemManager[0-9]*}",label="modemmanager.ModemManager"),	# net-misc/modemmanager
  dbus send
  	bus=system
  	path="/org/freedesktop/nm_dispatcher"
  	interface="org.freedesktop.nm_dispatcher"
  	peer=(name="{:[0-9]*.[0-9]*,org.freedesktop.nm_dispatcher}",label="networkmanager.nm-dispatcher"),
  dbus (send, receive)
  	bus=system
  	path="/fi/w[0-9]*/wpa_supplicant[0-9]**"
  	interface="{fi.w1.wpa_supplicant[0-9]*,org.freedesktop.DBus.{Properties,Introspectable}}"
  	peer=(name=":[0-9]*.[0-9]*",label="wpa_supplicant"),				# net-wireless/wpa_supplicant
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network packet dgram,
  network inet dgram,
  network inet6 dgram,
  network inet raw,
  network inet6 raw,
  
  # PSEUDO ---------------------------------------------
  /dev/console						rw,
  /dev/rfkill						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /sys/bus/						r,
  /sys/class/						r,
  /sys/class/net/					r,
  /sys/class/rfkill/					r,
  /sys/devices/virtual/net/lo/{,*}			r,
  /sys/devices/pci@{PCI2}/**/@{PCI4}/net/eth[0-9]*/{,uevent,ifindex,phys_port_id,dev_id} r,
  /sys/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/@{USB2}/@{USB4}/net/usb@{USB1}/{,uevent,ifindex,phys_port_id,dev_id} r,
  /sys/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/@{USB2}/**/@{USB4}/net/usb@{USB1}/{,uevent,ifindex,phys_port_id,dev_id} r,
  /sys/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/@{USB2}/uevent r,
  /sys/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/**/@{USB2}/uevent r,
  @{PROC}/@{pids}/stat					r,
  owner @{PROC}/@{pid}/fd/				r,
  @{PROC}/@{pids}/cmdline				r,
  @{PROC}/sys/kernel/random/boot_id			r,
  @{PROC}/sys/net/ipv4/conf/{default,eth[0-9]*,usb[0-9]*}/rp_filter rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/NetworkManager				mr,
  /bin/arping						Px,	# net-misc/iputils (вызывается, если статический адрес на интерфейсе)
  /sbin/dhclient					Px,	# net-misc/dhcp
  /usr/sbin/dnsmasq					Px,	# net-dns/dnsmasq
  
  # READS/WRITES ---------------------------------------
  /etc/machine-id					r,
  /etc/resolv.conf{,.*}					rw,
  /etc/.resolv.conf.NetworkManager			rw,
  /etc/udev/udev.conf					r,	# sys-fs/eudev
  /etc/dhcp/dhclient.conf				r,	# net-misc/dhcp
  /etc/NetworkManager/{,**}				r,
  /etc/NetworkManager/system-connections/*		w,
  /usr/share/gvfs/remote-volume-monitors/{,*.monitor}	r,	# gnome-base/gvfs
  /run/NetworkManager/{,**}				rw,
  /run/udev/data/{,*}					r,	# sys-fs/eudev
  /run/ConsoleKit/inhibit/inhibit.*.pipe		w,	# sys-auth/consolekit
  /run/ConsoleKit/database				r,	# sys-auth/consolekit
  /run/dhclient-*.pid					rw,	# net-misc/dhcp
  /var/lib/NetworkManager/{,**}				rw,
}

profile networkmanager.nm-online /usr/bin/nm-online {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/networkmanager>
  
  # CAPABILITIES ---------------------------------------
  capability sys_tty_config,
  
  # DBUS -----------------------------------------------
  dbus (send, receive)
  	bus=system
  	path="/org/freedesktop"
  	interface="org.freedesktop.DBus.ObjectManager"
  	peer=(name=":[0-9]*.[0-9]*",label="networkmanager.NetworkManager"),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/nm-online					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
}

profile networkmanager.nm-dhcp-helper /usr/libexec/nm-dhcp-helper {
  #include <abstractions/base>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/nm-dhcp-helper				mr,
  
  # READS/WRITES ---------------------------------------
  /run/NetworkManager/private-dhcp			rw,
}

profile networkmanager.nm-dispatcher /usr/libexec/nm-dispatcher {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/system-bind>
  
  # DBUS -----------------------------------------------
  dbus receive
  	bus=system
  	path="/org/freedesktop/nm_dispatcher"
  	interface="org.freedesktop.nm_dispatcher"
  	peer=(name=":[0-9]*.[0-9]*",label="networkmanager.NetworkManager"),
  dbus send
  	bus=system
  	path="/org/freedesktop/nm_dispatcher"
  	interface="org.freedesktop.nm_dispatcher"
  	peer=(name="org.freedesktop.nm_dispatcher",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/nm-dispatcher				mr,
  /etc/NetworkManager/dispatcher.d/10-openrc-status	Px,
  
  # READS/WRITES ---------------------------------------
  /etc/NetworkManager/dispatcher.d/{,*}			r,
}

profile networkmanager.10-openrc-status /etc/NetworkManager/dispatcher.d/10-openrc-status {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO -------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES --------------------------------------
  /etc/NetworkManager/dispatcher.d/10-openrc-status	r,
  @{shell}						mr,
  /bin/grep						Cx,	# sys-apps/grep
  /sbin/rc-service					Px,	# sys-apps/openrc
  /usr/bin/nm-online					Px,
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
}

profile networkmanager.NetworkManager.init.d /etc/init.d/NetworkManager flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/NetworkManager/tasks		w,
  /sys/fs/cgroup/unified/NetworkManager/cgroup.procs	w,
  /sys/fs/cgroup/unified/NetworkManager/cgroup.events	r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  /usr/bin/nm-online					Px,
  /usr/sbin/NetworkManager				Px,
  /etc/init.d/dnsmasq					Px,	# net-dns/dnsmasq
  /etc/init.d/netmount					Px,	# sys-apps/openrc
  /etc/init.d/tor					Px,	# net-vpn/tor
  /etc/init.d/suricata					Px,	# net-analyzer/suricata
  /lib{,32,64}/rc/sbin/mark_service_inactive		Px,	# sys-apps/openrc
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/NetworkManager			r,
  /run/NetworkManager/NetworkManager.pid		r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/{openrc,unified}/NetworkManager/	w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/NetworkManager/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/NetworkManager/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
