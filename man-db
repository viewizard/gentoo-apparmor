#include <tunables/global>

profile man-db.mandb /usr/bin/mandb {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  capability fsetid,
  capability chown,
  capability fowner,
  capability dac_override,
  capability dac_read_search,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/mandb					mr,
  /bin/bzip2						ix,
  /usr/libexec/man-db/manconv				ix,
  
  # READS/WRITES ---------------------------------------
  /etc/man_db.conf					r,
  /usr/share/man/{,**}					r,
  /var/cache/man/					r,
  /var/cache/man/**					rwk,
  
}

profile man-db.man /usr/bin/man flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/man						mr,
  /bin/bzip2						ix,
  /bin/gzip						ix,
  /usr/bin/less						ix,
  /usr/bin/preconv					ix,
  /usr/bin/neqn						ix,
  /usr/bin/nroff					ixr,
  /usr/bin/groff					ix,
  /usr/bin/troff					ix,
  /usr/bin/grotty					ix,
  /usr/bin/tbl						ix,
  /usr/bin/locale					ix,
  /usr/libexec/man-db/manconv				ix,
  
  # READS/WRITES ---------------------------------------
  /etc/man_db.conf					r,
  /etc/terminfo/x/xterm					r,
  /usr/share/groff/{,**}				r,
  /usr/share/man/{,**}					r,
  /var/cache/man/					r,
  /var/cache/man/**					rwk,
  
}
