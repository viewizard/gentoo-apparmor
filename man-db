#include <tunables/global>
profile man-db.mandb /usr/bin/mandb {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability setuid,
  capability setgid,
  capability dac_override,
  capability dac_read_search,
  
  /usr/bin/mandb r,
  /bin/bzip2 ix,
  /usr/libexec/man-db/manconv ix,
  
  /etc/man_db.conf r,
  /usr/share/man/{,**} r,
  
  /var/cache/man/ r,
  /var/cache/man/** rwk,
  
}
