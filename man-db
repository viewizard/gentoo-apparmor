#include <tunables/global>

profile man-db.mandb /usr/bin/mandb {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  capability fsetid,
  capability chown,
  capability fowner,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/mandb					mr,
  /bin/bzip2						Cx,
  /usr/libexec/man-db/manconv				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/man_db.conf					r,
  /usr/share/man/{,**}					r,
  /var/cache/man/					r,
  /var/cache/man/**					rwk,
  
  profile bzip2 /bin/bzip2 {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/bzip2						mr,
    
    # READS/WRITES -------------------------------------
    /usr/share/man/**.bz2				r,
    
    # DENY INHERIT -------------------------------------
    deny /var/cache/man/**				rw,
  }
}

profile man-db.man /usr/bin/man {
  #include <abstractions/base>
  #include <abstractions/ncurses>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/man						mr,
  /bin/bzip2						Cx,
  /bin/gzip						Cx,
  /usr/bin/less						Cx,
  /usr/bin/preconv					Cx,
  /usr/bin/neqn						Cx,
  /usr/bin/nroff					Cx,
  /usr/bin/groff					Cx,
  /usr/bin/troff					Cx,
  /usr/bin/grotty					Cx,
  /usr/bin/tbl						Cx,
  /usr/bin/locale					Px,
  /usr/libexec/man-db/manconv				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/man_db.conf					r,
  /usr/share/groff/{,**}				r,
  /usr/share/man/{,**}					r,
  /var/cache/man/					r,
  /var/cache/man/**					rwk,
  
  profile bzip2 /bin/bzip2 {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/bzip2						mr,
  }
  
  profile gzip /bin/gzip {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/gzip						mr,
  }
  
  profile less /usr/bin/less {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/less					mr,
  }
  
  profile preconv /usr/bin/preconv {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/preconv					mr,
  }
  
  profile neqn /usr/bin/neqn {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/neqn					mr,
  }
  
  profile nroff /usr/bin/nroff {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/nroff					mr,
  }
  
  profile groff /usr/bin/groff {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/groff					mr,
  }
  
  profile troff /usr/bin/troff {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/troff					mr,
  }
  
  profile grotty /usr/bin/grotty {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/grotty					mr,
  }
  
  profile tbl /usr/bin/tbl {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/tbl					mr,
  }
}

profile man-db.manconv /usr/libexec/man-db/manconv {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/man-db/manconv				mr,
  
  # DENY INHERIT ---------------------------------------
  deny /var/cache/man/**				rw,	# man-db.mandb
}

profile man-db.cron.daily /etc/cron.daily/man-db {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.daily/man-db				r,
  @{shell}						mr,
  /bin/chown						Cx,
  /bin/chmod						Cx,
  /bin/mkdir						Cx,
  /usr/bin/nice						Cx,
  
  profile chown /bin/chown {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/chown						mr,
    
    # READS/WRITES -------------------------------------
    /var/cache/man/					w,
  }
  
  profile chmod /bin/chmod {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/chmod						mr,
    
    # READS/WRITES -------------------------------------
    /var/cache/man/					w,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
    
    # READS/WRITES -------------------------------------
    /var/cache/man/					w,
  }
  
  profile nice /usr/bin/nice {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/nice					mr,
    /usr/bin/mandb					Px,
  }
}
