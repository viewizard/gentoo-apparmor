#include <local/tunables.d/>

profile man-db.mandb /usr/bin/mandb {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  capability fsetid,
  capability chown,
  capability fowner,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/mandb					mr,
  /bin/bzip2						Cx,	# app-arch/bzip2
  /usr/libexec/man-db/manconv				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/man_db.conf					r,
  /usr/share/man/{,**}					r,
  /var/cache/man/					r,
  /var/cache/man/**					rw,
  /var/cache/man/{,**/}*				k,
  
  profile bzip2 /bin/bzip2 {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/bzip2						mr,
    
    # READS/WRITES -------------------------------------
    /usr/share/man/**.bz2				r,
    
    # DENY INHERIT -------------------------------------
    deny /var/cache/man/**				rw,
  }
}

profile man-db.man /usr/bin/man {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/man						mr,
  /bin/bzip2						Cx,	# app-arch/bzip2
  /bin/gzip						Cx,	# app-arch/gzip
  /usr/bin/less						Cx,	# sys-apps/less
  /usr/bin/preconv					Cx,	# sys-apps/groff
  /usr/bin/neqn						Cx,	# sys-apps/groff
  /usr/bin/nroff					Px,	# sys-apps/groff
  /usr/bin/tbl						Cx,	# sys-apps/groff
  /usr/bin/manpager					Px,	# app-text/manpager
  /usr/libexec/man-db/manconv				Px,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /etc/man_db.conf					r,
  /usr/share/man/{,**}					r,
  /usr/share/gcc-data/@{CHOST}/[0-9]*/man/{,**}		r,	# sys-devel/gcc
  /usr/share/binutils-data/@{CHOST}/[0-9]*/man/{,**}	r,	# sys-devel/binutils
  /var/cache/man/					r,
  /var/cache/man/**					rw,
  /var/cache/man/{,**/}*				k,
  
  profile bzip2 /bin/bzip2 {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/bzip2						mr,
    
    # READS/WRITES -------------------------------------
    /usr/share/man/{,**}				rw,
  }
  
  profile gzip /bin/gzip {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/gzip						mr,
    
    # READS/WRITES -------------------------------------
    /usr/share/man/{,**}				r,
    /var/cache/man/**					rw,
  }
  
  profile less /usr/bin/less {
    #include <abstractions/base>
    #include <abstractions/ncurses>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/less					mr,
    
    # DENY INHERIT -------------------------------------
    deny /var/cache/man/**				rw,
  }
  
  profile preconv /usr/bin/preconv {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/preconv					mr,
    
    # DENY INHERIT -------------------------------------
    deny /var/cache/man/**				rw,
  }
  
  profile neqn /usr/bin/neqn {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/neqn					r,
    @{shell}						mr,
  }
  
  profile tbl /usr/bin/tbl {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/tbl					mr,
    
    # DENY INHERIT -------------------------------------
    deny /var/cache/man/**				rw,
  }
}

profile man-db.manconv /usr/libexec/man-db/manconv {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/man-db/manconv				mr,
  
  # DENY INHERIT ---------------------------------------
  deny /var/cache/man/**				rw,	# man-db.mandb
}

profile man-db.cron.daily /etc/cron.daily/man-db {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.daily/man-db				r,
  @{shell}						mr,
  /bin/chown						Cx,	# sys-apps/coreutils
  /bin/chmod						Cx,	# sys-apps/coreutils
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /usr/bin/nice						Cx,	# sys-apps/coreutils
  
  profile chown /bin/chown {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/chown						mr,
    
    # READS/WRITES -------------------------------------
    /var/cache/man/					w,
  }
  
  profile chmod /bin/chmod {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/chmod						mr,
    
    # READS/WRITES -------------------------------------
    /var/cache/man/					w,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
    
    # READS/WRITES -------------------------------------
    /var/cache/man/					w,
  }
  
  profile nice /usr/bin/nice {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/nice					mr,
    /usr/bin/mandb					Px,
  }
}
