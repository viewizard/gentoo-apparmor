#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*.*"

profile openshot @{PYTHON2_EXEC}/openshot {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/audio>
  #include <abstractions/python>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rwk>
  #include <abstractions/nameservice>
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  
  /bin/bash ix,
  /sbin/ldconfig ix,
  
  /usr/lib{,32,64}/ r,
  /usr/lib{,32,64}/frei0r-1/*.so m,
  /usr/share/mlt/** r,
  @{PYTHON_PACKAGES}/cairo/**.pyc{,.*} w,
  
  owner @{HOME}/.openshot/{,**} rw,
  
}


profile openshot-render @{PYTHON2_EXEC}/openshot-render flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  
}
