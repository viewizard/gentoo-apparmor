#include <tunables/global>
profile logrotate /usr/sbin/logrotate {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability setuid,
  capability setgid,
  
  /usr/sbin/logrotate r,
  
  /etc/logrotate.conf rk,
  /etc/logrotate.d/ r,
  /etc/logrotate.d/* rk,
  
  /var/log/ r,
  /var/log/** rw,
  /var/lib/logrotate* rw,
  
  # Noisy
  deny / r,
  deny @{HOME}/ r,
  
}
