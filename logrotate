#include <tunables/global>

profile logrotate /usr/bin/logrotate {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  capability fsetid,
  capability chown,
  capability fowner,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/logrotate					mr,
  @{shell}						Cx,
  /usr/bin/xz						Cx,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /etc/logrotate.conf					rk,
  /etc/logrotate.d/					r,
  /etc/logrotate.d/*					rk,
  /var/log/						r,
  /var/log/**						rw,
  /var/lib/logrotate*					rw,
  
  # NOISY ----------------------------------------------
  deny @{HOME}/						r,
  deny /etc/apparmor.d/					r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/su						Px,
    /etc/init.d/syslog-ng				Px,
  }
  
  profile xz /usr/bin/xz {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/xz						mr,
    
    # READS/WRITES -------------------------------------
    /var/log/**						rw,
  }
}

profile logrotate.cron.daily /etc/cron.daily/logrotate {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.daily/logrotate				r,
  @{shell}						mr,
  /usr/bin/logger					Px,
  /usr/bin/logrotate					Px,
}
