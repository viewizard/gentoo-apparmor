#include <tunables/global>

profile logrotate /usr/bin/logrotate {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  capability fsetid,
  capability chown,
  capability fowner,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/logrotate					mr,
  /bin/bash						Cx -> shell,
  /usr/bin/xz						ix,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /etc/logrotate.conf					rk,
  /etc/logrotate.d/					r,
  /etc/logrotate.d/*					rk,
  /var/log/						r,
  /var/log/**						rw,
  /var/lib/logrotate*					rw,
  
  # NOISY ----------------------------------------------
  deny @{HOME}/						r,
  
  profile shell {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    /bin/bash						mr,
    /bin/su						Px,
    /etc/init.d/syslog-ng				Px,
  }
}
