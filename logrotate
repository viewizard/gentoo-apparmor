#include <tunables/global>
profile logrotate /usr/bin/logrotate {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability setuid,
  capability setgid,
  capability fsetid,
  capability chown,
  capability fowner,
  
  /dev/pts/[0-9]* w,
  
  /usr/bin/logrotate mr,
  /bin/bash Cx -> shell,
  /usr/bin/xz ix,
  
  /etc/logrotate.conf rk,
  /etc/logrotate.d/ r,
  /etc/logrotate.d/* rk,
  
  / r,
  /var/log/ r,
  /var/log/** rw,
  /var/lib/logrotate* rw,
  
  # Noisy
  deny @{HOME}/ r,
  
  
  profile shell {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash mr,
    /bin/su Px,
    /etc/init.d/syslog-ng Px,
    
  }
  
}
