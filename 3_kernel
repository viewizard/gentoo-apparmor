#include <tunables/global>

profile kernel.sign-file /usr/src/@{kernel}/scripts/sign-file flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/src/@{kernel}/scripts/sign-file			mr,
  
  # READS/WRITES ---------------------------------------
  /usr/src/@{kernel}/certs/signing_key.{pem,x509}	r,
  /lib{,32,64}/modules/@{kernel_ver}/**.ko		rw,
}

profile kernel.gen-ima-certs /usr/src/IMA/certs/* flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/cat						Cx,	# FS ACCESS! cat
  /usr/bin/openssl					Cx,	# FS ACCESS! openssl
  
  # READS/WRITES ---------------------------------------
  /usr/src/IMA/certs/*					rw,
  
  profile cat /bin/cat flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
  
  profile openssl /usr/bin/openssl flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/openssl					mr,
    
    # READS/WRITES -------------------------------------
    /etc/ssl/openssl.cnf				r,
    /usr/src/IMA/certs/*				rw,
    /root/.rnd						rw,
  }
}

profile kernel.checkpatch.pl /usr/src/@{kernel}/scripts/checkpatch.pl flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/perl>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/src/@{kernel}/scripts/checkpatch.pl		r,
  
  # READS/WRITES ---------------------------------------
  /usr/src/**						r,
}
