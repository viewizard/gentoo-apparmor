#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]*"

profile nvidia-drivers.nvidia-settings /{usr,opt}/bin/nvidia-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video-nvidia>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>		# Не ставим abstractions/fs/deny-private-strict,
  								# т.к. работает с *rc файлами.
  #include <abstractions/nameservice>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/unix/gvfsd-trash>
  #include <abstractions/unix/gvfsd-network>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /{usr,opt}/bin/nvidia-settings			mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/conf.d/gpm					r,
  /etc/vdpau_wrapper.cfg				r,
  /usr/share/nvidia/{,**}				r,
  /usr/share/gvfs/remote-volume-monitors/{,*.monitor}	r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.nvidia-settings-rc			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/.xconfig.tmp.*				rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/ps						Px,
    /usr/bin/Xorg					Px -> nvidia_drivers_Xorg,	# Только создание xorg.conf.
    /usr/bin/pkg-config					Px,
  }
}

# IMPROVE! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile nvidia_drivers_Xorg {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/cmdline					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/Xorg						mr,
}

# BUG! (модуль v3.6) При запуске nvidia-modprobe в chromium с Px, выводит
# в kernel.log дамп на AA_BUG: security/apparmor/file.c:136 aa_audit_file
# если в настройках хромиума указано использование аппаратного ускорителя
# (данный функционал все равно не работает с блобом от нвидия, только с 
# видео модулями ядра поддерживаемые встроенной в хромиум версией mesa).
profile nvidia-drivers.nvidia-modprobe /{usr,opt}/bin/nvidia-modprobe flags=(attach_disconnected) {
  #include <abstractions/base>
  #include <abstractions/video-nvidia>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability syslog,
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/sys/kernel/modprobe				r,
  
  # EXECUTABLES ----------------------------------------
  /{usr,opt}/bin/nvidia-modprobe			mr,
  /bin/kmod						Px,
  
  # DENY INHERIT ---------------------------------------
  deny network,							# local.home.evelauncher
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
  deny /dev/shm/.org.chromium.Chromium.*		rw,	# local.home.evelauncher
  deny /dev/shm/org.chromium.*				rw,	# firefox
  deny @{HOME}/evelauncher/{,**}			rw,	# local.home.evelauncher
  deny @{HOME}/.eve/{,**}				rw,	# local.home.evelauncher
  deny @{HOME}/.local/share/CCP/{,**}			rw,	# local.home.evelauncher
  deny @{HOME_CACHE}/CCP/{,**}				rw,	# local.home.evelauncher
  deny /tmp/FreshStream*				rw,	# firefox.plugin-container
  /home/viewizard/.mozilla/firefox/*.default/extensions/{,**} r,	# firefox
  deny /media/{,**}					rw,
  deny /mnt/{,**}					rw,
}

profile nvidia-drivers.nvidia-smi /opt/bin/nvidia-smi {
  #include <abstractions/base>
  #include <abstractions/video-nvidia>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability syslog,
  capability mknod,
  capability chown,
  
  # PSEUDO ---------------------------------------------
  /dev/nvidiactl					rw,
  /dev/nvidia[0-9]*					rw,
  @{PROC}/driver/nvidia/params				r,
  @{PROC}/sys/kernel/modprobe				r,
  
  # EXECUTABLES ----------------------------------------
  /opt/bin/nvidia-smi					mr,
}

profile nvidia-drivers.nvidia-udev.sh /lib{,32,64}/udev/nvidia-udev.sh {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty						rw,
  /dev/null						w,
  
  # EXECUTABLES ----------------------------------------
  /lib{,32,64}/udev/nvidia-udev.sh			r,
  @{shell}						mr,
  /bin/kmod						Px,
  /bin/grep						Cx,
  /bin/rm						Cx,
  /opt/bin/nvidia-smi					Px,
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/nvidiactl					w,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
  }
}
