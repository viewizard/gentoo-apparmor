#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"

profile nvidia-drivers.nvidia-settings /{usr,opt}/bin/nvidia-settings flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rwk-strict>
  #include <abstractions/nameservice>
  #include <abstractions/dbus-session-strict>
  
  # CAPABILITIES ---------------------------------------
#  capability sys_admin,					# FIX ME! /{usr,opt}/bin/nvidia-modprobe, не включать.
#  capability syslog,						# FIX ME! /{usr,opt}/bin/nvidia-modprobe, не включать.
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /{usr,opt}/bin/nvidia-settings			mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/conf.d/gpm					r,
  /usr/share/nvidia/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.nvidia-settings-rc			rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    owner @{PROC}/cmdline				r,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/ps						Px,
    /usr/bin/Xorg					ix,	# Не используем Px.
    /usr/bin/pkg-config					ix,
    
    # READS/WRITES -------------------------------------
    /usr/share/pkgconfig/				r,
  }
}

profile nvidia-drivers.nvidia-modprobe /{usr,opt}/bin/nvidia-modprobe {
  #include <abstractions/base>
  #include <abstractions/nvidia>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability syslog,
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/sys/kernel/modprobe				r,
  
  # EXECUTABLES ----------------------------------------
  /{usr,opt}/bin/nvidia-modprobe			mr,
  /bin/kmod						Px,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.session.log				w,	# XFCE4, <abstractions/X>
}

profile nvidia-drivers.nvidia-smi /opt/bin/nvidia-smi {
  #include <abstractions/base>
  #include <abstractions/nvidia>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability syslog,
  capability mknod,
  capability chown,
  
  # PSEUDO ---------------------------------------------
  /dev/nvidiactl					rw,
  /dev/nvidia[0-9]*					rw,
  @{PROC}/driver/nvidia/params				r,
  
  # EXECUTABLES ----------------------------------------
  /opt/bin/nvidia-smi					mr,
}

profile nvidia-drivers.nvidia-udev.sh /lib{,32,64}/udev/nvidia-udev.sh {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/null						w,
  
  # EXECUTABLES ----------------------------------------
  /lib{,32,64}/udev/nvidia-udev.sh			r,
  @{shell}						mr,
  /bin/kmod						Px,
  /bin/grep						ix,
  /opt/bin/nvidia-smi					Px,
}
