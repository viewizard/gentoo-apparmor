#include <local/tunables.d/>

# BUG!
# https://github.com/electron/electron/issues/10589
# Доступные для пользователя файлы на запись/изменения нельзя давать на mmap:
# /dev/shm/.org.chromium.Chromium.XXXXXX
# @{HOME}/.config/skypeforlinux/**
# @{HOME}/.cache/**
# @{HOME}/.local/**

profile skypeforlinux.launcher /opt/bin/skypeforlinux {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /opt/bin/skypeforlinux				r,
  @{shell}						mr,
  /bin/readlink						Cx,	# sys-apps/coreutils
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/dirname						Px,	# sys-apps/coreutils
  /usr/bin/nohup					cx,	# sys-apps/coreutils	# Используем переменные окружения.
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/skypeforlinux/logs/skype-startup.log w,
  
  profile readlink /bin/readlink {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/readlink					mr,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
    
    # USERS --------------------------------------------
    owner @{HOME}/.config/skypeforlinux/{,**/}		rw,
  }
  
  profile nohup /usr/bin/nohup {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/nohup					mr,
    /opt/skypeforlinux/skypeforlinux			px,	# Используем переменные окружения.
    
    # USERS --------------------------------------------
    owner @{HOME}/.config/skypeforlinux/logs/skype-startup.log w,
  }
}

profile skypeforlinux /opt/skypeforlinux/skypeforlinux {
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/gtk>
  #include <abstractions/audio>
  #include <abstractions/camera>
  #include <abstractions/nameservice>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/notifications>
  #include <abstractions/dbus/gnome-keyring>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/networkmanager>
  #include <abstractions/fs/access-by-pattern-internet>		# Доступ к файлам для отсылки в теле сообщения.
  #include <abstractions/xdg-open>
  
  # UNIX -----------------------------------------------
  deny unix type=stream
  	peer=(label="nvidia-drivers.nvidia-modprobe"),		# x11-drivers/nvidia-drivers
  deny unix type=stream
  	peer=(label="glibc.locale"),				# sys-libs/glibc
  deny unix type=seqpacket
  	peer=(label="glibc.locale"),				# sys-libs/glibc
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network netlink dgram,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty[0-9]*					rw,
  /dev/video*						m,	# camera
  /dev/snd/pcm*						m,	# alsa (по какой-то причине, больше не используют pulseaudio).
  owner /dev/shm/.org.chromium.Chromium.@{TMP6}		mrw,	# FIX ME! Плохо, надо разрешать mmap
  								# (к этим файлам могут получить доступ другие процессы).
  								# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  owner /dev/shm/cnd-@{pids}-[0-9]*			rw,	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  @{sys}/bus/pci/devices/				r,
  @{sys}/devices/system/cpu/				r,
  @{sys}/devices/system/cpu/cpu[0-9]*/			r,
  @{sys}/devices/system/cpu/cpu[0-9]*/topology/{core_id,physical_package_id} r,
  @{sys}/devices/system/cpu/cpufreq/policy[0-9]*/cpuinfo_max_freq r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/{device,class,irq,resource,vendor,config} r,
  @{sys}/devices/pci@{PCI2}/**/@{PCI4}/{device,class,irq,resource,vendor,config} r,
  @{sys}/devices/pci@{PCI2}/**/@{PCI4}/net/@{NIC}/speed	r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/@{USB2}/@{USB4}/net/usb@{USB1}/speed r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/@{USB2}/**/@{USB4}/net/usb@{USB1}/speed r,
  @{sys}/devices/virtual/net/@{VNIC}/speed		r,
  @{sys}/devices/virtual/tty/tty[0-9]*/active		r,
  @{sys}/devices/virtual/dmi/id/{board_vendor,product_name} r,
  @{PROC}/version					r,
  @{PROC}/sys/kernel/ostype				r,
  @{PROC}/sys/kernel/osrelease				r,
  audit owner @{PROC}/@{pids}/auxv			r,	# FIX ME! audit 28.11.2017 был нужен бета версии.
  owner @{PROC}/@{pid}/fd/				r,
  owner @{PROC}/@{pids}/task/				r,
  owner @{PROC}/@{pids}/task/@{pids}/status		r,
  deny /dev/nvidiactl					m,
  deny @{PROC}/modules					r,
  deny @{PROC}/@{pids}/oom_score_adj			rw,
  
  # EXECUTABLES ----------------------------------------
  /opt/skypeforlinux/skypeforlinux			ixmr,	# Все правильно, запуск и mmap.
  /usr/bin/locale					Px,	# sys-libs/glibc
  
  # READS/WRITES ---------------------------------------
  /etc/os-release					r,	# sys-apps/baselayout
  /etc/udev/udev.conf					r,	# sys-fs/eudev
  /opt/skypeforlinux/**/				r,
  /opt/skypeforlinux/{,**/}*				mr,
  /usr/share/mime/mime.cache				m,
  /usr/share/locale/**.mo				m,
  /usr/share/fonts/**.{ttf,ttc,otf}			m,
  audit /usr/share/icons/*/icon-theme.cache		m,	# FIX ME! audit 28.11.2017 был нужен бета версии.
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/skypeforlinux/{,**/}		rw,
  owner @{HOME}/.config/skypeforlinux/{,**/}*		rwk,
  owner @{HOME}/.config/autostart/skypeforlinux.desktop	rw,	# BUG! По какой-то причине, автозапуск не работает в XFCE4.
  owner @{HOME}/.pki/nssdb/*				rwk,
  deny @{HOME}/.config/skypeforlinux/**			m,	# Нельзя давать mmap на файлы, доступные пользователю на запись/изменение.
  deny @{HOME}/.local/share/mime/mime.cache		m,	# Нельзя давать mmap на файлы, доступные пользователю на запись/изменение.
  
  # TEMP -----------------------------------------------
  /tmp/							r,
  owner /tmp/.org.chromium.Chromium.@{TMP6}/{,**}	rw,
  owner /tmp/skype-@{pid}/{,**}				rw,
  owner "/tmp/skypeforlinux Crashes/{,**}"		rw,
  /var/tmp/						r,
  audit owner /var/tmp/@{TMP_SQLITE}			rw,	# FIX ME! audit 28.11.2017 был нужен бета версии.
}
