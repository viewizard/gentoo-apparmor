#include <local/tunables.d/>

profile skypeforlinux.launcher /opt/bin/skypeforlinux {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /opt/bin/skypeforlinux				r,
  @{shell}						mr,
  /bin/readlink						Cx,	# sys-apps/coreutils
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/dirname						Px,	# sys-apps/coreutils
  /usr/bin/nohup					cx,	# sys-apps/coreutils	# Используем переменные окружения.
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/skypeforlinux/logs/skype-startup.log w,
  
  profile readlink /bin/readlink {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/readlink					mr,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
    
    # USERS --------------------------------------------
    owner @{HOME}/.config/skypeforlinux/{,**/}		rw,
  }
  
  profile nohup /usr/bin/nohup {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/nohup					mr,
    /opt/skypeforlinux/skypeforlinux			px,	# Используем переменные окружения.
    
    # USERS --------------------------------------------
    owner @{HOME}/.config/skypeforlinux/logs/skype-startup.log w,
  }
}

profile skypeforlinux /opt/skypeforlinux/skypeforlinux {
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/gtk>
  #include <abstractions/audio>
  #include <abstractions/camera>
  #include <abstractions/nameservice>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/notifications>
  #include <abstractions/dbus/gnome-keyring>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/fs/access-by-pattern-internet>		# Доступ к файлам для отсылки в теле сообщения.
  #include <abstractions/xdg-open>
  
  # AUDIT UNIX -----------------------------------------
  deny unix type=stream
  	peer=(label="nvidia-drivers.nvidia-modprobe"),
  
  # DBUS -----------------------------------------------
  dbus (send)
  	bus=session
  	path="/org/freedesktop/DBus"
  	interface="org.freedesktop.DBus"
  	peer=(name="org.freedesktop.DBus",label="dbus.dbus-daemon"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty[0-9]*					rw,
  /dev/video*						m,	# camera
  owner /dev/shm/.org.chromium.Chromium.??????		mrw,
  /sys/bus/pci/devices/					r,
  /sys/devices/system/cpu/				r,
  /sys/devices/system/cpu/cpufreq/policy[0-9]*/cpuinfo_max_freq r,
  /sys/devices/pci[0-9]**/{device,class,config,irq,resource,vendor} r,
  /sys/devices/virtual/tty/tty[0-9]**/active		r,
  owner @{PROC}/@{pid}/fd/				r,
  owner @{PROC}/@{pids}/task/				r,
  owner @{PROC}/@{pids}/task/@{pids}/status		r,
  
  # AUDIT PSEUDO ---------------------------------------
  deny /dev/nvidiactl					m,
  deny @{PROC}/modules					r,
  deny @{PROC}/@{pids}/oom_score_adj			rw,
  
  # EXECUTABLES ----------------------------------------
  /opt/skypeforlinux/skypeforlinux			ixmr,	# Все правильно, запуск и mmap.
  
  # READS/WRITES ---------------------------------------
  /etc/os-release					r,	# sys-apps/baselayout
  /etc/udev/udev.conf					r,	# sys-fs/eudev
  /opt/skypeforlinux/{,**}				mr,
  /opt/skypeforlinux/*.{bin,so}				m,
  /opt/skypeforlinux/icudtl.dat				m,
  /usr/share/mime/mime.cache				m,
  /usr/share/locale/**.mo				m,
  /usr/share/fonts/**.{ttf,ttc,otf}			m,
  /usr/share/icons/*/icon-theme.cache			m,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/skypeforlinux/{,**}		mrwk,
  owner @{HOME}/.config/autostart/skypeforlinux.desktop	rw,	# BUG! По какой-то причине, автозапуск не работает в XFCE4.
  owner @{HOME}/.local/share/mime/mime.cache		m,
  owner @{HOME}/.pki/nssdb/*				rwk,
  
  # TEMP -----------------------------------------------
  /tmp/							r,
  owner /tmp/.org.chromium.Chromium.??????/{,**}	rw,
  /var/tmp/						r,
  owner /var/tmp/etilqs_*				rw,
}
