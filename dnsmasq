#include <tunables/global>

profile dnsmasq /usr/sbin/dnsmasq {
  #include <abstractions/base>
  #include <abstractions/dbus-strict>				# DELEGATION! networkmanager.NetworkManager
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  capability net_raw,
  capability net_bind_service,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/dnsmasq					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/dnsmasq.conf					r,
  /etc/NetworkManager/dnsmasq.d/{,*}			r,	# DELEGATION! networkmanager.NetworkManager
  /usr/share/dnsmasq/{,*}				r,
  /run/dnsmasq.pid					rw,
  /run/NetworkManager/dnsmasq.pid			rw,	# DELEGATION! networkmanager.NetworkManager
  /var/lib/hosts.blacklist				r,
  /var/lib/misc/dnsmasq.leases				rw,
}

profile dnsmasq.init.d /etc/init.d/dnsmasq {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/dnsmasq					Px,
  @{shell}						Cx,
  /etc/init.d/net.*					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/dnsmasq				r,
  /run/dnsmasq.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
}
