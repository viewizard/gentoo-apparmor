#include <local/tunables.d/>

profile dnsmasq /usr/sbin/dnsmasq {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/system-bind>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  capability mknod,
  capability net_raw,
  capability net_bind_service,
  
  # DBUS -----------------------------------------------
  dbus receive
  	bus=system
  	path="/uk/org/thekelleys/dnsmasq"
  	interface="org.freedesktop.DBus.Properties"
	member="GetAll"
  	peer=(name=":[0-9]*.[0-9]*",label="networkmanager.NetworkManager"),		# net-misc/networkmanager
  dbus send
  	bus=system
  	path="/uk/org/thekelleys/dnsmasq"
  	interface="org.freedesktop.NetworkManager.dnsmasq"
  	peer=(name="org.freedesktop.DBus",label="networkmanager.NetworkManager"),	# net-misc/networkmanager
  dbus receive
  	bus=system
  	path="/uk/org/thekelleys/dnsmasq"
  	interface="org.freedesktop.NetworkManager.dnsmasq"
  	peer=(name=":[0-9]*.[0-9]*",label="networkmanager.NetworkManager"),		# net-misc/networkmanager
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/dnsmasq					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/dnsmasq.conf					r,
  /etc/NetworkManager/dnsmasq.d/{,*}			r,	# net-misc/networkmanager	# DELEGATION! networkmanager.NetworkManager
  /usr/share/dnsmasq/{,*}				r,
  /run/dnsmasq.pid					rw,
  /run/NetworkManager/dnsmasq.pid			rw,	# net-misc/networkmanager	# DELEGATION! networkmanager.NetworkManager
  /var/lib/hosts.blacklist				r,	# FIX ME! Вынести в локальные части.	# Список запрещенных доменов (в конфигурации используем этот путь).
  /var/lib/misc/dnsmasq.leases				rw,
}

profile dnsmasq.init.d /etc/init.d/dnsmasq flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  @{SYS_D}/fs/cgroup/openrc/dnsmasq/tasks		w,
  @{SYS_D}/fs/cgroup/unified/dnsmasq/cgroup.procs	w,
  @{SYS_D}/fs/cgroup/unified/dnsmasq/cgroup.events	r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/dnsmasq					Px,
  @{shell}						Cx,
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  /etc/init.d/net.*					Px,	# net-misc/netifrc
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/dnsmasq				r,
  /run/dnsmasq.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/{openrc,unified}/dnsmasq/	w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/dnsmasq/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/dnsmasq/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
