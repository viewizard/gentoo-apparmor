#include <tunables/global>
profile dnsmasq /usr/sbin/dnsmasq {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability setgid,
  capability setuid,
  capability net_bind_service,
  
  /usr/sbin/dnsmasq r,
  
  /etc/dnsmasq.conf r,
  /usr/share/dnsmasq/{,*} r,
  
  /run/dnsmasq.pid rw,
  /var/lib/misc/dnsmasq.leases rw,
  
}


profile dnsmasq.init.d /etc/init.d/dnsmasq {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  /usr/sbin/dnsmasq Px,
  
  /etc/{conf,init}.d/dnsmasq r,
  
  /run/dnsmasq.pid rwk,
  
}
