#include <tunables/global>

profile dnsmasq /usr/sbin/dnsmasq {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  capability net_bind_service,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/dnsmasq					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/dnsmasq.conf					r,
  /usr/share/dnsmasq/{,*}				r,
  /run/dnsmasq.pid					rw,
  /var/lib/hosts.blacklist				r,
  /var/lib/misc/dnsmasq.leases				rw,
}

profile dnsmasq.init.d /etc/init.d/dnsmasq {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/dnsmasq					Px,
  @{shell}						Cx,
  /etc/init.d/net.*					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/dnsmasq				r,
  /run/dnsmasq.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}
