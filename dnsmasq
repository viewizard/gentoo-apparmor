#include <tunables/global>

profile dnsmasq /usr/sbin/dnsmasq {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/system-bind>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  capability mknod,
  capability net_raw,
  capability net_bind_service,
  
  # DBUS -----------------------------------------------
  dbus receive
  	bus=system
  	path="/uk/org/thekelleys/dnsmasq"
  	interface="org.freedesktop.DBus.Properties"
	member="GetAll"
  	peer=(name=":[0-9]*.[0-9]*",label="networkmanager.NetworkManager"),
  dbus send
  	bus=system
  	path="/uk/org/thekelleys/dnsmasq"
  	interface="org.freedesktop.NetworkManager.dnsmasq"
  	peer=(name="org.freedesktop.DBus",label="networkmanager.NetworkManager"),
  dbus receive
  	bus=system
  	path="/uk/org/thekelleys/dnsmasq"
  	interface="org.freedesktop.NetworkManager.dnsmasq"
  	peer=(name=":[0-9]*.[0-9]*",label="networkmanager.NetworkManager"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/dnsmasq					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/dnsmasq.conf					r,
  /etc/NetworkManager/dnsmasq.d/{,*}			r,	# DELEGATION! networkmanager.NetworkManager
  /usr/share/dnsmasq/{,*}				r,
  /run/dnsmasq.pid					rw,
  /run/NetworkManager/dnsmasq.pid			rw,	# DELEGATION! networkmanager.NetworkManager
  /var/lib/hosts.blacklist				r,
  /var/lib/misc/dnsmasq.leases				rw,
}

profile dnsmasq.init.d /etc/init.d/dnsmasq {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/dnsmasq/tasks			w,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/dnsmasq					Px,
  @{shell}						Cx,
  /bin/mkdir						Cx,
  /etc/init.d/net.*					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/dnsmasq				r,
  /run/dnsmasq.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/openrc/dnsmasq/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
}
