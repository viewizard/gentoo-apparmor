#include <tunables/global>

profile teamspeak /usr/bin/teamspeak3 {
  #include <abstractions/audio>
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/qt>
  #include <abstractions/nameservice>
  #include <abstractions/nvidia>
  #include <abstractions/ssl_certs>
  #include <abstractions/X>
  #include <abstractions/xdg-open>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  owner @{PROC}/@{pid}/auxv				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/teamspeak3					r,
  /bin/bash						mr,
  /opt/teamspeak3-client/**				ix,
  
  # READS/WRITES ---------------------------------------
  /opt/teamspeak3-client/				r,
  /opt/teamspeak3-client/**				rk,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.ts3client/				rw,
  owner @{HOME}/.ts3client/**				rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/TS3Client*					rw,
  owner /tmp/qipc_systemsem_tsDatabaseNotifierf*	rw,
  owner /tmp/qipc_sharedmemory_tsDatabaseNotifierf*	rw,
  
  # NOISY ----------------------------------------------
  deny /*						w,
  deny /opt/teamspeak3-client/**			w,
}
