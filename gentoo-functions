#include <local/tunables.d/>

profile gentoo-functions.consoletype@{p_root} /sbin/consoletype@{t_root} {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /sbin/consoletype					mr,
}
