#include <tunables/global>

profile gentoo-functions.consoletype /sbin/consoletype {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /sbin/consoletype					mr,
}
