#include <local/tunables.d/>

profile discord-bin.Discord /opt/discord/share/discord/Discord {
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/gtk>
  #include <abstractions/audio>
  #include <abstractions/camera>
  #include <abstractions/nameservice>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/notifications>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/fs/access-by-pattern-internet>		# Доступ к файлам для отсылки в теле сообщения.
  #include <abstractions/xdg-open>
  
  # CAPABILITIES ---------------------------------------
  deny capability sys_ptrace,
  
  # PTRACE ---------------------------------------------
  deny ptrace (trace),
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term) peer="lsb-release",			# sys-apps/lsb-release
  
  # UNIX -----------------------------------------------
  unix (send, receive) peer=(label="discord-bin.Discord//shell"),
  deny unix (send, receive) peer=(label="lsb-release"),		# sys-apps/lsb-release
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner /dev/shm/.org.chromium.Chromium.@{TMP6}		rw,	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  @{sys}/devices/system/cpu/				r,
  @{sys}/devices/system/cpu/cpufreq/policy[0-9]*/cpuinfo_max_freq r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/{device,class,irq,resource,vendor} r,
  @{sys}/devices/pci@{PCI2}/**/@{PCI4}/{device,class,irq,resource,vendor} r,
  @{sys}/devices/virtual/tty/tty[0-9]*/active		r,
  @{PROC}/						r,
  @{PROC}/@{pids}/stat					r,
  owner @{PROC}/@{pids}/auxv				r,
  owner @{PROC}/@{pid}/fd/				r,
  owner @{PROC}/@{pids}/task/				r,
  owner @{PROC}/@{pids}/task/@{pids}/status		r,
  deny @{PROC}/@{pids}/oom_score_adj			rw,
  deny @{PROC}/@{pids}/cmdline				r,	# Лазит по процессам и смотрит параметры запуска.
  
  # EXECUTABLES ----------------------------------------
  /opt/discord/share/discord/Discord			Pxmr,
  @{shell}						Cx,
  /usr/bin/lsb_release					Px,	# sys-apps/lsb-release
  
  # READS/WRITES ---------------------------------------
  /opt/discord/**					r,
  /opt/discord/**.so					m,
  owner /run/user/@{UID}/discord-ipc-[0-9]*		rw,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/discord/{,**}			rw,
  owner @{HOME}/.config/discord/{,**/}*			k,
  owner @{HOME}/.config/discord/[0-9]*/modules/**.{node,so} m,	# IMA! Требуется IMA digsig xattr или исключения по fowner в правилах IMA.
  owner @{HOME}/.config/autostart/*.desktop		rw,	# BUG! По какой-то причине, автозапуск не работает в XFCE4.
  owner @{HOME}/.pki/nssdb/*				rwk,
  
  # TEMP -----------------------------------------------
  /tmp/							r,
  owner /tmp/discord.sock				rw,
  owner /tmp/.org.chromium.Chromium.@{TMP6}		mrw,	# IMA! Требуется IMA digsig xattr или исключения по fowner в правилах IMA.
  owner "/tmp/Discord Crashes/{,**}"			rw,
  /var/tmp/						r,
  owner /var/tmp/@{TMP_SQLITE}				rw,	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # UNIX ---------------------------------------------
    unix (send, receive) peer=(label="discord-bin.Discord"),
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /usr/bin/xdg-mime					Px,
    
    # DENY INHERIT -------------------------------------
    deny unix,
    deny /dev/shm/*					rw,
    deny /usr/share/fonts/**				r,
    deny /opt/discord/share/**				r,
  }
}
