#include <tunables/global>

profile repoman @{PYTHON_EXEC}/repoman flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability setuid,
  capability setgid,
  capability chown,
  capability fowner,
  capability fsetid,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /usr/bin/sandbox					cx,
  /bin/basename						ix,
  /usr/bin/git						ix,	# не используем Px и Px -> git_root.
  /usr/bin/id						ix,
  /usr/bin/wget						ix,
  
  # READS/WRITES ---------------------------------------
  /etc/profile.env					r,
  /etc/wgetrc						r,
  /etc/terminfo/x/xterm					r,
  /etc/portage/{,**}					r,
  /usr/portage/{,**}					r,
  /usr/portage/distfiles/*				wk,
  /usr/local/portage/{,**}				r,
  /usr/local/portage/**/Manifest*			rw,
  /usr/share/portage/{,**}				r,
  /var/cache/edb/dep/usr/local/portage/**		rw,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.gitconfig				r,
  
  # TEMP -----------------------------------------------
  owner /tmp/??????					rw,
  owner /tmp/tmp_*					rw,
  owner /var/tmp/portage/tmp*/{,**}			rw,
  
  profile shell @{shell} flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
    /bin/rm						ix,
    /sbin/ldconfig					ix,
    
    # READS/WRITES -------------------------------------
    /usr/portage/distfiles/*				w,
    /var/cache/ldconfig/aux-cache*			rw,
  }
  
  profile sandbox /usr/bin/sandbox flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					w,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/sandbox					mr,
    @{shell}						ixr,	# FIX ME! почему он в профиле с ix?
    /bin/sed						ixr,
    /bin/basename					ixr,
    /usr/lib{,32,64}/portage/@{PYTHON}/ebuild.sh	ix,
    
    # READS/WRITES -------------------------------------
    /etc/sandbox.conf					r,
    /etc/sandbox.d/{,*}					r,
    /etc/portage/{,**}					r,
    /usr/portage/{,**}					r,
    /usr/share/sandbox/{,**}				r,
    /usr/local/portage/{,**}				r,
    /var/log/sandbox/sandbox-*.log			w,
    
    # TEMP ---------------------------------------------
    /var/tmp/portage/**/temp/{,**}			w,
  }
}
