# BUILD SYSTEM ONLY! Оставляем в профиле использование ix.
# Не при каких обстоятельствах данный пакет не должен присутствовать в
# конечной пользовательской системе или серверах.

#include <tunables/global>

profile repoman @{PYTHON_EXEC}/repoman {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  #include <abstractions/ncurses>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability setuid,
  capability setgid,
  capability chown,
  capability mknod,
  capability fowner,
  capability fsetid,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /usr/bin/sandbox					cx,
  /bin/basename						Px,
  /usr/bin/git						Cx,	# не используем Px и Px -> git_root.
  /usr/bin/id						Px,
  /usr/bin/wget						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/profile.env					r,
  /etc/portage/{,**}					r,
  /usr/portage/{,**}					r,
  /usr/portage/distfiles/*				wk,
  /usr/local/portage/{,**}				r,
  /usr/local/portage/**/Manifest*			rw,
  /usr/share/portage/{,**}				r,
  /var/cache/edb/dep/usr/local/portage/**		rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/??????					rw,
  owner /tmp/tmp*					rwk,
  owner /var/tmp/tmp*/					rw,
  owner /var/tmp/portage/tmp*/{,**}			rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
    /bin/rm						ix,	# FS ACCESS!
    /sbin/ldconfig					Px,
    
    # READS/WRITES -------------------------------------
    /usr/portage/distfiles/*				w,
  }
  
  profile sandbox /usr/bin/sandbox {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/sandbox					mr,
    @{shell}						px -> repoman_sandbox_shell,
    
    # READS/WRITES -------------------------------------
    /etc/sandbox.conf					r,
    /etc/sandbox.d/{,**}				r,
  }
  
  profile git /usr/bin/git {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/git					mr,
    
    # READS/WRITES -------------------------------------
    /usr/local/portage/{,**}				r,
    
    # USERS --------------------------------------------
    owner @{HOME}/.gitconfig				r,
  }
}

profile repoman_sandbox_shell {
  include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /usr/lib{,32,64}/portage/@{PYTHON}/ebuild.sh		ix,	# FIX ME! Вынести в отдельный профиль.
  
  # READS/WRITES ---------------------------------------
  /usr/share/sandbox/sandbox.bashrc			r,
  /usr/local/portage/{,**}				r,
  /usr/portage/{,**}					r,
}
