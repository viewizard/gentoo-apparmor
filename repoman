# BUILD SYSTEM ONLY! Оставляем в профиле использование ix.
# Не при каких обстоятельствах данный пакет не должен присутствовать в
# конечной пользовательской системе или серверах.

# ВАЖНО!
# Т.к. портадж использует специфические настройки окружение,
# необходимо использовать переключение профиля px/cx/ix, если
# есть взаимодействие с sandbox.

#include <local/tunables.d/>

profile repoman @{PYTHON_EXEC}/repoman {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  #include <abstractions/ncurses>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability setuid,
  capability setgid,
  capability chown,
  capability mknod,
  capability fowner,
  capability fsetid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  owner @{PROC}/@{pid}/mounts				r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						cx,
  /usr/bin/sandbox					cx,	# sys-apps/sandbox
  /bin/basename						Px,	# sys-apps/coreutils
  /usr/bin/git						Cx,	# dev-vcs/git		# не используем Px и Px -> git_root.
  /usr/bin/id						Px,	# sys-apps/coreutils
  /usr/bin/wget						Px,	# net-misc/wget
  
  # READS/WRITES ---------------------------------------
  /etc/profile.env					r,
  /etc/portage/{,**}					r,	# sys-apps/portage
  /usr/portage/{,**}					r,	# sys-apps/portage
  /usr/portage/distfiles/*				wk,	# sys-apps/portage
  /usr/local/portage/{,**}				r,
  /usr/local/portage/**/Manifest*			rw,
  /usr/share/portage/{,**}				r,	# sys-apps/portage
  /var/cache/edb/dep/usr/local/portage/**		rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/@{TMP8}					rw,
  owner /tmp/tmp@{TMP8}					rwk,
  audit owner /var/tmp/tmp*/				rw,	# FIX ME! audit 26.11.2017
  audit owner /var/tmp/portage/tmp*/{,**}		rw,	# FIX ME! audit 26.11.2017
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,	# sys-apps/coreutils
    /bin/rm						ix,	# sys-apps/coreutils	# Оставляем через ix, чтобы не создавать дополнительный профиль.
    /sbin/ldconfig					Px,	# sys-libs/glibc
    
    # READS/WRITES -------------------------------------
    /usr/portage/distfiles/*				w,	# sys-apps/portage
  }
  
  profile sandbox /usr/bin/sandbox {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/sandbox					mr,
    @{shell}						px -> repoman_sandbox_shell,
    
    # READS/WRITES -------------------------------------
    /etc/sandbox.conf					r,	# sys-apps/sandbox
    /etc/sandbox.d/{,**}				r,	# sys-apps/sandbox
  }
  
  profile git /usr/bin/git {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/git					mr,
    
    # READS/WRITES -------------------------------------
    /usr/local/portage/{,**}				r,
    
    # USERS --------------------------------------------
    owner @{HOME}/.gitconfig				r,
  }
}

profile repoman_sandbox_shell {
  include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /usr/lib{,32,64}/portage/@{PYTHON}/ebuild.sh		px,	# sys-apps/portage
  
  # READS/WRITES ---------------------------------------
  /usr/share/sandbox/sandbox.bashrc			r,	# sys-apps/sandbox
}
