#include <tunables/global>
profile repoman /usr/lib{,32,64}/python-exec/@{PYTHON}/repoman flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  capability dac_override,
  capability setuid,
  capability setgid,
  capability chown,
  capability fowner,
  capability fsetid,
  
  /dev/pts/[0-9]* w,
  @{PROC}/@{pid}/fd/ r,
  
  /bin/bash Cx -> shell,
  /usr/bin/sandbox cx -> sandboxed_shell,
  /bin/basename ix,
  /usr/bin/git ix,
  /usr/bin/id ix,
  /usr/bin/wget ix,
  
  /etc/profile.env r,
  /etc/wgetrc r,
  /etc/terminfo/x/xterm r,
  /etc/portage/{,**} r,
  /usr/portage/{,**} r,
  /usr/portage/distfiles/* wk,
  /usr/local/portage/{,**} r,
  /usr/local/portage/**/Manifest* rw,
  /usr/share/portage/{,**} r,
  /var/cache/edb/dep/usr/local/portage/** rw,
  
  owner @{HOME}/.gitconfig r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash mr,
    /bin/uname ix,
    /bin/rm ix,
    /sbin/ldconfig ix,
    
    /usr/portage/distfiles/* w,
    /var/cache/ldconfig/aux-cache* rw,
    
  }
  
  profile sandboxed_shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    /dev/pts/[0-9]* w,
    
    /usr/bin/sandbox mr,
    /bin/bash ixr,
    /bin/sed ixr,
    /usr/lib{,32,64}/portage/@{PYTHON}/ebuild.sh ix,
    
    /etc/sandbox.conf r,
    /etc/sandbox.d/{,*} r,
    /usr/share/sandbox/{,**} r,
    /etc/portage/{,**} r,
    /usr/portage/{,**} r,
    /usr/local/portage/{,**} r,
    
    /var/tmp/portage/**/temp/{,**} w,
    /var/log/sandbox/sandbox-*.log w,
    
  }
  
}
