#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*.{pdf,ps,eps,djvu,djv,PDF,PS,EPS,DJVU,DJV}"

profile qpdfview /usr/bin/qpdfview {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/cups-client>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/xdg-open>
  #include <abstractions/program-work-with-disk-rwk>
  #include <abstractions/nameservice>
  
  /dev/tty[0-9]* w,
  
  /usr/bin/qpdfview mr,
  
  /usr/share/qpdfview/* r,
  /usr/share/misc/magic.mgc r,
  
  owner @{HOME}/.local/share/data/qpdfview/ rw,
  owner @{HOME}/.local/share/data/qpdfview/** rwk,
  owner @{HOME}/.config/qpdfview/ rw,
  owner @{HOME}/.config/qpdfview/* rwk,
  
  owner /tmp/qt_temp.@{PROG_FILE} rw,
  
}
