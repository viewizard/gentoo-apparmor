#include <tunables/global>

@{local_ext}="{pdf,ps,eps,djvu,djv,PDF,PS,EPS,DJVU,DJV}"
# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]*.@{local_ext}"

profile qpdfview /usr/bin/qpdfview {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/cups-client>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/xdg-open>
  #include <abstractions/fs-access-by-users-preset-rwk>
  #include <abstractions/fs-deny-by-pattern-internet>
  #include <abstractions/nameservice>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/MainWindow"
  	interface="org.freedesktop.DBus.Introspectable"
  	member=Introspect
  	peer=(name="local.qpdfview",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/MainWindow"
  	interface="org.freedesktop.DBus.Introspectable"
  	member=Introspect
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  dbus send
  	bus=session
  	path="/MainWindow"
  	interface="local.qpdfview.MainWindow"
  	peer=(name="local.qpdfview",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/MainWindow"
  	interface="local.qpdfview.MainWindow"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/tty						r,
  /dev/tty[0-9]*					rw,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/qpdfview					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/qpdfview/*					r,
  /usr/share/misc/magic.mgc				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/qpdfview/{,**}		rwk,
  owner @{HOME}/.config/qpdfview/			rw,
  owner @{HOME}/.config/qpdfview/*			rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/qt_temp.*.@{local_ext}			rw,
  owner /tmp/qpdfview.*.@{local_ext}			rw,
}
