#include <tunables/global>

profile openssh.ssh-agent /usr/bin/ssh-agent {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/ssh-agent					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/ssl/openssl.cnf					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/ssh-*/{,agent.*}				rw,
}
