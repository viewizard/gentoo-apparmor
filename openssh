#include <local/tunables.d/>

profile openssh.ssh-agent@{p_user} /usr/bin/ssh-agent@{t_user} {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/ssh-agent					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/ssl/openssl.cnf					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/ssh-@{TMP12}/{,agent.@{pid}}		rw,
}
