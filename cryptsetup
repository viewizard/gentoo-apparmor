#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"

profile cryptsetup /sbin/cryptsetup flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/program-work-with-disk-rwk>
  #include <abstractions/user-tmp>
  #include <local/cryptsetup-custom>
  
  capability ipc_lock,
  capability sys_nice,
  capability sys_admin,
  
  /dev/tty rw,
  /dev/pts/[0-9]* rw,
  /dev/null rw,
  /dev/sd[a-z]{,[0-9]*} rw,
  /dev/{dm-,md,zd}[0-9]* rw,
  /dev/mapper/ r,
  /dev/mapper/control rw,
  /sys/devices/virtual/bdi/*/read_ahead_kb r,
  @{PROC}/devices r,
  
  /sbin/cryptsetup mr,
  
  /etc/udev/udev.conf r,
  
  /run/openrc/dm-crypt-remdev.*/enc.key r,
  
}


profile cryptsetup.init.d /etc/init.d/dmcrypt flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  /bin/bash Cx -> shell,
  /bin/rmdir ix,
  /bin/egrep ixr,
  /bin/grep ix,
  /bin/cat ix,
  /bin/mount Px,
  /bin/umount Px,
  /sbin/mkswap Px,
  /sbin/cryptsetup Px,
  /usr/bin/gpg{,2,-static} Px,
  
  /etc/{conf,init}.d/dmcrypt r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
    
  }
  
}
