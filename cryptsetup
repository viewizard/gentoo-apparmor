#include <tunables/global>

# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]*"

profile cryptsetup /sbin/cryptsetup flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/fs-access-by-users-preset-rwk>
  #include <local/cryptsetup-custom>
  
  # CAPABILITIES ---------------------------------------
  capability ipc_lock,
  capability sys_nice,
  capability sys_admin,
  
  # NETWORK --------------------------------------------
  network alg seqpacket,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/console						rw,
  /dev/null						rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  /dev/mapper/						r,
  /dev/mapper/control					rw,
  /sys/devices/virtual/bdi/*/read_ahead_kb		r,
  @{PROC}/devices					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/cryptsetup					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /run/openrc/dm-crypt-remdev.*/enc.key			r,
  
  # TEMP -----------------------------------------------
  owner /tmp/dailyhomebackup.cron.*			w,	# DELEGATION! daily_backup.sh.cron.daily
  owner /tmp/homebackup.cron.*				w,	# DELEGATION! weekly_backup.sh.cron.weekly
  owner /tmp/rootbackup.cron.*				w,	# DELEGATION! monthly_backup.sh.cron.monthly
  
  # DENY INHERIT ---------------------------------------
  deny /etc/conf.d/dmcrypt				r,	# cryptsetup.init.d
}

profile cryptsetup.init.d /etc/init.d/dmcrypt {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/rmdir						ix,
  /bin/egrep						ixr,
  /bin/grep						ix,
  /bin/cat						ix,
  /bin/dd						ix,
  /bin/stty						Px,
  /bin/mount						Px,
  /bin/umount						Px,
  /sbin/mkswap						Px,
  /sbin/cryptsetup					Px,
  /usr/bin/gpg{,2,-static}				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/dmcrypt				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
}
