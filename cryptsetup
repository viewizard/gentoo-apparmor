#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-rwk
@{USERS_DIR_rwk}="[^.]**"
@{USERS_FILE_rwk}="[^.]*"

profile cryptsetup /sbin/cryptsetup {
  #include <abstractions/base>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  #include <local/profile_blocks/cryptsetup.d/>
  
  # CAPABILITIES ---------------------------------------
  capability ipc_lock,
  capability sys_nice,
  capability sys_admin,
  capability mknod,
  
  # NETWORK --------------------------------------------
  network alg seqpacket,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/null						rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  /dev/mapper/						r,
  /dev/mapper/control					rw,
  @{SYS_D}/devices/virtual/bdi/[0-9]*:[0-9]*/read_ahead_kb r,
  @{PROC_D}/devices					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/cryptsetup					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /run/openrc/dm-crypt-remdev.[0-9]*/{,**/}*		r,	# Ключ key на устройстве remdev (/etc/conf.d/dmcrypt).
  
  # TEMP -----------------------------------------------
  owner /tmp/dailyhomebackup.cron.@{TMP6}		w,	# DELEGATION! backup_daily.sh.cron.daily
  owner /tmp/rootbackup.cron.@{TMP6}			w,	# DELEGATION! backup_weekly.sh.cron.weekly
  
  # DENY INHERIT ---------------------------------------
  deny /etc/conf.d/dmcrypt				r,	# cryptsetup.init.d
}

profile cryptsetup.init.d /etc/init.d/dmcrypt flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  @{SYS_D}/fs/cgroup/openrc/dmcrypt/tasks		w,
  @{SYS_D}/fs/cgroup/unified/dmcrypt/cgroup.procs	w,
  @{SYS_D}/fs/cgroup/unified/dmcrypt/cgroup.events	r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/rmdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/egrep						Cx,	# sys-apps/grep
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/dd						Cx,	# sys-apps/coreutils
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/stty						Px,	# sys-apps/coreutils
  /bin/mount						Cx,	# sys-apps/util-linux
  /bin/umount						Cx,	# sys-apps/util-linux
  /sbin/mkswap						Px,	# sys-apps/util-linux
  /sbin/cryptsetup					Px,
  /usr/bin/gpg{,2,-static}				Px,	# app-crypt/gnupg
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/dmcrypt				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/dmcrypt/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
    
    # READS/WRITES -------------------------------------
    /run/openrc/dm-crypt-remdev.[0-9]*/			w,
    
    # DENY INHERIT -------------------------------------
    deny /etc/conf.d/dmcrypt				r,	# cryptsetup.init.d
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/dmcrypt/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
    
    # READS/WRITES -------------------------------------
    /etc/conf.d/dmcrypt					r,
  }
  
  profile egrep /bin/egrep {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/egrep						r,
    @{shell}						mr,
    /bin/grep						ix,	# Все правильно, для egrep используем с ix.
    
    # READS/WRITES -------------------------------------
    /etc/conf.d/dmcrypt					r,	# (?) /bin/grep
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{PROC_D}/cmdline					r,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
  
  profile dd /bin/dd {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/dd						mr,
    
    # DENY INHERIT -------------------------------------
    deny /etc/conf.d/dmcrypt				r,	# cryptsetup.init.d
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/{openrc,unified}/dmcrypt/	w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
    
    # READS/WRITES -------------------------------------
    /run/openrc/dm-crypt-remdev.[0-9]*/			w,
    
    # DENY INHERIT -------------------------------------
    deny /etc/conf.d/dmcrypt				r,	# cryptsetup.init.d
  }
  
  profile mount /bin/mount {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    
    # MOUNT --------------------------------------------
    mount options=ro /dev/@{BLOCK_REAL} -> /run/openrc/dm-crypt-remdev.[0-9]*/,
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    /dev/@{BLOCK_ALL}					r,
    @{SYS_D}/devices/pci@{PCI2}/@{PCI4}/{ata@{ATA1},usb@{USB1}}/**/block/@{BLOCK_REAL}/{,**} r,
    
    # EXECUTABLES --------------------------------------
    /bin/mount						mr,
    
    # READS/WRITES -------------------------------------
    /etc/filesystems					r,
    
    # DENY INHERIT -------------------------------------
    deny /etc/conf.d/dmcrypt				r,	# cryptsetup.init.d
  }
  
  profile umount /bin/umount {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    
    # MOUNT --------------------------------------------
    umount /run/openrc/dm-crypt-remdev.[0-9]*/,
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/umount						mr,
    
    # DENY INHERIT -------------------------------------
    deny /etc/conf.d/dmcrypt				r,	# cryptsetup.init.d
  }
}
