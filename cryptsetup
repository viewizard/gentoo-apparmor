#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"
@{PROG_FOLDERS}="{@{HOME},/mnt/,/media/,@{HOME}/.gvfs/}"

profile cryptsetup /sbin/cryptsetup flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/program-work-with-disk-rwk>
  #include <abstractions/user-tmp>
  
  capability ipc_lock,
  capability sys_nice,
  capability sys_admin,
  
  /dev/pts/[0-9]* rw,
  /dev/NULL w,
  /dev/sd[a-z] rw,
  /dev/sd[a-z][1-9]* rw,
  /dev/dm-[0-9]* rw,
  /dev/md[0-9]* rw,
  /dev/zd[0-9]* rw,
  /dev/mapper/ r,
  /dev/mapper/control rw,
  /sys/devices/virtual/bdi/*/read_ahead_kb r,
  @{PROC}/devices r,
  
  /etc/udev/udev.conf r,
  
  /run/openrc/dm-crypt-remdev.*/enc.key r,
  
}


profile cryptsetup.init.d /etc/init.d/dmcrypt flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  /bin/rmdir ix,
  /bin/egrep ixr,
  /bin/grep ix,
  /bin/cat ix,
  /bin/mount Px,
  /bin/umount Px,
  /sbin/mkswap Px,
  /sbin/cryptsetup Px,
  
  /etc/init.d/dmcrypt r,
  /etc/conf.d/dmcrypt r,
  
}
