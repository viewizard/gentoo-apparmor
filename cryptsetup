#include <tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]*"

profile cryptsetup /sbin/cryptsetup {
  #include <abstractions/base>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  #include <local/profile/cryptsetup.d/>
  
  # CAPABILITIES ---------------------------------------
  capability ipc_lock,
  capability sys_nice,
  capability sys_admin,
  capability mknod,
  
  # NETWORK --------------------------------------------
  network alg seqpacket,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/null						rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  /dev/mapper/						r,
  /dev/mapper/control					rw,
  /sys/devices/virtual/bdi/*/read_ahead_kb		r,
  @{PROC}/devices					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/cryptsetup					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /run/openrc/dm-crypt-remdev.*/enc.key			r,
  
  # TEMP -----------------------------------------------
  owner /tmp/dailyhomebackup.cron.*			w,	# DELEGATION! backup_daily.sh.cron.daily
  owner /tmp/rootbackup.cron.*				w,	# DELEGATION! backup_weekly.sh.cron.weekly
  
  # DENY INHERIT ---------------------------------------
  deny /etc/conf.d/dmcrypt				r,	# cryptsetup.init.d
}

profile cryptsetup.init.d /etc/init.d/dmcrypt {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/dmcrypt/tasks			w,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/rmdir						Cx,
  /bin/grep						Cx,
  /bin/egrep						Cx,
  /bin/cat						Cx,
  /bin/dd						Cx,
  /bin/mkdir						Cx,
  /bin/stty						Px,
  /bin/mount						Cx,
  /bin/umount						Cx,
  /sbin/mkswap						Px,
  /sbin/cryptsetup					Px,
  /usr/bin/gpg{,2,-static}				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/dmcrypt				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
     /dev/console					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
    
    # READS/WRITES -------------------------------------
    /run/openrc/dm-crypt-remdev.[0-9]*/			w,
    
    # DENY INHERIT -------------------------------------
    deny /etc/conf.d/dmcrypt				r,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
    
    # READS/WRITES -------------------------------------
    /etc/conf.d/dmcrypt					r,
  }
  
  profile egrep /bin/egrep {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/egrep						r,
    @{shell}						mr,
    /bin/grep						ix,	# Все правильно, для egrep используем с ix.
    
    # READS/WRITES -------------------------------------
    /etc/conf.d/dmcrypt					r,	# (?) /bin/grep
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{PROC}/cmdline					r,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
  
  profile dd /bin/dd {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/dd						mr,
    
    # DENY INHERIT -------------------------------------
    deny /etc/conf.d/dmcrypt				r,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/openrc/dmcrypt/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
    
    # READS/WRITES -------------------------------------
    /run/openrc/dm-crypt-remdev.[0-9]*/			w,
    
    # DENY INHERIT -------------------------------------
    deny /etc/conf.d/dmcrypt				r,
  }
  
  profile mount /bin/mount {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    
    # MOUNT --------------------------------------------
    mount options=ro /dev/@{BLOCK_REAL} -> /run/openrc/dm-crypt-remdev.*/,
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    /dev/@{BLOCK_ALL}					r,
    /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/{,**} r,
    
    # EXECUTABLES --------------------------------------
    /bin/mount						mr,
    
    # READS/WRITES -------------------------------------
    /etc/filesystems					r,
    
    # DENY INHERIT -------------------------------------
    deny /etc/conf.d/dmcrypt				r,	# cryptsetup.init.d
  }
  
  profile umount /bin/umount {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    
    # MOUNT --------------------------------------------
    umount /run/openrc/dm-crypt-remdev.*/,
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/umount						mr,
    
    # DENY INHERIT -------------------------------------
    deny /etc/conf.d/dmcrypt				r,	# cryptsetup.init.d
  }
}
