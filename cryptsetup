#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"

profile cryptsetup /sbin/cryptsetup flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/program-work-with-disk-rwk-strict>
  #include <local/cryptsetup-custom>
  
  # CAPABILITIES ---------------------------------------
  capability ipc_lock,
  capability sys_nice,
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  /dev/null						rw,
  /dev/@{BLOCK_ALL}					rw,
  /dev/mapper/						r,
  /dev/mapper/control					rw,
  /sys/devices/virtual/bdi/*/read_ahead_kb		r,
  @{PROC}/devices					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/cryptsetup					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /run/openrc/dm-crypt-remdev.*/enc.key			r,
}

profile cryptsetup.init.d /etc/init.d/dmcrypt {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/rmdir						ix,
  /bin/egrep						ixr,
  /bin/grep						ix,
  /bin/cat						ix,
  /bin/dd						ix,
  /bin/stty						Px,
  /bin/mount						Px,
  /bin/umount						Px,
  /sbin/mkswap						Px,
  /sbin/cryptsetup					Px,
  /usr/bin/gpg{,2,-static}				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/dmcrypt				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}
