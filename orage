#include <tunables/global>

profile orage /usr/bin/orage {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/video>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/dbus/notifications>
  #include <abstractions/binary-helper-strict-web>
  #include <abstractions/xdg-open>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/orage					mr,
  /usr/bin/globaltime					Px,
  /usr/bin/sox						Cx,
  
  # READS/WRITES ---------------------------------------
  /usr/share/orage/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/orage/{,**}			rw,
  owner @{HOME}/.local/share/orage/			rw,
  owner @{HOME}/.local/share/orage/**			rwk,
  
  profile sox /usr/bin/sox {					# /usr/bin/play -> sox (media-sound/sox)
    #include <abstractions/base>
    #include <abstractions/audio>
    #include <abstractions/X-connection-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /sys/devices/system/cpu/				r,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/sox					mr,
    
    # READS/WRITES -------------------------------------
    /usr/share/orage/{,**}				r,
  }
}

profile orage.globaltime /usr/bin/globaltime {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/video>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/globaltime					mr,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/globaltime/{,**}		rw,
}
