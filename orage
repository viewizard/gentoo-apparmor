#include <tunables/global>

# предустановка для abstractions/fs/access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]*.{ics,ics.*,orage,orage.*}"

profile orage /usr/bin/orage {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/video>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/dbus/notifications>
  #include <abstractions/binary-helper-strict-web>
  #include <abstractions/fs/access-by-users-preset-rwk>
  
  # DBUS -----------------------------------------------
  dbus (send)
  	bus=session
  	path="/org/xfce/calendar"
  	interface="org.xfce.calendar"
  	peer=(name="org.xfce.calendar",label=@{profile_name}),
  dbus (receive)
  	bus=session
  	path="/org/xfce/calendar"
  	interface="org.xfce.calendar"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/orage					mr,
  /usr/bin/globaltime					Px,
  /usr/bin/sox						Cx,
  /usr/bin/exo-open					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/timezone						r,
  /usr/share/orage/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/orage/{,**}			rw,
  owner @{HOME}/.local/share/orage/			rw,
  owner @{HOME}/.local/share/orage/**			rwk,
  
  profile sox /usr/bin/sox {					# /usr/bin/play -> sox (media-sound/sox)
    #include <abstractions/base>
    #include <abstractions/audio>
    #include <abstractions/X-connection-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    /sys/devices/system/cpu/				r,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/sox					mr,
    
    # READS/WRITES -------------------------------------
    /usr/share/orage/{,**}				r,
  }
}

profile orage.globaltime /usr/bin/globaltime {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/video>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/globaltime					mr,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/globaltime/{,**}		rw,
}
