profile gvfs.gvfsd-fuse /usr/libexec/gvfsd-fuse {
  #include <abstractions/base>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/unix-pattern/gvfsd-smb>
  #include <abstractions/unix-pattern/gvfsd-smb-virtual>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  
  # DBUS -----------------------------------------------
  dbus (send, receive)
  	bus=session
  	path="/org/gtk/vfs/**"
  	interface="org.gtk.vfs.*"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # UNIX -----------------------------------------------
  unix (send, receive)
  			type=stream
			addr=none
  			peer=(addr=none,label="fuse.fusermount"),
  
  # MOUNT ----------------------------------------------
  mount fstype="fuse.gvfsd-fuse" options=(rw, nosuid, nodev) gvfsd-fuse -> /run/user/[0-9]*/gvfs/,
  mount fstype="fuse.gvfsd-fuse" options=(rw, nosuid, nodev) gvfsd-fuse -> /root/.gvfs/,
  umount /run/user/[0-9]*/gvfs/,
  umount /root/.gvfs/,
  
  # PSEUDO ---------------------------------------------
  /dev/fuse						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/gvfsd-fuse				mr,
  /usr/bin/fusermount					Px,
  
  # READS/WRITES ---------------------------------------
  /run/user/[0-9]*/gvfs/				r,
  audit /run/user/[0-9]*/gvfs/**			rw,	# FIX ME! 17.06.2017 fusermount > Px (было ix)
  
  # USERS ----------------------------------------------
  owner /root/.gvfs/					r,
  audit owner /root/.gvfs/**				rw,	# FIX ME! 17.06.2017 fusermount > Px (было ix)
}

profile gvfs.gvfsd-http /usr/libexec/gvfsd-http {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/dconf>
  #include <abstractions/ssl-certs>
  
  # UNIX -----------------------------------------------
  unix (bind, listen)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*",
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="gimp"),			# gimp
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="gimp"),			# gimp
  
  # DBUS -----------------------------------------------
  dbus (send, receive)
  	bus=session
  	path="/org/gtk/vfs/**"
  	interface="org.gtk.vfs.*"
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus (send, receive)
  	bus=session
  	path="/org/gtk/gvfs/**"
  	interface="org.gtk.vfs.*"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/gvfsd-http				mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/glib-[0-9]*/schemas/{,gschemas.compiled}	r,
  /usr/lib{,32,64}/libproxy/[0-9]*.[0-9]*.[0-9]*/modules/*.so m,
  
  # READS/WRITES ---------------------------------------
  /usr/share/mime/mime.cache				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/mime/mime.cache		r,
}

