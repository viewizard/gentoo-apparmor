profile gvfs.gvfsd-fuse /usr/libexec/gvfsd-fuse {
  #include <abstractions/base>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/unix/gvfsd-smb>
  #include <abstractions/unix/gvfsd-smb-virtual>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  
  # DBUS -----------------------------------------------
  dbus (send, receive)
  	bus=session
  	path="/org/gtk/vfs/**"
  	interface="org.gtk.vfs.*"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # UNIX -----------------------------------------------
  unix (send, receive)
  			type=stream
			addr=none
  			peer=(addr=none,label="@{GVFSD_FUSE_ANON_SOCKET}"),
  
  # MOUNT ----------------------------------------------
  mount fstype="fuse.gvfsd-fuse" options=(ro, nosuid, nodev) gvfsd-fuse -> /root/.gvfs/,
  mount fstype="fuse.gvfsd-fuse" options=(rw, nosuid, nodev) gvfsd-fuse -> /root/.gvfs/,
  mount fstype="fuse.gvfsd-fuse" options=(ro, nosuid, nodev) gvfsd-fuse -> /run/user/[0-9]*/gvfs/,
  mount fstype="fuse.gvfsd-fuse" options=(rw, nosuid, nodev) gvfsd-fuse -> /run/user/[0-9]*/gvfs/,
  umount /root/.gvfs/,
  umount /run/user/[0-9]*/gvfs/,
  
  # PSEUDO ---------------------------------------------
  /dev/fuse						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/gvfsd-fuse				mr,
  /usr/bin/fusermount					Px,
  
  # READS/WRITES ---------------------------------------
  /run/user/[0-9]*/gvfs/				r,
  
  # USERS ----------------------------------------------
  owner /root/.gvfs/					r,
}

profile gvfs.gvfsd-http /usr/libexec/gvfsd-http {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/dconf>
  #include <abstractions/ssl-certs>
  
  # UNIX -----------------------------------------------
  unix (bind, listen)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*",
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="@{GVFSD_HTTP_SOCKET}"),
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="@{GVFSD_HTTP_ANON_SOCKET}"),
  
  # DBUS -----------------------------------------------
  dbus (send, receive)
  	bus=session
  	path="/org/gtk/vfs/**"
  	interface="org.gtk.vfs.*"
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus (send, receive)
  	bus=session
  	path="/org/gtk/gvfs/**"
  	interface="org.gtk.vfs.*"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/gvfsd-http				mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/glib-[0-9]*/schemas/{,gschemas.compiled}	r,
  /usr/lib{,32,64}/libproxy/[0-9]*.[0-9]*.[0-9]*/modules/*.so m,
  
  # READS/WRITES ---------------------------------------
  /usr/share/mime/mime.cache				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/mime/mime.cache		r,
}

