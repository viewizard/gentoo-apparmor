  	bus=session
  	path="/org/gtk/gvfs/**"
  	interface="org.gtk.vfs.*"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # PSEUDO ---------------------------------------------
  /sys/devices/virtual/block/@{BLOCK_VIRT}/{,*/}name	r,
  @{PROC}/@{pid}/mounts					r,
  owner @{PROC}/@{pid}/mountinfo			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/gvfsd-trash				mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/mime/mime.cache				r,
  /run/mount/utab					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/mime/mime.cache		r,
