profile gvfs.gvfsd-smb /usr/libexec/gvfsd-smb {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/dconf>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/nameservice>
  #include <abstractions/unix/gvfsd-fuse-virtual>
  
  # UNIX -----------------------------------------------
  unix (bind, listen)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*",
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="@{GVFSD_SMB_SOCKET}"),
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="@{GVFSD_SMB_ANON_SOCKET}"),
  
  # DBUS -----------------------------------------------
  dbus (send, receive)
  	bus=session
  	path="/org/gtk/vfs/**"
  	interface="org.gtk.vfs.*"
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus send
  	bus=session
  	path="/org/gtk/gvfs/**"
  	interface="org.gtk.vfs.*"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/gvfsd-smb				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/samba/smb.conf					r,
  /usr/share/samba/codepages/**				r,
  /usr/share/glib-[0-9]*/schemas/{,gschemas.compiled}	r,
  /var/cache/samba/{,**}				r,
}

