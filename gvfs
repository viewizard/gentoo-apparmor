  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="ristretto"),		# ristretto
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="tumbler"),			# tumbler
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="thunar"),			# thunar
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="smplayer"),		# smplayer
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="vlc"),			# vlc
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="libreoffice.bin"),		# libreoffice
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="ristretto"),		# ristretto
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="tumbler"),			# tumbler
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="thunar"),			# thunar
  
# DBUS -----------------------------------------------
  dbus (send, receive)
  	bus=session
  	path="/org/gtk/vfs/**"
  	interface="org.gtk.vfs.*"
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus send
  	bus=session
  	path="/org/gtk/gvfs/**"
  	interface="org.gtk.vfs.*"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/gvfsd-smb				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/samba/smb.conf					r,
  /usr/share/samba/codepages/**				r,
  /usr/share/glib-[0-9]*/schemas/{,gschemas.compiled}	r,
  /var/cache/samba/{,**}				r,
}

