  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/unix-pattern/gvfsd-smb-browse>
  
  # UNIX -----------------------------------------------
  unix (bind, listen)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*",
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="thunar"),			# thunar
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="uget.uget-gtk"),		# uget.uget-gtk
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="engrampa"),		# engrampa
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="meld"),			# meld
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="alacarte"),		# alacarte
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="transmission"),		# transmission
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="mousepad"),		# mousepad
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="remmina"),			# remmina
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="wireshark"),		# wireshark
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="libreoffice.bin"),		# libreoffice.bin
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="nm-applet.nm-connection-editor"),	# nm-applet.nm-connection-editor
  unix (send, receive, accept)
  			type=stream
  			addr="@/dbus-vfs-daemon/socket-*"
  			peer=(label="nvidia-drivers.nvidia-settings"),	# nvidia-drivers.nvidia-settings
  
  # DBUS -----------------------------------------------
  dbus (send, receive)
  	bus=session
  	path="/org/gtk/vfs/**"
  	interface="org.gtk.vfs.*"
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus send
  	bus=session
  	path="/org/gtk/gvfs/**"
  	interface="org.gtk.vfs.*"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/gvfsd-network				mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/glib-[0-9]*/schemas/{,gschemas.compiled}	r,
}

