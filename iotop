#include <tunables/global>

profile iotop @{PYTHON_EXEC}/iotop {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  #include <abstractions/ncurses>
  
  # CAPABILITIES ---------------------------------------
  capability net_admin,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/						r,
  @{PROC}/vmstat					r,
  @{PROC}/sys/kernel/pid_max				r,
  @{PROC}/@{pid}/task/					r,
  @{PROC}/@{pid}/{cmdline,status}			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/file						Cx,
  
  profile file /usr/bin/file {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    @{PROC}/vmstat					r,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/file					mr,
    
    # READS/WRITES -------------------------------------
    /usr/bin/@{PYTHON}					r,
    /usr/share/misc/magic.mgc				r,
  }
}
