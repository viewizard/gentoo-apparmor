#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]**"

profile git /usr/bin/git {
  #include <abstractions/base>
  #include <abstractions/program-work-with-disk-rwkl>
  #include <abstractions/nameservice>
  #include <abstractions/ssl_certs>
  
  capability dac_override,
  capability fowner,
  
  /dev/tty rw,
  /dev/pts/[0-9]* rw,
  
  /usr/bin/git mr,
  /usr/bin/less ix,
  /usr/libexec/git-core/git ix,
  /usr/libexec/git-core/git-remote-http ix,
  /usr/libexec/git-core/git-remote-https ix,
  
  /usr/share/git-core/** r,
  
  owner @{HOME}/.gitconfig rw,
  
}


profile git_root {
  #include <abstractions/base>
  #include <abstractions/program-work-with-disk-rwkl>
  #include <abstractions/nameservice>
  #include <abstractions/ssl_certs>
  #include <abstractions/user-systemwide-files>
  
  capability dac_override,
  capability fowner,
  
  /dev/tty rw,
  /dev/pts/[0-9]* rw,
  
  /usr/bin/git mr,
  /usr/bin/less ix,
  /usr/libexec/git-core/git ix,
  /usr/libexec/git-core/git-remote-http ix,
  /usr/libexec/git-core/git-remote-https ix,
  
  /usr/share/git-core/** r,
  
  owner @{HOME}/.gitconfig rw,
  
}
