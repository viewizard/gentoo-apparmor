#include <tunables/global>

# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]**"

profile git /usr/bin/git {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/ssl-certs>
  #include <abstractions/fs-access-by-users-preset-rwkl>
  #include <abstractions/fs-deny-by-pattern-internet>
  #include <abstractions/fs-deny-private-strict>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/git						mr,
  /usr/bin/less						ix,
  /usr/libexec/git-core/git				ix,
  /usr/libexec/git-core/git-remote-http			ix,
  /usr/libexec/git-core/git-remote-https		ix,
  
  # READS/WRITES ---------------------------------------
  /usr/share/git-core/**				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.gitconfig				rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/qgit4.*					rw,	# qgit /usr/bin/qgit
}

profile git_root {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/ssl-certs>
  #include <abstractions/fs-access-by-users-preset-rwkl>
  #include <abstractions/fs-access-by-pattern-systemusers>
  #include <abstractions/fs-deny-by-pattern-internet>
  #include <abstractions/fs-deny-private-strict>
  
  # CAPABILITIES ---------------------------------------
  capability fowner,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/git						mr,
  /usr/bin/less						ix,
  /usr/libexec/git-core/git				ix,
  /usr/libexec/git-core/git-remote-http			ix,
  /usr/libexec/git-core/git-remote-https		ix,
  
  # READS/WRITES ---------------------------------------
  /usr/share/git-core/**				r,
  owner link subset /.git/objects/**			-> /.git/objects/**,
  owner link subset /**/.git/objects/**			-> /**/.git/objects/**,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.gitconfig				rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/qgit4.*					rw,	# qgit /usr/bin/qgit
}
