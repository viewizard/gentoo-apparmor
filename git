#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-rwkl
@{USERS_DIR_rwkl}="[^.]**"
@{USERS_FILE_rwkl}="[^.]**"

profile git /usr/{bin,libexec/git-core}/git {
  #include <abstractions/base>
  #include <abstractions-user/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/{bin,libexec/git-core}/git			Pxmr,
  /bin/nano						Cx,	# app-editors/nano
  /usr/bin/less						Cx,	# sys-apps/less
  /usr/libexec/git-core/git-remote-http{,s}		Cx,
  
  # READS/WRITES ---------------------------------------
  /usr/share/git-core/**				r,
  
  # USERS ----------------------------------------------
  owner @{USER_HOME_D}/.gitconfig			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/qgit4.@{TMP6}				rw,	# dev-vcs/qgit
  
    profile nano /bin/nano {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/ncurses>
    #include <abstractions-root/fs/access-by-users-preset-rwkl>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/nano						mr,
    
    # READS/WRITES -------------------------------------
    /etc/nanorc						r,
    /usr/share/nano/{,**}				r,
    /usr/share/misc/magic.mgc				r,
  }
  
  profile less /usr/bin/less {
    #include <abstractions/base>
    #include <abstractions/ncurses>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/less					mr,
  }
  
  profile git-remote-http /usr/libexec/git-core/git-remote-http{,s} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/ssl-certs>
    #include <abstractions-user/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # NETWORK ------------------------------------------
    network netlink raw,
    network inet dgram,
    network inet6 dgram,
    network inet stream,
    network inet6 stream,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/libexec/git-core/git-remote-http{,s}		mr,
    /usr/{bin,libexec/git-core}/git			Px,
    
    # USERS --------------------------------------------
    owner @{USER_HOME_D}/.gitconfig			r,
  }
}

profile git_root {
  #include <abstractions/base>
  #include <abstractions-root/fs/access-by-users-preset-rwkl>
  #include <abstractions-root/fs/access-by-pattern-systemusers>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # CAPABILITIES ---------------------------------------
  capability fowner,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/{bin,libexec/git-core}/git			Pxmr -> git_root,
  /bin/nano						Cx,	# app-editors/nano
  /usr/bin/less						Cx,	# sys-apps/less
  /usr/libexec/git-core/git-remote-http{,s}		Cx,
  
  # READS/WRITES ---------------------------------------
  /usr/share/git-core/**				r,
  owner link subset /.git/objects/{,**/}*		-> /.git/objects/{,**/}*,
  owner link subset /**/.git/objects/{,**/}*		-> /**/.git/objects/{,**/}*,
  
  # USERS ----------------------------------------------
  owner @{ROOT_HOME_D}/.gitconfig			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/qgit4.@{TMP6}				rw,	# dev-vcs/qgit
  
  profile nano /bin/nano {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/ncurses>
    #include <abstractions-root/fs/access-by-users-preset-rwkl>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/nano						mr,
    
    # READS/WRITES -------------------------------------
    /etc/nanorc						r,
    /usr/share/nano/{,**}				r,
    /usr/share/misc/magic.mgc				r,
  }
  
  profile less /usr/bin/less {
    #include <abstractions/base>
    #include <abstractions/ncurses>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/less					mr,
  }
  
  profile git-remote-http /usr/libexec/git-core/git-remote-http{,s} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/ssl-certs>
    #include <abstractions-root/fs/access-by-users-preset-rwkl>
    #include <abstractions-root/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # CAPABILITIES -------------------------------------
    capability mknod,
    
    # NETWORK ------------------------------------------
    network netlink raw,
    network inet dgram,
    network inet6 dgram,
    network inet stream,
    network inet6 stream,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/libexec/git-core/git-remote-http{,s}		mr,
    /usr/{bin,libexec/git-core}/git			Px -> git_root,
    
    # USERS --------------------------------------------
    owner @{ROOT_HOME_D}/.gitconfig			r,
  }
}
