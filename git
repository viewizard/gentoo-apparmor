#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]**"

profile git /usr/{bin,libexec/git-core}/git {
  #include <abstractions/base>
  #include <abstractions/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/{bin,libexec/git-core}/git			Pxmr,
  /usr/bin/less						Cx,
  /usr/libexec/git-core/git-remote-http{,s}		Cx,
  
  # READS/WRITES ---------------------------------------
  /usr/share/git-core/**				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.gitconfig				rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/qgit4.*					rw,	# qgit /usr/bin/qgit
  
  profile less /usr/bin/less {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/less					mr,
  }
  
  profile git-remote-http /usr/libexec/git-core/git-remote-http{,s} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/ssl-certs>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # NETWORK ------------------------------------------
    network netlink raw,
    network inet dgram,
    network inet6 dgram,
    network inet stream,
    network inet6 stream,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/libexec/git-core/git-remote-http{,s}		mr,
    /usr/{bin,libexec/git-core}/git			Px,
    
    # USERS --------------------------------------------
    owner @{HOME}/.gitconfig				r,
  }
}

profile git_root {
  #include <abstractions/base>
  #include <abstractions/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/access-by-pattern-systemusers>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # CAPABILITIES ---------------------------------------
  capability fowner,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/{bin,libexec/git-core}/git			Pxmr -> git_root,
  /usr/bin/less						Cx,
  /usr/libexec/git-core/git-remote-http{,s}		Cx,
  
  # READS/WRITES ---------------------------------------
  /usr/share/git-core/**				r,
  owner link subset /.git/objects/**			-> /.git/objects/**,
  owner link subset /**/.git/objects/**			-> /**/.git/objects/**,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.gitconfig				rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/qgit4.*					rw,	# qgit /usr/bin/qgit
  
  profile less /usr/bin/less {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/less					mr,
  }
  
  profile git-remote-http /usr/libexec/git-core/git-remote-http{,s} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/ssl-certs>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # CAPABILITIES -------------------------------------
    capability mknod,
    
    # NETWORK ------------------------------------------
    network netlink raw,
    network inet dgram,
    network inet6 dgram,
    network inet stream,
    network inet6 stream,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/libexec/git-core/git-remote-http{,s}		mr,
    /usr/{bin,libexec/git-core}/git			Px -> git_root,
    
    # USERS --------------------------------------------
    owner @{HOME}/.gitconfig				r,
  }
}
