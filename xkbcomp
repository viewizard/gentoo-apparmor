#include <tunables/global>

profile xkbcomp /usr/bin/xkbcomp {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xkbcomp					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/X11/xkb/**					r,
  /var/lib/xkb/server-[0-9].xkm				w,
  
  # TEMP -----------------------------------------------
  /tmp/server-[0-9].xkm					w,
  owner /tmp/file*					rw,	# XFCE4, xfce4-settings.xfsettingsd
}
