#include <tunables/global>

profile xkbcomp /usr/bin/xkbcomp {
  #include <abstractions/base>
  include <abstractions/X-connection-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xkbcomp					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/X11/xkb/**					r,
  /var/lib/xkb/server-[0-9].xkm				w,
  
  # TEMP -----------------------------------------------
  owner /tmp/server-[0-9].xkm				w,
  owner /tmp/file*					rw,
  
  # DENY INHERIT ---------------------------------------
  deny /dev/input/event[0-9]*				rw,	# xorg-server.Xorg
  deny /run/acpid.socket				rw,	# xorg-server.Xorg
  deny /var/log/Xorg.[0-9].log				w,	# xorg-server.Xorg
  owner @{HOME}/.xfce4-session.verbose-log		w,	# xfce4-session
}
