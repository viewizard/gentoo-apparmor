#include <tunables/global>

profile iftop /usr/sbin/iftop flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability net_raw,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/iftop					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/terminfo/x/xterm					r,
}
