#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*.{mpeg,vob,ogg,asf,wav,wmv,wma,mov,mp3,mp4,avi,mkv,mka,webm,vivo,ts,ogm,aac,h264,3p2,3gp,3ga,flv,ass,smi,srt,sub,txt,mdv,ssa,sup,tt,smil,gif}"

profile mpv /usr/bin/mpv {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/nvidia>
  #include <abstractions/dbus-session>
  #include <abstractions/user-tmp>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rk>
  
  /usr/bin/mpv r, 
  /usr/bin/xdg-screensaver Pxr,
  
  owner /tmp/.* m,
  
}
