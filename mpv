#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*.{mpeg,vob,ogg,asf,wav,wmv,wma,mov,mp3,mp4,avi,mkv,mka,webm,vivo,ts,ogm,aac,h264,3p2,3gp,3ga,flv}"
@{PROG_FOLDERS}="{@{HOME},/mnt/,/media/}"

profile mpv /usr/bin/mpv {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/dbus-session>
  #include <abstractions/nvidia>
  #include <abstractions/user-tmp>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rk>


  /usr/bin/mpv r,
  /tmp/.* m,
  
  # xdg-screensaver
  /usr/bin/xdg-screensaver ixr,
  /dev/tty rw,
  /bin/grep ix,
  /bin/mv ix,
  /bin/sed ix,
  /usr/bin/which ix,
  /usr/bin/dbus-send ix,
  /usr/bin/xset ix,

  # Noisy
  deny @{HOMEDIRS}/* w,
  deny @{HOMEDIRS}/*/ w,
  
}
