#include <tunables/global>

profile oinkmaster /usr/bin/oinkmaster.pl {
  #include <abstractions/base>
  #include <abstractions/perl>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/oinkmaster.pl				mr,
  /bin/gzip						ix,
  /bin/tar						ix,
  /usr/bin/wget						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/oinkmaster.conf					r,
  /etc/suricata/rules/					r,
  /etc/suricata/rules/**				rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/oinkmaster.cron.??????{,/,/**}		rw,
  owner /tmp/oinkmaster.*/{,**}				rw,
}

# Профиль модифицированного скрипта для запуска обновления oinkmaster-а по cron-у.
profile oinkmaster.cron.daily /etc/cron.daily/oinkmaster {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.daily/oinkmaster				r,
  @{shell}						mr,
  /bin/mktemp						ix,
  /bin/cat						ix,
  /bin/rm						ix,
  /bin/basename						Px,
  /usr/bin/libnotify-notify-send-users			Px,
  /usr/bin/mail						Px,
  /usr/bin/logger					Px,
  /usr/bin/oinkmaster.pl				Px,
  /etc/init.d/suricata					Px,
  
  # TEMP -----------------------------------------------
  owner /tmp/oinkmaster.cron.??????			rw,
}
