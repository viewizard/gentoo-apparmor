#include <tunables/global>

profile oinkmaster /usr/bin/oinkmaster.pl {
  #include <abstractions/base>
  #include <abstractions/perl>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/oinkmaster.pl				mr,
  /bin/gzip						Cx,
  /bin/tar						Cx,
  /usr/bin/wget						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/oinkmaster.conf					r,
  /etc/suricata/rules/					r,
  /etc/suricata/rules/**				rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/oinkmaster.cron.??????{,/,/**}		rw,
  owner /tmp/oinkmaster.*/{,**}				rw,
  
  profile gzip /bin/gzip {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/gzip						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/oinkmaster.cron.??????			rw,
    owner /tmp/oinkmaster.*/{,**}			rw,
  }
  
  profile tar /bin/tar {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # EXECUTABLES --------------------------------------
    /bin/tar						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/oinkmaster.cron.??????			rw,
    owner /tmp/oinkmaster.*/{,**}			rw,
  }
}

# Профиль модифицированного скрипта для запуска обновления oinkmaster-а по cron-у.
profile oinkmaster.cron.daily /etc/cron.daily/oinkmaster {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.daily/oinkmaster				r,
  @{shell}						mr,
  /bin/mktemp						Cx,
  /bin/cat						Cx,
  /bin/rm						Cx,
  /bin/basename						Px,
  /usr/bin/libnotify-notify-send-users			Px,
  /usr/bin/mail						Px,
  /usr/bin/logger					Px,
  /usr/bin/oinkmaster.pl				Px,
  /etc/init.d/suricata					Px,
  
  # TEMP -----------------------------------------------
  owner /tmp/oinkmaster.cron.??????			rw,
  
  profile mktemp /bin/mktemp {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mktemp						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/oinkmaster.cron.??????			rw,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/oinkmaster.cron.??????			rw,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/oinkmaster.cron.??????			w,
  }
}
