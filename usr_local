#include <tunables/global>
profile usr_local.bin /usr/local/bin/* flags=(complain) {
  #include <abstractions/base>
#  #include <abstractions/executable-binary-strict>

  /dev/tty rw,
  /dev/pts/[0-9]* rw,

  /usr/local/bin/* r,
  /bin/bash r,
  
  # FIX ME! - <abstractions/executable-binary-strict>
  audit /bin/ln Pux,
  audit /bin/sleep Pux,
  /usr/bin/cairo-clock Px,
  audit /usr/bin/killall Pux,
  /usr/bin/grive Px,
  /usr/bin/conky Px,
  
}


profile usr_local.sbin /usr/local/sbin/* flags=(complain) {
  #include <abstractions/base>
#  #include <abstractions/executable-binary-strict>

  /dev/tty rw,
  /dev/pts/[0-9]* rw,
  
  /usr/local/sbin/* r,
  /bin/bash r,
  
  # FIX ME! - <abstractions/executable-binary-strict>
  audit /usr/sbin/gdisk Pux,
  audit /bin/grep Pux,
  audit /bin/dd Pux,
  /bin/mount Px,
  /bin/umount Px,
  audit /usr/sbin/aideinit Pux,
  
}
