#include <local/tunables.d/>

profile pkgconfig.pkg-config /usr/bin/pkg-config {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pkg-config					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/pkgconfig/{,**}				r,
}
