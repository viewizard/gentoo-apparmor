#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-rk
@{USERS_DIR_rk}="[^.]**"
@{USERS_FILE_rk}="[^.]*.{mpeg,vob,ogg,asf,wav,wmv,wma,mov,mp3,mp4,avi,mkv,mka,webm,vivo,ts,ogm,aac,h264,3p2,3gp,3ga,flv,ass,smi,srt,sub,txt,mdv,ssa,sup,tt,smil,gif,MPEG,VOB,OGG,ASF,WAV,WMV,WMA,MOV,MP3,MP4,AVI,MKV,MKA,WEBM,VIVO,TS,OGM,AAC,H264,3P2,3GP,3GA,FLV,ASS,SMI,SRT,SUB,TXT,MDV,SSA,SUP,TT,SMIL,GIF}"

profile vlc /usr/bin/vlc {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/unix/gvfsd-smb>
  #include <abstractions/fs/access-by-users-preset-rk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/mpris/MediaPlayer[0-9]*"
  	interface="org.mpris.MediaPlayer[0-9]*.TrackList"
  	peer=(name="org.mpris.MediaPlayer[0-9]*.vlc",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/org/mpris/MediaPlayer[0-9]*"
  	interface="org.mpris.MediaPlayer[0-9]*.TrackList"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/tty						r,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/vlc						mr,
  /usr/bin/xdg-screensaver				Px,
  
  # READS/WRITES ---------------------------------------
  /usr/lib{,32,64}/vlc/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/vlc/				rw,
  owner @{HOME}/.config/vlc/**				rwk,
  owner @{HOME}/.local/share/vlc/{,**}			rw,
  
  # NOISY ----------------------------------------------
  deny /usr/lib{,32,64}/vlc/**				w,
}
