#include <local/tunables.d/>

# форматы для проигрывания (открываем на чтение)
# .mpg, .mpeg
@{local_ext}=[mM][pP]{,[eE]}[gG]
# .vob
@{local_ext}+=[vV][oO][bB]
# .ogg, .ogm
@{local_ext}+=[oO][gG][gGmM]
# .asf
@{local_ext}+=[aA][sS][fF]
# .wav
@{local_ext}+=[wW][aA][vV]
# .wmv, .wma
@{local_ext}+=[wW][mM][vVaA]
# .mov
@{local_ext}+=[mM][oO][vV]
# .mp3, .mp4
@{local_ext}+=[mM][pP][34]
# .avi
@{local_ext}+=[aA][vV][iI]
# .mkv, .mka
@{local_ext}+=[mM][kK][vVaA]
# .webm
@{local_ext}+=[wW][eE][bB][mM]
# .vivo
@{local_ext}+=[vV][iI][vV][oO]
# .ts
@{local_ext}+=[tT][sS]
# .aac
@{local_ext}+=[aA][aA][cC]
# .h264
@{local_ext}+=[hH]264
# .3p2
@{local_ext}+=3[pP]2
# .3ga, .3gp
@{local_ext}+=3[gG][pPaA]
# .flv
@{local_ext}+=[fF][lL][vV]
# .ass
@{local_ext}+=[aA][sS][sS]
# .smi
@{local_ext}+=[sS][mM][iI]
# .srt
@{local_ext}+=[sS][rR][tT]
# .sub
@{local_ext}+=[sS][uU][bB]
# .txt
@{local_ext}+=[tT][xX][tT]
# .mdv
@{local_ext}+=[mM][dD][vV]
# .ssa
@{local_ext}+=[sS][sS][aA]
# .sup
@{local_ext}+=[sS][uU][pP]
# .tt
@{local_ext}+=[tT][tT]
# .smil
@{local_ext}+=[sS][mM][iI][lL]
# .gif
@{local_ext}+=[gG][iI][fF]

# форматы плей листов (открываем на чтение и запись)
# .m3u, .m3u8
@{local_ext_playlist}=[mM]3[uU]{,8}
# .xspf
@{local_ext_playlist}+=[xX][sS][pP][fF]
# .html
@{local_ext_playlist}+=[hH][tT][mM][lL]

# предустановка для abstractions/fs/access-by-user-preset-rk
@{USERS_DIR_rk}="[^.]**"
@{USERS_FILE_rk}="[^.]*.@{local_ext}"
# предустановка для abstractions/fs/access-by-user-preset-rwk
@{USERS_DIR_rwk}="[^.]**"
@{USERS_FILE_rwk}="[^.]*.@{local_ext_playlist}"

profile vlc /usr/bin/vlc {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/dbus/mpris2-server>
  #include <abstractions/unix/gvfsd-smb>
  #include <abstractions/fs/access-by-users-preset-rk>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/mpris/MediaPlayer2"
  	interface="org.mpris.MediaPlayer2.TrackList"
  	peer=(name="org.mpris.MediaPlayer2.vlc",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/org/mpris/MediaPlayer2"
  	interface="org.mpris.MediaPlayer2.TrackList"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # NETWORK --------------------------------------------
  deny network netlink raw,					# Запрещаем работу с сетью.
  
  # PSEUDO ---------------------------------------------
  /dev/tty						r,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC_D}/@{pid}/cmdline				r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/vlc						mr,
  /usr/bin/xdg-screensaver				Px,	# x11-misc/xdg-utils
  
  # READS/WRITES ---------------------------------------
  /usr/lib{,32,64}/vlc/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME_D}/.config/vlc/{,**}			rw,
  owner @{HOME_D}/.config/vlc/{,**/}*			k,
  owner @{HOME_D}/.local/share/vlc/{,**}		rw,
  
  # NOISY ----------------------------------------------
  deny /usr/lib{,32,64}/vlc/**				w,
}
