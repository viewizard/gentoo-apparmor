#include <local/tunables.d/>

# В случае net-libs/libpcap c USE="dbus", используем dbus.

profile nettop /usr/sbin/nettop {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/ncurses>
  
  # CAPABILITIES ---------------------------------------
  capability net_raw,
  capability net_admin,
  
  # DBUS -----------------------------------------------
  dbus eavesdrop
  	bus=system,
  dbus receive
  	bus=system,
  dbus send
  	bus=system,
  dbus eavesdrop
  	bus=session,
  dbus receive
  	bus=session,
  dbus send
  	bus=session,
  
  # NETWORK --------------------------------------------
  network packet raw,
  network packet dgram,
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{SYS_D}/class/net/					r,
  @{SYS_D}/bus/usb/devices/				r,
  owner @{PROC_D}/@{pid}/fd/				r,
  owner @{PROC_D}/@{pid}/net/dev			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/nettop					mr,
}
