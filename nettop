#include <tunables/global>

profile nettop /usr/sbin/nettop flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/dbus-session-strict>
  
  # CAPABILITIES ---------------------------------------
  capability net_raw,
  capability net_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  /sys/class/net/					r,
  /sys/bus/usb/devices/					r,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/@{pid}/net/dev				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/nettop					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/terminfo/x/xterm					r,
}
