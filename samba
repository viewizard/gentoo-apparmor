#include <tunables/global>

profile samba.smbclient /usr/bin/smbclient {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/ncurses>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/smbclient					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/inputrc						r,
  /etc/samba/smb.conf					r,
  /usr/share/samba/{,**}				r,
  /var/cache/samba/					rw,
  /var/cache/samba/**					rwk,
  /run/lock/samba/					rw,
  /run/lock/samba/**					rwk,
}
