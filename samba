#include <tunables/global>
profile samba.smbclient /usr/bin/smbclient flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  /dev/pts/[0-9]* rw,
  
  /usr/bin/smbclient mr,
  
  /etc/inputrc r,
  /etc/samba/smb.conf r,
  /etc/terminfo/x/xterm r,
  /usr/share/samba/{,**} r,
  
  /var/cache/samba/ rw,
  /var/cache/samba/** rwk,
  /run/lock/samba/ rw,
  /run/lock/samba/** rwk,
  
}
