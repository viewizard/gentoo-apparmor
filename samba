#include <local/tunables.d/>

profile samba.smbclient /usr/bin/smbclient {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/ncurses>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/smbclient					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/inputrc						r,
  /etc/samba/smb.conf					r,
  /usr/share/samba/{,**}				r,
  /var/cache/samba/{,**}				rw,
  /var/cache/samba/{,**/}*				k,
  /run/lock/samba/{,**}					rw,
  /run/lock/samba/{,**/}*				k,
}
