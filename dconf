#include <tunables/global>

profile dconf /usr/bin/dconf {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dconf					mr,
}

profile dconf.dconf-service /usr/libexec/dconf-service {
  #include <abstractions/base>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/session-bind>
  
  # DBUS -----------------------------------------------
  dbus receive
	bus=session
	path="/ca/desrt/dconf/Writer/user"
	interface="ca.desrt.dconf.Writer"
	peer=(name=":[0-9]*.[0-9]*"),
  dbus send
	bus=session
	path="/ca/desrt/dconf/Writer/user"
	interface="ca.desrt.dconf.Writer"
	peer=(name="org.freedesktop.DBus"),
  
  # PSEUDO ---------------------------------------------
  @{PROC}/cmdline					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/dconf-service				mr,
  
  # READS/WRITES ---------------------------------------
  owner /run/user/[0-9]*/dconf/{,user}			rw,
  
  # USERS ----------------------------------------------
  owner @{HOME_CACHE}/dconf/{,user}			rw,
  owner @{HOME}/.config/dconf/{,user*}			rw,
}
