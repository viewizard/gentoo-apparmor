#include <tunables/global>
profile dconf /usr/bin/dconf {
  #include <abstractions/base>
  #include <abstractions/dconf>
  
  /usr/bin/dconf mr,
  
}


profile dconf-service /usr/libexec/dconf-service {
  #include <abstractions/base>
  #include <abstractions/dconf>
  
  @{PROC}/cmdline r,
  
  /usr/libexec/dconf-service mr,
  
  owner @{HOME}/.config/dconf/user* rw,
  
}
