#include <local/tunables.d/>

profile dconf /usr/bin/dconf {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dconf					mr,
}

profile dconf.dconf-service /usr/libexec/dconf-service {
  #include <abstractions/base>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/session-bind>
  
  # DBUS -----------------------------------------------
  dbus receive
	bus=session
	path="/ca/desrt/dconf/Writer/user"
	interface="ca.desrt.dconf.Writer"
	peer=(name=":[0-9]*.[0-9]*"),
  dbus send
	bus=session
	path="/ca/desrt/dconf/Writer/user"
	interface="ca.desrt.dconf.Writer"
	peer=(name="org.freedesktop.DBus"),
  
  # PSEUDO ---------------------------------------------
  @{PROC_D}/cmdline					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/dconf-service				mr,
  
  # READS/WRITES ---------------------------------------
  owner /run/user/@{UID}/dconf/{,user}			rw,
  
  # USERS ----------------------------------------------
  owner @{USER_HOME_D}/.config/dconf/{,user{,.@{TMP6}}}	rw,
  owner @{ROOT_HOME_D}/.config/dconf/{,user{,.@{TMP6}}}	rw,	# # RBAC! Должен быть отдельный профиль для root.
  owner @{ROOT_HOME_CACHE_D}/dconf/{,user}		rw,	# # RBAC! Должен быть отдельный профиль для root.
}
