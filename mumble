#include <tunables/global>

profile mumble /usr/bin/mumble {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/notifications>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/nameservice>
  #include <abstractions/audio>
  #include <abstractions/xdg-open>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/"
  	interface="org.freedesktop.DBus.Introspectable"
  	member=Introspect
  	peer=(name="net.sourceforge.mumble.mumble",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/"
  	interface="org.freedesktop.DBus.Introspectable"
  	member=Introspect
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  dbus send
  	bus=session
  	path="/"
  	interface="net.sourceforge.mumble.Mumble"
  	peer=(name="net.sourceforge.mumble.mumble",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/"
  	interface="net.sourceforge.mumble.Mumble"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  owner /dev/shm/MumbleLink.[0-9]*			rw,	# [0-9]* - UID пользователя.
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/mumble					mr,
  /usr/bin/lsb_release					Px,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.local/share/data/Mumble/		rw,
  owner @{HOME}/.local/share/data/Mumble/**		rwk,
  owner @{HOME}/.config/Mumble/				rw,
  owner @{HOME}/.config/Mumble/**			rwk,
  owner @{HOME}/.MumbleSocket				rw,
  owner @{HOME}/.MumbleOverlayPipe			rw,
  
  # NOISY ----------------------------------------------
  deny /etc/						r,
  deny @{HOME}						r,
}
