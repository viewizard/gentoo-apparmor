#include <tunables/global>
profile mumble /usr/bin/mumble {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/qt>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/audio>
  
  # /dev/tty rw,
  /dev/tty[0-9]* w,
  /dev/shm/MumbleLink.* rw,
  
  /usr/bin/mumble mr,
  /usr/bin/lsb_release Pxr,
  
  owner @{HOME}/.local/share/data/Mumble/ rw,
  owner @{HOME}/.local/share/data/Mumble/** rwk,
  owner @{HOME}/.config/Mumble/ rw,
  owner @{HOME}/.config/Mumble/** rwk,
  owner @{HOME}/.MumbleSocket rw,
  owner @{HOME}/.MumbleOverlayPipe rw,
  
  # Noisy
  deny /etc/ r,
  deny @{HOME} r,
  
}
