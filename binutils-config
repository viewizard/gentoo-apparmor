#include <tunables/global>

profile binutils-config /usr/bin/binutils-config flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/binutils-config				r,
  /bin/bash						mr,
  /bin/stty						ix,
  /bin/tr						ix,
  /bin/ln						ix,
  /bin/mv						ix,
  /bin/rm						ix,
  /bin/rmdir						ix,
  /bin/mkdir						ix,
  /bin/cat						ix,
  /sbin/consoletype					ix,
  /usr/bin/find						ix,
  /usr/bin/tput						ix,
  /usr/bin/scanelf					ix,
  /usr/bin/cmp						ix,
  @{PYTHON_EXEC_WRAPPER}				Cx -> portageq,
  
  # READS/WRITES ---------------------------------------
  /etc/terminfo/x/xterm					r,
  /etc/env.d/**						rw,
  /usr/bin/*						rw,
  /usr/x86_64-pc-linux-gnu/**				rw,
  /usr/x86_64-pc-linux-gnu/binutils-bin/{,**}		r,
  
  # TEMP -----------------------------------------------
  owner /tmp/sh-thd.*					rw,
  
  
  profile portageq flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/portageq				Px,
    @{PYTHON_EXEC}/env-update				Px,
    
  }
  
}
