#include <tunables/global>
profile binutils-config /usr/bin/binutils-config flags=(complain) {
  #include <abstractions/base>
  
  capability sys_admin,
  
  /dev/tty rw,
  /dev/pts/[0-9]* w,
  
  /usr/bin/binutils-config r,
  /bin/bash mr,
  /bin/stty ix,
  /bin/tr ix,
  /bin/ln ix,
  /bin/mv ix,
  /bin/rm ix,
  /bin/rmdir ix,
  /bin/mkdir ix,
  /sbin/consoletype ix,
  /usr/bin/find ix,
  /usr/bin/tput ix,
  /usr/bin/scanelf ix,
  /usr/bin/cmp ix,
  /usr/lib{,32,64}/python-exec/python-exec2 Cx -> portageq,
  
  /etc/terminfo/x/xterm r,
  /etc/env.d/** rw,
  /usr/bin/* rw,
  /usr/x86_64-pc-linux-gnu/** rw,
  /usr/x86_64-pc-linux-gnu/binutils-bin/{,**} r,
  
  
  profile portageq flags=(complain) {
    #include <abstractions/base>
    
    /usr/lib{,32,64}/python-exec/python-exec2 m,
    /usr/lib{,32,64}/python-exec/python-exec2-c m,
    /bin/env r,
    
    /usr/lib{,32,64}/python-exec/@{PYTHON}/portageq Px,
    /usr/lib{,32,64}/python-exec/@{PYTHON}/env-update Px,
    
    /etc/env.d/python/config r,
    
  }
  
}
