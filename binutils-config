#include <local/tunables.d/>

profile binutils-config /usr/bin/binutils-config {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/binutils-config				r,
  @{shell}						mr,
  /bin/stty						Px,	# sys-apps/coreutils
  /bin/tr						Px,	# sys-apps/coreutils
  /bin/ln						Cx,	# sys-apps/coreutils
  /bin/mv						Cx,	# sys-apps/coreutils
  /bin/rm						Cx,	# sys-apps/coreutils
  /bin/rmdir						Cx,	# sys-apps/coreutils
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/cat						Cx,	# sys-apps/coreutils
  /sbin/consoletype					Px,	# sys-apps/gentoo-functions
  /usr/bin/find						Cx,	# sys-apps/findutils
  /usr/bin/tput						Px,	# sys-libs/ncurses
  /usr/bin/scanelf					Cx,	# app-misc/pax-utils
  /usr/bin/cmp						Cx,	# sys-apps/diffutils
  @{PYTHON_EXEC_WRAPPER}				Cx -> portageq,	# dev-lang/python-exec
  
  # READS/WRITES ---------------------------------------
  /etc/env.d/**						r,
  /etc/env.d/[0-9]*binutils.tmp				w,
  /etc/env.d/binutils/config-@{CHOST}.tmp		w,
  /usr/@{CHOST}/binutils-bin/{,**}			r,
  
  # TEMP -----------------------------------------------
  owner /tmp/sh-thd.*					rw,
  
  profile ln /bin/ln {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/ln						mr,
    
    # READS/WRITES -------------------------------------
    /usr/bin/*						w,
    /usr/@{CHOST}/**					w,
  }
  
  profile mv /bin/mv {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/mv						mr,
    
    # READS/WRITES -------------------------------------
    /usr/bin/*						rw,
    /usr/@{CHOST}/**					rw,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # READS/WRITES -------------------------------------
    /etc/env.d/[0-9]*binutils.tmp			w,
    /etc/env.d/binutils/config-@{CHOST}.tmp		w,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
    
    # READS/WRITES -------------------------------------
    /usr/@{CHOST}/**/					w,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
    
    # READS/WRITES -------------------------------------
    /usr/@{CHOST}/**/					w,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
  
  profile find /usr/bin/find {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/find					mr,
    /bin/rm						Px -> binutils_config_rm,	# sys-apps/coreutils
    
    # READS/WRITES -------------------------------------
    /usr/@{CHOST}/**					r,
  }
  
  profile scanelf /usr/bin/scanelf {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/scanelf					mr,
  }
  
  profile cmp /usr/bin/cmp {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/cmp					mr,
    
    # READS/WRITES -------------------------------------
    /etc/env.d/[0-9]*binutils{,.tmp}			r,
    /etc/env.d/binutils/config-@{CHOST}{,.tmp}		r,
  }
  
  profile portageq {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/portageq				Px,	# sys-apps/portage
    @{PYTHON_EXEC}/env-update				Px,	# sys-apps/portage
  }
}

# IMPROVE! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile binutils_config_rm {
  #include <abstractions/base>
  
  # EXECUTABLES --------------------------------------
  /bin/rm						mr,
}
