#include <tunables/global>

profile xinit /usr/bin/xinit {
  #include <abstractions/base>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_nice,
  capability setuid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xinit					mr,
  @{shell}						Cx,
  /etc/X11/xinit/xserverrc				Px,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					w,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/cat						ix,
    /bin/grep						ix,
    /bin/sed						ix,
    /usr/bin/which					Px,
    /usr/bin/gawk					ix,
    /usr/bin/xrdb					Px,
    /usr/bin/dbus-send					Px,
    /usr/bin/nvidia-settings				Px,
    /usr/bin/xfce4-session				Px,	# XFCE4
    /usr/bin/ck-launch-session				Px,
    /usr/bin/xdg-user-dirs-update			Px,
    /etc/X11/chooser.sh					ixr,
    
    # READS/WRITES -------------------------------------
    /etc/X11/xinit/xinitrc				r,
    /etc/X11/Sessions/{,*}				r,
    /etc/X11/xinit/xinitrc.d/{,*}			r,
    /etc/xdg/xfce4/xinitrc				r,
    /etc/xdg/xfce4/Xft.xrdb				r,
  }
}

profile xinit.xserverrc /etc/X11/xinit/xserverrc {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /etc/X11/xinit/xserverrc				r,
  @{shell}						mr,
  /usr/bin/Xorg						Px,
}

profile xinit.startx /usr/bin/startx {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_tty_config,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/startx					r,
  @{shell}						mr,
  /bin/uname						Px,
  /bin/hostname						Px,
  /bin/grep						ix,
  /bin/sed						ix,
  /bin/rm						ixr,
  /usr/bin/mcookie					ix,
  /usr/bin/deallocvt					ixr,
  /usr/bin/xauth					Pxr,
  /usr/bin/xinit					Px,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.serverauth*				rwl,
  
  # TEMP -----------------------------------------------
  owner /tmp/sh-thd.??????				rw,
}
