#include <local/tunables.d/>

profile xinit /usr/bin/xinit {
  #include <abstractions/base>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_nice,
  capability setuid,
  
  # SIGNAL ---------------------------------------------
  signal (receive) set=(usr1) peer="xorg-server.Xorg",		# x11-base/xorg-server
  signal (send) set=(hup),
  signal (send) set=(term) peer="xorg-server.Xorg",		# x11-base/xorg-server
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xinit					mr,
  @{shell}						Px -> xinit_shell,
  /etc/X11/xinit/xserverrc				Px,
  /usr/bin/Xorg						Px,	# x11-base/xorg-server (запуска под пользователем, без suid)
}

# IMPROVE! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile xinit_shell {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/sed						Cx,	# sys-apps/sed
  /usr/bin/which					Px,	# sys-apps/which
  /usr/bin/gawk						Cx,	# sys-apps/gawk
  /usr/bin/xrdb						Px,	# x11-apps/xrdb
  /usr/bin/dbus-send					Px,	# sys-apps/dbus
  /usr/bin/nvidia-settings				Px,	# x11-drivers/nvidia-drivers
  /usr/bin/xfce4-session				Px,	# xfce-base/xfce4-session
  /usr/bin/ck-launch-session				Px,	# sys-auth/consolekit
  /usr/bin/xdg-user-dirs-update				Px,	# x11-misc/xdg-user-dirs
  /etc/xdg/xfce4/xfce4-session-fix			Px,	# xfce-base/xfce4-session
  /etc/X11/chooser.sh					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/X11/xinit/xinitrc				r,
  /etc/X11/xinit/xinitrc.d/{,*}				r,
  /etc/xdg/xfce4/xinitrc				r,	# xfce-base/xfce4-session
  
  profile cat /bin/cat {					# Используется при запуске через startxfce4.
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # READS/WRITES -------------------------------------
    /etc/xdg/xfce4/Xft.xrdb				r,	# xfce-base/xfce4-session
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
  
  profile gawk /usr/bin/gawk {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gawk					mr,
  }
}

profile xinit.chooser.sh /etc/X11/chooser.sh {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/X11/chooser.sh					r,
  @{shell}						mr,
  /usr/bin/gawk						Cx,	# sys-apps/gawk
  
  # READS/WRITES ---------------------------------------
  /etc/X11/Sessions/{,*}				r,
  
  profile gawk /usr/bin/gawk {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gawk					mr,
  }
}

profile xinit.xserverrc /etc/X11/xinit/xserverrc {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/X11/xinit/xserverrc				r,
  @{shell}						mr,
  /usr/bin/Xorg						Px,	# x11-base/xorg-server
}

profile xinit.startx /usr/bin/startx {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_tty_config,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/startx					r,
  @{shell}						mr,
  /bin/uname						Px,	# sys-apps/coreutils
  /bin/hostname						Px,	# sys-apps/net-tools
  /bin/grep						Cx,	# sys-apps/grep
  /bin/sed						Cx,	# sys-apps/sed
  /bin/rm						Cx,	# sys-apps/coreutils
  /bin/expr						Cx,	# sys-apps/coreutils
  /usr/bin/mcookie					Px,	# sys-apps/util-linux
  /usr/bin/deallocvt					Px,	# sys-apps/kbd
  /usr/bin/xauth					Px,	# x11-apps/xauth
  /usr/bin/xinit					Px,
  
  # TEMP -----------------------------------------------
  owner /tmp/@{TMP_SH}					rw,
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # USERS --------------------------------------------
    owner @{HOME}/.serverauth.*				w,	# * - 1-8 символов @{pid} + 0(нет) или 2 символа {[a-z],-}
  }
  
  profile expr /bin/expr {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/expr						mr,
  }
}

profile xinit.startDM.sh /etc/X11/startDM.sh {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # EXECUTABLES ----------------------------------------
  /etc/X11/startDM.sh					r,
  @{shell}						mr,
  /usr/bin/sddm						Px,	# x11-misc/sddm
  
  # READS/WRITES ---------------------------------------
  /etc/profile						r,	# sys-apps/baselayout
  /etc/profile.d/{,*}					r,	# x11-libs/vte (проверять, могут быть другие пакеты)
  /etc/bash/bashrc					r,	# app-shells/bash
  /run/sddm.pid						rw,	# x11-misc/sddm
}
