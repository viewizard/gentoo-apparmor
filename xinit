#include <tunables.d/>

profile xinit /usr/bin/xinit {
  #include <abstractions/base>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_nice,
  capability setuid,
  
  # SIGNAL ---------------------------------------------
  signal (receive) set=(usr1) peer="xorg-server.Xorg",
  signal (send) set=(hup),
  signal (send) set=(term) peer="xorg-server.Xorg",
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xinit					mr,
  @{shell}						Px -> xinit_shell,
  /etc/X11/xinit/xserverrc				Px,
  /usr/bin/Xorg						Px,	# Нужно для запуска под пользователем (без suid).
}

# IMPROVE! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile xinit_shell {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/cat						Cx,
  /bin/grep						Cx,
  /bin/sed						Cx,
  /usr/bin/which					Px,
  /usr/bin/gawk						Cx,
  /usr/bin/xrdb						Px,
  /usr/bin/dbus-send					Px,
  /usr/bin/nvidia-settings				Px,
  /usr/bin/xfce4-session				Px,	# XFCE4
  /usr/bin/ck-launch-session				Px,
  /usr/bin/xdg-user-dirs-update				Px,
  /etc/xdg/xfce4/xfce4-session-fix			Px,	# XFCE4
  /etc/X11/chooser.sh					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/X11/xinit/xinitrc				r,
  /etc/X11/xinit/xinitrc.d/{,*}				r,
  /etc/xdg/xfce4/xinitrc				r,
  
  profile cat /bin/cat {					# Используется при запуске через startxfce4.
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # READS/WRITES -------------------------------------
    /etc/xdg/xfce4/Xft.xrdb				r,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
  
  profile gawk /usr/bin/gawk {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gawk					mr,
  }
}

profile xinit.chooser.sh /etc/X11/chooser.sh {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/X11/chooser.sh					r,
  @{shell}						mr,
  /usr/bin/gawk						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/X11/Sessions/{,*}				r,
  
  profile gawk /usr/bin/gawk {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gawk					mr,
  }
}

profile xinit.xserverrc /etc/X11/xinit/xserverrc {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/X11/xinit/xserverrc				r,
  @{shell}						mr,
  /usr/bin/Xorg						Px,
}

profile xinit.startx /usr/bin/startx {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_tty_config,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/startx					r,
  @{shell}						mr,
  /bin/uname						Px,
  /bin/hostname						Px,
  /bin/grep						Cx,
  /bin/sed						Cx,
  /bin/rm						Cx,
  /bin/expr						Cx,
  /usr/bin/mcookie					Px,
  /usr/bin/deallocvt					Px,
  /usr/bin/xauth					Px,
  /usr/bin/xinit					Px,
  
  # TEMP -----------------------------------------------
  owner /tmp/sh-thd.??????				rw,
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # USERS --------------------------------------------
    owner @{HOME}/.serverauth.*				w,
  }
  
  profile expr /bin/expr {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/expr						mr,
  }
}

profile xinit.startDM.sh /etc/X11/startDM.sh {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # EXECUTABLES ----------------------------------------
  /etc/X11/startDM.sh					r,
  @{shell}						mr,
  /usr/bin/sddm						Px,	# sddm
  
  # READS/WRITES ---------------------------------------
  /etc/profile						r,
  /etc/profile.d/{,*}					r,
  /etc/bash/bashrc					r,
  /run/sddm.pid						rw,	# sddm
}
