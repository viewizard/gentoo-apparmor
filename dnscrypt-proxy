# Небольшие корректировки пакета через portage/env: добавляем возможность запуска
# второго ресолвера через систему управления службами. Различие - наличие номера
# после dnscrypt-proxy (цифра 2).
# Базовый всегда остается как есть (dnscrypt-proxy) без номера.

#include <local/tunables.d/>

profile dnscrypt-proxy@{p_root} /usr/sbin/dnscrypt-proxy@{t_root} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  capability sys_chroot,
  capability net_admin,
  capability net_bind_service,
  capability dac_override,
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/dnscrypt-proxy				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/dnscrypt-proxy{,2}.conf				r,
  /usr/share/dnscrypt-proxy/{,*}			r,
  /run/dnscrypt-proxy{,2}.pid				rw,
  /var/lib/dnscrypt.blacklist				r,	# FIX ME! Вынести в локальные части (?).	# Список запрещенных доменов (в конфигурации используем этот путь).
  /var/log/dnscrypt-proxy.log				rw,
}

profile dnscrypt-proxy.hostip@{p_root} /usr/bin/hostip@{t_root} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC_D}/sys/kernel/random/uuid			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/hostip					mr,
}

profile dnscrypt-proxy.init.d@{p_root} /etc/init.d/dnscrypt-proxy{,2}@{t_root} flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  @{SYS_D}/fs/cgroup/openrc/dnscrypt-proxy{,2}/tasks	w,
  @{SYS_D}/fs/cgroup/unified/dnscrypt-proxy{,2}/cgroup.procs w,
  @{SYS_D}/fs/cgroup/unified/dnscrypt-proxy{,2}/cgroup.events r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/dnscrypt-proxy@{t_root}			Px,
  @{shell}@{t_root}					Cx,
  /bin/mkdir@{t_root}					Cx,	# sys-apps/coreutils
  /bin/grep@{t_root}					Cx,	# sys-apps/grep
  /bin/rmdir@{t_root}					Cx,	# sys-apps/coreutils
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/dnscrypt-proxy{,2}			r,
  /run/dnscrypt-proxy{,2}.pid				r,
  
  profile shell @{shell}@{t_root} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir@{t_root} {
    #include <abstractions/base>
    
    # CAPABILITIES ---------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/{openrc,unified}/dnscrypt-proxy{,2}/ w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep@{t_root} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/dnscrypt-proxy{,2}/cgroup.procs r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir@{t_root} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/dnscrypt-proxy{,2}/	w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
