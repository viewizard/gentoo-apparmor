#include <local/tunables.d/>

profile dnscrypt-proxy /usr/sbin/dnscrypt-proxy {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  capability sys_chroot,
  capability net_admin,
  capability net_bind_service,
  capability dac_override,
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/dnscrypt-proxy				mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/dnscrypt-proxy/{,*}			r,
  /run/dnscrypt-proxy/dnscrypt-proxy.pid		rw,
  /var/log/dnscrypt-proxy.log				rw,
}

profile dnscrypt-proxy.hostip /usr/bin/hostip {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/sys/kernel/random/uuid			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/hostip					mr,
}

profile dnscrypt-proxy.init.d /etc/init.d/dnscrypt-proxy {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/dnscrypt-proxy/tasks		w,
  /sys/fs/cgroup/unified/dnscrypt-proxy/cgroup.procs	w,
  /sys/fs/cgroup/unified/dnscrypt-proxy/cgroup.events	r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/dnscrypt-proxy				Px,
  @{shell}						Cx,
  /bin/chown						Cx,
  /bin/mkdir						Cx,
  /bin/grep						Cx,
  /bin/rmdir						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/dnscrypt-proxy			r,
  audit /run/dnscrypt-proxy/				rw,	# FIX ME! должно уйти в mkdir audit 13.09.2017
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile chown /bin/chown {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # CAPABILITIES -------------------------------------
    capability chown,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/chown						mr,
    
    # READS/WRITES -------------------------------------
    /run/dnscrypt-proxy/				rw,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES ---------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/{openrc,unified}/dnscrypt-proxy/	w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
    
    # READS/WRITES -------------------------------------
    /run/dnscrypt-proxy/				w,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/dnscrypt-proxy/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/dnscrypt-proxy/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
