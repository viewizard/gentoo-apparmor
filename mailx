#include <tunables/global>

profile mailx /usr/bin/{mail,Mail,mailx} {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/mail						mr,
  /usr/sbin/sendmail					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/mail.rc						r,
  
  # TEMP -----------------------------------------------
  owner /tmp/mail.*					rw,
}
