#include <local/tunables.d/>

profile mailx /usr/bin/{mail,Mail,mailx} {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/mail						mr,
  /usr/sbin/sendmail					Px,	# mail-mta/nullmailer
  
  # READS/WRITES ---------------------------------------
  /etc/mail.rc						r,
  
  # TEMP -----------------------------------------------
  owner /tmp/mail.RsXXXX@{TMP6}				rw,
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/portage.cron.@{TMP6}			w,	# 00_update_portage.cron.daily
  deny /tmp/aide.cron.@{TMP6}				w,	# app-forensics/aide, aide.cron.daily
  deny /tmp/chkrootkit.cron.@{TMP6}			w,	# app-forensics/chkrootkit, chkrootkit.cron.daily
  deny /tmp/glsa.cron.@{TMP6}				w,	# sys-apps/portage, glsa.cron.daily
  deny /tmp/lynis.cron.@{TMP6}				w,	# app-forensics/lynis, lynis.cron.daily
  deny /tmp/oinkmaster.cron.@{TMP6}			w,	# net-analyzer/oinkmaster, oinkmaster.cron.daily
  deny /tmp/dailyhomebackup.cron.@{TMP6}		w,	# backup_daily.sh.cron.daily
  deny /tmp/rootbackup.cron.@{TMP6}			w,	# backup_weekly.sh.cron.weekly
}
