#include <tunables/global>

profile mailx /usr/bin/{mail,Mail,mailx} {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/mail						mr,
  /usr/sbin/sendmail					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/mail.rc						r,
  
  # TEMP -----------------------------------------------
  owner /tmp/mail.*					rw,
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/portage.cron.*				w,	# 00_update_portage.cron.daily
  deny /tmp/aide.cron.*					w,	# aide.cron.daily
  deny /tmp/chkrootkit.cron.*				w,	# chkrootkit.cron.daily
  deny /tmp/glsa.cron.*					w,	# glsa.cron.daily
  deny /tmp/lynis.cron.*				w,	# lynis.cron.daily
  deny /tmp/oinkmaster.cron.*				w,	# oinkmaster.cron.daily
  deny /tmp/dailyhomebackup.cron.*			w,	# backup_daily.sh.cron.daily
  deny /tmp/rootbackup.cron.*				w,	# backup_weekly.sh.cron.weekly
}
