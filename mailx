#include <tunables/global>
profile mailx /usr/bin/{mail,Mail,mailx} {
  #include <abstractions/base>
  
  capability setuid,
  capability setgid,
  
  /usr/bin/mail mr,
  /usr/sbin/sendmail Px,
  
  /etc/mail.rc r,
  
  owner /tmp/mail.* rw,
  
}
