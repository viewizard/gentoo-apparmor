#include <tunables/global>

profile pam.unix_chkpwd /sbin/unix_chkpwd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # EXECUTABLES ----------------------------------------
  /sbin/unix_chkpwd					mr,
  
  # READS/WRITES ---------------------------------------
  owner /etc/shadow					r,
}
