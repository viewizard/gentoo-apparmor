#include <tunables/global>

profile xautolock /usr/bin/xautolock {
  #include <abstractions/base>
  #include <abstractions/X>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xautolock					mr,
  @{shell}						Cx,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /usr/bin/mate-screensaver-command			Px,
  }
}
