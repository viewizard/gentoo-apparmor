#include <tunables/global>

profile sddm /usr/bin/sddm {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/nameservice>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/sddm						mr,
  @{shell}						Cx,
  /usr/bin/Xorg						Px,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /etc/sddm.conf					r,
  /var/log/sddm.log					rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/sddm-auth*					rw,
  owner /tmp/??????/					rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    @{shell}						rm,
  }
}
