#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-rwk
@{USERS_DIR_rwk}="[^.]**"
@{USERS_FILE_rwk}="[^.]*.*"

profile openshot @{PYTHON2_EXEC}/openshot {
  #include <abstractions/base>
  #include <abstractions-user/freedesktop.org>
  #include <abstractions-user/fonts>
  #include <abstractions-user/gtk>
  #include <abstractions-user/audio>
  #include <abstractions/python>
  #include <abstractions-user/video>
  #include <abstractions-user/X>
  #include <abstractions/nameservice>
  #include <abstractions-user/xdg-open>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions-user/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  #include <abstractions-user/profile_transitions/allow-strict-web>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
#  owner @{PROC_D}/@{pid}/cmdline			r,
#  owner @{PROC_D}/@{pid}/mounts			r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /sbin/ldconfig					Px,	# sys-libs/glibc
  
  # READS/WRITES ---------------------------------------
  /usr/lib{,32,64}/					r,
  /usr/lib{,32,64}/frei0r-1/*.so			m,	# media-plugins/frei0r-plugins
  /usr/share/mlt/**					r,	# media-libs/mlt
  @{PYTHON_PACKAGES_D}/cairo/{,**/}			w,	# dev-python/pycairo
  @{PYTHON_PACKAGES_D}/cairo/**.pyc{,.*}		w,	# dev-python/pycairo
  
  # USERS ----------------------------------------------
  owner @{USER_HOME_D}/.openshot/{,**}			rw,
  
  # TEMP -----------------------------------------------
  audit owner /tmp/??????				rw,	# FIX ME! audit 25.11.2017	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/netstat					Px,	# sys-apps/net-tools
  }
}

profile openshot.openshot-render @{PYTHON2_EXEC}/openshot-render {
  #include <abstractions/base>
  #include <abstractions/python>
}
