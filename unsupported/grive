#include <tunables/global>

profile grive /usr/bin/grive {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/ssl-certs>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/grive					mr,
  
  # USERS ----------------------------------------------
  owner @{HOME}/GoogleDrive/				r,
  owner @{HOME}/GoogleDrive/**				rw,
  owner @{HOME}/.local/share/Trash/files/		r,
  owner @{HOME}/.local/share/Trash/files/**		rw,
}
