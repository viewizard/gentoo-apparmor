# BUG!
# Важно! app-arch/xarchiver-0.5.4 при отмене распаковки, убивает
# родительские процессы (вместо дочерних).

# BUG!
# Важно! app-arch/xarchiver-0.5.4.8 порт на GTK3, отображение
# распаковки постоянно меняет размер в соотв. с выводом имени
# извлекаемого файла, из-за чего "скачет" кнопка отмены распаковки.
# По какой-то причине не тянет русский язык (хотя файлы po есть).
# Вероятно, при портировании на GTK3 что-то не доделали.

# Используем app-arch/engrampa, произведены корректировки в:
# thunar_root, abstractions/binary-helper-strict_root

# DELEGATION! На данный момент не можем вынести в отдельные профили все архиваторы,
# т.к. кол-во переключений на именованные профили не может превышать 12, с root
# будут проблемы (нужно делать больше 12 переключений профилей).

#include <tunables/global>

# предустановка для abstractions/fs/access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]**"

profile xarchiver /usr/bin/xarchiver flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dconf>
  #include <abstractions/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/deny-private-strict>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/xdg-open>
  #include <abstractions/binary-helper-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xarchiver					mr,
  /bin/mv						Cx,
  /bin/rm						Cx,
  /bin/cp						Cx,
  /bin/tar						Cx,
  /bin/bzip2						Cx,
  /bin/gzip						Cx,
  /usr/bin/7z						Cx,
  /usr/bin/7za						Cx,
  /usr/bin/zip						Cx,
  /usr/bin/unzip					Cx,
  /usr/bin/lzip						Cx,
  /usr/bin/xz						Cx,
  /usr/@{CHOST}/binutils-bin/*/ar			Cx,
  /opt/rar/rar						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/xarchiver/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/xarchiver_*_socket				rw,
  owner /tmp/xa-*/{,**}					rw,
  
  profile mv /bin/mv flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/mv						mr,
    
    # DENY INHERIT -------------------------------------
    deny @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  }
  
  profile rm /bin/rm flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
  }
  
  profile cp /bin/cp flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/cp						mr,
  }
  
  profile tar /bin/tar flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/tar						mr,
    @{shell}						Px -> xarchiver_tar_shell,
    /bin/bzip2						ix,	# Oставляем запуск через ix.
    /bin/gzip						ix,	# Oставляем запуск через ix.
    /usr/bin/lzip					ix,	# Oставляем запуск через ix.
    /usr/bin/xz						ix,	# Oставляем запуск через ix.
  }
  
  profile bzip2 /bin/bzip2 flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/bzip2						mr,
  }
  
  profile gzip /bin/gzip flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/gzip						mr,
  }
  
  profile 7z /usr/bin/7z flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /sys/devices/system/cpu/				r,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/7z						r,
    @{shell}						mr,
    /usr/lib{,32,64}/p7zip/7z				ix,	# Все правильно, для 7z используем с ix.
    
    # READS/WRITES -------------------------------------
    /usr/lib64/p7zip/7z.so				m,
  }
  
  profile 7za /usr/bin/7za flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /sys/devices/system/cpu/				r,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/7za					r,
    @{shell}						mr,
    /usr/lib{,32,64}/p7zip/7za				ix,	# Все правильно, для 7za используем с ix.
  }
  
  profile zip /usr/bin/zip flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/zip					mr,
  }
  
  profile unzip /usr/bin/unzip flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/unzip					mr,
  }
  
  profile lzip /usr/bin/lzip flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/lzip					mr,
    
    # USERS --------------------------------------------
    owner @{HOME}/.fr-*/{,**}				rw,
  }
  
  profile xz /usr/bin/xz flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/xz						mr,
  }
  
  profile ar /usr/@{CHOST}/binutils-bin/*/ar flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/@{CHOST}/binutils-bin/*/ar			mr,
  }
  
  profile rar /opt/rar/rar {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /opt/rar/rar					mr,
    
    # NOISY --------------------------------------------
    deny /etc/						r,
    deny /usr/{,local/}lib{,32,64}/			r,
  }
}

# FIX ME! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile xarchiver_tar_shell flags=(attach_disconnected,complain) {
  #include <abstractions/base>
  #include <abstractions/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/gzip						Cx,
  /bin/bzip2						Cx,
  /usr/bin/lzip						Cx,
  /usr/bin/xz						Cx,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
  
  profile gzip /bin/gzip flags=(attach_disconnected,complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/gzip						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
  
  profile bzip2 /bin/bzip2 flags=(attach_disconnected,complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/bzip2						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
  
  profile lzip /usr/bin/lzip flags=(attach_disconnected,complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/lzip					mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
  
  profile xz /usr/bin/xz flags=(attach_disconnected,complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/xz						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
}

profile xarchiver_root flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X_sudo>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dconf>
  #include <abstractions/xdg-open_root>
  #include <abstractions/binary-helper-strict_root>
  #include <abstractions/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/access-by-pattern-systemusers>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # CAPABILITIES ---------------------------------------
  capability kill,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xarchiver					mr,
  /bin/mv						Cx,
  /bin/rm						Cx,
  /bin/cp						Cx,
  /bin/tar						Cx,
  /bin/bzip2						Cx,
  /bin/gzip						Cx,
  /usr/bin/7z						Cx,
  /usr/bin/7za						Cx,
  /usr/bin/zip						Cx,
  /usr/bin/unzip					Cx,
  /usr/bin/lzip						Cx,
  /usr/bin/xz						Cx,
  /usr/@{CHOST}/binutils-bin/*/ar			Cx,
  /opt/rar/rar						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/xarchiver/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/xarchiver_*_socket				rw,
  /tmp/xa-*/{,**}					rw,
  
  profile mv /bin/mv flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/mv						mr,
  }
  
  profile rm /bin/rm flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
  }
  
  profile cp /bin/cp flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    
    # EXECUTABLES --------------------------------------
    /bin/cp						mr,
  }
  
  profile tar /bin/tar flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # CAPABILITIES ---------------------------------------
    capability chown,
    capability fowner,
    capability fsetid,
    
    # EXECUTABLES --------------------------------------
    /bin/tar						mr,
    @{shell}						Px -> xarchiver_tar_shell_root,
    /bin/bzip2						ix,	# Oставляем запуск через ix.
    /bin/gzip						ix,	# Oставляем запуск через ix.
    /usr/bin/lzip					ix,	# Oставляем запуск через ix.
    /usr/bin/xz						ix,	# Oставляем запуск через ix.
  }
  
  profile bzip2 /bin/bzip2 flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/bzip2						mr,
  }
  
  profile gzip /bin/gzip flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/gzip						mr,
  }
  
  profile 7z /usr/bin/7z flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /sys/devices/system/cpu/				r,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/7z						r,
    @{shell}						mr,
    /usr/lib{,32,64}/p7zip/7z				ix,	# Все правильно, для 7z используем с ix.
    
    # READS/WRITES -------------------------------------
    /usr/lib64/p7zip/7z.so				m,
  }
  
  profile 7za /usr/bin/7za flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /sys/devices/system/cpu/				r,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/7za					r,
    @{shell}						mr,
    /usr/lib{,32,64}/p7zip/7za				ix,	# Все правильно, для 7za используем с ix.
  }
  
  profile zip /usr/bin/zip flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/zip					mr,
  }
  
  profile unzip /usr/bin/unzip flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/unzip					mr,
  }
  
  profile lzip /usr/bin/lzip flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/lzip					mr,
  }
  
  profile xz /usr/bin/xz flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/xz						mr,
  }
  
  profile ar /usr/@{CHOST}/binutils-bin/*/ar flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/@{CHOST}/binutils-bin/*/ar			mr,
  }
  
  profile rar /opt/rar/rar {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /opt/rar/rar					mr,
    
    # NOISY --------------------------------------------
    deny /etc/						r,
    deny /usr/{,local/}lib{,32,64}/			r,
  }
}

# FIX ME! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile xarchiver_tar_shell_root flags=(attach_disconnected,complain) {
  #include <abstractions/base>
  #include <abstractions/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/access-by-pattern-systemusers>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/gzip						Cx,
  /bin/bzip2						Cx,
  /usr/bin/lzip						Cx,
  /usr/bin/xz						Cx,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
  
  profile gzip /bin/gzip flags=(attach_disconnected,complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/gzip						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
  
  profile bzip2 /bin/bzip2 flags=(attach_disconnected,complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/bzip2						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
  
  profile lzip /usr/bin/lzip flags=(attach_disconnected,complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/lzip					mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
  
  profile xz /usr/bin/xz flags=(attach_disconnected,complain) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/xz						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
}

profile xarchiver_tap /usr/libexec/thunar-archive-plugin/xarchiver.tap {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/thunar-archive-plugin/xarchiver.tap	r,
  @{shell}						mr,
  /usr/bin/xarchiver					Px,
}

profile xarchiver_tap_root {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/thunar-archive-plugin/xarchiver.tap	r,
  @{shell}						mr,
  /usr/bin/xarchiver					Px -> xarchiver_root,
}
