# Целесообразность использование данного пакета сомнительна.
# Используем связку IMA/EVM (+DTP) и AppArmor RBAC (systemwide).


# FIX ME! @{pid}/@{pids} - выставить правильные.


#include <local/tunables.d/>

profile chkrootkit /usr/sbin/chkrootkit {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/chkrootkit					r,
  @{shell}						mr,
  /bin/sed						Cx,	# sys-apps/sed
  /bin/uname						Px,	# sys-apps/coreutils
  /bin/ps						Px,	# sys-process/procps
  /bin/cut						Cx,	# sys-apps/coreutils
  /bin/egrep						Cx,	# sys-apps/grep
  /bin/grep						Cx,	# sys-apps/grep
  /bin/ls						Cx,	# sys-apps/coreutils
  /bin/echo						Px,	# sys-apps/coreutils
  /bin/tr						Px,	# sys-apps/coreutils
  /bin/wc						Cx,	# sys-apps/coreutils
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/head						Cx,	# sys-apps/coreutils
  /bin/netstat						Px,	# sys-apps/net-tools
  /usr/bin/id						Px,	# sys-apps/coreutils
  /usr/bin/crontab					Px,	# sys-process/vixie-cron
  /usr/bin/gawk						Cx,	# sys-apps/gawk
  /usr/bin/find						Cx,	# sys-apps/findutils
  /usr/sbin/chkdirs					Px,
  /usr/sbin/strings-static				Px,
  /usr/sbin/chkproc					Px,
  /usr/sbin/ifpromisc					Px,
  /usr/sbin/chkwtmp					Px,
  /usr/sbin/chklastlog					Px,
  /usr/sbin/chkutmp					Px,
  
  # READS/WRITES ---------------------------------------
  /							r,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/chkrootkit.cron.*			w,	# DELEGATION! chkrootkit.cron.daily
  }
  
  profile cut /bin/cut {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cut						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/chkrootkit.cron.*			w,	# DELEGATION! chkrootkit.cron.daily
  }
  
  profile egrep /bin/egrep flags=(attach_disconnected) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # CAPABILITIES ---------------------------------------
    capability mknod,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    /bin/egrep						r,
    @{shell}						mr,
    /bin/grep						ix,	# sys-apps/grep		# Все правильно, для egrep используем с ix.
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
    deny /tmp/chkrootkit.cron.*				w,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability mknod,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile ls /bin/ls {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # EXECUTABLES --------------------------------------
    /bin/ls						mr,
    
    # READS/WRITES -------------------------------------
    /							r,
    
    # TEMP ---------------------------------------------
    owner /tmp/chkrootkit.cron.*			w,	# DELEGATION! chkrootkit.cron.daily
  }
  
  profile wc /bin/wc {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/wc						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/chkrootkit.cron.*			w,	# DELEGATION! chkrootkit.cron.daily
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PTRACE -------------------------------------------
    ptrace (trace) peer="sysvinit.init",
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # READS/WRITES -------------------------------------
    /etc/shells						r,
    
    # TEMP ---------------------------------------------
    owner /tmp/chkrootkit.cron.*			w,	# DELEGATION! chkrootkit.cron.daily
  }
  
   profile head /bin/head {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability mknod,
    
    # EXECUTABLES --------------------------------------
    /bin/head						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/chkrootkit.cron.*			w,	# DELEGATION! chkrootkit.cron.daily
  }
  
  profile gawk /usr/bin/gawk {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gawk					mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/chkrootkit.cron.*			w,	# DELEGATION! chkrootkit.cron.daily
  }
  
  profile find /usr/bin/find {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability net_admin,
    capability dac_override,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/find					mr,
    /bin/head						Px -> chkrootkit_find_head,	# sys-apps/coreutils
    
    # READS/WRITES -------------------------------------
    /{,**}						r,
    
    # TEMP ---------------------------------------------
    owner /tmp/chkrootkit.cron.*			w,	# DELEGATION! chkrootkit.cron.daily
  }
}

# FIX ME! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile chkrootkit_find_head /bin/head {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  
  # EXECUTABLES ----------------------------------------
  /bin/head						mr,
  
  # READS/WRITES ---------------------------------------
  /tmp/**						r,
  /var/tmp/**						r,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
}

profile chkrootkit.chkdirs /usr/sbin/chkdirs {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/chkdirs					mr,
  
  # READS/WRITES ---------------------------------------
  /{,**}/						r,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
}

profile chkrootkit.strings-static /usr/sbin/strings-static {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/strings-static				mr,
  
  # READS/WRITES ---------------------------------------
  /{,**}						r,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
}

profile chkrootkit.chkproc /usr/sbin/chkproc {
  #include <abstractions/base>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(xfsz) peer="sysvinit.init",
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/						r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/chkproc					mr,
  @{shell}						Px -> chkrootkit_chkproc_shell,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
}

# FIX ME! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile chkrootkit_chkproc_shell {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/ps						Px,	# sys-process/procps
  /bin/tr						Px,	# sys-apps/coreutils
  /bin/cut						Cx,	# sys-apps/coreutils
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
  
  profile cut /bin/cut {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cut						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/chkrootkit.cron.*			w,	# DELEGATION! chkrootkit.cron.daily
  }
}

profile chkrootkit.ifpromisc /usr/sbin/ifpromisc flags=(attach_disconnected) {
				# в аудит выводит:
				# operation="getattr" info="Failed name lookup - disconnected path" name="apparmor/.null"
				# По почте приходит с ошибками "/proc/20978/fd/26: Permission denied"
				# /proc/20978/fd/26 UID/GID = 1000
				# Добавляем flags=(attach_disconnected), но при этом
				# не надо добавлять "deny /apparmor/.null r," достаточно
				# просто добавить "flags=(attach_disconnected)"
				# Непонятно какой fd выходит в chkrootkit и возвращается туда же.
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/						r,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/@{pid}/net/packet				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/ifpromisc					mr,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
}

profile chkrootkit.chkwtmp /usr/sbin/chkwtmp {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/chkwtmp					mr,
  
  # READS/WRITES ---------------------------------------
  /var/log/wtmp						r,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
}

