profile chkrootkit.chkutmp /usr/sbin/chkutmp {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/chkutmp					mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /run/utmp						r,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/ps						Px,	# sys-process/procps
    
    # TEMP ---------------------------------------------
    owner /tmp/chkrootkit.cron.*			w,	# DELEGATION! chkrootkit.cron.daily
  }
}

# Профиль модифицированного скрипта для запуска chkrootkit по cron-у.
profile chkrootkit.cron.daily /etc/cron.daily/chkrootkit {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.daily/chkrootkit				r,
  @{shell}						mr,
  /bin/mktemp						Cx,	# sys-apps/coreutils
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/rm						Cx,	# sys-apps/coreutils
  /bin/basename						Px,	# sys-apps/coreutils
  /usr/bin/libnotify-notify-send-users			Px,	# x11-libs/libnotify
  /usr/bin/mail						Px,	# mail-client/mailx
  /usr/bin/logger					Px,	# sys-apps/util-linux
  /usr/sbin/chkrootkit					Px,
  
  # TEMP -----------------------------------------------
  owner /tmp/chkrootkit.cron.*				rw,	# DELEGATION! chkrootkit.cron.daily
  
  profile mktemp /bin/mktemp {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/mktemp						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/chkrootkit.cron.*			rw,	# DELEGATION! chkrootkit.cron.daily
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/chkrootkit.cron.*			rw,	# DELEGATION! chkrootkit.cron.daily
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/chkrootkit.cron.*			w,	# DELEGATION! chkrootkit.cron.daily
  }
}
