#include <tunables.d/>

profile oracle-jdk-bin.java /opt/oracle-jdk-bin-*/{,jre/}bin/java {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /sys/devices/system/cpu/				r,
  
  # EXECUTABLES ----------------------------------------
  /opt/oracle-jdk-bin-*/{,jre/}bin/java			ixmr,
  
  # READS/WRITES ---------------------------------------
  /opt/oracle-jdk-bin-*/**				r,
  /opt/oracle-jdk-bin-*/lib/**.so			mr,
  /opt/oracle-jdk-bin-*/jre/lib/**.so			mr,
  
  # NOISY ----------------------------------------------
  deny @{HOME}/						r,
}
