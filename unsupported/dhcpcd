#include <local/tunables.d/>

profile dhcpcd /sbin/dhcpcd {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability net_raw,
  capability net_admin,
  capability sys_module,
  capability sys_tty_config,
  capability net_bind_service,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network packet dgram,
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /sys/devices/virtual/net/lo/uevent			r,
#  /sys/devices/pci[0-9]*/**/net/eth[0-9]*/uevent	r,	# FIX ME! Сделать через @{PCI2} и @{PCI4} + жесткие ограничения на ресурсы.
  @{PROC}/sys/net/ipv4/conf/*/promote_secondaries	rwk,
  
  # EXECUTABLES ----------------------------------------
  /sbin/dhcpcd						mr,
  /lib{,32,64}/dhcpcd/dhcpcd-run-hooks			Px,
  
  # READS/WRITES ---------------------------------------
  /etc/dhcpcd.conf					r,
  /etc/dhcpcd.duid					rw,
  /etc/udev/udev.conf					r,	# sys-fs/eudev
  /run/dhcpcd{,-eth[0-9]*}.pid				rwk,
  /run/dhcpcd.{unpriv.,}sock				rw,
  /run/udev/data/*					rw,
  /var/lib/dhcpcd/					rw,
  /var/lib/dhcpcd/*					rwk,
}

profile run-hooks /lib{,32,64}/dhcpcd/dhcpcd-run-hooks {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/sed						Cx,	# sys-apps/sed
  /bin/rm						Cx,	# sys-apps/coreutils
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/chmod						Cx,	# sys-apps/coreutils
  /bin/touch						Cx,	# sys-apps/coreutils
  /bin/hostname						Px,	# sys-apps/coreutils
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /usr/bin/cmp						Cx,	# sys-apps/diffutils
  
  # READS/WRITES ---------------------------------------
  /etc/resolv.conf					rw,
  /etc/ntp.conf						r,	# net-misc/ntp
  /run/dhcpcd/						rw,
  /run/dhcpcd/**					rwk,
  
  profile sed /bin/sed flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
  
  profile rm /bin/rm flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
  }
  
  profile cat /bin/cat flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
  
  profile chmod /bin/chmod flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/chmod						mr,
  }
  
  profile touch /bin/touch flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/touch						mr,
  }
  
  profile mkdir /bin/mkdir flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile cmp /usr/bin/cmp flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/cmp					mr,
  }
}

profile dhcpcd.init.d /etc/init.d/dhcpcd flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/dhcpcd/tasks			w,
  /sys/fs/cgroup/unified/dhcpcd/cgroup.procs		w,
  /sys/fs/cgroup/unified/dhcpcd/cgroup.events		r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  /sbin/dhcpcd						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/dhcpcd				r,
  
  # READS/WRITES ---------------------------------------
  /run/dhcpcd.pid					rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/{openrc,unified}/dhcpcd/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/dhcpcd/cgroup.procs		r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/dhcpcd/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
