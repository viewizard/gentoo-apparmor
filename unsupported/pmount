# FIX ME! @{pid}/@{pids} - выставить правильные.


#include <local/tunables.d/>

profile pmount /usr/bin/pmount flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_REAL}					r,
  /sys/class/block/					r,
  /sys/devices/virtual/block/md*/dev			r,
  /sys/devices/pci@{PCI2}/@{PCI4}/{ata[0-9]*,usb@{USB1}}/**/block/@{BLOCK_REAL}/{,*/}{,dev} r,
  /sys/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/**/block/@{BLOCK_REAL}/removable r,
  /sys/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/**/block/@{BLOCK_REAL}/*/{size,start} r,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pmount					mr,
#  /bin/mount						Px,	# FS ACCESS!	# sys-apps/util-linux
  /sbin/cryptsetup					Px,	# sys-fs/cryptsetup
  
  # READS/WRITES ---------------------------------------
  /etc/pmount.conf					r,
  /etc/pmount.allow					r,
  /etc/fstab						r,
}

profile pmount.pumount /usr/bin/pumount flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pumount					mr,
#  /bin/umount						Px,	# FS ACCESS!	# sys-apps/util-linux
  /sbin/cryptsetup					Px,	# sys-fs/cryptsetup
  
  # READS/WRITES ---------------------------------------
  /etc/pmount.conf					r,
  /etc/fstab						r,
}
