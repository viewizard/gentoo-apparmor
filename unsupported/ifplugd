# FIX ME! @{pid}/@{pids} - выставить правильные.


#include <local/tunables.d/>

profile ifplugd /usr/sbin/ifplugd {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability sys_tty_config,
  capability net_admin,
  capability sys_module,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/ifplugd					mr,
  /etc/ifplugd/ifplugd.action				Px,
  
  # READS/WRITES ---------------------------------------
  /run/ifplugd.*.pid					rwk,
}

profile ifplugd.action /etc/ifplugd/ifplugd.action {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /etc/ifplugd/ifplugd.action				r,
  @{shell}						mr,
  /bin/grep						Cx,
  /bin/rc-status					Px,
  /etc/init.d/net.lo					Px,
  /etc/init.d/dnsmasq					Px,
  /etc/init.d/netmount					Px,
  /etc/init.d/tor					Px,
  /etc/init.d/suricata					Px,
  
  profile grep /bin/grep flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
}

profile ifplugd.ifplugstatus /usr/sbin/ifplugstatus flags=(complain) {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/ifplugstatus				mr,
}
