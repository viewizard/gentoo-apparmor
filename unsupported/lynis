# Целесообразность использование данного пакета сомнительна.
# Используем связку IMA/EVM (+DTP) и AppArmor RBAC (systemwide).

# Оставляем в профиле использование ix.
# Предположительно, пакет никогда не будет использоваться.
# В случае использования - скорректировать.

#include <tunables.d/>

profile lynis /usr/sbin/lynis {
  #include <abstractions/base>
  #include <abstractions/perl>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/mapper/control					w,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cxmr,	# Все правильно, запуск и mmap
  /bin/date						ix,	# FS ACCESS!
  /bin/expr						ix,	# FS ACCESS!
  /bin/ls						ix,	# FS ACCESS!
  /bin/egrep						ix,	# FS ACCESS!
  /bin/grep						ix,	# FS ACCESS!
  /bin/cut						ix,	# FS ACCESS!
  /bin/wc						ix,	# FS ACCESS!
  /bin/sed						ix,	# FS ACCESS!
  /bin/tr						Px,
  /bin/chmod						ix,	# FS ACCESS!
  /bin/ps						Px,
  /bin/uname						Px,
  /bin/head						ix,	# FS ACCESS!
  /bin/cat						ix,	# FS ACCESS!
  /bin/echo						Px,
  /bin/kmod						Px,
  /bin/sort						ix,	# FS ACCESS!
  /bin/sleep						Px,
  /bin/ifconfig						Px,
  /bin/hostname						Px,
  /bin/readlink						ix,	# FS ACCESS!
  /bin/mktemp						ix,	# FS ACCESS!
  /bin/passwd						Px,
  /bin/rm						ix,	# FS ACCESS!
  /bin/mount						ix,	# FS ACCESS!
  /bin/netstat						Px,
  /sbin/lvm						Px,
  /sbin/tune2fs						ix,	# FIX ME! Вынести в отдельный профиль.
  /sbin/rpcinfo						ix,	# FIX ME! Вынести в отдельный профиль.
  /usr/bin/aide						Px,
  /usr/bin/id						Px,
  /usr/bin/wget						Px,
  /usr/bin/gawk						ix,	# FS ACCESS!
  /usr/bin/find						ix,	# FS ACCESS!
  /usr/bin/nmap						Px,
  /usr/bin/openssl					ix,	# FIX ME! Вынести в отдельный профиль.
  /usr/bin/xargs					ix,	# FIX ME! Вынести в отдельный профиль.
  /usr/bin/uniq						Px,
  /usr/bin/which					Px,
  /usr/bin/dig						Px,
  /usr/bin/ntpq						Px,
  /usr/bin/shasum-*-perl-*				ix,	# FIX ME! Вынести в отдельный профиль.
  /usr/sbin/smbd					Cx,
  /usr/sbin/sshd					Cx,
  /usr/sbin/sysctl					Px,
  /usr/sbin/syslog-ng					Px,
  /usr/bin/logrotate					Px,
  /usr/sbin/grpck					ix,	# FIX ME! Вынести в отдельный профиль.
  /usr/sbin/pwck					ix,	# FIX ME! Вынести в отдельный профиль.
  @{PYTHON_EXEC_WRAPPER}				Cx -> aa_status,
  
  # READS/WRITES ---------------------------------------
  /{,**}						r,
  /run/lynis.pid					rw,
  /var/log/lynis.log					rw,
  /var/log/lynis-report.dat				rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/lynis.*					rw,
  owner /tmp/lynis2.*					rw,
  owner /tmp/lynis.cron.*				rw,	# DELEGATION! lynis.cron.daily
  owner /tmp/lynis-shellshock-test.*			rw,
  
  # NOISY ----------------------------------------------
  deny /*						w,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_read_search,
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						ixmr,	# Все правильно, запуск и mmap
    /bin/grep						ix,	# FS ACCESS!
    /bin/env						ix,	# FS ACCESS!
    /bin/rm						ix,	# FS ACCESS!
    /bin/cat						ix,	# FS ACCESS!
    /bin/date						ix,	# FS ACCESS!
    
    # TEMP ---------------------------------------------
    owner /tmp/sh-thd.*					rw,
    owner /tmp/lynis-shellshock-test.*			rw,
  }
  
  profile smbd /usr/sbin/smbd {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/sbin/smbd					mr,
    
    # READS/WRITES -------------------------------------
    /usr/share/samba/{,**}				r,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/lynis.cron.*				w,	# lynis.cron.daily
  }
  
  profile sshd /usr/sbin/sshd {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # CAPABILITIES -------------------------------------
    capability setuid,
    capability setgid,
    
    # NETWORK ------------------------------------------
    network netlink raw,
    network inet dgram,
    network inet6 dgram,
    network inet stream,
    network inet6 stream,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    @{PROC}/@{pid}/fd/					r,
    
    # EXECUTABLES --------------------------------------
    /usr/sbin/sshd					mr,
    
    # READS/WRITES -------------------------------------
    /etc/ssl/openssl.cnf				r,
    /etc/ssh/sshd_config				r,
  }
  
  profile aa_status {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/aa-status				Px,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/lynis.cron.*				w,	# lynis.cron.daily
  }
}

# Профиль модифицированного скрипта для запуска lynis по cron-у.
profile lynis.cron.daily /etc/cron.daily/lynis {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # PSEUDO ---------------------------------------------
  /etc/cron.daily/lynis					r,
  @{shell}						mr,
  /bin/mktemp						ix,	# FS ACCESS!
  /bin/cat						ix,	# FS ACCESS!
  /bin/rm						ix,	# FS ACCESS!
  /bin/basename						Px,
  /usr/bin/libnotify-notify-send-users			Px,
  /usr/bin/mail						Px,
  /usr/bin/logger					Px,
  /usr/sbin/lynis					Px,
  
  # TEMP -----------------------------------------------
  owner /tmp/lynis.cron.??????				rw,
}
