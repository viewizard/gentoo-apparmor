# Целесообразность использование данного пакета сомнительна.
# Используем связку IMA/EVM (+DTP) и AppArmor RBAC (systemwide).

# Оставляем в профиле использование ix.
# Предположительно, пакет никогда не будет использоваться.
# В случае использования - скорректировать.


# FIX ME! @{pid}/@{pids} - выставить правильные.


#include <local/tunables.d/>

profile lynis /usr/sbin/lynis {
  #include <abstractions/base>
  #include <abstractions/perl>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/mapper/control					w,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cxmr,	# Все правильно, запуск и mmap
  /bin/date						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/expr						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/ls						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/egrep						ix,	# sys-apps/grep		# FS ACCESS!
  /bin/grep						ix,	# sys-apps/grep		# FS ACCESS!
  /bin/cut						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/wc						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/sed						ix,	# sys-apps/sed		# FS ACCESS!
  /bin/tr						Px,	# sys-apps/coreutils
  /bin/chmod						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/ps						Px,	# sys-process/procps
  /bin/uname						Px,	# sys-apps/coreutils
  /bin/head						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/cat						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/echo						Px,	# sys-apps/coreutils
  /bin/kmod						Px,	# sys-apps/kmod
  /bin/sort						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/sleep						Px,	# sys-apps/coreutils
  /bin/ifconfig						Px,	# sys-apps/net-tools
  /bin/hostname						Px,	# sys-apps/net-tools
  /bin/readlink						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/mktemp						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/passwd						Px,	# sys-apps/shadow
  /bin/rm						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/mount						ix,	# sys-apps/util-linux	# FS ACCESS!
  /bin/netstat						Px,	# sys-apps/net-tools
  /sbin/lvm						Px,	# sys-fs/lvm2
  /sbin/tune2fs						ix,	# sys-fs/e2fsprogs	# FIX ME! Вынести в отдельный профиль.
  /sbin/rpcinfo						ix,	# net-nds/rpcbind	# FIX ME! Вынести в отдельный профиль.
  /usr/bin/aide						Px,	# app-forensics/aide
  /usr/bin/id						Px,	# sys-apps/coreutils
  /usr/bin/wget						Px,	# net-misc/wget
  /usr/bin/gawk						ix,	# sys-apps/gawk		# FS ACCESS!
  /usr/bin/find						ix,	# sys-apps/findutils	# FS ACCESS!
  /usr/bin/nmap						Px,	# net-analyzer/nmap
  /usr/bin/openssl					ix,	# dev-libs/openssl	# FIX ME! Вынести в отдельный профиль.
  /usr/bin/xargs					ix,	# sys-apps/findutils	# FIX ME! Вынести в отдельный профиль.
  /usr/bin/uniq						Px,	# sys-apps/coreutils
  /usr/bin/which					Px,	# sys-apps/which
  /usr/bin/dig						Px,	# net-dns/bind-tools
  /usr/bin/ntpq						Px,	# net-misc/ntp
  /usr/bin/shasum-[0-9]*-perl-[0-9]*			ix,	# dev-lang/perl		# FIX ME! Вынести в отдельный профиль.
  /usr/bin/logrotate					Px,	# app-admin/logrotate
  /usr/sbin/smbd					Cx,	# net-fs/samba
  /usr/sbin/sshd					Cx,	# net-misc/openssh
  /usr/sbin/sysctl					Px,	# sys-process/procps
  /usr/sbin/syslog-ng					Px,	# app-admin/syslog-ng
  /usr/sbin/grpck					ix,	# sys-apps/shadow	# FIX ME! Вынести в отдельный профиль.
  /usr/sbin/pwck					ix,	# sys-apps/shadow	# FIX ME! Вынести в отдельный профиль.
  @{PYTHON_EXEC_WRAPPER}				Cx -> aa_status,	# dev-lang/python-exec
  
  # READS/WRITES ---------------------------------------
  /{,**}						r,
  /run/lynis.pid					rw,
  /var/log/lynis.log					rw,
  /var/log/lynis-report.dat				rw,
  
  # TEMP -----------------------------------------------
  audit owner /tmp/lynis.*				rw,	# FIX ME! Использовать @{TMP} переменные.
  audit owner /tmp/lynis2.*				rw,	# FIX ME! Использовать @{TMP} переменные.
  owner /tmp/lynis.cron.@{TMP6}				rw,	# DELEGATION! lynis.cron.daily
  audit owner /tmp/lynis-shellshock-test.*		rw,	# FIX ME! Использовать @{TMP} переменные.
  
  # NOISY ----------------------------------------------
  deny /*						w,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_read_search,
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						ixmr,	# Все правильно, запуск и mmap
    /bin/grep						ix,	# sys-apps/grep		# FS ACCESS!
    /bin/env						ix,	# sys-apps/coreutils	# FS ACCESS!
    /bin/rm						ix,	# sys-apps/coreutils	# FS ACCESS!
    /bin/cat						ix,	# sys-apps/coreutils	# FS ACCESS!
    /bin/date						ix,	# sys-apps/coreutils	# FS ACCESS!
    
    # TEMP ---------------------------------------------
    owner /tmp/@{TMP_SH}				rw,	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
    audit owner /tmp/lynis-shellshock-test.*		rw,	# FIX ME! Использовать @{TMP} переменные.
  }
  
  profile smbd /usr/sbin/smbd {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/sbin/smbd					mr,
    
    # READS/WRITES -------------------------------------
    /usr/share/samba/{,**}				r,
    
    # DENY INHERIT -------------------------------------
    deny /tmp/lynis.cron.@{TMP6}			w,	# lynis.cron.daily
  }
  
  profile sshd /usr/sbin/sshd {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # CAPABILITIES -------------------------------------
    capability setuid,
    capability setgid,
    
    # NETWORK ------------------------------------------
    network netlink raw,
    network inet dgram,
    network inet6 dgram,
    network inet stream,
    network inet6 stream,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    @{PROC}/@{pid}/fd/					r,
    
    # EXECUTABLES --------------------------------------
    /usr/sbin/sshd					mr,
    
    # READS/WRITES -------------------------------------
    /etc/ssl/openssl.cnf				r,	# dev-libs/openssl
    /etc/ssh/sshd_config				r,
  }
  
  profile aa_status {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/aa-status				Px,	# sys-apps/apparmor-utils
    
    # DENY INHERIT -------------------------------------
    deny /tmp/lynis.cron.@{TMP6}			w,	# lynis.cron.daily
  }
}

# Профиль модифицированного скрипта для запуска lynis по cron-у.
profile lynis.cron.daily /etc/cron.daily/lynis {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # PSEUDO ---------------------------------------------
  /etc/cron.daily/lynis					r,
  @{shell}						mr,
  /bin/mktemp						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/cat						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/rm						ix,	# sys-apps/coreutils	# FS ACCESS!
  /bin/basename						Px,	# sys-apps/coreutils
  /usr/bin/libnotify-notify-send-users			Px,	# x11-libs/libnotify
  /usr/bin/mail						Px,	# mail-client/mailx
  /usr/bin/logger					Px,	# sys-apps/util-linux
  /usr/sbin/lynis					Px,
  
  # TEMP -----------------------------------------------
  owner /tmp/lynis.cron.@{TMP6}				rw,
}
