#include <tunables.d/>

profile vino-server /usr/libexec/vino-server flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/X>
  #include <abstractions/video>
  #include <abstractions/gtk>
  #include <abstractions/dconf>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/vino-server				mr,
}

profile vino-preferences /usr/bin/vino-preferences flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/dconf>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/vino-preferences				mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/vino/{,**}					r,
}
