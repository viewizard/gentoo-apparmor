# Целесообразность использование данного пакета сомнительна.
# Используем связку IMA/EVM (+DTP) и AppArmor RBAC (systemwide).

#include <tunables/global>

profile aide /usr/bin/aide {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/aide						mr,
  
  # READS/WRITES ---------------------------------------
  /{,**}						r,
  /var/lib/aide/**					rwk,
}

profile aide.aideinit /usr/sbin/aideinit {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/aideinit					r,
  @{shell}						mr,
  /bin/cut						Cx,
  audit /bin/grep					Cx,	# FIX ME! Вызывается именно grep?
  /bin/egrep						Cx,
  /bin/cp						Cx,
  /usr/bin/aide						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/aide/**						r,
  /var/lib/aide/**					rwk,
  
  profile cut /bin/cut flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cut						mr,
  }
  
  profile grep /bin/grep flags=(complain) {			# FIX ME! Вызывается именно grep?
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile egrep /bin/egrep flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/egrep						r,
    @{shell}						mr,
    /bin/grep						ix,	# Все правильно, для egrep используем с ix.
  }
  
  profile cp /bin/cp flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cp						mr,
  }
}

# Профиль модифицированного скрипта для запуска aide по cron-у.
profile aide.cron.daily /etc/cron.daily/aide {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/@{BLOCK_REAL}					r,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.daily/aide					r,
  @{shell}						mr,
  /bin/mktemp						Cx,
  /bin/cat						Cx,
  /bin/rm						Cx,
  /bin/dd						Cx,
  /bin/sed						Cx,
  /bin/grep						Cx,
#  /bin/mount						Px,	# FS ACCESS!
#  /bin/umount						Px,	# FS ACCESS!
  /bin/basename						Px,
  /usr/bin/libnotify-notify-send-users			Px,
  /usr/bin/stat						Cx,
  /usr/bin/mail						Px,
  /usr/bin/logger					Px,
  /usr/bin/aide						Px,
  /usr/bin/md5sum					Cx,
  /usr/bin/sha1sum					Cx,
  /usr/bin/sha512sum					Cx,
  /usr/sbin/gdisk					Px,
  
  # READS/WRITES ---------------------------------------
  /var/lib/aide/{,*}					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/aide.cron.??????				rw,
  owner /tmp/tmpmbr.bin					rw,
  
  profile mktemp /bin/mktemp flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mktemp						mr,
  }
  
  profile cat /bin/cat flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
  
  profile rm /bin/rm flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
  }
  
  profile dd /bin/dd flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/dd						mr,
  }
  
  profile sed /bin/sed flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
  
  profile grep /bin/grep flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile stat /usr/bin/stat flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/stat					mr,
  }
  
  profile md5sum /usr/bin/md5sum flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/md5sum					mr,
  }
  
  profile sha1sum /usr/bin/sha1sum flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/sha1sum					mr,
  }
  
  profile sha512sum /usr/bin/sha512sum flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/sha512sum					mr,
  }
}
