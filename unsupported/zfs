# FIX ME! @{pid}/@{pids} - выставить правильные.


#include <local/tunables.d/>

profile zfs /sbin/zfs flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_resource,
  
  # PSEUDO ---------------------------------------------
  /dev/zfs						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC_D}/@{pid}/mounts				r,
  @{PROC_D}/sys/fs/pipe-max-size			r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/zfs						mr,
#  /bin/mount						Px,	# FS ACCESS!
  
  # READS/WRITES ---------------------------------------
  /etc/dfs/sharetab					r,
}

profile zfs.mount /sbin/mount.zfs flags=(complain) {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /sbin/mount.zfs					mr,
}

profile zfs.zpool /sbin/zpool flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/zfs						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{SYS_D}/module/spl/parameters/spl_hostid		r,
  @{PROC_D}/@{pid}/mounts				r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/zpool						mr,
#  /bin/umount						Px,	# FS ACCESS!
  /usr/libexec/zfs/zed.d/all-syslog.sh			Px,
  
  # READS/WRITES ---------------------------------------
  /etc/dfs/sharetab					r,
  /etc/zfs/zpool.cache					rw,
}

profile zfs.zed /sbin/zed flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/zfs						rw,
  @{PROC_D}/@{pid}/mounts				r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/zed						mr,
  /usr/libexec/zfs/zed.d/all-syslog.sh			Px,
  
  # READS/WRITES ---------------------------------------
  /etc/dfs/sharetab					r,
  /etc/zfs/zed.d/{,*}					r,
  /var/lib/run/zed.{pid,state}				rwk,
}

profile zfs.zed.d /usr/libexec/zfs/zed.d/*.sh {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/zfs/zed.d/*.sh				r,
  @{shell}						mr,
  /usr/bin/logger					Px,	# sys-apps/util-linux
  
  # READS/WRITES ---------------------------------------
  /etc/zfs/zed.d/zed-functions.sh			r,
  /etc/zfs/zed.d/zed.rc					r,
}

profile zfs.zfs-zed.init.d /etc/init.d/zfs-zed flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  @{SYS_D}/fs/cgroup/openrc/zfs-zed/tasks		w,
  @{SYS_D}/fs/cgroup/unified/zfs-zed/cgroup.procs	w,
  @{SYS_D}/fs/cgroup/unified/zfs-zed/cgroup.events	r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /sbin/zpool						Px,
  /sbin/zed						Px,
  /bin/rm						Cx,	# sys-apps/coreutils
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  /bin/kmod						Px,	# sys-apps/kmod
  
  # READS/WRITES ---------------------------------------
  /							r,
  /etc/{conf,init}.d/zfs-zed				r,
  /etc/conf.d/zfs					r,
  /etc/zfs/zfs-functions				r,
  /var/lib/run/zed.pid					r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile rm /bin/rm flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
  }
  
  profile mkdir /bin/mkdir flags=(complain) {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/{openrc,unified}/zfs-zed/	w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/zfs-zed/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/zfs-zed/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}

profile zfs.zfs-import.init.d /etc/init.d/zfs-import flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  @{SYS_D}/fs/cgroup/openrc/zfs-import/tasks		w,
  @{SYS_D}/fs/cgroup/unified/zfs-import/cgroup.procs	w,
  @{SYS_D}/fs/cgroup/unified/zfs-import/cgroup.events	r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/uname						Px,	# sys-apps/coreutils
  /bin/udevadm						Px,	# sys-fs/eudev
  /bin/kmod						Px,	# sys-apps/kmod
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  /sbin/zpool						Px,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /etc/conf.d/zfs					r,
  /etc/zfs/zfs-functions				r,
  /etc/{conf,init}.d/zfs-import				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir flags=(complain) {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/{openrc,unified}/zfs-import/	w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/zfs-import/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/zfs-import/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
