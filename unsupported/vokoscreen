# BUG!
# С версии 2.5.0 начал "падать" в режиме полноэкранной записи
# при её окончании (остановки). В оконном режиме проблем нет.

#include <tunables/global>

# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="{qt_temp.*,[^.]*.{mkv,avi,gif,MKV,AVI,GIF}}"

profile vokoscreen /usr/bin/vokoscreen {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/fs-access-by-users-preset-rwk>
  #include <abstractions/fs-deny-by-pattern-internet>
  #include <abstractions/binary-helper-strict>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty						r,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/vokoscreen					mr,
  /usr/bin/ffmpeg					Px,	# FIX ME! изменен с ix, проверить.
  /usr/bin/pactl					Px,	# FIX ME! изменен с ix, проверить.
  
  # READS/WRITES ---------------------------------------
  /etc/os-release					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/vokoscreen/			rw,
  owner @{HOME}/.config/vokoscreen/**			rwk,
}
