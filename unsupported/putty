# FIX ME! @{pid}/@{pids} - выставить правильные.


#include <local/tunables.d/>

profile putty /usr/bin/putty flags=(complain) {
  #include <abstractions/base>
  #include <abstractions-user/freedesktop.org>
  #include <abstractions-user/fonts>
  #include <abstractions-user/X>
  #include <abstractions-user/gtk>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/nameservice>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
#  owner @{PROC_D}/@{pid}/loginuid			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/putty					mr,
  
  # USERS ----------------------------------------------
  owner @{USER_HOME_D}/.putty/{,**}			rw,
  owner @{USER_HOME_D}/.putty/{,**/}*			k,
}
