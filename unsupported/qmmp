#include <local/tunables.d/>

# .ogg
@{local_ext}=[oO][gG][gG]
# .mp3, .mp4
@{local_ext}+=[mM][pP][34]
# .wma
@{local_ext}+=[wW][mM][aA]
# .s3m, .stm
@{local_ext}+=[sS][3tT][mM]
# .wav
@{local_ext}+=[wW][aA][vV]
# .m3u
@{local_ext}+=[mM]3[uU]

# предустановка для abstractions/fs/access-by-user-preset-rk
@{USERS_DIR_rk}="[^.]**"
@{USERS_FILE_rk}="[^.]*.@{local_ext}"

profile qmmp /usr/bin/qmmp {
  #include <abstractions/base>
  #include <abstractions-user/freedesktop.org>
  #include <abstractions-user/fonts>
  #include <abstractions-user/audio>
  #include <abstractions-user/qt>
  #include <abstractions-user/video>
  #include <abstractions-user/X>
  #include <abstractions/nameservice>
  #include <abstractions-user/xdg-open>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions-user/fs/access-by-users-preset-rk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions-user/profile_transitions/allow-strict-web>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
#  owner @{PROC_D}/@{pid}/cmdline			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/qmmp						mr,
  
  # USERS ----------------------------------------------
  owner @{USER_HOME_D}/.qmmp/{,**}			rw,
  owner @{USER_HOME_D}/.qmmp/{,**/}*			k,
  
  owner /tmp/qmmp.sock.@{UID}				rw,
}
