#include <tunables/global>

profile opentmpfiles.tmpfiles /bin/tmpfiles {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability chown,
  capability fowner,
  capability fsetid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/tmpfiles						r,
  @{shell}						mr,
  /bin/sort						Cx,
  /bin/mkdir						Cx,
  /bin/chmod						Cx,
  /bin/chown						Cx,
  /bin/chgrp						Cx,
  
  # READS/WRITES ---------------------------------------
  /run/tmpfiles.d/{,*}					r,
  
  profile sort /bin/sort {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sort						mr,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
    
    # READS/WRITES -------------------------------------
    /run/**/						w,
  }
  
  profile chmod /bin/chmod {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/chmod						mr,
    
    # READS/WRITES -------------------------------------
    /run/**/						w,
  }
  
  profile chown /bin/chown {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/chown						mr,
    
    # READS/WRITES -------------------------------------
    /run/**/						w,
  }
  
  profile chgrp /bin/chgrp {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/chgrp						mr,
    
    # READS/WRITES -------------------------------------
    /run/**/						w,
  }
}
