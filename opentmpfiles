#include <tunables/global>

profile opentmpfiles.tmpfiles /bin/tmpfiles flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability chown,
  capability fowner,
  capability fsetid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /bin/tmpfiles						r,
  @{shell}						mr,
  /bin/sort						ix,
  /bin/mkdir						ix,
  /bin/chmod						ix,
  /bin/chown						ix,
  /bin/chgrp						ix,
  
  # READS/WRITES ---------------------------------------
  /run/**/						w,
  /run/tmpfiles.d/{,*}					r,
}
