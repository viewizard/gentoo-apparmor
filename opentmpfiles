#include <tunables/global>
profile opentmpfiles.tmpfiles /bin/tmpfiles flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability chown,
  capability fowner,
  capability fsetid,
  
  /dev/tty rw,
  /dev/pts/[0-9]* w,
  
  /bin/bash mr,
  /bin/tmpfiles r,
  /bin/sort ix,
  /bin/mkdir ix,
  /bin/chmod ix,
  /bin/chown ix,
  /bin/chgrp ix,
  
  /run/**/ w,
  /run/tmpfiles.d/{,*} r,
  
}
