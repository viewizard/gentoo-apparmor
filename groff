#include <local/tunables.d/>

profile groff /usr/bin/groff flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/groff					mr,
  /usr/bin/grotty					Px,
  /usr/bin/troff					Px,

  # READS/WRITES ---------------------------------------
  /usr/share/groff/{,**}				r,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile groff.grotty /usr/bin/grotty flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/grotty					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/groff/{,**}				r,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile groff.troff /usr/bin/troff flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/troff					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/groff/{,**}				r,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile groff.nroff /usr/bin/nroff {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/nroff					r,
  @{shell}						mr,
  /usr/bin/locale					Px,
  /usr/bin/groff					Px,
  
  # DENY INHERIT ---------------------------------------
  deny /var/cache/man/**				rw,	# man-db.man
}
