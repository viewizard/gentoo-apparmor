#include <local/tunables.d/>

profile xfce4-notifyd /usr/lib{,32,64}/xfce4/notifyd/xfce4-notifyd {
  #include <abstractions/base>
  #include <abstractions-user/freedesktop.org>
  #include <abstractions-root/freedesktop.org>			# RBAC! Должен быть отдельный профиль для root.
  #include <abstractions-user/fonts>
  #include <abstractions-root/fonts>				# RBAC! Должен быть отдельный профиль для root.
  #include <abstractions-user/gtk>
  #include <abstractions-root/gtk>				# RBAC! Должен быть отдельный профиль для root.
  #include <abstractions-user/video>
  #include <abstractions-root/video>				# RBAC! Должен быть отдельный профиль для root.
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/xfconf>
  #include <abstractions/dbus/session-bind>
  #include <abstractions-user/X>
  #include <abstractions-root/X>				# RBAC! Должен быть отдельный профиль для root.
  #include <abstractions-sudo/X-connection-strict>		# RBAC! Нужно для запуска под root-ом через sudo
  								# с подключением к X-сессии пользователя.
  #include <local/profile_blocks/xfce4-notifyd.d>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # DBUS -----------------------------------------------
  dbus receive
  	bus=session
  	path="/org/freedesktop/Notifications"
  	interface="org.freedesktop.DBus.Introspectable"
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus send
  	bus=session
  	path="/org/freedesktop/Notifications"
  	interface="org.freedesktop.Notifications"
  	peer=(name="org.freedesktop.DBus"),
  dbus receive
  	bus=session
  	path="/org/freedesktop/Notifications"
  	interface="org.freedesktop.Notifications"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/xfce4/notifyd/xfce4-notifyd		mr,
  
  # USERS ----------------------------------------------
  owner @{USER_HOME_CACHE_D}/xfce4-notifyd-theme.rc*	rw,
  owner @{ROOT_HOME_CACHE_D}/xfce4-notifyd-theme.rc*	rw,	# RBAC! Должен быть отдельный профиль для root.
  owner @{USER_HOME_CACHE_D}/xfce4/notifyd/{,**}	rw,
  owner @{ROOT_HOME_CACHE_D}/xfce4/notifyd/{,**}	rw,	# RBAC! Должен быть отдельный профиль для root.
}

profile xfce4-notifyd.xfce4-notifyd-config /usr/bin/xfce4-notifyd-config {
  #include <abstractions/base>
  #include <abstractions-user/freedesktop.org>
  #include <abstractions-user/fonts>
  #include <abstractions-user/gtk>
  #include <abstractions-user/video>
  #include <abstractions-user/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/xfconf>
  #include <abstractions/dbus/notifications>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4-notifyd-config				mr,
  
  # USERS ----------------------------------------------
  owner @{USER_HOME_CACHE_D}/xfce4/notifyd/{,**}	rw,
  owner @{USER_HOME_D}/.local/share/gvfs-metadata/root{,-@{TMP8}.log} r,	# gnome-base/gvfs
}
