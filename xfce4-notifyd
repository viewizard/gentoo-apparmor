#include <local/tunables.d/>

profile xfce4-notifyd /usr/lib{,32,64}/xfce4/notifyd/xfce4-notifyd {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/xfconf>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/X_sudo>				# RBAC! Нужно для запуска запущенным под root-ом
  								# dbus-daemon, чтобы сделал вывод в сессию пользователя.
  								# Временно делаем одним профилем.
  #include <local/profile_blocks/xfce4-notifyd.d>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # DBUS -----------------------------------------------
  dbus receive
  	bus=session
  	path="/org/freedesktop/Notifications"
  	interface="org.freedesktop.DBus.Introspectable"
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus send
  	bus=session
  	path="/org/freedesktop/Notifications"
  	interface="org.freedesktop.Notifications"
  	peer=(name="org.freedesktop.DBus"),
  dbus receive
  	bus=session
  	path="/org/freedesktop/Notifications"
  	interface="org.freedesktop.Notifications"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/xfce4/notifyd/xfce4-notifyd		mr,
  
  # USERS ----------------------------------------------
  owner @{HOME_CACHE_D}/xfce4-notifyd-theme.rc*		rw,
  owner @{HOME_CACHE_D}/xfce4/notifyd/{,**}		rw,
}

profile xfce4-notifyd.xfce4-notifyd-config /usr/bin/xfce4-notifyd-config {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/xfconf>
  #include <abstractions/dbus/notifications>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4-notifyd-config				mr,
  
  # USERS ----------------------------------------------
  owner @{HOME_CACHE_D}/xfce4/notifyd/{,**}		rw,
  owner @{HOME_D}/.local/share/gvfs-metadata/root{,-@{TMP8}.log} r,	# gnome-base/gvfs
}
