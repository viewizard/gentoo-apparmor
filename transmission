#include <local/tunables.d/>

profile transmission /usr/bin/transmission-gtk {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/notifications>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/unix/gvfsd-network>
  #include <abstractions/unix/gvfsd-trash>
  #include <abstractions/fs/access-by-pattern-internet>
  #include <abstractions/profile_transitions/users-mime-related>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/com/transmissionbt/transmission_*"
  	interface="org.gtk.{Actions,Application}"
  	peer=(name="com.transmissionbt.transmission_*",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/com/transmissionbt/transmission_*"
  	interface="org.gtk.{Actions,Application}"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC_D}/@{pid}/fd/					r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  @{PROC_D}/@{pid}/mounts				r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  @{PROC_D}/sys/kernel/random/uuid			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/transmission-gtk				mr,
  /usr/bin/canberra-gtk-play				Px,	# media-libs/libcanberra
  
  # READS/WRITES ---------------------------------------
  /etc/ssl/openssl.cnf					r,	# dev-libs/openssl
  
  # USERS ----------------------------------------------
  owner @{HOME_CACHE_D}/transmission/{,**}		rw,
  owner @{HOME_D}/.config/transmission/{,**}		rw,
  owner @{HOME_D}/.local/share/Trash/{info,files}/**	rw,
  owner @{HOME_D}/.local/share/gvfs-metadata/home{,-@{TMP8}.log} r,	# gnome-base/gvfs
}
