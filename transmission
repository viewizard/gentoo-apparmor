#include <tunables/global>
profile transmission /usr/bin/transmission-* {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/gtk>
  #include <abstractions/qt>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/user-download>
  #include <abstractions/user-upload>
  #include <abstractions/nameservice>
  #include <abstractions/executable-binary-helper>
  
  /dev/tty[0-9]* w,
  owner @{PROC}/@{pid}/fd/ r,
  @{PROC}/sys/kernel/random/uuid r,
  
  /usr/bin/transmission-* rm,
  /usr/bin/canberra-gtk-play ixr,
  
  /etc/ssl/openssl.cnf r,
  
  owner @{HOME_CACHE}/transmission/ rw,
  owner @{HOME_CACHE}/transmission/** rw,
  owner @{HOME}/.config/transmission/ rw,
  owner @{HOME}/.config/transmission/** rw,
  
}
