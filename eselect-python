#include <tunables/global>
profile eselect-python.python-wrapper /usr/bin/python-wrapper flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  /usr/bin/python-wrapper mr,
  /bin/bash Cx -> shell,
  
  /etc/env.d/python/config r,
  /etc/profile.env r,
  /etc/portage/** r,
  /usr/portage/** r,
  /usr/local/portage/** r,
  /usr/share/portage/** r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash mr,
    /bin/uname ix,
    
  }
  
}
