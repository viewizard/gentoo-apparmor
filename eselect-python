#include <tunables/global>

profile eselect-python.python-wrapper /usr/bin/python-wrapper {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/python-wrapper				mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/env.d/python/config				r,
  /etc/profile.env					r,
  /{etc,usr,usr/local,usr/share}/portage/{,**}		r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
  }
}
