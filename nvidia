#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"

profile nvidia-settings /{usr,opt}/bin/nvidia-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/user-tmp>
  #include <abstractions/program-work-with-disk-rwk>
  #include <abstractions/nameservice>
  
  /{usr,opt}/bin/nvidia-settings r,
  /bin/bash Cx -> shell,
  
  /usr/share/nvidia/{,**} r,
  
  /etc/conf.d/gpm r,
  owner /tmp/.* m,
  
  owner @{HOME}/.nvidia-settings-rc rw,
  
  # Noisy
  deny @{HOMEDIRS}/* w,
  deny @{HOMEDIRS}/*/ w,
  
  
  profile shell {
    #include <abstractions/base>
    
    capability sys_ptrace,
    
    /dev/tty rw,
    @{PROC} r,
    owner @{PROC}/cmdline r,
    @{PROC}/uptime r,
    @{PROC}/sys/kernel/pid_max r,
    @{PROC}/@{pid}/stat r,
    @{PROC}/@{pid}/status r,
  
    /bin/bash r,
    /bin/ps ix,
    /usr/bin/Xorg ix,
    /usr/bin/pkg-config ix,
    
    /usr/share/pkgconfig/ r,
    
  }

}


profile nvidia-modprobe /{usr,opt}/bin/nvidia-modprobe flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nvidia>
  
}


profile nvidia-smi /opt/bin/nvidia-smi {
  #include <abstractions/base>
  #include <abstractions/nvidia>
  
  capability sys_admin,
  
  @{PROC}/driver/nvidia/params r,
  
  /dev/nvidiactl rw,
  /dev/nvidia[0-9]* rw,
  
}
