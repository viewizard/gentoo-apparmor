#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"

profile nvidia-settings /{usr,opt}/bin/nvidia-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/user-tmp>
  #include <abstractions/program-work-with-disk-rwk>
  #include <abstractions/nameservice>
  #include <abstractions/dbus-session>
  
  /dev/tty[0-9]* w,
  @{PROC}/@{pid}/fd/ r,
  
  /{usr,opt}/bin/nvidia-settings mr,
  /bin/bash Cx -> shell,
  
  /usr/share/nvidia/{,**} r,
  
  /etc/conf.d/gpm r,
  
  owner @{HOME}/.nvidia-settings-rc rw,
  
  
  profile shell {
    #include <abstractions/base>
    
    /dev/tty rw,
    owner @{PROC}/cmdline r,
  
    /bin/bash mr,
    /bin/ps Px,
    /usr/bin/Xorg ix,
    /usr/bin/pkg-config ix,
    
    /usr/share/pkgconfig/ r,
    
  }

}


profile nvidia-modprobe /{usr,opt}/bin/nvidia-modprobe {
  #include <abstractions/base>
  #include <abstractions/nvidia>
  
  capability sys_admin,
  
  @{PROC}/sys/kernel/modprobe r,
  
  /{usr,opt}/bin/nvidia-modprobe mr,
  /bin/kmod Px,
  
}


profile nvidia-smi /opt/bin/nvidia-smi {
  #include <abstractions/base>
  #include <abstractions/nvidia>
  
  capability sys_admin,
  
  /dev/nvidiactl rw,
  /dev/nvidia[0-9]* rw,
  @{PROC}/driver/nvidia/params r,
  
  /opt/bin/nvidia-smi m,
  
}
