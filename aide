#include <tunables/global>

profile aide /usr/bin/aide {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/aide						mr,
  
  # READS/WRITES ---------------------------------------
  /{,**}						r,
  /var/lib/aide/**					rwk,
}

profile aide.aideinit /usr/sbin/aideinit {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /usr/sbin/aideinit					r,
  /bin/cut						ix,
  /bin/grep						ix,
  /bin/egrep						ixr,
  /bin/cp						ix,
  /usr/bin/aide						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/aide/**						r,
  /var/lib/aide/**					rwk,
}
