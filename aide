#include <tunables/global>
profile aide /usr/bin/aide flags=(complain) {
  #include <abstractions/base>
  
  /dev/pts/[0-9]* rw,
  
  / r,
  /** r,
  
  /var/lib/aide/** rwk,
  
}


profile aide.aideinit /usr/sbin/aideinit flags=(complain) {
  #include <abstractions/base>
  
  /dev/tty rw,
  /dev/pts/[0-9]* rw,
  
  /bin/bash r,
  /usr/sbin/aideinit r,
  /bin/cut ix,
  /bin/grep ix,
  /bin/egrep ixr,
  /bin/cp ix,
  /usr/bin/aide Px,
  
  /etc/aide/** r,
  /var/lib/aide/** rwk,
  
}
