#include <tunables/global>

profile psmisc.killall /usr/bin/killall {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # SIGNAL ---------------------------------------------
  signal (send),						# Все правильно, с опцией "-s, --signal" должны
  								# иметь возможность передать любой сигнал любому
  								# процессу, не только SIGTERM.
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/						r,
  @{PROC}/@{pid}/{stat,status,cmdline}			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/killall					mr,
}

profile psmisc.fuser /bin/fuser {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability sys_admin,
  capability kill,
  capability mknod,
  capability dac_override,
  capability syslog,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term, kill),
  
  # NETWORK --------------------------------------------
  network inet dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/console						rw,
  @{PROC}/						r,
  @{PROC}/swaps						r,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/@{pid}/{mounts,mountinfo,stat}		r,
  @{PROC}/@{pid}/net/unix				r,
  @{PROC}/fs/nfs/exports				r,
  
  # EXECUTABLES ----------------------------------------
  /bin/fuser						mr,
}
