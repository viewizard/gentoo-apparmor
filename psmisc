#include <tunables/global>
profile psmisc.killall /usr/bin/killall flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability sys_ptrace,
  
  @{PROC}/ r,
  @{PROC}/@{pid}/stat r,
  @{PROC}/@{pid}/status r,
  @{PROC}/@{pid}/cmdline r,
  
  /usr/bin/killall r,
  
}
