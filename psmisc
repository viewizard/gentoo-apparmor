#include <local/tunables.d/>

profile psmisc.killall /usr/bin/killall {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability kill,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # SIGNAL ---------------------------------------------
  signal (send),						# Все правильно, с опцией "-s, --signal" должны
  								# иметь возможность передать любой сигнал любому
  								# процессу, не только SIGTERM.
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC_D}/						r,
  @{PROC_D}/@{pids}/stat				r,
  audit @{PROC_D}/@{pid}/status				r,	# FIX ME! @{pid}/@{pids} audit 18.10.2017
  @{PROC_D}/@{pids}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/killall					mr,
}

profile psmisc.fuser /bin/fuser {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability sys_admin,
  capability kill,
  capability mknod,
  capability dac_override,
  capability dac_read_search,
  capability syslog,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term, kill),
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/console						rw,
  @{PROC_D}/						r,
  @{PROC_D}/swaps					r,
  @{PROC_D}/@{pids}/fd/					r,
  @{PROC_D}/@{pids}/maps				r,
  @{PROC_D}/@{pids}/stat				r,
  owner @{PROC_D}/@{pid}/mounts				r,
  owner @{PROC_D}/@{pid}/mountinfo			r,
  owner @{PROC_D}/@{pid}/net/unix			r,
  @{PROC_D}/fs/nfs/exports				r,
  
  # EXECUTABLES ----------------------------------------
  /bin/fuser						mr,
}
