# BUG!
# Важно! app-arch/xarchiver-0.5.4 при отмене распаковки, убивает
# родительские процессы (вместо дочерних).

# BUG!
# Важно! app-arch/xarchiver-0.5.4.8 порт на GTK3, отображение
# распаковки постоянно меняет размер в соотв. с выводом имени
# извлекаемого файла, из-за чего "скачет" кнопка отмены распаковки.
# По какой-то причине не тянет русский язык (хотя файлы po есть).
# Вероятно, при портировании на GTK3 что-то не доделали.

# Используем app-arch/engrampa, произведены корректировки в:
# thunar_root, abstractions/binary-helper-strict_root

#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk,rwkl)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]**"

profile xarchiver /usr/bin/xarchiver {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dconf>
  #include <abstractions/program-work-with-disk-rwkl-strict>
  #include <abstractions/xdg-open>
  #include <abstractions/binary-helper-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /sys/devices/system/cpu/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xarchiver					mr,
  @{shell}						Cx,
  /bin/mv						ix,
  /bin/rm						ix,
  /bin/cp						ix,
  /bin/dd						ix,
  /bin/cpio						ix,
  /usr/@{CHOST}/binutils-bin/*/ar			ix,
  /opt/rar/rar						Cx,
  /bin/bzip2						ix,
  /bin/gzip						ix,
  /usr/bin/xz						ix,
  /bin/tar						ix,
  /usr/bin/zip						ix,
  /usr/bin/unzip					ix,
  /usr/bin/7za						ix,
  /usr/lib{,32,64}/p7zip/7za				ix,
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/xarchiver/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/xarchiver_*_socket				rw,
  owner /tmp/xa-*/{,**}					rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/program-work-with-disk-rwkl-strict>
    
    # PSEUDO ---------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/bzip2						ix,
    /bin/gzip						ix,
    /usr/bin/xz						ix,
    /bin/gunzip						ix,
  }
  
  profile rar /opt/rar/rar {
    #include <abstractions/base>
    #include <abstractions/program-work-with-disk-rwkl-strict>
    
    # EXECUTABLES --------------------------------------
    /opt/rar/rar					mr,
    
    # NOISY --------------------------------------------
    deny /etc/						r,
    deny /usr/{,local/}lib{,32,64}/			r,
  }
}

profile xarchiver_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X_sudo>
  #include <abstractions/nameservice>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dconf>
  #include <abstractions/program-work-with-disk-rwkl-strict>
  #include <abstractions/xdg-open_root>
  #include <abstractions/binary-helper-strict_root>
  #include <abstractions/fs-access-by-pattern-systemusers>
  
  # CAPABILITIES ---------------------------------------
  capability chown,
  capability fowner,
  capability fsetid,
  capability kill,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /sys/devices/system/cpu/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xarchiver					mr,
  @{shell}						Cx,
  /bin/mv						ix,
  /bin/rm						ix,
  /bin/cp						ix,
  /bin/dd						ix,
  /bin/cpio						ixr,
  /usr/@{CHOST}/binutils-bin/*/ar			ix,
  /opt/rar/rar						Cx,
  /bin/bzip2						ix,
  /bin/gzip						ix,
  /usr/bin/xz						ix,
  /bin/tar						ix,
  /usr/bin/zip						ix,
  /usr/bin/unzip					ix,
  /usr/bin/7za						ix,
  /usr/lib{,32,64}/p7zip/7za				ix,
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/xarchiver/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/xarchiver_*_socket				rw,
  /tmp/xa-*/{,**}					rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/program-work-with-disk-rwkl-strict>
    #include <abstractions/fs-access-by-pattern-systemusers>
    
    # PSEUDO ---------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/bzip2						ix,
    /bin/gzip						ix,
    /usr/bin/xz						ix,
    /bin/gunzip						ix,
  }
  
  profile rar /opt/rar/rar {
    #include <abstractions/base>
    #include <abstractions/program-work-with-disk-rwkl-strict>
    #include <abstractions/fs-access-by-pattern-systemusers>
    
    # EXECUTABLES --------------------------------------
    /opt/rar/rar					mr,
    
    # NOISY --------------------------------------------
    deny /etc/						r,
    deny /usr/{,local/}lib{,32,64}/			r,
  }
}

profile xarchiver_tap /usr/libexec/thunar-archive-plugin/xarchiver.tap {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/thunar-archive-plugin/xarchiver.tap	r,
  @{shell}						mr,
  /usr/bin/xarchiver					Px,
}

profile xarchiver_tap_root {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/thunar-archive-plugin/xarchiver.tap	r,
  @{shell}						mr,
  /usr/bin/xarchiver					Px -> xarchiver_root,
}
