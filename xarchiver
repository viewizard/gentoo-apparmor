#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"
@{PROG_FOLDERS}="{@{HOME},/mnt/,/media/}"

profile xarchiver /usr/bin/xarchiver {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/user-systemwide-files>
  #include <abstractions/program-work-with-disk-rwk>


  /dev/tty rw,
  /sys/devices/system/cpu/ r,

  /usr/bin/xarchiver r,
  
  /bin/bash ix,
  /bin/rm ix,
  /bin/cp ix,
  /opt/rar/rar Cx,
  /bin/bzip2 ix,
  /bin/gzip ix,
  /usr/bin/xz ix,
  /bin/tar ix,
  /bin/gunzip ix,
  /usr/bin/zip ix,
  /usr/bin/unzip ix,
  /usr/bin/7za ixr,
  /usr/lib64/p7zip/7za ix,
  
  profile rar /opt/rar/rar {
    #include <abstractions/base>
    #include <abstractions/user-systemwide-files>
    #include <abstractions/program-work-with-disk-rwk>
  
    /opt/rar/rar r,
    
    # Noisy
    deny /etc/ r,
    deny /usr/lib64/ r,
    deny /usr/local/lib64/ r,
  }
  
}
