#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk,rwkl)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"
@{PROG_FOLDERS}="{@{HOME},/mnt/,/media/,@{HOME}/.gvfs/}"

profile xarchiver /usr/bin/xarchiver {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/user-systemwide-files>
  #include <abstractions/user-tmp>
  #include <abstractions/program-work-with-disk-rwkl>
  #include <abstractions/xdg-open>


  capability dac_override,
  capability dac_read_search,
  capability chown,
  capability fowner,
  
  /dev/tty rw,
  /sys/devices/system/cpu/ r,

  /usr/bin/xarchiver rm,
  
  /bin/bash ix,
  /bin/mv ix,
  /bin/rm ix,
  /bin/cp ix,
  /bin/dd ix,
  /bin/cpio ixr,
  /usr/x86_64-pc-linux-gnu/binutils-bin/*/ar ix,
  
  /opt/rar/rar Cx,
  /bin/bzip2 ix,
  /bin/gzip ix,
  /usr/bin/xz ix,
  /bin/tar ix,
  /bin/gunzip ix,
  /usr/bin/zip ix,
  /usr/bin/unzip ix,
  /usr/bin/7za ixr,
  /usr/lib64/p7zip/7za ix,
  
  /tmp/** rw,
  
  profile rar /opt/rar/rar {
    #include <abstractions/base>
    #include <abstractions/user-systemwide-files>
    #include <abstractions/program-work-with-disk-rwkl>
  
    /opt/rar/rar r,
    
    # Noisy
    deny /etc/ r,
    deny /usr/lib64/ r,
    deny /usr/local/lib64/ r,
  }
  
}


profile xarchiver.tap /usr/libexec/thunar-archive-plugin/xarchiver.tap flags=(complain) {
  #include <abstractions/base>
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  
  /bin/bash r,
  /usr/libexec/thunar-archive-plugin/xarchiver.tap r,
  /usr/bin/xarchiver Px,
  
}
