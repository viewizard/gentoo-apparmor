#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk,rwkl)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]**"

profile xarchiver /usr/bin/xarchiver {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/program-work-with-disk-rwkl-strict>
  #include <abstractions/xdg-open>
  #include <abstractions/executable-binary-helper>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  capability chown,
  capability fowner,
  capability fsetid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  /sys/devices/system/cpu/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xarchiver					mr,
  /bin/bash						ix,	# FIX ME! почему он в основном профиле с ix?
  /bin/mv						ix,
  /bin/rm						ix,
  /bin/cp						ix,
  /bin/dd						ix,
  /bin/cpio						ixr,
  /usr/@{CHOST}/binutils-bin/*/ar			ix,
  /opt/rar/rar						Cx,
  /bin/bzip2						ix,
  /bin/gzip						ix,
  /usr/bin/xz						ix,
  /bin/tar						ix,
  /bin/gunzip						ixr,
  /usr/bin/zip						ix,
  /usr/bin/unzip					ix,
  /usr/bin/7za						ixr,
  /usr/lib{,32,64}/p7zip/7za				ix,
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/xarchiver/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/xarchiver_*_socket				rw,
  owner /tmp/xa-*/{,**}					rw,
  
  profile rar /opt/rar/rar {
    #include <abstractions/base>
    #include <abstractions/program-work-with-disk-rwkl-strict>
    
    # EXECUTABLES --------------------------------------
    /opt/rar/rar					mr,
    
    # NOISY --------------------------------------------
    deny /etc/						r,
    deny /usr/{,local/}lib{,32,64}/			r,
  }
}

profile xarchiver_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/program-work-with-disk-rwkl-strict>
  #include <abstractions/xdg-open_root>
  #include <abstractions/executable-binary-helper_root>
  #include <abstractions/user-systemwide-files>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  capability chown,
  capability fowner,
  capability fsetid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  /sys/devices/system/cpu/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xarchiver					mr,
  /bin/bash						ix,	# FIX ME! почему он в основном профиле с ix?
  /bin/mv						ix,
  /bin/rm						ix,
  /bin/cp						ix,
  /bin/dd						ix,
  /bin/cpio						ixr,
  /usr/@{CHOST}/binutils-bin/*/ar			ix,
  /opt/rar/rar						Cx,
  /bin/bzip2						ix,
  /bin/gzip						ix,
  /usr/bin/xz						ix,
  /bin/tar						ix,
  /bin/gunzip						ixr,
  /usr/bin/zip						ix,
  /usr/bin/unzip					ix,
  /usr/bin/7za						ixr,
  /usr/lib{,32,64}/p7zip/7za				ix,
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/xarchiver/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/xarchiver_*_socket				rw,
  /tmp/xa-*/{,**}					rw,
  
  profile rar /opt/rar/rar {
    #include <abstractions/base>
    #include <abstractions/program-work-with-disk-rwkl-strict>
    #include <abstractions/user-systemwide-files>
    
    # EXECUTABLES --------------------------------------
    /opt/rar/rar					mr,
    
    # NOISY --------------------------------------------
    deny /etc/						r,
    deny /usr/{,local/}lib{,32,64}/			r,
  }
}

profile xarchiver_tap /usr/libexec/thunar-archive-plugin/xarchiver.tap {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/thunar-archive-plugin/xarchiver.tap	r,
  /bin/bash						mr,
  /usr/bin/xarchiver					Px,
}

profile xarchiver_tap_root {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/thunar-archive-plugin/xarchiver.tap	r,
  /bin/bash						mr,
  /usr/bin/xarchiver					Px -> xarchiver_root,
}
