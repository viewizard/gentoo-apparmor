#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk,rwkl)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]**"

profile xarchiver /usr/bin/xarchiver {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/program-work-with-disk-rwkl>
  #include <abstractions/xdg-open>
  #include <abstractions/executable-binary-helper>
  
  capability dac_override,
  capability dac_read_search,
  capability chown,
  capability fowner,
  capability fsetid,
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  /sys/devices/system/cpu/ r,
  
  /usr/bin/xarchiver mr,
  /bin/bash ix,
  /bin/mv ix,
  /bin/rm ix,
  /bin/cp ix,
  /bin/dd ix,
  /bin/cpio ixr,
  /usr/@{CHOST}/binutils-bin/*/ar ix,
  /opt/rar/rar Cx,
  /bin/bzip2 ix,
  /bin/gzip ix,
  /usr/bin/xz ix,
  /bin/tar ix,
  /bin/gunzip ixr,
  /usr/bin/zip ix,
  /usr/bin/unzip ix,
  /usr/bin/7za ixr,
  /usr/lib{,32,64}/p7zip/7za ix,
  
  /etc/fstab r,
  owner @{HOME}/.config/xarchiver/{,**} rw,
  
  owner /tmp/xarchiver_*_socket rw,
  owner /tmp/xa-*/{,**} rw,
  
  
  profile rar /opt/rar/rar {
    #include <abstractions/base>
    #include <abstractions/program-work-with-disk-rwkl>
    
    /opt/rar/rar mr,
    
    # Noisy
    deny /etc/ r,
    deny /usr/lib{,32,64}/ r,
    deny /usr/local/lib{,32,64}/ r,
  }
  
}


profile xarchiver_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/program-work-with-disk-rwkl>
  #include <abstractions/xdg-open_root>
  #include <abstractions/executable-binary-helper_root>
  #include <abstractions/user-systemwide-files>
  
  capability dac_override,
  capability dac_read_search,
  capability chown,
  capability fowner,
  capability fsetid,
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  /sys/devices/system/cpu/ r,
  
  /usr/bin/xarchiver mr,
  /bin/bash ix,
  /bin/mv ix,
  /bin/rm ix,
  /bin/cp ix,
  /bin/dd ix,
  /bin/cpio ixr,
  /usr/@{CHOST}/binutils-bin/*/ar ix,
  /opt/rar/rar Cx,
  /bin/bzip2 ix,
  /bin/gzip ix,
  /usr/bin/xz ix,
  /bin/tar ix,
  /bin/gunzip ixr,
  /usr/bin/zip ix,
  /usr/bin/unzip ix,
  /usr/bin/7za ixr,
  /usr/lib{,32,64}/p7zip/7za ix,
  
  /etc/fstab r,
  owner @{HOME}/.config/xarchiver/{,**} rw,
  
  owner /tmp/xarchiver_*_socket rw,
  /tmp/xa-*/{,**} rw,
  
  
  profile rar /opt/rar/rar {
    #include <abstractions/base>
    #include <abstractions/program-work-with-disk-rwkl>
    #include <abstractions/user-systemwide-files>
    
    /opt/rar/rar mr,
    
    # Noisy
    deny /etc/ r,
    deny /usr/lib{,32,64}/ r,
    deny /usr/local/lib{,32,64}/ r,
  }
  
}


profile xarchiver_tap /usr/libexec/thunar-archive-plugin/xarchiver.tap {
  #include <abstractions/base>
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  
  /bin/bash mr,
  /usr/libexec/thunar-archive-plugin/xarchiver.tap r,
  /usr/bin/xarchiver Px,
  
}


profile xarchiver_tap_root {
  #include <abstractions/base>
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  
  /bin/bash mr,
  /usr/libexec/thunar-archive-plugin/xarchiver.tap r,
  /usr/bin/xarchiver Px -> xarchiver_root,
  
}
