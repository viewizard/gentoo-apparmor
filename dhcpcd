#include <tunables/global>

profile dhcpcd /sbin/dhcpcd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/consoles>
  
  # CAPABILITIES ---------------------------------------
  capability net_raw,
  capability net_admin,
  capability sys_admin,
  capability sys_module,
  capability sys_tty_config,
  capability net_bind_service,
  
  # PSEUDO ---------------------------------------------
  @{PROC}/sys/net/ipv4/conf/*/promote_secondaries	rwk,
  
  # EXECUTABLES ----------------------------------------
  /sbin/dhcpcd						mr,
  @{shell}						mr,
  /bin/touch						ix,
  /bin/mkdir						ix,
  /bin/rm						ix,
  /bin/sed						ix,
  /bin/cat						ix,
  /bin/chmod						ix,
  /bin/hostname						ix,
  /usr/bin/cmp						ix,
  /lib{,32,64}/dhcpcd/dhcpcd-run-hooks			ix,
  
  # READS/WRITES ---------------------------------------
  /etc/resolv.conf{,.sv}				rwl,
  /etc/ntp.conf{,.sv}					rwl,
  /etc/dhcpcd.conf					r,
  /etc/dhcpcd.duid					rw,
  /run/dhcpcd/						rw,
  /run/dhcpcd-*.pid					rwkl,
  /run/dhcpcd/resolv.conf{.*.dhcp,/,/*}			rw,
  /run/dhcpcd/ntp.conf/					rw,
  /run/dhcpcd/ntp.conf.*.{dhcp,ipv4ll}			rwk,
  /var/lib/dhcpcd/dhcpcd-*.{cache,info,info.old}	rw,
  /var/lib/dhcpcd/dhcpcd-*.lease			rwk,
}
