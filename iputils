#include <tunables/global>

profile iputils.ping /bin/ping {
  #include <abstractions/base>
  #include <abstractions/consoles>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability net_raw,
  capability setuid,
  
  # NETWORK --------------------------------------------
  network inet raw,
  network inet6 raw,
  network inet dgram,
  network inet6 dgram,
  
  # EXECUTABLES ----------------------------------------
  /bin/ping						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/modules.conf					r,
}
