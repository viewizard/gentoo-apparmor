#include <tunables.d/>

profile iputils.ping /bin/ping {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability net_raw,
  capability setuid,
  
  # NETWORK --------------------------------------------
  network inet raw,
  network inet6 raw,
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/ping						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/modules.conf					r,
}

profile iputils.arping /bin/arping {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability net_raw,
  capability setuid,
  
  # NETWORK --------------------------------------------
  network packet dgram,
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  
  # EXECUTABLES ----------------------------------------
  /bin/arping						mr,
}
