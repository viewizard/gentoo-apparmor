#include <tunables/global>
profile shadow.login /bin/login {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  capability dac_override,
  
  /dev/tty[0-9]* rw,
  @{PROC}/@{pid}/uid_map r,
  @{PROC}/@{pid}/loginuid rw,
  
  /bin/login r,
  
  /etc/environment r,
  /etc/shells r,
  /etc/security/limits.d/ r,
  
  /run/utmp rwk,
  
  /var/log/wtmp wk,
  /var/log/tallylog rw,
  /var/log/lastlog rwk,
  
  
###################################################
# MAC (without PAM)
###################################################

#  capability setuid,
#  capability setgid,
#  capability chown,
#  capability fowner,
#  capability fsetid,
  
#  @{PROC}/@{pid}/mountinfo r,
  
#  /bin/bash Puxr -> bash_root,
#  /usr/sbin/pmvarrun Px,
#  /usr/bin/ofl Px,
#  /bin/mount Px,
#  /bin/umount Px,
  
#  /etc/login.defs r,
#  /run/mount/utab r,

###################################################
# RBAC (with PAM)
###################################################

  @{PROC}/@{pid}/attr/current w,
  
  /bin/bash Cxr -> shell,
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    /dev/tty rw,
    
    /bin/bash r,
    /usr/bin/pmount Px,
    /usr/bin/pumount Px,
    
  }
  
  ^DEFAULT flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/authentication>
    
    capability setuid,
    capability setgid,
    capability chown,
    capability fowner,
    capability fsetid,
    
    /dev/tty[0-9]* w,
    /dev/urandom r,
    @{PROC}/@{pid}/fd/ r,
    @{PROC}/@{pid}/mountinfo r,
    
    /bin/bash Pux -> bash_default,
    /usr/sbin/pmvarrun Px,
    /usr/bin/ofl Px,
    /bin/mount Px,
    /bin/umount Px,
    
    /etc/environment r,
    
    /var/log/wtmp wk,
    /run/utmp rwk,
    
  }
  
  ^root flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/authentication>
    
    capability setuid,
    capability setgid,
    capability chown,
    capability fowner,
    capability fsetid,
    
    /dev/tty[0-9]* w,
    /dev/urandom r,
    @{PROC}/@{pid}/fd/ r,
    @{PROC}/@{pid}/mountinfo r,
    
    /bin/bash Pux -> bash_root,
    /usr/sbin/pmvarrun Px,
    /usr/bin/ofl Px,
    /bin/mount Px,
    /bin/umount Px,
    
    /etc/environment r,
    
    /var/log/wtmp wk,
    /run/utmp rwk,
    
  }
  
}

profile shadow.newgrp /usr/bin/{newgrp,sg} flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/nameservice>
  #include <abstractions/executable-binary-helper>


  capability setgid,
  capability setuid,
  
  /dev/tty rw,
  /dev/pts/[0-9]* rw,

  owner @{PROC}/@{pid}/loginuid r,
  
  /usr/bin/newgrp r,
  /bin/bash ix,
  
  /etc/gshadow r,
  /etc/shadow r,
  /etc/login.defs r,

}

profile shadow.passwd /bin/passwd flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  capability chown,
  capability fsetid,
  
  /dev/pts/[0-9]* rw,
  
  owner @{PROC}/@{pid}/loginuid r,
  
  /bin/passwd r,
  
  /etc/.pwd.lock rwk,
  /etc/nshadow rw,
  /etc/shadow rw,
  
  /run/utmp rk,
  
}

profile shadow.passwd.sh /usr/bin/passwd.sh flags=(complain) {
  #include <abstractions/base>

  capability sys_ptrace,
  
  /dev/tty rw,
  /dev/pts/[0-9]* rw,
  /sys/devices/virtual/block/**/name r,
  @{PROC}/ r,
  @{PROC}/uptime r,
  @{PROC}/cmdline r,
  @{PROC}/@{pid}/stat r,
  @{PROC}/@{pid}/status r,
  @{PROC}/@{pid}/cmdline r,
  @{PROC}/@{pid}/mountinfo r,

  /etc/terminfo/x/xterm r,
    
  /usr/bin/passwd.sh r,
  /bin/bash r,
  /usr/bin/xfce4-terminal Px,
    
  /bin/passwd Px,
  /bin/sleep ix,
  /bin/ps ix,
  /bin/basename ix,
  /usr/bin/tput ix,
  /bin/cat ix,
  /bin/mount ix,
  /bin/grep ix,
  
}

profile shadow.useradd /usr/sbin/useradd flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  capability dac_override,
  
  /dev/pts/[0-9]* rw,
  
  /usr/sbin/useradd r,
  
  /etc/.pwd.lock rwk,
  /etc/passwd* rwl,
  /etc/group* rwl,
  /etc/gshadow* rwl,
  /etc/shadow* rwl,
  /etc/default/useradd r,
  
  /var/log/lastlog rw,
  
}

profile shadow.userdel /usr/sbin/userdel flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  capability sys_ptrace,
  capability dac_override,
  
  /dev/pts/[0-9]* rw,
  @{PROC}/ r,
  @{PROC}/@{pid}/status r,
  @{PROC}/@{pid}/task/ r,
  
  /usr/sbin/userdel r,
  
  /etc/.pwd.lock rwk,
  /etc/passwd* rwl,
  /etc/group* rwl,
  /etc/gshadow* rwl,
  /etc/shadow* rwl,  
  
}

profile shadow.su /bin/su {
