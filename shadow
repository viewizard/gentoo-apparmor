}

profile shadow.groupadd /usr/sbin/groupadd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/groupadd					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/.pwd.lock					rwk,
  /etc/group{,+,-,.lock,.@{pid}}			rw,
  /etc/gshadow{,+,-,.lock,.@{pid}}			rw,
  owner link subset /etc/gshadow.lock			-> /etc/gshadow.*,
  owner link subset /etc/group.lock			-> /etc/group.*,
}

profile shadow.groupdel /usr/sbin/groupdel {
  #include <abstractions/base>
