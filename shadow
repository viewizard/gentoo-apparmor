#include <local/tunables.d/>

profile shadow.login@{p_root} /bin/login@{t_root} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <local/hats/shadow.login.d/>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  capability chown,
  capability fsetid,
  capability fowner,
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  audit @{PROC_D}/@{pid}/uid_map			r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  owner @{PROC_D}/@{pid}/loginuid			rw,
  owner @{PROC_D}/@{pid}/attr/current			w,
  audit @{PROC_D}/@{pid}/attr/exec			w,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  audit @{PROC_D}/@{pid}/attr/current			r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  audit @{PROC_D}/@{pid}/attr/prev			r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  audit @{PROC_D}/@{pid}/attr/exec			r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  
  # EXECUTABLES ----------------------------------------
  /bin/login						mr,
  @{shell}@{t_root}					Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,	# sys-libs/pam
  /etc/shells						r,	# sys-apps/baselayout
  /etc/security/limits.d/				r,	# sys-libs/pam
  /run/utmp						rwk,
  /var/log/wtmp						wk,
  /var/log/tallylog					rw,
  /var/log/lastlog					rwk,
  
  profile shell @{shell}@{t_root} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
  }
}

profile shadow.newgrp@{p_root} /usr/bin/{newgrp,sg}@{t_root} {
  #include <abstractions/base>
  #include <abstractions-root/freedesktop.org>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC_D}/@{pid}/loginuid			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/{newgrp,sg}					mr,
  @{shell}@{t_root}					Cx,
  
  # READS/WRITES ---------------------------------------
  owner /etc/gshadow					r,
  owner /etc/shadow					r,
  owner /etc/login.defs					r,
  
  profile shell @{shell}@{t_root} {
    #include <abstractions/base>
    #include <abstractions-user/profile_transitions/allow-mime-related>	# IMPROVE! После возможности блокировки адресов, портов и
    								# изменений абстракций profile_transitions - убрать.
    								# (?) Добавить локальный файл настроек, в случае необходимости.
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
  }
}

profile shadow.passwd@{p_all} /bin/passwd@{t_all} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability chown,
  capability fsetid,
  capability setgid,
  capability setuid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC_D}/@{pid}/loginuid			r,
  
  # EXECUTABLES ----------------------------------------
  /bin/passwd						mr,
  
  # READS/WRITES ---------------------------------------
  owner /etc/.pwd.lock					rwk,
  owner /etc/nshadow					rw,
  owner /etc/shadow					rw,
  /run/utmp						rk,
}

profile shadow.passwd.sh@{p_user} /usr/bin/passwd.sh@{t_user} {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/passwd.sh					r,
  @{shell}						mr,
  /bin/passwd@{t_user}					Px,
  /bin/sleep@{t_user}					Px,	# sys-apps/coreutils
  /bin/ps@{t_user}					Px,	# sys-process/procps
  /bin/basename@{t_user}				Px,	# sys-apps/coreutils
  /usr/bin/tput@{t_user}				Px,	# sys-libs/ncurses
  /usr/bin/xfce4-terminal@{t_user}			Px,	# x11-terms/xfce4-terminal
}

profile shadow.gpasswd@{p_all} /usr/bin/gpasswd@{t_all} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC_D}/@{pid}/loginuid			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gpasswd					mr,
  
  # READS/WRITES ---------------------------------------
  owner /etc/.pwd.lock					rwk,
  owner /etc/group*					rw,
  owner link subset /etc/group.lock			-> /etc/group.*,
  owner /etc/gshadow*					rw,
  owner link subset /etc/gshadow.lock			-> /etc/gshadow.*,
  owner /etc/login.defs					r,
}

profile shadow.useradd@{p_root} /usr/sbin/useradd@{t_root} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability chown,
  capability fowner,
  capability fsetid,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC_D}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/useradd					mr,
  /sbin/pam_tally2@{t_root}				Px,	# sys-libs/pam
  
  # READS/WRITES ---------------------------------------
  owner /etc/.pwd.lock					rwk,
  owner /etc/passwd*					rw,
  owner link subset /etc/passwd.lock			-> /etc/passwd.*,
  owner /etc/group*					rw,
  owner link subset /etc/group.lock			-> /etc/group.*,
  owner /etc/gshadow*					rw,
  owner link subset /etc/gshadow.lock			-> /etc/gshadow.*,
  owner /etc/shadow*					rw,
  owner link subset /etc/shadow.lock			-> /etc/shadow.*,
  /etc/default/useradd					r,
  /var/log/lastlog					rw,
  
  # READS/WRITES ---------------------------------------
  /etc/skel/{,**}					r,
  
  # USERS ----------------------------------------------
  @{USER_HOMEDIRS_D}/@{USER}/{,**}			rw,
}

profile shadow.userdel@{p_root} /usr/sbin/userdel@{t_root} flags=(attach_disconnected) {	# disconnected path name=""
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC_D}/						r,
  @{PROC_D}/@{pids}/status				r,
  @{PROC_D}/@{pids}/task/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/userdel					mr,
  
  # READS/WRITES ---------------------------------------
  owner /etc/.pwd.lock					rwk,
  owner /etc/passwd*					rw,
  owner link subset /etc/passwd.lock			-> /etc/passwd.*,
  owner /etc/group*					rw,
  owner link subset /etc/group.lock			-> /etc/group.*,
  owner /etc/gshadow*					rw,
  owner link subset /etc/gshadow.lock			-> /etc/gshadow.*,
  owner /etc/shadow*					rw,
  owner link subset /etc/shadow.lock			-> /etc/shadow.*,
  
  # USERS ----------------------------------------------
  @{USER_HOMEDIRS_D}/@{USER}/{,**}			rw,
}

