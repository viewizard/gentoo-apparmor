    #include <abstractions/authentication>
    
    capability setuid,
    capability setgid,
    
    @{PROC}/@{pid}/mountinfo r,
    
    /bin/bash Pux -> bash_root,
    /usr/sbin/pmvarrun Px,
    /usr/bin/ofl Px,
    /bin/mount Px,
    /bin/umount Px,
    /usr/bin/xauth Px,
    
    /etc/environment r,
    
  }
  
}
