#include <tunables.d/>

profile shadow.login /bin/login {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <local/hats/shadow.login.d/>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  capability chown,
  capability fsetid,
  capability fowner,
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pid}/uid_map				r,
  @{PROC}/@{pid}/loginuid				rw,
  @{PROC}/@{pid}/attr/{current,exec}			w,
  @{PROC}/@{pid}/attr/{current,prev,exec}		r,
  
  # EXECUTABLES ----------------------------------------
  /bin/login						mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,
  /etc/shells						r,
  /etc/security/limits.d/				r,
  /run/utmp						rwk,
  /var/log/wtmp						wk,
  /var/log/tallylog					rw,
  /var/log/lastlog					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
  }
}

profile shadow.newgrp /usr/bin/{newgrp,sg} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/loginuid				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/{newgrp,sg}					mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  owner /etc/gshadow					r,
  owner /etc/shadow					r,
  owner /etc/login.defs					r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/binary-helper-strict>		# IMPROVE! После возможности блокировки адресов, портов и
    								# изменений абстракций binary-helper-ов - убрать.
    								# (?) Добавить локальный файл настроек, в случае необходимости.
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
  }
}

profile shadow.passwd /bin/passwd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability chown,
  capability fsetid,
  capability setgid,
  capability setuid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/loginuid				r,
  
  # EXECUTABLES ----------------------------------------
  /bin/passwd						mr,
  
  # READS/WRITES ---------------------------------------
  owner /etc/.pwd.lock					rwk,
  owner /etc/nshadow					rw,
  owner /etc/shadow					rw,
  /run/utmp						rk,
}

profile shadow.passwd.sh /usr/bin/passwd.sh {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/passwd.sh					r,
  @{shell}						mr,
  /bin/passwd						Px,
  /bin/sleep						Px,
  /bin/ps						Px,
  /bin/basename						Px,
  /usr/bin/tput						Px,
  /usr/bin/xfce4-terminal				Px,	# XFCE4
}

profile shadow.gpasswd /usr/bin/gpasswd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/loginuid				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gpasswd					mr,
  
  # READS/WRITES ---------------------------------------
  owner /etc/.pwd.lock					rwk,
  owner /etc/group*					rw,
  owner link subset /etc/group.lock			-> /etc/group.*,
  owner /etc/gshadow*					rw,
  owner link subset /etc/gshadow.lock			-> /etc/gshadow.*,
  owner /etc/login.defs					r,
}

profile shadow.useradd /usr/sbin/useradd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability chown,
  capability fowner,
  capability fsetid,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/useradd					mr,
  /sbin/pam_tally2					Px,
  
  # READS/WRITES ---------------------------------------
  owner /etc/.pwd.lock					rwk,
  owner /etc/passwd*					rw,
  owner link subset /etc/passwd.lock			-> /etc/passwd.*,
  owner /etc/group*					rw,
  owner link subset /etc/group.lock			-> /etc/group.*,
  owner /etc/gshadow*					rw,
  owner link subset /etc/gshadow.lock			-> /etc/gshadow.*,
  owner /etc/shadow*					rw,
  owner link subset /etc/shadow.lock			-> /etc/shadow.*,
  /etc/default/useradd					r,
  /var/log/lastlog					rw,
  
  # READS/WRITES ---------------------------------------
  /etc/skel/{,**}					r,
  
  # USERS ----------------------------------------------
  @{HOMEDIRS}/**					rw,
}

profile shadow.userdel /usr/sbin/userdel flags=(attach_disconnected) {	# disconnected path name=""
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability dac_override,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/						r,
  @{PROC}/@{pid}/status					r,
  @{PROC}/@{pid}/task/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/userdel					mr,
  
  # READS/WRITES ---------------------------------------
  owner /etc/.pwd.lock					rwk,
  owner /etc/passwd*					rw,
  owner link subset /etc/passwd.lock			-> /etc/passwd.*,
  owner /etc/group*					rw,
  owner link subset /etc/group.lock			-> /etc/group.*,
  owner /etc/gshadow*					rw,
  owner link subset /etc/gshadow.lock			-> /etc/gshadow.*,
  owner /etc/shadow*					rw,
  owner link subset /etc/shadow.lock			-> /etc/shadow.*,
  
  # USERS ----------------------------------------------
  @{HOMEDIRS}/**					rw,
}

