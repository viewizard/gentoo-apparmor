#include <tunables/global>

profile shadow.login /bin/login {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  capability chown,
  capability fsetid,
  capability fowner,
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pid}/uid_map				r,
  @{PROC}/@{pid}/loginuid				rw,
  @{PROC}/@{pid}/attr/{current,exec}			w,
  @{PROC}/@{pid}/attr/{current,prev,exec}		r,
  
  # EXECUTABLES ----------------------------------------
  /bin/login						mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,
  /etc/shells						r,
  /etc/security/limits.d/				r,
  /run/utmp						rwk,
  /var/log/wtmp						wk,
  /var/log/tallylog					rw,
  /var/log/lastlog					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/authentication-pam_usb>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
  }
  
  ^DEFAULT {
    #include <abstractions/base>
    #include <abstractions/dbus-strict>
    #include <abstractions/nameservice>
    #include <abstractions/authentication>
    #include <abstractions/authentication-pam_mount>
    
    # CAPABILITIES -------------------------------------
    capability setuid,
    capability setgid,
    capability chown,
    capability fowner,
    capability fsetid,
    capability dac_read_search,					# Все правильно.
    capability dac_override,					# Все правильно.
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/urandom					r,
    @{PROC}/@{pid}/fd/					r,
    @{PROC}/sys/kernel/ngroups_max			r,
    
    # EXECUTABLES --------------------------------------
    @{shell}						Px -> shell_users,
    /usr/bin/gnome-keyring-daemon			Px,
    
    # READS/WRITES -------------------------------------
    /etc/environment					r,
    /run/utmp						rwk,
    /var/log/wtmp					wk,
  }
  
  ^root {
    #include <abstractions/base>
    #include <abstractions/dbus-strict>
    #include <abstractions/nameservice>
    #include <abstractions/authentication>
    #include <abstractions/authentication-pam_mount>
    
    # CAPABILITIES -------------------------------------
    capability setuid,
    capability setgid,
    capability chown,
    capability fowner,
    capability fsetid,
    capability dac_read_search,
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/urandom					r,
    @{PROC}/@{pid}/fd/					r,
    @{PROC}/sys/kernel/ngroups_max			r,
    
    # EXECUTABLES --------------------------------------
    @{shell}						Px -> shell_root,
    /usr/bin/gnome-keyring-daemon			Px,
    
    # READS/WRITES -------------------------------------
    /etc/environment					r,
    /run/utmp						rwk,
    /var/log/wtmp					wk,
  }
}

profile shadow.newgrp /usr/bin/{newgrp,sg} flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/nameservice>
  #include <abstractions/executable-binary-helper>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/loginuid				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/{newgrp,sg}					mr,
  @{shell}						ix,	# FIX ME! Почему он в основном профиле с ix?
  
  # READS/WRITES ---------------------------------------
  owner /etc/gshadow					r,
  owner /etc/shadow					r,
  owner /etc/login.defs					r,
}

profile shadow.passwd /bin/passwd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability chown,
  capability fsetid,
  capability setgid,
  capability setuid,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/loginuid				r,
  
  # EXECUTABLES ----------------------------------------
  /bin/passwd						mr,
  
  # READS/WRITES ---------------------------------------
  owner /etc/.pwd.lock					rwk,
  owner /etc/nshadow					rw,
  owner /etc/shadow					rw,
  /run/utmp						rk,
}

profile shadow.passwd.sh /usr/bin/passwd.sh {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/cmdline					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/passwd.sh					r,
  @{shell}						mr,
  /bin/passwd						Px,
  /bin/sleep						Px,
  /bin/ps						Px,
  /bin/basename						Px,
  /bin/cat						ix,
  /bin/mount						Px,
  /bin/grep						ix,
  /usr/bin/tput						Px,
  /usr/bin/xfce4-terminal				Px,	# XFCE4
}

profile shadow.useradd /usr/sbin/useradd flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability chown,
  capability fowner,
  capability fsetid,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/useradd					mr,
  
  # READS/WRITES ---------------------------------------
  owner /etc/.pwd.lock					rwk,
  owner /etc/passwd*					rw,
  owner link subset /etc/passwd.lock			-> /etc/passwd.*,
  owner /etc/group*					rw,
  owner link subset /etc/group.lock			-> /etc/group.*,
  owner /etc/gshadow*					rw,
  owner link subset /etc/gshadow.lock			-> /etc/gshadow.*,
  owner /etc/shadow*					rw,
  owner link subset /etc/shadow.lock			-> /etc/shadow.*,
  /etc/default/useradd					r,
  /var/log/lastlog					rw,
  
  # READS/WRITES ---------------------------------------
  /etc/skel/{,**}					r,
  
  # USERS ----------------------------------------------
  @{HOMEDIRS}/**					rw,
}

profile shadow.userdel /usr/sbin/userdel flags=(complain, attach_disconnected) {	# disconnected path name=""
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability dac_override,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/						r,
  @{PROC}/@{pid}/status					r,
  @{PROC}/@{pid}/task/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/userdel					mr,
  
  # READS/WRITES ---------------------------------------
  owner /etc/.pwd.lock					rwk,
  owner /etc/passwd*					rw,
  owner link subset /etc/passwd.lock			-> /etc/passwd.*,
  owner /etc/group*					rw,
  owner link subset /etc/group.lock			-> /etc/group.*,
  owner /etc/gshadow*					rw,
  owner link subset /etc/gshadow.lock			-> /etc/gshadow.*,
  owner /etc/shadow*					rw,
  owner link subset /etc/shadow.lock			-> /etc/shadow.*,
  
  # USERS ----------------------------------------------
  @{HOMEDIRS}/**					rw,
}

profile shadow.su /bin/su {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/loginuid				r,
  @{PROC}/@{pid}/attr/{current,exec}			w,
  @{PROC}/@{pid}/attr/{current,prev,exec}		r,
  @{PROC}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /bin/su						mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/shells						r,
  /etc/environment					r,
  /etc/security/limits.d/				r,
  /run/utmp						rk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/authentication-pam_usb>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
  }
  
  ^DEFAULT {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/authentication>
    #include <abstractions/authentication-pam_mount>
    
    # CAPABILITIES -------------------------------------
    capability setuid,
    capability setgid,
    
    # PSEUDO -------------------------------------------
    @{PROC}/@{pid}/mountinfo				r,
    
    # EXECUTABLES --------------------------------------
    @{shell}						Px -> shell_users,
    /usr/bin/xauth					Px,
    
    # READS/WRITES -------------------------------------
    /etc/environment					r,
    
    # USERS --------------------------------------------
    owner @{HOME}/.xauth*				rw,
  }
  
  ^logcheck {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/authentication>
    #include <abstractions/authentication-pam_mount>
    
    # CAPABILITIES -------------------------------------
    capability setuid,
    capability setgid,
    
    # EXECUTABLES --------------------------------------
    @{shell}						Px -> shell_logcheck,
    
    # READS/WRITES -------------------------------------
    /etc/environment					r,
  }
  
  ^root {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/authentication>
    #include <abstractions/authentication-pam_mount>
    
    # CAPABILITIES -------------------------------------
    capability setuid,
    capability setgid,
    
    # EXECUTABLES --------------------------------------
    @{shell}						Px -> shell_root,
    /usr/bin/xauth					Px,
    
    # READS/WRITES -------------------------------------
    /etc/environment					r,
    
    # USERS --------------------------------------------
    owner @{HOME}/.xauth*				rw,
  }
}
