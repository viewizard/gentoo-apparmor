#include <tunables/global>

# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="{[^.]*.{pdf,xps,PDF,XPS},qt_temp.*}"

profile masterpdfeditor /opt/master-pdf-editor-3/masterpdfeditor3 {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/cups-client>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/xdg-open>
  #include <abstractions/fs-access-by-users-preset-rwk>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /opt/master-pdf-editor-3/{,**}			mr,
  
  # READS/WRITES ---------------------------------------
  owner "@{HOME}/.config/Code Industry/"		rw,
  owner "@{HOME}/.config/Code Industry/*"		rwk,
}
