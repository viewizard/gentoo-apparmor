^DEFAULT {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <abstractions/authentication-pam_mount>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  @{PROC}/@{pid}/mountinfo				r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Px -> shell_users,
  /usr/bin/xauth					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.xauth*					rw,
}
