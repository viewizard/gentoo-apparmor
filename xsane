#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-rwk
@{USERS_DIR_rwk}="[^.]**"
@{USERS_FILE_rwk}="[^.]*.{jpg,jpeg,tif,tiff,png,pnm,ps,pdf,rgba,txt,JPG,JPEG,TIF,TIFF,PNG,PNM,PS,PDF,RGBA,TXT}"

profile xsane /usr/bin/xsane {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/bus/usb/						r,
  @{sys}/bus/						r,
  @{sys}/bus/usb/devices/				r,
  @{sys}/bus/scsi/devices/				r,
  @{sys}/class/						r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/{uevent,busnum,speed,descriptors,devnum} r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/@{USB2}/{uevent,busnum,speed,descriptors,devnum} r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/**/@{USB2}/{uevent,busnum,speed,descriptors,devnum} r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/@{USB4}/uevent r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/@{USB2}/@{USB4}/uevent r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/@{USB2}/**/@{USB4}/uevent r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/@{USB2}/**/@{USB4}/host[0-9]*/**/{vendor,model,type} r,
  deny @{sys}/devices/pci@{PCI2}/@{PCI4}/ata@{ATA1}/{,**} r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xsane					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,	# sys-fs/eudev
  /etc/sane.d/{,**}					r,
  /usr/share/sane/xsane/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.sane/{,**}				rw,
}
