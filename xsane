  /sys/bus/ r,
  /dev/bus/usb/ r,
  /sys/bus/usb/devices/ r,
  /sys/bus/scsi/devices/ r,
  /sys/class/ r,
  /sys/devices/pci**/usb*/** r,
  /sys/devices/pci**/ata*/** r,

  /usr/bin/xsane r,

  /etc/udev/udev.conf r,
  /etc/sane.d/ r,
  /etc/sane.d/** r,

  /usr/share/sane/xsane/ r,
  /usr/share/sane/xsane/** r,
  
  owner @{HOME}/.sane/ rw,
