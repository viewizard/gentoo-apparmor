#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*.{jpg,jpeg,tif,tiff,png,pnm,ps,pdf,rgba,txt,JPG,JPEG,TIF,TIFF,PNG,PNM,PS,PDF,RGBA,TXT}"

profile xsane /usr/bin/xsane flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rwk-strict>
  #include <abstractions/nameservice>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/bus/usb/						r,
  /sys/bus/						r,
  /sys/bus/usb/devices/					r,
  /sys/bus/scsi/devices/				r,
  /sys/class/						r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**		r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xsane					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /etc/sane.d/{,**}					r,
  /usr/share/sane/xsane/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.sane/{,**}				rw,
}
