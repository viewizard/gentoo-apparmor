#include <tunables/global>

profile gtk-update-icon-cache /usr/bin/gtk-update-icon-cache {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gtk-update-icon-cache			mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/icons/{,**}				r,
  /usr/share/icons/*/{,.}icon-theme.cache		w,
}
