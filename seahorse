#include <local/tunables.d/>

profile seahorse /usr/bin/seahorse {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/ssl-certs>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/gnome-keyring>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/profile_transitions/users-strict-web>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/gnome/seahorse/Application"
  	interface="org.gtk.{Actions,Application}"
  	peer=(name="org.gnome.seahorse.Application",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/org/gnome/seahorse/Application"
  	interface="org.gtk.{Actions,Application}"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  owner @{PROC}/@{pid}/mounts				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/seahorse					mr,
  /usr/bin/gpgconf					Px,	# app-crypt/gnupg
  /usr/bin/gpg{,2}					Px,	# app-crypt/gnupg
  /usr/bin/gpgsm					Px,	# app-crypt/gnupg
  
  # READS/WRITES ---------------------------------------
  /usr/share/seahorse/{,**}				r,
  /usr/share/p11-kit/modules/{,*.module}		r,
  /usr/lib{,32,64}/pkcs11/*.so				m,
  /run/user/[0-9]*/keyring/pkcs11			rw,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.gnupg/{,**}				r,
  owner @{HOME}/.ssh/{,**}				r,
  
  # TEMP -----------------------------------------------
  /tmp/seahorse-photoid-*				rw,
}
