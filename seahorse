#include <tunables/global>

profile seahorse /usr/bin/seahorse {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/ssl-certs>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/binary-helper-strict-web>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/seahorse					mr,
  /usr/bin/gpgconf					Px,
  /usr/bin/gpg2						Px,
  /usr/bin/gpgsm					Px,
  
  # READS/WRITES ---------------------------------------
  /usr/share/seahorse/{,**}				r,
  /usr/share/p11-kit/modules/{,*.module}		r,
  /usr/lib{,32,64}/pkcs11/*.so				m,
  /run/user/[0-9]*/keyring/pkcs11			rw,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.gnupg/{,**}				r,
  owner @{HOME}/.ssh/{,**}				r,
  
  # TEMP -----------------------------------------------
  /tmp/seahorse-photoid-*				rw,
}
