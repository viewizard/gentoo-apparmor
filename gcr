#include <tunables/global>

# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]*"

profile gcr-viewer /usr/bin/gcr-viewer flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/fs-access-by-users-preset-rk>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gcr-viewer					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/p11-kit/modules/{,*.module}		r,
  /usr/lib{,32,64}/pkcs11/*.so				m,
}

profile gcr-prompter /usr/libexec/gcr-prompter {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/gcr-prompter				mr,
}
