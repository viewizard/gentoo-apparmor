#include <tunables/global>

profile kbd.fgconsole /usr/bin/fgconsole flags=(complain) {	# FIX ME! 04.04.2017 flags=(complain)
								# изменять с корректировкой acpid.shell
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_tty_config,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/fgconsole					mr,
}
