profile coreutils.uniq /usr/bin/uniq {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/uniq						mr,
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/lynis.cron.*				w,	# lynis.cron.daily
  deny /tmp/rootbackup.cron.*				w,	# backup_weekly.sh.cron.weekly
  deny /tmp/dailyhomebackup.cron.*			w,	# backup_daily.sh.cron.daily
}
