#include <tunables/global>

profile coreutils.df /bin/df {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/mount{s,info}				r,
  
  # EXECUTABLES ----------------------------------------
  /bin/df						mr,
}

profile coreutils.stat /usr/bin/stat {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/stat						mr,
}

profile coreutils.date /bin/date {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/date						mr,
}

profile coreutils.uname /bin/uname flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/uname						mr,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
  deny /run/user/[0-9]*/poedit.lock			w,	# poedit
  deny /tmp/lynis.cron.*				w,	# lynis.cron.daily
  deny /tmp/chkrootkit.cron.*				w,	# chkrootkit.cron.daily
  deny /var/log/genkernel.log				w,	# genkernel-next
}

profile coreutils.tty /bin/tty {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/tty						mr,
}

profile coreutils.tr /bin/tr flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/tr						mr,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
  deny /tmp/sh-thd.*					r,	# gentoolkit.revdep-rebuild.sh
  deny /tmp/lynis.cron.*				w,	# lynis.cron.daily
  deny /tmp/chkrootkit.cron.*				w,	# chkrootkit.cron.daily
}

