#include <tunables/global>

profile coreutils.df /bin/df {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  @{PROC}/@{pid}/mount{s,info}				r,
  
  # EXECUTABLES ----------------------------------------
  /bin/df						mr,
}

profile coreutils.stat /usr/bin/stat {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/stat						mr,
}

profile coreutils.date /bin/date {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /bin/date						mr,
}

