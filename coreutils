profile coreutils.id /usr/bin/id {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/ptmx						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/id						mr,
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/lynis.cron.*				w,	# lynis.cron.daily
  deny /tmp/chkrootkit.cron.*				w,	# chkrootkit.cron.daily
  deny /var/tmp/portage/**/temp/build.log		w,	# portage.emerge
  deny /var/log/emerge-fetch.log			a,	# portage.emerge
}

profile coreutils.pinky /usr/bin/pinky {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pinky					mr,
  
  # READS/WRITES ---------------------------------------
  /run/utmp						rk,
}

