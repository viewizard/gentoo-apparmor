#include <tunables/global>

profile coreutils.df /bin/df {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/mount{s,info}				r,
  
  # EXECUTABLES ----------------------------------------
  /bin/df						mr,
}

profile coreutils.stat /usr/bin/stat {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/stat						mr,
}

profile coreutils.date /bin/date {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/date						mr,
}

profile coreutils.uname /bin/uname flags=(complain) {		# FIX ME! 04.04.2017 flags=(complain)
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/uname						mr,
  
  # TEMP -----------------------------------------------
  owner /tmp/lynis.cron.*				w,	# DELEGATION! lynis.cron.daily
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
}

