  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/tty						mr,
}

profile coreutils.tr@{p_all} /bin/tr@{t_all} flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
