profile coreutils.echo /bin/echo {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/echo						mr,
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/lynis.cron.*				w,	# lynis.cron.daily
  deny /tmp/chkrootkit.cron.*				w,	# chkrootkit.cron.daily
  deny /var/log/genkernel.log				w,	# genkernel-next
}

