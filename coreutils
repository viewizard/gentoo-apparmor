  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/tr						mr,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
  deny /tmp/@{TMP_SH}					r,	# app-portage/gentoolkit, gentoolkit.revdep-rebuild.sh
}

