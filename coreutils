  deny /tmp/@{TMP_SH}					r,	# app-portage/gentoolkit, gentoolkit.revdep-rebuild.sh
  deny /tmp/lynis.cron.@{TMP6}				w,	# app-forensics/lynis, lynis.cron.daily
  deny /tmp/chkrootkit.cron.@{TMP6}			w,	# app-forensics/chkrootkit, chkrootkit.cron.daily
