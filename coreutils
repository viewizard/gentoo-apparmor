profile coreutils.chroot@{p_root} /bin/chroot@{t_root} {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_chroot,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/chroot						mr,
  @{CHROOT_D}/@{shell}@{t_root}				Px -> shell_chroot,
}

