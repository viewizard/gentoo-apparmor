profile coreutils.uniq@{p_all} /usr/bin/uniq@{t_all} {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/uniq						mr,
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/rootbackup.cron.@{TMP6}			w,	# backup_weekly.sh.cron.weekly
  deny /tmp/dailyhomebackup.cron.@{TMP6}		w,	# backup_daily.sh.cron.daily
}

