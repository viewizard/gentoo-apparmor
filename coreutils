profile coreutils.tr /bin/tr flags=(complain) {			# FIX ME! 04.04.2017 flags=(complain)
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/tr						mr,
  
  # READS/WRITES ---------------------------------------
  /run/user/*/poedit.lock				w,	# DELEGATION! poedit
  
  # TEMP -----------------------------------------------
  owner /tmp/lynis.cron.*				w,	# DELEGATION! lynis.cron.daily
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
}

