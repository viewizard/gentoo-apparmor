#include <local/tunables.d/>

profile hd-idle /usr/sbin/hd-idle {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_rawio,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_REAL}					r,
  @{PROC_D}/diskstats					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/hd-idle					mr,
}

profile hd-idle.init.d /etc/init.d/hd-idle flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  @{SYS_D}/fs/cgroup/openrc/hd-idle/tasks		w,
  @{SYS_D}/fs/cgroup/unified/hd-idle/cgroup.procs	w,
  @{SYS_D}/fs/cgroup/unified/hd-idle/cgroup.events	r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/hd-idle					Px,
  @{shell}						Cx,
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/hd-idle				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/{openrc,unified}/hd-idle/	w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/hd-idle/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/hd-idle/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
