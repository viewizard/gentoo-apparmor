#include <tunables/global>
profile hd-idle /usr/sbin/hd-idle {
  #include <abstractions/base>
  
  capability sys_rawio,
  
  /dev/sd[a-z] r,
  @{PROC}/diskstats r,
  
  /usr/sbin/hd-idle mr,
  
}


profile hd-idle.init.d /etc/init.d/hd-idle flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  capability dac_override,
  capability dac_read_search,
  
  /usr/sbin/hd-idle Px,
  /bin/bash Cx -> shell,
  
  /etc/{conf,init}.d/hd-idle r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/openrc_shell>
    
  }
  
}
