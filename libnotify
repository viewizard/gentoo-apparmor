#include <local/tunables.d/>

profile libnotify.libnotify-notify-send /usr/bin/libnotify-notify-send {
  #include <abstractions/base>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/notifications>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/libnotify-notify-send			mr,
}

# Профиль дополнительного скрипта для отсылки уведомлений всем активным пользователям DE.
# Определяет пользователей по процессу сессии, в данном случае - "xfce4-session".
profile libnotify.libnotify-notify-send-users /usr/bin/libnotify-notify-send-users {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/libnotify-notify-send-users			r,
  @{shell}						mr,
  /bin/grep						Cx,	# sys-apps/grep
  /bin/su						Px,	# sys-apps/shadow
  /bin/tr						Px,	# sys-apps/coreutils
  /usr/bin/pgrep					Px,	# sys-process/procps
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_ptrace,
    capability dac_override,
    capability dac_read_search,
    
    # PTRACE -------------------------------------------
    ptrace (trace) peer="xfce4-session",			# xfce-base/xfce4-session
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    @{PROC_D}/@{pids}/environ				r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,	# sys-apps/grep
  }
}
