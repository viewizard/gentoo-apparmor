#include <tunables/global>

profile libnotify.libnotify-notify-send /usr/bin/libnotify-notify-send {
  #include <abstractions/base>
  #include <abstractions/dbus-session-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/libnotify-notify-send			mr,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.session.log				w,	# XFCE4, <abstractions/X>
}

# Профиль дополнительного скрипта для отсылки уведомлений всем активным пользователям DE.
# Определяет пользователей по процессу сессии, в данном случае - "xfce4-session".
profile libnotify.libnotify-notify-send-users /usr/bin/libnotify-notify-send-users {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  # PTRACE ---------------------------------------------
  ptrace (trace) peer="xfce4-session",				# XFCE4
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/environ				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/libnotify-notify-send-users			r,
  @{shell}						mr,
  /bin/grep						ix,
  /bin/su						Px,
  /usr/bin/pgrep					Px,
}
