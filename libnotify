#include <tunables/global>

profile libnotify-notify-send /usr/bin/libnotify-notify-send {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/libnotify-notify-send			mr,
}

profile libnotify-notify-send-users /usr/bin/libnotify-notify-send-users {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					w,
  @{PROC}/@{pid}/environ				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/libnotify-notify-send-users			r,
  @{shell}						mr,
  /bin/grep						ix,
  /bin/su						Px,
  /usr/bin/pgrep					Px,
}
