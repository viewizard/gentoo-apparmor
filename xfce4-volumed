#include <tunables/global>

# Важно!
# С плагином pulse (с выводом через pulseaudio) работает не корректно,
# надо устанавливать пакет xfce4-volumed-pulse.

profile xfce4-volumed /usr/bin/xfce4-volumed {
  #include <abstractions/base>
  #include <abstractions/gtk>
  #include <abstractions/X-connection-strict>
  #include <abstractions/audio-alsa>
  #include <abstractions/dbus-session-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4-volumed				mr,
  /usr/lib{,32,64}/gstreamer-[0-9]*/gst-plugin-scanner	Px,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.gstreamer-[0-9]*/{,registry.*.bin}	rw,
}
