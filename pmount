#include <tunables/global>
profile pmount /usr/bin/pmount flags=(complain) {
  #include <abstractions/base>
  
  capability setuid,
  capability setgid,
  capability dac_override,
  capability dac_read_search,
  
  /dev/tty[0-9]* w,
  /dev/sd[a-z]{,[0-9]*} r,
  /sys/class/block/ r,
  /sys/devices/virtual/block/md*/dev r,
  /sys/devices/pci**/{ata,usb}[0-9]*/**/block/sd[a-z]/{,dev} r,
  /sys/devices/pci**/usb[0-9]*/**/block/sd[a-z]/removable r,
  /sys/devices/pci**/{ata,usb}[0-9]*/**/block/sd[a-z]/sd[a-z][0-9]*/{,dev} r,
  /sys/devices/pci**/usb[0-9]*/**/block/sd[a-z]/sd[a-z][0-9]*/{size,start} r,
  @{PROC}/@{pid}/mounts r,
  
  /usr/bin/pmount r,
  /bin/mount Px,
  /sbin/cryptsetup Px,
  
  /etc/pmount.conf r,
  /etc/pmount.allow r,
  /etc/fstab r,
  
  /media/pam_usb*/{,**} rw,
  
  /run/lock/pmount__media_pam_usb* rwk,
  
}


profile pmount.pumount /usr/bin/pumount flags=(complain) {
  #include <abstractions/base>
  
  capability setuid,
  capability dac_override,
  capability dac_read_search,
  
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* w,
  @{PROC}/@{pid}/mounts r,
  
  /usr/bin/pumount r,
  /bin/umount Px,
  /sbin/cryptsetup Px,
  
  /etc/pmount.conf r,
  /etc/fstab r,
  
  /media/pam_usb*/{,**} rw,
  
}
