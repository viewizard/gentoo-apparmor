#include <tunables/global>

profile mdadm /sbin/mdadm flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_rawio,
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/{,**}						r,
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /dev/.tmp.md.*					w,
  /sys/block/						r,
  /sys/bus/pci/drivers/ahci/				r,
  /sys/devices/pci[0-9]*/**/{class,device,vendor}	r,
  /sys/devices/virtual/block/md[0-9]*/*			r,
  /sys/devices/virtual/block/md[0-9]*/md/array_state	rw,
  /sys/devices/virtual/block/md[0-9]*/md/{,component_size,metadata_version} r,
  /sys/devices/virtual/block/md[0-9]*/md/dev-@{BLOCK_REAL}/* r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/{,*/}dev r,
  @{PROC}/{devices,mdstat,partitions}			r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/mdadm						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/mdadm.conf					r,
  owner /run/mdadm.pid					rw,
  owner /run/mdadm/					rw,
  owner /run/mdadm/*					rwk,
}

profile mdadm.checkarray /usr/sbin/checkarray flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  /sys/block/						r,
  /sys/devices/virtual/block/md[0-9]*/{,**}		r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/checkarray					r,
  @{shell}						mr,
  /bin/ls						ix,
  /bin/egrep						ixr,
  /bin/grep						ix,
  /usr/bin/getopt					ix,
  
  # READS/WRITES ---------------------------------------
  /etc/default/mdadm					r,
}

profile mdadm.init.d /etc/init.d/mdadm {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/rm						ix,
  /sbin/mdadm						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/mdadm				r,
  /run/mdadm.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
}

profile mdadm.cron.weekly /etc/cron.weekly/mdadm {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.weekly/mdadm				r,
  @{shell}						mr,
  /bin/date						ix,
  /usr/sbin/checkarray					Px,
}
