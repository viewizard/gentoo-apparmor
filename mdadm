#include <local/tunables.d/>

profile mdadm /sbin/mdadm {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_rawio,
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/{,**}						r,
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /dev/.tmp.md.*					w,
  @{SYS_D}/block/					r,
  @{SYS_D}/bus/pci/drivers/ahci/			r,
  @{SYS_D}/devices/pci@{PCI2}/@{PCI4}/{class,device,vendor} r,
  @{SYS_D}/devices/pci@{PCI2}/@{PCI4}/**/{class,device,vendor} r,
  @{SYS_D}/devices/virtual/block/md[0-9]*/*		r,
  @{SYS_D}/devices/virtual/block/md[0-9]*/md/array_state rw,
  @{SYS_D}/devices/virtual/block/md[0-9]*/md/{,component_size,metadata_version} r,
  @{SYS_D}/devices/virtual/block/md[0-9]*/md/dev-@{BLOCK_REAL}/* r,
  @{SYS_D}/devices/pci@{PCI2}/@{PCI4}/{ata@{ATA1},usb@{USB1}}/**/block/@{BLOCK_REAL}/{,*/}dev r,
  @{PROC_D}/{devices,mdstat,partitions}			r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/mdadm						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/mdadm.conf					r,
  owner /run/mdadm.pid					rw,
  owner /run/mdadm/					rw,
  owner /run/mdadm/*					rwk,
}

profile mdadm.checkarray /usr/sbin/checkarray {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{SYS_D}/block/					r,
  @{SYS_D}/devices/virtual/block/md[0-9]*/{,**}		r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/checkarray					r,
  @{shell}						mr,
  /bin/ls						Cx,	# sys-apps/coreutils
  /bin/egrep						Cx,	# sys-apps/grep
  /usr/bin/getopt					Px,	# sys-apps/util-linux
  
  # READS/WRITES ---------------------------------------
  /etc/default/mdadm					r,
  
  profile ls /bin/ls {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/ls						mr,
  }
  
  profile egrep /bin/egrep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/egrep						r,
    @{shell}						mr,
    /bin/grep						ix,	# sys-apps/grep		# Все правильно, для egrep используем с ix.
  }
}

profile mdadm.init.d /etc/init.d/mdadm flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  @{SYS_D}/fs/cgroup/openrc/mdadm/tasks			w,
  @{SYS_D}/fs/cgroup/unified/mdadm/cgroup.procs		w,
  @{SYS_D}/fs/cgroup/unified/mdadm/cgroup.events	r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/rm						Cx,	# sys-apps/coreutils
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  /sbin/mdadm						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/mdadm				r,
  /run/mdadm.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_tty_config,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # READS/WRITES -------------------------------------
    /run/mdadm.pid					w,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/{openrc,unified}/mdadm/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/mdadm/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/mdadm/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}

profile mdadm.cron.weekly /etc/cron.weekly/mdadm {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.weekly/mdadm				r,
  @{shell}						mr,
  /bin/date						Cx,	# sys-apps/coreutils
  /usr/sbin/checkarray					Px,
  
  profile date /bin/date {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/date						mr,
  }
}
