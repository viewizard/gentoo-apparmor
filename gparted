#include <tunables/global>
profile gparted /usr/{bin/gparted-pkexec,sbin/gpartedbin} flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/authentication>
  #include <abstractions/nameservice>
  #include <abstractions/executable-binary-helper>
  
  capability dac_override,
  capability sys_admin,
  capability sys_rawio,
  capability setuid,
  capability setgid,
  capability chown,
  
  /dev/ r,
  /dev/tty rw,
  /dev/tty[0-9]* w,
  /dev/@{BLOCK_ALL} rwk,
  /dev/mapper/control rw,
  /sys/block/ r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]**/host*/target**/{vendor,model} r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/{,**} r,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/{,**} r,
  @{PROC}/@{pid}/fd/ r,
  @{PROC}/version r,
  @{PROC}/partitions r,
  @{PROC}/swaps r,
  @{PROC}/mdstat r,
  @{PROC}/devices r,
  @{PROC}/tty/drivers r,
  @{PROC}/@{pid}/mountinfo r,
  @{PROC}/@{pid}/stat r,
  @{PROC}/@{pid}/attr/current w,
  @{PROC}/@{pid}/attr/current w,
  
  /bin/bash mr,
  /usr/sbin/gpartedbin ixmr,
  /usr/sbin/gparted ixmr,
  /usr/bin/pkexec ix,
  /usr/bin/gparted-pkexec mr,
  /bin/udevadm ix,
  /bin/umount ix,
  /bin/ps Px,
  /bin/sed ix,
  /usr/bin/id ix,
  /bin/touch ix,
  /bin/rm ixr,
  /bin/grep ix,
  /bin/egrep ixr,
  /usr/bin/mtools ix,
  /sbin/e2image ix,
  /sbin/blkid ix,
  /sbin/dumpe2fs ix,
  /sbin/hdparm ix,
  /sbin/tune2fs ix,
  /sbin/swaplabel ix,
  /sbin/mke2fs ix,
  /sbin/dmsetup ix,
  /sbin/lvm Px,
  /usr/sbin/fsck.* ix,
  /usr/sbin/mkfs.* ix,
  /usr/sbin/mkntfs ix,
  /usr/sbin/ntfslabel ix,
  /usr/sbin/ntfsresize ix,
  /sbin/mdadm Px,
  /usr/sbin/pmvarrun ix,
  /sbin/mkswap ix,
  /usr/bin/udisks ix,
  
  /etc/fstab r,
  /etc/shells r,
  /etc/environment r,
  /etc/mke2fs.conf r,
  /etc/udev/udev.conf r,
  /etc/mtools/mtools.conf r,
  /etc/security/limits.d/ r,
  
  /run/blkid/ rw,
  /run/blkid/blkid.tab* rwl,
  /run/mount/utab* rwk,
  /run/udev/rules.d/{,*} rw,
  
  @{HOME}/.Xauthority r,
  
}
