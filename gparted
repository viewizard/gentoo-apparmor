#include <tunables/global>
profile gparted /usr/{bin,sbin}/{gpartedbin,gparted-pkexec} flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/dbus-session>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/authentication>
  #include <abstractions/nameservice>
  #include <abstractions/executable-binary-helper>
  
  capability dac_override,
  capability sys_admin,
  capability sys_rawio,
  capability setuid,
  capability setgid,
  capability sys_ptrace,
  
  /dev/ r,
  /dev/tty rw,
  /dev/tty[0-9]* w,
  /dev/sd[a-z]{,[0-9]*} rwk,
  /dev/{dm-,md,zd}[0-9]* rwk,
  /sys/block/ r,
  /sys/devices/pci**/block/sd[a-z]/{,dev,ext_range} r,
  /sys/devices/pci**/block/sd[a-z]/sd[a-z][0-9]*/{,size,start} r,
  /sys/devices/pci**/{ata,usb}[0-9]**/host*/target**/{vendor,model} r,
  /sys/devices/virtual/block/zd[0-9]*/{,dev,ext_range} r,
  /sys/devices/virtual/block/zd[0-9]*/zd[0-9]*/{,size,start} r,
  /sys/devices/virtual/block/md[0-9]*/{,ext_range} r,
  /sys/devices/virtual/block/dm-[0-9]*/ r,
  /sys/devices/virtual/block/dm-[0-9]*/dm/{name,uuid} r,
  /sys/devices/virtual/block/dm-[0-9]*/slaves/ r,
  @{PROC}/ r,
  @{PROC}/@{pid}/fd/ r,
  @{PROC}/version r,
  @{PROC}/partitions r,
  @{PROC}/swaps r,
  @{PROC}/uptime r,
  @{PROC}/mdstat r,
  @{PROC}/devices r,
  @{PROC}/tty/drivers r,
  @{PROC}/@{pid}/mountinfo r,
  @{PROC}/@{pid}/stat r,
  @{PROC}/@{pid}/status r,
  @{PROC}/sys/kernel/pid_max r,
  @{PROC}/@{pid}/attr/current w,
  
  /bin/bash r,
  /usr/sbin/gpartedbin ixr,
  /usr/sbin/gparted ixr,
  /usr/bin/pkexec ix,
  /usr/bin/gparted-pkexec r,
  /bin/udevadm ix,
  /bin/umount ix,
  /bin/ps ix,
  /bin/sed ix,
  /usr/bin/id ix,
  /bin/touch ix,
  /bin/rm ix,
  /bin/grep ix,
  /bin/egrep ixr,
  /usr/bin/mtools ix,
  /sbin/e2image ix,
  /sbin/blkid ix,
  /sbin/dumpe2fs ix,
  /sbin/hdparm ix,
  /sbin/tune2fs ix,
  /sbin/swaplabel ix,
  /sbin/mke2fs ix,
  /usr/sbin/fsck.* ix,
  /usr/sbin/mkfs.* ix,
  /usr/sbin/mkntfs ix,
  /usr/sbin/ntfslabel ix,
  /usr/sbin/ntfsresize ix,
  /sbin/mdadm ix,
  /usr/sbin/pmvarrun ix,
  /sbin/mkswap ix,
  /usr/bin/udisks ix,
  
  /etc/fstab r,
  /etc/shells r,
  /etc/environment r,
  /etc/mke2fs.conf r,
  /etc/udev/udev.conf r,
  /etc/mtools/mtools.conf r,
  /etc/security/limits.d/ r,
  /etc/mdadm.conf r,
  
  /run/blkid/ rw,
  /run/blkid/blkid.tab* rwl,
  /run/mount/utab* rwk,
  /run/udev/rules.d/{,*} rw,
  
  @{HOME}/.Xauthority r,
  
}
