#include <local/tunables.d/>

profile gparted.gparted-pkexec /usr/bin/gparted-pkexec flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gparted-pkexec				r,
  @{shell}						mr,
  /usr/bin/pkexec					Px,	# sys-auth/polkit
}

profile gparted.gpartedbin /usr/sbin/gpartedbin flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X_sudo>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/profile_transitions/root-deny-web>	# Все правильно, т.к. polkit переключит на root пользователя.
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_rawio,
  capability setuid,
  capability setgid,
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rwk,
  /sys/devices/pci@{PCI2}/@{PCI4}/{ata@{ATA1},usb@{USB1}}**/host*/target**/{vendor,model} r,
  /sys/devices/pci@{PCI2}/@{PCI4}/{ata@{ATA1},usb@{USB1}}/**/block/@{BLOCK_REAL}/{,**} r,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/{,**}	r,
  @{PROC}/swaps						r,
  @{PROC}/devices					r,
  @{PROC}/mdstat					r,
  @{PROC}/partitions					r,
  @{PROC}/version					r,
  owner @{PROC}/@{pid}/fd/				r,
  owner @{PROC}/@{pid}/mounts				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/gpartedbin					mr,
  /bin/umount						Cx,	# sys-apps/util-linux
  /bin/udevadm						Px,	# sys-fs/eudev
  /sbin/hdparm						ix,	# sys-apps/hdparm	# FIX ME! Вынести в отдельный профиль.
  /sbin/blkid						Px,	# sys-apps/util-linux
  /sbin/mdadm						Px,	# sys-fs/mdadm
  /sbin/e2image						ix,	# sys-fs/e2fsprogs	# FIX ME! Вынести в отдельный профиль.
  /sbin/lvm						Px,	# sys-fs/lvm2
  /sbin/tune2fs						ix,	# sys-fs/e2fsprogs	# FIX ME! Вынести в отдельный профиль.
  /sbin/dumpe2fs					ix,	# sys-fs/e2fsprogs	# FIX ME! Вынести в отдельный профиль.
  /sbin/dmsetup						Px,	# sys-fs/lvm2
  /sbin/mke2fs						Px,	# sys-fs/e2fsprogs
  /sbin/swaplabel					ix,	# sys-apps/util-linux	# FIX ME! Вынести в отдельный профиль.
  /sbin/mkswap						Px,	# sys-apps/util-linux
  /usr/bin/mtools					ix,	# sys-fs/mtools		# FIX ME! Вынести в отдельный профиль.
  /usr/sbin/mkfs.fat					Px,	# sys-fs/dosfstools
  /usr/sbin/fsck.fat					Px,	# sys-fs/dosfstools
  /usr/sbin/mkntfs					ix,	# sys-fs/ntfs3g		# FIX ME! Вынести в отдельный профиль.
  /usr/sbin/ntfsresize					ix,	# sys-fs/ntfs3g		# FIX ME! Вынести в отдельный профиль.
  /usr/sbin/ntfslabel					ix,	# sys-fs/ntfs3g		# FIX ME! Вынести в отдельный профиль.
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  /etc/mtools/mtools.conf				r,	# sys-fs/mtools
  /usr/share/gvfs/remote-volume-monitors/{,*.monitor}	r,	# gnome-base/gvfs
  /run/blkid/blkid.tab					r,
  
  profile umount /bin/umount flags=(complain) {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/umount						mr,
  }
}

profile gparted.gparted /usr/sbin/gparted flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/gparted					r,
  @{shell}						mr,
  /bin/ps						Px,	# sys-process/procps
  /bin/rm						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/egrep						Cx,	# sys-apps/grep
  /bin/touch						Cx,	# sys-apps/coreutils
  /bin/sed						Cx,	# sys-apps/sed
  /usr/bin/id						Px,	# sys-apps/coreutils
  /usr/sbin/gpartedbin					Px,
  
  # READS/WRITES ---------------------------------------
  /run/udev/rules.d/					r,
  
  profile rm /bin/rm flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # READS/WRITES -------------------------------------
    /run/udev/rules.d/*					w,
  }
  
  profile grep /bin/grep flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile egrep /bin/egrep flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/egrep						r,
    @{shell}						mr,
    /bin/grep						ix,	# sys-apps/grep		# Все правильно, для egrep используем с ix.
  }
  
  profile touch /bin/touch flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/touch						mr,
    
    # READS/WRITES -------------------------------------
    /run/udev/rules.d/*					w,
  }
  
  profile sed /bin/sed flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
}
