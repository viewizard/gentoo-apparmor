#include <tunables/global>

profile gparted.gparted-pkexec /usr/bin/gparted-pkexec flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gparted-pkexec				r,
  @{shell}						mr,
  /usr/bin/pkexec					Px,
}

profile gparted.gpartedbin /usr/sbin/gpartedbin flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/dbus-session>
  #include <abstractions/executable-binary-helper>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_rawio,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  /dev/@{BLOCK_ALL}					rwk,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]**/host*/target**/{vendor,model} r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/{,**} r,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/{,**}	r,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/swaps						r,
  @{PROC}/devices					r,
  @{PROC}/mdstat					r,
  @{PROC}/partitions					r,
  @{PROC}/version					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/gpartedbin					mr,
  /bin/umount						Px,
  /bin/udevadm						Px,
  /sbin/hdparm						ix,
  /sbin/blkid						Px,
  /sbin/mdadm						Px,
  /sbin/e2image						ix,
  /sbin/lvm						Px,
  /sbin/tune2fs						ix,
  /sbin/dumpe2fs					ix,
  /sbin/dmsetup						Px,
  /sbin/mke2fs						Px,
  /sbin/swaplabel					ix,
  /sbin/mkswap						Px,
  /usr/bin/mtools					ix,
  /usr/bin/udisks					ix,
  /usr/sbin/mkfs.*					ix,
  /usr/sbin/fsck.*					ix,
  /usr/sbin/mkntfs					ix,
  /usr/sbin/ntfsresize					ix,
  /usr/sbin/ntfslabel					ix,
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  /run/blkid/blkid.tab*					rwl,
  
  # USERS ----------------------------------------------
  @{HOME}/.Xauthority					r,
}

profile gparted.gparted /usr/sbin/gparted flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty rw,
  /dev/tty[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/gparted					r,
  @{shell}						mr,
  /bin/ps						Px,
  /bin/rm						ix,
  /bin/grep						ix,
  /bin/egrep						ixr,
  /bin/touch						ix,
  /bin/sed						ix,
  /usr/bin/id						ix,
  /usr/sbin/gpartedbin					Px,
  
  # READS/WRITES ---------------------------------------
  /run/udev/rules.d/{,*}				rw,
}
