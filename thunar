#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="**"
# we could copy folders, not just files
@{PROG_FILE}="**"

profile thunar /usr/bin/{Thunar,thunar} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/dbus-session>
  #include <abstractions/audio>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/program-work-with-disk-rwk>
  #include <abstractions/executable-binary-programs>
  #include <local/thunar-custom-exec>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  capability sys_resource,
  capability fowner,
  capability fsetid,
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  /sys/devices/pci[0-9]*/**/uevent			r,
  /sys/devices/virtual/block/md[0-9]*/uevent		r,
  @{PROC}/@{pid}/fd/					r,
  owner @{PROC}/@{pid}/mountinfo			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/thunar					mr,
  /bin/bash						Cx -> shell,
  /bin/env						Cx -> env,
  /bin/umount						Px,
  /usr/libexec/thunar-archive-plugin/xarchiver.tap	Px,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /usr/lib{,32,64}/thunarx-2/*.so			m,
  /usr/share/						r,
  /usr/local/share/					r,
  /usr/share/Thunar/					r,
  /usr/share/Thunar/sendto/				r,
  /usr/share/Thunar/sendto/*.desktop			r,
  /opt/*/**.png						r,
  /run/udev/data/*					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/Thunar/				rw,
  owner @{HOME}/.config/Thunar/**			rwk,
  owner @{HOME}/.config/xfce4/xfconf/xfce-perchannel-xml/thunar.xml rw,
  owner @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  
  profile shell {
    #include <abstractions/base>
    #include <local/thunar-custom-actions>
    
    # CAPABILITIES -------------------------------------
    capability dac_read_search,
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					w,
    
    # EXECUTABLES --------------------------------------
    /bin/bash						mr,
  }
  
  profile env {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					w,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/env						mr,
    /usr/bin/wine					Px,
  }
}

profile thunar_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/dbus-session>
  #include <abstractions/audio>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/program-work-with-disk-rwk>
  #include <abstractions/executable-binary-programs_root>
  #include <local/thunar_root-custom-exec>
  #include <abstractions/user-systemwide-files>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  capability sys_resource,
  capability fowner,
  capability fsetid,
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  /sys/devices/pci[0-9]*/**/uevent			r,
  /sys/devices/virtual/block/md[0-9]*/uevent		r,
  @{PROC}/@{pid}/fd/					r,
  owner @{PROC}/@{pid}/mountinfo			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/thunar					mr,
  /bin/bash						Cx -> shell,
  /bin/env						Cx -> env,
  /bin/umount						Px,
  /usr/libexec/thunar-archive-plugin/xarchiver.tap	Px -> xarchiver_tap_root,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /usr/lib{,32,64}/thunarx-2/*.so			m,
  /usr/share/						r,
  /usr/local/share/					r,
  /usr/share/Thunar/					r,
  /usr/share/Thunar/sendto/				r,
  /usr/share/Thunar/sendto/*.desktop			r,
  /opt/*/**.png						r,
  /run/udev/data/*					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/Thunar/				rw,
  owner @{HOME}/.config/Thunar/**			rwk,
  owner @{HOME}/.config/xfce4/xfconf/xfce-perchannel-xml/thunar.xml rw,
  owner @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  @{HOME}/.Xauthority					r,
  
  profile shell {
    #include <abstractions/base>
    #include <local/thunar_root-custom-actions>
    
    # CAPABILITIES -------------------------------------
    capability dac_read_search,
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    /bin/bash						mr,
  }
  
  profile env {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					w,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/env						mr,
    /usr/bin/wine					Px,
  }
}

profile thunar-settings /usr/bin/thunar-settings {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/thunar-settings				r,
  /bin/bash						mr,
  /usr/bin/dbus-send					Pxr,
}

profile thunar-ThunarBulkRename /usr/lib{,32,64}/Thunar/ThunarBulkRename {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/bash						mr,
  /usr/bin/thunar					Px,
}
