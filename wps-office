#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="{[^.],.~}*.{wps,wpt,doc,dot,rtf,txt,docx,dotx,docm,dotm,xml,mht,mhtml,html,htm,et,ett,xls,xlt,dbf,prn,csv,xlsx,xlsm,dps,dpt,ppt,pps,pot,pptx,ppsx,jpeg,jpg,tiff,tif,png,bmp,pdf,WPS,WPT,DOC,DOT,RTF,TXT,DOCX,DOTX,DOCM,DOTM,XML,MHT,MHTML,HTML,HTM,ET,ETT,XLS,XLT,DBF,PRN,CSV,XLSX,XLSM,DPS,DPT,PPT,PPS,POT,PPTX,PPSX,JPEG,JPG,TIFF,TIF,PNG,BMP,PDF}"

profile wps-office /{usr,opt}/{bin,kingsoft/wps-office/office6}/{et,wpp,wps} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/qt>
  #include <abstractions/nvidia>
  #include <abstractions/cups-client>
  #include <abstractions/user-tmp>
  #include <abstractions/X>
  #include <abstractions/xdg-open>
  #include <abstractions/program-work-with-disk-rwk>
  #include <abstractions/nameservice>
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  /dev/shm/* rwl,
  owner @{PROC}/@{pid}/auxv r,
  
  /bin/dirname ix,
  /bin/bash Cxr -> shell,
  /usr/bin/et r,
  /usr/bin/wpp r,
  /usr/bin/wps r,
  /opt/kingsoft/wps-office/office6/et ix,
  /opt/kingsoft/wps-office/office6/wpp ix,
  /opt/kingsoft/wps-office/office6/wps ix,
  
  /etc/os-release r,
  /opt/kingsoft/wps-office/office6/ r,
  /opt/kingsoft/wps-office/office6/** mrk,
  
  owner @{HOME}/.config/Kingsoft/ rw,
  owner @{HOME}/.config/Kingsoft/** rwk,
  owner @{HOME}/.config/kingsoft/ rw,
  owner @{HOME}/.config/kingsoft/** rwk,
  owner @{HOME}/.kingsoft/office6/ rw,
  owner @{HOME}/.kingsoft/office6/** rwk,
  owner @{HOME}/.local/share/data/Kingsoft/ rw,
  owner @{HOME}/.local/share/data/Kingsoft/** rwk,
  
  # Noisy
  deny /opt/kingsoft/wps-office/office6/startup/ w,
  deny /etc/xdg/kingsoft.conf w,
  
  
  profile shell {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash mr,
    /bin/uname ix,
    
  }
  
}
