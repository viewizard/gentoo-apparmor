#include <tunables/global>

# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="{[^.],.~}*.{wps,wpt,doc,dot,rtf,txt,docx,dotx,docm,dotm,xml,mht,mhtml,html,htm,et,ett,xls,xlt,dbf,prn,csv,xlsx,xlsm,dps,dpt,ppt,pps,pot,pptx,ppsx,jpeg,jpg,tiff,tif,png,bmp,pdf,WPS,WPT,DOC,DOT,RTF,TXT,DOCX,DOTX,DOCM,DOTM,XML,MHT,MHTML,HTML,HTM,ET,ETT,XLS,XLT,DBF,PRN,CSV,XLSX,XLSM,DPS,DPT,PPT,PPS,POT,PPTX,PPSX,JPEG,JPG,TIFF,TIF,PNG,BMP,PDF}"

profile wps-office /{usr,opt}/{bin,kingsoft/wps-office/office6}/{et,wpp,wps} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/cups-client>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/dbus-pattern/gconf>
  #include <abstractions/xdg-open>
  #include <abstractions/fs-access-by-users-preset-rwk>
  #include <abstractions/nameservice>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  owner /dev/shm/??????					rw,
  owner /dev/shm/sem.KCacheEngineReaderSema*		rw,
  owner /dev/shm/sem.KCacheEngineWriterSema*		rw,
  owner link subset /dev/shm/sem.KCacheEngineReaderSema* -> /dev/shm/??????,
  owner link subset /dev/shm/sem.KCacheEngineWriterSema* -> /dev/shm/??????,
  owner @{PROC}/@{pid}/auxv				r,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/{et,wpp,wps}					r,
  @{shell}						Cxmr,	# Все правильно, запуск и mmap.
  /bin/dirname						Px,
  /opt/kingsoft/wps-office/office6/{et,wpp,wps}		ix,
  
  # READS/WRITES ---------------------------------------
  /etc/os-release					r,
  /opt/kingsoft/wps-office/office6/			r,
  /opt/kingsoft/wps-office/office6/**			mrk,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/{K,k}ingsoft/			rw,
  owner @{HOME}/.config/{K,k}ingsoft/**			rwk,
  owner @{HOME}/.kingsoft/office6/			rw,
  owner @{HOME}/.kingsoft/office6/**			rwk,
  owner @{HOME}/.local/share/data/Kingsoft/		rw,
  owner @{HOME}/.local/share/data/Kingsoft/**		rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/qt_temp.*					rwk,
  owner /tmp/~wp*					rw,
  owner /tmp/~tmp*.TMP					rw,
  owner /tmp/wps-*/{,*}					rw,
  owner /tmp/renderlog					w,
  owner /tmp/qipc_systemsem_{wps,et,wpp}starupobject{,2d}* rw,
  owner /tmp/qipc_sharedmemory_{wps,et,wpp}starupobject{,2d}* rw,
  
  # NOISY ----------------------------------------------
  deny /opt/kingsoft/wps-office/office6/startup/	w,
  deny /etc/xdg/kingsoft.conf				w,
  
  # DENY INHERIT ---------------------------------------
  deny unix (send, receive) peer=(label="wps-office//shell"),	# wps-office//shell
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
    
    # DENY INHERIT -------------------------------------
    deny unix (send, receive) peer=(label="wps-office"),	# wps-office
    deny /opt/kingsoft/wps-office/office6/**		r,	# wps-office
    deny @{HOME}/.kingsoft/office6/templates/wps/**	w,	# wps-office
    deny @{HOME}/**					rw,	# wps-office
    deny /media/**					rw,	# wps-office
  }
}
