#include <local/tunables.d/>

profile lvm2.lvmetad /sbin/lvmetad {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /sbin/lvmetad						mr,
  
  # READS/WRITES ---------------------------------------
  /run/lvmetad.pid					rwk,
  /run/lvm/lvmetad.socket				rw,
}

profile lvm2.dmsetup /sbin/dmsetup {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/mapper/control					rw,
  @{PROC}/devices					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/dmsetup						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
}

profile lvm2.dmeventd /sbin/dmeventd {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_resource,
  capability sys_nice,
  capability ipc_lock,
  
  # PSEUDO ---------------------------------------------
  /dev/dm-[0-9]*					rw,	# DELEGATION! backup_daily.sh.cron.daily
  								# DELEGATION! backup_weekly.sh.cron.weekly
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/mapper/control					rw,
  /sys/bus/						r,
  /sys/class/						r,
  /sys/class/block/					r,
  /sys/devices/**/uevent				r,
  /sys/devices/virtual/bdi/[0-9]*:[0-9]*/read_ahead_kb	r,
  @{PROC}/devices					r,
  owner @{PROC}/@{pid}/mounts				r,
  owner @{PROC}/@{pid}/oom_score_adj			w,
  
  # EXECUTABLES ----------------------------------------
  /sbin/dmeventd					mr,
  /bin/umount						Cx,	# sys-apps/util-linux
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /etc/lvm/lvm.conf					r,
  /etc/lvm/lvmlocal.conf				r,
  /etc/lvm/archive/					r,
  /etc/lvm/archive/*					rwk,
  /etc/lvm/backup/					r,
  /etc/lvm/backup/*					rwk,
  /run/dmeventd.pid					rwk,
  /run/dmeventd-{client,server}				rwk,
  /run/lock/lvm/*					rwk,
  /run/udev/data/*					r,
  /run/lvm/lvmetad.socket				rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/dailyhomebackup.cron.@{TMP6}		w,	# DELEGATION! backup_daily.sh.cron.daily
  owner /tmp/rootbackup.cron.@{TMP6}			w,	# DELEGATION! backup_weekly.sh.cron.weekly
  
  profile umount /bin/umount {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/umount						mr,
  }
}

profile lvm2.lvm /sbin/lvm {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_rawio,
  capability ipc_lock,
  capability sys_nice,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  /dev/mapper/						r,
  /dev/mapper/control					rw,
  /sys/fs/						r,
  /sys/bus/						r,
  /sys/class/						r,
  /sys/class/block/					r,
  /sys/devices/pci@{PCI2}/@{PCI4}/{ata[0-9]*,usb@{USB1}}/**/block/@{BLOCK_REAL}/{,**} r,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/{,**}	r,
  /sys/devices/virtual/bdi/*/read_ahead_kb		rw,
  @{PROC}/devices					r,
  owner @{PROC}/@{pid}/fd/				r,
  owner @{PROC}/@{pid}/mounts				r,
  audit @{PROC}/@{pid}/mountinfo			r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  owner @{PROC}/@{pids}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/lvm						mr,
  /sbin/dmeventd					Px,
  /sbin/fsadm						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /etc/lvm/lvmlocal.conf				r,
  /etc/lvm/lvm.conf					r,
  /etc/lvm/archive/					rw,
  /etc/lvm/archive/*					rwk,
  link subset /etc/lvm/archive/*			-> /etc/lvm/archive/*,
  /etc/lvm/backup/					rw,
  /etc/lvm/backup/*					rwk,
  /run/udev/data/*					r,
  /run/lock/lvm/					w,
  /run/lock/lvm/*					rwk,
  /run/lvm/lvmetad.socket				rw,
  /run/dmeventd-{client,server}				rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/dailyhomebackup.cron.@{TMP6}		w,	# DELEGATION! backup_daily.sh.cron.daily
  owner /tmp/rootbackup.cron.@{TMP6}			w,	# DELEGATION! backup_weekly.sh.cron.weekly
  owner /tmp/lynis.cron.@{TMP6}				w,	# DELEGATION! lynis.cron.daily
}

profile lvm2.fsadm /sbin/fsadm {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/**/name	r,
  audit @{PROC}/@{pid}/mounts				r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  
  # EXECUTABLES ----------------------------------------
  /sbin/fsadm						r,
  @{shell}						mr,
  /bin/grep						Cx,	# sys-apps/grep
  /bin/readlink						Cx,	# sys-apps/coreutils
  /bin/date						Cx,	# sys-apps/coreutils
  /bin/mount						Cx,	# sys-apps/util-linux
  /sbin/blkid						Px,	# sys-apps/util-linux
  /sbin/tune2fs						Px,	# sys-fs/e2fsprogs
  /sbin/fsck						Px,	# sys-apps/util-linux
  /sbin/e2fsck						Px,	# sys-fs/e2fsprogs
  /sbin/resize2fs					Px,	# sys-fs/e2fsprogs
  /sbin/blockdev					Px,	# sys-apps/util-linux
  /sbin/lvm						Px,
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile readlink /bin/readlink {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/readlink					mr,
  }
  
  profile date /bin/date {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/date						mr,
  }
  
  profile mount /bin/mount {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mount						mr,
  }
}

profile lvm2.lvmetad.init.d /etc/init.d/lvmetad flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/lvmetad/tasks			w,
  /sys/fs/cgroup/unified/lvmetad/cgroup.procs		w,
  /sys/fs/cgroup/unified/lvmetad/cgroup.events		r,
  
  # EXECUTABLES ----------------------------------------
  /etc/init.d/lvm					Px,
  @{shell}						Cx,
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  /sbin/lvmetad						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/lvmetad				r,
  /run/lvm/						w,
  /run/lvmetad.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/{openrc,unified}/lvmetad/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/lvmetad/cgroup.procs		r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/lvmetad/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}

profile lvm2.lvm.init.d /etc/init.d/lvm flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/lvm/tasks			w,
  /sys/fs/cgroup/unified/lvm/cgroup.procs		w,
  /sys/fs/cgroup/unified/lvm/cgroup.events		r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/lvm						Px,
  @{shell}						Cx,
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/lvm				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/{openrc,unified}/lvm/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{PROC}/misc					r,
    @{PROC}/devices					r,
    /sys/fs/cgroup/unified/lvm/cgroup.procs		r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/lvm/				w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
