#include <tunables/global>
profile lvm2.lvmetad /sbin/lvmetad flags=(complain) {
  #include <abstractions/base>
  
  /sbin/lvmetad mr,
  
  /run/lvmetad.pid rwk,
  /run/lvm/lvmetad.socket w,
  
}


profile lvm2.dmeventd /sbin/dmeventd flags=(complain) {
  #include <abstractions/base>
  
  capability sys_admin,
  capability sys_resource,
  capability ipc_lock,
  
  /dev/mapper/control rw,
  @{PROC}/devices r,
  @{PROC}/@{pid}/mounts r,
  @{PROC}/@{pid}/oom_score_adj w,
  
  /sbin/dmeventd mr,
  
  /etc/lvm/lvm.conf r,
  /etc/udev/udev.conf r,
  
  /run/dmeventd.pid rwk,
  /run/dmeventd-{client,server} rwk,
  /run/lock/lvm/* rwk,
  
}


profile lvm2.lvm /sbin/lvm flags=(complain) {
  #include <abstractions/base>
  #include <local/lvm2-user-custom>
  
  capability sys_admin,
  capability sys_rawio,
  capability ipc_lock,
  capability sys_nice,
  
  /dev/pts/[0-9]* w,
  /dev/loop[0-9]* r,
  /dev/sd[a-z]{,[0-9]*} rw,
  /dev/{dm-,md,zd}[0-9]* rw,
  /dev/mapper/ r,
  /dev/mapper/control rw,
  /sys/bus/ r,
  /sys/class/ r,
  /sys/class/block/ r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/{sd[a-z],sr[0-9]*}/{uevent,dev,holders/} r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/sd[a-z]/sd[a-z][0-9]*/{uevent,dev,holders/} r,
  /sys/devices/virtual/block/{dm-,loop,md,zd,}[0-9]*/{uevent,dev,holders/} r,
  /sys/devices/virtual/block/zd[0-9]*/zd[0-9]*/{uevent,dev,holders/} r,
  /sys/devices/virtual/bdi/*/read_ahead_kb r,
  @{PROC}/devices r,
  @{PROC}/@{pid}/fd/ r,
  @{PROC}/@{pid}/mounts r,
  @{PROC}/@{pid}/mountinfo r,
  
  /sbin/lvm mr,
  /sbin/dmeventd Px,
  
  /etc/udev/udev.conf r,
  /etc/lvm/lvm.conf r,
  /etc/lvm/archive/ rw,
  /etc/lvm/archive/* rwkl,
  /etc/lvm/backup/ rw,
  /etc/lvm/backup/* rwkl,
  
  /run/udev/data/* r,
  /run/lock/lvm/ w,
  /run/lock/lvm/* rwk,
  /run/dmeventd-{client,server} rwk,
  
}


profile lvm2.lvmetad.init.d /etc/init.d/lvmetad flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  /etc/init.d/lvm Px,
  /bin/bash Cx -> shell,
  /sbin/lvmetad Px,
  
  /etc/init.d/lvmetad r,
  
  /run/lvm/ w,
  /run/lvmetad.pid rwk,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/openrc_shell>
    
  }
  
}


profile lvm2.lvm.init.d /etc/init.d/lvm flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  @{PROC}/misc r,
  @{PROC}/devices r,
  
  /sbin/lvm Px,
  /bin/bash Cx -> shell,
  /bin/grep ix,
  
  /etc/{conf,init}.d/lvm r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/openrc_shell>
    
  }
  
}
