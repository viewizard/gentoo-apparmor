#include <tunables/global>

profile lvm2.lvmetad /sbin/lvmetad flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /sbin/lvmetad						mr,
  
  # READS/WRITES ---------------------------------------
  /run/lvmetad.pid					rwk,
  /run/lvm/lvmetad.socket				rw,
}

profile lvm2.dmsetup /sbin/dmsetup flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/mapper/control					rw,
  @{PROC}/devices					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/dmsetup						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
}

profile lvm2.dmeventd /sbin/dmeventd flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_resource,
  capability ipc_lock,
  
  # PSEUDO ---------------------------------------------
  /dev/dm-[0-9]*					rw,	# DELEGATION! daily_backup.sh.cron.daily
  								# DELEGATION! weekly_backup.sh.cron.weekly
  								# DELEGATION! monthly_backup.sh.cron.monthly
  /dev/pts/[0-9]*					rw,
  /dev/mapper/control					rw,
  /sys/bus/						r,
  /sys/class/						r,
  /sys/class/block/					r,
  /sys/devices/**/uevent				r,
  /sys/devices/virtual/bdi/[0-9]*:[0-9]*/read_ahead_kb	r,
  @{PROC}/devices					r,
  @{PROC}/@{pid}/mounts					r,
  @{PROC}/@{pid}/oom_score_adj				w,
  
  # EXECUTABLES ----------------------------------------
  /sbin/dmeventd					mr,
  /bin/umount						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /etc/lvm/lvm.conf					r,
  /etc/lvm/lvmlocal.conf				r,
  /etc/lvm/archive/					r,
  /etc/lvm/archive/*					rwk,
  /etc/lvm/backup/					r,
  /etc/lvm/backup/*					rwk,
  /run/dmeventd.pid					rwk,
  /run/dmeventd-{client,server}				rwk,
  /run/lock/lvm/*					rwk,
  /run/udev/data/*					r,
  /run/lvm/lvmetad.socket				rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/dailyhomebackup.cron.*			w,	# DELEGATION! daily_backup.sh.cron.daily
  owner /tmp/homebackup.cron.*				w,	# DELEGATION! weekly_backup.sh.cron.weekly
  owner /tmp/rootbackup.cron.*				w,	# DELEGATION! monthly_backup.sh.cron.monthly
}

profile lvm2.lvm /sbin/lvm flags=(complain) {
  #include <abstractions/base>
  #include <local/lvm2-user-custom>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_rawio,
  capability ipc_lock,
  capability sys_nice,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					rw,
  /dev/mapper/						r,
  /dev/mapper/control					rw,
  /sys/fs/						r,
  /sys/bus/						r,
  /sys/class/						r,
  /sys/class/block/					r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/{,*/}{uevent,dev,holders/} r,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/{,*/}{uevent,dev,holders/} r,
  /sys/devices/virtual/bdi/*/read_ahead_kb		rw,
  @{PROC}/devices					r,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/@{pid}/mounts					r,
  @{PROC}/@{pid}/mountinfo				r,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/lvm						mr,
  /sbin/dmeventd					Px,
  /sbin/fsadm						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /etc/lvm/lvmlocal.conf				r,
  /etc/lvm/lvm.conf					r,
  /etc/lvm/archive/					rw,
  /etc/lvm/archive/*					rwk,
  link subset /etc/lvm/archive/*			-> /etc/lvm/archive/*,
  /etc/lvm/backup/					rw,
  /etc/lvm/backup/*					rwk,
  /run/udev/data/*					r,
  /run/lock/lvm/					w,
  /run/lock/lvm/*					rwk,
  /run/lvm/lvmetad.socket				rw,
  /run/dmeventd-{client,server}				rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/dailyhomebackup.cron.*			w,	# DELEGATION! daily_backup.sh.cron.daily
  owner /tmp/homebackup.cron.*				w,	# DELEGATION! weekly_backup.sh.cron.weekly
  owner /tmp/rootbackup.cron.*				w,	# DELEGATION! monthly_backup.sh.cron.monthly
  owner /tmp/lynis.cron.*				w,	# DELEGATION! lynis.cron.daily
}

profile lvm2.fsadm /sbin/fsadm flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/**/name	r,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/fsadm						r,
  @{shell}						mr,
  /bin/grep						ix,
  /bin/readlink						ix,
  /bin/date						ix,
  /bin/mount						Px,
  /sbin/blkid						Px,
  /sbin/tune2fs						Px,
  /sbin/fsck						Px,
  /sbin/e2fsck						Px,
  /sbin/resize2fs					Px,
  /sbin/blockdev					Px,
  /sbin/lvm						Px,
}

profile lvm2.lvmetad.init.d /etc/init.d/lvmetad {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/init.d/lvm					Px,
  @{shell}						Cx,
  /sbin/lvmetad						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/lvmetad				r,
  /run/lvm/						w,
  /run/lvmetad.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
}

profile lvm2.lvm.init.d /etc/init.d/lvm {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  @{PROC}/misc						r,
  @{PROC}/devices					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/lvm						Px,
  @{shell}						Cx,
  /bin/grep						ix,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/lvm				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
}
