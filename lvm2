#include <tunables/global>
profile lvm2.lvmetad /sbin/lvmetad flags=(complain) {
  #include <abstractions/base>
  
  /sbin/lvmetad r,
  
  /run/lvmetad.pid rwk,
  /run/lvm/lvmetad.socket w,
  
}


profile lvm2.lvm /sbin/lvm flags=(complain) {
  #include <abstractions/base>
  
  capability sys_admin,
  
  /dev/loop[0-9]* r,
  /dev/sd[a-z]{,[0-9]*} r,
  /dev/{dm-,md,zd}[0-9]* r,
  /dev/mapper/ r,
  /dev/mapper/control rw,
  /sys/bus/ r,
  /sys/class/ r,
  /sys/class/block/ r,
  /sys/devices/pci**/{ata,usb}[0-9]*/**/block/sd[a-z]/{uevent,dev,holders/} r,
  /sys/devices/pci**/{ata,usb}[0-9]*/**/block/sd[a-z]/sd[a-z][0-9]*/{uevent,dev} r,
  /sys/devices/virtual/block/{dm-,loop,md,zd,}[0-9]*/{uevent,dev} r,
  /sys/devices/virtual/block/zd[0-9]*/zd[0-9]*/{uevent,dev} r,
  @{PROC}/devices r,
  @{PROC}/@{pid}/fd/ r,
  @{PROC}/@{pid}/mounts r,
  
  /sbin/lvm r,
  
  /etc/udev/udev.conf r,
  /etc/lvm/lvm.conf r,
  
  /run/udev/data/* r,
  /run/lock/lvm/ w,
  /run/lock/lvm/P_global* rwk,
  
}


profile lvm2.lvmetad.init.d /etc/init.d/lvmetad flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  /etc/init.d/lvm Px,
  /bin/bash Cx -> shell,
  /sbin/lvmetad Px,
  
  /etc/init.d/lvmetad r,
  
  /run/lvm/ w,
  /run/lvmetad.pid rwk,
  
  
  profile shell {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /lib64/rc/sh/gendepends.sh Px,
    
  }
  
}


profile lvm2.lvm.init.d /etc/init.d/lvm {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  @{PROC}/misc r,
  @{PROC}/devices r,
  
  /sbin/lvm Px,
  /bin/bash Cx -> shell,
  /bin/grep ix,
  
  /etc/{conf,init}.d/lvm r,
  
  
  profile shell {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /lib64/rc/sh/gendepends.sh Px,
    
  }
  
}
