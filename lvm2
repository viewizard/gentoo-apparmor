#include <tunables/global>

profile lvm2.lvmetad /sbin/lvmetad flags=(complain) {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /sbin/lvmetad						mr,
  
  # READS/WRITES ---------------------------------------
  /run/lvmetad.pid					rwk,
  /run/lvm/lvmetad.socket				w,
}

profile lvm2.dmsetup /sbin/dmsetup flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/mapper/control					rw,
  @{PROC}/devices					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/dmsetup						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
}

profile lvm2.dmeventd /sbin/dmeventd flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_resource,
  capability ipc_lock,
  
  # PSEUDO ---------------------------------------------
  /dev/mapper/control					rw,
  /sys/bus/						r,
  /sys/class/						r,
  /sys/class/block/					r,
  /sys/devices/**/uevent				r,
  @{PROC}/devices					r,
  @{PROC}/@{pid}/mounts					r,
  @{PROC}/@{pid}/oom_score_adj				w,
  
  # EXECUTABLES ----------------------------------------
  /sbin/dmeventd					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/lvm/lvm.conf					r,
  /etc/udev/udev.conf					r,
  /run/dmeventd.pid					rwk,
  /run/dmeventd-{client,server}				rwk,
  /run/lock/lvm/*					rwk,
  /run/udev/data/*					r,
}

profile lvm2.lvm /sbin/lvm flags=(complain) {
  #include <abstractions/base>
  #include <local/lvm2-user-custom>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_rawio,
  capability ipc_lock,
  capability sys_nice,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  /dev/@{BLOCK_ALL}					rw,
  /dev/mapper/						r,
  /dev/mapper/control					rw,
  /sys/bus/						r,
  /sys/class/						r,
  /sys/class/block/					r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/{,*/}{uevent,dev,holders/} r,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/{,*/}{uevent,dev,holders/} r,
  /sys/devices/virtual/bdi/*/read_ahead_kb		rw,
  @{PROC}/devices					r,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/@{pid}/mounts					r,
  @{PROC}/@{pid}/mountinfo				r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/lvm						mr,
  /sbin/dmeventd					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /etc/lvm/lvmlocal.conf				r,
  /etc/lvm/lvm.conf					r,
  /etc/lvm/archive/					rw,
  /etc/lvm/archive/*					rwkl,
  /etc/lvm/backup/					rw,
  /etc/lvm/backup/*					rwkl,
  /run/udev/data/*					r,
  /run/lock/lvm/					w,
  /run/lock/lvm/*					rwk,
  /run/dmeventd-{client,server}				rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/{rootbackup,dailyhomebackup,homebackup}.cron.* w,
}

profile lvm2.lvmetad.init.d /etc/init.d/lvmetad {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # EXECUTABLES ----------------------------------------
  /etc/init.d/lvm					Px,
  /bin/bash						Cx -> shell,
  /sbin/lvmetad						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/lvmetad				r,
  /run/lvm/						w,
  /run/lvmetad.pid					rwk,
  
  profile shell {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}

profile lvm2.lvm.init.d /etc/init.d/lvm {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  @{PROC}/misc						r,
  @{PROC}/devices					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/lvm						Px,
  /bin/bash						Cx -> shell,
  /bin/grep						ix,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/lvm				r,
  
  profile shell {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}
