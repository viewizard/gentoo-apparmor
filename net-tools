#include <local/tunables.d/>

profile net-tools.iptunnel@{p_root} /sbin/iptunnel@{t_root} {
  #include <abstractions/base>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  owner @{PROC_D}/@{pid}/net/dev			r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/iptunnel					mr,
}

profile net-tools.ifconfig@{p_root} /bin/ifconfig@{t_root} {
  #include <abstractions/base>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC_D}/@{pid}/net/dev			r,
  
  # EXECUTABLES ----------------------------------------
  /bin/ifconfig						mr,
}

profile net-tools.netstat@{p_all} /bin/netstat@{t_all} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability dac_override,
  capability dac_read_search,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC_D}/						r,
  @{PROC_D}/@{pids}/fd/					r,
  @{PROC_D}/@{pids}/cmdline				r,
  @{PROC_D}/@{pid}/net/*				r,
  
  # EXECUTABLES ----------------------------------------
  /bin/netstat						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/networks						r,
}

profile net-tools.hostname@{p_all} /bin/hostname@{t_all} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/hostname						mr,
}
