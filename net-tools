#include <tunables/global>

profile net-tools.iptunnel /sbin/iptunnel flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  @{PROC}/@{pid}/net/dev				r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/iptunnel					mr,
  
}

profile net-tools.ifconfig /bin/ifconfig flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  @{PROC}/@{pid}/net/dev				r,
  
  # EXECUTABLES ----------------------------------------
  /bin/ifconfig						mr,
  
}

profile net-tools.netstat /bin/netstat flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  @{PROC}/						r,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/@{pid}/cmdline				r,
  @{PROC}/@{pid}/net/*					r,
  
  # EXECUTABLES ----------------------------------------
  /bin/netstat						mr,
  
}
