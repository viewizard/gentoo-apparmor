#include <tunables/global>

profile net-tools.iptunnel /sbin/iptunnel flags=(complain) {
  #include <abstractions/base>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  
  # PSEUDO ---------------------------------------------
  @{PROC}/@{pid}/net/dev				r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/iptunnel					mr,
}

profile net-tools.ifconfig /bin/ifconfig flags=(complain) {
  #include <abstractions/base>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/net/dev				r,
  
  # EXECUTABLES ----------------------------------------
  /bin/ifconfig						mr,
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/lynis.cron.*				w,	# lynis.cron.daily
}

profile net-tools.netstat /bin/netstat flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability sys_admin,
  capability syslog,
  capability dac_override,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/						r,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/@{pid}/cmdline				r,
  @{PROC}/@{pid}/net/*					r,
  
  # EXECUTABLES ----------------------------------------
  /bin/netstat						mr,
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/lynis.cron.*				w,	# lynis.cron.daily
  deny /tmp/chkrootkit.cron.*				w,	# chkrootkit.cron.daily
}

profile net-tools.hostname /bin/hostname flags=(complain) {	# FIX ME! 05.04.2017 flags=(complain)
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/hostname						mr,
}
