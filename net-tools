#include <tunables/global>
profile net-tools.iptunnel /sbin/iptunnel flags=(complain) {
  #include <abstractions/base>
  
  @{PROC}/@{pid}/net/dev r,
  
  /sbin/iptunnel r,
  
}


profile net-tools.ifconfig /bin/ifconfig flags=(complain) {
  #include <abstractions/base>
  
  /dev/pts/[0-9]* w,
  @{PROC}/@{pid}/net/dev r,
  
  /bin/ifconfig r,
  
}


profile net-tools.netstat /bin/netstat flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability sys_ptrace,
  
  /dev/pts/[0-9]* w,
  @{PROC}/ r,
  @{PROC}/@{pid}/fd/ r,
  @{PROC}/@{pid}/cmdline r,
  @{PROC}/@{pid}/net/{tcp,udp} r,
  
  /bin/netstat r,
  
}
