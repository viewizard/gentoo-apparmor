#include <tunables/global>

profile alsa-utils.aplay /usr/bin/aplay {
  #include <abstractions/base>
  #include <abstractions/audio>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/aplay					mr,
  
  # TEMP -----------------------------------------------
  owner /tmp/pulse-*/{,*}				rw,	# pulseaudio
}

profile alsa-utils.alsactl /usr/sbin/alsactl {
  #include <abstractions/base>
  #include <abstractions/audio>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /sys/devices/pci[0-9]**/subsystem_{device,vendor}	r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/alsactl					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/pulse/client.conf				r,
  /usr/lib{,32,64}/alsa-lib/{,**}			r,
}
