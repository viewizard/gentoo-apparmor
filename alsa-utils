#include <local/tunables.d/>

profile alsa-utils.aplay /usr/bin/aplay {
  #include <abstractions/base>
  #include <abstractions/audio>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/aplay					mr,
  
  # TEMP -----------------------------------------------
  audit owner /tmp/pulse-*/{,*}				rw,	# media-sound/pulseaudio	# FIX ME! audit 25.11.2017
}

profile alsa-utils.alsactl /usr/sbin/alsactl {
  #include <abstractions/base>
  #include <abstractions/audio>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /sys/devices/pci@{PCI2}/@{PCI4}/subsystem_{device,vendor} r,
  /sys/devices/pci@{PCI2}/**/@{PCI4}/subsystem_{device,vendor} r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/alsactl					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/pulse/client.conf				r,	# media-sound/pulseaudio
  /usr/lib{,32,64}/alsa-lib/{,**}			r,
}
