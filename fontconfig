#include <local/tunables.d/>

profile fontconfig.fc-list /usr/bin/fc-list {
  #include <abstractions/base>
  #include <abstractions/fonts>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/fc-list					mr,
  
  # DENY INHERIT ---------------------------------------
  deny /usr/share/pyfa/{,**}				r,	# pyfa
}
