profile xfce4-sensors /usr/bin/xfce4-sensors {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice-local>

  /sys/class/i2c-adapter/ r,
  /sys/devices/pci**/i2c-*/name r,
  /sys/class/hwmon/ r,
  /sys/devices/platform/coretemp.*/hwmon/hwmon*/ r,
  /sys/devices/platform/coretemp.*/hwmon/hwmon*/* r,
  /sys/devices/platform/*/ r,
  /sys/devices/platform/*/* r,
  /sys/module/acpi/parameters/acpica_version r,
  /sys/class/power_supply/ r,
  /sys/class/thermal/ r,

  /usr/bin/xfce4-sensors r,
  /etc/sensors3.conf r,
  /etc/sensors.d/ r,
  
}
