#include <tunables/global>

profile gconf /usr/libexec/gconfd-2 flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/gconfd-2					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/gconf/{,**}					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/gconf/{,**}			rw,
}
