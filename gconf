#include <tunables/global>
profile gconf /usr/libexec/gconfd-2 flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  /usr/libexec/gconfd-2 mr,
  
  /etc/gconf/{,**} r,
  
  owner @{HOME}/.config/gconf/{,**} rw,
  
}
