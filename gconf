#include <tunables/global>

profile gconf.gconfd-2 /usr/libexec/gconfd-2 {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/session-bind>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/gnome/GConf/Server"
  	interface="org.gnome.GConf.Server"
  	peer=(name="org.freedesktop.DBus"),
  dbus receive
  	bus=session
  	path="/org/gnome/GConf/Server"
  	interface="org.gnome.GConf.Server"
  	peer=(name=":[0-9]*[0-9]*"),
  dbus receive
  	bus=session
  	path="/org/gnome/GConf/Database/[0-9]*"
  	interface="org.gnome.GConf.Database"
  	peer=(name=":[0-9]*[0-9]*"),
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/gconfd-2					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/gconf/{,**}					r,
  /etc/gconf/gconf.xml.*/.testing.writeability		w,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/gconf/{,**}			rw,
}

profile gconf.gsettings-data-convert /usr/bin/gsettings-data-convert {
  #include <abstractions/base>
  #include <abstractions/dbus/session-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gsettings-data-convert			mr,
  
  # READS/WRITES ---------------------------------------
  /etc/gconf/{,**}					r,
  /usr/share/GConf/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/gconf/{,**}			r,
  owner @{HOME}/.local/share/gsettings-data-convert*	rw,
}

profile gconf.gconftool-2 /usr/bin/gconftool-2 {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gsettings-data-convert			mr,
}
