#include <local/tunables.d/>

profile at-spi2-core.at-spi-bus-launcher /usr/libexec/at-spi-bus-launcher {
  #include <abstractions/base>
  #include <abstractions/dconf>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/session-bind>
  #include <abstractions/X-connection-strict>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term) peer="dbus.dbus-daemon",
  
  # DBUS -----------------------------------------------
  dbus receive
  	bus=session
  	path="/org/a11y/bus"
  	interface="org.a11y.Bus"
  	member=GetAddress
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/at-spi-bus-launcher			mr,
  /usr/bin/dbus-daemon					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/at-spi2/accessibility.conf			r,
  /usr/share/glib-[0-9]*/schemas/gschemas.compiled	r,
}

profile at-spi2-core.at-spi2-registryd /usr/libexec/at-spi2-registryd {
  #include <abstractions/base>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/accessibility-bind>
  #include <abstractions/X-connection-strict>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=accessibility
  	path="/org/a11y/atspi/accessible/root"
  	interface="org.freedesktop.DBus.Properties"
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus send
  	bus=accessibility
  	path="/org/a11y/atspi/registry"
  	interface="org.a11y.atspi.Registry"
  	peer=(name="org.freedesktop.DBus"),
  dbus receive
  	bus=accessibility
  	path="/org/a11y/atspi/**"
  	interface="org.a11y.atspi.*"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/at-spi2-registryd			mr,
}
