#include <tunables/global>

profile gcc-config /usr/bin/gcc-config {
  #include <abstractions/base>
  #include <abstractions/ncurses>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gcc-config					r,
  @{shell}						mr,
  /bin/mv						Cx,
  /bin/cp						Cx,
  /bin/rm						Cx,
  /bin/ln						Cx,
  /bin/tr						Px,
  /bin/cat						Cx,
  /bin/sed						Cx,
  /bin/touch						Cx,
  /bin/sort						Cx,
  /bin/egrep						Cx,
  /usr/bin/find						Cx,
  /usr/bin/cmp						Cx,
  /usr/bin/gawk						Cx,
  /usr/bin/tac						Cx,
  /usr/bin/python-wrapper				Px,
  /lib{,32,64}/rc/bin/eval_ecolors			Px,
  /lib{,32,64}/rc/bin/ebegin				Px,
  /lib{,32,64}/rc/bin/ewarn				Px,
  /lib{,32,64}/rc/bin/eend				Px,
  /lib{,32,64}/rc/bin/eerror				Px,
  @{PYTHON_EXEC_WRAPPER}				Cx -> portageq,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /lib{,32,64}/						r,
  /etc/env.d/						r,
  /etc/env.d/**						rw,
  /etc/ld.so.conf.d/*					rw,
  /usr/lib{,32,64}/gcc/@{CHOST}/*/libgcc.a		rw,
  /usr/@{CHOST}/gcc-bin/*/{,**}				r,
  
  # TEMP -----------------------------------------------
  owner /tmp/sh-thd.*					rw,
  owner /tmp/Code::Blocks-*				w,	# DELEGATION! codeblocks
  
  profile mv /bin/mv {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/mv						mr,
    
    # READS/WRITES -------------------------------------
    /etc/env.d/*					rw,
    /lib{,32,64}/*					rw,
    /usr/bin/*						rw,
  }
  
  profile cp /bin/cp {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cp						mr,
    
    # READS/WRITES -------------------------------------
    /etc/env.d/gcc/*					rw,
    /lib{,32,64}/*					w,
    /usr/bin/*						w,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # READS/WRITES -------------------------------------
    /etc/env.d/**					w,
    /lib{,32,64}/*					w,
    /usr/bin/gcc-[0-9]*					w,
    /usr/bin/@{CHOST}-gcc-[0-9]*			w,
  }
  
  profile ln /bin/ln {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/ln						mr,
    
    # READS/WRITES -------------------------------------
    /etc/env.d/gcc/**					w,
    link subset /lib{,32,64}/*				-> /usr/lib{,32,64}/gcc/@{CHOST}/**,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
  
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # READS/WRITES -------------------------------------
    /etc/env.d/*					w,
    
    # TEMP ---------------------------------------------
    owner /tmp/sh-thd.*					rw,
  }
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
    
    # READS/WRITES -------------------------------------
    /etc/env.d/gcc/**					rw,
    
    # TEMP ---------------------------------------------
    owner /tmp/sed*					rw,
  }
  
  profile touch /bin/touch {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/touch						mr,
    
    # READS/WRITES -------------------------------------
    /lib{,32,64}/*					w,
    /usr/bin/*						w,
  }
  
  profile sort /bin/sort {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sort						mr,
  }
  
  profile egrep /bin/egrep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/egrep						r,
    @{shell}						mr,
    /bin/grep						ix,	# Все правильно, для egrep используем с ix.
    
    # READS/WRITES -------------------------------------
    /etc/env.d/gcc/*					r,
  }
  
  profile find /usr/bin/find {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/find					mr,
    
    # READS/WRITES -------------------------------------
    /							r,
  }
  
  profile cmp /usr/bin/cmp {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/cmp					mr,
    
    # READS/WRITES -------------------------------------
    /etc/env.d/*					r,
  }
  
  profile gawk /usr/bin/gawk {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gawk					mr,
    
    # READS/WRITES -------------------------------------
    /etc/env.d/*					w,
    /etc/env.d/gcc/**					r,
    
    # TEMP ---------------------------------------------
    owner /tmp/Code::Blocks-*				w,	# DELEGATION! codeblocks
  }
  
  profile tac /usr/bin/tac {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/tac					mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/tac*					rw,
  }
  
  profile portageq {
    #include <abstractions/base>
    #include <abstractions/python>
    #include <abstractions/python-exec>
    #include <abstractions/nameservice>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/portageq				Px,
    @{PYTHON_EXEC}/env-update				Px,
    
    # TEMP ---------------------------------------------
    owner /tmp/Code::Blocks-*				w,	# DELEGATION! codeblocks
  }
}
