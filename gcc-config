@{GCC}={c++,cpp,g++,gcc,gcc-ar,gcc-nm,gcc-ranlib,gcov,gcov-dump,gcov-tool,cc}

#include <local/tunables.d/>

profile gcc-config@{p_all} /usr/bin/gcc-config@{t_all} flags=(complain) {	# FIX ME! complain 17.12.2017, проверить на обновлении версий GCC.
  #include <abstractions/base>
  #include <abstractions/ncurses>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gcc-config					r,
  @{shell}						mr,
  /bin/mv@{t_all}					Cx,	# sys-apps/coreutils
  /bin/cp@{t_all}					Cx,	# sys-apps/coreutils
  /bin/rm@{t_all}					Cx,	# sys-apps/coreutils
  /bin/ln@{t_all}					Cx,	# sys-apps/coreutils
  /bin/tr@{t_all}					Px,	# sys-apps/coreutils
  /bin/cat@{t_all}					Cx,	# sys-apps/coreutils
  /bin/sed@{t_all}					Cx,	# sys-apps/sed
  /bin/touch@{t_all}					Cx,	# sys-apps/coreutils
  /bin/sort@{t_all}					Cx,	# sys-apps/coreutils
  /bin/grep@{t_all}					Cx,	# sys-apps/grep
  /bin/tail@{t_all}					Cx,	# sys-apps/coreutils
  /bin/mkdir@{t_all}					Cx,	# sys-apps/coreutils
  /bin/rmdir@{t_all}					Cx,	# sys-apps/coreutils
  /bin/egrep@{t_all}					Cx,	# sys-apps/grep
  /sbin/consoletype@{t_all}				Px,	# sys-apps/gentoo-functions
  /bin/stty@{t_all}					Px,	# sys-apps/coreutils
  /usr/bin/tput@{t_all}					Px,	# sys-libs/ncurses
  /usr/bin/find@{t_all}					Cx,	# sys-apps/findutils
  /usr/bin/cmp@{t_all}					Cx,	# sys-apps/diffutils
  /usr/bin/gawk@{t_all}					Cx,	# sys-apps/gawk
  /usr/bin/tac@{t_all}					Cx,	# sys-apps/coreutils
  /lib{,32,64}/rc/bin/eval_ecolors@{t_all}		Px,	# sys-apps/openrc
  /lib{,32,64}/rc/bin/ebegin@{t_all}			Px,	# sys-apps/openrc
  /lib{,32,64}/rc/bin/ewarn@{t_all}			Px,	# sys-apps/openrc
  /lib{,32,64}/rc/bin/eend@{t_all}			Px,	# sys-apps/openrc
  /lib{,32,64}/rc/bin/eerror@{t_all}			Px,	# sys-apps/openrc
  @{PYTHON_EXEC_WRAPPER}@{t_all}			Cx,	# dev-lang/python-exec
  
  # READS/WRITES ---------------------------------------
  /							r,
  /lib{,32,64}/						r,
  /etc/env.d/						r,
  /etc/env.d/gcc/{,config-@{CHOST},@{CHOST}-[0-9]*}	r,
  /etc/env.d/gcc/config-@{CHOST}			w,
  /etc/env.d/[0-9]*gcc-@{CHOST}.tmp			w,
  /etc/ld.so.conf.d/[0-9]*gcc-@{CHOST}.conf		w,
  /usr/lib{,32,64}/gcc/@{CHOST}/[0-9]*/libgcc.a		rw,
  /usr/@{CHOST}/gcc-bin/[0-9]*/{,**}			r,
  
  # TEMP -----------------------------------------------
  owner /tmp/@{TMP_SH}					rw,	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  owner /tmp/Code::Blocks-@{USER}			w,	# DELEGATION! codeblocks
  
  profile mv /bin/mv@{t_all} flags=(complain) {			# FIX ME! complain 17.12.2017, проверить на обновлении версий GCC.
    #include <abstractions/base>
    
