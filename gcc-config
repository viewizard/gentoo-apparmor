    /usr/bin/.gcc.config.@{GCC}				rw,
    /usr/bin/.gcc.config.@{CHOST}-@{GCC}		rw,
    /usr/bin/@{GCC}					w,
    /usr/bin/@{CHOST}-@{GCC}				w,
  }
  
  profile cp /bin/cp@{t_all} flags=(complain) {			# FIX ME! complain 17.12.2017, проверить на обновлении версий GCC.
