#include <local/tunables.d/>

profile xdg-user-dirs.xdg-user-dirs-update /usr/bin/xdg-user-dirs-update {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xdg-user-dirs-update				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/user-dirs.{conf,defaults}			r,
  
  # USERS ----------------------------------------------
  owner @{HOME_D}/.config/user-dirs.dirs		r,
}
