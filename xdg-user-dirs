#include <tunables/global>

profile xdg-user-dirs.xdg-user-dirs-update /usr/bin/xdg-user-dirs-update flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xdg-user-dirs-update				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/user-dirs.{conf,defaults}			r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/user-dirs.dirs			r,
  owner @{HOME}/.session.log				w,	# XFCE4, <abstractions/X>
}
