#include <tunables/global>

# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]*"

profile juffed /usr/bin/juffed {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/cups-client>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  #include <abstractions/fs-access-strict>
  #include <abstractions/fs-access-by-users-preset-rwk>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/juffed					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/juffed/**					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/juff/				rw,
  owner @{HOME}/.config/juff/**				rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/qtsingleapp-juffed-*-*{,-lockfile}		rwk,
  
  # NOISY ----------------------------------------------
  deny @{HOMEDIRS}/					r,
}

profile juffed_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/cups-client>
  #include <abstractions/X_sudo>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open_root>
  #include <abstractions/fs-access-by-users-preset-rwk>
  #include <abstractions/fs-access-by-pattern-systemusers>
  
  # CAPABILITIES ---------------------------------------
  capability fowner,
  capability sys_nice,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/juffed					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/juffed/**					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/juff/				rw,
  owner @{HOME}/.config/juff/**				rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/qtsingleapp-juffed-*-*{,-lockfile}		rwk,
  
  # NOISY ----------------------------------------------
  deny @{HOMEDIRS}/					r,
}
