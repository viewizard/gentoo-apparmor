#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"

profile juffed /usr/bin/juffed {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/cups-client>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/program-work-with-disk-rwk-strict>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  #include <abstractions/systemwide-user-files>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/juffed					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/juffed/**					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/juff/				rw,
  owner @{HOME}/.config/juff/**				rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/qtsingleapp-juffed-*-*{,-lockfile}		rwk,
  /tmp/libgksu-*/.Xauthority				r,
  
  # NOISY ----------------------------------------------
  deny @{HOMEDIRS}/					r,
}

profile juffed_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/cups-client>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/program-work-with-disk-rwk-strict>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open_root>
  #include <abstractions/systemwide-root-files>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability fowner,
  capability sys_nice,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/juffed					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/juffed/**					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/juff/				rw,
  owner @{HOME}/.config/juff/**				rwk,
  @{HOME}/.Xauthority					r,
  @{HOME}/.session.log					w,	# XFCE4
  
  # TEMP -----------------------------------------------
  owner /tmp/qtsingleapp-juffed-*-*{,-lockfile}		rwk,
  /tmp/libgksu-*/.Xauthority				r,
  
  # NOISY ----------------------------------------------
  deny @{HOMEDIRS}/					r,
}
