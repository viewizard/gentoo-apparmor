#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-rwk
@{USERS_DIR_rwk}="[^.]**"
@{USERS_FILE_rwk}="[^.]*"

profile juffed /usr/bin/juffed {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/cups-client>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  #include <abstractions/fs/access-strict>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/cmdline				r,	# IMPROVE! UID=$USER(owner),root (!root - после удаления bprm_secureexec)
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/juffed					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/juffed/**					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/juff/{,**}			rw,
  owner @{HOME}/.config/juff/{,**/}*			k,
  
  # TEMP -----------------------------------------------
  owner /tmp/qtsingleapp-juffed-@{TMP4}-@{UID_HEX}	rw,
  owner /tmp/qtsingleapp-juffed-@{TMP4}-@{UID_HEX}-lockfile rwk,
  
  # NOISY ----------------------------------------------
  deny @{HOMEDIRS}/					r,
}

profile juffed_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/cups-client>
  #include <abstractions/X_sudo>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open_root>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/access-by-pattern-systemusers>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # CAPABILITIES ---------------------------------------
  capability fowner,
  capability sys_nice,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/juffed					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/juffed/**					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/juff/{,**}			rw,
  owner @{HOME}/.config/juff/{,**/}*			k,
  
  # TEMP -----------------------------------------------
  owner /tmp/qtsingleapp-juffed-@{TMP4}-@{UID_ROOT_HEX}	rw,
  owner /tmp/qtsingleapp-juffed-@{TMP4}-@{UID_ROOT_HEX}-lockfile rwk,
  
  # NOISY ----------------------------------------------
  deny @{HOMEDIRS}/					r,
}
