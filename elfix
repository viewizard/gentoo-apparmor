# Входит в системный профиль hardened gentoo.
# Поддержка PAX будет убрана со временем.
# Профиль будет удален после оф. заявления.

# Можем писать в /bin/, /sbin/, ... - очень плохо.

#include <local/tunables.d/>

profile elfix.migrate-pax /usr/sbin/migrate-pax {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/migrate-pax					mr,
  /bin/env						mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /{bin,sbin,opt,lib{,32,64}}/**			rw,
  /usr/{bin,sbin,lib{,32,64,exec},@{CHOST}}/**		rw,
  /etc/profile.env					r,
  /etc/env.d/python/config				r,
  /{etc,usr,usr/local,usr/share}/portage/{,**}		r,
  /var/db/pkg/{,**}					r,
  /var/cache/edb/{,**}					r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_read_search,
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,	# sys-apps/coreutils
  }
}

profile elfix.revdep-pax /usr/sbin/revdep-pax {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/revdep-pax					mr,
  /bin/env						mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /{bin,sbin,opt,lib{,32,64}}/**			rw,
  /usr/{bin,sbin,lib{,32,64,exec},@{CHOST}}/**		rw,
  /etc/profile.env					r,
  /etc/env.d/python/config				r,
  /{etc,usr,usr/local,usr/share}/portage/{,**}		r,
  /var/db/pkg/{,**}					r,
  /var/cache/edb/{,**}					r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,	# sys-apps/coreutils
  }
}
