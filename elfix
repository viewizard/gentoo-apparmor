#include <tunables/global>

# /usr/sbin/migrate-pax for root RBAC role only, should be used with Px->profile only
profile elfix_migrate_pax_root flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  /dev/pts/[0-9]* w,
  
  /usr/sbin/migrate-pax mr,
  /bin/env mr,
  /usr/bin/python-wrapper ix,
  /bin/bash Cx -> shell,
  
  /{bin,sbin,opt,lib{,32,64}}/** rw,
  /usr/{bin,sbin,lib{,32,64,exec},@{CHOST}}/** rw,
  
  /etc/profile.env r,
  /etc/env.d/python/config r,
  /{etc,usr,usr/local,usr/share}/portage/{,**} r,
  /var/db/pkg/{,**} r,
  /var/cache/edb/{,**} r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    capability dac_read_search,
    capability dac_override,
    
    /dev/tty rw,
    /dev/pts/[0-9]* w,
    
    /bin/bash mr,
    /bin/uname ixr,
    
  }
  
}


profile elfix_revdep_pax_root flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  /dev/pts/[0-9]* w,
  
  /bin/env mr,
  /usr/bin/python-wrapper ix,
  /usr/sbin/revdep-pax mr,
  /bin/bash Cx -> shell,
  
  /{bin,sbin,opt,lib{,32,64}}/** rw,
  /usr/{bin,sbin,lib{,32,64,exec},@{CHOST}}/** rw,
  
  /etc/profile.env r,
  /etc/env.d/python/config r,
  /{etc,usr,usr/local,usr/share}/portage/{,**} r,
  /var/db/pkg/{,**} r,
  /var/cache/edb/{,**} r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash mr,
    /bin/uname ix,
    
  }
  
}