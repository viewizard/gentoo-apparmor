  /usr/sbin/revdep-pax r,
  /bin/bash Cxr -> shell,
  
  /{bin,sbin,opt,lib,lib32,lib64}/** rw,
  /usr/{bin,sbin,lib,lib32,lib64,libexec,x86_64-pc-linux-gnu}/** rw,
  
  /etc/profile.env r,
  /etc/env.d/python/config r,
  /{etc,usr,usr/local,usr/share}/portage/{,**} r,
  /var/db/pkg/{,**} r,
  /var/cache/edb/{,**} r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /bin/uname ix,
    
  }
  
}