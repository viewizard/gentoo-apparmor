#include <local/tunables.d/>

profile syslog-ng /usr/sbin/syslog-ng {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability chown,
  capability mknod,
  capability dac_override,
  capability dac_read_search,
  capability fsetid,
  capability fowner,
  capability sys_tty_config,
  capability sys_resource,
  capability syslog,
  capability sys_ptrace,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # UNIX -----------------------------------------------
  unix (receive) type=dgram,
  unix (receive) type=stream,
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /dev/kmsg						r,
  /dev/log						rw,
  /dev/syslog						w,
  /dev/xconsole						rw,
  /sys/devices/system/cpu/online			r,
  @{PROC}/kmsg						r,
  @{PROC}/uptime					r,
  @{PROC}/@{pid}/{cgroup,sessionid,loginuid}		r,
  @{PROC}/@{pid}/{status,cmdline}			r,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/syslog-ng					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/syslog-ng/*					r,
  /etc/hosts.{allow,deny}				r,
  /usr/share/syslog-ng/**				r,
  /usr/share/include/scl**				r,
  /var/lib/*/dev/log					w,
  /var/lib/syslog-ng/syslog-ng.persist*			rw,
  /var/log/**						w,
  /run/syslog-ng.pid					rwk,
  /run/syslog-ng.ctl					rw,
  /run/syslog-ng/additional-log-sockets.conf		r,
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/lynis.cron.*				w,	# lynis.cron.daily
}

profile syslog-ng.init.d /etc/init.d/syslog-ng {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability audit_control,
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/syslog-ng/tasks			w,
  /sys/fs/cgroup/unified/syslog-ng/cgroup.procs		w,
  /sys/fs/cgroup/unified/syslog-ng/cgroup.events	r,
  @{PROC}/@{pid}/uid_map				r,
  @{PROC}/@{pid}/loginuid				rw,
  @{PROC}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/syslog-ng					Px,
  @{shell}						Cx,
  /bin/sleep						Px,
  /bin/mkdir						Cx,
  /bin/grep						Cx,
  /bin/rmdir						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,
  /etc/{conf,init}.d/syslog-ng				r,
  /etc/security/limits.d/{,*}				r,
  /run/syslog-ng.pid					rwk,
  /run/utmp						rk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/{openrc,unified}/syslog-ng/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/syslog-ng/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/syslog-ng/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
