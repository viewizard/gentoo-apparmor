#include <local/tunables.d/>

profile syslog-ng /usr/sbin/syslog-ng {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability chown,
  capability mknod,
  capability dac_override,
  capability dac_read_search,
  capability fsetid,
  capability fowner,
  capability sys_tty_config,
  capability sys_resource,
  capability syslog,
  capability sys_ptrace,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # UNIX -----------------------------------------------
  unix (receive) type=dgram,
  unix (receive) type=stream,
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /dev/kmsg						r,
  /dev/log						rw,
  /dev/syslog						w,
  /dev/xconsole						rw,
  @{SYS_D}/devices/system/cpu/online			r,
  @{PROC_D}/kmsg					r,
  @{PROC_D}/uptime					r,
  owner @{PROC_D}/1/cgroup				r,
  @{PROC_D}/@{pids}/sessionid				r,
  @{PROC_D}/@{pids}/loginuid				r,
  audit @{PROC_D}/@{pid}/status				r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  @{PROC_D}/@{pids}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/syslog-ng					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/syslog-ng/*					r,
  /etc/hosts.{allow,deny}				r,	# sys-apps/tcp-wrappers
  /usr/share/syslog-ng/**				r,
  /usr/share/include/scl/{,**}				r,
  audit /var/lib/*/dev/log				w,	# FIX ME! audit 8.12.2017
  /var/lib/syslog-ng/syslog-ng.persist*			rw,
  /var/log/**						w,
  /run/syslog-ng.pid					rwk,
  /run/syslog-ng.ctl					rw,
  /run/syslog-ng/additional-log-sockets.conf		r,
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/lynis.cron.@{TMP6}				w,	# app-forensics/lynis, lynis.cron.daily
}

profile syslog-ng.init.d /etc/init.d/syslog-ng flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability audit_control,
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  @{SYS_D}/fs/cgroup/openrc/syslog-ng/tasks		w,
  @{SYS_D}/fs/cgroup/unified/syslog-ng/cgroup.procs	w,
  @{SYS_D}/fs/cgroup/unified/syslog-ng/cgroup.events	r,
  audit @{PROC_D}/@{pid}/uid_map			r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  owner @{PROC_D}/@{pid}/loginuid			rw,
  @{PROC_D}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/syslog-ng					Px,
  @{shell}						Cx,
  /bin/sleep						Px,	# sys-apps/coreutils
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,	# sys-libs/pam
  /etc/{conf,init}.d/syslog-ng				r,
  /etc/security/limits.d/{,*}				r,	# sys-libs/pam
  /run/syslog-ng.pid					rwk,
  /run/utmp						rk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/{openrc,unified}/syslog-ng/	w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/syslog-ng/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/syslog-ng/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
