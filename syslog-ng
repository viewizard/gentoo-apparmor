#include <tunables/global>

profile syslog-ng /usr/sbin/syslog-ng {
  #include <abstractions/base>
  #include <abstractions/consoles>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability chown,
  capability dac_override,
  capability dac_read_search,
  capability fsetid,
  capability fowner,
  capability sys_tty_config,
  capability sys_resource,
  capability syslog,
  capability sys_ptrace,
  
  # UNIX -----------------------------------------------
  unix (receive) type=dgram,
  unix (receive) type=stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  /dev/kmsg						r,
  /dev/log						w,
  /dev/syslog						w,
  /dev/xconsole						rw,
  /sys/devices/system/cpu/online			r,
  @{PROC}/kmsg						r,
  @{PROC}/uptime					r,
  @{PROC}/@{pid}/{cgroup,sessionid,loginuid}		r,
  @{PROC}/@{pid}/{status,cmdline}			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/syslog-ng					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/syslog-ng/*					r,  
  /etc/hosts.{allow,deny}				r,
  /usr/share/syslog-ng/**				r,
  /usr/share/include/scl**				r,
  /var/lib/*/dev/log					w,
  /var/lib/syslog-ng/syslog-ng.persist*			rw,
  /var/log/**						w,
  /run/syslog-ng.pid					rwk,
  /run/syslog-ng.ctl					rw,
  /run/syslog-ng/additional-log-sockets.conf		r,
}

profile syslog-ng.init.d /etc/init.d/syslog-ng {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability audit_control,
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  @{PROC}/@{pid}/uid_map				r,
  @{PROC}/@{pid}/loginuid				rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/syslog-ng					Px,
  @{shell}						Cx,
  /bin/sleep						ix,
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,
  /etc/{conf,init}.d/syslog-ng				r,
  /etc/security/limits.d/{,*}				r,
  /run/syslog-ng.pid					rwk,
  /run/utmp						rk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}
