#include <local/tunables.d/>

profile logcheck /usr/sbin/logcheck {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term) peer="logcheck//lockfile-create",
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /usr/sbin/logcheck					r,
  /bin/date						Cx,	# sys-apps/coreutils
  /bin/hostname						Px,	# sys-apps/net-tools
  /bin/basename						Px,	# sys-apps/coreutils
  /bin/expr						Cx,	# sys-apps/coreutils
  /bin/mktemp						Cx,	# sys-apps/coreutils
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/run-parts					Cx,	# sys-apps/debianutils
  /bin/mv						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/egrep						Cx,	# sys-apps/grep
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/tr						Px,	# sys-apps/coreutils
  /bin/sed						Cx,	# sys-apps/sed
  /bin/ls						Cx,	# sys-apps/coreutils
  /bin/sort						Cx,	# sys-apps/coreutils
  /bin/rm						Cx,	# sys-apps/coreutils
  /bin/cp						Cx,	# sys-apps/coreutils
  /bin/wc						Cx,	# sys-apps/coreutils
  /usr/bin/id						Px,	# sys-apps/coreutils
  /usr/bin/lockfile-create				Cx,
  /usr/bin/mime-construct				Cx,	# dev-perl/mime-construct
  /usr/sbin/logtail2					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/logcheck/{,**}					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/logcheck.@{TMP6}/{,**}			rw,
  
  profile date /bin/date {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/date						mr,
  }
  
  profile expr /bin/expr {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/expr						mr,
  }
  
  profile mktemp /bin/mktemp {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mktemp						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/logcheck.@{TMP6}/			w,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/logcheck.@{TMP6}/**/			w,
  }
  
  profile run-parts /bin/run-parts {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/run-parts					mr,
    
    # READS/WRITES -------------------------------------
    /etc/logcheck/{,**/}				r,
  }
  
  profile mv /bin/mv {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mv						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/logcheck.@{TMP6}/{,**}			rw,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile egrep /bin/egrep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    /bin/egrep						r,
    @{shell}						mr,
    /bin/grep						ix,	# sys-apps/grep		# Все правильно, для egrep используем с ix.
    
    # READS/WRITES -------------------------------------
    /etc/logcheck/{,**}					r,
    
    # TEMP ---------------------------------------------
    owner /tmp/logcheck.@{TMP6}/{,**}			r,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/logcheck.@{TMP6}/{,**}			rw,
  }
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
  
  profile ls /bin/ls {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/ls						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/logcheck.@{TMP6}/{,**}			r,
  }
  
  profile sort /bin/sort {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/sort						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/logcheck.@{TMP6}/{,**}			r,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/logcheck.@{TMP6}/{,**}			rw,
  }
  
  profile cp /bin/cp {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cp						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/logcheck.@{TMP6}/{,**}			rw,
  }
  
  profile wc /bin/wc {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/wc						mr,
  }
  
  profile lockfile-create /usr/bin/lockfile-create {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/lockfile-create				mr,
    
    # READS/WRITES ---------------------------------------
    /run/lock/logcheck/					rw,
    /run/lock/logcheck/*				rw,
    link subset /run/lock/logcheck/logcheck.lock	-> /run/lock/logcheck/*,
  }
  
  profile mime-construct /usr/bin/mime-construct {
    #include <abstractions/base>
    #include <abstractions/perl>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/mime-construct				mr,
    /usr/sbin/sendmail					Px,	# mail-mta/nullmailer
    
    # TEMP ---------------------------------------------
    owner /tmp/logcheck.@{TMP6}/{,**}			r,
  }
}

profile logcheck.logtail2 /usr/sbin/logtail2 {
  #include <abstractions/base>
  #include <abstractions/perl>
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/logtail2					mr,
  
  # READS/WRITES ---------------------------------------
  /var/log/						r,
  /var/log/messages_logcheck*				r,
  /var/lib/logcheck/					r,
  /var/lib/logcheck/*					rw,
  
  # READS/WRITES ---------------------------------------
  /usr/share/logtail/{,**}				r,
  
  # TEMP -----------------------------------------------
  owner /tmp/logcheck.@{TMP6}/{,**}			rw,
}

profile logcheck.cron.hourly /etc/cron.hourly/logcheck.cron {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.hourly/logcheck.cron			r,
  @{shell}						mr,
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/chown						Cx,	# sys-apps/coreutils
  /bin/su						Px,	# sys-apps/shadow
  /usr/sbin/logcheck					Px,
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
    
    # READS/WRITES -------------------------------------
    /run/lock/logcheck/					w,
  }
  
  profile chown /bin/chown {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # CAPABILITIES -------------------------------------
    capability chown,
    
    # EXECUTABLES --------------------------------------
    /bin/chown						mr,
    
    # READS/WRITES -------------------------------------
    /run/lock/logcheck/					rw,
  }
}

# shell профиль для переключения hat в shadow.su
profile shell_logcheck {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /usr/sbin/logcheck					Px,
}
