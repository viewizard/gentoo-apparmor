#include <tunables/global>
profile logcheck /usr/sbin/logcheck {
  #include <abstractions/base>
  #include <abstractions/perl>
  #include <abstractions/nameservice>
  
  /dev/tty rw,
  
  /bin/bash mr,
  /usr/sbin/logcheck r,
  /bin/egrep r,
  /bin/grep ix,
  /bin/date ix,
  /bin/hostname ix,
  /bin/basename ix,
  /bin/expr ix,
  /bin/mktemp ix,
  /bin/mkdir ix,
  /bin/run-parts ix,
  /bin/mv ix,
  /bin/egrep ix,
  /bin/cat ix,
  /bin/tr ix,
  /bin/sed ix,
  /bin/ls ix,
  /bin/sort ix,
  /bin/rm ix,
  /bin/cp ix,
  /bin/wc ix,
  /usr/bin/id ix,
  /usr/bin/lockfile-create ix,
  /usr/bin/mime-construct ixr,
  /usr/sbin/logtail2 ixr,
  /usr/sbin/sendmail Px,
  
  /etc/logcheck/{,**} r,
  /usr/share/logtail/{,**} r,
  
  /var/log/ r,
  /var/log/messages_logcheck r,
  /var/lib/logcheck/ r,
  /var/lib/logcheck/* rw,
  
  /run/lock/logcheck/ rw,
  /run/lock/logcheck/* rwl,
  
  owner /tmp/logcheck.*/{,**} rw,
  
}
