#include <tunables/global>

profile logcheck /usr/sbin/logcheck {
  #include <abstractions/base>
  #include <abstractions/perl>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /usr/sbin/logcheck					r,
  /bin/egrep						r,
  /bin/grep						ix,
  /bin/date						ix,
  /bin/hostname						Px,
  /bin/basename						Px,
  /bin/expr						ix,
  /bin/mktemp						ix,
  /bin/mkdir						ix,
  /bin/run-parts					ix,
  /bin/mv						ix,
  /bin/egrep						ix,
  /bin/cat						ix,
  /bin/tr						Px,
  /bin/sed						ix,
  /bin/ls						ix,
  /bin/sort						ix,
  /bin/rm						ix,
  /bin/cp						ix,
  /bin/wc						ix,
  /usr/bin/id						Px,
  /usr/bin/lockfile-create				ix,
  /usr/bin/mime-construct				ixr,
  /usr/sbin/logtail2					ixr,
  /usr/sbin/sendmail					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/logcheck/{,**}					r,
  /usr/share/logtail/{,**}				r,
  /var/log/						r,
  /var/log/messages_logcheck*				r,
  /var/lib/logcheck/					r,
  /var/lib/logcheck/*					rw,
  /run/lock/logcheck/					rw,
  /run/lock/logcheck/*					rw,
  link subset /run/lock/logcheck/logcheck.lock		-> /run/lock/logcheck/*,
  
  # TEMP -----------------------------------------------
  owner /tmp/logcheck.*/{,**}				rw,
}

profile logcheck.cron.hourly /etc/cron.hourly/logcheck.cron {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability chown,
  capability dac_read_search,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/cron.hourly/logcheck.cron			r,
  @{shell}						mr,
  /bin/mkdir						ix,
  /bin/chown						ix,
  /bin/su						Px,
  /usr/sbin/logcheck					Px,
  
  # READS/WRITES ---------------------------------------
  /run/lock/logcheck/					rw,
}
