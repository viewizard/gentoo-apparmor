#include <local/tunables.d/>

# .mpg, .mpeg
@{local_ext}=[mM][pP]{,[eE]}[gG]
# .vob
@{local_ext}+=[vV][oO][bB]
# .ogg, .ogm
@{local_ext}+=[oO][gG][gGmM]
# .asf
@{local_ext}+=[aA][sS][fF]
# .wav
@{local_ext}+=[wW][aA][vV]
# .wmv, .wma
@{local_ext}+=[wW][mM][vVaA]
# .mov
@{local_ext}+=[mM][oO][vV]
# .mp3, .mp4
@{local_ext}+=[mM][pP][34]
# .avi
@{local_ext}+=[aA][vV][iI]
# .mkv, .mka
@{local_ext}+=[mM][kK][vVaA]
# .webm
@{local_ext}+=[wW][eE][bB][mM]
# .vivo
@{local_ext}+=[vV][iI][vV][oO]
# .ts
@{local_ext}+=[tT][sS]
# .aac
@{local_ext}+=[aA][aA][cC]
# .h264
@{local_ext}+=[hH]264
# .3p2
@{local_ext}+=3[pP]2
# .3ga, .3gp
@{local_ext}+=3[gG][pPaA]
# .flv
@{local_ext}+=[fF][lL][vV]
# .ass
@{local_ext}+=[aA][sS][sS]
# .smi
@{local_ext}+=[sS][mM][iI]
# .srt
@{local_ext}+=[sS][rR][tT]
# .sub
@{local_ext}+=[sS][uU][bB]
# .txt
@{local_ext}+=[tT][xX][tT]
# .mdv
@{local_ext}+=[mM][dD][vV]
# .ssa
@{local_ext}+=[sS][sS][aA]
# .sup
@{local_ext}+=[sS][uU][pP]
# .tt
@{local_ext}+=[tT][tT]
# .smil
@{local_ext}+=[sS][mM][iI][lL]
# .gif
@{local_ext}+=[gG][iI][fF]

# предустановка для abstractions/fs/access-by-user-preset-rk
@{USERS_DIR_rk}="[^.]**"
@{USERS_FILE_rk}="[^.]*.@{local_ext}"

profile mplayer /usr/bin/mplayer {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/ncurses>
  #include <abstractions/fs/access-by-users-preset-rk>
  #include <abstractions/fs/deny-by-pattern-internet>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC_D}/@{pid}/cmdline				r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/mplayer					mr,
  
  # USERS ----------------------------------------------
  /etc/mplayer/{,**}					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/smplayer/styles.ass		r,	# smplayer
  owner @{HOME}/.mplayer/{,config}			rw,
}
