#include <tunables/global>

profile lynis /usr/sbin/lynis {
  #include <abstractions/base>
  #include <abstractions/perl>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/mapper/control					w,
  
  # EXECUTABLES ----------------------------------------
  /bin/bash						Cxmr -> shell,	# Все правильно, запуск и mmap
  /bin/date						ix,
  /bin/expr						ix,
  /bin/ls						ix,
  /bin/egrep						ix,
  /bin/grep						ix,
  /bin/cut						ix,
  /bin/wc						ix,
  /bin/sed						ix,
  /bin/tr						ix,
  /bin/chmod						ix,
  /bin/ps						Px,
  /bin/uname						ix,
  /bin/head						ix,
  /bin/cat						ix,
  /bin/echo						ix,
  /bin/kmod						Px,
  /bin/sort						ix,
  /bin/sleep						ix,
  /bin/ifconfig						Px,
  /bin/hostname						ix,
  /bin/readlink						ix,
  /bin/mktemp						ix,
  /bin/passwd						Px,
  /bin/rm						ix,
  /bin/mount						Px,
  /bin/netstat						Px,
  /sbin/lvm						Px,
  /sbin/tune2fs						ix,
  /sbin/rpcinfo						ix,
  /usr/bin/aide						Px,
  /usr/bin/id						ix,
  /usr/bin/wget						ix,
  /usr/bin/gawk						ix,
  /usr/bin/find						ix,
  /usr/bin/nmap						Px,
  /usr/bin/openssl					ix,
  /usr/bin/xargs					ix,
  /usr/bin/uniq						ix,
  /usr/bin/which					ix,
  /usr/bin/dig						ix,
  /usr/bin/ntpq						Px,
  /usr/bin/shasum-*-perl-*				ix,
  /usr/sbin/smbd					Cx -> smbd,
  /usr/sbin/sshd					Cx -> sshd,
  /usr/sbin/sysctl					Px,
  /usr/sbin/syslog-ng					Px,
  /usr/bin/logrotate					Px,
  /usr/sbin/grpck					ix,
  /usr/sbin/pwck					ix,
  @{PYTHON_EXEC_WRAPPER}				Cx -> aa_status,
  
  # READS/WRITES ---------------------------------------
  /{,**}						r,
  /run/lynis.pid					rw,
  /var/log/lynis.log					rw,
  /var/log/lynis-report.dat				rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/lynis.*					rw,
  owner /tmp/lynis2.*					rw,
  owner /tmp/lynis.cron.??????				rw,
  owner /tmp/lynis-shellshock-test.*			rw,
  
  # NOISY ----------------------------------------------
  deny /*						w,
  
  profile shell {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_read_search,
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    /bin/bash						ixmr,	# Все правильно, запуск и mmap
    /bin/grep						ix,
    /bin/env						ix,
    /bin/rm						ix,
    /bin/cat						ix,
    /bin/date						ix,
    
    # TEMP ---------------------------------------------
    owner /tmp/sh-thd.*					rw,
    owner /tmp/lynis-shellshock-test.*			rw,
  }
  
  profile smbd {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/sbin/smbd					mr,
    
    # READS/WRITES -------------------------------------
    /usr/share/samba/{,**}				r,
  }
  
  profile sshd {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    # CAPABILITIES -------------------------------------
    capability setuid,
    capability setgid,
    
    # PSEUDO -------------------------------------------
    @{PROC}/@{pid}/fd/					r,
    
    # EXECUTABLES --------------------------------------
    /usr/sbin/sshd					mr,
    
    # READS/WRITES -------------------------------------
    /etc/ssl/openssl.cnf				r,
    /etc/ssh/sshd_config				r,
  }
  
  profile aa_status {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/aa-status				Px,
  }
}
