#include <tunables/global>
profile lynis /usr/sbin/lynis {
  #include <abstractions/base>
  #include <abstractions/perl>
  #include <abstractions/nameservice>
  
  capability sys_ptrace,
  capability dac_read_search,
  
  /dev/tty rw,
  /dev/mapper/control w,
  
  /bin/bash Cxmr -> shell,
  /bin/date ix,
  /bin/expr ix,
  /bin/ls ix,
  /bin/egrep ix,
  /bin/grep ix,
  /bin/cut ix,
  /bin/wc ix,
  /bin/sed ix,
  /bin/tr ix,
  /bin/chmod ix,
  /bin/ps Px,
  /bin/uname ix,
  /bin/head ix,
  /bin/cat ix,
  /bin/echo ix,
  /bin/kmod Px,
  /bin/sort ix,
  /bin/sleep ix,
  /bin/ifconfig ix,
  /bin/hostname ix,
  /bin/readlink ix,
  /bin/mktemp ix,
  /bin/passwd Px,
  /bin/rm ix,
  /bin/mount Px,
  /bin/netstat ix,
  /usr/sbin/sysctl Px,
  /sbin/lvm Px,
  /sbin/tune2fs ix,
  /sbin/rpcinfo ix,
  /usr/bin/aide Px,
  /usr/bin/id ix,
  /usr/bin/wget ix,
  /usr/bin/gawk ix,
  /usr/bin/find ix,
  /usr/bin/nmap ix,
  /usr/bin/openssl ix,
  /usr/bin/xargs ix,
  /usr/bin/uniq ix,
  /usr/bin/which ix,
  /usr/bin/dig ix,
  /usr/bin/ntpq ix,
  /usr/bin/shasum-*-perl-* ix,
  /usr/sbin/smbd Cx -> smbd,
  /usr/sbin/sshd Cx -> sshd,
  /usr/sbin/syslog-ng Px,
  /usr/bin/logrotate Px,
  /usr/sbin/grpck ix,
  /usr/sbin/pwck ix,
  /usr/lib{,32,64}/python-exec/python-exec2 Cx -> aa_status,
  
  /{,**} r,
  deny /* w,
  
  /run/lynis.pid rw,
  /var/log/lynis.log rw,
  /var/log/lynis-report.dat rw,
  
  owner /tmp/lynis.* rw,
  owner /tmp/lynis2.* rw,
  owner /tmp/lynis.cron.?????? rw,
  owner /tmp/lynis-shellshock-test.* rw,
  
  
  profile shell {
    #include <abstractions/base>
    
    capability dac_read_search,
    capability dac_override,
    
    /dev/tty rw,
    
    /bin/bash ixmr,
    /bin/grep ix,
    /bin/env ix,
    /bin/rm ix,
    /bin/cat ix,
    /bin/date ix,
    
    owner /tmp/sh-thd.* rw,
    owner /tmp/lynis-shellshock-test.* rw,
    
  }
  
  profile smbd {
    #include <abstractions/base>
    
    /usr/sbin/smbd mr,
    
    /usr/share/samba/{,**} r,
    
  }
  
  profile sshd {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    capability setuid,
    capability setgid,
    
    @{PROC}/@{pid}/fd/ r,
    
    /usr/sbin/sshd mr,
    
    /etc/ssl/openssl.cnf r,
    /etc/ssh/sshd_config r,
    
  }
  
  profile aa_status {
    #include <abstractions/base>
    
    /usr/lib{,32,64}/python-exec/python-exec2 m,
    /usr/lib{,32,64}/python-exec/python-exec2-c m,
    /bin/env r,
    
    /usr/lib{,32,64}/python-exec/@{PYTHON}/aa-status Px,
    
    /etc/env.d/python/config r,
    
  }
  
}
