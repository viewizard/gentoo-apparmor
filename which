#include <tunables/global>

profile which /usr/bin/which flags=(complain) {			# FIX ME! 04.04.2017 flags=(complain)
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/which					mr,
}
