#include <tunables/global>

# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]*.{po,po.*,pot,mo,c,h,cpp,hpp,PO,PO.*,POT,MO,C,H,CPP,HPP,temp*}"

profile poedit /usr/bin/poedit {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/enchant>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/fs-access-by-users-preset-rwk>
  #include <abstractions/fs-deny-by-pattern-internet>
  #include <abstractions/xdg-open>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /sys/devices/system/cpu/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/poedit					mr,
  @{shell}						Cx,
  /usr/bin/msgmerge					Cx,	# FS ACCESS! msgmerge
  /usr/bin/msgfmt					Cx,	# FS ACCESS! msgfmt
  /usr/bin/msgcat					Cx,	# FS ACCESS! msgcat
  
  # READS/WRITES ---------------------------------------
  /usr/share/poedit/{,**}				r,
  owner /run/user/[0-9]*/poedit.*			rwk,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.poedit/{,**}				rw,
  owner @{HOME}/.config/poedit/{,**}			rw,
  owner @{HOME}/.local/share/poedit/{,**}		rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/poedit*/{,**}				rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
    /usr/bin/lsb_release				Px,
    
    # DENY INHERIT -------------------------------------
    deny /run/user/[0-9]*/poedit.lock			w,
  }
  
  profile msgmerge /usr/bin/msgmerge flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rwk>
    #include <abstractions/fs-deny-by-pattern-internet>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/msgmerge					mr,
    
    # DENY INHERIT -------------------------------------
    deny /run/user/[0-9]*/poedit.lock			w,
    deny @{HOME}/.local/share/poedit/{,**}		rw,
  }
  
  profile msgfmt /usr/bin/msgfmt {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rwk>
    #include <abstractions/fs-deny-by-pattern-internet>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/msgfmt					mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/poedit*/**				r,
    
    # DENY INHERIT -------------------------------------
    deny /run/user/[0-9]*/poedit.lock			w,
    deny @{HOME}/.local/share/poedit/{,**}		rw,
  }
  
  profile msgcat /usr/bin/msgcat {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rwk>
    #include <abstractions/fs-deny-by-pattern-internet>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/msgcat					mr,
    
    # DENY INHERIT -------------------------------------
    deny /run/user/[0-9]*/poedit.lock			w,
    deny @{HOME}/.local/share/poedit/{,**}		rw,
  }
}
