#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*.{po,po.*,pot,mo,c,h,cpp,hpp,PO,PO.*,POT,MO,C,H,CPP,HPP,temp*}"

profile poedit /usr/bin/poedit {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/enchant>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/program-work-with-disk-rwk-strict>
  #include <abstractions/xdg-open>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /sys/devices/system/cpu/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/poedit					mr,
  @{shell}						ix,	# FIX ME! почему он в основном профиле с ix?
  /bin/uname						Px,
  /usr/bin/msgmerge					ix,
  /usr/bin/msgfmt					ix,
  /usr/bin/msgcat					ix,
  /usr/bin/lsb_release					Pxr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/poedit/{,**}				r,
  owner /run/user/*/poedit.*				rwk,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.poedit/{,**}				rw,
  owner @{HOME}/.config/poedit/{,**}			rw,
  owner @{HOME}/.local/share/poedit/{,**}		rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/poedit*/{,**}				rw,
}
