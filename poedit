#include <local/tunables.d/>

# .po, .po.*, .pot
@{local_ext}=[pP][oO]{,.*,[tT]}
# .mo
@{local_ext}+=[mM][oO]
# .c, .h, .cpp, .hpp
@{local_ext}+=[cChH]{,[pP][pP]}
# .temp*
@{local_ext}+=temp*

# предустановка для abstractions/fs/access-by-user-preset-rwk
@{USERS_DIR_rwk}="[^.]**"
@{USERS_FILE_rwk}="[^.]*.@{local_ext}"

profile poedit /usr/bin/poedit {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/enchant>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/xdg-open>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{SYS_D}/devices/system/cpu/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/poedit					mr,
  @{shell}						Cx,
  /usr/bin/msgmerge					Cx,	# sys-devel/gettext
  /usr/bin/msgfmt					Cx,	# sys-devel/gettext
  /usr/bin/msgcat					Cx,	# sys-devel/gettext
  
  # READS/WRITES ---------------------------------------
  /usr/share/poedit/{,**}				r,
  owner /run/user/@{UID}/poedit.*			rwk,
  
  # USERS ----------------------------------------------
  owner @{HOME_D}/.poedit/{,**}				rw,
  owner @{HOME_D}/.config/poedit/{,**}			rw,
  owner @{HOME_D}/.local/share/poedit/{,**}		rw,
  owner @{HOME_D}/.local/share/poedit/{,**/}*		k,
  
  # TEMP -----------------------------------------------
  owner /tmp/poedit@{TMP6}/{,**}			rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,	# sys-apps/coreutils
    /usr/bin/lsb_release				Px,	# sys-apps/lsb-release
    
    # DENY INHERIT -------------------------------------
    deny /run/user/@{UID}/poedit.lock			w,
  }
  
  profile msgmerge /usr/bin/msgmerge {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwk>
    #include <abstractions/fs/deny-by-pattern-internet>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/devices/system/cpu/			r,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/msgmerge					mr,
    
    # TEMP -----------------------------------------------
    owner /tmp/poedit@{TMP6}/{,**}			rw,
    
    # DENY INHERIT -------------------------------------
    deny /run/user/@{UID}/poedit.lock			w,
    deny @{HOME_D}/.local/share/poedit/{,**}		rw,
  }
  
  profile msgfmt /usr/bin/msgfmt {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwk>
    #include <abstractions/fs/deny-by-pattern-internet>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/msgfmt					mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/poedit@{TMP6}/**				r,
    
    # DENY INHERIT -------------------------------------
    deny /run/user/@{UID}/poedit.lock			w,
    deny @{HOME_D}/.local/share/poedit/{,**}		rw,
  }
  
  profile msgcat /usr/bin/msgcat {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwk>
    #include <abstractions/fs/deny-by-pattern-internet>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/msgcat					mr,
    
    # DENY INHERIT -------------------------------------
    deny /run/user/@{UID}/poedit.lock			w,
    deny @{HOME_D}/.local/share/poedit/{,**}		rw,
  }
}
