#include <tunables.d/>

profile dhcp.dhclient /sbin/dhclient {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability net_raw,
  capability net_bind_service,
  
  # NETWORK --------------------------------------------
  network packet raw,
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  @{PROC}/@{pid}/net/dev				r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/dhclient					mr,
  /usr/libexec/nm-dhcp-helper				Px,	# DELEGATION! networkmanager.NetworkManager
  
  # READS/WRITES ---------------------------------------
  /run/dhclient-*.pid					rw,	# DELEGATION! networkmanager.NetworkManager
  /var/lib/NetworkManager/dhclient-*.conf		r,	# DELEGATION! networkmanager.NetworkManager
  /var/lib/NetworkManager/dhclient-*.lease		rw,	# DELEGATION! networkmanager.NetworkManager
}
