#include <tunables/global>

profile xfce4-session /usr/bin/xfce4-session {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-pattern/xfconf>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/dbus-pattern/consolekit>
  #include <abstractions/dbus-pattern/session-bind>
  #include <abstractions/binary-helper>
  #include <local/xfce4-session-custom-exec>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term),
  
  # UNIX -----------------------------------------------
  unix (bind, listen)
  			type=stream
  			addr="@/tmp/.ICE-unix/*",
  unix (send, receive, accept)
  			type=stream
  			addr="@/tmp/.ICE-unix/*",
  
  # DBUS -----------------------------------------------
  dbus receive
  	bus=session
  	path="/org/xfce/SessionManager"
  	interface="org.xfce.Session.Manager"
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus send
  	bus=session
  	path="/org/xfce/SessionClients/*"
  	interface="org.xfce.Session.Client"
  	peer=(name="org.freedesktop.DBus"),
  dbus receive
  	bus=session
  	path="/org/xfce/SessionClients/*"
  	interface="org.xfce.Session.Client"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4-session				Pxmr,	# Все правильно, запуск и mmap.
  @{shell}						Cx,
  /bin/env						Cx,
  /bin/true						Px,
  audit /bin/rm						Cx,	# FS ACCESS! rm		# FIX ME! audit 22.06.2017
  /usr/bin/ssh-agent					Px,
  /usr/bin/gpg-agent					Px,
  /usr/bin/xfsettingsd					Px,
  /usr/bin/xdg-user-dirs-gtk-update			Px,
  /usr/bin/start-pulseaudio-x11				Px,
  /usr/bin/mate-screensaver{,.sh}			Px,
  /usr/bin/pkexec					Px,
  /usr/bin/gnome-keyring-daemon				Px,	# В случае запуска через автозагрузку.
  /usr/bin/xfdesktop					Px,
  /usr/bin/xfwm4					Px,
  /usr/bin/xfce4-panel					Px,
  /usr/bin/nm-applet					Px,
  /usr/bin/xfce4-volumed				Px,
  /usr/bin/xfce4-volumed-pulse				Px,
  /usr/bin/xfce4-power-manager				Px,
  /usr/bin/gsettings-data-convert			Px,
  /usr/libexec/at-spi-bus-launcher			Px,
  /usr/libexec/polkit-gnome-authentication-agent-1	Px,
  /usr/libexec/vino-server				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/						r,
  /etc/xdg/autostart/{,*}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.ICEauthority*				w,
  owner @{HOME}/.xfce4-session.verbose-log*		rw,
  owner @{HOME}/.config/				r,
  owner @{HOME}/.config/autostart/{,*}			r,
  owner @{HOME}/.dbus/session-bus/{,*}			rw,
  owner @{HOME_CACHE}/sessions/{,*}			rw,
  owner @{HOME_CACHE}/sessions/thumbs*/{,*.png}		rw,
  owner @{HOME_CACHE}/gpg-agent-info			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/.ICE-unix/*				w,
  owner /tmp/.xfsm-ICE-*				rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/sleep						Px,
    /usr/bin/iceauth					Px,
    /usr/bin/cairo-clock				Px,
    /usr/bin/conky					Px,
    
    # USERS --------------------------------------------
    owner @{HOME}/.xfce4-session.verbose-log		w,
  }
  
  profile env /bin/env {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/env						mr,
    /usr/bin/xfwm4					Px,
    /usr/bin/xfsettingsd				Px,
    /usr/bin/xfce4-panel				Px,
    /usr/bin/thunar					Px,
    /usr/bin/xfdesktop					Px,
    /usr/bin/cairo-clock				Px,
    
    # USERS --------------------------------------------
    owner @{HOME}/.xfce4-session.verbose-log		w,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
  }
}

profile xfce4-session.xfce4-session-logout /usr/bin/xfce4-session-logout {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/xfce/SessionManager"
  	interface="org.xfce.Session.Manager"
  	peer=(name=":[0-9]*.[0-9]*",label="xfce4-session"),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4-session-logout				mr,
}

profile xfce4-session.xfce4-session-settings /usr/bin/xfce4-session-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/xfconf>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/nameservice>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/xfce/SessionManager"
  	interface="org.xfce.Session.Manager"
  	peer=(name="org.xfce.SessionManager",label="xfce4-session"),
  dbus send
  	bus=session
  	path="/org/xfce/SessionClients/*"
  	interface="org.xfce.Session.Client"
  	peer=(name="org.xfce.SessionManager",label="xfce4-session"),
  dbus receive
  	bus=session
  	path="/org/xfce/SessionClients/*"
  	interface="org.xfce.Session.Client"
  	peer=(name=":[0-9]*.[0-9]*",label="xfce4-session"),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4-session-settings			mr,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/						r,
  /etc/xdg/autostart/{,*}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/				r,
  owner @{HOME}/.config/autostart/			r,
  owner @{HOME}/.config/autostart/*			rw,
}

profile xfce4-session.xflock4 /usr/bin/xflock4 {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xflock4					r,
  @{shell}						mr,
  /usr/bin/mate-screensaver-command			Px,	# MATE
}

profile xfce4-session.startxfce4 /usr/bin/startxfce4 {
  #include <abstractions/base>
  #include <abstractions/X>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/startxfce4					r,
  @{shell}						Pxmr -> xfce4_session_startxfce4_shell,	# Все правильно, запуск и mmap.
  /usr/bin/xinit					Px,
}

# FIX ME! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile xfce4_session_startxfce4_shell {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/cat						Cx,	# FS ACCESS! cat
  audit /bin/grep					Cx,	# FS ACCESS! grep	# FIX ME! audit 22.06.2017
  audit /bin/sed					Cx,	# FS ACCESS! sed	# FIX ME! audit 22.06.2017
  /usr/bin/which					Px,
  audit /usr/bin/gawk					Cx,	# FS ACCESS! gawk	# FIX ME! audit 22.06.2017
  /usr/bin/xrdb						Px,
  /usr/bin/xfce4-session				Px,
  /usr/bin/xdg-user-dirs-update				Px,
  /etc/xdg/xfce4/xfce4-session-fix			Px,	# временный скрипт-фикс для xfce4 4.12
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/xfce4/xinitrc				r,
  /etc/xdg/xfce4/Xft.xrdb				r,
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # READS/WRITES -------------------------------------
    /etc/xdg/xfce4/Xft.xrdb				r,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
  
  profile gawk /usr/bin/gawk {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gawk					mr,
  }
}

# Временный скрипт-фикс для xfce4 4.12, сохраняющий расположение иконок на
# рабочем столе во время логофа-логина. Возможно, в будущем xfce4-session
# будет пофикшен на предмет отслеживания запуска xfdesktop после того,
# как уже запущен wm и панель.
profile xfce4-session.xfce4-session-fix /etc/xdg/xfce4/xfce4-session-fix {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /etc/xdg/xfce4/xfce4-session-fix			r,
  @{shell}						mr,
  /bin/rm						Cx,	# FS ACCESS! rm
  /bin/cp						Cx,	# FS ACCESS! cp
  /bin/sleep						Px,
  /bin/mkdir						Cx,	# FS ACCESS! mkdir
  /usr/bin/diff						Cx,	# FS ACCESS! diff
  /usr/bin/xfdesktop					Px,
  /usr/bin/libnotify-notify-send			Px,
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/xfdesktop-*/{,**}			rw,
  }
  
  profile cp /bin/cp {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cp						mr,
    
    # USERS --------------------------------------------
    owner @{HOME}/.config/xfce4/desktop/{,*}		rw,
    
    # TEMP ---------------------------------------------
    owner /tmp/xfdesktop-*/desktop/{,*}			rw,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/xfdesktop-*/				w,
  }
  
  profile diff /usr/bin/diff {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/diff					mr,
    
    # USERS --------------------------------------------
    owner @{HOME}/.config/xfce4/desktop/{,*}		r,
    
    # TEMP ---------------------------------------------
    owner /tmp/xfdesktop-*/desktop/{,*}			r,
  }
}

profile xfce4-session.Xfce4 /etc/X11/Sessions/Xfce4 {
  #include <abstractions/base>
  
  # EXECUTABLES --------------------------------------
  /etc/X11/Sessions/Xfce4				r,
  @{shell}						mr,
}
