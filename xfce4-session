#include <tunables/global>

profile xfce4-session /usr/bin/xfce4-session {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/dbus-session>
  #include <abstractions/executable-binary-programs>
  #include <local/xfce4-session-custom-exec>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4-session				Pxmr,	# Все правильно, запуск и mmap.
  /bin/bash						Cx -> shell,
  /bin/env						Cx -> env,
  /bin/true						ix,
  /bin/rm						ixr,
  /usr/bin/ssh-agent					Px,
  /usr/bin/gpg-agent					Px,
  /usr/bin/xfsettingsd					Px,
  /usr/bin/xdg-user-dirs-gtk-update			Px,
  /usr/bin/start-pulseaudio-x11				Px,
  /usr/bin/mate-screensaver{,.sh}			Px,
  /usr/bin/pkexec					Px,
  /usr/bin/gnome-keyring-daemon				Px,
  /usr/bin/xfdesktop					Px,
  /usr/bin/xfwm4					Px,
  /usr/bin/xfce4-panel					Px,
  /usr/libexec/polkit-gnome-authentication-agent-1	Px,
  /usr/libexec/vino-server				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/						r,
  /etc/xdg/autostart/{,*}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.ICEauthority*				w,
  owner @{HOME}/.xfce4-session.verbose-log*		rw,
  owner @{HOME}/.config/				r,
  owner @{HOME}/.config/autostart/{,*}			r,
  owner @{HOME}/.dbus/session-bus/{,*}			rw,
  owner @{HOME_CACHE}/sessions/{,*}			rw,
  owner @{HOME_CACHE}/sessions/thumbs*/{,*.png}		rw,
  owner @{HOME_CACHE}/gpg-agent-info			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/.ICE-unix/*				w,
  owner /tmp/.xfsm-ICE-*				rw,
  
  profile shell {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					w,
    
    # EXECUTABLES --------------------------------------
    /bin/bash						mr,
    /bin/sleep						ix,
    /usr/bin/iceauth					Px,
    /usr/bin/cairo-clock				Px,
    /usr/bin/conky					Px,
  }
  
  profile env {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					w,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/env						mr,
    /usr/bin/xfwm4					Px,
    /usr/bin/xfsettingsd				Px,
    /usr/bin/xfce4-panel				Px,
    /usr/bin/thunar					Px,
    /usr/bin/xfdesktop					Px,
    /usr/bin/cairo-clock				Px,
  }
}

profile xfce4-session-logout /usr/bin/xfce4-session-logout {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/gtk>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4-session-logout				mr,
}

profile xfce4-session-settings /usr/bin/xfce4-session-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4-session-settings			mr,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/						r,
  /etc/xdg/autostart/{,*}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/				r,
  owner @{HOME}/.config/autostart/			r,
  owner @{HOME}/.config/autostart/*			rw,
}

profile xfce4-session.xflock4 /usr/bin/xflock4 {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xflock4					r,
  /bin/bash						mr,
  /usr/bin/mate-screensaver-command			Px,	# MATE
}

profile xfce4-session.startxfce4 /usr/bin/startxfce4 {
  #include <abstractions/base>
  #include <abstractions/X>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/startxfce4					r,
  /bin/bash						Cxmr -> shell,	# Все правильно, запуск и mmap.
  /usr/bin/xinit					Px,
  
  profile shell {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					w,
    
    # EXECUTABLES --------------------------------------
    /bin/bash						mr,
    /bin/cat						ix,
    /bin/grep						ix,
    /bin/sed						ix,
    /usr/bin/which					ix,
    /usr/bin/gawk					ix,
    /usr/bin/xrdb					Px,
    /usr/bin/xfce4-session				Px,
    /usr/bin/xdg-user-dirs-update			Px,
    
    # READS/WRITES -------------------------------------
    /etc/xdg/xfce4/xinitrc				r,
    /etc/xdg/xfce4/Xft.xrdb				r,
  }
}

profile xfce4-session.Xfce4 /etc/X11/Sessions/Xfce4 {
  #include <abstractions/base>
  
  # EXECUTABLES --------------------------------------
  /etc/X11/Sessions/Xfce4				r,
  /bin/bash						mr,
}
