#include <tunables/global>
profile xfce4-session /usr/bin/xfce4-session flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/user-tmp>
  #include <abstractions/nameservice>
  #include <abstractions/dbus-session>
  #include <abstractions/executable-binary-strict>


  @{PROC}/@{pid}/fd/ r,

  /usr/bin/xfce4-session rm,
  /bin/bash Cx -> shell,

  owner @{HOME}/.ICEauthority* w,
  
  /etc/xdg/ r,
  /etc/xdg/autostart/ r,
  /etc/xdg/autostart/* r,
  
  owner @{HOME}/.xfce4-session.verbose-log* rw,
  owner @{HOME}/.config/ r,
  owner @{HOME}/.config/autostart/ r,
  owner @{HOME}/.config/autostart/* r,
  owner @{HOME}/.dbus/session-bus/ rw,
  owner @{HOME}/.dbus/session-bus/* rw,

  owner @{HOME_CACHE}/sessions/ rw,
  owner @{HOME_CACHE}/sessions/thumbs*/ rw,
  owner @{HOME_CACHE}/sessions/thumbs*/*.png rw,
  owner @{HOME_CACHE}/gpg-agent-info rw,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /usr/bin/iceauth Px,
    
  }
  
}


profile xfce4-session-logout /usr/bin/xfce4-session-logout flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/nvidia>
  #include <abstractions/X>

  /dev/pts/[0-9]* rw,
  /usr/bin/xfce4-session-logout r,
  
}


profile xfce4-session-settings /usr/bin/xfce4-session-settings flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>

  /usr/bin/xfce4-session-settings r,
  /etc/xdg/ r,
  /etc/xdg/autostart/ r,
  /etc/xdg/autostart/* r,

  owner @{HOME}/.config/ r,
  owner @{HOME}/.config/autostart/ r,
  owner @{HOME}/.config/autostart/* rw,
  
}


profile xfce4-session.xflock4 /usr/bin/xflock4 flags=(complain) {
  #include <abstractions/base>
  
  /dev/tty rw,
  
  /usr/bin/xflock4 r,
  /bin/bash r,
  /usr/bin/mate-screensaver-command Px,
  
}


profile xfce4-session.startxfce4 /usr/bin/startxfce4 flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/X>
  
  /dev/tty rw,
  
  /usr/bin/startxfce4 r,
  /bin/bash r,
  /usr/bin/xinit Px,
  
}
