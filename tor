#include <local/tunables.d/>

profile tor /usr/bin/tor {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  capability mknod,
  capability net_bind_service,
  
  # SIGNAL ---------------------------------------------
  signal (receive) set=(int) peer="tor.init.d",
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  @{sys}/devices/system/cpu/				r,
  @{PROC}/sys/kernel/random/uuid			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/tor						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/tor/{,*}						r,
  /usr/share/tor/**					r,
  /var/lib/tor/**/					rw,
  /var/lib/tor/{,**/}*					rwk,
  /run/tor/{,tor.pid}					rw,
}

profile tor.init.d /etc/init.d/tor flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  capability fowner,
  capability fsetid,
  capability chown,
  capability sys_resource,
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(int) peer="tor",
  
  # PSEUDO ---------------------------------------------
  @{sys}/fs/cgroup/openrc/tor/tasks			w,
  @{sys}/fs/cgroup/unified/tor/cgroup.procs		w,
  @{sys}/fs/cgroup/unified/tor/cgroup.events		r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/tor						Px,
  @{shell}						Cx,
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/tor				r,
  /run/tor/						w,
  /run/tor/tor.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{sys}/fs/cgroup/{openrc,unified}/tor/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{sys}/fs/cgroup/unified/tor/cgroup.procs		r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{sys}/fs/cgroup/unified/tor/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
