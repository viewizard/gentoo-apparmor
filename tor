#include <tunables/global>
profile tor /usr/bin/tor {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability setgid,
  capability setuid,
  capability net_bind_service,
  
  /dev/pts/[0-9]* rw,
  /sys/devices/system/cpu/ r,
  @{PROC}/sys/kernel/random/uuid r,
  
  /usr/bin/tor r,
  
  /etc/tor/{,*} r,
  
  /usr/share/tor/** r,
  /var/lib/tor/** rwk,
  /run/tor/{,tor.pid} rw,
  
}

profile tor.init.d /etc/init.d/tor {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  capability fowner,
  capability fsetid,
  capability sys_resource,
  
  /usr/bin/tor Px,
  /bin/bash Cx -> shell,
  
  /etc/{conf,init}.d/tor r,
  
  /run/tor/ w,
  /run/tor/tor.pid rwk,
  
  
  profile shell {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /lib64/rc/sh/gendepends.sh Px,
    
  }
  
}
