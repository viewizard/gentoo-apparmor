#include <tunables/global>

profile tor /usr/bin/tor {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  capability mknod,
  capability net_bind_service,
  
  # SIGNAL ---------------------------------------------
  signal (receive) set=(int) peer="tor.init.d",
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /sys/devices/system/cpu/				r,
  @{PROC}/sys/kernel/random/uuid			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/tor						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/tor/{,*}						r,
  /usr/share/tor/**					r,
  /var/lib/tor/**					rwk,
  /run/tor/{,tor.pid}					rw,
}

profile tor.init.d /etc/init.d/tor {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability fowner,
  capability fsetid,
  capability sys_resource,
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(int) peer="tor",
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/tor						Px,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/tor				r,
  /run/tor/						w,
  /run/tor/tor.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}
