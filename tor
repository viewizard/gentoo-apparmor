#include <tunables/global>
profile tor /usr/bin/tor {
  #include <abstractions/base>
  #include <abstractions/nameservice>

  capability setgid,
  capability setuid,
  capability net_bind_service,
  
  /dev/pts/[0-9]* rw,
  @{PROC}/sys/kernel/random/uuid r,
  /sys/devices/system/cpu/ r,

  /etc/tor/ r,
  /etc/tor/* r,
  
  /usr/share/tor/** r,
  /var/lib/tor/** rwk,
  /run/tor/ rw,
  /run/tor/tor.pid rw,
  
}
