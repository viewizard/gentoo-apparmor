#include <local/tunables.d/>

profile iproute2.ip /bin/ip {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability net_admin,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/ip						mr,
}

profile iproute2.ifcfg /sbin/ifcfg {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /sbin/ifcfg						r,
  @{shell}						mr,
}

profile iproute2.ifstat /sbin/ifstat {
  #include <abstractions/base>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/uptime					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/ifstat						mr,
  
  # TEMP -----------------------------------------------
  owner /tmp/.ifstat.*					rwk,
}

