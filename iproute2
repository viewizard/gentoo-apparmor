#include <tunables/global>

profile iproute2.ip /bin/ip {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability net_admin,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/ip						mr,
}
