#include <local/tunables.d/>

# IMPROVE! Скрипт запуска для управления доступом к интернету.
# Когда будет реализована работа с портами - убрать.
profile chromium.start_script /usr/bin/chromium{,-browser} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/chromium{,-browser}				r,
  @{shell}						mr,
  /usr/bin/id						Px,	# sys-apps/coreutils
  /usr/bin/newgrp					Px,	# sys-apps/shadow
  /usr/lib{,32,64}/chromium-browser/chromium-launcher.sh Px,
}

profile chromium.chromium-launcher.sh /usr/lib{,32,64}/chromium-browser/chromium-launcher.sh {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/chromium-browser/chromium-launcher.sh r,
  @{shell}						mr,
  /bin/readlink						Cx,	# sys-apps/coreutils
  /usr/lib{,32,64}/chromium-browser/chrome		Px,
  
  # READS/WRITES ---------------------------------------
  /etc/chromium/{,**}					r,
  
  profile readlink /bin/readlink {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/readlink					mr,
  }
}

profile chromium.chrome /usr/lib{,32,64}/chromium-browser/chrome flags=(attach_disconnected) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/camera>
  #include <abstractions/cups-client>
  #include <abstractions/gtk>
  #include <abstractions/dconf>
  #include <abstractions/nameservice>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/fs/access-by-pattern-internet>
  #include <abstractions/fs/access-strict>
  #include <abstractions/unix/gvfsd-trash>
  #include <abstractions/unix/gvfsd-network>
  #include <abstractions/xdg-open>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/gnome-keyring>
  #include <abstractions/dbus/upower>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_chroot,
  
  # UNIX ------------------------------------------
  unix (send, receive)
  	type=seqpacket
  	peer=(label="chromium.chrome//chrome-sandbox"),
  unix (send, receive)
  	type=stream
  	peer=(label="chromium.chrome//chrome-sandbox"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PTRACE ---------------------------------------------
  ptrace (trace) peer=@{profile_name},
  ptrace (trace) peer="chromium.start_script",
  deny ptrace (trace) peer="xdg-utils.xdg-settings",		# x11-misc/xdg-utils
  deny ptrace (trace) peer="lsb-release",			# sys-apps/lsb-release
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner /dev/shm/.org.chromium.Chromium.@{TMP6}		rw,	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  @{sys}/bus/{,**}					r,
  @{sys}/class/{,**}					r,
  @{sys}/devices/system/cpu/				r,
  @{sys}/devices/system/cpu/cpu[0-9]*/cpufreq/cpuinfo_max_freq r,
  @{sys}/devices/system/cpu/cpufreq/policy[0-9]*/cpuinfo_max_freq r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/{device,class,irq,resource,vendor} r,
  @{sys}/devices/pci@{PCI2}/**/@{PCI4}/{device,class,irq,resource,vendor} r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/@{USB2}/	r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/@{USB2}/@{USB4}/{,**} r,
  audit @{sys}/devices/pci@{PCI2}/**/{removable,uevent}	r,	# FIX ME! audit 28.11.2017
  audit @{sys}/devices/pci@{PCI2}/**/block/**/size	r,	# FIX ME! audit 28.11.2017
  @{sys}/devices/virtual/block/**/{removable,uevent,size} r,
  @{sys}/devices/virtual/tty/tty[0-9]*/active		r,
  @{PROC}/						r,
  @{PROC}/filesystems					r,
  @{PROC}/vmstat					r,
  @{PROC}/sys/kernel/shmmax				r,
  @{PROC}/sys/net/ipv4/tcp_fastopen			r,
  @{PROC}/@{pids}/stat					r,
  owner @{PROC}/@{pids}/task/				r,
  @{PROC}/@{pids}/task/@{pids}/{stat,status}		r,
  audit @{PROC}/@{pid}/{sched,smaps,statm}		r,	# FIX ME! @{pid}/@{pids} audit 17.10.2017
  owner @{PROC}/@{pid}/io				r,
  audit @{PROC}/@{pid}/net/if_inet6			r,	# FIX ME! @{pid}/@{pids} audit 17.10.2017
  audit @{PROC}/@{pid}/net/ipv6_route			r,	# FIX ME! @{pid}/@{pids} audit 17.10.2017
  audit owner @{PROC}/@{pid}/auxv			r,	# FIX ME! @{pid}/@{pids} audit 17.10.2017
  audit @{PROC}/@{pid}/setgroups			rw,	# FIX ME! @{pid}/@{pids} audit 17.10.2017
  audit @{PROC}/@{pid}/uid_map				rw,	# FIX ME! @{pid}/@{pids} audit 17.10.2017
  audit @{PROC}/@{pid}/gid_map				rw,	# FIX ME! @{pid}/@{pids} audit 17.10.2017
  deny @{PROC}/@{pids}/oom_{,score_}adj			w,
  
  # EXECUTABLES ----------------------------------------
  /bin/ps						Px,	# sys-process/procps
  /usr/bin/xdg-settings					Px,	# x11-misc/xdg-utils
  /usr/bin/lsb_release					Px,	# sys-apps/lsb-release
  /usr/bin/gvfs-open					Px,	# gnome-base/gvfs
  # Allow transitions to ourself and our sandbox
  /usr/bin/chromium{,-browser}				Px,
  /usr/lib{,32,64}/chromium-browser/chrome		ixmr,
  /usr/lib{,32,64}/chromium-browser/chromium-launcher.sh Px,
  /usr/lib{,32,64}/chromium-browser/chrome-sandbox	cx,
  
  # READS/WRITES ---------------------------------------
  /etc/chromium/{,**}					r,
  /etc/udev/udev.conf					r,	# sys-fs/eudev
  /etc/mime.types					r,	# app-misc/mime-types
  /etc/mtab						r,
  # chromium mmaps all kinds of things for speed.
  /etc/passwd						m,
  /usr/share/fonts/truetype/**/*.tt[cf]			m,
  /usr/share/fonts/**/*.pfb				m,
  /usr/share/mime/mime.cache				m,
  /usr/share/icons/**/*.cache				m,
  /usr/lib{,32,64}/chromium-browser/*.pak		mr,
  /usr/lib{,32,64}/chromium-browser/locales/*		mr,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.pki/nssdb/*				rwk,
  owner @{HOME_CACHE}/chromium/{,**}			rw,
  owner @{HOME_CACHE}/chromium/Cache/*			m,
  owner @{HOME}/.config/chromium/{,**/}			rw,
  owner @{HOME}/.config/chromium/{,**/}*		rwk,
  owner @{HOME}/.config/chromium/**/Cache/*		m,
  owner @{HOME}/.config/chromium/Dictionaries/*.bdic	m,
  owner @{HOME}/.config/chromium/**/Dictionaries/*.bdic	m,
  owner @{HOME}/.local/share/mime/mime.cache		m,
  audit owner @{HOME}/.local/share/.org.chromium.Chromium.* rw,	# FIX ME! audit 6.12.2017
  
  # TEMP -----------------------------------------------
  /tmp/							r,
  /tmp/.org.chromium.Chromium.@{TMP6}{,/,/**}		rw,
  owner /tmp/scoped_dir@{TMP6}/{,**}			rw,
  /var/tmp/						r,
  owner /var/tmp/@{TMP_SQLITE}				rw,
  
  # NOISY ----------------------------------------------
  deny /dev/bus/usb/					r,
  deny /usr/lib{,32,64}/chromium-browser/**		w,
  deny @{HOME}/.mozilla/{,**}				r,	# www-client/firefox
  
  profile chrome-sandbox /usr/lib{,32,64}/chromium-browser/chrome-sandbox {
    # Be fanatical since it is setuid root and don't use an abstraction
    /lib/libgcc_s.so*					mr,
    /lib{,32,64}/libm-*.so*				mr,
    /lib{,32,64}/libpthread-*.so*			mr,
    /lib{,32,64}/libc-*.so*				mr,
    /lib{,32,64}/libld-*.so*				mr,
    /lib{,32,64}/ld-*.so*				mr,
    /etc/ld.so.cache					r,
    
    # CAPABILITIES -------------------------------------
    # Required for dropping into PID namespace. Keep in mind that until the
    # process drops this capability it can escape confinement, but once it
    # drops CAP_SYS_ADMIN we are ok.
    capability sys_admin,
    # All of these are for sanely dropping from root and chrooting
    capability chown,
    capability fsetid,
    capability setgid,
    capability setuid,
    capability dac_override,
    capability sys_chroot,
    capability sys_ptrace,
    
    # PTRACE -------------------------------------------
    ptrace (read, readby, tracedby),
    
    # SIGNAL -------------------------------------------
    signal peer=@{profile_name},
    signal (receive, send) set=("exists"),
    signal (receive) peer="chromium.chrome",
    
    # UNIX ---------------------------------------------
    unix (create, shutdown)
    		type=stream,
    unix (send, receive)
    		type=stream
    		peer=(label=@{profile_name}),
    unix (send, receive)
    		type=stream
    		peer=(label="chromium.chrome"),
    unix (send, receive)
    		type=seqpacket
    		peer=(label="chromium.chrome"),
    
    # PSEUDO -------------------------------------------
    /dev/null						rw,
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    @{PROC}/						r,
    @{PROC}/@{pids}/					r,
    audit @{PROC}/@{pid}/fd/				r,	# FIX ME! @{pid}/@{pids} audit 17.10.2017
    audit @{PROC}/@{pid}/status				r,	# FIX ME! @{pid}/@{pids} audit 17.10.2017
    audit @{PROC}/@{pid}/task/@{pid}/stat		r,	# FIX ME! @{pid}/@{pids} audit 17.10.2017
    deny @{PROC}/@{pids}/oom_{,score_}adj		w,
    
    # EXECUTABLES --------------------------------------
    /usr/lib{,32,64}/chromium-browser/chrome-sandbox	mr,
    /usr/lib{,32,64}/chromium-browser/chrome		Px,
  }
}
