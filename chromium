#include <tunables/global>

# FIX ME! Скрипт запуска для управления доступом к интернету
profile chromium.start_script /usr/bin/chromium{,-browser} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/chromium{,-browser}				r,
  @{shell}						mr,
  /usr/bin/id						Px,
  /usr/bin/newgrp					Px,
  /usr/lib{,32,64}/chromium-browser/chromium-launcher.sh Px,
}

profile chromium.chromium-launcher.sh /usr/lib{,32,64}/chromium-browser/chromium-launcher.sh {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/chromium-browser/chromium-launcher.sh r,
  @{shell}						mr,
  /bin/readlink						Cx,	# FS ACCESS! readlink
  /usr/lib{,32,64}/chromium-browser/chrome		Px,
  
  # READS/WRITES ---------------------------------------
  /etc/chromium/{,**}					r,
  
  profile readlink /bin/readlink {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/readlink					mr,
  }
}

profile chromium.chrome /usr/lib{,32,64}/chromium-browser/chrome flags=(attach_disconnected) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/camera>
  #include <abstractions/cups-client>
  #include <abstractions/gtk>
  #include <abstractions/nameservice>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/fs-access-by-pattern-internet>
  #include <abstractions/xdg-open>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/dbus-pattern/gnome-keyring>
  #include <abstractions/dbus-pattern/upower>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_chroot,
  
  # UNIX ------------------------------------------
  unix (send, receive)
  	type=seqpacket
  	peer=(label="chromium.chrome//chrome-sandbox"),
  unix (send, receive)
  	type=stream
  	peer=(label="chromium.chrome//chrome-sandbox"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PTRACE ---------------------------------------------
  ptrace (trace) peer=@{profile_name},
  ptrace (trace) peer="chromium.start_script",
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner /dev/shm/.org.chromium.Chromium.??????		rw,
  /sys/bus/{,**}					r,
  /sys/class/{,**}					r,
  /sys/devices/system/cpu/				r,
  /sys/devices/system/cpu/cpu*/cpufreq/cpuinfo_max_freq	r,
  /sys/devices/system/cpu/cpufreq/policy*/cpuinfo_max_freq r,
  /sys/devices/pci[0-9]*/**/{class,device,irq,resource,vendor,removable,uevent} r,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/**		r,
  /sys/devices/pci[0-9]*/**/block/**/size		r,
  /sys/devices/virtual/block/**/{removable,uevent,size}	r,
  /sys/devices/virtual/tty/tty[0-9]*/active		r,
  @{PROC}/						r,
  @{PROC}/filesystems					r,
  @{PROC}/sys/kernel/shmmax				r,
  @{PROC}/@{pid}/{sched,smaps,statm,stat}		r,
  @{PROC}/@{pid}/task/					r,
  @{PROC}/@{pid}/task/@{pid}/{stat,status}		r,
  owner @{PROC}/@{pid}/io				r,
  @{PROC}/@{pid}/net/if_inet6				r,
  @{PROC}/@{pid}/net/ipv6_route				r,
  @{PROC}/sys/net/ipv4/tcp_fastopen			r,
  owner @{PROC}/@{pid}/auxv				r,
  @{PROC}/@{pid}/setgroups				rw,
  @{PROC}/@{pid}/uid_map				rw,
  @{PROC}/@{pid}/gid_map				rw,
  
  # AUDIT PSEUDO ---------------------------------------
  deny @{PROC}/@{pid}/oom_{,score_}adj			w,
  
  # EXECUTABLES ----------------------------------------
  /bin/ps						Pxr,
  /usr/bin/xdg-settings					Pxr,
  /usr/bin/lsb_release					Pxr,
  /usr/bin/gvfs-open					Pxr,
  # Allow transitions to ourself and our sandbox
  /usr/bin/chromium{,-browser}				Px,
  /usr/lib{,32,64}/chromium-browser/chrome		ixmr,
  /usr/lib{,32,64}/chromium-browser/chromium-launcher.sh Px,
  /usr/lib{,32,64}/chromium-browser/chrome-sandbox	cx,
  
  # READS/WRITES ---------------------------------------
  /etc/chromium/{,**}					r,
  /etc/udev/udev.conf					r,
  /etc/mime.types					r,
  /etc/mtab						r,
  # chromium mmaps all kinds of things for speed.
  /etc/passwd						m,
  /usr/share/fonts/truetype/**/*.tt[cf]			m,
  /usr/share/fonts/**/*.pfb				m,
  /usr/share/mime/mime.cache				m,
  /usr/share/icons/**/*.cache				m,
  /usr/lib{,32,64}/chromium-browser/*.pak		mr,
  /usr/lib{,32,64}/chromium-browser/locales/*		mr,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.pki/nssdb/*				rwk,
  owner @{HOME_CACHE}/chromium/{,**}			rw,
  owner @{HOME_CACHE}/chromium/Cache/*			m,
  owner @{HOME}/.config/chromium/			rw,
  owner @{HOME}/.config/chromium/**			rwk,
  owner @{HOME}/.config/chromium/**/Cache/*		m,
  owner @{HOME}/.config/chromium/Dictionaries/*.bdic	m,
  owner @{HOME}/.config/chromium/**/Dictionaries/*.bdic	m,
  owner @{HOME}/.local/share/mime/mime.cache		m,
  
  # TEMP -----------------------------------------------
  /tmp/							r,
  /tmp/.org.chromium.Chromium.??????{,/,/**}	rw,
  owner /tmp/scoped_dir_**				rw,
  /var/tmp/						r,
  owner /var/tmp/etilqs_*				rw,
  
  # NOISY ----------------------------------------------
  deny /dev/bus/usb/					r,
  deny /usr/lib{,32,64}/chromium-browser/**		w,
  deny owner @{HOME}/.mozilla/{,**}			r,
  
  profile chrome-sandbox /usr/lib{,32,64}/chromium-browser/chrome-sandbox {
    # Be fanatical since it is setuid root and don't use an abstraction
    /lib/libgcc_s.so*					mr,
    /lib{,32,64}/libm-*.so*				mr,
    /lib{,32,64}/libpthread-*.so*			mr,
    /lib{,32,64}/libc-*.so*				mr,
    /lib{,32,64}/libld-*.so*				mr,
    /lib{,32,64}/ld-*.so*				mr,
    /etc/ld.so.cache					r,
    
    # CAPABILITIES -------------------------------------
    # Required for dropping into PID namespace. Keep in mind that until the
    # process drops this capability it can escape confinement, but once it
    # drops CAP_SYS_ADMIN we are ok.
    capability sys_admin,
    # All of these are for sanely dropping from root and chrooting
    capability chown,
    capability fsetid,
    capability setgid,
    capability setuid,
    capability dac_override,
    capability sys_chroot,
    capability sys_ptrace,
    
    # PTRACE -------------------------------------------
    ptrace (read, readby, tracedby),
    
    # SIGNAL -------------------------------------------
    signal peer=@{profile_name},
    signal (receive, send) set=("exists"),
    signal (receive) peer="chromium.chrome",
    
    # UNIX ---------------------------------------------
    unix (create, shutdown)
    		type=stream,
    unix (send, receive)
    		type=stream
    		peer=(label=@{profile_name}),
    unix (send, receive)
    		type=stream
    		peer=(label="chromium.chrome"),
    unix (send, receive)
    		type=seqpacket
    		peer=(label="chromium.chrome"),
    
    # PSEUDO -------------------------------------------
    /dev/null						rw,
    /dev/tty[0-9]*					rw,
    @{PROC}/						r,
    @{PROC}/@{pid}/					r,
    @{PROC}/@{pid}/fd/					r,
    @{PROC}/@{pid}/status				r,
    @{PROC}/@{pid}/task/@{pid}/stat			r,
    
    # AUDIT PSEUDO -------------------------------------
    deny @{PROC}/@{pid}/oom_{,score_}adj		w,
    
    # EXECUTABLES --------------------------------------
    /usr/lib{,32,64}/chromium-browser/chrome-sandbox	mr,
    /usr/lib{,32,64}/chromium-browser/chrome		Px,
  }
}
