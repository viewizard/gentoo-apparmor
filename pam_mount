#include <tunables/global>
profile pam_mount.pmvarrun /usr/sbin/pmvarrun {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  capability chown,
  capability dac_override,
  capability fsetid,
  
  /usr/sbin/pmvarrun r,
  
  /run/pam_mount/ w,
  
}
