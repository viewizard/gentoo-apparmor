#include <tunables/global>

profile pam_mount.pmvarrun /usr/sbin/pmvarrun {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability chown,
  capability dac_override,
  capability fsetid,
  
  # UNIX -----------------------------------------------
  unix (send, receive)
  			type=stream
  			peer=(label="sudo"),			# sudo
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/pmvarrun					mr,
  
  # READS/WRITES ---------------------------------------
  /run/pam_mount/					w,
}

profile pam_mount_mount {
  #include <abstractions/base>
  #include <local/mount/pam_mount.d/>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability dac_override,
  
  # EXECUTABLES ----------------------------------------
  /bin/mount						mr,
  
  # READS/WRITES ---------------------------------------
  /run/mount/utab					rw,
}

profile pam_mount_umount {
  #include <abstractions/base>
  #include <local/mount/pam_mount.d/>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/umount						mr,
  
  # READS/WRITES ---------------------------------------
  /run/mount/utab					rw,
}
