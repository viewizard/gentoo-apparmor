#include <local/tunables.d/>

profile suricata /usr/bin/suricata {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  capability setpcap,
  capability net_admin,
  capability dac_read_search,
  capability dac_override,
  capability sys_module,
  capability sys_nice,
  capability net_raw,
  capability mknod,
  
  # SIGNAL ---------------------------------------------
  signal (receive) set=(usr2) peer="suricata.init.d",
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /sys/devices/system/cpu/				r,
  audit @{PROC}/@{pid}/net/dev				r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/suricata					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/suricata/{,**}					r,
  /usr/share/misc/magic.mgc				r,	# sys-apps/file
  /var/lib/suricata/**					rwk,
  /run/suricata/suricata.pid				rw,
  
  # TEMP -----------------------------------------------
  /tmp/							r,
  /var/tmp/						r,
}

profile suricata.init.d /etc/init.d/suricata flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  capability dac_override,
  capability dac_read_search,
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(usr2) peer="suricata",
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/suricata/tasks			w,
  /sys/fs/cgroup/unified/suricata/cgroup.procs		w,
  /sys/fs/cgroup/unified/suricata/cgroup.events		r,
  audit @{PROC}/@{pid}/cmdline				r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/ps						Px,	# sys-process/procps
  audit /bin/sleep					Px,	# sys-apps/coreutils	# FIX ME! audit 18.11.2017
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  /usr/bin/suricata					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/suricata/{,**}					r,
  /etc/{conf,init}.d/suricata				r,
  /run/suricata/					rw,
  /run/suricata/suricata.pid				rwk,
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/oinkmaster.cron.*				w,	# oinkmaster.cron.daily
  
  profile shell @{shell} flags=(attach_disconnected) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # READS/WRITES -------------------------------------
    /run/suricata/suricata.pid				r,
  }
  
  profile mkdir /bin/mkdir flags=(attach_disconnected) {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/{openrc,unified}/suricata/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected), перезапуск из oinkmaster скрипта
  }
  
  profile grep /bin/grep flags=(attach_disconnected) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/suricata/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected), перезапуск из oinkmaster скрипта
  }
  
  profile rmdir /bin/rmdir flags=(attach_disconnected) {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/suricata/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected), перезапуск из oinkmaster скрипта
  }
}
