#include <tunables/global>
profile suricata /usr/bin/suricata {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability setgid,
  capability setuid,
  capability setpcap,
  capability net_admin,
  capability dac_read_search,
  capability dac_override,
  capability sys_module,
  capability sys_nice,
  capability net_raw,
  
  /sys/devices/system/cpu/ r,
  @{PROC}/@{pid}/net/dev r,
  
  /usr/bin/suricata mr,
  
  /etc/suricata/{,**} r,
  /usr/share/misc/magic.mgc r,
  
  /var/lib/suricata/** rwk,
  /run/suricata.pid rw,
  
  /tmp/ r,
  /var/tmp/ r,
  
}


profile suricata.init.d /etc/init.d/suricata flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  capability dac_override,
  capability dac_read_search,
  
  @{PROC}/@{pid}/cmdline r,
  
  /bin/bash Cx -> shell,
  /bin/sed ixr,
  /bin/cat ixr,
  /bin/ps Pxr,
  /bin/sleep ixr,
  /usr/sbin/ethtool Px,
  /usr/bin/suricata Px,
  /etc/init.d/modules-load Px,
  
  /etc/suricata/{,**} r,
  /etc/init.d/suricata r,
  
  /run/suricata.pid rwk,
  /run/sed* rw,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
    
  }
  
}
