#include <tunables/global>
profile suricata /usr/bin/suricata {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>

  capability setgid,
  capability setuid,
  capability setpcap,
  capability net_admin,
  capability dac_read_search,
  capability dac_override,
  capability sys_module,
  capability sys_nice,
  capability net_raw,
  
  /sys/devices/system/cpu/ r,
  @{PROC}/@{pid}/net/dev r,
  
  /usr/bin/suricata r,

  /etc/suricata/ r,
  /etc/suricata/** r,
  /usr/share/misc/magic.mgc r,
  
  /var/lib/suricata/** rwk,
  /run/suricata.pid rw,
  
}


profile suricata.init.d /etc/init.d/suricata flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  #include <abstractions/user-tmp>
  
  /usr/sbin/ethtool Px,
  /usr/bin/suricata Px,
  
  /etc/suricata/ r,
  /etc/suricata/** r,
  /etc/init.d/suricata r,
  
  /run/suricata.pid rwk,
  
}
