#include <tunables/global>
profile suricata /usr/bin/suricata {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability setgid,
  capability setuid,
  capability setpcap,
  capability net_admin,
  capability dac_read_search,
  capability dac_override,
  capability sys_module,
  capability sys_nice,
  capability net_raw,
  
  /sys/devices/system/cpu/ r,
  @{PROC}/@{pid}/net/dev r,
  
  /usr/bin/suricata mr,
  
  /etc/suricata/{,**} r,
  /usr/share/misc/magic.mgc r,
  
  /var/lib/suricata/** rwk,
  /run/suricata/suricata.pid rw,
  
  /tmp/ r,
  /var/tmp/ r,
  
}


profile suricata.init.d /etc/init.d/suricata {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  capability dac_override,
  capability dac_read_search,
  
  @{PROC}/@{pid}/cmdline r,
  
  /bin/bash Cx -> shell,
  /bin/cat ixr,
  /bin/ps Pxr,
  /bin/sleep ixr,
  /bin/grep ixr,
  /usr/bin/suricata Px,
  
  /etc/suricata/{,**} r,
  /etc/{conf,init}.d/suricata r,
  
  /run/suricata/ rw,
  /run/suricata/suricata.pid rwk,
  
  owner /tmp/oinkmaster.cron.?????? w,
  
  
  profile shell {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
    
  }
  
}
