#include <tunables/global>

profile suricata /usr/bin/suricata {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  capability setpcap,
  capability net_admin,
  capability dac_read_search,
  capability dac_override,
  capability sys_module,
  capability sys_nice,
  capability net_raw,
  
  # PSEUDO ---------------------------------------------
  /sys/devices/system/cpu/				r,
  @{PROC}/@{pid}/net/dev				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/suricata					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/suricata/{,**}					r,
  /usr/share/misc/magic.mgc				r,
  /var/lib/suricata/**					rwk,
  /run/suricata/suricata.pid				rw,
  
  # TEMP -----------------------------------------------
  /tmp/							r,
  /var/tmp/						r,
}

profile suricata.init.d /etc/init.d/suricata {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/cat						ixr,
  /bin/ps						Pxr,
  /bin/sleep						Pxr,
  /bin/grep						ixr,
  /usr/bin/suricata					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/suricata/{,**}					r,
  /etc/{conf,init}.d/suricata				r,
  /run/suricata/					rw,
  /run/suricata/suricata.pid				rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/oinkmaster.cron.??????			w,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}
