#include <tunables/global>

profile consolekit.ck-history /usr/bin/ck-history {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/ck-history					mr,
  
  # READS/WRITES ---------------------------------------
  /var/log/ConsoleKit/history				r,
}

profile consolekit.ck-launch-session /usr/bin/ck-launch-session {
  #include <abstractions/base>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-pattern/consolekit>
  #include <abstractions/nameservice>
  #include <abstractions/X-connection-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/ck-launch-session				mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/X11/Sessions/{,*}				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /etc/X11/Sessions/Xfce4				r,	# XFCE4
    /usr/bin/startxfce4					Px,	# XFCE4
  }
}

profile consolekit.ck-list-sessions /usr/bin/ck-list-sessions {
  #include <abstractions/base>
