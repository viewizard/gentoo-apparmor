profile consolekit.pam-foreground-compat.ck /usr/lib{,32,64}/ConsoleKit/run-session.d/pam-foreground-compat.ck {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/ConsoleKit/run-session.d/pam-foreground-compat.ck r,
  @{shell}						mr,
  /bin/cut						Cx,	# FS ACCESS! cut
  /bin/sed						Cx,	# FS ACCESS! sed
  /bin/mkdir						Cx,	# FS ACCESS! mkdir
  /bin/rm						Cx,	# FS ACCESS! rm
  /usr/bin/getent					Px,
  
  # READS/WRITES ---------------------------------------
  /run/ConsoleKit/{,**}					rw,
  /run/console/{,*}					w,
  
  profile cut /bin/cut {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cut						mr,
  }
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
    
    # READS/WRITES -------------------------------------
    /run/ConsoleKit/{,**}				rw,
    /run/console/{,*}					rw,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
    
    # READS/WRITES -------------------------------------
    /run/console/					w,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # READS/WRITES -------------------------------------
    /run/console/{,*}					w,
  }
}

profile consolekit.init.d /etc/init.d/consolekit {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/consolekit/tasks		w,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/console-kit-daemon				Px,
  @{shell}						Cx,
  /bin/mkdir						Cx,	# FS ACCESS! mkdir
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/consolekit				r,
  /run/ConsoleKit/					w,
  /run/ConsoleKit/pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/openrc/consolekit/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
}
