profile consolekit.console-kit-daemon /usr/sbin/console-kit-daemon {
  #include <abstractions/base>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-pattern/polkit>
  #include <abstractions/dbus-pattern/system-bind>
  #include <abstractions/nameservice>
  #include <abstractions/X-connection-strict>
  
  # CAPABILITIES ---------------------------------------
  capability sys_tty_config,
  capability sys_ptrace,
  capability sys_admin,
  capability chown,
  capability mknod,
  capability setgid,
  capability setuid,
  capability dac_read_search,
  capability dac_override,
  
  # MOUNT ----------------------------------------------
  mount fstype=tmpfs -> /run/user/[0-9]*/,
  umount /run/user/[0-9]*/,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),						# FIX ME!
  
  # DBUS -----------------------------------------------
  dbus send
	bus=system
	path="/org/freedesktop/DBus/Bus"
	interface="org.freedesktop.DBus"
	member={GetConnectionUnixUser,GetConnectionUnixProcessID}
	peer=(name="org.freedesktop.DBus",label="dbus.dbus-daemon"),
  dbus send
	bus=system
	path="/org/freedesktop/ConsoleKit/Manager"
	interface="org.freedesktop.ConsoleKit.Manager"
	peer=(name="org.freedesktop.DBus"),
  dbus send
	bus=system
	path="/org/freedesktop/ConsoleKit/Seat[0-9]*"
	interface="org.freedesktop.ConsoleKit.Seat"
	peer=(name="org.freedesktop.DBus"),
  dbus receive
	bus=system
	path="/org/freedesktop/ConsoleKit/Manager"
	interface="org.freedesktop.ConsoleKit.Manager"
	peer=(name=":[0-9]*.[0-9]*"),
  dbus receive
	bus=system
	path="/org/freedesktop/ConsoleKit/Manager"
	interface="org.freedesktop.ConsoleKit.Manager"
	member=GetSessionForUnixProcess
	peer=(name=":[0-9]*.[0-9]*",label="{polkit.polkitd,polkit-gnome}"),
  dbus receive
	bus=system
	path="/org/freedesktop/ConsoleKit/Session[0-9]*"
	interface="org.freedesktop.ConsoleKit.Session"
	peer=(name=":[0-9]*.[0-9]*"),
  
  # PSEUDO ---------------------------------------------
  /dev/tty{,[0-9]*}					rw,
  /dev/pts/[0-9]*					rw,
  /dev/console						rw,
  audit /sys/power/state				r,	# FIX ME! 10.05.2017 /usr/bin/pm-is-supported -> Px ?
  /sys/devices/virtual/tty/tty*/active			r,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/@{pid}/stat					r,
  @{PROC}/tty/drivers					r,
  @{PROC}/@{pid}/environ				r,
  @{PROC}/@{pid}/sessionid				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/console-kit-daemon				mr,
  audit /bin/grep					ix,	# FIX ME! 10.05.2017 /usr/bin/pm-is-supported -> Px ?
  audit @{shell}					mr,	# FIX ME! 10.05.2017 /usr/bin/pm-is-supported -> Px ?
  audit /bin/tr						Px,	# FIX ME! 10.05.2017 /usr/bin/pm-is-supported -> Px ?
  /bin/cut						ix,
  /bin/mkdir						ix,
  /bin/sed						ix,
  /bin/rm						ix,
  /sbin/shutdown					Pxr,
  /usr/bin/getent					ix,
  /usr/bin/pm-is-supported				Pxr,
  /usr/lib{,32,64}/ConsoleKit/**			Pix,
  
  # READS/WRITES ---------------------------------------
  /etc/ConsoleKit/{,**}					r,
  audit /etc/pm/config.d/{,**}				r,	# FIX ME! 10.05.2017 /usr/bin/pm-is-supported -> Px ?
  /run/ConsoleKit/{,**}					rw,
  /run/user/{,**}					rw,
  /run/console/{,*}					rw,
  /var/log/ConsoleKit/					r,
  /var/log/ConsoleKit/**				rw,
}

profile consolekit.udev-acl /usr/lib{,32,64}/ConsoleKit/udev-acl {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /sys/devices/**/uevent				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/ConsoleKit/udev-acl			m,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /run/udev/tags/udev-acl/				r,
  /run/ConsoleKit/database				r,
}

profile consolekit.init.d /etc/init.d/consolekit {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/console-kit-daemon				Px,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/consolekit				r,
  /run/ConsoleKit/					w,
  /run/ConsoleKit/pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
}
