#include <tunables/global>
profile consolekit.ck-history /usr/bin/ck-history flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  /dev/pts/[0-9]* rw,
  
  /usr/bin/ck-history mr,
  
  /var/log/ConsoleKit/history r,
  
}

profile consolekit.ck-launch-session /usr/bin/ck-launch-session flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/dbus-session>
  #include <abstractions/nameservice>
  
  /usr/bin/ck-launch-session mr,
  /bin/bash Cx -> shell,
  
  /etc/X11/Sessions/{,*} r,
  
  owner @{HOME}/.Xauthority r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash mr,
    /etc/X11/Sessions/Xfce4 r,
    /usr/bin/startxfce4 Px,
    
  }
  
}

profile consolekit.ck-list-sessions /usr/bin/ck-list-sessions flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  /dev/pts/[0-9]* rw,
  
  /usr/bin/ck-list-sessions mr,
  
}

profile consolekit.ck-log-system-restart /usr/sbin/ck-log-system-restart flags=(complain) {
  #include <abstractions/base>
  
  /usr/sbin/ck-log-system-restart mr,
  
}

profile consolekit.ck-log-system-start /usr/sbin/ck-log-system-start flags=(complain) {
  #include <abstractions/base>
  
  /usr/sbin/ck-log-system-start mr,
  
}

profile consolekit.ck-log-system-stop /usr/sbin/ck-log-system-stop flags=(complain) {
  #include <abstractions/base>
  
  /usr/sbin/ck-log-system-stop mr,
}

profile consolekit.console-kit-daemon /usr/sbin/console-kit-daemon {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability sys_tty_config,
  capability sys_ptrace,
  capability sys_admin,
  capability chown,
  capability setgid,
  capability setuid,
  capability dac_read_search,
  capability dac_override,
  
  /dev/tty{,[0-9]*} rw,
  /sys/power/state r,
  /sys/devices/virtual/tty/tty*/active r,
  @{PROC}/@{pid}/fd/ r,
  @{PROC}/@{pid}/stat r,
  @{PROC}/tty/drivers r,
  @{PROC}/@{pid}/environ r,
  @{PROC}/@{pid}/sessionid r,
  
  /usr/sbin/console-kit-daemon mr,
  /usr/lib{,32,64}/ConsoleKit/** Pix,
  /usr/bin/pm-is-supported ixr,
  /bin/grep ix,
  /bin/bash mr,
  /bin/tr ix,
  /bin/cut ix,
  /usr/bin/getent ix,
  /bin/mkdir ix,
  /bin/sed ix,
  /bin/rm ix,
  /sbin/shutdown Pxr,
  
  /etc/ConsoleKit/{,**} r,
  /etc/pm/config.d/{,**} r,
  
  /run/ConsoleKit/{,*} rw,
  /run/user/{,**} rw,
  /run/console/{,*} rw,
  
  /var/log/ConsoleKit/ r,
  /var/log/ConsoleKit/** rw,
  
  owner @{HOME}/.Xauthority r,
  
}

profile consolekit.udev-acl /usr/lib{,32,64}/ConsoleKit/udev-acl {
  #include <abstractions/base>
  
  capability dac_override,
  capability dac_read_search,
  
  /sys/devices/**/uevent r,
  
  /usr/lib{,32,64}/ConsoleKit/udev-acl m,
  
  /etc/udev/udev.conf r,
  /run/udev/tags/udev-acl/ r,
  /run/ConsoleKit/database r,
  
}


profile consolekit.init.d /etc/init.d/consolekit {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  /usr/sbin/console-kit-daemon Px,
  /bin/bash Cx -> shell,
  
  /etc/{conf,init}.d/consolekit r,
  
  /run/ConsoleKit/ w,
  /run/ConsoleKit/pid rwk,
  
  
  profile shell {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
    
  }
  
}
