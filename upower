#include <local/tunables.d/>

profile upower.upowerd /usr/lib{,32,64}/upower/upowerd {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/system-bind>
  
  # CAPABILITIES ---------------------------------------
  capability wake_alarm,
  
  # DBUS -----------------------------------------------
  dbus receive
  	bus=system
  	path="/org/freedesktop/UPower{,/**}"
  	interface="org.freedesktop.DBus.Properties"
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus receive
  	bus=system
  	path="/org/freedesktop/UPower{,/**}"
  	interface="org.freedesktop.UPower{,.*}"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/usb/hiddev[0-9]*					r,
  /dev/bus/usb/						r,
  /sys/bus/						r,
  /sys/bus/usb/devices/					r,
  /sys/bus/hid/devices/					r,
  /sys/class/						r,
  /sys/class/input/					r,
  /sys/class/usbmisc/					r,
  /sys/class/power_supply/				r,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/**		r,
  /sys/devices/**/input[0-9]*/capabilities/sw		r,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/upower/upowerd			m,
  
  # READS/WRITES ---------------------------------------
  /etc/UPower/UPower.conf				r,
  /etc/udev/udev.conf					r,	# sys-fs/eudev
  /run/udev/data/*					r,
}
