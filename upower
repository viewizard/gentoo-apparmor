#include <tunables/global>
profile upower.upowerd /usr/lib{,32,64}/upower/upowerd flags=(complain) {
  #include <abstractions/base>
  
  /dev/bus/usb/ r,
  /sys/bus/ r,
  /sys/bus/usb/devices/ r,
  /sys/bus/hid/devices/ r,
  /sys/class/ r,
  /sys/class/input/ r,
  /sys/class/power_supply/ r,
  /sys/devices/pci**/usb*/* r,
  /sys/devices/pci**/usb*/**/* r,
  /sys/devices/**/input*/capabilities/sw r,
  
  /etc/UPower/UPower.conf r,
  /etc/udev/udev.conf r,
  
  /run/udev/data/* r,
  
}
