#include <tunables/global>
profile skype /opt/bin/skype {
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/gtk>
  #include <abstractions/qt>
  #include <abstractions/audio-pulseaudio-strict>
  #include <abstractions/video>
  #include <abstractions/nameservice>
  #include <abstractions/nvidia>
  #include <abstractions/ssl_certs>
  #include <abstractions/user-download>
  #include <abstractions/user-upload>
  #include <abstractions/X>
  #include <abstractions/xdg-open>
  
  /dev/ r,
  /dev/video* m,
  /sys/devices/**/power_supply/**/online r,
  /sys/class/power_supply/ r,
  /sys/devices/system/cpu/ r,
  /sys/devices/system/cpu/cpu[0-9]*/cpufreq/scaling_{cur_freq,max_freq} r,
  /sys/devices/system/cpu/cpufreq/policy*/scaling_{cur_freq,max_freq} r,
  /sys/devices/{pci[0-9]*/**,virtual}/net/*/flags r,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/**/{idVendor,idProduct} r,
  @{PROC}/sys/kernel/{ostype,osrelease} r,
  @{PROC}/@{pid}/net/{arp,dev} r,
  owner @{PROC}/@{pid}/auxv r,
  owner @{PROC}/@{pid}/task/ r,
  owner @{PROC}/@{pid}/task/@{pid}/stat r,
  
  /opt/bin/skype mr,
  
  /usr/share/skype/** rk,
  /usr/share/skype/**/*.qm mr,
  
  owner @{HOME}/.Skype/ rw,
  owner @{HOME}/.Skype/** rwk,
  owner @{HOME}/.config/ r,
  owner @{HOME}/.config/Skype/{,**} rwk,
  owner @{HOME}/.config/Trolltech.conf rk,
  
  owner /tmp/qtsingleapp-home??-*-*{,-lockfile} rwk,
  owner /tmp/skype-*/{,**} rwk,
  
  deny /etc/passwd m,
  deny /etc/group m,
  deny /usr/share/fonts/** m,
  deny /etc/fstab r,
  deny @{HOME}/.mozilla/{,**} r,
  
}
