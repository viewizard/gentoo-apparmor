#include <tunables/global>

profile python-exec @{PYTHON_EXEC_WRAPPER} {
  #include <abstractions/base>
  #include <abstractions/python-exec>
  
  # только программы в enforce mode
  
  # EXECUTABLES ----------------------------------------
  @{PYTHON_EXEC}/alacarte				Px,
  @{PYTHON_EXEC}/openshot				Px,
  @{PYTHON_EXEC}/porthole				Px,
  @{PYTHON_EXEC}/pyfa					Px,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.session.log				w,	# XFCE4, <abstractions/X>
}

profile python_exec_root {
  #include <abstractions/base>
  #include <abstractions/python-exec>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,	# FIX ME! Нужно только консольным, например,
  								# aa-status. Пока непонятно как ограничить.
  
  # EXECUTABLES ----------------------------------------
  @{PYTHON_EXEC}/*					Px,
}
