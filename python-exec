#include <tunables/global>
profile python-exec /usr/lib{,32,64}/python-exec/python-exec2 flags=(complain) {
  #include <abstractions/base>
  
  /bin/env r,
  
  /usr/lib{,32,64}/python-exec/python[2-3].[0-9]*/* Px,
  
  /etc/env.d/python/config r,
  
}
