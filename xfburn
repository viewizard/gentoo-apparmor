#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"

profile xfburn /usr/bin/xfburn flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rk>
  #include <abstractions/nameservice>
  #include <abstractions/executable-binary-helper>
  
  /dev/tty[0-9]* w,
  /dev/@{BLOCK_MEDIA} rwk,
  /sys/bus/ r,
  /sys/class/ r,
  /sys/class/block/ r,
  /sys/devices/pci[0-9]*/**/{ata,usb}[0-9]*/**/block/@{BLOCK_REAL}/{,*/}uevent r,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/**/{vendor,model} r,
  /sys/devices/virtual/block/@{BLOCK_VIRT}/{,*/}uevent r,
  owner @{PROC}/@{pid}/fd/ r,
  @{PROC}/sys/dev/cdrom/info r,
  
  /usr/bin/xfburn mr,
  /usr/libexec/gvfsd-burn r,
  
  /etc/udev/udev.conf r,
  /usr/share/xfburn/{,**} r,
  /run/udev/data/* r,
  
  owner @{HOME}/.config/xfburn/{,**} rw,
  
  owner /run/user/*/gvfs-burn/ rw,
  
}
