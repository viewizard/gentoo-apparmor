#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"
@{PROG_FOLDERS}="{@{HOME},/mnt/,/media/}"

profile xfburn /usr/bin/xfburn flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rk>
  #include <abstractions/nameservice>
  #include <abstractions/executable-binary-helper>


  /dev/sr[0-9] rwk,

  /sys/bus/ r,
  /sys/class/ r,
  /sys/class/block/ r,
  /sys/devices/pci**/ata*/**/block/sd[a-z]/uevent r,
  /sys/devices/pci**/ata*/**/block/sd[a-z]/sd[a-z]*/uevent r,
  /sys/devices/pci**/usb*/**/block/sr*/uevent r,
  /sys/devices/pci**/usb*/**/vendor r,
  /sys/devices/pci**/usb*/**/model r,
  /sys/devices/virtual/block/zd*/uevent r,
  /sys/devices/virtual/block/zd*/zd*/uevent r,
  /sys/devices/virtual/block/loop*/uevent r,
  /run/udev/data/* r,
  /etc/udev/udev.conf r,

  owner @{PROC}/@{pid}/fd/ r,
  @{PROC}/sys/dev/cdrom/info r,

  /usr/bin/xfburn r,
  /usr/share/xfburn/ r,
  /usr/share/xfburn/** r,

  owner @{HOME}/.config/xfburn/ rw,
  owner @{HOME}/.config/xfburn/* rw,
  
  # Noisy
  deny @{HOME}/.* r,
  
}
