#include <tunables/global>
profile smartmontools.smartd /usr/sbin/smartd {
  #include <abstractions/base>
  
  capability sys_rawio,
  
  /dev/ r,
  /dev/sd[a-z] r,
  /sys/devices/pci**/usb[0-9]*/**/{idVendor,idProduct,bcdDevice} r,
  @{PROC}/devices r,
  
  /usr/sbin/smartd r,
  /bin/bash Cx -> shell,
  
  /etc/smartd.conf r,
  /usr/share/smartmontools/** r,
  
  /run/smartd.pid rwk,
  
  
  profile shell {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    
  }
  
}


profile smartmontools.smartctl /usr/sbin/smartctl {
  #include <abstractions/base>
  
  capability sys_rawio,
  
  /dev/pts/[0-9]* rw,
  /dev/sd[a-z] r,
  
  /usr/sbin/smartctl r,
  
  /usr/share/smartmontools/** r,
  
}


profile smartmontools.init.d /etc/init.d/smartd flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  /usr/sbin/smartd Px,
  /bin/bash Cx -> shell,
  
  /etc/{conf,init}.d/smartd r,
  
  /run/smartd.pid rwk,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/openrc_shell>
    
  }
  
}
