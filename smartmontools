#include <local/tunables.d/>

profile smartmontools.smartd /usr/sbin/smartd {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_rawio,
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_REAL}					r,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/**/{idVendor,idProduct,bcdDevice} r,
  @{PROC}/devices					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/smartd					mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/smartd.conf					r,
  /usr/share/smartmontools/**				r,
  /run/smartd.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
  }
}

profile smartmontools.smartctl /usr/sbin/smartctl {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_rawio,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_REAL}					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/smartctl					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/smartmontools/**				r,
}

profile smartmontools.init.d /etc/init.d/smartd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/smartd/tasks			w,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/smartd					Px,
  @{shell}						Cx,
  /bin/mkdir						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/smartd				r,
  /run/smartd.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/openrc/smartd/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
}
