#include <tunables/global>
profile smartmontools.smartd /usr/sbin/smartd flags=(complain) {
  #include <abstractions/base>
  
  capability sys_rawio,
  
  /dev/ r,
  /dev/sd[a-z] r,
  /sys/devices/pci**/usb*/**/idVendor r,
  /sys/devices/pci**/usb*/**/idProduct r,
  /sys/devices/pci**/usb*/**/bcdDevice r,
  @{PROC}/devices r,
  
  /usr/sbin/smartd r,
  
  /etc/smartd.conf r,
  /usr/share/smartmontools/** r,
  
  /run/smartd.pid rwk,
  
}


profile smartmontools.smartctl /usr/sbin/smartctl flags=(complain) {
  #include <abstractions/base>
  
  capability sys_rawio,
  
  /dev/pts/[0-9]* rw,
  /dev/sd[a-z] r,
  
  /usr/sbin/smartctl r,
  
  /usr/share/smartmontools/** r,
  
}
