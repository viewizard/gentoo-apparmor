#include <local/tunables.d/>

profile smartmontools.smartd /usr/sbin/smartd {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_rawio,
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_REAL}					r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/**/{idVendor,idProduct,bcdDevice} r,
  @{PROC}/devices					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/smartd					mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/smartd.conf					r,
  /usr/share/smartmontools/**				r,
  /run/smartd.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
  }
}

profile smartmontools.smartctl /usr/sbin/smartctl {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_rawio,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_REAL}					r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/ata[0-9]*/host[0-9]*/scsi_host/host[0-9]*/proc_name r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/smartctl					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/smartmontools/**				r,
  /var/db/smartmontools/**				r,
}

profile smartmontools.init.d /etc/init.d/smartd flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  @{sys}/fs/cgroup/openrc/smartd/tasks			w,
  @{sys}/fs/cgroup/unified/smartd/cgroup.procs		w,
  @{sys}/fs/cgroup/unified/smartd/cgroup.events		r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/smartd					Px,
  @{shell}						Cx,
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/smartd				r,
  /run/smartd.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{sys}/fs/cgroup/{openrc,unified}/smartd/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{sys}/fs/cgroup/unified/smartd/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{sys}/fs/cgroup/unified/smartd/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
