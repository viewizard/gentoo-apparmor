#include <local/tunables.d/>

profile modemmanager.ModemManager /usr/sbin/ModemManager {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/polkit>
  #include <abstractions/dbus/system-bind>
  
  # CAPABILITIES ---------------------------------------
  capability sys_tty_config,
  
  # DBUS -----------------------------------------------
  dbus receive
  	bus=system
  	path="/org/freedesktop/ModemManager[0-9]*"
  	interface="org.freedesktop.DBus.ObjectManager"
  	member=GetManagedObjects
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus receive
	bus=system
	path="/org/freedesktop/ModemManager[0-9]*"
	interface="org.freedesktop.DBus.Peer"
	member=Ping
	peer=(name=":[0-9]*.[0-9]*",label="networkmanager.NetworkManager"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO -------------------------------------------
  /dev/console						w,
  @{SYS_D}/bus/						r,
  @{SYS_D}/bus/usb/devices/				r,
  @{SYS_D}/class/					r,
  @{SYS_D}/class/tty/					r,
  @{SYS_D}/class/net/					r,
  @{SYS_D}/class/usbmisc/				r,
  @{SYS_D}/devices/**/uevent				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/ModemManager				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /run/udev/data/{[a-z]*[0-9]*,[a-z]*[0-9]*:[0-9]*,+pci:@{PCI4}} r,
}
