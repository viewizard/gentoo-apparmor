#include <tunables/global>

profile modemmanager.ModemManager /usr/sbin/ModemManager {
  #include <abstractions/base>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-pattern/polkit>
  #include <abstractions/dbus-pattern/system-bind>
  
  # DBUS -----------------------------------------------
  dbus receive
  	bus=system
  	path="/org/freedesktop/ModemManager[0-9]*"
  	interface="org.freedesktop.DBus.ObjectManager"
  	member=GetManagedObjects
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus receive
	bus=system
	path="/org/freedesktop/ModemManager[0-9]*"
	interface="org.freedesktop.DBus.Peer"
	member=Ping
	peer=(name=":[0-9]*.[0-9]*",label="networkmanager.NetworkManager"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /sys/bus/						r,
  /sys/bus/usb/devices/					r,
  /sys/class/						r,
  /sys/class/tty/					r,
  /sys/class/net/					r,
  /sys/class/usbmisc/					r,
  /sys/devices/**/uevent				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/ModemManager				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /run/udev/data/{,*}					r,
}
