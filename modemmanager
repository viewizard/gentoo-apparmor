#include <tunables/global>

profile modemmanager.ModemManager /usr/sbin/ModemManager flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/dbus-strict>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /sys/bus/						r,
  /sys/bus/usb/devices/					r,
  /sys/class/						r,
  /sys/class/tty/					r,
  /sys/class/net/					r,
  /sys/devices/**/uevent				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/ModemManager				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /run/udev/data/{,*}					r,
}
