#include <tunables/global>

profile netifrc.init.d /etc/init.d/net.* {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability net_admin,
  capability sys_admin,
  capability sys_module,
  capability mknod,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/net/tun						rw,
  /sys/devices/virtual/net/tap*/{,**}			r,
  /sys/devices/virtual/net/br*/				r,
  /sys/devices/virtual/net/br*/**			rw,
  /sys/devices/pci[0-9]*/**/net/eth[0-9]*/{,**}		r,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/**/net/usb[0-9]*/ifindex r,
  @{PROC}/@{pid}/mounts					r,
  @{PROC}/@{pid}/net/dev				r,
  @{PROC}/sys/net/ipv4/route/flush			w,
  
  # EXECUTABLES ----------------------------------------
  /etc/init.d/*						Pxr,
  @{shell}						Cx,
  /bin/ip						ix,
  /bin/cat						ix,
  /bin/grep						ix,
  /bin/sed						ix,
  /bin/chmod						ix,
  /bin/tr						Px,
  /bin/readlink						ix,
  /bin/rc-status					Px,
  /sbin/dhcpcd						Px,
  /sbin/brctl						Px,
  /sbin/iptunnel					Px,
  /sbin/iwconfig					Px,
  /usr/bin/gawk						ix,
  /usr/sbin/ifplugd					Px,
  /lib{,32,64}/rc/sbin/mark_service_inactive		ix,
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  /etc/resolv.conf					w,
  /etc/conf.d/net					r,
  /etc/iproute2/{,*}					r,
  /run/dhcpcd-*.pid					rwk,
  /run/ifplugd.*.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
    
    # CAPABILITIES -------------------------------------
    capability sys_tty_config,
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
  }
}

profile netifrc.net.sh /lib{,32,64}/udev/net.sh flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /lib{,32,64}/udev/net.sh				r,
  @{shell}						mr,
  /etc/init.d/net.*					Px,
}
