#include <tunables/global>
profile netifrc.init.d /etc/init.d/net.* flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  capability net_admin,
  capability sys_admin,
  capability sys_module,
  
  /dev/net/tun rw,
  /sys/devices/virtual/net/tap*/{,**} r,
  /sys/devices/virtual/net/br*/ r,
  /sys/devices/virtual/net/br*/** rw,
  /sys/devices/pci[0-9]*/**/net/eth[0-9]*/{,**} r,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/**/net/usb[0-9]*/ifindex r,
  @{PROC}/@{pid}/mounts r,
  @{PROC}/@{pid}/net/dev r,
  @{PROC}/sys/net/ipv4/route/flush w,
  
  /etc/init.d/* Pxr,
  /bin/bash Cx -> shell,
  /bin/ip ix,
  /bin/cat ix,
  /bin/grep ix,
  /bin/sed ix,
  /bin/chmod ix,
  /bin/tr ix,
  /bin/readlink ix,
  /sbin/dhcpcd  Px,
  /sbin/brctl Px,
  /sbin/iptunnel Px,
  /sbin/iwconfig Px,
  /usr/sbin/ifplugd Px,
  /lib64/rc/sbin/mark_service_inactive ix,
  
  /etc/fstab r,
  /etc/resolv.conf w,
  /etc/conf.d/net r,
  /etc/iproute2/{,*} r,
  
  /run/dhcpcd-*.pid rwk,
  /run/ifplugd.*.pid rwk,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/openrc_shell>
    #include <abstractions/nameservice>
    
    capability sys_tty_config,
    
    /dev/console rw,
    
  }
  
}
