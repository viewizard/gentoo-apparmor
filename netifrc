#include <local/tunables.d/>

profile netifrc.init.d /etc/init.d/net.* flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability sys_admin,
  capability sys_module,
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/net/tun						rw,
  @{sys}/devices/virtual/net/@{VNIC}/			r,
  @{sys}/devices/virtual/net/@{VNIC}/**			rw,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/**/net/@{NIC}/{,**}	r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/**/net/usb@{USB1}/ifindex r,
  @{sys}/fs/cgroup/openrc/net.*/tasks			w,
  @{sys}/fs/cgroup/unified/net.*/cgroup.procs		w,
  @{sys}/fs/cgroup/unified/net.*/cgroup.events		r,
  audit @{PROC}/@{pid}/mounts				r,	# FIX ME! @{pid}/@{pids} audit 20.10.2017
  audit @{PROC}/@{pid}/net/dev				r,	# FIX ME! @{pid}/@{pids} audit 20.10.2017
  @{PROC}/sys/net/ipv4/route/flush			w,
  
  # EXECUTABLES ----------------------------------------
  /etc/init.d/*						Px,
  @{shell}						Cx,
  /bin/ip						Px,	# sys-apps/iproute2
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/sed						Cx,	# sys-apps/sed
  /bin/chmod						Cx,	# sys-apps/coreutils
  /bin/tr						Px,	# sys-apps/coreutils
  /bin/readlink						Cx,	# sys-apps/coreutils
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/rmdir						Cx,	# sys-apps/coreutils
  /bin/rc-status					Px,	# sys-apps/openrc
  /sbin/dhcpcd						Px,	# net-misc/dhcpcd
  /sbin/brctl						Px,	# net-misc/bridge-utils
  /sbin/iptunnel					Px,	# sys-apps/net-tools
  /sbin/iwconfig					Px,	# net-wireless/wireless-tools
  /usr/bin/gawk						Cx,	# sys-apps/gawk
  /usr/sbin/ifplugd					Px,	# sys-apps/ifplugd
  /lib{,32,64}/rc/sbin/mark_service_inactive		Px,	# sys-apps/openrc
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  /etc/resolv.conf					w,
  /etc/conf.d/net					r,
  /etc/init.d/net.*					r,
  /etc/iproute2/{,*}					r,	# sys-apps/iproute2
  audit /run/dhcpcd-*.pid				rwk,	# net-misc/dhcpcd	# FIX ME! 7.12.2017
  audit /run/ifplugd.*.pid				rwk,	# sys-apps/ifplugd	# FIX ME! 7.12.2017
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
    
    # CAPABILITIES -------------------------------------
    capability sys_tty_config,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{sys}/fs/cgroup/unified/net.*/cgroup.procs		r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
  
  profile chmod /bin/chmod {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/chmod						mr,
  }
  
  profile readlink /bin/readlink {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/readlink					mr,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{sys}/fs/cgroup/{openrc,unified}/net.*/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{sys}/fs/cgroup/unified/net.*/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
  
  profile gawk /usr/bin/gawk {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gawk					mr,
  }
}

profile netifrc.net.sh /lib{,32,64}/udev/net.sh {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /lib{,32,64}/udev/net.sh				r,
  @{shell}						mr,
  /etc/init.d/net.*					Px,
}
