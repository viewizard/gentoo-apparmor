#include <tunables/global>
profile netifrc.init.d /etc/init.d/net.* {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  capability net_admin,
  capability sys_admin,
  capability sys_module,
  
  /dev/net/tun rw,
  /sys/devices/virtual/net/tap*/{,**} r,
  /sys/devices/virtual/net/br*/ r,
  /sys/devices/virtual/net/br*/** rw,
  /sys/devices/pci**/net/eth[0-9]*/{,**} r,
  @{PROC}/@{pid}/mounts r,
  @{PROC}/@{pid}/net/dev r,
  @{PROC}/sys/net/ipv4/route/flush w,
  
  /etc/init.d/* Pxr,
  /bin/ip ix,
  /bin/cat ix,
  /bin/grep ix,
  /bin/sed ix,
  /bin/chmod ix,
  /bin/tr ix,
  /bin/readlink ix,
  /sbin/dhcpcd  Px,
  /sbin/brctl Px,
  /sbin/iptunnel Px,
  /sbin/iwconfig Px,
  
  /etc/fstab r,
  /etc/resolv.conf w,
  /etc/conf.d/net r,
  /etc/iproute2/{,*} r,
  
  /run/dhcpcd-*.pid rwk,
  
}
