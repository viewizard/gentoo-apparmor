#include <tunables/global>

profile netifrc.init.d /etc/init.d/net.* {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  audit capability net_admin,					# FIX ME! audit, /bin/ip ix -> Px.
  capability sys_admin,
  capability sys_module,
  capability mknod,
  
  # NETWORK --------------------------------------------
  audit network netlink raw,					# FIX ME! audit, /bin/ip ix -> Px.
  
  # PSEUDO ---------------------------------------------
  /dev/net/tun						rw,
  /sys/devices/virtual/net/tap*/{,**}			r,
  /sys/devices/virtual/net/br*/				r,
  /sys/devices/virtual/net/br*/**			rw,
  /sys/devices/pci[0-9]*/**/net/eth[0-9]*/{,**}		r,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/**/net/usb[0-9]*/ifindex r,
  /sys/fs/cgroup/openrc/net.*/tasks			w,
  @{PROC}/@{pid}/mounts					r,
  @{PROC}/@{pid}/net/dev				r,
  @{PROC}/sys/net/ipv4/route/flush			w,
  
  # EXECUTABLES ----------------------------------------
  /etc/init.d/*						Pxr,
  @{shell}						Cx,
  /bin/ip						Px,
  /bin/cat						Cx,	# FS ACCESS! cat
  /bin/grep						Cx,	# FS ACCESS! grep
  /bin/sed						Cx,	# FS ACCESS! sed
  /bin/chmod						Cx,	# FS ACCESS! chmod
  /bin/tr						Px,
  /bin/readlink						Cx,	# FS ACCESS! readlink
  /bin/mkdir						Cx,	# FS ACCESS! mkdir
  /bin/rc-status					Px,
  /sbin/dhcpcd						Px,
  /sbin/brctl						Px,
  /sbin/iptunnel					Px,
  /sbin/iwconfig					Px,
  /usr/bin/gawk						Cx,	# FS ACCESS! gawk
  /usr/sbin/ifplugd					Px,
  /lib{,32,64}/rc/sbin/mark_service_inactive		Px,
  
  # READS/WRITES ---------------------------------------
  /etc/fstab						r,
  /etc/resolv.conf					w,
  /etc/conf.d/net					r,
  /etc/iproute2/{,*}					r,
  /run/dhcpcd-*.pid					rwk,
  /run/ifplugd.*.pid					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
    
    # CAPABILITIES -------------------------------------
    capability sys_tty_config,
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
  }
  
  profile chmod /bin/chmod {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/chmod						mr,
  }
  
  profile readlink /bin/readlink {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/readlink					mr,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/openrc/net.*/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile gawk /usr/bin/gawk {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gawk					mr,
  }
}

profile netifrc.net.sh /lib{,32,64}/udev/net.sh {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /lib{,32,64}/udev/net.sh				r,
  @{shell}						mr,
  /etc/init.d/net.*					Px,
}
