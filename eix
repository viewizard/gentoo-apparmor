#include <local/tunables.d/>

profile eix@{p_root} /usr/bin/eix@{t_root} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC_D}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/eix						mr,
  /usr/lib{,32,64}/portage/@{PYTHON}/ebuild.sh@{t_root}	Px,	# sys-apps/portage
  @{PYTHON_EXEC_WRAPPER}@{t_root}			Cx -> portageq,	# dev-lang/python-exec
  
  # READS/WRITES ---------------------------------------
  /etc/eixrc/{,**}					r,
  /etc/portage/{,**}					r,
  /usr/portage/{,**}					r,
  /usr/local/portage/{,**}				r,
  /usr/share/portage/{,**}				r,
  /var/lib/portage/{,**}				r,
  /var/db/pkg/{,**}					r,
  /var/cache/edb/{,**}					r,
  /var/cache/eix/{,**}					rw,
  /var/cache/eix/{,**/}*				k,
  
  # TEMP -----------------------------------------------
  owner /tmp/ebuild-cache.@{TMP8}			rw,
  owner /tmp/portage.cron.@{TMP6}			w,	# DELEGATION! 00_update_portage.cron.daily
  
  profile portageq {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/portageq@{t_root}			Px,	# sys-apps/portage
    
    # TEMP ---------------------------------------------
    /tmp/portage.cron.@{TMP6}				w,	# DELEGATION! 00_update_portage.cron.daily
    								# IMPROVE! Ограничить (fsuid=0,250 && ouid=0,250).
  }
}

profile eix.eix-test-obsolete@{p_root} /usr/bin/eix-test-obsolete@{t_root} {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/eix-test-obsolete				r,
  @{shell}						mr,
  /bin/cat@{t_root}					Cx,	# sys-apps/coreutils
  /usr/bin/eix@{t_root}					Px,
  /usr/bin/gettext@{t_root}				Px,	# sys-devel/gettext
  /usr/bin/envsubst@{t_root}				Px,	# sys-devel/gettext
  
  profile cat /bin/cat@{t_root} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # READS/WRITES -------------------------------------
    /usr/share/eix/eix-functions.sh			r,
    /usr/share/push/push.sh				r,	# app-shells/push
  }
}

profile eix.eix-sync@{p_root} /usr/bin/eix-sync@{t_root} {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/eix-sync					r,
  @{shell}						mr,
  /bin/date@{t_root}					Px,	# sys-apps/coreutils
  /bin/cp@{t_root}					Cx,	# sys-apps/coreutils
  /bin/cat@{t_root}					Cx,	# sys-apps/coreutils
  /usr/bin/gettext@{t_root}				Px,	# sys-devel/gettext
  /usr/bin/envsubst@{t_root}				Px,	# sys-devel/gettext
  /usr/bin/eix@{t_root}					Px,
  @{PYTHON_EXEC_WRAPPER}@{t_root}			Cx -> portage,	# dev-lang/python-exec
  
  # READS/WRITES ---------------------------------------
  /usr/portage/metadata/timestamp.chk			r,
  
  profile cp /bin/cp@{t_root} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability fowner,
    capability fsetid,
    capability sys_admin,
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cp						mr,
    
    # READS/WRITES -------------------------------------
    /var/cache/eix/portage.eix				r,
    /var/cache/eix/previous.eix				rw,
  }
  
  profile cat /bin/cat@{t_root} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # READS/WRITES -------------------------------------
    /usr/share/eix/eix-functions.sh			r,
    /usr/share/push/push.sh				r,	# app-shells/push
  }
  
  profile portage {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/emerge@{t_root}			Px,	# sys-apps/portage
  }
}
