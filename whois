#include <tunables/global>

profile whois /usr/bin/whois {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/whois					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/whois.conf					r,
}
