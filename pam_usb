#include <tunables/global>

profile pam_usb.pamusb-agent /usr/bin/pamusb-agent {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pamusb-agent					mr,
  @{shell}						Cx,
  /bin/env						ixmr,	# FIX ME! действительно надо ixmr?
  
  # READS/WRITES ---------------------------------------
  /etc/pamusb.conf					r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					w,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /usr/bin/mate-screensaver-command			Px,
    /usr/bin/alock					Px,
    /usr/bin/pamusb-check				Px,
  }
}

profile pam_usb.pamusb-check /usr/bin/pamusb-check {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  capability chown,
  capability fowner,
  capability fsetid,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pamusb-check					mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/pamusb.conf					r,
  /run/utmp						rk,
  /media/*/.pamusb/{,*.pad}				rw,
  
  # USERS ----------------------------------------------
  @{HOME}/.pamusb/*.pad					rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/authentication-pam_usb>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
  }
}
