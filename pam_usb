#include <tunables/global>
profile pam_usb.pamusb-agent /usr/bin/pamusb-agent {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* w,
  
  /bin/env ixmr,
  /usr/bin/pamusb-agent mr,
  /bin/bash Cx -> shell,
  
  /etc/pamusb.conf r,
  
  
  profile shell {
    #include <abstractions/base>
    
    /dev/tty rw,
    /dev/tty[0-9]* w,
    
    /bin/bash mr,
    /usr/bin/mate-screensaver-command Px,
    /usr/bin/alock Px,
    /usr/bin/pamusb-check Px,
    
  }
  
}


profile pam_usb.pamusb-check /usr/bin/pamusb-check {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability dac_read_search,
  capability dac_override,
  capability chown,
  capability fowner,
  capability fsetid,
  
  /dev/pts/[0-9]* rw,
  
  /usr/bin/pamusb-check mr,
  /bin/bash Cx -> shell,
  
  /etc/pamusb.conf r,
  
  @{HOME}/.pamusb/*.pad rw,
  /media/*/.pamusb/{,*.pad} rw,
  
  /run/utmp rk,
  
  
  profile shell {
    #include <abstractions/base>
    #include <abstractions/authentication-pam_usb>
    
    /dev/tty rw,
    
    /bin/bash mr,
    
  }
  
}
