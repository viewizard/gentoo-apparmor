#include <tunables/global>
profile pam_usb.pamusb-agent /usr/bin/pamusb-agent {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  /dev/tty[0-9]* w,
  
  /bin/env ixr,
  /usr/bin/pamusb-agent r,
  /bin/bash Cx -> shell,
  
  /etc/pamusb.conf r,
  
  
  profile shell {
    #include <abstractions/base>
    
    /dev/tty rw,
    /dev/tty[0-9]* w,
    
    /bin/bash r,
    /usr/bin/mate-screensaver-command Px,
    /usr/bin/alock Px,
    /usr/bin/pamusb-check Px,
    
  }
  
}


profile pam_usb.pamusb-check /usr/bin/pamusb-check {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  /dev/pts/[0-9]* rw,
  
  /usr/bin/pamusb-check r,
  /bin/bash Cx -> shell,
  
  /etc/pamusb.conf r,
  
  owner @{HOME}/.pamusb/*.pad rw,
  /media/pam_usb*/.pamusb/*.pad rw,
  
  /run/utmp rk,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /usr/bin/pmount Px,
    /usr/bin/pumount Px,
    
  }
  
}
