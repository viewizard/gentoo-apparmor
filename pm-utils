#include <tunables/global>

profile pm-utils.pm-is-supported /usr/bin/pm-is-supported flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /sys/power/state					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pm-is-supported				r,
  @{shell}						mr,
  /bin/tr						ix,
  /bin/grep						ix,
  
  # READS/WRITES ---------------------------------------
  /etc/pm/config.d/{,**}				r,
}
