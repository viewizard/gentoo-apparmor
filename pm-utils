#include <local/tunables.d/>

profile pm-utils.pm-is-supported /usr/bin/pm-is-supported {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pm-is-supported				r,
  @{shell}						mr,
  /bin/tr						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  
  # READS/WRITES ---------------------------------------
  /etc/pm/config.d/{,**}				r,
  
  profile tr /bin/tr {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/tr						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    @{SYS_D}/power/state				r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
}
