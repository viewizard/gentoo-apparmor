#include <tunables/global>
profile gradm /sbin/gradm flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  /dev/ r,
  /dev/grsec w,
  /dev/pts/[0-9]* rw,
  @{PROC}/@{pid}/mounts r,
  
  /sbin/gradm r,
  /sbin/grlearn Px,
  
  / r,
  /etc/grsec/ r,
  /etc/grsec/* rw,
  
}


profile gradm.grlearn /sbin/grlearn flags=(complain) {
  #include <abstractions/base>
  
  capability ipc_lock,
  capability sys_nice,
  
  /dev/grsec r,
  
  /sbin/grlearn r,
  
  /etc/grsec/ r,
  /etc/grsec/* rw,
  
}
