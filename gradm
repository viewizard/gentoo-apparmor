#include <tunables/global>

profile gradm /sbin/gradm flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/grsec						w,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/gradm						mr,
  /sbin/grlearn						Px,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /etc/ld.so.conf					r,
  /etc/grsec/						r,
  /etc/grsec/*						rw,
}

profile gradm.grlearn /sbin/grlearn flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability ipc_lock,
  capability sys_nice,
  capability sys_ptrace,
  
  # PSEUDO ---------------------------------------------
  /dev/grsec						r,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /sbin/grlearn						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/grsec/						r,
  /etc/grsec/*						rw,
}

profile gradm.init.d /etc/init.d/gradm {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /sbin/gradm						Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/gradm				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}
