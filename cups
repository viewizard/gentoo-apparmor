#include <tunables/global>
profile cups.cupsd /usr/sbin/cupsd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  capability fsetid,
  capability net_bind_service,
  capability dac_read_search,
  capability dac_override,
  capability chown,
  capability kill,
  
  /usr/sbin/cupsd Pxmr,
  /bin/bash Cx -> shell,
  /usr/libexec/cups/daemon/* Px,
  /usr/libexec/cups/driver/* Px,
  /usr/libexec/cups/cgi-bin/* Px,
  /usr/libexec/cups/filter/* Px,
  /usr/libexec/cups/backend/* Px,
  
  /etc/environment r,
  /etc/papersize r,
  /etc/printcap rw,
  /etc/cups/{,**} r,
  /etc/cups/*.conf* rw,
  /etc/cups/ppd/{,**} rw,
  /usr/libexec/cups/** r,
  /usr/share/cups/** r,
  
  /var/log/cups/{,access_log,error_log,page_log} rw,
  /{,var/}run/cups/ rw,
  /{,var/}run/cups/** rw,
  /var/cache/cups/ rw,
  /var/cache/cups/** rwk,
  /var/spool/cups/{,**} rw,
  /var/log/cups/{,**} rw,
  
  
  profile shell {
    #include <abstractions/base>
    #include <abstractions/authentication-pam_usb>
    
    /dev/tty rw,
    
    /bin/bash mr,
    
  }
  
}

profile cups.daemon /usr/libexec/cups/daemon/* {
  #include <abstractions/base>
  
  capability setgid,
  capability setuid,
  
  /usr/bin/smbspool Px,
  /usr/libexec/cups/daemon/* Pxmr,
  /usr/libexec/cups/cgi-bin/* Px,
  /usr/libexec/cups/backend/ r,
  /usr/libexec/cups/backend/* Px,
  /usr/libexec/cups/driver/ r,
  /usr/libexec/cups/driver/* Px,
  /usr/libexec/cups/filter/* Px,
  
  /usr/share/cups/{,**} r,
  /usr/share/ppd/{,**} r,
  
  /var/spool/cups/{,**} r,
  /var/cache/cups/{,**} r,
  
}

profile cups.driver /usr/libexec/cups/driver/* {
  #include <abstractions/base>
  
  /usr/libexec/cups/driver/* mr,
  
  /usr/share/gutenprint/{,**} r,
  /usr/lib{,32,64}/gutenprint/{,**} r,
  /usr/lib{,32,64}/gutenprint/[0-9]*/modules/*.so m,
  
}

profile cups.cgi-bin /usr/libexec/cups/cgi-bin/* {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>
  
  /usr/libexec/cups/cgi-bin/* mr,
  
  /etc/cups/{,**} r,
  /usr/share/cups/templates/{,**} r,
  /usr/share/cups/data/{,**} r,
  
  /var/cache/cups/* r,
  /{,var/}run/cups/certs/{,**} r,
  /var/spool/cups/{,**} r,
  
}

profile cups.filter /usr/libexec/cups/filter/* {
  #include <abstractions/base>
  #include <abstractions/user-tmp>
  
  /usr/libexec/cups/filter/* Pxmr,
  /usr/bin/pdftops Px,
  
  /etc/cups/ppd/*.ppd r,
  /usr/share/poppler/{,**} r,
  /usr/share/cups/{,**} r,
  
  /var/spool/cups/* r,
  
}

profile cups.backend /usr/libexec/cups/backend/* {
  #include <abstractions/base>
  
  /dev/bus/usb/ r,
  /sys/bus/ r,
  /sys/bus/usb/devices/ r,
  /sys/class/ r,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/{,**} r,
  
  /usr/libexec/cups/backend/* mr,
  
  /etc/cups/snmp.conf r,
  /etc/cups/ppd/*.ppd r,
  /etc/udev/udev.conf r,
  /usr/share/cups/{,**} r,
  
  /var/cache/cups/*.snmp r,
  
}

profile cups.smbspool /usr/bin/smbspool flags=(complain) {
  #include <abstractions/base>
  
  /usr/bin/smbspool mr,
  
}

profile cups.init.d /etc/init.d/cupsd flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  capability fsetid,
  capability chown,
  capability dac_override,
  capability dac_read_search,
  
  /usr/sbin/cupsd Px,
  /bin/bash Cx -> shell,
  
  /etc/init.d/cupsd r,
  
  /var/cache/cups/ w,
  /run/cups/ w,
  /run/cups/certs/ w,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
    
  }
  
}
