#include <local/tunables.d/>

profile cups.cupsd /usr/sbin/cupsd {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability fsetid,
  capability net_bind_service,
  capability dac_read_search,
  capability dac_override,
  capability chown,
  capability mknod,
  capability kill,
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term) peer="cups.daemon",
  signal (send) set=(term) peer="cups.driver",
  signal (send) set=(term) peer="cups.filter",
  signal (send) set=(term) peer="cups.backend",
  signal (send) set=(term) peer="cups.cgi-bin",
  
  # UNIX -----------------------------------------------
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="cups.daemon"),
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="cups.filter"),
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="cups.backend"),
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="poppler.pdftops"),
  
  # NETWORK --------------------------------------------
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/cupsd					Pxmr,
  @{shell}						Cx,
  /usr/libexec/cups/daemon/*				Px,
  /usr/libexec/cups/driver/*				Px,
  /usr/libexec/cups/cgi-bin/*				Px,
  /usr/libexec/cups/filter/*				Px,
  /usr/libexec/cups/backend/*				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,
  /etc/papersize					r,
  /etc/printcap						rw,
  /etc/cups/{,**}					r,
  /etc/cups/*.conf*					rw,
  /etc/cups/ppd/{,**}					rw,
  /usr/libexec/cups/**					r,
  /usr/share/cups/{,**}					r,
  /run/cups/{,**}					rw,
  /var/cache/cups/{,**}					rwk,
  /var/spool/cups/{,**}					rw,
  /var/log/cups/{,**}					rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
  }
}

profile cups.daemon /usr/libexec/cups/daemon/* {
  #include <abstractions/base>
  #include <abstractions/unix/cupsd-virtual>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/smbspool					Px,
  /usr/libexec/cups/daemon/*				Pxmr,
  /usr/libexec/cups/cgi-bin/*				Px,
  /usr/libexec/cups/backend/*				Px,
  /usr/libexec/cups/driver/*				Px,
  /usr/libexec/cups/filter/*				Px,
  
  # READS/WRITES ---------------------------------------
  /usr/share/cups/{,**}					r,
  /usr/share/ppd/{,**}					r,
  /var/spool/cups/{,**}					wr,
  /var/cache/cups/{,**}					wr,
  /usr/libexec/cups/{backend,driver}/			r,
}

profile cups.driver /usr/libexec/cups/driver/* {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/cups/driver/*				mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/gutenprint/{,**}				r,	# net-print/gutenprint
  /usr/lib{,32,64}/gutenprint/{,**}			r,	# net-print/gutenprint
  /usr/lib{,32,64}/gutenprint/[0-9]*/modules/*.so	m,	# net-print/gutenprint
  /var/spool/cups/{,**}					wr,
}

profile cups.cgi-bin /usr/libexec/cups/cgi-bin/* {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/cups/cgi-bin/*				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/cups/{,**}					r,
  /usr/share/cups/{,**}					r,
  /run/cups/certs/{,**}					r,
  /run/cups/cups.sock					rw,
  /var/cache/cups/*					r,
  /var/spool/cups/{,**}					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/@{TMP13}					rw,
}

profile cups.filter /usr/libexec/cups/filter/* {
  #include <abstractions/base>
  #include <abstractions/unix/cupsd-virtual>
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/cups/filter/*				Pxmr,
  /usr/bin/pdftops					Px,	# app-text/poppler
  
  # READS/WRITES ---------------------------------------
  /etc/cups/ppd/*.ppd					r,
  /usr/share/poppler/{,**}				r,
  /usr/share/cups/{,**}					r,
  /var/spool/cups/*					r,
  
  # TEMP -----------------------------------------------
  audit owner /tmp/??????*				rw,	# FIX ME! audit 25.11.2017
}

profile cups.backend /usr/libexec/cups/backend/* {
  #include <abstractions/base>
  #include <abstractions/unix/cupsd-virtual>
  
  # CAPABILITIES ---------------------------------------
  capability wake_alarm,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/bus/usb/						r,
  /sys/bus/						r,
  /sys/bus/usb/devices/					r,
  /sys/class/						r,
  /sys/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/{,**}	r,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/cups/backend/*				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/cups/snmp.conf					r,
  /etc/cups/ppd/*.ppd					r,
  /etc/udev/udev.conf					r,
  /usr/share/cups/{,**}					r,
  /var/cache/cups/*.snmp				r,
}

profile cups.smbspool /usr/bin/smbspool {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/smbspool					mr,
}

profile cups.init.d /etc/init.d/cupsd flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability fsetid,
  capability chown,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/cupsd/tasks			w,
  /sys/fs/cgroup/unified/cupsd/cgroup.procs		w,
  /sys/fs/cgroup/unified/cupsd/cgroup.events		r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/cupsd					Px,
  @{shell}						Cx,
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/cupsd				r,
  /var/cache/cups/					w,
  /run/cups/						w,
  /run/cups/certs/					w,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/{openrc,unified}/cupsd/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/cupsd/cgroup.procs		r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/cupsd/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
