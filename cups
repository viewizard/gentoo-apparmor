#include <local/tunables.d/>

profile cups.cupsd@{p_root} /usr/sbin/cupsd@{t_root} {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability fsetid,
  capability net_bind_service,
  capability dac_read_search,
  capability dac_override,
  capability chown,
  capability mknod,
  capability kill,
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term) peer="cups.daemon@{p_root}",
  signal (send) set=(term) peer="cups.driver@{p_root}",
  signal (send) set=(term) peer="cups.filter@{p_root}",
  signal (send) set=(term) peer="cups.backend@{p_root}",
  signal (send) set=(term) peer="cups.cgi-bin@{p_root}",
  
  # UNIX -----------------------------------------------
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="cups.daemon@{p_root}"),
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="cups.filter@{p_root}"),
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="cups.backend@{p_root}"),
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="poppler.pdftops@{p_root}"),
  
  # NETWORK --------------------------------------------
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/cupsd					mr,
  /usr/sbin/cupsd@{t_root}				Px,
  @{shell}@{t_root}					Cx,
  /usr/libexec/cups/daemon/*@{t_root}			Px,
  /usr/libexec/cups/driver/*@{t_root}			Px,
  /usr/libexec/cups/cgi-bin/*@{t_root}			Px,
  /usr/libexec/cups/filter/*@{t_root}			Px,
  /usr/libexec/cups/backend/*@{t_root}			Px,
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,
  /etc/papersize					r,
  /etc/printcap						rw,
  /etc/cups/{,**}					r,
  /etc/cups/*.conf{,.?,.default}			rw,
  /etc/cups/ppd/{,**}					rw,
  /usr/libexec/cups/**					r,
  /usr/share/cups/{,**}					r,
  /run/cups/{,**}					rw,
  /var/cache/cups/{,**}					rw,
  /var/cache/cups/{,**/}*				k,
  /var/spool/cups/{,**}					rw,
  /var/log/cups/{,**}					rw,
  
  profile shell @{shell}@{t_root} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
  }
}

profile cups.daemon@{p_root} /usr/libexec/cups/daemon/*{@{t_root},@{t_lp}} {
  #include <abstractions/base>
  #include <abstractions/unix/cupsd-virtual>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/cups/daemon/*				mr,
  /usr/bin/smbspool@{t_lp}				Px,
  /usr/libexec/cups/daemon/*{@{t_root},@{t_lp}}		Px,
  /usr/libexec/cups/cgi-bin/*{@{t_root},@{t_lp}}	Px,
  /usr/libexec/cups/backend/*{@{t_root},@{t_lp}}	Px,
  /usr/libexec/cups/driver/*{@{t_root},@{t_lp}}		Px,
  /usr/libexec/cups/filter/*{@{t_root},@{t_lp}}		Px,
  
  # READS/WRITES ---------------------------------------
  /usr/share/cups/{,**}					r,
  /usr/share/ppd/{,**}					r,
  /usr/libexec/cups/{backend,driver}/			r,
  /var/spool/cups/{,**}					wr,
  /var/cache/cups/{,**}					wr,
}

profile cups.driver@{p_root} /usr/libexec/cups/driver/*{@{t_root},@{t_lp}} {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/cups/driver/*				mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/gutenprint/{,**}				r,	# net-print/gutenprint
  /usr/lib{,32,64}/gutenprint/{,**}			r,	# net-print/gutenprint
  /usr/lib{,32,64}/gutenprint/[0-9]*/modules/*.so	m,	# net-print/gutenprint
  /var/spool/cups/{,**}					wr,
}

profile cups.cgi-bin@{p_root} /usr/libexec/cups/cgi-bin/*{@{t_root},@{t_lp}} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/cups/cgi-bin/*				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/cups/{,**}					r,
  /usr/share/cups/{,**}					r,
  /run/cups/certs/{,**}					r,
  /run/cups/cups.sock					rw,
  /var/cache/cups/*					r,
  /var/spool/cups/{,**}					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/@{TMP13}					rw,
}

profile cups.filter@{p_root} /usr/libexec/cups/filter/*{@{t_root},@{t_lp}} {
  #include <abstractions/base>
  #include <abstractions/unix/cupsd-virtual>
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/cups/filter/*				mr,
  /usr/libexec/cups/filter/*{@{t_root},@{t_lp}}		Px,
  /usr/bin/pdftops{@{t_root},@{t_lp}}			Px,	# app-text/poppler
  
  # READS/WRITES ---------------------------------------
  /etc/cups/ppd/*.ppd					r,
  /usr/share/poppler/{,**}				r,
  /usr/share/cups/{,**}					r,
  /var/spool/cups/*					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/@{TMP13}					rw,
}

profile cups.backend@{p_root} /usr/libexec/cups/backend/*{@{t_root},@{t_lp}} {
  #include <abstractions/base>
  #include <abstractions/unix/cupsd-virtual>
  
  # CAPABILITIES ---------------------------------------
  capability wake_alarm,
  capability setuid,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/bus/usb/						r,
  @{SYS_D}/bus/						r,
  @{SYS_D}/bus/usb/devices/				r,
  @{SYS_D}/class/					r,
  @{SYS_D}/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/{,**}	r,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/cups/backend/*				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/cups/snmp.conf					r,
  /etc/cups/ppd/*.ppd					r,
  /etc/udev/udev.conf					r,
  /usr/share/cups/{,**}					r,
  /run/udev/data/{[a-z]*[0-9]*:[0-9]*,+usb:@{USB4}}	r,
  /var/cache/cups/*.snmp				r,
}

profile cups.smbspool@{p_lp} /usr/bin/smbspool@{t_lp} {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/smbspool					mr,
}

profile cups.init.d@{p_root} /etc/init.d/cupsd@{t_root} flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability fsetid,
  capability chown,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  @{SYS_D}/fs/cgroup/openrc/cupsd/tasks			w,
  @{SYS_D}/fs/cgroup/unified/cupsd/cgroup.procs		w,
  @{SYS_D}/fs/cgroup/unified/cupsd/cgroup.events	r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/cupsd@{t_root}				Px,
  @{shell}@{t_root}					Cx,
  /bin/mkdir@{t_root}					Cx,	# sys-apps/coreutils
  /bin/grep@{t_root}					Cx,	# sys-apps/grep
  /bin/rmdir@{t_root}					Cx,	# sys-apps/coreutils
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/cupsd				r,
  /run/cups/						w,
  /run/cups/certs/					w,
  /var/cache/cups/					w,
  
  profile shell @{shell}@{t_root} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir@{t_root} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/{openrc,unified}/cupsd/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep@{t_root} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/cupsd/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir@{t_root} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/cupsd/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
