#include <tunables/global>

profile cups.cupsd /usr/sbin/cupsd {
  #include <abstractions/base>
  #include <abstractions/dbus-strict>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability fsetid,
  capability net_bind_service,
  capability dac_read_search,
  capability dac_override,
  capability chown,
  capability mknod,
  capability kill,
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term) peer="cups.daemon",
  signal (send) set=(term) peer="cups.driver",
  signal (send) set=(term) peer="cups.filter",
  signal (send) set=(term) peer="cups.backend",
  signal (send) set=(term) peer="cups.cgi-bin",
  
  # UNIX -----------------------------------------------
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="cups.daemon"),
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="cups.filter"),
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="cups.backend"),
  unix (send, receive)
  			type=stream
  			addr=none
  			peer=(label="poppler.pdftops"),
  
  # NETWORK --------------------------------------------
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/cupsd					Pxmr,
  @{shell}						Cx,
  /usr/libexec/cups/daemon/*				Px,
  /usr/libexec/cups/driver/*				Px,
  /usr/libexec/cups/cgi-bin/*				Px,
  /usr/libexec/cups/filter/*				Px,
  /usr/libexec/cups/backend/*				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,
  /etc/papersize					r,
  /etc/printcap						rw,
  /etc/cups/{,**}					r,
  /etc/cups/*.conf*					rw,
  /etc/cups/ppd/{,**}					rw,
  /usr/libexec/cups/**					r,
  /usr/share/cups/{,**}					r,
  /run/cups/{,**}					rw,
  /var/cache/cups/{,**}					rwk,
  /var/spool/cups/{,**}					rw,
  /var/log/cups/{,**}					rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
  }
}

profile cups.daemon /usr/libexec/cups/daemon/* {
  #include <abstractions/base>
  #include <abstractions/unix-pattern/cupsd-virtual>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/smbspool					Px,
  /usr/libexec/cups/daemon/*				Pxmr,
  /usr/libexec/cups/cgi-bin/*				Px,
  /usr/libexec/cups/backend/*				Px,
  /usr/libexec/cups/driver/*				Px,
  /usr/libexec/cups/filter/*				Px,
  
  # READS/WRITES ---------------------------------------
  /usr/share/cups/{,**}					r,
  /usr/share/ppd/{,**}					r,
  /var/spool/cups/{,**}					wr,
  /var/cache/cups/{,**}					wr,
  /usr/libexec/cups/{backend,driver}/			r,
}

profile cups.driver /usr/libexec/cups/driver/* {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/cups/driver/*				mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/gutenprint/{,**}				r,
  /usr/lib{,32,64}/gutenprint/{,**}			r,
  /usr/lib{,32,64}/gutenprint/[0-9]*/modules/*.so	m,
  /var/spool/cups/{,**}					wr,
}

profile cups.cgi-bin /usr/libexec/cups/cgi-bin/* flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/cups/cgi-bin/*				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/cups/{,**}					r,
  /usr/share/cups/{,**}					r,
  /run/cups/certs/{,**}					r,
  /run/cups/cups.sock					rw,
  /var/cache/cups/*					r,
  /var/spool/cups/{,**}					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/?????????????				rw,
}

profile cups.filter /usr/libexec/cups/filter/* flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/unix-pattern/cupsd-virtual>
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/cups/filter/*				Pxmr,
  /usr/bin/pdftops					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/cups/ppd/*.ppd					r,
  /usr/share/poppler/{,**}				r,
  /usr/share/cups/{,**}					r,
  /var/spool/cups/*					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/??????*					rw,
}

profile cups.backend /usr/libexec/cups/backend/* {
  #include <abstractions/base>
  #include <abstractions/unix-pattern/cupsd-virtual>
  
  # CAPABILITIES ---------------------------------------
  capability wake_alarm,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/bus/usb/						r,
  /sys/bus/						r,
  /sys/bus/usb/devices/					r,
  /sys/class/						r,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/{,**}		r,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/cups/backend/*				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/cups/snmp.conf					r,
  /etc/cups/ppd/*.ppd					r,
  /etc/udev/udev.conf					r,
  /usr/share/cups/{,**}					r,
  /var/cache/cups/*.snmp				r,
}

profile cups.smbspool /usr/bin/smbspool flags=(complain) {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/smbspool					mr,
}

profile cups.init.d /etc/init.d/cupsd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability fsetid,
  capability chown,
  capability dac_override,
  capability dac_read_search,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/cupsd					Px,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/cupsd				r,
  /var/cache/cups/					w,
  /run/cups/						w,
  /run/cups/certs/					w,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
}
