#include <tunables/global>

profile wget_root {
  #include <abstractions/base>
  #include <abstractions/systemwide-root-files>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/wget						mr,
}
