#include <tunables/global>

# DELEGATION! Потом сделать для каждого вызывающего свои доступы.
# Заменить вызовы черех ix на Px c делегейшеном.
profile wget /usr/bin/wget {
  #include <abstractions/base>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/wget						mr,
}
