#include <local/tunables.d/>

profile wget /usr/bin/wget {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/ssl-certs>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/wget						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/wgetrc						r,
  /usr/portage/distfiles/**				rw,	# sys-apps/portage	# DELEGATION! portage
  
  # USERS ----------------------------------------------
  owner @{HOME_D}/.wget-hsts				rw,
  
  # READS/WRITES ---------------------------------------
  deny /.wget-hsts					rwk,	# Мусорит в корень, использовать --hsts-file=file.
  								# Процессы запущенные из cron работают некорректно с wget.
  
  # TEMP -----------------------------------------------
  owner /tmp/hosts					rwk,	# DELEGATION! hosts.sh.cron.daily
  owner /tmp/oinkmaster.@{TMP10}/**			w,	# net-analyzer/oinkmaster	# DELEGATION! oinkmaster.cron.daily
  owner /var/tmp/portage/webrsync-@{TMP6}/**		w,	# sys-apps/portage	# DELEGATION! portage.emerge-webrsync
  
  # DENY INHERIT ---------------------------------------
  deny /tmp/lynis.cron.@{TMP6}				w,	# app-forensics/lynis, lynis.cron.daily
  deny /tmp/oinkmaster.cron.@{TMP6}			w,	# net-analyzer/oinkmaster, oinkmaster.cron.daily
}

# Профиль должен вызываться только из shell_root,
# для остального использовать профиль wget с делегейшен.
profile wget_root {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/ssl-certs>
  #include <abstractions/fs/access-by-pattern-filemanager>
  #include <abstractions/fs/access-by-pattern-systemusers>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/wget						mr,
  
  # READS/WRITES ---------------------------------------
  deny /.wget-hsts					rwk,	# Мусорит в корень, использовать --hsts-file=file.
  								# Процессы запущенные из cron работают некорректно с wget.
  
  # USERS ----------------------------------------------
  owner @{HOME_D}/.wget-hsts				rwk,
}
