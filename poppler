#include <local/tunables.d/>

profile poppler.pdftops /usr/bin/pdftops {
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/unix/cupsd-virtual>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pdftops					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/fonts/fonts.conf					r,
  /etc/fonts/conf.d/{,*}				r,
  /etc/fonts/conf.avail/{,*}				r,
  /usr/share/poppler/{,**}				r,
  
  # TEMP -----------------------------------------------
  owner /tmp/?????????????				r,
}
