#include <local/tunables.d/>

# .jpeg, .jpg, .jpe
@{local_ext}=[jJ][pP]{[eE][gG],[eEgG]}
# .tiff, .tif
@{local_ext}+=[tT][iI][fF]{,[fF]}
# .svg, .svgz
@{local_ext}+=[sS][vV][gG]{,[zZ]}
# .png
@{local_ext}+=[pP][nN][gG]
# .gif
@{local_ext}+=[gG][iI][fF]
# .bmp
@{local_ext}+=[bB][mM][pP]
# .xpm
@{local_ext}+=[xX][pP][mM]
# .dng
@{local_ext}+=[dD][nN][gG]
# .cr2
@{local_ext}+=[cC][rR]2
# .dcr
@{local_ext}+=[dD][cC][rR]
# .k25
@{local_ext}+=[kK]25
# .nef, .pef
@{local_ext}+=[nNpP][eE][fF]
# .arw
@{local_ext}+=[aA][rR][wW]
# .sr2, .srf
@{local_ext}+=[sS][rR][2fF]

# предустановка для abstractions/fs/access-by-user-preset-rwk
@{USERS_DIR_rwk}="[^.]**"
@{USERS_FILE_rwk}="[^.]*.@{local_ext}"

profile ristretto /usr/bin/ristretto {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/xfconf>
  #include <abstractions/dbus/thumbnails>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  #include <abstractions/unix/gvfsd-smb>
  #include <abstractions/unix/gvfsd-smb-virtual>
  #include <abstractions/profile_transitions/users-strict-web>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/xfce/FileManager"
  	interface="org.freedesktop.DBus.Properties"
  	peer=(name=":[0-9]*.[0-9]*",label="thunar"),	# xfce-base/thunar
  dbus send
  	bus=session
  	path="/org/xfce/FileManager"
  	interface="org.xfce.FileManager"
	member="DisplayFileProperties"
  	peer=(name=":[0-9]*.[0-9]*",label="thunar"),	# xfce-base/thunar	# Вызываем свойства файла (Файл > Свойства).
  dbus send
  	bus=session
  	path="/org/freedesktop/thumbnails/Thumbnailer*"
  	interface="org.freedesktop.DBus.Properties"
  	peer=(name=":[0-9]*.[0-9]*",label="tumbler"),	# xfce-extra/tumbler
  dbus send
  	bus=session
  	path="/org/freedesktop/thumbnails/Thumbnailer*"
  	interface="org.freedesktop.thumbnails.Thumbnailer*"
  	peer=(name=":[0-9]*.[0-9]*",label="tumbler"),	# xfce-extra/tumbler
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC_D}/@{pid}/fd/					r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/ristretto					mr,
  /usr/bin/exo-open					Px,	# xfce-base/exo
  
  # READS/WRITES ---------------------------------------
  /usr/share/misc/magic.mgc				r,	# sys-apps/file
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/xfce4/help.rc			rw,
  owner @{HOME}/.config/xfce4/help.rc.*.tmp		rw,
  owner @{HOME}/.config/ristretto/			rw,
  owner @{HOME}/.config/ristretto/*			rwk,
  owner @{HOME}/.local/share/ristretto/{,**}		rw,
}
