#include <tunables/global>

profile ima_evm_utils_evmctl_root {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/evmctl					mr,
  /bin/bash						Cx -> shell,
  
  # READS/WRITES ---------------------------------------
  /**							r,
  
  profile shell {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_read_search,
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					w,
    
    # EXECUTABLES --------------------------------------
    /bin/bash						mr,
    /sbin/blkid						Px,
  }
}
