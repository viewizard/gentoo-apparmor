#include <tunables/global>
profile ima_evm_utils_evmctl_root {
  #include <abstractions/base>
  
  capability dac_read_search,
  capability dac_override,
  
  capability sys_admin,
  
  /dev/pts/[0-9]* w,
  
  /usr/bin/evmctl mr,
  /bin/bash Cx -> shell,
  
  /** r,
  
  
  profile shell {
    #include <abstractions/base>
    
    capability dac_read_search,
    capability dac_override,
    
    /dev/tty rw,
    /dev/pts/[0-9]* w,
    
    /bin/bash mr,
    /sbin/blkid Px,
    
  }
  
}
