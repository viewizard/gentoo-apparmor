#include <tunables.d/>

profile ima-evm-utils.evmctl /usr/bin/evmctl {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						w,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/evmctl					mr,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /{,**}						r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_read_search,
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /sbin/blkid						Px,
  }
}
