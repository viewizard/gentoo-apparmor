#include <tunables/global>
profile porthole /usr/lib{,32,64}/python-exec/@{PYTHON}/porthole {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/python>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* rw,
  /dev/ptmx rw,
  
  /bin/bash cx -> shell,
  /bin/bzip2 ix,
  
  /usr/bin/sandbox ixr,
  /etc/sandbox.conf r,
  /etc/sandbox.d/{,*} r,
  
  /usr/portage/** r,
  /usr/local/portage/** r,
  /var/db/pkg/{,**} r,  
  /etc/portage/** r,
  /etc/profile.env r,
  /usr/share/portage/** r,
  /var/lib/portage/* r,
  /var/cache/edb/** r,
  /var/db/porthole/descriptions.db w,
  
  /usr/share/gtksourceview-2.0/** r,
  /usr/share/porthole/** r,
  
  owner @{HOME}/.porthole/{,prefs.xml} rw,
  
  # Noisy
  deny /usr/lib{,32,64}/@{PYTHON}/site-packages/cairo/__init__.pyc w,
  
  
  profile shell {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /bin/uname ix,
    /usr/lib{,32,64}/portage/@{PYTHON}/ebuild.sh ix,

    /usr/portage/** r,
    /usr/local/portage/** r,
    /usr/share/sandbox/* r,
    
  }
  
}
