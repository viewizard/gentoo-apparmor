#include <tunables/global>

profile porthole @{PYTHON_EXEC}/porthole {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/python>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  /dev/pts/[0-9]*					rw,
  /dev/ptmx						rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						cx,
  /bin/bzip2						ix,
  /usr/bin/sandbox					ixr,
  
  # READS/WRITES ---------------------------------------
  /etc/sandbox.conf					r,
  /etc/sandbox.d/{,*}					r,
  /etc/portage/**					r,
  /etc/profile.env					r,
  /usr/portage/**					r,
  /usr/local/portage/**					r,
  /usr/share/portage/**					r,
  /usr/share/gtksourceview-2.0/**			r,
  /usr/share/porthole/**				r,
  @{PYTHON_PACKAGES}/cairo/**.pyc{,.*}			w,
  /var/lib/portage/*					r,
  /var/cache/edb/**					r,
  /var/db/pkg/{,**}					r,
  /var/db/porthole/descriptions.db			w,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.porthole/{,prefs.xml}			rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
    /usr/lib{,32,64}/portage/@{PYTHON}/ebuild.sh	ix,
    
    # READS/WRITES -------------------------------------
    /usr/portage/**					r,
    /usr/local/portage/**				r,
    /usr/share/sandbox/*				r,
  }
}
