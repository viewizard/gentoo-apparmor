#include <tunables/global>

profile porthole @{PYTHON_EXEC}/porthole {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/python>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/nameservice>
  #include <abstractions/ncurses>
  #include <abstractions/xdg-open>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/ptmx						rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						cx,
  /bin/stty						Px,
  /usr/bin/sandbox					cx,
  
  # READS/WRITES ---------------------------------------
  /etc/portage/**					r,
  /etc/profile.env					r,
  /usr/portage/**					r,
  /usr/local/portage/**					r,
  /usr/share/portage/**					r,
  /usr/share/gtksourceview-[2-9]*/**			r,
  /usr/share/porthole/**				r,
  /var/lib/portage/*					r,
  /var/cache/edb/**					r,
  /var/db/pkg/{,**}					r,
  /var/db/porthole/descriptions.db			w,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.porthole/{,prefs.xml}			rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
  }
  
  profile sandbox /usr/bin/sandbox {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/sandbox					mr,
    @{shell}						px -> porthole_sandbox_shell,
    
    # READS/WRITES -------------------------------------
    /etc/sandbox.conf					r,
    /etc/sandbox.d/{,**}				r,
    /usr/portage/{,**}					r,
  }
}

profile porthole_sandbox_shell {
  include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /usr/lib{,32,64}/portage/@{PYTHON}/ebuild.sh		Px,
  
  # READS/WRITES ---------------------------------------
  /usr/share/sandbox/sandbox.bashrc			r,
  /usr/portage/{,**}					r,
}
