    deny /root/.local/share/gvfs-metadata/{,**}		rw,
  }
  
  profile lzip /usr/bin/lzip flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rwkl>
    #include <abstractions/fs-access-by-pattern-systemusers>
    #include <abstractions/fs-deny-by-pattern-internet>
    #include <abstractions/fs-deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/lzip					mr,
    
    # USERS --------------------------------------------
    /root/.cache/.fr-*/{,**}				rw,
    
    # DENY INHERIT -------------------------------------
    deny /root/.local/share/gvfs-metadata/{,**}		rw,
  }
  
  profile xz /usr/bin/xz flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rwkl>
    #include <abstractions/fs-access-by-pattern-systemusers>
    #include <abstractions/fs-deny-by-pattern-internet>
    #include <abstractions/fs-deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/xz						mr,
    
    # USERS --------------------------------------------
    /root/.cache/.fr-*/{,**}				rw,
    
    # DENY INHERIT -------------------------------------
    deny /root/.local/share/gvfs-metadata/{,**}		rw,
  }
  
  profile ar /usr/@{CHOST}/binutils-bin/*/ar flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rwkl>
    #include <abstractions/fs-access-by-pattern-systemusers>
    #include <abstractions/fs-deny-by-pattern-internet>
    #include <abstractions/fs-deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/@{CHOST}/binutils-bin/*/ar			mr,
    
    # DENY INHERIT -------------------------------------
    deny /root/.local/share/gvfs-metadata/{,**}		rw,
  }
  
  profile rar /opt/rar/rar {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rwkl>
    #include <abstractions/fs-access-by-pattern-systemusers>
    #include <abstractions/fs-deny-by-pattern-internet>
    #include <abstractions/fs-deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /opt/rar/rar					mr,
    
    # NOISY --------------------------------------------
    deny /etc/						r,
    deny /usr/{,local/}lib{,32,64}/			r,
  }
}

# FIX ME! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile engrampa_tar_shell_root flags=(attach_disconnected,complain) {
  #include <abstractions/base>
  #include <abstractions/fs-access-by-users-preset-rwkl>
  #include <abstractions/fs-access-by-pattern-systemusers>
  #include <abstractions/fs-deny-by-pattern-internet>
  #include <abstractions/fs-deny-private-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/gzip						Cx,	# FS ACCESS! gzip
  /bin/bzip2						Cx,	# FS ACCESS! bzip2
  /usr/bin/lzip						Cx,	# FS ACCESS! lzip
  /usr/bin/xz						Cx,	# FS ACCESS! xz
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
  
  profile gzip /bin/gzip flags=(attach_disconnected,complain) {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rwkl>
    #include <abstractions/fs-access-by-pattern-systemusers>
    #include <abstractions/fs-deny-by-pattern-internet>
    #include <abstractions/fs-deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/gzip						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
  
  profile bzip2 /bin/bzip2 flags=(attach_disconnected,complain) {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rwkl>
    #include <abstractions/fs-access-by-pattern-systemusers>
    #include <abstractions/fs-deny-by-pattern-internet>
    #include <abstractions/fs-deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/bzip2						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
  
  profile lzip /usr/bin/lzip flags=(attach_disconnected,complain) {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rwkl>
    #include <abstractions/fs-access-by-pattern-systemusers>
    #include <abstractions/fs-deny-by-pattern-internet>
    #include <abstractions/fs-deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/lzip					mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
  
  profile xz /usr/bin/xz flags=(attach_disconnected,complain) {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rwkl>
    #include <abstractions/fs-access-by-pattern-systemusers>
    #include <abstractions/fs-deny-by-pattern-internet>
    #include <abstractions/fs-deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/xz						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
}

profile engrampa_tap /usr/libexec/thunar-archive-plugin/engrampa.tap {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/thunar-archive-plugin/engrampa.tap	r,
  @{shell}						mr,
  /usr/bin/engrampa					Px,
}

profile engrampa_tap_root {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/thunar-archive-plugin/engrampa.tap	r,
  @{shell}						mr,
  /usr/bin/engrampa					Px -> engrampa_root,
}
