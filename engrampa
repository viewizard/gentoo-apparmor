#include <tunables/global>

# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]**"

profile engrampa /usr/bin/engrampa {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/dconf>
  #include <abstractions/nameservice>
  #include <abstractions/binary-helper-strict>
  #include <abstractions/xdg-open>
  #include <abstractions/fs-access-by-users-preset-rwkl>
  #include <abstractions/fs-deny-private-strict>
  #include <abstractions/fs-deny-by-pattern-internet>
  #include <abstractions/unix-pattern/gvfsd-trash>
  #include <abstractions/unix-pattern/gvfsd-network>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /sys/devices/system/cpu/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/engrampa					mr,
  @{shell}						Cx,
  /bin/mv						ix,
  /bin/rm						ix,
  /bin/cp						ix,
  /bin/tar						ix,
  /bin/bzip2						ix,
  /bin/gzip						ix,
  /usr/bin/7z						ixr,
  /usr/bin/7za						ixr,
  /usr/bin/zip						ix,
  /usr/bin/unzip					ix,
  /usr/bin/lzip						ix,
  /usr/bin/xz						ix,
  /usr/lib{,32,64}/p7zip/7z				ix,
  /usr/lib{,32,64}/p7zip/7za				ix,
  /usr/@{CHOST}/binutils-bin/*/ar			ix,
  /opt/rar/rar						Cx,
  
  # READS/WRITES ---------------------------------------
  /usr/share/engrampa/{,**}				r,
  /usr/lib{,32,64}/p7zip/7z.so				m,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.fr-*/{,**}				rw,
  owner @{HOME}/.config/mimeapps.list*			rw,
  owner @{HOME_CACHE}/.fr-*/{,**}			rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rwkl>
    #include <abstractions/fs-deny-by-pattern-internet>
    #include <abstractions/fs-deny-private-strict>
    
    # PSEUDO ---------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/gzip						ix,
    /bin/bzip2						ix,
    /usr/bin/lzip					ix,
    /usr/bin/xz						ix,
  }
  
  profile rar /opt/rar/rar {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rwkl>
    #include <abstractions/fs-deny-by-pattern-internet>
    #include <abstractions/fs-deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /opt/rar/rar					mr,
    
    # NOISY --------------------------------------------
    deny /etc/						r,
    deny /usr/{,local/}lib{,32,64}/			r,
  }
}

profile engrampa_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X_sudo>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/dconf>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open_root>
  #include <abstractions/binary-helper-strict_root>
  #include <abstractions/fs-access-by-users-preset-rwkl>
  #include <abstractions/fs-access-by-pattern-systemusers>
  #include <abstractions/fs-deny-by-pattern-internet>
  #include <abstractions/fs-deny-private-strict>
  #include <abstractions/unix-pattern/gvfsd-trash>
  #include <abstractions/unix-pattern/gvfsd-network>
  
  # CAPABILITIES ---------------------------------------
  capability chown,
  capability fowner,
  capability fsetid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /sys/devices/system/cpu/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/engrampa					mr,
  @{shell}						Cx,
  /bin/mv						ix,
  /bin/rm						ix,
  /bin/cp						ix,
  /bin/tar						ix,
  /bin/bzip2						ix,
  /bin/gzip						ix,
  /usr/bin/7z						ixr,
  /usr/bin/7za						ixr,
  /usr/bin/zip						ix,
  /usr/bin/unzip					ix,
  /usr/bin/lzip						ix,
  /usr/bin/xz						ix,
  /usr/lib{,32,64}/p7zip/7z				ix,
  /usr/lib{,32,64}/p7zip/7za				ix,
  /usr/@{CHOST}/binutils-bin/*/ar			ix,
  /opt/rar/rar						Cx,
  
  # READS/WRITES ---------------------------------------
  /usr/share/engrampa/{,**}				r,
  /usr/lib{,32,64}/p7zip/7z.so				m,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.fr-*/{,**}				rw,
  owner @{HOME}/.config/mimeapps.list*			rw,
  @{HOME_CACHE}/.fr-*/{,**}				rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rwkl>
    #include <abstractions/fs-access-by-pattern-systemusers>
    #include <abstractions/fs-deny-by-pattern-internet>
    #include <abstractions/fs-deny-private-strict>
    
    # PSEUDO ---------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/gzip						ix,
    /bin/bzip2						ix,
    /usr/bin/lzip					ix,
    /usr/bin/xz						ix,
  }
  
  profile rar /opt/rar/rar {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rwkl>
    #include <abstractions/fs-access-by-pattern-systemusers>
    #include <abstractions/fs-deny-by-pattern-internet>
    #include <abstractions/fs-deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /opt/rar/rar					mr,
    
    # NOISY --------------------------------------------
    deny /etc/						r,
    deny /usr/{,local/}lib{,32,64}/			r,
  }
}

profile engrampa_tap /usr/libexec/thunar-archive-plugin/engrampa.tap {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/thunar-archive-plugin/engrampa.tap	r,
  @{shell}						mr,
  /usr/bin/engrampa					Px,
}

profile engrampa_tap_root {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/thunar-archive-plugin/engrampa.tap	r,
  @{shell}						mr,
  /usr/bin/engrampa					Px -> engrampa_root,
}
