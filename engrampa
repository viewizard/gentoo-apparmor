# IMPROVE! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile engrampa_dpkg_deb_root {
  #include <abstractions/base>
  #include <abstractions/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/access-by-pattern-systemusers>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dpkg-deb					mr,
  /bin/rm						Cx,
  /bin/tar						Cx,
  
  # TEMP -----------------------------------------------
  owner /tmp/dpkg-deb.*/				rw,
  owner /tmp/dpkg-deb.*/*				r,
  
  profile rm /bin/rm {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/dpkg-deb.*/{,**}				rw,
  }
  
  profile tar /bin/tar {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/tar						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/dpkg-deb.*/{,**}				w,
  }
}

