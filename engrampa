# DELEGATION! На данный момент не можем вынести в отдельные профили все архиваторы,
# т.к. кол-во переключений на именованные профили не может превышать 12, с root
# будут проблемы (нужно делать больше 12 переключений профилей).

#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]**"

profile engrampa /usr/bin/engrampa {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  #include <abstractions/dconf>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/deny-private-strict>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/unix/gvfsd-trash>
  #include <abstractions/unix/gvfsd-network>
  #include <abstractions/profile_transitions/users-mime-related>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term) peer="engrampa//*",
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/engrampa					mr,
  @{shell}						Cx,
  /bin/mv						Cx,
  /bin/rm						Cx,
  /bin/cp						Cx,
  /bin/tar						Cx,
  /bin/bzip2						Cx,
  /bin/gzip						Cx,
  /usr/bin/7z						Cx,
  /usr/bin/7za						Cx,
  /usr/bin/zip						Cx,
  /usr/bin/unzip					Cx,
  /usr/bin/lzip						Cx,
  /usr/bin/xz						Cx,
  /usr/bin/dpkg-deb					Px -> engrampa_dpkg_deb,
  /usr/@{CHOST}/binutils-bin/*/ar			Cx,
  /opt/rar/rar						Cx,
  
  # READS/WRITES ---------------------------------------
  /usr/share/engrampa/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.fr-*/{,**}				rw,
  owner @{HOME}/.config/mimeapps.list*			rw,
  owner @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /usr/libexec/engrampa/rpm2cpio			Px -> engrampa_rpm2cpio,
  }
  
  profile mv /bin/mv {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/mv						mr,
    
    # DENY INHERIT -------------------------------------
    deny @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # USERS --------------------------------------------
    owner @{HOME}/.fr-*/{,**}				rw,
    
    # DENY INHERIT -------------------------------------
    deny @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  }
  
  profile cp /bin/cp {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/cp						mr,
    
    # USERS --------------------------------------------
    owner @{HOME}/.fr-*/{,**}				rw,
    
    # DENY INHERIT -------------------------------------
    deny @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  }
  
  profile tar /bin/tar {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/tar						mr,
    @{shell}						Px -> engrampa_tar_shell,
    /bin/bzip2						ix,	# Oставляем запуск через ix.
    /bin/gzip						ix,	# Oставляем запуск через ix.
    /usr/bin/lzip					ix,	# Oставляем запуск через ix.
    /usr/bin/xz						ix,	# Oставляем запуск через ix.
    
    # USERS --------------------------------------------
    owner @{HOME}/.fr-*/{,**}				rw,
    
    # DENY INHERIT -------------------------------------
    deny @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  }
  
  profile bzip2 /bin/bzip2 {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/bzip2						mr,
    
    # USERS --------------------------------------------
    owner @{HOME}/.fr-*/{,**}				rw,
    
    # DENY INHERIT -------------------------------------
    deny @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  }
  
  profile gzip /bin/gzip {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/gzip						mr,
    
    # USERS --------------------------------------------
    owner @{HOME}/.fr-*/{,**}				rw,
    
    # DENY INHERIT -------------------------------------
    deny @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  }
  
  profile 7z /usr/bin/7z {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /sys/devices/system/cpu/				r,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/7z						r,
    @{shell}						mr,
    /usr/lib{,32,64}/p7zip/7z				ix,	# Все правильно, для 7z используем с ix.
    
    # READS/WRITES -------------------------------------
    /usr/lib64/p7zip/7z.so				m,
    
    # USERS --------------------------------------------
    owner @{HOME}/.fr-*/{,**}				rw,
    
    # DENY INHERIT -------------------------------------
    deny @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  }
  
  profile 7za /usr/bin/7za {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /sys/devices/system/cpu/				r,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/7za					r,
    @{shell}						mr,
    /usr/lib{,32,64}/p7zip/7za				ix,	# Все правильно, для 7za используем с ix.
    
    # DENY INHERIT -------------------------------------
    deny @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  }
  
  profile zip /usr/bin/zip {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/zip					mr,
    
    # DENY INHERIT -------------------------------------
    deny @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  }
  
  profile unzip /usr/bin/unzip {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/unzip					mr,
    
    # DENY INHERIT -------------------------------------
    deny @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  }
  
  profile lzip /usr/bin/lzip {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/lzip					mr,
    
    # USERS --------------------------------------------
    owner @{HOME}/.fr-*/{,**}				rw,
    
    # DENY INHERIT -------------------------------------
    deny @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  }
  
  profile xz /usr/bin/xz {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/xz						mr,
    
    # USERS --------------------------------------------
    owner @{HOME}/.fr-*/{,**}				rw,
    
    # DENY INHERIT -------------------------------------
    deny @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  }
  
  profile ar /usr/@{CHOST}/binutils-bin/*/ar {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/@{CHOST}/binutils-bin/*/ar			mr,
    
    # DENY INHERIT -------------------------------------
    deny @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  }
  
  profile rar /opt/rar/rar {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /opt/rar/rar					mr,
    
    # NOISY --------------------------------------------
    deny /etc/						r,
    deny /usr/{,local/}lib{,32,64}/			r,
    
    # DENY INHERIT -------------------------------------
    deny @{HOME}/.local/share/gvfs-metadata/{,**}	rw,
  }
}

# IMPROVE! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile engrampa_rpm2cpio {
  #include <abstractions/base>
  #include <abstractions/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/engrampa/rpm2cpio			mr,
  @{shell}						Cx,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    @{shell}						Px -> engrampa_rpm2cpio_shell,
  }
}

# IMPROVE! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile engrampa_rpm2cpio_shell {
  #include <abstractions/base>
  #include <abstractions/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/dd						Cx,
  /bin/gzip						Cx,
  /bin/cpio						Cx,
  
  profile dd /bin/dd {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/dd						mr,
  }
  
  profile gzip /bin/gzip {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/gzip						mr,
  }
  
  profile cpio /bin/cpio {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/cpio						mr,
  }
}

# IMPROVE! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile engrampa_dpkg_deb {
  #include <abstractions/base>
  #include <abstractions/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dpkg-deb					mr,
  /bin/rm						Cx,
  /bin/tar						Cx,
  
  # TEMP -----------------------------------------------
  owner /tmp/dpkg-deb.*/				rw,
  owner /tmp/dpkg-deb.*/*				r,
  
  profile rm /bin/rm {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/dpkg-deb.*/{,**}				rw,
  }
  
  profile tar /bin/tar {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/tar						mr,
    
    # TEMP ---------------------------------------------
    owner /tmp/dpkg-deb.*/{,**}				w,
  }
}

# IMPROVE! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile engrampa_tar_shell flags=(attach_disconnected) {
  #include <abstractions/base>
  #include <abstractions/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/gzip						Cx,
  /bin/bzip2						Cx,
  /usr/bin/lzip						Cx,
  /usr/bin/xz						Cx,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
  
  profile gzip /bin/gzip flags=(attach_disconnected) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/gzip						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
  
  profile bzip2 /bin/bzip2 flags=(attach_disconnected) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/bzip2						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
  
  profile lzip /usr/bin/lzip flags=(attach_disconnected) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/lzip					mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
  
  profile xz /usr/bin/xz flags=(attach_disconnected) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /usr/bin/xz						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
}

profile engrampa_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X_sudo>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dconf>
  #include <abstractions/xdg-open_root>
  #include <abstractions/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/access-by-pattern-systemusers>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  #include <abstractions/unix/gvfsd-trash>
  #include <abstractions/unix/gvfsd-network>
  #include <abstractions/profile_transitions/root-mime-related>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term) peer="engrampa_root//*",
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/engrampa					mr,
  @{shell}						Cx,
  /bin/mv						Cx,
  /bin/rm						Cx,
  /bin/cp						Cx,
  /bin/tar						Cx,
  /bin/bzip2						Cx,
  /bin/gzip						Cx,
  /usr/bin/7z						Cx,
  /usr/bin/7za						Cx,
  /usr/bin/zip						Cx,
  /usr/bin/unzip					Cx,
  /usr/bin/lzip						Cx,
  /usr/bin/xz						Cx,
  /usr/bin/dpkg-deb					Px -> engrampa_dpkg_deb_root,
  /usr/@{CHOST}/binutils-bin/*/ar			Cx,
  /opt/rar/rar						Cx,
  
  # READS/WRITES ---------------------------------------
  /usr/share/engrampa/{,**}				r,
  
  # USERS ----------------------------------------------
  /root/.config/mimeapps.list*				rw,
  /root/.local/share/gvfs-metadata/{,**}		rw,
  /root/.cache/.fr-*/{,**}				rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /usr/libexec/engrampa/rpm2cpio			Px -> engrampa_rpm2cpio_root,
  }
  
  profile mv /bin/mv {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/mv						mr,
    
    # DENY INHERIT -------------------------------------
    deny /root/.local/share/gvfs-metadata/{,**}	rw,
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # USERS --------------------------------------------
    /root/.cache/.fr-*/{,**}				rw,
    
    # DENY INHERIT -------------------------------------
    deny /root/.local/share/gvfs-metadata/{,**}		rw,
  }
  
  profile cp /bin/cp {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    
    # EXECUTABLES --------------------------------------
    /bin/cp						mr,
    
    # USERS --------------------------------------------
    /root/.cache/.fr-*/{,**}				rw,
    
    # DENY INHERIT -------------------------------------
    deny /root/.local/share/gvfs-metadata/{,**}		rw,
  }
  
  profile tar /bin/tar {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # CAPABILITIES ---------------------------------------
    capability chown,
    capability fowner,
    capability fsetid,
    
    # EXECUTABLES --------------------------------------
    /bin/tar						mr,
    @{shell}						Px -> engrampa_tar_shell_root,
    /bin/bzip2						ix,	# Oставляем запуск через ix.
    /bin/gzip						ix,	# Oставляем запуск через ix.
    /usr/bin/lzip					ix,	# Oставляем запуск через ix.
    /usr/bin/xz						ix,	# Oставляем запуск через ix.
    
    # USERS --------------------------------------------
    /root/.cache/.fr-*/{,**}				rw,
    
    # DENY INHERIT -------------------------------------
    deny /root/.local/share/gvfs-metadata/{,**}		rw,
  }
  
  profile bzip2 /bin/bzip2 {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
