  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/gzip						Cx,
  /bin/bzip2						Cx,
  /usr/bin/lzip						Cx,
  /usr/bin/xz						Cx,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
  
  profile gzip /bin/gzip flags=(attach_disconnected) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/gzip						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
  
  profile bzip2 /bin/bzip2 flags=(attach_disconnected) {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwkl>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # EXECUTABLES --------------------------------------
    /bin/bzip2						mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				rw,	# flags=(attach_disconnected)
  }
  
  profile lzip /usr/bin/lzip flags=(attach_disconnected) {
    #include <abstractions/base>
