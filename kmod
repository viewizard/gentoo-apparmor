#include <local/tunables.d/>

profile kmod /{bin/kmod,sbin/modprobe,sbin/modeinfo} {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_module,
  capability sys_admin,
  capability syslog,
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /sys/module/**					r,
  @{PROC}/{cmdline,modules}				r,
  
  # EXECUTABLES ----------------------------------------
  /bin/kmod						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/modprobe.d/{,*}					r,
  /lib{,32,64}/modules/*/modules.*			rw,
  /usr/src/@{kernel}/System.map				r,
  /usr/src/@{kernel}/tar-install/lib/modules/@{kernel_ver}/ r,		# DELEGATION! make
  /usr/src/@{kernel}/tar-install/lib/modules/@{kernel_ver}/** rw,	# Вызывать kmod в make через "Px + {}"
  /run/tmpfiles.d/kmod.conf				w,
  
  # TEMP -----------------------------------------------
  audit owner /tmp/depmod.*/{,**}			rw,	# FIX ME! audit 26.11.2017
  
  # DENY INHERIT ---------------------------------------
  deny /var/log/Xorg.@{X_DISPLAY}.log			w,	# x11-base/xorg-server, xorg-server.Xorg
  deny /tmp/lynis.cron.@{TMP6}				w,	# app-forensics/lynis, lynis.cron.daily
}
