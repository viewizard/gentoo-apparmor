#include <tunables/global>
profile kmod /bin/kmod {
  #include <abstractions/base>
  #include <abstractions/user-tmp>
  
  capability sys_module,
  
  /dev/pts/[0-9]* w,
  /sys/module/** r,
  @{PROC}/cmdline r,
  @{PROC}/modules r,
  
  /bin/kmod r,
  
  /etc/modprobe.d/{,*} r,
  /lib64/modules/*/modules.* rw,
  /usr/src/linux-*-{hardened,gentoo}*/System.map r,
  
}
