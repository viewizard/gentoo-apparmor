#include <tunables/global>

profile kmod /{bin/kmod,sbin/modprobe,sbin/modeinfo} {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_module,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  /dev/pts/[0-9]*					w,
  /sys/module/**					r,
  @{PROC}/{cmdline,modules}				r,
  
  # EXECUTABLES ----------------------------------------
  /bin/kmod						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/modprobe.d/{,*}					r,
  /lib{,32,64}/modules/*/modules.*			rw,
  /usr/src/linux-[0-9]*-{hardened,gentoo}*/System.map	r,
  /usr/src/linux-[0-9]*-{hardened,gentoo}*/tar-install/lib/modules/[0-9]*-{hardened,gentoo}*/ r,
  /usr/src/linux-[0-9]*-{hardened,gentoo}*/tar-install/lib/modules/[0-9]*-{hardened,gentoo}*/** rw,
  /run/tmpfiles.d/kmod.conf				w,
  
  # TEMP -----------------------------------------------
  owner /tmp/depmod.*/{,**}				rw,
}
