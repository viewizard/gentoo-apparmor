#include <local/tunables.d/>

profile xrdb@{p_user} /usr/bin/xrdb@{t_user} {
  #include <abstractions/base>
  #include <abstractions-user/X-connection-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xrdb						mr,
}
