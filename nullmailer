#include <local/tunables.d/>

profile nullmailer.sendmail /usr/sbin/sendmail flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/sendmail					mr,
  /usr/bin/nullmailer-inject				Px,
  
  # TEMP -----------------------------------------------
  owner /tmp/mail.RsXXXX@{TMP6}				r,	# mailx
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile nullmailer.nullmailer-inject /usr/bin/nullmailer-inject flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/nullmailer-inject				mr,
  /usr/sbin/nullmailer-queue				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/nullmailer/{,*}					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/mail.RsXXXX@{TMP6}				r,	# mailx
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile nullmailer.nullmailer-queue /usr/sbin/nullmailer-queue flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/nullmailer-queue				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/nullmailer/{,*}					r,
  /var/spool/nullmailer/				r,
  /var/spool/nullmailer/**				rw,
  link subset /var/spool/nullmailer/queue/[0-9]*.@{pids} -> /var/spool/nullmailer/tmp/@{pids},	# [0-9]* - 10 цифр
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile nullmailer.smtp /usr/libexec/nullmailer/smtp flags=(attach_disconnected) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/ssl-certs>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/nullmailer/smtp				mr,
  
  # READS/WRITES ---------------------------------------
  /var/spool/nullmailer/trigger				r,
  /var/spool/nullmailer/queue/**			rw,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile nullmailer.nullmailer-send /usr/sbin/nullmailer-send {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/nullmailer-send				mr,
  /usr/libexec/nullmailer/smtp				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/nullmailer/**					r,
  /var/spool/nullmailer/{,**}				r,
  /var/spool/nullmailer/queue/**			rw,
  
  # DENY INHERIT ---------------------------------------
  deny /var/log/nullmailer/nullmailer.log		w,	# nullmailer.init.d
}

profile nullmailer.init.d /etc/init.d/nullmailer flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability audit_control,
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  @{sys}/fs/cgroup/openrc/nullmailer/tasks		w,
  @{sys}/fs/cgroup/unified/nullmailer/cgroup.procs	w,
  @{sys}/fs/cgroup/unified/nullmailer/cgroup.events	r,
  audit @{PROC}/@{pid}/uid_map				r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  owner @{PROC}/@{pid}/loginuid				wr,
  @{PROC}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/nullmailer-send				Px,
  @{shell}						Cx,
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,	# sys-libs/pam
  /etc/{conf,init}.d/nullmailer				r,
  /etc/security/limits.d/{,*}				r,	# sys-libs/pam
  /run/nullmailer.pid					rwk,
  /run/utmp						rk,
  /var/log/nullmailer/nullmailer.log			w,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{sys}/fs/cgroup/{openrc,unified}/nullmailer/	w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{sys}/fs/cgroup/unified/nullmailer/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{sys}/fs/cgroup/unified/nullmailer/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
