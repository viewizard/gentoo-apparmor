#include <tunables/global>

profile nullmailer.sendmail /usr/sbin/sendmail {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/sendmail					mr,
  /usr/bin/nullmailer-inject				Px,
  
  # TEMP -----------------------------------------------
  owner /tmp/mail.*					r,	# DELEGATION! mailx
  owner /tmp/portage.cron.*				w,	# DELEGATION! 00_update_portage.cron.daily
  owner /tmp/aide.cron.*				w,	# DELEGATION! aide.cron.daily
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
  owner /tmp/glsa.cron.*				w,	# DELEGATION! glsa.cron.daily
  owner /tmp/lynis.cron.*				w,	# DELEGATION! lynis.cron.daily
  owner /tmp/oinkmaster.cron.*				w,	# DELEGATION! oinkmaster.cron.daily
  owner /tmp/dailyhomebackup.cron.*			w,	# DELEGATION! daily_backup.sh.cron.daily
  owner /tmp/homebackup.cron.*				w,	# DELEGATION! weekly_backup.sh.cron.weekly
  owner /tmp/rootbackup.cron.*				w,	# DELEGATION! monthly_backup.sh.cron.weekly
}

profile nullmailer.nullmailer-inject /usr/bin/nullmailer-inject flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/nullmailer-inject				mr,
  /usr/sbin/nullmailer-queue				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/nullmailer/{,*}					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/mail.*					r,	# DELEGATION! mailx
  owner /tmp/portage.cron.*				w,	# DELEGATION! 00_update_portage.cron.daily
  owner /tmp/aide.cron.*				w,	# DELEGATION! aide.cron.daily
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
  owner /tmp/glsa.cron.*				w,	# DELEGATION! glsa.cron.daily
  owner /tmp/lynis.cron.*				w,	# DELEGATION! lynis.cron.daily
  owner /tmp/oinkmaster.cron.*				w,	# DELEGATION! oinkmaster.cron.daily
  owner /tmp/dailyhomebackup.cron.*			w,	# DELEGATION! daily_backup.sh.cron.daily
  owner /tmp/homebackup.cron.*				w,	# DELEGATION! weekly_backup.sh.cron.weekly
  owner /tmp/rootbackup.cron.*				w,	# DELEGATION! monthly_backup.sh.cron.weekly
}

profile nullmailer.nullmailer-queue /usr/sbin/nullmailer-queue {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/nullmailer-queue				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/nullmailer/{,*}					r,
  /var/nullmailer/					r,
  /var/nullmailer/**					rwl,
  
  # TEMP -----------------------------------------------
  owner /tmp/portage.cron.*				w,	# DELEGATION! 00_update_portage.cron.daily
  owner /tmp/aide.cron.*				w,	# DELEGATION! aide.cron.daily
  owner /tmp/chkrootkit.cron.*				w,	# DELEGATION! chkrootkit.cron.daily
  owner /tmp/glsa.cron.*				w,	# DELEGATION! glsa.cron.daily
  owner /tmp/lynis.cron.*				w,	# DELEGATION! lynis.cron.daily
  owner /tmp/oinkmaster.cron.*				w,	# DELEGATION! oinkmaster.cron.daily
  owner /tmp/dailyhomebackup.cron.*			w,	# DELEGATION! daily_backup.sh.cron.daily
  owner /tmp/homebackup.cron.*				w,	# DELEGATION! weekly_backup.sh.cron.weekly
  owner /tmp/rootbackup.cron.*				w,	# DELEGATION! monthly_backup.sh.cron.weekly
}

profile nullmailer.smtp /usr/libexec/nullmailer/smtp {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/ssl_certs>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/nullmailer/smtp				mr,
  
  # READS/WRITES ---------------------------------------
  /var/nullmailer/trigger				r,
  /var/nullmailer/queue/**				rw,
}

profile nullmailer.nullmailer-send /usr/sbin/nullmailer-send {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/nullmailer-send				mr,
  /usr/libexec/nullmailer/smtp				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/nullmailer/**					r,
  /var/nullmailer/{,**}					r,
  /var/nullmailer/queue/**				rw,
}

profile nullmailer.init.d /etc/init.d/nullmailer {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability audit_control,
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  @{PROC}/@{pid}/uid_map				r,
  @{PROC}/@{pid}/loginuid				wr,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/nullmailer-send				Px,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,
  /etc/{conf,init}.d/nullmailer				r,
  /etc/security/limits.d/{,*}				r,
  /run/nullmailer.pid					rwk,
  /run/utmp						rk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}
