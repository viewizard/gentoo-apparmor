#include <tunables/global>

profile nullmailer.sendmail /usr/sbin/sendmail flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/sendmail					mr,
  /usr/bin/nullmailer-inject				Px,
  
  # TEMP -----------------------------------------------
  owner /tmp/mail.*					r,	# mailx
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile nullmailer.nullmailer-inject /usr/bin/nullmailer-inject flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/nullmailer-inject				mr,
  /usr/sbin/nullmailer-queue				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/nullmailer/{,*}					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/mail.*					r,	# mailx
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile nullmailer.nullmailer-queue /usr/sbin/nullmailer-queue flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/nullmailer-queue				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/nullmailer/{,*}					r,
  /var/nullmailer/					r,
  /var/nullmailer/**					rw,
  link subset /var/nullmailer/queue/[0-9]*.@{pid}	-> /var/nullmailer/tmp/@{pid},
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile nullmailer.smtp /usr/libexec/nullmailer/smtp {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/ssl_certs>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/nullmailer/smtp				mr,
  
  # READS/WRITES ---------------------------------------
  /var/nullmailer/trigger				r,
  /var/nullmailer/queue/**				rw,
}

profile nullmailer.nullmailer-send /usr/sbin/nullmailer-send {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/nullmailer-send				mr,
  /usr/libexec/nullmailer/smtp				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/nullmailer/**					r,
  /var/nullmailer/{,**}					r,
  /var/nullmailer/queue/**				rw,
}

profile nullmailer.init.d /etc/init.d/nullmailer {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability audit_control,
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  @{PROC}/@{pid}/uid_map				r,
  @{PROC}/@{pid}/loginuid				wr,
  @{PROC}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/nullmailer-send				Px,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,
  /etc/{conf,init}.d/nullmailer				r,
  /etc/security/limits.d/{,*}				r,
  /run/nullmailer.pid					rwk,
  /run/utmp						rk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}
