#include <tunables/global>

profile nullmailer.sendmail /usr/sbin/sendmail {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/sendmail					mr,
  /usr/bin/nullmailer-inject				Px,
}

profile nullmailer.nullmailer-inject /usr/bin/nullmailer-inject flags=(complain) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/nullmailer-inject				mr,
  /usr/sbin/nullmailer-queue				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/nullmailer/{,*}					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/mail.*					rw,
}

profile nullmailer.nullmailer-queue /usr/sbin/nullmailer-queue {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/nullmailer-queue				mr,
  
  # READS/WRITES ---------------------------------------
  /etc/nullmailer/{,*}					r,
  /var/nullmailer/					r,
  /var/nullmailer/**					rwl,
}

profile nullmailer.smtp /usr/libexec/nullmailer/smtp {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/ssl_certs>
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/nullmailer/smtp				mr,
  
  # READS/WRITES ---------------------------------------
  /var/nullmailer/queue/**				rw,
}

profile nullmailer.nullmailer-send /usr/sbin/nullmailer-send {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/nullmailer-send				mr,
  /usr/libexec/nullmailer/smtp				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/nullmailer/**					r,
  /var/nullmailer/{,**}					r,
  /var/nullmailer/queue/**				rw,
}

profile nullmailer.init.d /etc/init.d/nullmailer {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <abstractions/openrc>
  
  # CAPABILITIES ---------------------------------------
  capability audit_control,
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  @{PROC}/@{pid}/uid_map				r,
  @{PROC}/@{pid}/loginuid				wr,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/nullmailer-send				Px,
  /bin/bash						Cx -> shell,
  
  # READS/WRITES ---------------------------------------
  /etc/environment					r,
  /etc/{conf,init}.d/nullmailer				r,
  /etc/security/limits.d/{,*}				r,
  /run/nullmailer.pid					rwk,
  /run/utmp						rk,
  
  profile shell {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}
