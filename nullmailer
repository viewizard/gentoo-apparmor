#include <tunables/global>
profile nullmailer.sendmail /usr/sbin/sendmail {
  #include <abstractions/base>
  
  /usr/sbin/sendmail r,
  /usr/bin/nullmailer-inject Px,
  
}


profile nullmailer-inject /usr/bin/nullmailer-inject {
  #include <abstractions/base>
  #include <abstractions/user-tmp>
  
  /usr/bin/nullmailer-inject r,
  /usr/sbin/nullmailer-queue Px,
  
  /etc/nullmailer/ r,
  /etc/nullmailer/* r,
  
}


profile nullmailer-queue /usr/sbin/nullmailer-queue {
  #include <abstractions/base>
  
  /usr/sbin/nullmailer-queue r,
  
  /etc/nullmailer/ r,
  /etc/nullmailer/* r,
  
  /var/nullmailer/ r,
  /var/nullmailer/** rwl,
  
}


profile nullmailer.smtp /usr/libexec/nullmailer/smtp {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/ssl_certs>
  
  /usr/libexec/nullmailer/smtp r,
  
  /var/nullmailer/queue/** rw,
  
}


profile nullmailer-send /usr/sbin/nullmailer-send {
  #include <abstractions/base>
  
  /usr/sbin/nullmailer-send r,
  /usr/libexec/nullmailer/smtp Px,
  
  /etc/nullmailer/** r,
  
  /var/nullmailer/ r,
  /var/nullmailer/** r,
  /var/nullmailer/queue/** rw,
  
}


profile nullmailer.init.d /etc/init.d/nullmailer {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <abstractions/openrc>
  
  capability audit_control,
  capability setuid,
  capability setgid,
  
  @{PROC}/@{pid}/uid_map r,
  @{PROC}/@{pid}/loginuid wr,
  
  /usr/sbin/nullmailer-send Px,
  /bin/bash Cxr -> shell,
  
  /etc/environment r,
  /etc/init.d/nullmailer r,
  /etc/security/limits.d/ r,
  /etc/security/limits.d/* r,
  
  /run/nullmailer.pid rwk,
  /run/utmp rk,
  
  
  profile shell {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    
  }
  
}
