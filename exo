#include <tunables/global>

profile exo.exo-open /usr/bin/exo-open flags=(attach_disconnected) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/executable-binary-helper>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/exo-open					mr,
  /usr/lib{,32,64}/xfce4/exo-1/exo-helper-1		Px,
  
  # READS/WRITES ---------------------------------------
  /etc/machine-id					r,
  /usr/share/gvfs/remote-volume-monitors/{,udisks2.monitor} r,
  /usr/portage/licenses/{,*}				r,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile exo.exo-helper /usr/lib{,32,64}/xfce4/exo-1/exo-helper-1 {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/gtk>
  #include <abstractions/fonts>
  #include <abstractions/executable-binary-helper>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/xfce4/exo-1/exo-helper-1		mr,
  /usr/lib{,32,64}/xfce4/exo-1/exo-compose-mail-1	Px,
  
  # READS/WRITES ---------------------------------------
  /usr/share/						r,
  /usr/local/share/					r,
  /usr/share/xfce4/					r,
  /usr/share/xfce4/helpers/{,*}				r,
  /etc/xdg/xfce4/helpers.rc				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/xfce4/helpers.rc*		rw,
  owner @{HOME}/.config/mimeapps.list*			rw,
  owner @{HOME}/.local/share/				r,
  owner @{HOME}/.local/share/xfce4/			r,
  owner @{HOME}/.local/share/xfce4/helpers/{,*}		r,
  owner @{HOME}/.local/share/applications/{,**}		r,
}

profile exo.exo-compose-mail /usr/lib{,32,64}/xfce4/exo-1/exo-compose-mail-1 {
  #include <abstractions/base>
  #include <abstractions/perl>
  #include <abstractions/executable-binary-helper>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/xfce4/exo-1/exo-compose-mail-1	r,
  /bin/env						mr,
}

profile exo.exo-preferred-applications /usr/bin/exo-preferred-applications {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /usr/bin/exo-preferred-applications			r,
  /usr/lib{,32,64}/xfce4/exo-1/exo-helper-1		Px,
}

profile exo.exo-desktop-item-edit /usr/bin/exo-desktop-item-edit {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/dbus-session-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/exo-desktop-item-edit			mr,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /{bin,sbin,usr,opt}/{,*}				r,
  /usr/{bin,sbin,local}/{,*}				r,
  /opt/bin/{,*}						r,
  /usr/local/bin/{,*}					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/xfce4/panel/**			rw,
  owner @{HOME}/[^.]*/*.desktop				rw,
  owner @{HOME}/Desktop/*.desktop{,.*}			rw,
  
  # NOISY ----------------------------------------------
  deny /usr/@{CHOST}/**					r,
  deny /usr/libexec/**					r,
}

profile exo_open_root flags=(attach_disconnected) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/executable-binary-helper_root>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open_root>
  
  # CAPABILITIES ---------------------------------------
  capability fowner,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/exo-open					mr,
  /usr/lib{,32,64}/xfce4/exo-1/exo-helper-1		Px -> exo_helper_root,
  
  # READS/WRITES ---------------------------------------
  /etc/machine-id					r,
  /usr/share/gvfs/remote-volume-monitors/{,udisks2.monitor} r,
  /usr/portage/licenses/{,*}				r,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile exo_helper_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/fonts>
  #include <abstractions/executable-binary-helper_root>
  
  # PSEUDO ---------------------------------------------
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/xfce4/exo-1/exo-helper-1		mr,
  /usr/lib{,32,64}/xfce4/exo-1/exo-compose-mail-1	Px -> exo_compose_mail_root,
  
  # READS/WRITES ---------------------------------------
  /usr/share/						r,
  /usr/local/share/					r,
  /usr/share/xfce4/					r,
  /usr/share/xfce4/helpers/{,*}				r,
  /etc/xdg/xfce4/helpers.rc				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/xfce4/helpers.rc*		rw,
  owner @{HOME}/.config/mimeapps.list*			rw,
  owner @{HOME}/.local/share/				r,
  owner @{HOME}/.local/share/xfce4/			r,
  owner @{HOME}/.local/share/xfce4/helpers/{,*}		r,
  owner @{HOME}/.local/share/applications/{,**}		r,
}

profile exo_compose_mail_root {
  #include <abstractions/base>
  #include <abstractions/perl>
  #include <abstractions/executable-binary-helper_root>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/xfce4/exo-1/exo-compose-mail-1	r,
  /bin/env						mr,
}
