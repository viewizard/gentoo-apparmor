#include <tunables/global>
profile exo-open /usr/bin/exo-open {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/dbus-session>
  #include <abstractions/user-tmp>
  #include <abstractions/executable-binary-helper>
  #include <abstractions/nameservice>
  
  owner @{PROC}/@{pid}/fd/ r,
  
  /usr/bin/exo-open r,
  /usr/lib64/xfce4/exo-1/exo-helper-1 Px,
  
  /etc/machine-id r,
  /usr/share/gvfs/remote-volume-monitors/{,udisks2.monitor} r,
  
  /usr/portage/licenses/{,*} r,
  
}


profile exo-helper /usr/lib64/xfce4/exo-1/exo-helper-1 {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/fonts>
  #include <abstractions/executable-binary-helper>
  
  owner @{PROC}/@{pid}/fd/ r,
  
  /usr/lib64/xfce4/exo-1/exo-helper-1 r,
  /usr/lib64/xfce4/exo-1/exo-compose-mail-1 Px,
  
  # helpers
  /usr/share/ r,
  /usr/local/share/ r,
  /usr/share/xfce4/ r,
  /usr/share/xfce4/helpers/{,*} r,
  /etc/xdg/xfce4/helpers.rc r,
  owner @{HOME}/.config/xfce4/helpers.rc* rw,
  owner @{HOME}/.config/mimeapps.list* rw,
  owner @{HOME}/.local/share/ r,
  owner @{HOME}/.local/share/xfce4/ r,
  owner @{HOME}/.local/share/xfce4/helpers/{,*} r,
  owner @{HOME}/.local/share/applications/{,**} r,
  
}


profile exo-compose-mail /usr/lib64/xfce4/exo-1/exo-compose-mail-1 {
  #include <abstractions/base>
  #include <abstractions/executable-binary-helper>
  
  /usr/lib64/xfce4/exo-1/exo-compose-mail-1 r,
  
  /bin/env r,
  /usr/bin/perl ix,
  
}


profile exo-preferred-applications /usr/bin/exo-preferred-applications {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  
  /dev/tty rw,
  
  /bin/bash r,
  /usr/bin/exo-preferred-applications r,
  /usr/lib64/xfce4/exo-1/exo-helper-1 Px,
  
}


profile exo-desktop-item-edit /usr/bin/exo-desktop-item-edit {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/gtk>
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  
  /usr/bin/exo-desktop-item-edit r,
  
  / r,
  /{bin,sbin,usr,opt}/ r,
  /{bin,sbin}/* r,
  /usr/{bin,sbin,local}/ r,
  /usr/{bin,sbin}/* r,
  /opt/bin/{,*} r,
  /usr/local/bin/{,*} r,
  deny /usr/x86_64-pc-linux-gnu/** r,
  deny /usr/libexec/** r,
  
  owner @{HOME}/.config/xfce4/panel/** rw,
  owner @{HOME}/[^.]*/*.desktop rw,
  
}
