#include <local/tunables.d/>

profile exo.exo-open /usr/bin/exo-open flags=(attach_disconnected) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/fs/access-strict>
  #include <abstractions/profile_transitions/users-mime-related>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC_D}/@{pid}/fd/					r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/exo-open					mr,
  /usr/lib{,32,64}/xfce4/exo-1/exo-helper-1		Px,
  
  # READS/WRITES ---------------------------------------
  /etc/machine-id					r,
  /usr/share/gvfs/remote-volume-monitors/{,*.monitor}	r,	# gnome-base/gvfs
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile exo.exo-helper /usr/lib{,32,64}/xfce4/exo-1/exo-helper-1 {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/gtk>
  #include <abstractions/fonts>
  #include <abstractions/profile_transitions/users-mime-related>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC_D}/@{pid}/fd/					r,	# IMPROVE! fsuid=$USER ouid=$USER,root
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/xfce4/exo-1/exo-helper-1		mr,
  /usr/lib{,32,64}/xfce4/exo-1/exo-compose-mail-1	Px,
  
  # READS/WRITES ---------------------------------------
  /usr/share/						r,
  /usr/local/share/					r,
  /usr/share/xfce4/					r,
  /usr/share/xfce4/helpers/{,*}				r,
  /etc/xdg/xfce4/helpers.rc				r,
  
  # USERS ----------------------------------------------
  owner @{HOME_D}/.config/xfce4/helpers.rc*		rw,
  owner @{HOME_D}/.config/mimeapps.list*		rw,
  owner @{HOME_D}/.local/share/				r,
  owner @{HOME_D}/.local/share/xfce4/			r,
  owner @{HOME_D}/.local/share/xfce4/helpers/{,*}	r,
  owner @{HOME_D}/.local/share/applications/{,**}	r,
}

profile exo.exo-compose-mail /usr/lib{,32,64}/xfce4/exo-1/exo-compose-mail-1 {
  #include <abstractions/base>
  #include <abstractions/perl>
  #include <abstractions/profile_transitions/users-mime-related>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/xfce4/exo-1/exo-compose-mail-1	r,
  /bin/env						mr,
}

profile exo.exo-preferred-applications /usr/bin/exo-preferred-applications {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /usr/bin/exo-preferred-applications			r,
  /usr/lib{,32,64}/xfce4/exo-1/exo-helper-1		Px,
}

profile exo.exo-desktop-item-edit /usr/bin/exo-desktop-item-edit {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/exo-desktop-item-edit			mr,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /{bin,sbin,usr,opt}/{,*}				r,
  /usr/{bin,sbin,local}/{,*}				r,
  /opt/bin/{,*}						r,
  /usr/local/bin/{,*}					r,
  
  # USERS ----------------------------------------------
  owner @{HOME_D}/.config/xfce4/panel/**		rw,
  owner @{HOME_D}/[^.]*/*.desktop			rw,
  owner @{HOME_D}/Desktop/*.desktop{,.*}		rw,
  
  # NOISY ----------------------------------------------
  deny /usr/@{CHOST}/**					r,
  deny /usr/libexec/**					r,
}

profile exo_open_root flags=(attach_disconnected) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open_root>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/fs/access-strict>
  #include <abstractions/profile_transitions/root-mime-related>
  
  # CAPABILITIES ---------------------------------------
  capability fowner,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/exo-open					mr,
  /usr/lib{,32,64}/xfce4/exo-1/exo-helper-1		Px -> exo_helper_root,
  
  # READS/WRITES ---------------------------------------
  /etc/machine-id					r,
  /usr/share/gvfs/remote-volume-monitors/{,*.monitor}	r,	# gnome-base/gvfs
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile exo_helper_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/gtk>
  #include <abstractions/fonts>
  #include <abstractions/profile_transitions/root-mime-related>
  
  # PSEUDO ---------------------------------------------
  owner @{PROC_D}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/xfce4/exo-1/exo-helper-1		mr,
  /usr/lib{,32,64}/xfce4/exo-1/exo-compose-mail-1	Px -> exo_compose_mail_root,
  
  # READS/WRITES ---------------------------------------
  /usr/share/						r,
  /usr/local/share/					r,
  /usr/share/xfce4/					r,
  /usr/share/xfce4/helpers/{,*}				r,
  /etc/xdg/xfce4/helpers.rc				r,
  
  # USERS ----------------------------------------------
  owner @{HOME_D}/.config/xfce4/helpers.rc*		rw,
  owner @{HOME_D}/.config/mimeapps.list*		rw,
  owner @{HOME_D}/.local/share/				r,
  owner @{HOME_D}/.local/share/xfce4/			r,
  owner @{HOME_D}/.local/share/xfce4/helpers/{,*}	r,
  owner @{HOME_D}/.local/share/applications/{,**}	r,
}

profile exo_compose_mail_root {
  #include <abstractions/base>
  #include <abstractions/perl>
  #include <abstractions/profile_transitions/root-mime-related>
  
  # PSEUDO ---------------------------------------------
