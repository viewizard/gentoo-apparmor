#include <tunables/global>

profile gettext /usr/bin/gettext {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gettext					mr,
  
  # READS/WRITES ---------------------------------------
  /usr/lib{,32,64}/locale/{,**}				r,
  /usr/share/locale/{,**}				r,
}

profile gettext.envsubst /usr/bin/envsubst {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/envsubst					mr,
}
