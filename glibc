#include <tunables/global>

profile glibc.ldd /usr/bin/ldd flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/meminfo					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/ldd						mr,
  /bin/**						ixmr,
  /sbin/**						ixmr,
  /lib{,32,64,exec}/**					ixmr,
  /opt/**						ixmr,
  /usr/**						ixmr,
  
  # READS/WRITES ---------------------------------------
  /etc/ld.so.cache					mr,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					r,	# flags=(attach_disconnected)
  deny /var/cache/revdep-rebuild/*errors*		rw,	# gentoolkit.revdep-rebuild.sh
}

profile glibc.locale /usr/bin/locale flags=(complain) {		# FIX ME! 04.04.2017 flags=(complain)
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/locale					mr,
  /bin/gzip						ix,
  
  # READS/WRITES ---------------------------------------
  /usr/share/i18n/charmaps/{,*}				r,
}

profile glibc.ldconfig /sbin/ldconfig flags=(complain) {	# FIX ME! 04.04.2017 flags=(complain)
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_chroot,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /sbin/ldconfig					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/ld.so.cache{,~}					rw,
  /etc/ld.so.conf					r,
  /etc/ld.so.conf.d/{,*}				r,
  /lib{,32,64}/						r,
  /usr/lib{,32,64}/					r,
  /usr/local/lib{,32,64}/				r,
  /var/cache/ldconfig/aux-cache{,~}			rw,
  
  # TEMP -----------------------------------------------
  /var/tmp/portage/genkernel/**				rw,	# DELEGATION! genkernel-next.genkernel
  								# Вызывать ldconfig в genkernel через "Px + {}"
  
  # DENY INHERIT ---------------------------------------
  deny @{HOME}/.pyfa/log.txt				w,	# pyfa
}
