#include <tunables/global>

profile glibc.ldd /usr/bin/ldd {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/meminfo					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/ldd						mr,
  /bin/**						ixmr,
  /sbin/**						ixmr,
  /lib{,32,64,exec}/**					ixmr,
  /opt/**						ixmr,
  /usr/**						ixmr,
  
  # READS/WRITES ---------------------------------------
  /etc/ld.so.cache					mr,
  /var/cache/revdep-rebuild/*errors*			rw,	# gentoolkit.revdep-rebuild.sh
}

profile glibc.locale /usr/bin/locale flags=(complain) {		# FIX ME! 04.04.2014 flags=(complain)
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/locale					mr,
  /bin/gzip						ix,
  
  # READS/WRITES ---------------------------------------
  /usr/share/i18n/charmaps/{,*}				r,
}
