#include <tunables/global>
profile glibc_ldd_root {
  
  capability dac_read_search,
  capability dac_override,
  
  /dev/tty rw,
  /dev/pts/[0-9]* rw,
  @{PROC}/meminfo r,
  
  /usr/bin/ldd mr,
  
  /bin/** ixmr,
  /sbin/** ixmr,
  /lib{,32,64}/** ixmr,
  /opt/** ixmr,
  /usr/** ixmr,
  
  /etc/ld.so.cache mr,
  
}
