#include <local/tunables.d/>

profile glibc.ldd /usr/bin/ldd flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC_D}/meminfo					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/ldd						mr,
  /bin/{,**/}*						cxmr -> test_run,
  /sbin/{,**/}*						cxmr -> test_run,
  /lib{,32,64,exec}/{,**/}*				cxmr -> test_run,
  /opt/{,**/}*						cxmr -> test_run,
  /usr/{,**/}*						cxmr -> test_run,
  
  # READS/WRITES ---------------------------------------
  /etc/ld.so.cache					r,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					r,	# flags=(attach_disconnected)
  deny /var/cache/revdep-rebuild/*errors*		rw,	# app-portage/gentoolkit, gentoolkit.revdep-rebuild.sh
  
  profile test_run {
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/{,**/}*					mr,
    /sbin/{,**/}*					mr,
    /lib{,32,64,exec}/{,**/}*				mr,
    /opt/{,**/}*					mr,
    /usr/{,**/}*					mr,
    
    # READS/WRITES -------------------------------------
    /etc/ld.so.cache					r,
  }
}

profile glibc.locale /usr/bin/locale flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/locale					mr,
  /bin/gzip						Cx,	# app-arch/gzip
  
  # READS/WRITES ---------------------------------------
  /usr/share/i18n/charmaps/{,*.gz}			r,
  
  # DENY INHERIT ---------------------------------------
  deny unix type=stream peer=(label="skypeforlinux"),		# net-im/skypeforlinux
  deny unix type=seqpacket peer=(label="skypeforlinux"),	# net-im/skypeforlinux
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
  deny /opt/skypeforlinux/{,**}				rw,	# net-im/skypeforlinux
  deny /dev/shm/.org.chromium.Chromium.@{TMP6}		rw,	# net-im/skypeforlinux
  
  profile gzip /bin/gzip {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/gzip						mr,
    
    # READS/WRITES -------------------------------------
    /usr/share/i18n/charmaps/*.gz			r,
  }
}

profile glibc.ldconfig /sbin/ldconfig flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_chroot,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /sbin/ldconfig					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/ld.so.cache{,~}					rw,
  /etc/ld.so.conf					r,
  /etc/ld.so.conf.d/{,*}				r,
  /lib{,32,64}/						r,
  /usr/lib{,32,64}/					r,
  /usr/local/lib{,32,64}/				r,
  /var/cache/ldconfig/aux-cache{,~}			rw,
  
  # TEMP -----------------------------------------------
  /var/tmp/portage/genkernel/**				rw,	# DELEGATION! genkernel-next.genkernel
  								# Вызывать ldconfig в genkernel через "Px + {}"
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
  deny @{USER_HOME_D}/.pyfa/log.txt			w,	# games-util/pyfa
  deny /usr/share/pyfa/imgs.zip				r,	# games-util/pyfa
}

profile glibc.getent /usr/bin/getent {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/getent					mr,
}
