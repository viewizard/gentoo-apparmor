#include <local/tunables.d/>

profile polkit.polkitd /usr/lib{,32,64}/polkit-1/polkitd {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/consolekit>
  #include <abstractions/dbus/system-bind>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=system
  	path="/org/freedesktop/DBus"
  	interface="org.freedesktop.DBus"
  	member={GetConnectionUnixUser,GetConnectionUnixProcessID}
  	peer=(name="org.freedesktop.DBus",label="dbus.dbus-daemon"),
  dbus receive
  	bus=system
  	path="/org/freedesktop/PolicyKit[0-9]*/Authority"
  	interface="org.freedesktop.DBus.Properties"
  	member=GetAll
  	peer=(name=":[0-9]*.[0-9]*"),
  dbus send
  	bus=system
  	path="/org/gnome/PolicyKit[0-9]*/AuthenticationAgent"
  	interface="org.freedesktop.PolicyKit[0-9]*.AuthenticationAgent"
  	peer=(name=":[0-9]*.[0-9]*",label="polkit-gnome"),	# gnome-extra/polkit-gnome
  dbus send
  	bus=system
  	path="/org/freedesktop/PolicyKit[0-9]*/Authority"
  	interface="org.freedesktop.PolicyKit[0-9]*.Authority"
  	peer=(name="org.freedesktop.DBus"),
  dbus receive
  	bus=system
  	path="/org/freedesktop/PolicyKit[0-9]*/Authority"
  	interface="org.freedesktop.PolicyKit[0-9]*.Authority"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # PSEUDO ---------------------------------------------
  @{PROC}/sys/kernel/ngroups_max			r,
  @{PROC}/@{pid}/maps					r,	# IMPROVE! Ограничить (fsuid=polkitd && ouid=polkitd,root).
  								# Остальные блокировать (?), т.к. в <abstractions/base>
  								# разрешаем больше, чем надо.
  @{PROC}/@{pids}/status				r,
  @{PROC}/@{pids}/stat					r,
  @{PROC}/@{pids}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/polkit-1/polkitd			m,
  
  # READS/WRITES ---------------------------------------
  /etc/polkit-1/{,**}					r,
  /usr/share/polkit-1/{,**}				r,
  /usr/share/gvfs/remote-volume-monitors/{,*.monitor}	r,	# gnome-base/gvfs
  /run/ConsoleKit/database				r,	# sys-auth/consolekit
  /var/lib/polkit-1/.cache/{,**}			w,
}

profile polkit.polkit-agent-helper /usr/lib{,32,64}/polkit-1/polkit-agent-helper-1 {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/polkit>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/polkit-1/polkit-agent-helper-1	mr,
}

profile polkit.pkaction /usr/bin/pkaction {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pkaction					mr,
}

profile polkit.pkcheck /usr/bin/pkcheck {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pkcheck					mr,
}

profile polkit.pkexec /usr/bin/pkexec {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/polkit>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <local/hats/polkit.pkexec.d/>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability setuid,
  capability setgid,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # SIGNAL ---------------------------------------------
  signal (receive) set=(rtmin+1) peer="polkit.pkexec//root",
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pids}/stat					r,
  owner @{PROC}/@{pid}/attr/current			w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pkexec					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/shells						r,	# sys-apps/baselayout
  /etc/environment					r,	# sys-libs/pam
  /etc/security/limits.d/				r,	# sys-libs/pam
}

profile polkit.pkttyagent /usr/bin/pkttyagent {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pkttyagent					mr,
}
