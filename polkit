#include <tunables/global>

profile polkit.polkitd /usr/lib{,32,64}/polkit-1/polkitd {
  #include <abstractions/base>
  #include <abstractions/dbus-strict>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  
  # PSEUDO ---------------------------------------------
  @{PROC}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/polkit-1/polkitd			m,
  
  # READS/WRITES ---------------------------------------
  /etc/polkit-1/{,**}					r,
  /usr/share/polkit-1/{,**}				r,
  /usr/share/gvfs/remote-volume-monitors/{,*}		r,
  /run/ConsoleKit/database				r,
  /var/lib/polkit-1/.cache/{,**}			w,
}

profile polkit.polkit-agent-helper /usr/lib{,32,64}/polkit-1/polkit-agent-helper-1 flags=(complain) {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/polkit-1/polkit-agent-helper-1	mr,
}

profile polkit.pkaction /usr/bin/pkaction flags=(complain) {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pkaction					mr,
}

profile polkit.pkcheck /usr/bin/pkcheck flags=(complain) {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pkcheck					mr,
}

profile polkit.pkexec /usr/bin/pkexec flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/dbus-strict>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability sys_ptrace,
  capability setuid,
  capability setgid,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # SIGNAL ---------------------------------------------
  signal (receive) set=(rtmin+1) peer="polkit.pkexec//root",
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pid}/stat					r,
  @{PROC}/@{pid}/attr/current				w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pkexec mr,
  
  # READS/WRITES ---------------------------------------
  /etc/shells						r,
  /etc/environment					r,
  /etc/security/limits.d/				r,
  
  ^DEFAULT {}							# Пока нам не нужны другие пользователи,
  								# просто ставим пустой дефолтный hat.
  
  ^root {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/authentication>
    #include <abstractions/authentication-pam_mount>
    
    # CAPABILITIES -------------------------------------
    capability setuid,
    capability setgid,
    
    # SIGNAL ---------------------------------------------
    signal (send) set=(rtmin+1) peer="polkit.pkexec",
    
    # PSEUDO ---------------------------------------------
    /dev/tty[0-9]*					rw,
    @{PROC}/sys/kernel/ngroups_max			r,
    
    # EXECUTABLES ----------------------------------------
    /usr/sbin/gparted					Px,
  }
}

profile polkit.pkttyagent /usr/bin/pkttyagent flags=(complain) {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/pkttyagent					mr,
}
