#include <tunables.d/>

profile vixie-cron.cron /usr/sbin/cron {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/cron					mr,
  @{shell}						Cx,
  /usr/sbin/sendmail					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/crontab						r,
  /etc/cron.d/{,*}					r,
  /etc/security/limits.d/{,*}				r,
  /run/cron.pid						rwk,
  /var/spool/cron/{,**}					rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/rm						Px -> vixie_cron_cron_shell_rm,
    /usr/sbin/run-crons					Px,
  }
}

# IMPROVE! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile vixie_cron_cron_shell_rm {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # EXECUTABLES ----------------------------------------
  /bin/rm						mr,
  
  # READS/WRITES ---------------------------------------
  /var/spool/cron/lastrun/*				w,
}

profile vixie-cron.crontab /usr/bin/crontab {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/crontab					mr,
}

profile vixie-cron.init.d /etc/init.d/vixie-cron {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/vixie-cron/tasks		w,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/cron					Px,
  @{shell}						Cx,
  /bin/mkdir						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/vixie-cron				r,
  /run/cron.pid						rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/openrc/vixie-cron/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
}
