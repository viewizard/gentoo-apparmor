#include <tunables/global>

profile vixie-cron.cron /usr/sbin/cron {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  
  # PSEUDO ---------------------------------------------
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/cron					mr,
  @{shell}						Cx,
  /usr/sbin/sendmail					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/crontab						r,
  /etc/cron.d/{,*}					r,
  /etc/security/limits.d/{,*}				r,
  /run/cron.pid						rwk,
  /var/spool/cron/{,**}					rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/rm						ix,
    /usr/sbin/run-crons					Px,
    
    # READS/WRITES -------------------------------------
    /var/spool/cron/lastrun/{,*}			rw,
  }
}

profile vixie-cron.crontab /usr/bin/crontab {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/crontab					mr,
}

profile vixie-cron.init.d /etc/init.d/vixie-cron {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/cron					Px,
  @{shell}						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/vixie-cron				r,
  /run/cron.pid						rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}
