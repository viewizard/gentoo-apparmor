#include <tunables/global>
profile vixie-cron.cron /usr/sbin/cron flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  capability setuid,
  capability setgid,
  
  /bin/bash Cx -> shell,
  
  /etc/crontab r,
  /etc/cron.d/ r,
  /etc/cron.d/* r,
  /etc/security/limits.d/ r,
  /etc/security/limits.d/* r,
  
  /run/cron.pid rwk,
  /var/spool/cron/ rw,
  /var/spool/cron/** rw,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /bin/rm ix,
    /usr/sbin/run-crons Px,
    
    /var/spool/cron/lastrun/ rw,
    /var/spool/cron/lastrun/* rw,
    
  }
  
}
