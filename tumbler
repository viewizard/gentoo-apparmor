#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"

profile tumbler /usr/lib{,32,64}/tumbler-1/tumblerd {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/nvidia>
  #include <abstractions/program-work-with-disk-rk-strict>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/tumbler-1/tumblerd			mr,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/tumbler/tumbler.rc				r,
  /etc/udev/udev.conf					r,
  /usr/share/thumbnailers/				r,
  /usr/lib{,32,64}/tumbler-1/plugins/**			mr,
  /usr/local/share/backgrounds/**			r,
  
  # USERS ----------------------------------------------
  owner @{HOME_CACHE}/sessions/thumbs*/{,*.png}		r,
  owner @{HOME}/.local/share/gvfs-metadata/*		r,
  owner @{HOME}/.face*					r,
}
