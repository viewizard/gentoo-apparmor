#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-rwk
@{USERS_DIR_rwk}="[^.]**"
@{USERS_FILE_rwk}="[^.]*"

profile codeblocks /usr/bin/codeblocks {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  #include <abstractions/nameservice>
  #include <local/profile_blocks/codeblocks.d/>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term) peer="codeblocks**",
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/codeblocks					mr,
  @{shell}						Px -> codeblocks_shell,
  /usr/bin/gcc						Cx -> build,	# sys-devel/gcc
  /usr/bin/g++						Cx -> build,	# sys-devel/gcc
  /usr/bin/llvm-ar					Cx -> build,	# sys-devel/llvm
  /usr/bin/{,@{CHOST}-}clang-*				Cx -> build,	# sys-devel/clang
  deny /usr/bin/gfortran				x,	# sys-devel/gcc +fortran	# Не используем fortran.
  
  # READS/WRITES ---------------------------------------
  /etc/mime.types					r,
  /usr/include/{,**}					r,
  /usr/share/mime-info/{,*.mime,*.keys}			r,
  /usr/share/codeblocks/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/codeblocks/{,*}			rw,
  owner @{HOME}/.local/share/codeblocks/{,**}		rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/wxbf@{TMP6}				rw,
  owner /tmp/CODEBLOCKS*.socket				rw,	# * - $USER
  owner /tmp/Code::Blocks-*				rwk,	# * - $USER
  
  profile build {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gcc					mr,	# sys-devel/gcc
    /usr/bin/g++					mr,	# sys-devel/gcc
    /usr/bin/llvm-ar					mr,	# sys-devel/llvm
    /usr/bin/{,@{CHOST}-}clang-*			mr,	# sys-devel/clang
    /usr/@{CHOST}/gcc-bin/*/@{CHOST}-gcc		ix,	# sys-devel/gcc		# Разрешаем ix для данного случая.
    /usr/@{CHOST}/gcc-bin/*/@{CHOST}-g++		ix,	# sys-devel/gcc		# Разрешаем ix для данного случая.
    /usr/libexec/gcc/@{CHOST}/*/cc1plus			ix,	# sys-devel/gcc		# Разрешаем ix для данного случая.
    
    # READS/WRITES -------------------------------------
    /etc/lsb-release					r,
    /etc/env.d/gcc/@{CHOST}-*				r,	# sys-devel/gcc
    /etc/env.d/gcc/config-@{CHOST}			r,	# sys-devel/gcc
    /usr/include/**					r,
    /usr/share/gcc-data/@{CHOST}/[0-9]*/locale/**.mo	r,	# sys-devel/gcc
    /usr/share/binutils-data/@{CHOST}/[0-9]*/locale/**.mo r,	# sys-devel/binutils
    
    # TEMP ---------------------------------------------
    owner /tmp/Code::Blocks-*				rw,	# * - $USER
  }
}

# IMPROVE! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile codeblocks_shell {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /usr/bin/gcc-config					Px,	# sys-devel/gcc-config
  /usr/bin/g++						Cx,	# sys-devel/gcc
  
  # TEMP -----------------------------------------------
  owner /tmp/Code::Blocks-*				w,	# * - $USER
  
  profile g++ /usr/bin/g++ {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rwk>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/g++					mr,
    /usr/@{CHOST}/binutils-bin/*/as			ix,	# sys-devel/binutils	# Разрешаем ix для данного случая.
    /usr/@{CHOST}/binutils-bin/*/ld			ix,	# sys-devel/binutils	# Разрешаем ix для данного случая.
    /usr/@{CHOST}/gcc-bin/*/@{CHOST}-g++		ix,	# sys-devel/gcc		# Разрешаем ix для данного случая.
    /usr/libexec/gcc/@{CHOST}/*/cc1plus			ix,	# sys-devel/gcc		# Разрешаем ix для данного случая.
    /usr/libexec/gcc/@{CHOST}/*/collect2		ix,	# sys-devel/gcc		# Разрешаем ix для данного случая.
    
    # READS/WRITES -------------------------------------
    /usr/include/**					r,
    /etc/ld.so.conf					r,
    /etc/ld.so.conf.d/{,*}				r,
    /usr/libexec/gcc/@{CHOST}/*/*.so.[0-9]*		rm,	# sys-devel/gcc
    /usr/share/gcc-data/@{CHOST}/[0-9]*/locale/**.mo	r,	# sys-devel/gcc
    /usr/share/binutils-data/@{CHOST}/[0-9]*/locale/**.mo r,	# sys-devel/binutils
    
    # TEMP ---------------------------------------------
    owner /tmp/cc*.{s,c,res,o,le,ld}			rw,
  }
}
