#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"

profile codeblocks /usr/bin/codeblocks flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/dbus-session>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/user-tmp>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rwk>
  #include <abstractions/nameservice>
  #include <local/codeblocks-custom-settings>
  
  /usr/bin/codeblocks r,
  /bin/bash Cxr -> shell,
  /usr/bin/gcc ix,
  /usr/bin/g++ ix,
  /usr/bin/llvm-ar ix,
  /usr/bin/gfortran ix,
  /usr/x86_64-pc-linux-gnu/gcc-bin/*/x86_64-pc-linux-gnu-gcc ix,
  /usr/x86_64-pc-linux-gnu/gcc-bin/*/x86_64-pc-linux-gnu-g++ ix,
  /usr/libexec/gcc/x86_64-pc-linux-gnu/*/cc1plus ix,
  
  /etc/env.d/gcc/x86_64-pc-linux-gnu-* r,
  /usr/include/** r,
  
  /usr/share/codeblocks/ r,
  /usr/share/codeblocks/** r,
  
  owner @{HOME}/.config/codeblocks/ rw,
  owner @{HOME}/.config/codeblocks/* rw,
  owner @{HOME}/.local/share/codeblocks/ rw,
  owner @{HOME}/.local/share/codeblocks/** rw,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/user-tmp>
    #include <abstractions/program-work-with-disk-rwk>
    
    /dev/tty rw,
    
    /bin/** ixr,
    /sbin/** ixr,
    /usr/bin/** ixr,
    /usr/sbin/** ixr,
    /usr/lib{,32,64}/** ixr,
    /usr/libexec/** ixr,
    /usr/x86_64-pc-linux-gnu/** ixr,
    
    /etc/profile.env r,
    /etc/env.d/** r,
    /etc/ld.so.conf r,
    /etc/ld.so.conf.d/ r,
    /etc/ld.so.conf.d/* r,
    /etc/portage/** r,
    /usr/portage/** r,
    /usr/local/portage/** r,
    /usr/share/portage/config/* r,
    /usr/include/** r,
    
  }
  
}
