#include <tunables/global>

# предустановка для abstractions/fs/access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]*"

# FIX ME! Все плохо, все "/** ix" надо убирать, иначе нельзя
# давать обычному пользователю запуск этой программы!

profile codeblocks /usr/bin/codeblocks {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  #include <abstractions/nameservice>
  #include <local/codeblocks-custom-settings>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/codeblocks					mr,
  @{shell}						Cx,
  /usr/bin/gcc						ix,
  /usr/bin/g++						ix,
  /usr/bin/llvm-ar					ix,
  /usr/bin/gfortran					ix,
  /usr/bin/{,@{CHOST}-}clang-*				ix,
  /usr/@{CHOST}/gcc-bin/*/@{CHOST}-gcc			ix,
  /usr/@{CHOST}/gcc-bin/*/@{CHOST}-g++			ix,
  /usr/libexec/gcc/@{CHOST}/*/cc1plus			ix,
  
  # READS/WRITES ---------------------------------------
  /etc/lsb-release					r,
  /etc/mime.types					r,
  /etc/env.d/gcc/@{CHOST}-*				r,
  /etc/env.d/gcc/config-@{CHOST}			r,
  /usr/include/**					r,
  /usr/share/mime-info/{,*.mime,*.keys}			r,
  /usr/share/codeblocks/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/codeblocks/{,*}			rw,
  owner @{HOME}/.local/share/codeblocks/{,**}		rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/wxbf*					rw,
  owner /tmp/CODEBLOCKS*.socket				rw,
  owner /tmp/Code::Blocks-*				rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/fs/access-by-users-preset-rwk>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    #include <abstractions/python-exec>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    @{PROC}/@{pid}/fd/					r,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /{bin,sbin}/**					ixr,	# r - т.к. могут быть скрипты.
    /usr/{bin,sbin}/**					ixr,	# r - т.к. могут быть скрипты.
    /usr/{lib{,32,64,exec},@{CHOST}}/**			ixr,	# r - т.к. могут быть скрипты.
    
    # READS/WRITES -------------------------------------
    /etc/profile.env					r,
    /etc/env.d/**					r,
    /etc/ld.so.conf					r,
    /etc/ld.so.conf.d/{,*}				r,
    /{etc,usr,usr/local}/portage/**			r,
    /usr/share/portage/config/*				r,
    /usr/include/**					r,
    
    # TEMP ---------------------------------------------
    owner /tmp/cc*.{s,c,res,o,le,ld}			rw,
    owner /tmp/Code::Blocks-*				w,
  }
}
