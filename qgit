#include <tunables/global>

# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]**"

profile qgit /usr/bin/qgit {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  #include <abstractions/fs-access-by-users-preset-rwkl>
  #include <abstractions/fs-deny-by-pattern-internet>
  #include <abstractions/fs-deny-private-strict>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term, kill) peer="meld",
  signal (send) set=(term, kill) peer="git",
  
  # PSEUDO ---------------------------------------------
  /dev/tty						r,
  /dev/tty[0-9]*					rw,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/qgit						mr,
  /bin/cat						Cx,	# FS ACCESS! cat
  /usr/bin/git						Px,
  /usr/bin/meld						Px,	# Выбирается пользователем через настройки.
  /usr/bin/juffed					Px,	# Выбирается пользователем через настройки.
  
  # READS/WRITES ---------------------------------------
  owner @{HOME}/.config/qgit/				rw,
  owner @{HOME}/.config/qgit/**				rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/qgit4.*					rw,
  owner /tmp/??????_*					rw,
  
  profile cat /bin/cat {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rk>
    #include <abstractions/fs-deny-by-pattern-internet>
    #include <abstractions/fs-deny-private-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
}

profile qgit_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/gtk>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/X_sudo>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open_root>
  #include <abstractions/fs-access-by-users-preset-rwkl>
  #include <abstractions/fs-access-by-pattern-systemusers>
  #include <abstractions/fs-deny-by-pattern-internet>
  #include <abstractions/fs-deny-private-strict>
  
  # CAPABILITIES ---------------------------------------
  capability sys_nice,
  
  # PTRACE ---------------------------------------------
  ptrace (trace) peer=@{profile_name},
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term, kill) peer="meld_root",
  signal (send) set=(term, kill) peer="git_root",
  
  # PSEUDO ---------------------------------------------
  /dev/tty						r,
  /dev/tty[0-9]*					rw,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/qgit						mr,
  /bin/cat						Cx,	# FS ACCESS! cat
  /usr/bin/git						Px -> git_root,
  /usr/bin/meld						Px -> meld_root,	# Выбирается пользователем через настройки.
  /usr/bin/juffed					Px -> juffed_root,	# Выбирается пользователем через настройки.
  
  # READS/WRITES ---------------------------------------
  owner @{HOME}/.config/qgit/				rw,
  owner @{HOME}/.config/qgit/**				rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/qgit4.*					rw,
  owner /tmp/??????_*					rw,
  
  profile cat /bin/cat {
    #include <abstractions/base>
    #include <abstractions/fs-access-by-users-preset-rk>
    #include <abstractions/fs-access-by-pattern-systemusers>
    #include <abstractions/fs-deny-by-pattern-internet>
    #include <abstractions/fs-deny-private-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
}
