#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]**"

profile qgit /usr/bin/qgit {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/dbus-session>
  #include <abstractions/qt>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rwkl-strict>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  
  # CAPABILITIES ---------------------------------------
  capability sys_nice,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						r,
  /dev/tty[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/qgit						mr,
  /usr/bin/git						Px,
  /bin/cat						ix,
  /usr/bin/meld						Px,
  
  # READS/WRITES ---------------------------------------
  owner @{HOME}/.config/.??????				rwk,
  owner @{HOME}/.config/qgit/				rw,
  owner @{HOME}/.config/qgit/**				rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/qgit4.*					rw,
  owner /tmp/??????_*					rw,
}

profile qgit_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/dbus-session>
  #include <abstractions/gtk>
  #include <abstractions/qt>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rwkl-strict>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open_root>
  #include <abstractions/user-systemwide-files>
  
  # CAPABILITIES ---------------------------------------
  capability sys_nice,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						r,
  /dev/tty[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/qgit						mr,
  /usr/bin/git						Px -> git_root,
  /bin/cat						ix,
  /usr/bin/meld						Px -> meld_root,
  
  # READS/WRITES ---------------------------------------
  owner @{HOME}/.config/.??????				rwk,
  owner @{HOME}/.config/qgit/				rw,
  owner @{HOME}/.config/qgit/**				rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/qgit4.*					rw,
  owner /tmp/??????_*					rw,
}
