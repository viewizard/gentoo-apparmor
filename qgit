#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-rk
@{USERS_DIR_rk}="[^.]**"
@{USERS_FILE_rk}="[^.]**"
# предустановка для abstractions/fs/access-by-user-preset-rwkl
@{USERS_DIR_rwkl}="[^.]**"
@{USERS_FILE_rwkl}="[^.]**"

profile qgit /usr/bin/qgit {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  #include <abstractions/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term, kill) peer="meld",			# dev-util/meld
  signal (send) set=(term, kill) peer="git",			# dev-vcs/git
  signal (send) set=(term, kill) peer="juffed",			# app-editors/juffed
  
  # PSEUDO ---------------------------------------------
  /dev/tty						r,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/qgit						mr,
  /bin/cat						Cx,	# sys-apps/coreutils
  /usr/bin/git						Px,	# dev-vcs/git
  /usr/bin/meld						Px,	# dev-util/meld (выбирается пользователем через настройки)
  /usr/bin/juffed					Px,	# app-editors/juffed (выбирается пользователем через настройки)
  
  # READS/WRITES ---------------------------------------
  owner @{HOME}/.config/qgit/{,**/}			rw,
  owner @{HOME}/.config/qgit/{,**/}*			rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/qgit4.@{TMP6}				rw,
  owner /tmp/??????_*					rw,	# * - файл из svn для передачи в meld (сравнение файлов).
  								# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  
  profile cat /bin/cat {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rk>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
}

profile qgit_root {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/gtk>
  #include <abstractions/qt>
  #include <abstractions/video>
  #include <abstractions/X_sudo>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open_root>
  #include <abstractions/fs/access-by-users-preset-rwkl>
  #include <abstractions/fs/access-by-pattern-systemusers>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  
  # CAPABILITIES ---------------------------------------
  capability sys_nice,
  
  # PTRACE ---------------------------------------------
  ptrace (trace) peer=@{profile_name},
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term, kill) peer="meld_root",		# dev-util/meld
  signal (send) set=(term, kill) peer="git_root",		# dev-vcs/git
  signal (send) set=(term, kill) peer="juffed_root",		# app-editors/juffed
  
  # PSEUDO ---------------------------------------------
  /dev/tty						r,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/qgit						mr,
  /bin/cat						Cx,	# sys-apps/coreutils
  /usr/bin/git						Px -> git_root,		# dev-vcs/git
  /usr/bin/meld						Px -> meld_root,	# dev-util/meld (выбирается пользователем через настройки)
  /usr/bin/juffed					Px -> juffed_root,	# app-editors/juffed (выбирается пользователем через настройки)
  
  # READS/WRITES ---------------------------------------
  owner @{HOME}/.config/qgit/{,**/}			rw,
  owner @{HOME}/.config/qgit/{,**/}*			rwk,
  
  # TEMP -----------------------------------------------
  /tmp/							r,
  owner /tmp/qgit4.@{TMP6}				rw,
  owner /tmp/@{TMP6}_*					rw,	# * - файл из git для передачи в meld (сравнение файлов).
  								# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  
  profile cat /bin/cat {
    #include <abstractions/base>
    #include <abstractions/fs/access-by-users-preset-rk>
    #include <abstractions/fs/access-by-pattern-systemusers>
    #include <abstractions/fs/deny-by-pattern-internet>
    #include <abstractions/fs/deny-private-strict>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
}
