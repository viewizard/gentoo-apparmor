#include <tunables/global>
profile nmap /usr/bin/nmap flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability net_raw,
  
  /dev/tty r,
  /dev/pts/[0-9] w,
  @{PROC}/@{pid}/net/dev r,
  
  /usr/bin/nmap mr,
  
  /usr/share/nmap/{,**} r,
  
}
