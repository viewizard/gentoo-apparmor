#include <tunables/global>

profile nmap /usr/bin/nmap flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability net_raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						r,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/net/dev				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/nmap						mr,
  
  # READS/WRITES ---------------------------------------
  /usr/share/nmap/{,**}					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/lynis.cron.*				w,	# DELEGATION! cron.daily/lynis
}
