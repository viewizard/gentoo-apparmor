#include <tunables/global>

profile conky /usr/bin/conky {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/sensors>
  
  # PSEUDO ---------------------------------------------
  /dev/tty rw,
  /dev/tty[0-9]* w,
  /sys/devices/system/cpu/present r,
  @{PROC}/ r,
  @{PROC}/uptime r,
  @{PROC}/@{pid}/net/dev r,
  @{PROC}/@{pid}/mounts r,
  
  # EXECUTABLES ----------------------------------------
  /bin/bash						Cx -> shell,
  /usr/bin/conky					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/conky/{,*}					r,
  /etc/terminfo/l/linux					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.conkyrc				r,
  
  
  profile shell {
    #include <abstractions/base>
    #include <abstractions/sensors>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					w,
    
    # EXECUTABLES --------------------------------------
    /bin/bash						mr,
    /bin/tail						ix,
    /bin/head						ix,
    /bin/date						ix,
    /bin/sed						ix,
    /bin/cat						ix,
    /bin/cut						ix,
    /bin/grep						ix,
    /bin/wc						ix,
    /usr/bin/cal					ix,
    /usr/bin/sensors					ix,
    
    # READS/WRITES -------------------------------------
    /etc/terminfo/l/linux				r,
    /usr/portage/metadata/timestamp			r,
    
  }
  
}
