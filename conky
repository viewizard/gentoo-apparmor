#include <tunables/global>
profile conky /usr/bin/conky {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>

  
  /dev/tty rw,
  @{PROC}/@{pid}/net/dev r,
  @{PROC}/@{pid}/mounts r,
  /sys/devices/system/cpu/cpu*/cpufreq/scaling_cur_freq r,
  /sys/class/hwmon/ r,
  /sys/devices/platform/coretemp.*/hwmon/hwmon*/ r,
  /sys/devices/platform/coretemp.*/hwmon/hwmon*/name r,
  /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor r,
  /sys/class/i2c-adapter/ r,
  /sys/devices/pci**/i2c-*/name r,


  /bin/bash Pux,
  /usr/bin/conky r,
  
  /etc/terminfo/l/linux r,
  
  owner @{HOME}/.conkyrc r,
  
}
