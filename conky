#include <tunables/global>

profile conky /usr/bin/conky {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/sensors>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /sys/devices/system/cpu/present			r,
  @{PROC}/						r,
  @{PROC}/uptime					r,
  @{PROC}/@{pid}/net/dev				r,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /usr/bin/conky					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/conky/{,*}					r,
  /etc/terminfo/l/linux					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.conkyrc				r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/sensors>
    
    # NETWORK ------------------------------------------
    network inet dgram,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    @{PROC}/uptime					r,
    @{PROC}/@{pid}/net/dev				r,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/tail						ix,
    /bin/head						ix,
    /bin/date						ix,
    /bin/sed						ix,
    /bin/cat						ix,
    /bin/cut						ix,
    /bin/grep						ix,
    /bin/wc						ix,
    /usr/bin/cal					ix,
    /usr/bin/sensors					ix,
    
    # READS/WRITES -------------------------------------
    /etc/terminfo/l/linux				r,
    /usr/portage/metadata/timestamp			r,
  }
}
