#include <tunables/global>
profile conky /usr/bin/conky {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/sensors>
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  
  @{PROC}/ r,
  @{PROC}/@{pid}/net/dev r,
  @{PROC}/@{pid}/mounts r,
  
  /bin/bash Cxr -> shell,
  /usr/bin/conky mr,
  
  /etc/conky/{,*} r,
  /etc/terminfo/l/linux r,
  
  owner @{HOME}/.conkyrc r,
  
  
  profile shell {
    #include <abstractions/base>
    #include <abstractions/sensors>
    
    /dev/tty rw,
    /dev/tty[0-9]* w,
    
    /bin/bash mr,
    /bin/tail ix,
    /bin/head ix,
    /bin/date ix,
    /bin/sed ix,
    /bin/cat ix,
    /bin/cut ix,
    /bin/grep ix,
    /bin/wc ix,
    /usr/bin/cal ix,
    /usr/bin/sensors ix,
    
    /etc/terminfo/l/linux r,
    /usr/portage/metadata/timestamp r,
    
  }
  
}
