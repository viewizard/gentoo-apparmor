#include <tunables/global>

profile conky /usr/bin/conky {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/sensors>
  #include <abstractions/ncurses>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /sys/devices/system/cpu/present			r,
  @{PROC}/						r,
  @{PROC}/uptime					r,
  @{PROC}/@{pid}/net/dev				r,
  @{PROC}/@{pid}/mounts					r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Px -> conky_shell,
  /usr/bin/conky					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/conky/{,*}					r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.conkyrc				r,
}

# FIX ME! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile conky_shell {
  #include <abstractions/base>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /sys/devices/system/cpu/cpufreq/policy[0-9]*/scaling_governor r,
  @{PROC}/uptime					r,
  @{PROC}/@{pid}/net/dev				r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/tail						Cx,	# FS ACCESS! tail
  /bin/head						Cx,	# FS ACCESS! head
  /bin/date						Cx,	# FS ACCESS! date
  /bin/sed						Cx,	# FS ACCESS! sed
  /bin/cat						Cx,	# FS ACCESS! cat
  /bin/cut						Cx,	# FS ACCESS! cut
  /bin/grep						Cx,	# FS ACCESS! grep
  /bin/wc						Cx,	# FS ACCESS! wc
  /usr/bin/cal						Px,
  /usr/bin/sensors					Px,
  
  # READS/WRITES ---------------------------------------
  /usr/portage/metadata/timestamp			r,
  
  profile tail /bin/tail {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/tail						mr,
    
    # DENY INHERIT -------------------------------------
    deny network inet dgram,					# conky_shell
    deny network inet6 dgram,					# conky_shell
    deny @{PROC}/uptime					r,	# conky_shell
    deny @{PROC}/@{pid}/net/dev				r,	# conky_shell
  }
  
  profile head /bin/head {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/head						mr,
    
    # DENY INHERIT -------------------------------------
    deny network inet dgram,					# conky_shell
    deny network inet6 dgram,					# conky_shell
    deny @{PROC}/uptime					r,	# conky_shell
    deny @{PROC}/@{pid}/net/dev				r,	# conky_shell
  }
  
  profile date /bin/date {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/date						mr,
    
    # DENY INHERIT -------------------------------------
    deny network inet dgram,					# conky_shell
    deny network inet6 dgram,					# conky_shell
    deny @{PROC}/uptime					r,	# conky_shell
    deny @{PROC}/@{pid}/net/dev				r,	# conky_shell
  }
  
  profile sed /bin/sed {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sed						mr,
    
    # DENY INHERIT -------------------------------------
    deny network inet dgram,					# conky_shell
    deny network inet6 dgram,					# conky_shell
    deny @{PROC}/uptime					r,	# conky_shell
    deny @{PROC}/@{pid}/net/dev				r,	# conky_shell
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /sys/devices/system/cpu/cpufreq/policy[0-9]*/scaling_governor r,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
    
    # READS/WRITES -------------------------------------
    /usr/portage/metadata/timestamp			r,
    
    # DENY INHERIT -------------------------------------
    deny network inet dgram,					# conky_shell
    deny network inet6 dgram,					# conky_shell
    deny @{PROC}/uptime					r,	# conky_shell
    deny @{PROC}/@{pid}/net/dev				r,	# conky_shell
  }
  
  profile cut /bin/cut {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/cut						mr,
    
    # DENY INHERIT -------------------------------------
    deny network inet dgram,					# conky_shell
    deny network inet6 dgram,					# conky_shell
    deny @{PROC}/uptime					r,	# conky_shell
    deny @{PROC}/@{pid}/net/dev				r,	# conky_shell
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
    
    # DENY INHERIT -------------------------------------
    deny network inet dgram,					# conky_shell
    deny network inet6 dgram,					# conky_shell
    deny @{PROC}/uptime					r,	# conky_shell
    deny @{PROC}/@{pid}/net/dev				r,	# conky_shell
  }
  
  profile wc /bin/wc {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/wc						mr,
    
    # DENY INHERIT -------------------------------------
    deny network inet dgram,					# conky_shell
    deny network inet6 dgram,					# conky_shell
    deny @{PROC}/uptime					r,	# conky_shell
    deny @{PROC}/@{pid}/net/dev				r,	# conky_shell
  }
}
