#include <tunables/global>
profile usbutils.lsusb /usr/bin/lsusb {
  #include <abstractions/base>
  
  /dev/pts/[0-9]* w,
  
  /dev/bus/usb/ r,
  /sys/bus/ r,
  /sys/bus/usb/devices/ r,
  /sys/class/ r,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/** r,
  
  /usr/bin/lsusb r,
  
  /etc/udev/udev.conf r,
  /etc/udev/hwdb.bin r,
  
}
