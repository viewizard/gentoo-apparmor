#include <tunables/global>

profile usbutils.lsusb /usr/bin/lsusb {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability wake_alarm,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/bus/usb/						r,
  /sys/bus/						r,
  /sys/bus/usb/devices/					r,
  /sys/class/						r,
  /sys/devices/pci[0-9]*/**/usb[0-9]*/**		r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/lsusb					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,
  /etc/udev/hwdb.bin					r,
}
