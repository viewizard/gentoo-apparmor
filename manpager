#include <local/tunables.d/>

profile manpager /usr/bin/manpager {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/manpager					mr,
  /usr/bin/less						Cx,
  
  profile less /usr/bin/less {
    #include <abstractions/base>
    #include <abstractions/ncurses>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/less					mr,
  }
}
