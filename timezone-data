#include <tunables/global>

profile timezone-data.tzselect /usr/bin/tzselect {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/tzselect					r,
  @{shell}						mr,
  /bin/expr						ix,
  /bin/tr						Px,
  /bin/sort						ix,
  /bin/date						ix,
  /usr/bin/gawk						ix,
}
