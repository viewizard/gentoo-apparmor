#include <local/tunables.d/>

profile timezone-data.tzselect@{p_all} /usr/bin/tzselect@{t_all} {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/tzselect					r,
  @{shell}						mr,
  /bin/expr@{t_all}					Cx,	# sys-apps/coreutils
  /bin/tr@{t_all}					Px,	# sys-apps/coreutils
  /bin/sort@{t_all}					Cx,	# sys-apps/coreutils
  /bin/date@{t_all}					Cx,	# sys-apps/coreutils
  /bin/mktemp@{t_all}					Cx,	# sys-apps/coreutils
  /bin/mkdir@{t_all}					Cx,	# sys-apps/coreutils
  /bin/rm@{t_all}					Cx,	# sys-apps/coreutils
  /bin/echo@{t_all}					Cx,	# sys-apps/coreutils
  /usr/bin/gawk@{t_all}					Cx,	# sys-apps/gawk
  /usr/bin/iconv@{t_all}				Cx,	# sys-libs/glibc
  
  # TEMP -----------------------------------------------
  audit /tmp/tmp.*/*					rw,	# FIX ME! audit 26.11.2017
  								# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  
  profile expr /bin/expr@{t_all} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/expr						mr,
  }
  
  profile sort /bin/sort@{t_all} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/sort						mr,
  }
  
  profile date /bin/date@{t_all} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/date						mr,
  }
  
  profile mktemp /bin/mktemp@{t_all} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/mktemp						mr,
    
    # TEMP ---------------------------------------------
    audit /tmp/tmp.*/					w,	# FIX ME! audit 26.11.2017
  								# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  }
  
  profile mkdir /bin/mkdir@{t_all} {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile rm /bin/rm@{t_all} {
    #include <abstractions/base>
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # TEMP ---------------------------------------------
    audit /tmp/tmp.*/{,*}				rw,	# FIX ME! audit 26.11.2017
  								# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  }
  
  profile echo /bin/echo@{t_all} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/echo						mr,
  }
  
  profile gawk /usr/bin/gawk@{t_all} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability mknod,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/gawk					mr,
    
    # DENY INHERIT -------------------------------------
    audit deny /tmp/tmp.*/*				rw,	# timezone-data.tzselect	# FIX ME! audit 26.11.2017
  }
  
  profile iconv /usr/bin/iconv@{t_all} flags=(attach_disconnected) {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability mknod,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/iconv					mr,
    
    # DENY INHERIT -------------------------------------
    deny /apparmor/.null				r,	# flags=(attach_disconnected)
    audit deny /tmp/tmp.*/*				rw,	# timezone-data.tzselect	# FIX ME! audit 26.11.2017
 }
}
