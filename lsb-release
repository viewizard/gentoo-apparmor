#include <tunables/global>

profile lsb-release /usr/bin/lsb_release {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/lsb_release					r,
  @{shell}						mr,
  /bin/sed						ixr,
  /bin/head						ixr,
  /bin/tr						Pxr,
  /usr/bin/find						ix,
  /usr/bin/getopt					ixr,
  
  # READS/WRITES ---------------------------------------
  /etc/							r,
  /etc/{gentoo,os,lsb}-release				r,
  
  # NOISY ----------------------------------------------
  deny /etc/apparmor.d/					r,
  deny /home/**						r,
}
