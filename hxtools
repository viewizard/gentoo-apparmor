#include <local/tunables.d/>

profile hxtools.ofl /usr/bin/ofl {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  capability sys_ptrace,
  
  # PTRACE ---------------------------------------------
  ptrace (trace),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/						r,
  @{PROC}/@{pids}/maps					r,
  @{PROC}/@{pids}/task/					r,
  @{PROC}/@{pids}/task/@{pids}/fd/			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/ofl						mr,
}
