#include <tunables/global>

profile kernel.sign-file /usr/src/linux-[0-9]*-{hardened,gentoo}*/scripts/sign-file flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/src/linux-[0-9]*-{hardened,gentoo}*/scripts/sign-file mr,
  
  # READS/WRITES ---------------------------------------
  /usr/src/linux-[0-9]*-{hardened,gentoo}*/certs/signing_key.{pem,x509} r,
  /lib{,32,64}/modules/[0-9]*-{hardened,gentoo}*/**.ko	rw,
}

profile kernel.gen-ima-certs /usr/src/IMA/certs/* flags=(complain) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/bash						mr,
  /bin/cat						ix,
  /usr/bin/openssl					Cx -> openssl,
  
  # READS/WRITES ---------------------------------------
  /usr/src/IMA/certs/*					rw,
  
  profile openssl flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					w,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/openssl					mr,
    
    # READS/WRITES -------------------------------------
    /etc/ssl/openssl.cnf				r,
    /usr/src/IMA/certs/*				rw,
    /root/.rnd						rw,
  }
}

profile kernel.checkpatch.pl /usr/src/linux-[0-9]*-{hardened,gentoo}*/scripts/checkpatch.pl flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/perl>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/src/linux-[0-9]*-{hardened,gentoo}*/scripts/checkpatch.pl r,
  
  # READS/WRITES ---------------------------------------
  /usr/src/**						r,
}
