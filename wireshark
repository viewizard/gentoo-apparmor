#include <tunables/global>

# предустановка для abstractions/fs-access-by-user-preset-{rk,rwk,rwkl}
@{USERS_DIR}="[^.]**"
@{USERS_FILE}="[^.]*"

profile wireshark /usr/bin/wireshark{,-gtk} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/cups-client>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/unix-pattern/gvfsd-trash>
  #include <abstractions/unix-pattern/gvfsd-network>
  #include <abstractions/fs-access-by-users-preset-rwk>
  #include <abstractions/fs-deny-by-pattern-internet>
  #include <abstractions/fs-deny-private-strict>
  #include <abstractions/nameservice>
  #include <abstractions/dconf>
  #include <abstractions/xdg-open>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(int,term) peer="wireshark.dumpcap",
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/net/dev				r,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/wireshark{,-gtk}				mr,
  /usr/bin/dumpcap					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/libnl/classid					r,
  /usr/share/wireshark/{,**}				r,
  /usr/lib{,32,64}/wireshark/plugins/**{la,so}		m,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.wireshark/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/wireshark_*_*_*.pcapng			rw,
}

profile wireshark.dumpcap /usr/bin/dumpcap {
  #include <abstractions/base>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  
  # CAPABILITIES ---------------------------------------
  capability net_admin,
  capability net_raw,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network packet raw,
  network packet dgram,
  network inet dgram,
  network inet6 dgram,
  
  # DBUS -----------------------------------------------
  dbus eavesdrop
  	bus=system,
  dbus receive
  	bus=system,
  dbus send
  	bus=system,
  dbus eavesdrop
  	bus=session,
  dbus receive
  	bus=session,
  dbus send
  	bus=session,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /sys/class/net/					r,
  /sys/bus/usb/devices/					r,
  @{PROC}/@{pid}/net/dev				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dumpcap					mr,
  
  # TEMP -----------------------------------------------
  owner /tmp/wireshark_*_*_*.pcapng			rw,
}
