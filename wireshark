#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="[^.]**"
@{PROG_FILE}="[^.]*"

profile wireshark /usr/bin/{tshark,wireshark} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>	# Note, wireshark could use both
  #include <abstractions/qt>	# (QT and GTK) for GUI.
  #include <abstractions/cups-client>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/program-work-with-disk-rwk-strict>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  
  # CAPABILITIES ---------------------------------------
  capability net_admin,
  capability net_raw,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network packet raw,
  network packet dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /sys/class/net/					r,
  /sys/bus/usb/devices/					r,
  @{PROC}/@{pid}/net/dev				r,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/wireshark					mr,
  /usr/bin/dumpcap					ix,
  
  # READS/WRITES ---------------------------------------
  /etc/libnl/classid					r,
  /usr/share/wireshark/{,**}				r,
  /usr/lib{,32,64}/wireshark/plugins/**{la,so}		m,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.wireshark/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/wireshark_*_*_*.pcapng			rw,
}
