#include <local/tunables.d/>

# предустановка для abstractions/fs/access-by-user-preset-rwk
@{USERS_DIR_rwk}="[^.]**"
@{USERS_FILE_rwk}="[^.]*"

# Паттерн для временного имени файла. Например:
# wireshark_eth0_20171123203517_ObAfPj.pcapng
# wireshark_dbus-session_20171123203836_aWwJR4.pcapng
@{TMP_WIRESHARK}=wireshark_@{TMP}*_20[0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9]_@{TMP6}.pcapng

profile wireshark /usr/bin/wireshark{,-gtk} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/cups-client>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/unix/gvfsd-trash>
  #include <abstractions/unix/gvfsd-network>
  #include <abstractions/fs/access-by-users-preset-rwk>
  #include <abstractions/fs/deny-by-pattern-internet>
  #include <abstractions/fs/deny-private-strict>
  #include <abstractions/nameservice>
  #include <abstractions/dconf>
  #include <abstractions/xdg-open>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(int,term) peer="wireshark.dumpcap",
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/net/dev				r,	# IMPROVE! UID=$USER(owner),root
  audit owner @{PROC}/@{pid}/cmdline			r,	# FIX ME! @{pid}/@{pids} audit 17.10.2017
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/wireshark{,-gtk}				mr,
  /usr/bin/dumpcap					Px,
  /usr/lib{,32,64}/wireshark/extcap/udpdump		Px,
  /usr/lib{,32,64}/wireshark/extcap/randpktdump		Px,
  
  # READS/WRITES ---------------------------------------
  /etc/libnl/classid					r,	# dev-libs/libnl
  /usr/share/wireshark/{,**}				r,
  /usr/lib{,32,64}/wireshark/plugins/[0-9]*/*.{la,so}	m,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.wireshark/{,**}			rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/@{TMP_WIRESHARK}				rw,
}

profile wireshark.dumpcap /usr/bin/dumpcap {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  
  # CAPABILITIES ---------------------------------------
  capability net_admin,
  capability net_raw,
  capability dac_read_search,
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network packet raw,
  network packet dgram,
  network inet dgram,
  network inet6 dgram,
  
  # DBUS -----------------------------------------------
  dbus eavesdrop
  	bus=system,
  dbus receive
  	bus=system,
  dbus send
  	bus=system,
  dbus eavesdrop
  	bus=session,
  dbus receive
  	bus=session,
  dbus send
  	bus=session,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{sys}/class/net/					r,
  @{sys}/bus/usb/devices/				r,
  @{PROC}/@{pid}/net/dev				r,	# IMPROVE! UID=$USER(owner),root
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dumpcap					mr,
  
  # TEMP -----------------------------------------------
  owner /tmp/@{TMP_WIRESHARK}				rw,
}

profile wireshark.udpdump /usr/lib{,32,64}/wireshark/extcap/udpdump {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/wireshark/extcap/udpdump		mr,
  
}

profile wireshark.randpktdump /usr/lib{,32,64}/wireshark/extcap/randpktdump {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/lib{,32,64}/wireshark/extcap/randpktdump		mr,
  
}
