#include <local/tunables.d/>

profile sudo /usr/bin/sudo {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <local/hats/sudo.d/>					# Важно! У sudo не должно быть никаких
  								# других hats кроме root.
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  capability chown,
  capability mknod,
  capability fowner,
  capability sys_resource,
  capability dac_read_search,
  capability dac_override,
  
  # UNIX -----------------------------------------------
  unix (send, receive)
  		type=stream
  		peer=(label="pam_mount.pmvarrun"),		# sys-auth/pam_mount
  
  # NETWORK --------------------------------------------
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,	# IMPROVE! UID=$USER(owner),root
  owner @{PROC}/@{pid}/stat				r,
  owner @{PROC}/@{pid}/attr/current			w,
  audit @{PROC}/@{pid}/attr/exec			w,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  audit @{PROC}/@{pid}/attr/current			r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  audit @{PROC}/@{pid}/attr/prev			r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  audit @{PROC}/@{pid}/attr/exec			r,	# FIX ME! @{pid}/@{pids} audit 19.10.2017
  @{PROC}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/sudo						mr,
  @{shell}						Cx,
  /usr/bin/gksu_askpass.sh				Px,
  /usr/sbin/sendmail					Px,	# mail-mta/nullmailer
  
  # READS/WRITES ---------------------------------------
  /etc/sudoers						r,
  /etc/sudoers.d/{,*}					r,
  /etc/environment					r,	# sys-libs/pam
  /etc/security/limits.d/{,*}				r,	# sys-libs/pam
  /usr/lib{,32,64}/sudo/sudoers.so			m,
  /usr/libexec/sudo/libsudo_util.so*			mr,
  /run/utmp						rk,
  /run/sudo/						rw,
  /run/sudo/ts/						rw,
  /run/sudo/ts/*					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability setuid,
    capability setgid,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
  }
}

profile sudo.askpass /usr/bin/gksu_askpass.sh {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gksu_askpass.sh				r,
  @{shell}						mr,
  /usr/bin/zenity					Px,	# gnome-extra/zenity
}

profile sudo.gksudo /usr/bin/{gksu,gksudo} {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /usr/bin/{gksu,gksudo}				mr,
  /usr/bin/sudo						Px,
}
