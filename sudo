#include <tunables/global>
profile sudo /usr/bin/sudo {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  #include <local/sudo-custom>
  
  capability setuid,
  capability setgid,
  capability chown,
  capability fowner,
  capability sys_resource,
  capability dac_read_search,
  capability dac_override,
  
  /dev/ r,
  /dev/tty rw,
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* rw,
  
  @{PROC}/@{pid}/fd/ r,
  owner @{PROC}/@{pid}/stat r,
  
  /usr/bin/sudo mr,
  /usr/bin/gksu_askpass.sh Px,
  
  /usr/lib{,32,64}/sudo/sudoers.so m,
  /usr/libexec/sudo/libsudo_util.so* mr,
  
  /etc/sudoers r,
  /etc/sudoers.d/{,*} r,
  /etc/environment r,
  /etc/security/limits.d/{,*} r,
  
  /run/utmp rk,
  /run/sudo/ rw,
  /run/sudo/ts/ rw,
  /run/sudo/ts/* rwk,
  
  
###################################################
# MAC (without PAM)
###################################################

#  @{PROC}/@{pid}/{mounts,mountinfo} r,
  
#  /bin/bash Px -> bash_root,
#  /usr/sbin/pmvarrun Px,
#  /usr/bin/ofl Px,
#  /bin/mount Px,
#  /bin/umount Px,
#  /usr/bin/thunar Px,
#  /usr/bin/dbus-daemon Px,
#  /usr/bin/gsmartcontrol Px,

###################################################
# RBAC (with PAM)
###################################################

  @{PROC}/@{pid}/attr/{current,exec} w,
  @{PROC}/@{pid}/attr/{current,prev,exec} r,
  
  /bin/bash Cxr -> shell,
  
  profile shell {
    #include <abstractions/base>
    #include <abstractions/authentication-pam_usb>
    
    capability setuid,
    capability setgid,
    
    /dev/tty rw,
    
    /bin/bash mr,
    
  }
  
  ^DEFAULT {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/authentication>
    #include <local/sudo-custom>
    
    capability dac_override,
    capability sys_resource,
    capability setuid,
    capability setgid,
    capability fsetid,
    
    /dev/pts/[0-9]* w,
    @{PROC}/@{pid}/fd/ r,
    @{PROC}/@{pid}/mountinfo r,
    
    /bin/bash Px -> bash_users,
    /usr/sbin/pmvarrun Px,
    /usr/bin/ofl Px,
    /bin/mount Px,
    /bin/umount Px,
    /usr/bin/thunar Px,
    /usr/bin/dbus-daemon Px,
    /usr/bin/gksu_askpass.sh Px,
    /usr/bin/gsmartcontrol Px,
    
    /etc/environment r,
    
  }
  
  ^root {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/authentication>
    #include <local/sudo-custom>
    
    capability dac_override,
    capability sys_resource,
    capability setuid,
    capability setgid,
    capability fsetid,
    
    /dev/pts/[0-9]* w,
    @{PROC}/@{pid}/fd/ r,
    @{PROC}/@{pid}/mountinfo r,
    
    /bin/bash Px -> bash_root,
    /usr/sbin/pmvarrun Px,
    /usr/bin/ofl Px,
    /bin/mount Px,
    /bin/umount Px,
    /usr/bin/thunar Px -> thunar_root,
    /usr/bin/dbus-daemon Px,
    /usr/bin/gksu_askpass.sh Px,
    /usr/bin/gsmartcontrol Px,
    /sbin/xtables-multi Px,
    
    /etc/environment r,
    
  }
  
}


profile sudo.askpass /usr/bin/gksu_askpass.sh {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/nvidia>
  #include <abstractions/gtk>
  #include <abstractions/X>
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  
  /usr/bin/gksu_askpass.sh r,
  /usr/bin/zenity ixr,
  /bin/bash ixmr,
  
}


profile sudo.gksudo /usr/bin/{gksu,gksudo} {
  #include <abstractions/base>
  
  /dev/tty rw,
  /dev/tty[0-9]* w,
  
  /bin/bash mr,
  /usr/bin/{gksu,gksudo} mr,
  /usr/bin/sudo Px,
  
}
