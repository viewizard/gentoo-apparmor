#include <tunables/global>

profile sudo /usr/bin/sudo {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>
  
  # CAPABILITIES ---------------------------------------
  capability setuid,
  capability setgid,
  capability chown,
  capability fowner,
  capability sys_resource,
  capability dac_read_search,
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  owner @{PROC}/@{pid}/stat				r,
  @{PROC}/@{pid}/attr/{current,exec}			w,
  @{PROC}/@{pid}/attr/{current,prev,exec}		r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/sudo						mr,
  @{shell}						Cx,
  /usr/bin/gksu_askpass.sh				Px,
  /usr/sbin/sendmail					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/sudoers						r,
  /etc/sudoers.d/{,*}					r,
  /etc/environment					r,
  /etc/security/limits.d/{,*}				r,
  /usr/lib{,32,64}/sudo/sudoers.so			m,
  /usr/libexec/sudo/libsudo_util.so*			mr,
  /run/utmp						rk,
  /run/sudo/						rw,
  /run/sudo/ts/						rw,
  /run/sudo/ts/*					rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/authentication-pam_usb>
    
    # CAPABILITIES -------------------------------------
    capability setuid,
    capability setgid,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
  }
  
  ^DEFAULT {}							# Важно! У sudo не должно быть никаких
  								# других hat кроме root.
  
  ^root {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/authentication>
    #include <local/sudo-custom>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    capability sys_resource,
    capability setuid,
    capability setgid,
    capability fsetid,
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					w,
    @{PROC}/@{pid}/fd/					r,
    @{PROC}/@{pid}/mountinfo				r,
    
    # EXECUTABLES --------------------------------------
    @{shell}						Px -> shell_root,
    /bin/mount						Px,
    /bin/umount						Px,
    /sbin/xtables-multi					Px,
    /usr/bin/ofl					Px,
    /usr/bin/thunar					Px -> thunar_root,	# XFCE4
    /usr/bin/dbus-daemon				Px,
    /usr/bin/gksu_askpass.sh				Px,
    /usr/bin/gsmartcontrol				Px,
    /usr/sbin/pmvarrun					Px,
    /usr/sbin/firewall					Px,
    
    # READS/WRITES -------------------------------------
    /etc/environment					r,
  }
}

profile sudo.askpass /usr/bin/gksu_askpass.sh {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/nvidia>
  #include <abstractions/gtk>
  #include <abstractions/X>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/gksu_askpass.sh				r,
  /usr/bin/zenity					ixr,
  @{shell}						ixmr,	# FIX ME! почему он в основном профиле с ix?
}

profile sudo.gksudo /usr/bin/{gksu,gksudo} {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /usr/bin/{gksu,gksudo}				mr,
  /usr/bin/sudo						Px,
}
