# UNIX -------------------------------------------------
unix (send, receive, connect)
	type=stream
	peer=(addr="@/tmp/.ICE-unix/@{pids}",label="xfce4-session"),	# xfce-base/xfce4-session

# USERS ------------------------------------------------
owner @{USER_HOME_D}/.ICEauthority			r,
