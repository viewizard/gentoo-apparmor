#include <tunables.d/>

profile filezilla /usr/bin/filezilla {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/at-spi>
  #include <abstractions/dbus/gvfs>
  #include <abstractions/dbus/notifications>
  #include <abstractions/fs/access-by-pattern-filemanager>
  #include <abstractions/fs/deny-private-strict>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term) peer="filezilla.fzsftp",
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/filezilla					mr,
  @{shell}						Cx,
  /usr/bin/fzsftp					Px,
  
  # READS/WRITES ---------------------------------------
  /usr/share/filezilla/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.filezilla/{,**}			rw,
  
  # NOISY ----------------------------------------------
  deny /*/						r,	# если нужно будет работать под root с системными
  								# файлами - сделать профиль filezilla_root
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/uname						Px,
    /usr/bin/lsb_release				Px,
  }
}

profile filezilla.fzsftp /usr/bin/fzsftp {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/fs/access-by-pattern-filemanager>
  #include <abstractions/fs/deny-private-strict>
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/fzsftp					mr,
  @{shell}						Cx,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.putty/{,**}				rw,
  
  # TEMP -----------------------------------------------
  owner /tmp/ssh-*/agent.*				rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /bin/ls						Px -> filezilla_fzsftp_ls,
    /bin/ps						Px,
    
    # NOISY --------------------------------------------
    deny /etc/						r,
  }
}

# IMPROVE! Сейчас (модуль ядра 3.6, утилита 2.11.0) не поддерживаются
# множественные вложенные профили, выносим в отдельный профиль.
profile filezilla_fzsftp_ls {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/ls						mr,
  
  # TEMP -----------------------------------------------
  /tmp/							r,
}
