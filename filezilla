#include <tunables/global>

# config for abstractions/program-work-with-disk-** (**-rk,rwk)
@{PROG_DIR}="**"
# we could download folders with files, not just files...
@{PROG_FILE}="**"

profile filezilla /usr/bin/filezilla {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/nvidia>
  #include <abstractions/X>
  #include <abstractions/program-work-with-disk-rwk>
  #include <abstractions/nameservice>
  #include <abstractions/xdg-open>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/filezilla					mr,
  /bin/bash						Cx -> shell,
  /usr/bin/fzsftp					ix,
  
  # READS/WRITES ---------------------------------------
  /usr/share/filezilla/{,**}				r,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.filezilla/{,**}			rw,
  
  # NOISY ----------------------------------------------
  deny /*/						r,	# если нужно будет работать под root с системными
  								# файлами - сделать профиль filezilla_root
  
  
  profile shell {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/program-work-with-disk-rwk>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    /bin/bash						mr,
    /bin/uname						ix,
    /bin/ls						ix,
    /usr/bin/lsb_release				Pxr,
    /bin/ps						Px,
    
    # TEMP ---------------------------------------------
    /tmp/						r,
    
    # NOISY --------------------------------------------
    deny /etc/						r,
  }
  
}
