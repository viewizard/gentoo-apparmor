#include <tunables.d/>

profile wpa_supplicant.wpa_gui /usr/bin/wpa_gui {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/X>
  #include <abstractions/qt>
  #include <abstractions/nameservice>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/wpa_gui					mr,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/wpa_supplicant/			rw,
  owner @{HOME}/.config/wpa_supplicant/wpa_gui.conf	rwk,
}

profile wpa_supplicant /usr/sbin/wpa_supplicant {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/system-bind>
  
  # CAPABILITIES ---------------------------------------
  capability sys_module,
  capability net_admin,
  capability net_raw,
  capability mknod,
  
  # DBUS -------------------------------------------------
  dbus send
  	bus=system
  	path="/fi/w[0-9]*/wpa_supplicant[0-9]**"
  	interface="org.freedesktop.DBus.Properties"
  	peer=(name="org.freedesktop.DBus",label="networkmanager.NetworkManager"),
  dbus receive
  	bus=system
  	path="/fi/w[0-9]*/wpa_supplicant[0-9]**"
  	interface="org.freedesktop.DBus.{Properties,Introspectable}"
  	peer=(name=":[0-9]*.[0-9]*",label="networkmanager.NetworkManager"),
  dbus send
  	bus=system
  	path="/fi/w[0-9]*/wpa_supplicant[0-9]**"
  	interface="fi.w1.wpa_supplicant[0-9]*"
  	peer=(name="org.freedesktop.DBus",label="networkmanager.NetworkManager"),
  dbus receive
  	bus=system
  	path="/fi/w[0-9]*/wpa_supplicant[0-9]**"
  	interface="fi.w1.wpa_supplicant[0-9]*"
  	peer=(name=":[0-9]*.[0-9]*",label="networkmanager.NetworkManager"),
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network packet dgram,
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/rfkill						r,
  @{PROC}/sys/net/ipv{4,6}/conf/wlan[0-9]*/drop_unicast_in_l2_multicast rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/wpa_supplicant				mr,
}
