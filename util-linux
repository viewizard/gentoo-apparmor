#include <tunables/global>
profile util-linux.mount /bin/mount flags=(complain) {
  #include <abstractions/base>
  
  capability sys_admin,
  capability dac_override,
  capability chown,
  
  @{PROC}/@{pid}/mountinfo r,
  /dev/sd[a-z] r,
  /dev/sd[a-z]* r,
  /sys/devices/pci**/block/sd[a-z]/ r,
  /sys/devices/pci**/block/sd[a-z]/dev r,
  /sys/devices/pci**/block/sd[a-z]/sd[a-z]*/ r,
  /sys/devices/pci**/block/sd[a-z]/sd[a-z]*/size r,
  /sys/devices/pci**/block/sd[a-z]/sd[a-z]*/start r,
  /sys/devices/virtual/block/dm-*/dm/name r,
  
  /bin/mount r,
  
  /etc/fstab r,
  
  /run/mount/ w,
  /run/mount/utab rw,
  /run/mount/utab.* rwk,
  
}

profile util-linux.umount /bin/umount flags=(complain) {
  #include <abstractions/base>
  
  capability sys_admin,
  capability chown,
  
  @{PROC}/@{pid}/mountinfo r,
  
  /bin/umount r,
  
  /run/mount/utab rw,
  /run/mount/utab.* rwk,
  
}

profile util-linux.lsblk /bin/lsblk flags=(complain) {
  #include <abstractions/base>
  
  /dev/pts/[0-9]* w,
  /sys/block/ r,
  /sys/devices/virtual/block/md[0-9]*/ r,
  /sys/devices/virtual/block/md[0-9]*/** r,
  /sys/devices/pci**/ata*/**/type r,
  /sys/devices/pci**/ata*/**/block/sd[a-z]/ r,
  /sys/devices/pci**/ata*/**/block/sd[a-z]/** r,
  /sys/devices/pci**/usb*/**/type r,
  /sys/devices/pci**/usb*/**/block/sd[a-z]/ r,
  /sys/devices/pci**/usb*/**/block/sd[a-z]/** r,
  /sys/devices/virtual/block/dm-[0-9]*/ r,
  /sys/devices/virtual/block/dm-[0-9]*/** r,
  /sys/devices/virtual/block/zd[0-9]*/ r,
  /sys/devices/virtual/block/zd[0-9]*/** r,
  /sys/devices/virtual/block/loop[0-9]*/ r,
  /sys/devices/virtual/block/loop[0-9]*/** r,
  @{PROC}/swaps r,
  @{PROC}/@{pid}/mountinfo r,
  
  /bin/lsblk r,
  
}

profile util-linux.agetty /sbin/agetty flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability sys_admin,
  capability sys_tty_config,
  capability fsetid,
  capability chown,
  
  /dev/tty[0-9]* rw,
  
  /bin/login Px,
  
  /etc/issue r,
  
  /run/utmp rwk,
  /run/agetty.reload rw,
  /var/log/wtmp wk,
  
}
