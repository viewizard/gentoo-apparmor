profile util-linux.cal /usr/bin/cal {
  #include <abstractions/base>
  #include <abstractions/ncurses>
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/cal						mr,
  
  # DENY INHERIT ---------------------------------------
  deny network inet dgram,					# app-admin/conky, conky_shell
  deny network inet6 dgram,					# app-admin/conky, conky_shell
  deny @{PROC_D}/uptime					r,	# app-admin/conky, conky_shell
  deny @{PROC_D}/@{pids}/net/dev			r,	# app-admin/conky, conky_shell
}

profile util-linux.getopt@{p_all} /usr/bin/getopt@{t_all} flags=(attach_disconnected) {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/getopt					mr,
  
  # DENY INHERIT ---------------------------------------
  deny /apparmor/.null					rw,	# flags=(attach_disconnected)
}

profile util-linux.dmesg /bin/dmesg {
  #include <abstractions/base>
  #include <abstractions/ncurses>
  
  # CAPABILITIES ---------------------------------------
  capability syslog,
  
  # PSEUDO ---------------------------------------------
  /dev/kmsg						r,
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /bin/dmesg						mr,
  
  # READS/WRITES ---------------------------------------
  # В общем профиле доступ к файлам (для параметра --file) не даем.
  /var/log/dmesg					w,	# openrc.bootmisc.init.d
}

