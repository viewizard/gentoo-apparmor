  /dev/rtc0						rw,
  
  # EXECUTABLES ----------------------------------------
  /sbin/hwclock						mr,
}

profile util-linux.logger /usr/bin/logger flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/loginuid r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/logger					mr,
}

