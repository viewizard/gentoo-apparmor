profile util-linux.eject@{p_all} /usr/bin/eject@{t_all} {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability sys_rawio,
  capability sys_admin,
  
  # PSEUDO ---------------------------------------------
  /dev/@{BLOCK_REAL}					rw,
  @{SYS_D}/devices/virtual/block/@{BLOCK_VIRT}/{,**}	r,
  @{SYS_D}/devices/pci@{PCI2}/@{PCI4}/{ata@{ATA1},usb@{USB1}}/**/block/@{BLOCK_REAL}/{,**} r,
  owner @{PROC_D}/@{pid}/mountinfo			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/eject					mr,
  
  # READS/WRITES ---------------------------------------
  /run/mount/utab					r,
}

profile util-linux.blkid /sbin/blkid {
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  capability sys_rawio,
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/@{BLOCK_ALL}					r,
  @{SYS_D}/block/					r,
  @{SYS_D}/devices/virtual/block/**			r,
  @{SYS_D}/devices/pci@{PCI2}/@{PCI4}/{ata@{ATA1},usb@{USB1}}/**/block/** r,
  @{PROC_D}/partitions					r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/blkid						mr,
  
  # READS/WRITES ---------------------------------------
  /run/blkid/blkid.tab{,.old,-@{TMP6}}			rw,
  link subset /run/blkid/blkid.tab.old			-> /run/blkid/blkid.tab,
}

