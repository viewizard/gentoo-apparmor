profile traceroute /usr/bin/traceroute {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/traceroute					mr,
}
