#include <tunables/global>
profile dbus /usr/bin/dbus-{cleanup-sockets,daemon,launch,run-session,send,uuidgen} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/nameservice>
  #include <abstractions/X>
  #include <abstractions/dconf>
  #include <abstractions/dbus>
  #include <abstractions/dbus-accessibility>
  #include <abstractions/dbus-session>

  capability sys_resource,
  capability setgid,
  capability setuid,
  capability dac_read_search,
  capability dac_override,

  @{PROC}/@{pid}/fd/ r,
  @{PROC}/@{pid}/cmdline r,
  
  /usr/bin/dbus-{cleanup-sockets,daemon,launch,run-session,send,uuidgen} ixr,
  /usr/lib64/xfce4/xfconf/xfconfd Px,
  /usr/lib64/xfce4/notifyd/xfce4-notifyd Px,
  /usr/lib64/tumbler-1/tumblerd Px,
  /usr/libexec/at-spi-bus-launcher Px,
  /usr/libexec/at-spi2-registryd Px,
  /usr/libexec/gvfsd Px,
  /usr/libexec/gvfsd-metadata Px,
  /usr/libexec/gvfs-udisks2-volume-monitor Px,
  /usr/libexec/dconf-service Px,
  /usr/libexec/dbus-daemon-launch-helper Px,
  /usr/bin/gnome-keyring-daemon Px,
  
  /etc/dbus-1/** r,
  /usr/share/dbus-1/** r,
  /run/dbus.pid rw,
  /etc/machine-id* rw,

  /etc/at-spi2/accessibility.conf r,
  
  owner @{HOME}/.dbus/ rw,
  owner @{HOME}/.dbus/** rw,
  
}

profile dbus-daemon-launch-helper /usr/libexec/dbus-daemon-launch-helper flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability setgid,
  capability setuid,
  
  /usr/libexec/dbus-daemon-launch-helper r,
  /usr/lib64/polkit-1/polkitd Px,
  /usr/lib64/udisks/udisks-daemon Px,
  /usr/lib64/upower/upowerd Px,
  /usr/libexec/udisks2/udisksd Px,
  
  /etc/dbus-1/** r,
  /usr/share/dbus-1/** r,
  
}

profile dbus.init.d /etc/init.d/dbus flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  /etc/init.d/* Pxr,
  /bin/mkdir ix,
  /bin/rm ix,
  /usr/bin/dbus-uuidgen Px,
  /usr/bin/dbus-daemon Px,
  
  /run/dbus.pid rwk,
  /run/dbus/ w,
  /run/dbus/system_bus_socket rwk,
  
}
