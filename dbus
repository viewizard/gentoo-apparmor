#include <tunables/global>

profile dbus.dbus-cleanup-sockets /usr/bin/dbus-cleanup-sockets flags=(complain) {
  #include <abstractions/base>
}

profile dbus.dbus-daemon /usr/bin/dbus-daemon {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/dbus>
  
  # CAPABILITIES ---------------------------------------
  capability sys_resource,
  capability setgid,
  capability setuid,
  
  # UNIX -----------------------------------------------
  unix (bind, listen, send, receive, accept)
  			type=stream
  			addr="@/tmp/dbus-*",
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/cmdline				r,
  @{PROC}/@{pid}/oom_score_adj				w,
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dbus-daemon					mr,
  /usr/bin/gnome-keyring-daemon				Px,
  /usr/bin/thunar					Px,	# XFCE4
  /usr/lib{,32,64}/xfce4/xfconf/xfconfd			Px,	# XFCE4
  /usr/lib{,32,64}/xfce4/notifyd/xfce4-notifyd		Px,	# XFCE4
  /usr/lib{,32,64}/tumbler-1/tumblerd			Px,	# XFCE4
  /usr/libexec/at-spi-bus-launcher			Px,
  /usr/libexec/at-spi2-registryd			Px,
  /usr/libexec/gvfsd					Px,
  /usr/libexec/gvfsd-metadata				Px,
  /usr/libexec/gvfs-udisks2-volume-monitor		Px,
  /usr/libexec/dconf-service				Px,
  /usr/libexec/dbus-daemon-launch-helper		Px,
  /usr/libexec/gconfd-2					Px,
  /usr/libexec/gcr-prompter				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/dbus-1/**					r,
  /usr/share/dbus-1/**					r,
  /usr/share/defaults/at-spi2/accessibility.conf	r,
  /run/dbus.pid						rw,
  /run/ConsoleKit/inhibit/inhibit.*.pipe		w,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.session.log				w,	# XFCE4, <abstractions/X>
}

profile dbus.dbus-launch /usr/bin/dbus-launch {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/X>
  #include <abstractions/dbus-session>
  
  # CAPABILITIES ---------------------------------------
  capability dac_read_search,
  capability dac_override,
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term) peer="dbus.dbus-daemon",
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dbus-launch					mr,
  @{shell}						Cx,
  /usr/bin/dbus-daemon					Px,
  /usr/bin/xfce4-session				Px,	# XFCE4
  /etc/X11/Sessions/Xfce4				Px,	# XFCE4
  
  # USERS ----------------------------------------------
  owner @{HOME}/.dbus/{,**}				rw,
  @{HOME}/.Xauthority					r,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /etc/X11/Sessions/Xfce4				r,	# XFCE4
    /usr/bin/startxfce4					Px,	# XFCE4
    
    # USERS --------------------------------------------
    owner @{HOME}/.session.log				w,	# XFCE4, <abstractions/X>
  }
}

profile dbus.dbus-run-session /usr/bin/dbus-run-session flags=(complain) {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dbus-run-session				mr,
}

profile dbus.dbus-send /usr/bin/dbus-send flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dbus-send					mr,
}

profile dbus.dbus-uuidgen /usr/bin/dbus-uuidgen flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/dbus-session-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dbus-uuidgen					mr,
}

profile dbus.dbus-daemon-launch-helper /usr/libexec/dbus-daemon-launch-helper {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  
  # PSEUDO ---------------------------------------------
  @{PROC}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/dbus-daemon-launch-helper		mr,
  /usr/sbin/console-kit-daemon				Px,
  /usr/sbin/ModemManager				Px,
  /usr/sbin/wpa_supplicant				Px,
  /usr/lib{,32,64}/polkit-1/polkitd			Px,
  /usr/lib{,32,64}/udisks/udisks-daemon			Px,
  /usr/lib{,32,64}/upower/upowerd			Px,
  /usr/libexec/udisks2/udisksd				Px,
  /usr/libexec/nm-dispatcher				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/dbus-1/**					r,
  /usr/share/dbus-1/**					r,
}

profile dbus.init.d /etc/init.d/dbus {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # EXECUTABLES ----------------------------------------
  /etc/init.d/{cupsd,consolekit,xdm,net.*}		Px,
  @{shell}						Cx,
  /bin/rm						ix,
  /usr/bin/dbus-uuidgen					Px,
  /usr/bin/dbus-daemon					Px,
  /usr/bin/dbus-send					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/dbus				r,
  /run/dbus.pid						rwk,
  /run/dbus/						w,
  /run/dbus/system_bus_socket				rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}
