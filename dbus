#include <tunables/global>

profile dbus.dbus-cleanup-sockets /usr/bin/dbus-cleanup-sockets {
  #include <abstractions/base>
}

profile dbus.dbus-daemon /usr/bin/dbus-daemon {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  
  # CAPABILITIES ---------------------------------------
  capability sys_resource,
  capability setgid,
  capability setuid,
  
  # UNIX -----------------------------------------------
  unix (bind, listen, send, receive, accept)
  			type=stream
  			addr="@/tmp/dbus-*",
  
  # DBUS -----------------------------------------------
  dbus receive
  	bus={system,session,accessibility}
  	path="/org/freedesktop/DBus{,/**}"
  	interface="org.freedesktop.DBus"
  	member=Hello
  	peer=(name=":not.active.yet"),
  dbus receive
  	bus={system,session,accessibility}
  	path="/org/freedesktop/DBus{,/**}"
  	interface="org.freedesktop.DBus{,.*}"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  /sys/kernel/security/apparmor/features/dbus/mask	r,	# AppArmor dbus mediation
  /sys/kernel/security/apparmor/.access			rw,	# AppArmor dbus mediation
  @{PROC}/@{pid}/cmdline				r,
  @{PROC}/@{pid}/mounts					r,	# AppArmor dbus mediation
  @{PROC}/@{pid}/oom_score_adj				w,
  @{PROC}/@{pid}/attr/current				r,	# AppArmor dbus mediation
  owner @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dbus-daemon					mr,
  /usr/bin/gnome-keyring-daemon				Px,
  /usr/bin/thunar					Px,	# XFCE4
  /usr/lib{,32,64}/xfce4/xfconf/xfconfd			Px,	# XFCE4
  /usr/lib{,32,64}/xfce4/notifyd/xfce4-notifyd		Px,	# XFCE4
  /usr/lib{,32,64}/tumbler-1/tumblerd			Px,	# XFCE4
  /usr/libexec/at-spi-bus-launcher			Px,
  /usr/libexec/at-spi2-registryd			Px,
  /usr/libexec/gvfsd					Px,
  /usr/libexec/gvfsd-metadata				Px,
  /usr/libexec/gvfs-udisks2-volume-monitor		Px,
  /usr/libexec/dconf-service				Px,
  /usr/libexec/dbus-daemon-launch-helper		Px,
  /usr/libexec/gconfd-2					Px,
  /usr/libexec/gcr-prompter				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/dbus-1/**					r,
  /usr/share/dbus-1/**					r,
  /usr/share/defaults/at-spi2/accessibility.conf	r,
  /run/dbus.pid						rw,
  /run/ConsoleKit/inhibit/inhibit.*.pipe		w,
}

profile dbus.dbus-launch /usr/bin/dbus-launch {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/X_sudo>				# RBAC! Должен быть отдельный профиль для root.
  #include <abstractions/dbus/session-strict>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term) peer="dbus.dbus-daemon",
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dbus-launch					mr,
  @{shell}						Cx,
  /usr/bin/dbus-daemon					Px,
  /usr/bin/xfce4-session				Px,	# XFCE4
  /etc/X11/Sessions/Xfce4				Px,	# XFCE4
  
  # USERS ----------------------------------------------
  owner @{HOME}/.dbus/{,**}				rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /etc/X11/Sessions/Xfce4				r,	# XFCE4
    /usr/bin/startxfce4					Px,	# XFCE4
  }
}

profile dbus.dbus-run-session /usr/bin/dbus-run-session {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dbus-run-session				mr,
}

profile dbus.dbus-send /usr/bin/dbus-send {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/consolekit>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/xfce/FileManager"
  	interface="org.xfce.FileManager"
  	peer=(name="org.xfce.FileManager",label="thunar"),	# XFCE4 (Запуск настроек thunar через менеджер настроек).
  								# RBAC! Для root ветки label="thunar_root".
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  owner @{PROC}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dbus-send					mr,
}

profile dbus.dbus-uuidgen /usr/bin/dbus-uuidgen {
  #include <abstractions/base>
  #include <abstractions/dbus/session-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dbus-uuidgen					mr,
}

profile dbus.dbus-daemon-launch-helper /usr/libexec/dbus-daemon-launch-helper {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  
  # PSEUDO ---------------------------------------------
  @{PROC}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/dbus-daemon-launch-helper		mr,
  /usr/sbin/console-kit-daemon				Px,
  /usr/sbin/ModemManager				Px,
  /usr/sbin/wpa_supplicant				Px,
  /usr/lib{,32,64}/polkit-1/polkitd			Px,
  /usr/lib{,32,64}/upower/upowerd			Px,
  /usr/libexec/udisks2/udisksd				Px,
  /usr/libexec/nm-dispatcher				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/dbus-1/**					r,
  /usr/share/dbus-1/**					r,
}

profile dbus.init.d /etc/init.d/dbus {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/dbus/tasks			w,
  
  # EXECUTABLES ----------------------------------------
  /etc/init.d/{cupsd,consolekit,xdm,net.*}		Px,
  @{shell}						Cx,
  /bin/rm						Cx,
  /bin/mkdir						Cx,
  /usr/bin/dbus-uuidgen					Px,
  /usr/bin/dbus-daemon					Px,
  /usr/bin/dbus-send					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/dbus				r,
  /run/dbus.pid						rwk,
  /run/dbus/						w,
  /run/dbus/system_bus_socket				rwk,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile rm /bin/rm {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_tty_config,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # READS/WRITES -------------------------------------
    /run/dbus/system_bus_socket				w,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/openrc/dbus/				w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
}
