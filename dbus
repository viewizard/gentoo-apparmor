#include <tunables/global>
profile dbus-cleanup-sockets /usr/bin/dbus-cleanup-sockets flags=(complain) {
  #include <abstractions/base>
  
  
}

profile dbus-daemon /usr/bin/dbus-daemon {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/dbus>
  
  capability sys_resource,
  capability setgid,
  capability setuid,
  
  @{PROC}/@{pid}/cmdline r,
  @{PROC}/@{pid}/oom_score_adj w,
  
  /usr/bin/dbus-daemon mr,
  /usr/lib{,32,64}/xfce4/xfconf/xfconfd Px,
  /usr/lib{,32,64}/xfce4/notifyd/xfce4-notifyd Px,
  /usr/lib{,32,64}/tumbler-1/tumblerd Px,
  /usr/libexec/at-spi-bus-launcher Px,
  /usr/libexec/at-spi2-registryd Px,
  /usr/libexec/gvfsd Px,
  /usr/libexec/gvfsd-metadata Px,
  /usr/libexec/gvfs-udisks2-volume-monitor Px,
  /usr/libexec/dconf-service Px,
  /usr/libexec/dbus-daemon-launch-helper Px,
  
  /etc/dbus-1/** r,
  /usr/share/dbus-1/** r,
  /usr/share/defaults/at-spi2/accessibility.conf r,
  
  /run/dbus.pid rw,
  
}

profile dbus-launch /usr/bin/dbus-launch {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/X>
  #include <abstractions/dbus-session>
  
  /dev/tty[0-9]* w,
  
  /usr/bin/dbus-launch mr,
  /bin/bash Cx -> shell,
  /usr/bin/dbus-daemon Px,
  /usr/bin/xfce4-session Px,
  /etc/X11/Sessions/Xfce4 Px,
  
  owner @{HOME}/.dbus/{,**} rw,
  
  
  profile shell {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash mr,
    /etc/X11/Sessions/Xfce4 r,
    /usr/bin/startxfce4 Px,
    
  }
  
}

profile dbus-run-session /usr/bin/dbus-run-session flags=(complain) {
  #include <abstractions/base>
  
  /usr/bin/dbus-run-session mr,
  
}

profile dbus-send /usr/bin/dbus-send flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/dbus-session>
  
  owner @{PROC}/@{pid}/fd/ r,
  
  /usr/bin/dbus-send mr,
  
}

profile dbus-uuidgen /usr/bin/dbus-uuidgen flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/dbus-session-strict>
  
  /usr/bin/dbus-uuidgen mr,
  
}

profile dbus-daemon-launch-helper /usr/libexec/dbus-daemon-launch-helper {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability setgid,
  capability setuid,
  
  /usr/libexec/dbus-daemon-launch-helper mr,
  /usr/sbin/console-kit-daemon Px,
  /usr/lib{,32,64}/polkit-1/polkitd Px,
  /usr/lib{,32,64}/udisks/udisks-daemon Px,
  /usr/lib{,32,64}/upower/upowerd Px,
  /usr/libexec/udisks2/udisksd Px,
  
  /etc/dbus-1/** r,
  /usr/share/dbus-1/** r,
  
}

profile dbus.init.d /etc/init.d/dbus flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  /etc/init.d/* Pxr,
  /bin/bash Cx -> shell,
  /bin/rm ix,
  /usr/bin/dbus-uuidgen Px,
  /usr/bin/dbus-daemon Px,
  
  /run/dbus.pid rwk,
  /run/dbus/ w,
  /run/dbus/system_bus_socket rwk,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
    
  }
  
}
