#include <local/tunables.d/>

profile dbus.dbus-cleanup-sockets@{p_root} /usr/bin/dbus-cleanup-sockets@{t_root} {
  #include <abstractions/base>
}

profile dbus.dbus-daemon@{p_all} /usr/bin/dbus-daemon@{t_all} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  
  # CAPABILITIES ---------------------------------------
  capability sys_resource,
  capability setgid,
  capability setuid,
  
  # UNIX -----------------------------------------------
  unix (bind, listen, send, receive, accept)
  			type=stream
  			addr="@/tmp/dbus-@{TMP10}",
  
  # DBUS -----------------------------------------------
  dbus receive
  	path="/org/freedesktop/DBus{,/**}"
  	interface="org.freedesktop.DBus"
  	member=Hello
  	peer=(name=":not.active.yet"),
  dbus receive
  	path="/org/freedesktop/DBus{,/**}"
  	interface="org.freedesktop.DBus{,.*}"
  	peer=(name=":[0-9]*.[0-9]*"),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  @{SYS_D}/module/apparmor/parameters/enabled		r,	# AppArmor dbus mediation
  @{SYS_D}/kernel/security/apparmor/features/dbus/mask	r,	# AppArmor dbus mediation
  @{SYS_D}/kernel/security/apparmor/.access		rw,	# AppArmor dbus mediation
  @{PROC_D}/@{pids}/cmdline				r,
  @{PROC_D}/@{pid}/mounts				r,	# AppArmor dbus mediation
  								# IMPROVE! Ограничить (fsuid=messagebus && ouid=messagebus,root).
  owner @{PROC_D}/@{pid}/oom_score_adj			w,
  @{PROC_D}/@{pid}/attr/current				r,	# AppArmor dbus mediation
  								# IMPROVE! Ограничить (fsuid=messagebus && ouid=messagebus,root).
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dbus-daemon					mr,
  /usr/bin/gnome-keyring-daemon@{t_all}			Px,	# gnome-base/gnome-keyring
  /usr/bin/thunar@{t_all}				Px,	# xfce-base/thunar
  /usr/lib{,32,64}/xfce4/xfconf/xfconfd@{t_all}		Px,	# xfce-base/xfconf
  /usr/lib{,32,64}/xfce4/notifyd/xfce4-notifyd@{t_all}	Px,	# xfce-extra/xfce4-notifyd
  /usr/lib{,32,64}/tumbler-1/tumblerd@{t_all}		Px,	# xfce-extra/tumbler
  /usr/libexec/at-spi-bus-launcher@{t_all}		Px,	# app-accessibility/at-spi2-core
  /usr/libexec/at-spi2-registryd@{t_all}		Px,	# app-accessibility/at-spi2-core
  /usr/libexec/gvfsd@{t_all}				Px,	# gnome-base/gvfs
  /usr/libexec/gvfsd-metadata@{t_all}			Px,	# gnome-base/gvfs
  /usr/libexec/gvfs-udisks2-volume-monitor@{t_all}	Px,	# gnome-base/gvfs
  /usr/libexec/dconf-service@{t_all}			Px,	# gnome-base/dconf
  /usr/libexec/dbus-daemon-launch-helper@{t_all}	Px,
  /usr/libexec/gconfd-2@{t_all}				Px,	# gnome-base/gconf
  /usr/libexec/gcr-prompter@{t_all}			Px,	# app-crypt/gcr
  
  # READS/WRITES ---------------------------------------
  /etc/dbus-1/**					r,
  /usr/share/dbus-1/**					r,
  /usr/share/defaults/at-spi2/accessibility.conf	r,	# app-accessibility/at-spi2-core
  /run/dbus.pid						rw,
  /run/ConsoleKit/inhibit/inhibit.@{TMP6}.pipe		w,	# sys-auth/consolekit
}

profile dbus.dbus-launch@{t_all} /usr/bin/dbus-launch@{t_all} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions-user/X>
  #include <abstractions-root/X>				# RBAC! Должен быть отдельный профиль для root.
  #include <abstractions-sudo/X-connection-strict>		# RBAC! Нужно для запуска под root-ом через sudo
  								# с подключением к X-сессии пользователя.
  #include <abstractions/dbus/session-strict>
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term) peer="dbus.dbus-daemon@{p_any}",
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dbus-launch					mr,
  @{shell}@{t_all}					Cx,
  /usr/bin/dbus-daemon@{t_all}				Px,
  /usr/bin/xfce4-session@{t_user}			Px,	# xfce-base/xfce4-session
  /etc/X11/Sessions/Xfce4@{t_user}			Px,	# xfce-base/xfce4-session
  
  # USERS ----------------------------------------------
  owner @{USER_HOME_D}/.dbus/{,**}			rw,
  owner @{ROOT_HOME_D}/.dbus/{,**}			rw,	# RBAC! Должен быть отдельный профиль для root.
  
  profile shell @{shell}@{t_all} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/tty[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /etc/X11/Sessions/Xfce4				r,	# xfce-base/xfce4-session
    /usr/bin/startxfce4@{t_user}			Px,	# xfce-base/xfce4-session
  }
}

profile dbus.dbus-run-session@{p_root} /usr/bin/dbus-run-session@{t_root} {
  #include <abstractions/base>
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dbus-run-session				mr,
}

profile dbus.dbus-send@{p_all} /usr/bin/dbus-send@{t_all} {
  #include <abstractions/base>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/consolekit>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/xfce/FileManager"
  	interface="org.xfce.FileManager"
  	peer=(name="org.xfce.FileManager",label="thunar@{p_any}"),	# xfce-base/thunar (запуск настроек thunar через менеджер настроек).
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  owner @{PROC_D}/@{pid}/fd/				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dbus-send					mr,
}

profile dbus.dbus-uuidgen@{p_root} /usr/bin/dbus-uuidgen@{t_root} {
  #include <abstractions/base>
  #include <abstractions/dbus/session-strict>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/dbus-uuidgen					mr,
}

profile dbus.dbus-daemon-launch-helper@{p_all} /usr/libexec/dbus-daemon-launch-helper@{t_all} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability setgid,
  capability setuid,
  
  # PSEUDO ---------------------------------------------
  @{PROC_D}/sys/kernel/ngroups_max			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/libexec/dbus-daemon-launch-helper		mr,
  /usr/sbin/console-kit-daemon@{t_all}			Px,	# sys-auth/consolekit
  /usr/sbin/ModemManager@{t_all}			Px,	# net-misc/modemmanager
  /usr/sbin/wpa_supplicant@{t_all}			Px,	# net-wireless/wpa_supplicant
  /usr/lib{,32,64}/polkit-1/polkitd@{t_all}		Px,	# sys-auth/polkit
  /usr/lib{,32,64}/upower/upowerd@{t_all}		Px,	# sys-power/upower
  /usr/libexec/udisks2/udisksd@{t_all}			Px,	# sys-fs/udisks
  /usr/libexec/nm-dispatcher@{t_all}			Px,	# net-misc/networkmanager
  
  # READS/WRITES ---------------------------------------
  /etc/dbus-1/**					r,
  /usr/share/dbus-1/**					r,
}

profile dbus.init.d@{p_root} /etc/init.d/dbus@{t_root} flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  @{SYS_D}/fs/cgroup/openrc/dbus/tasks			w,
  @{SYS_D}/fs/cgroup/unified/dbus/cgroup.procs		w,
  @{SYS_D}/fs/cgroup/unified/dbus/cgroup.events		r,
  
  # EXECUTABLES ----------------------------------------
  /etc/init.d/{cupsd,consolekit,xdm,net.*}@{t_root}	Px,
  @{shell}@{t_root}					Cx,
  /bin/rm@{t_root}					Cx,	# sys-apps/coreutils
  /bin/mkdir@{t_root}					Cx,	# sys-apps/coreutils
  /bin/grep@{t_root}					Cx,	# sys-apps/grep
  /bin/rmdir@{t_root}					Cx,	# sys-apps/coreutils
  /usr/bin/dbus-uuidgen@{t_root}			Px,
  /usr/bin/dbus-daemon@{t_root}				Px,
  /usr/bin/dbus-send@{t_root}				Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/dbus				r,
  /run/dbus.pid						rwk,
  /run/dbus/						w,
  /run/dbus/system_bus_socket				rwk,
  
  profile shell @{shell}@{t_root} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile rm /bin/rm@{t_root} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_tty_config,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/rm						mr,
    
    # READS/WRITES -------------------------------------
    /run/dbus/system_bus_socket				w,
  }
  
  profile mkdir /bin/mkdir@{t_root} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/{openrc,unified}/dbus/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep@{t_root} {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/dbus/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir@{t_root} {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    @{SYS_D}/fs/cgroup/unified/dbus/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}
