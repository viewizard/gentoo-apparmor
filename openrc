  /lib{,32,64}/rc/console/{font,keymap,unicode}		w,
  /run/utmp						w,
  /var/log/dmesg					w,
  /var/log/wtmp						w,
  
  # TEMP -----------------------------------------------
  owner /tmp/tmp.*/					w,
  owner /tmp/tmp.*/run/					r,
  owner /tmp/.ICE-unix/					w,
  owner /tmp/.X11-unix/					w,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}

