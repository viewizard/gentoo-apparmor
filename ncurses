#include <tunables/global>

profile ncurses.clear /usr/bin/clear flags=(complain) {		# FIX ME! 04.04.2017 flags=(complain)
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/clear					mr,
  
  # READS/WRITES ---------------------------------------
  /etc/terminfo/x/xterm					r,
}

profile ncurses.tput /usr/bin/tput flags=(complain) {		# FIX ME! 04.04.2017 flags=(complain)
  #include <abstractions/base>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/tput						mr,
  
  # READS/WRITES ---------------------------------------
  /etc/terminfo/x/xterm					r,
  /etc/terminfo/l/linux					r,
}
