#include <local/tunables.d/>

profile iptables.xtables-multi /sbin/xtables-multi {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability net_raw,
  capability net_admin,
  
  # UNIX -----------------------------------------------
  unix (bind) type=stream addr="@xtables",
  
  # NETWORK --------------------------------------------
  network inet raw,
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  owner @{PROC}/@{pid}/net/ip_tables_names		r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/xtables-multi					mr,
  
  # READS/WRITES ---------------------------------------
  /var/lib/iptables/rules-save				rw,
}

profile iptables.init.d /etc/init.d/iptables flags=(attach_disconnected) {	# attach_disconnected, name="" comm="start-stop-daem"
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  /sys/fs/cgroup/openrc/iptables/tasks			w,
  /sys/fs/cgroup/unified/iptables/cgroup.procs		w,
  /sys/fs/cgroup/unified/iptables/cgroup.events		r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/dirname						Px,	# sys-apps/coreutils
  /bin/cat						Cx,	# sys-apps/coreutils
  /bin/mkdir						Cx,	# sys-apps/coreutils
  /bin/grep						Cx,	# sys-apps/grep
  /bin/rmdir						Cx,	# sys-apps/coreutils
  /sbin/xtables-multi					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/iptables				r,
  /var/lib/iptables/rules-save				rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc-shell>
  }
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    owner @{PROC}/@{pid}/net/ip{,6}_tables_names	r,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
  
  profile mkdir /bin/mkdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/{openrc,unified}/iptables/		w,
    
    # EXECUTABLES --------------------------------------
    /bin/mkdir						mr,
  }
  
  profile grep /bin/grep {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/iptables/cgroup.procs	r,
    
    # EXECUTABLES --------------------------------------
    /bin/grep						mr,
  }
  
  profile rmdir /bin/rmdir {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/console					rw,
    /dev/pts/[0-9]*					rw,
    /sys/fs/cgroup/unified/iptables/			w,
    
    # EXECUTABLES --------------------------------------
    /bin/rmdir						mr,
  }
}

# Скрипт firewall-a, добавленный через portage/env.
profile iptables.firewall /usr/sbin/firewall {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_tty_config,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/firewall					r,
  @{shell}						mr,
  /bin/cat						Cx,	# sys-apps/coreutils
  /sbin/xtables-multi					Px,
  /etc/init.d/iptables					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/firewall.conf					r,
  
  profile cat /bin/cat {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty[0-9]*					rw,
    /dev/pts/[0-9]*					rw,
    owner @{PROC}/@{pid}/net/ip_tables_names		r,
    
    # EXECUTABLES --------------------------------------
    /bin/cat						mr,
  }
}
