#include <tunables/global>
profile iptables.xtables-multi /sbin/xtables-multi flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  capability net_raw,
  capability net_admin,
  
  /dev/pts/[0-9]* w,
  @{PROC}/@{pid}/net/ip_tables_names r,
  
  /sbin/xtables-multi mr,
  
  /var/lib/iptables/rules-save rw,
  
}


profile iptables.init.d /etc/init.d/iptables flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  @{PROC}/@{pid}/net/ip_tables_names r,
  
  /bin/bash Cx -> shell,
  
  /etc/init.d/iptables r,
  /bin/dirname ix,
  /bin/cat ix,
  /sbin/xtables-multi Px,
  
  /etc/conf.d/iptables r,
  /var/lib/iptables/rules-save rw,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/openrc_shell>
    #include <abstractions/nameservice>
    
  }
  
}
