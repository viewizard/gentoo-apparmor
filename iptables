#include <tunables/global>

profile iptables.xtables-multi /sbin/xtables-multi flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability net_raw,
  capability net_admin,
  
  # UNIX -----------------------------------------------
  unix (bind) type=stream addr="@xtables",
  
  # NETWORK --------------------------------------------
  network inet raw,
  network netlink raw,
  
  # PSEUDO ---------------------------------------------
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/net/ip_tables_names			r,
  
  # EXECUTABLES ----------------------------------------
  /sbin/xtables-multi					mr,
  
  # READS/WRITES ---------------------------------------
  /var/lib/iptables/rules-save				rw,
}

profile iptables.init.d /etc/init.d/iptables {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/openrc>
  
  # PSEUDO ---------------------------------------------
  @{PROC}/@{pid}/net/ip_tables_names			r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Cx,
  /bin/dirname						Px,
  /bin/cat						ix,
  /sbin/xtables-multi					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/{conf,init}.d/iptables				r,
  /var/lib/iptables/rules-save				rw,
  
  profile shell @{shell} {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/openrc_shell>
  }
}

profile iptables.firewall /usr/sbin/firewall {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability sys_tty_config,
  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/console						rw,
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/net/ip_tables_names			r,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/firewall					r,
  @{shell}						mr,
  /bin/cat						ix,
  /sbin/xtables-multi					Px,
  /etc/init.d/iptables					Px,
  
  # READS/WRITES ---------------------------------------
  /etc/firewall.conf					r,
}
