#include <local/tunables.d/>

profile qemu.qemu-system /usr/bin/qemu-system-{arm,i386,x86_64} {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/audio>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <local/profile_blocks/qemu.d/>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /dev/kvm						rw,
  /dev/vhost-net					rw,
  /dev/net/tun						rw,
  /sys/bus/						r,
  /dev/bus/usb/						r,
  /sys/bus/usb/devices/					r,
  /sys/class/						r,
  /sys/devices/pci@{PCI2}/@{PCI4}/usb@{USB1}/**		r,
  /sys/module/vhost/parameters/max_mem_regions		r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/qemu-system-{arm,i386,x86_64}		mr,
  
  # READS/WRITES ---------------------------------------
  /etc/udev/udev.conf					r,	# sys-fs/eudev
  /usr/share/qemu/{,**}					r,
  /usr/share/vgabios/{,*}				r,	# sys-firmware/vgabios
}
