#include <tunables/global>

profile xfce4-power-manager /usr/bin/xfce4-power-manager {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/X>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/xfconf>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/dbus-pattern/notifications>
  #include <abstractions/dbus-pattern/consolekit>
  #include <abstractions/dbus-pattern/polkit>
  #include <abstractions/dbus-pattern/upower>
  #include <abstractions/dbus-pattern/session-bind>
  #include <abstractions/nameservice>
  
  # DBUS -----------------------------------------------
  dbus (send, receive)
  	bus=session
  	path="/org/freedesktop/PowerManagement/Inhibit"
  	interface="org.freedesktop.DBus.Properties"
	member=GetAll
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  dbus (send, receive)
  	bus=session
  	path="/org/freedesktop/PowerManagement/Inhibit"
  	interface="org.freedesktop.PowerManagement.Inhibit"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/org/xfce/PowerManager"
  	interface="org.xfce.Power.Manager"
  	peer=(name=":[0-9]*.[0-9]*",label="xfce4-power-manager.xfce4-power-manager-settings"),
  dbus receive
  	bus=session
  	path="/org/xfce/PowerManager"
  	interface="org.freedesktop.DBus.Properties"
  	member=GetAll
  	peer=(name=":[0-9]*.[0-9]*",label="xfce4-power-manager.xfce4-power-manager-settings"),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  owner @{PROC}/@{pid}/stat				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4-power-manager				mr,
  /usr/bin/pm-is-supported				Px,
  /usr/bin/xfce4-power-manager-settings			Px,
  /usr/sbin/xfpm-power-backlight-helper			Px,
  
  # READS/WRITES ---------------------------------------
  /etc/xdg/autostart/xfce4-power-manager.desktop	r,
}

profile xfce4-power-manager.xfpm-power-backlight-helper /usr/sbin/xfpm-power-backlight-helper {
  #include <abstractions/base>
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/xfpm-power-backlight-helper			mr,
}

profile xfce4-power-manager.xfce4-power-manager-settings /usr/bin/xfce4-power-manager-settings {
  #include <abstractions/base>
  #include <abstractions/freedesktop.org>
  #include <abstractions/fonts>
  #include <abstractions/gtk>
  #include <abstractions/video>
  #include <abstractions/X>
  #include <abstractions/dbus-strict>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/dbus-accessibility-strict>
  #include <abstractions/dbus-pattern/at-spi>
  #include <abstractions/dbus-pattern/xfconf>
  #include <abstractions/dbus-pattern/gvfs>
  #include <abstractions/dbus-pattern/upower>
  #include <abstractions/dbus-pattern/session-bind>
  
  # DBUS -----------------------------------------------
  dbus send
  	bus=session
  	path="/org/xfce/PowerManager"
  	interface="org.xfce.Power.Manager"
  	peer=(name="{:[0-9]*.[0-9]*,org.xfce.PowerManager}",label="xfce4-power-manager"),
  dbus send
  	bus=session
  	path="/org/xfce/PowerManager"
  	interface="org.freedesktop.DBus.Properties"
  	member=GetAll
  	peer=(name=":[0-9]*.[0-9]*",label="xfce4-power-manager"),
  dbus send
  	bus=session
  	path="/org/xfce/PowerManager/Settings"
  	interface="org.gtk.Actions"
  	peer=(name="org.xfce.PowerManager.Settings",label=@{profile_name}),
  dbus receive
  	bus=session
  	path="/org/xfce/PowerManager/Settings"
  	interface="org.gtk.Actions"
  	peer=(name=":[0-9]*.[0-9]*",label=@{profile_name}),
  
  # PSEUDO ---------------------------------------------
  /dev/tty[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/xfce4-power-manager-settings			mr,
  /usr/bin/xfce4-power-manager				Px,
  /usr/bin/exo-open					Px,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.config/xfce4/help.rc			rw,
  owner @{HOME}/.config/xfce4/help.rc.*.tmp		rw,
}
