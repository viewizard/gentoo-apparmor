#include <tunables/global>

profile portage.emerge @{PYTHON_EXEC}/emerge flags=(complain) {		# FS ACCESS! Пока оставляем все ix в portage.emerge
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  capability chown,
  capability mknod,
  capability fsetid,
  capability setuid,
  capability setgid,
  capability fowner,
  capability sys_admin,
  capability kill,
  capability setfcap,
  
  # SIGNAL ---------------------------------------------
  signal (send) set=(term,kill) peer="portage.emerge//shell",
  signal (send) set=(term,kill) peer="portage.emerge//sandbox",
  
  # NETWORK --------------------------------------------
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty						rw,
  /dev/ptmx						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  /sys/fs/cgroup/portage/{,**}				rw,
  owner @{PROC}/@{pid}/cmdline				r,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/@{pid}/mountinfo				r,
  @{PROC}/sys/kernel/osrelease				r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						cx,
  /bin/stty						Px,
  /bin/mount						Cx,
  /bin/tar						ix,	# FS ACCESS!
  /sbin/ldconfig					Px,
  /usr/bin/sandbox					cx,
  /usr/bin/find						ix,	# FS ACCESS!
  /usr/bin/id						Px,
  /usr/bin/install-info					ix,	# FS ACCESS!
  /usr/bin/scanelf					ix,	# FS ACCESS!
  /usr/bin/wget						Px,
  /usr/bin/desktop-file-validate			ix,	# FS ACCESS!
  /usr/bin/rsync					ix,	# FS ACCESS!
  /usr/bin/gcc-config					Px,
  /usr/bin/free						ix,	# FS ACCESS!
  /usr/@{CHOST}/binutils-bin/*/ld			ix,	# FS ACCESS!
  
  # READS/WRITES ---------------------------------------
  /							r,
  /bin/{,**}						rw,
  /etc/{,**}						rw,
  /lib{,32,64}/{,**}					rw,
  /opt/{,**}						rw,
  /sbin/{,**}						rw,
  /usr/							rw,
  /usr/**						rwl,	# FIX ME! exclude "/usr/local" with {*^}/{**^},
  								# when this features will be available
  								# l - все правильно, разрешаем на /**.
  /usr/portage/distfiles/**				rwk,
  /usr/portage/packages/**				rwk,
  /run/							r,
  /var/							rw,
  /var/**						rwk,	# FIX ME! exclude "/var/log" (allow only subfolder
  								# creation and .keep* files) with {*^}/{**^},
  								# when this features will be available
  
  # TEMP -----------------------------------------------
  /tmp/*						rwk,	# FIX ME! Потом ограничить fsuid/uid == 0 или 250.
  
  profile mount /bin/mount flags=(complain) {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability sys_admin,
    capability dac_override,
    
    # MOUNT --------------------------------------------
    mount fstype=cgroup options=(rw, nosuid, nodev, noexec) tmpfs -> /sys/fs/cgroup/portage/,
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/mount						mr,
    
    # READS/WRITES -------------------------------------
    /run/mount/utab					rw,
  }
  
  profile shell @{shell} flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/python>
    #include <abstractions/nameservice>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    capability chown,
    capability mknod,
    capability fowner,
    capability fsetid,
    capability setfcap,
    capability sys_admin,
    capability sys_ptrace,
    capability setuid,
    capability setgid,
    capability kill,
    
    # PTRACE -------------------------------------------
    ptrace (trace) peer="sysvinit.init",			# sysvinit
    
    # NETWORK ------------------------------------------
    network inet dgram,
    network inet6 dgram,
    network inet stream,
    network inet6 stream,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    /dev/initctl					w,
    /sys/devices/system/cpu/				r,
    @{PROC}/						r,
    @{PROC}/cmdline					r,
    @{PROC}/vmstat					r,
    @{PROC}/@{pid}/{environ,cmdline,status}		r,
    @{PROC}/@{pid}/fd/					r,
    @{PROC}/@{pid}/fd/[0-9]*				w,
    @{PROC}/@{pid}/{mounts,mountinfo}			r,
    @{PROC}/sys/kernel/osrelease			r,
    
    # EXECUTABLES --------------------------------------
    @{shell}						mr,
    /usr/sbin/useradd					Px,
    /usr/sbin/lspci					Px,
    /lib{,32,64}/rc/sh/migrate-to-run.sh		ix,
    /etc/portage/bin/**					ix,
    /bin/**						ix,
    /sbin/**						ix,
    /sbin/udevadm					Px,
    /opt/**						ix,
    /usr/bin/**						ix,
    /usr/sbin/**					ix,
    /usr/lib{,32,64,exec}/**				ix,
    /usr/@{CHOST}/**					ix,
    /usr/src/@{kernel}/scripts/**			ix,
    /lib{,32,64}/rc/sh/gendepends.sh			Px,
    /var/tmp/portage/**					ix,
    
    # READS/WRITES -------------------------------------
    /							r,
    /boot/						r,
    /boot/**						rw,
    /bin/						r,
    /bin/**						rw,
    /sbin/{,**}						r,
    /opt/{,**}						r,
    /etc/						r,
    /etc/**						rw,
    /usr/						r,
    /usr/**						rw,	# FIX ME! exclude "/usr/local" with {*^}/{**^},
    								# when this features will be available
    /usr/portage/packages/**				rwk,
    /lib{,32,64}/					r,
    /lib{,32,64}/*					rwl,	# l - все правильно, разрешаем на /**.
    /lib{,32,64}/modules/@{kernel_ver}/modules.*	rw,
    /lib{,32,64}/rc/bin/*				ix,
    /var/						r,
    /var/db/pkg/					r,
    /var/db/pkg/**					rw,
    /var/tmp/portage/					rw,
    /var/tmp/portage/**					rwk,
    /var/cache/**					rwl,	# l - все правильно, разрешаем на /**.
    /var/log/nullmailer/				w,
    /var/spool/nullmailer/{,**}				w,
    /var/lib/*/						rw,
    /var/lib/*/**					rwkl,	# l - все правильно, разрешаем на /**.
    /run/mount/utab					rw,
    /run/openrc/*					r,
    /run/openrc/deptree					w,
    /run/openrc/depconfig				w,
    /run/udev/control					rw,
    /var/spool/**					rw,
    /var/log/emerge-fetch.log				a,	# DELEGATION! portage.emerge
    
    # TEMP ---------------------------------------------
    /tmp/						r,
    owner /tmp/sh-thd.*					rw,
    owner /tmp/portage.cron.*				w,	# DELEGATION! 00_update_portage.cron.daily
    owner /tmp/sed*					rw,
    owner /tmp/gcc-config-ima				rw,
    owner /tmp/??????					rw,
    owner /tmp/tmp??????				rwk,
    owner /tmp/tac??????				rw,
    /var/tmp/						r,
  }
  
  profile sandbox /usr/bin/sandbox flags=(complain) {		# FIX ME! Потом вызов shell в свой профиль убрать.
    #include <abstractions/base>
    #include <abstractions/freedesktop.org>
    #include <abstractions/fonts>
    #include <abstractions/nameservice>
    #include <abstractions/X-connection-strict>			# adapta-gtk-theme, рендеринг иконок через inkscape
    #include <abstractions/dbus/session-strict>			# xpcshell (emerge firefox)
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    capability chown,
    capability fowner,
    capability fsetid,
    capability sys_admin,
    capability setfcap,
    capability setuid,
    capability setgid,
    capability mknod,
    capability sys_resource,
    capability sys_ptrace,
    
    # PTRACE -------------------------------------------
    ptrace (trace) peer=@{profile_name},
    
    # UNIX ---------------------------------------------
    unix (bind)
    	type=stream
    	addr="@/tmp/dbus-fake-socket-path-used-in-configure-test",	# dbus, создание тестового сокета
    
    # NETWORK ------------------------------------------
    network netlink raw,
    network inet dgram,
    network inet6 dgram,
    network inet stream,
    network inet6 stream,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/null						k,
    /dev/pts/[0-9]*					rw,
    /dev/dri/						r,
    owner /dev/shm/??????				rw,
    owner /dev/shm/sem.*-[0-9]*				w,
    owner link subset /dev/shm/sem.*-[0-9]*		-> /dev/shm/??????,
    /dev/ptmx						rw,
    /sys/bus/pci/devices/				r,
    /sys/devices/pci[0-9]*/**/config			r,
    /sys/devices/system/cpu/{,**}			r,
    @{PROC}/						r,
    @{PROC}/@{pid}/fd/					r,
    @{PROC}/cmdline					r,
    @{PROC}/uptime					r,
    @{PROC}/@{pid}/stat					r,
    @{PROC}/@{pid}/mounts				r,
    @{PROC}/@{pid}/loginuid				r,
    @{PROC}/@{pid}/task/@{pid}/stat			r,
    @{PROC}/@{pid}/net/arp				r,
    @{PROC}/tty/drivers					r,
    @{PROC}/sys/net/ipv4/ip_local_port_range		r,
    @{PROC}/sys/kernel/randomize_va_space		r,
    @{PROC}/sys/kernel/osrelease			r,
    @{PROC}/sys/kernel/pid_max				r,
    @{PROC}/sys/kernel/ostype				r,
    @{PROC}/sys/kernel/ngroups_max			r,
    owner @{PROC}/@{pid}/cmdline			r,
    
    # EXECUTABLES ----------------------------------------
    @{shell}						mr,
    /bin/**						ix,
    /sbin/**						ix,
    /opt/**						ix,
    /lib{,32,64}/**					ix,
    /usr/bin/**						ix,
    /usr/sbin/**					ix,
    /usr/lib{,32,64,exec}/**				ix,
    /usr/share/build-1/mkdir.sh				ix,
    /usr/share/gnuconfig/config.sub			ix,
    /usr/@{CHOST}/**					ix,
    /usr/src/@{kernel}/scripts/**			ix,
    /var/tmp/portage/**					ix,
    
    # READS/WRITES -------------------------------------
    /							r,
    /bin/{,**}						r,
    /sbin/{,**}						r,
    /opt/{,**}						r,
    /lib{,32,64}/{,**}					r,
    /etc/{,**}						r,
    /usr/{,**}						r,
    /usr/portage/distfiles/*/				w,	# git/cvs/svn
    /usr/src/@{kernel}/tools/gcc/**.so			m,	# плагины
    /usr/portage/distfiles/{egit,git3}-src/**		rw,
    link subset /usr/portage/distfiles/{egit,git3}-src/** -> /usr/portage/distfiles/{egit,git3}-src/**,
    /usr/portage/packages/{,**}				rw,
    /var/						r,
    /var/log/sandbox/sandbox-*.log			rw,
    /var/db/pkg/{,**}					r,
    /var/cache/{,**}					r,
    
    # TEMP ---------------------------------------------
    /tmp/						r,
    owner /tmp/cf*/{,**}				rw,
    owner /tmp/test.*					rw,
    owner /tmp/tmp*					rw,
    owner /tmp/portage.cron.*				w,	# DELEGATION! 00_update_portage.cron.daily
    owner /tmp/glew.??????/				w,
    owner /tmp/???????					rw,
    /var/tmp/						r,
    owner /var/tmp/cf*/{,**}				rw,
    /var/tmp/portage/					rw,
    /var/tmp/portage/**					rwk,
    link subset /var/tmp/portage/**			-> /var/tmp/portage/**,
  }
}

