  capability dac_override,
  capability dac_read_search,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						mr,
  /bin/uname						Px,
  audit /usr/bin/find					Cx,	# FIX ME! audit 15.07.2017
  audit /usr/bin/diff					Cx,	# FIX ME! audit 15.07.2017
  
  # READS/WRITES ---------------------------------------
  /etc/{,**}						r,
  
  profile diff /usr/bin/diff flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/diff					mr,
  }
  
  profile find /usr/bin/find flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/find					mr,
  }
}

