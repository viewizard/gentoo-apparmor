profile portage.etc-update /usr/sbin/etc-update flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>
  
  capability dac_override,
  
  /dev/tty rw,
  /dev/pts/[0-9]* rw,
  
  /bin/bash r,
  /usr/sbin/etc-update r,
  /bin/cat ix,
  /bin/grep ix,
  /bin/cut ix,
  /bin/rm ix,
  /bin/mkdir ix,
  /bin/chmod ix,
  /bin/chown ix,
  /bin/sed ix,
  /bin/sort ix,
  /bin/head ix,
  /bin/wc ix,
  /bin/mv ix,
  /usr/bin/diff ix,
  /usr/bin/find ix,
  /usr/lib{,32,64}/python-exec/python-exec2 Cx -> portageq,
  
  / r,
  /etc/ r,
  /etc/** rw,
  /usr/share/gnupg/ r,
  
  
  profile portageq {
    #include <abstractions/base>
    
    /bin/env r,
    
    /usr/lib{,32,64}/python-exec/@{PYTHON}/portageq Px,
    
    /etc/env.d/python/config r,
    
  }
  
}


