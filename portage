  /etc/ld.so.conf* rw,
  /etc/csh.env* rw,
  /etc/profile.env* rw,
  /etc/env.d/{,*} r,
  /etc/portage/** r,
  /usr/portage/** r,
  /usr/ r,
  /usr/local/portage/** r,
  /usr/share/portage/config/* r,
  
  /var/cache/edb/mtimedb r,
  /var/lib/portage/config rwk,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /bin/uname ix,
    /sbin/ldconfig ix,
    
    /etc/ld.so.conf r,
    /etc/ld.so.cache* rw,
    /etc/ld.so.conf.d/{,*} r,
    /lib{,32,64}/ r,
    /usr/lib{,32,64}/ r,
    /usr/local/lib{,32,64}/ r,
    
    /var/cache/ldconfig/aux-cache* rw,
    
  }
}


