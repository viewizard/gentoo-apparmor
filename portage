profile portage.dispatch-conf @{PYTHON_EXEC}/dispatch-conf flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability mknod,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  @{shell}						Px -> portage_dispatch_conf_shell,
  audit /usr/bin/diff					Cx,	# FIX ME! audit 15.07.2017
  /usr/bin/find						Cx,
  
  # READS/WRITES ---------------------------------------
  /etc/{,**}						rw,
  /usr/portage/**					r,
  /usr/local/portage/**					r,
  /usr/share/portage/**					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/dispatch-conf.*/				rw,
  
  profile diff /usr/bin/diff flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/diff					mr,
  }
  
  profile find /usr/bin/find flags=(complain) {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    
    # PSEUDO -------------------------------------------
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /usr/bin/find					mr,
    
    # READS/WRITES -------------------------------------
    /							r,
    /etc/{,**}						r,
  }
}

