#include <tunables/global>
profile portage.emerge /usr/lib{,32,64}/python-exec/python[2-3].[0-9]*/emerge flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>
  
  
  capability dac_override,
  capability chown,
  capability fsetid,
  capability setuid,
  capability setgid,
  capability fowner,
  
  /dev/ptmx rw,
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* rw,
  @{PROC}/@{pid}/fd/ r,
  @{PROC}/@{pid}/mountinfo r,
  
  /bin/bash cx -> shell,
  /usr/bin/sandbox cx -> sandboxed_shell,
  /usr/bin/find ix,
  /usr/bin/id ix,
  /usr/bin/install-info ix,
  /usr/bin/scanelf ix,
  /usr/bin/wget ix,
  /usr/bin/desktop-file-validate ix,
  
  / r,
  /bin/ r,
  /bin/** rw,
  /etc/ r,
  deny /etc/ w,
  /etc/** rw,
  /lib{,32,64}/ r,
  /lib{,32,64}/** rw,
  /opt/ r,
  /opt/** rw,
  /sbin/ r,
  /sbin/** rw,
  /usr/ r,
  deny /usr/ w,
  /usr/** rw, # FIX ME! exclude "/usr/local" with {*^}/{**^}, when this features will be available
  /usr/portage/distfiles/** rwk,
  /usr/portage/packages/** rwk,
  /var/ rw,
  /var/** rwk, # FIX ME! exclude "/var/log" (allow only subfolder creation and .keep* files) with {*^}/{**^}, when this features will be available
  /tmp/* rw,
  
  # Noisy
  deny /root/ r,
  deny /home/** r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/python>
    #include <abstractions/nameservice>
    #include <abstractions/user-tmp>
    
    capability dac_override,
    capability chown,
    capability fowner,
    capability fsetid,
    
    /dev/tty rw,
    /dev/pts/[0-9]* rw,
    @{PROC}/cmdline r,
    @{PROC}/@{pid}/fd/ r,
    @{PROC}/@{pid}/mounts r,
    
    /usr/sbin/useradd Px,
    /usr/sbin/lspci Px,
    
    /etc/portage/bin/** ixr,
    /bin/ r,
    /bin/** ixr,
    /sbin/ r,
    /sbin/** ixr,
    /opt/ r,
    /opt/** ixr,
    /usr/bin/ r,
    /usr/bin/** ixr,
    /usr/sbin/ r,
    /usr/sbin/** ixr,
    /usr/lib{,32,64}/ r,
    /usr/lib{,32,64}/** ixr,
    /usr/libexec/ r,
    /usr/libexec/** ixr,
    /usr/x86_64-pc-linux-gnu/** ixr,
    /usr/src/linux-*-hardened/scripts/** ixr,
    
    /lib{,32,64}/ r,
    /etc/ld.so.cache* rw,
    
    /etc/profile.env* rw,
    /etc/csh.env* rw,
    /etc/wgetrc r,
    /etc/java-config-2/build/ r,
    /etc/java-config-2/build/* r,
    /etc/env.d/* rw,
    /etc/X11/xorg.conf.d/* rw,
    /etc/ld.so.conf r,
    /etc/ld.so.conf.d/ r,
    /etc/ld.so.conf.d/* r,
    /etc/conf.d/* r,
    /etc/env.d/python/** r,
    /etc/terminfo/x/xterm r,
    /etc/portage/** r,
    /usr/** r,
    /usr/portage/** rw,
    /usr/share/applications/** rw,
    /usr/share/icons/hicolor/** rw,
    /usr/lib64/opengl/nvidia/** rw,
    /lib64/modules/*-hardened/modules.* rw,
    /var/db/pkg/ r,
    /var/db/pkg/** rw,
    
    /var/tmp/portage/ rw,
    /var/tmp/portage/** rwk,
    /var/cache/edb/** rw,
    /var/cache/ldconfig/aux-cache* rw,
    /var/lib/portage/* r,
    /var/lib/portage/config rwk,
    /var/lib/gentoo/news/* rwk,
    /var/lib/gentoo/gkeys/keyrings/gentoo/** rw,
    /var/lib/module-rebuild/* rw,
    /var/lib/*/ w,
    /var/lib/*/.keep* w,
    
  }
  
  profile sandboxed_shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/freedesktop.org>
    #include <abstractions/fonts>
    #include <abstractions/nameservice>
    #include <abstractions/user-tmp>
    
    capability dac_override,
    capability chown,
    capability fowner,
    capability fsetid,
    
    /dev/tty rw,
    /dev/null k,
    /dev/pts/[0-9]* rw,
    /dev/shm/* rwl,
    /sys/bus/pci/devices/ r,
    /sys/devices/pci**/config r,
    /sys/devices/system/cpu/ r,
    @{PROC}/@{pid}/fd/ r,
    @{PROC}/cmdline r,
    @{PROC}/sys/net/ipv4/ip_local_port_range r,
    
    /bin/ r,
    /bin/** ixr,
    /sbin/ r,
    /sbin/** ixr,
    /opt/ r,
    /opt/** ixr,
    /usr/bin/ r,
    /usr/bin/** ixr,
    /usr/sbin/ r,
    /usr/sbin/** ixr,
    /usr/lib{,32,64}/ r,
    /usr/lib{,32,64}/** ixr,
    /usr/libexec/ r,
    /usr/libexec/** ixr,
    /usr/x86_64-pc-linux-gnu/** ixr,
    /usr/src/linux-*-hardened/scripts/** ixr,
    
    /etc/gentoo-release r,
    /etc/timezone r,
    /etc/env.d/** r,
    /etc/nvidia/nvidia-application-profiles-rc r,
    /etc/sandbox.conf r,
    /etc/sandbox.d/ r,
    /etc/sandbox.d/* r,
    /etc/ld.so.conf r,
    /etc/ld.so.conf.d/ r,
    /etc/ld.so.conf.d/* r,
    /etc/xml/catalog r,
    /etc/xml/docbook r,
    /etc/terminfo/x/xterm r,
    /etc/portage/env/ r,
    /etc/portage/env/** r,
    /etc/portage/patches/ r,
    /etc/portage/patches/** r,
    /etc/dpkg/dpkg.cfg.d/ r,
    /etc/dpkg/dpkg.cfg.d/* r,
    /etc/xdg/qtchooser/ r,
    /etc/xdg/qtchooser/* r,
    /usr/** r,
    /usr/src/linux-*-hardened/tools/gcc/**.so m,
    
    /var/ r,
    /var/tmp/ r,
    /var/tmp/portage/ rw,
    /var/tmp/portage/** rwklix,
    
    # Noisy
    deny / r,
  }
  
}


profile portage.env-update /usr/lib{,32,64}/python-exec/python[2-3].[0-9]*/env-update flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
