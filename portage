#include <tunables/global>
profile portage.emerge /usr/lib{,32,64}/python-exec/python[2-3].[0-9]*/emerge flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>
  
  capability dac_override,
  capability dac_read_search,
  capability chown,
  capability fsetid,
  capability setuid,
  capability setgid,
  capability fowner,
  
  /dev/ptmx rw,
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* rw,
  @{PROC}/@{pid}/fd/ r,
  @{PROC}/@{pid}/mountinfo r,
  
  /bin/bash cx -> shell,
  /bin/stty ix,
  /usr/bin/sandbox cx -> sandboxed_shell,
  /usr/bin/find ix,
  /usr/bin/id ix,
  /usr/bin/install-info ix,
  /usr/bin/scanelf ix,
  /usr/bin/wget ix,
  /usr/bin/desktop-file-validate ix,
  
  / r,
  /dev/ r,
  /bin/ r,
  /bin/** rw,
  /etc/ r,
  deny /etc/ w,
  /etc/** rw,
  /lib{,32,64}/ r,
  /lib{,32,64}/** rw,
  /opt/{,**} rw,
  /sbin/ r,
  /sbin/** rw,
  /usr/ r,
  deny /usr/ w,
  /usr/** rwl, # FIX ME! exclude "/usr/local" with {*^}/{**^}, when this features will be available
  /usr/portage/distfiles/** rwk,
  /usr/portage/packages/** rwk,
  /var/ rw,
  /var/** rwk, # FIX ME! exclude "/var/log" (allow only subfolder creation and .keep* files) with {*^}/{**^}, when this features will be available
  /tmp/* rw,
  
  # Noisy
  deny /root/ r,
  deny /home/** r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/python>
    #include <abstractions/nameservice>
    #include <abstractions/user-tmp>
    
    capability dac_override,
    capability dac_read_search,
    capability chown,
    capability fowner,
    capability fsetid,
    capability setfcap,
    
    /dev/tty rw,
    /dev/pts/[0-9]* rw,
    @{PROC}/cmdline r,
    @{PROC}/@{pid}/fd/ r,
    @{PROC}/@{pid}/mounts r,
    
    /usr/sbin/useradd Px,
    /usr/sbin/lspci Px,
    
    /etc/portage/bin/** ixr,
    /bin/ r,
    /bin/** ixr,
    /sbin/ r,
    /sbin/** ixr,
    /opt/ r,
    /opt/** ixr,
    /usr/bin/** ixr,
    /usr/sbin/** ixr,
    /usr/lib{,32,64}/** ixr,
    /usr/libexec/** ixr,
    /usr/x86_64-pc-linux-gnu/** ixr,
    /usr/src/linux-*-{hardened,gentoo}*/scripts/** ixr,
    
    /usr/bin/dumpcap w,
    
    / r,
    /etc/ r,
    /etc/** rw,
    /usr/ r,
    /usr/** rw, # FIX ME! exclude "/usr/local" with {*^}/{**^}, when this features will be available
    /usr/portage/packages/** rwk,
    /lib{,32,64}/ r,
    /lib{,32,64}/modules/*-{hardened,gentoo}*/modules.* rw,
    /var/db/pkg/ r,
    /var/db/pkg/** rw,
    
    /var/tmp/portage/ rw,
    /var/tmp/portage/** rwkix,
    /var/cache/** rwl,
    /var/lib/*/ rw,
    /var/lib/*/** rwk,
    
  }
  
  profile sandboxed_shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/freedesktop.org>
    #include <abstractions/fonts>
    #include <abstractions/nameservice>
    #include <abstractions/user-tmp>
    
    capability dac_override,
    capability dac_read_search,
    capability chown,
    capability fowner,
    capability fsetid,
    
    /dev/tty rw,
    /dev/null k,
    /dev/pts/[0-9]* rw,
    /dev/dri/ r,
    /dev/shm/* rwl,
    /sys/bus/pci/devices/ r,
    /sys/devices/pci**/config r,
    /sys/devices/system/cpu/ r,
    @{PROC}/ r,
    @{PROC}/@{pid}/fd/ r,
    @{PROC}/cmdline r,
    @{PROC}/@{pid}/stat r,
    @{PROC}/@{pid}/mounts r,
    @{PROC}/sys/net/ipv4/ip_local_port_range r,
    
    /bin/ r,
    /bin/** ixr,
    /sbin/ r,
    /sbin/** ixr,
    /opt/ r,
    /opt/** ixr,
    /lib{,32,64}/ r,
    /lib{,32,64}/** r,
    /etc/{,**} r,
    /usr/{,**} r,
    /usr/bin/** ixr,
    /usr/sbin/** ixr,
    /usr/lib{,32,64}/** ixr,
    /usr/libexec/** ixr,
    /usr/x86_64-pc-linux-gnu/** ixr,
    /usr/src/linux-*-{hardened,gentoo}*/scripts/** ixr,
    /usr/src/linux-*-{hardened,gentoo}*/tools/gcc/**.so m,
    
    /var/ r,
    /var/tmp/ r,
    /var/tmp/portage/ rw,
    /var/tmp/portage/** rwklix,
    /var/log/sandbox/sandbox-*.log w,
    
    # Noisy
    deny / r,
  }
  
}


