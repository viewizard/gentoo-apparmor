  /usr/bin/diff ix,
  /usr/bin/find ix,
  
  /etc/profile.env r,
  /etc/dispatch-conf.conf r,
  /etc/portage/** r,
  /usr/portage/** r,
  /usr/local/portage/** r,
  /usr/share/portage/** r,
  
  /etc/{,**} rw,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/user-tmp>
    
    capability dac_override,
    capability dac_read_search,
    
    /dev/tty rw,
    /dev/pts/[0-9]* rw,
    
    /bin/bash r,
    /bin/uname ix,
    /usr/bin/find ix,
    /usr/bin/diff ix,
    
    /etc/{,**} r,
    
    # Noisy
    deny @{HOME}/ r,
    
  }
  
}


