#include <tunables/global>
profile portage.emerge /usr/lib{,32,64}/python-exec/@{PYTHON}/emerge flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>
  
  capability dac_override,
  capability dac_read_search,
  capability chown,
  capability fsetid,
  capability setuid,
  capability setgid,
  capability fowner,
  capability sys_admin,
  
  /dev/ptmx rw,
  /dev/tty[0-9]* w,
  /dev/pts/[0-9]* rw,
  @{PROC}/@{pid}/fd/ r,
  @{PROC}/@{pid}/mountinfo r,
  
  /bin/bash cx -> shell,
  /bin/stty ix,
  /usr/bin/sandbox cx -> sandboxed_shell,
  /usr/bin/find ix,
  /usr/bin/id ix,
  /usr/bin/install-info ix,
  /usr/bin/scanelf ix,
  /usr/bin/wget ix,
  /usr/bin/desktop-file-validate ix,
  /usr/bin/rsync ix,
  
  / r,
  /dev/ r,
  /bin/ r,
  /bin/** rw,
  /etc/ r,
  deny /etc/ w,
  /etc/** rw,
  /lib{,32,64}/ r,
  /lib{,32,64}/** rw,
  /opt/{,**} rw,
  /sbin/ r,
  /sbin/** rw,
  /usr/ r,
  deny /usr/ w,
  /usr/** rwl, # FIX ME! exclude "/usr/local" with {*^}/{**^}, when this features will be available
  /usr/portage/distfiles/** rwk,
  /usr/portage/packages/** rwk,
  /run/ r,
  /var/ rw,
  /var/** rwk, # FIX ME! exclude "/var/log" (allow only subfolder creation and .keep* files) with {*^}/{**^}, when this features will be available
  /tmp/* rw,
  
  # Noisy
  deny /root/ r,
  deny @{HOMEDIRS}/** r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/python>
    #include <abstractions/nameservice>
    #include <abstractions/user-tmp>
    
    capability dac_override,
    capability dac_read_search,
    capability chown,
    capability fowner,
    capability fsetid,
    capability setfcap,
    capability sys_admin,
    
    /dev/tty rw,
    /dev/pts/[0-9]* rw,
    /dev/initctl w,
    @{PROC}/cmdline r,
    @{PROC}/@{pid}/fd/ r,
    @{PROC}/@{pid}/mounts r,
    
    /usr/sbin/useradd Px,
    /usr/sbin/lspci Px,
    /lib{,32,64}/rc/sh/migrate-to-run.sh ix,
    
    /etc/portage/bin/** ixr,
    /boot/ r,
    /boot/** rw,
    /bin/ r,
    /bin/** ixrw,
    /sbin/ r,
    /sbin/** ixr,
    /sbin/udevadm Pxr,
    /opt/ r,
    /opt/** ixr,
    /usr/bin/** ixr,
    /usr/sbin/** ixr,
    /usr/lib{,32,64}/** ixr,
    /usr/libexec/** ixr,
    /usr/x86_64-pc-linux-gnu/** ixr,
    /usr/src/linux-*-{hardened,gentoo}*/scripts/** ixr,
    
    /usr/bin/dumpcap w,
    
    / r,
    /etc/ r,
    /etc/** rw,
    /usr/ r,
    /usr/** rw, # FIX ME! exclude "/usr/local" with {*^}/{**^}, when this features will be available
    /usr/portage/packages/** rwk,
    /lib{,32,64}/ r,
    /lib{,32,64}/* rwl,
    /lib{,32,64}/modules/*-{hardened,gentoo}*/modules.* rw,
    /lib{,32,64}/rc/bin/* ix,
    /run/mount/utab rw,
    /var/db/pkg/ r,
    /var/db/pkg/** rw,
    
    /var/tmp/portage/ rw,
    /var/tmp/portage/** rwkix,
    /var/cache/** rwl,
    /var/lib/*/ rw,
    /var/lib/*/** rwk,
    
  }
  
  profile sandboxed_shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/freedesktop.org>
    #include <abstractions/fonts>
    #include <abstractions/nameservice>
    #include <abstractions/user-tmp>
    
    capability dac_override,
    capability dac_read_search,
    capability chown,
    capability fowner,
    capability fsetid,
    capability sys_admin,
    capability setfcap,
    capability setuid,
    capability setgid,
    capability mknod,
    
    /dev/tty rw,
    /dev/null k,
    /dev/pts/[0-9]* rw,
    /dev/dri/ r,
    /dev/shm/{,*} rwl,
    /dev/ptmx rw,
    /sys/bus/pci/devices/ r,
    /sys/devices/pci[0-9]*/**/config r,
    /sys/devices/system/cpu/{,**} r,
    @{PROC}/ r,
    @{PROC}/@{pid}/fd/ r,
    @{PROC}/cmdline r,
    @{PROC}/uptime r,
    @{PROC}/@{pid}/stat r,
    @{PROC}/@{pid}/mounts r,
    @{PROC}/@{pid}/loginuid r,
    @{PROC}/@{pid}/task/@{pid}/stat r,
    @{PROC}/@{pid}/net/arp r,
    @{PROC}/sys/net/ipv4/ip_local_port_range r,
    @{PROC}/sys/kernel/randomize_va_space r,
    @{PROC}/sys/kernel/osrelease r,
    @{PROC}/sys/kernel/pid_max r,
    @{PROC}/sys/kernel/osrelease r,
    @{PROC}/tty/drivers r,
    
    /bin/ r,
    /bin/** ixr,
    /sbin/ r,
    /sbin/** ixr,
    /opt/ r,
    /opt/** ixr,
    /lib{,32,64}/ r,
    /lib{,32,64}/** r,
    /etc/{,**} r,
    /usr/{,**} r,
    /usr/bin/** ixr,
    /usr/sbin/** ixr,
    /usr/lib{,32,64}/** ixr,
    /usr/libexec/** ixr,
    /usr/x86_64-pc-linux-gnu/** ixr,
    /usr/src/linux-*-{hardened,gentoo}*/scripts/** ixr,
    /usr/src/linux-*-{hardened,gentoo}*/tools/gcc/**.so m,
    /usr/portage/distfiles/git3-src/** rwl,
    
    
    /var/ r,
    /var/tmp/ r,
    /var/tmp/portage/ rw,
    /var/tmp/portage/** rwklix,
    /var/log/sandbox/sandbox-*.log w,
    /var/db/pkg/{,**} r,
    /var/cache/{,**} r,
    
    # Noisy
    deny / r,
  }
  
}


profile portage.env-update /usr/lib{,32,64}/python-exec/@{PYTHON}/env-update flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  /dev/pts/[0-9]* w,
  
  /bin/bash Cxr -> shell,
  
  / r,
  /etc/ld.so.conf* rw,
  /etc/csh.env* rw,
  /etc/profile.env* rw,
  /etc/env.d/{,*} r,
  /etc/portage/** r,
  /usr/portage/** r,
  /usr/ r,
  /usr/local/portage/** r,
  /usr/share/portage/config/* r,
  
  /var/cache/edb/mtimedb r,
  /var/lib/portage/config rwk,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    /dev/tty rw,
    
    /bin/bash r,
    /bin/uname ix,
    /sbin/ldconfig ix,
    
    /etc/ld.so.conf r,
    /etc/ld.so.cache* rw,
    /etc/ld.so.conf.d/{,*} r,
    /lib{,32,64}/ r,
    /usr/lib{,32,64}/ r,
    /usr/local/lib{,32,64}/ r,
    
    /var/cache/ldconfig/aux-cache* rw,
    
  }
}


