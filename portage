#include <tunables/global>

profile portage.emerge @{PYTHON_EXEC}/emerge flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  capability dac_read_search,
  capability chown,
  capability fsetid,
  capability setuid,
  capability setgid,
  capability fowner,
  capability sys_admin,
  capability kill,
  capability setfcap,
  
  # PSEUDO ---------------------------------------------
  /dev/							r,
  /dev/tty						rw,
  /dev/ptmx						rw,
  /dev/tty[0-9]*					w,
  /dev/pts/[0-9]*					rw,
  /sys/fs/cgroup/portage/{,**}				rw,
  @{PROC}/@{pid}/fd/					r,
  @{PROC}/@{pid}/mountinfo				r,
  @{PROC}/sys/kernel/osrelease				r,
  
  # EXECUTABLES ----------------------------------------
  /bin/bash						cx -> shell,
  /bin/stty						ix,
  /bin/mount						Px,
  /bin/tar						ix,
  /sbin/ldconfig					ix,
  /usr/bin/sandbox					cx -> sandboxed_shell,
  /usr/bin/find						ix,
  /usr/bin/id						ix,
  /usr/bin/install-info					ix,
  /usr/bin/scanelf					ix,
  /usr/bin/wget						ix,
  /usr/bin/desktop-file-validate			ix,
  /usr/bin/rsync					ix,
  /usr/bin/gcc-config					Px,
  /usr/bin/free						ix,
  /usr/@{CHOST}/binutils-bin/*/ld			ix,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /bin/							r,
  /bin/**						rw,
  /etc/							r,
  /etc/**						rw,
  /lib{,32,64}/						r,
  /lib{,32,64}/**					rw,
  /opt/{,**}						rw,
  /sbin/						r,
  /sbin/**						rw,
  /usr/							r,
  /usr/**						rwl,	# FIX ME! exclude "/usr/local" with {*^}/{**^},
  								# when this features will be available
  /usr/portage/distfiles/**				rwk,
  /usr/portage/packages/**				rwk,
  /run/							r,
  /var/							rw,
  /var/**						rwk,	# FIX ME! exclude "/var/log" (allow only subfolder
  								# creation and .keep* files) with {*^}/{**^},
  								# when this features will be available
  
  # TEMP -----------------------------------------------
  /tmp/*						rwk,
  
  # NOISY ----------------------------------------------
  deny /root/						r,
  deny @{HOMEDIRS}/**					r,
  deny /etc/						w,
  deny /usr/						w,
  deny /lib64/						w,
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/python>
    #include <abstractions/nameservice>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    capability chown,
    capability fowner,
    capability fsetid,
    capability setfcap,
    capability sys_admin,
    capability sys_ptrace,
    capability kill,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    /dev/initctl					w,
    /sys/devices/system/cpu/				r,
    @{PROC}/						r,
    @{PROC}/cmdline					r,
    @{PROC}/@{pid}/{environ,cmdline,status}		r,
    @{PROC}/@{pid}/fd/					r,
    @{PROC}/@{pid}/fd/[0-9]*				w,
    @{PROC}/@{pid}/{mounts,mountinfo}			r,
    @{PROC}/sys/kernel/osrelease			r,
    
    # EXECUTABLES --------------------------------------
    /bin/bash						mr,
    /usr/sbin/useradd					Px,
    /usr/sbin/lspci					Px,
    /lib{,32,64}/rc/sh/migrate-to-run.sh		ix,
    /etc/portage/bin/**					ix,
    /bin/**						ix,
    /sbin/**						ix,
    /sbin/udevadm					Px,
    /opt/**						ix,
    /usr/bin/**						ix,
    /usr/sbin/**					ix,
    /usr/lib{,32,64,exec}/**				ix,
    /usr/@{CHOST}/**					ix,
    /usr/src/@{kernel}/scripts/**			ix,
    /lib{,32,64}/rc/sh/gendepends.sh			Px,
    /var/tmp/portage/**					ix,
    
    # READS/WRITES -------------------------------------
    /							r,
    /boot/						r,
    /boot/**						rw,
    /bin/						r,
    /bin/**						rw,
    /sbin/{,**}						r,
    /opt/{,**}						r,
    /etc/						r,
    /etc/**						rw,
    /usr/						r,
    /usr/**						rw,	# FIX ME! exclude "/usr/local" with {*^}/{**^},
    								# when this features will be available
    /usr/portage/packages/**				rwk,
    /lib{,32,64}/					r,
    /lib{,32,64}/*					rwl,
    /lib{,32,64}/modules/@{kernel_ver}/modules.*	rw,
    /lib{,32,64}/rc/bin/*				ix,
    /var/db/pkg/					r,
    /var/db/pkg/**					rw,
    /var/tmp/portage/					rw,
    /var/tmp/portage/**					rwk,
    /var/cache/**					rwl,
    /var/lib/*/						rw,
    /var/lib/*/**					rwkl,
    /run/mount/utab					rw,
    /run/openrc/*					r,
    /run/openrc/deptree					w,
    /run/openrc/depconfig				w,
    /var/						r,
    
    # TEMP ---------------------------------------------
    /var/tmp/						r,
    owner /tmp/sh-thd.*					rw,
    owner /tmp/portage.cron.*				rw,
    owner /tmp/sed*					rw,
    owner /tmp/gcc-config-ima				rw,
    owner /tmp/??????					rw,
    owner /tmp/tmp??????				rwk,
  }
  
  profile sandboxed_shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/freedesktop.org>
    #include <abstractions/fonts>
    #include <abstractions/nameservice>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    capability chown,
    capability fowner,
    capability fsetid,
    capability sys_admin,
    capability setfcap,
    capability setuid,
    capability setgid,
    capability mknod,
    capability sys_resource,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/null						k,
    /dev/pts/[0-9]*					rw,
    /dev/dri/						r,
    /dev/shm/{,*}					rwl,
    /dev/ptmx						rw,
    /sys/bus/pci/devices/				r,
    /sys/devices/pci[0-9]*/**/config			r,
    /sys/devices/system/cpu/{,**}			r,
    @{PROC}/						r,
    @{PROC}/@{pid}/fd/					r,
    @{PROC}/cmdline					r,
    @{PROC}/uptime					r,
    @{PROC}/@{pid}/stat					r,
    @{PROC}/@{pid}/mounts				r,
    @{PROC}/@{pid}/loginuid				r,
    @{PROC}/@{pid}/task/@{pid}/stat			r,
    @{PROC}/@{pid}/net/arp				r,
    @{PROC}/sys/net/ipv4/ip_local_port_range		r,
    @{PROC}/sys/kernel/randomize_va_space		r,
    @{PROC}/sys/kernel/osrelease			r,
    @{PROC}/sys/kernel/pid_max				r,
    @{PROC}/sys/kernel/osrelease			r,
    @{PROC}/sys/kernel/ostype				r,
    @{PROC}/tty/drivers					r,
    
    # EXECUTABLES ----------------------------------------
    /bin/bash						mr,
    /bin/**						ix,
    /sbin/**						ix,
    /opt/**						ix,
    /lib{,32,64}/**					ix,
    /usr/bin/**						ix,
    /usr/sbin/**					ix,
    /usr/lib{,32,64,exec}/**				ix,
    /usr/share/build-1/mkdir.sh				ix,
    /usr/share/gnuconfig/config.sub			ix,
    /usr/@{CHOST}/**					ix,
    /usr/src/@{kernel}/scripts/**			ix,
    /var/tmp/portage/**					ix,
    
    # READS/WRITES -------------------------------------
    /							r,
    /bin/{,**}						r,
    /sbin/{,**}						r,
    /opt/{,**}						r,
    /lib{,32,64}/{,**}					r,
    /etc/{,**}						r,
    /usr/{,**}						r,
    /usr/src/@{kernel}/tools/gcc/**.so			m,
    /usr/portage/distfiles/{egit,git3}-src/**		rwl,
    /usr/portage/packages/{,**}				rw,
    /var/						r,
    /var/log/sandbox/sandbox-*.log			w,
    /var/db/pkg/{,**}					r,
    /var/cache/{,**}					r,
    
    # TEMP ---------------------------------------------
    /tmp/						r,
    owner /tmp/cf*/{,**}				rw,
    owner /tmp/test.*					rw,
    owner /tmp/tmp*					rw,
    /var/tmp/						r,
    owner /var/tmp/cf*/{,**}				rw,
    /var/tmp/portage/					rw,
    /var/tmp/portage/**					rwkl,
  }
}

profile portage.env-update @{PYTHON_EXEC}/env-update flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /bin/bash						Cx -> shell,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /etc/ld.so.conf*					rw,
  /etc/csh.env*						rw,
  /etc/profile.env*					rw,
  /etc/env.d/{,*}					r,
  /etc/portage/**					r,
  /usr/portage/**					r,
  /usr/							r,
  /usr/local/portage/**					r,
  /usr/share/portage/config/*				r,
  /var/cache/edb/mtimedb				r,
  /var/lib/portage/config				rwk,
  
  # TEMP -----------------------------------------------
  owner /tmp/??????					rw,
  owner /tmp/tmp??????					rwk,
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    /bin/bash						mr,
    /bin/uname						ix,
    /sbin/ldconfig					ix,
    
    # READS/WRITES -------------------------------------
    /etc/ld.so.conf					r,
    /etc/ld.so.cache*					rw,
    /etc/ld.so.conf.d/{,*}				r,
    /lib{,32,64}/					r,
    /usr/lib{,32,64}/					r,
    /usr/local/lib{,32,64}/				r,
    /var/cache/ldconfig/aux-cache*			rw,
  }
}

profile portage.dispatch-conf @{PYTHON_EXEC}/dispatch-conf flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					rw,
  @{PROC}/@{pid}/fd/					r,
  
  # EXECUTABLES ----------------------------------------
  /bin/bash						Cx -> shell,
  /usr/bin/diff						ix,
  /usr/bin/find						ix,
  
  # READS/WRITES ---------------------------------------
  /etc/{,**}						rw,
  /usr/portage/**					r,
  /usr/local/portage/**					r,
  /usr/share/portage/**					r,
  
  # TEMP -----------------------------------------------
  owner /tmp/dispatch-conf.*/				rw,
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    # CAPABILITIES -------------------------------------
    capability dac_override,
    capability dac_read_search,
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    /dev/pts/[0-9]*					rw,
    
    # EXECUTABLES --------------------------------------
    /bin/bash						mr,
    /bin/uname						ix,
    /usr/bin/find					ix,
    /usr/bin/diff					ix,
    
    # READS/WRITES -------------------------------------
    /etc/{,**}						r,
    
    # NOISY --------------------------------------------
    deny @{HOME}/					r,
  }
}

profile portage.portageq @{PYTHON_EXEC}/portageq flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  # PSEUDO ---------------------------------------------
  /dev/pts/[0-9]*					w,
  
  # EXECUTABLES ----------------------------------------
  /bin/bash						Cx -> shell,
  
  # READS/WRITES ---------------------------------------
  /etc/profile.env					r,
  /etc/portage/{,**}					r,
  /usr/portage/{,**}					r,
  /usr/local/portage/{,**}				r,
  /usr/share/portage/{,**}				r,
  /var/db/pkg/{,**}					r,
  /var/cache/edb/{,**}					r,
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    
    # PSEUDO -------------------------------------------
    /dev/tty						rw,
    
    # EXECUTABLES --------------------------------------
    /bin/bash						mr,
    /bin/uname						ix,
  }
}

profile portage.etc-update /usr/sbin/etc-update flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  
  # CAPABILITIES ---------------------------------------
  capability dac_override,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/pts/[0-9]*					rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/sbin/etc-update					r,
  /bin/bash						mr,
  /bin/cat						ix,
  /bin/grep						ix,
  /bin/cut						ix,
  /bin/rm						ix,
  /bin/mkdir						ix,
  /bin/chmod						ix,
  /bin/chown						ix,
  /bin/sed						ix,
  /bin/sort						ix,
  /bin/head						ix,
  /bin/wc						ix,
  /bin/mv						ix,
  /usr/bin/diff						ix,
  /usr/bin/find						ix,
  @{PYTHON_EXEC_WRAPPER}				Cx -> portageq,
  
  # READS/WRITES ---------------------------------------
  /							r,
  /etc/							r,
  /etc/**						rw,
  /usr/share/gnupg/					r,
  
  # TEMP -----------------------------------------------
  owner /var/tmp/etc-update-*/{,**}			rw,
  owner /tmp/sh-thd.*					rw,
  owner /var/tmp/portage/**				rw,
  
  profile portageq {
    #include <abstractions/base>
    #include <abstractions/python-exec>
    
    # EXECUTABLES --------------------------------------
    @{PYTHON_EXEC}/portageq				Px,
  }
}

