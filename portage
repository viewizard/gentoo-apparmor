#include <tunables/global>
profile portage.emerge /usr/lib{,32,64}/python-exec/python*/emerge flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>
  
  
  capability dac_override,
  capability chown,
  capability fsetid,
  capability setuid,
  capability setgid,
  capability fowner,
  
  /dev/ptmx rw,
  /dev/pts/[0-9]* rw,
  @{PROC}/@{pid}/fd/ r,
  @{PROC}/@{pid}/mountinfo r,
  
  /bin/bash cx -> shell,
  /usr/bin/sandbox cx -> sandboxed_shell,
  /usr/bin/find ix,
  /usr/bin/id ix,
  /usr/bin/install-info ix,
  /usr/bin/wget ix,
  /usr/bin/desktop-file-validate ix,
  
  / r,
  /bin/ r,
  /bin/** rw,
  /etc/ r,
  deny /etc/ w,
  /etc/** rw,
  /lib{,32,64}/ r,
  /lib{,32,64}/** rw,
  /opt/ r,
  /opt/** rw,
  /sbin/ r,
  /sbin/** rw,
  /usr/ r,
  deny /usr/ w,
  /usr/** rw, # FIX ME! exclude "/usr/local" with {*^}/{**^}, when this features will be available
  /usr/portage/distfiles/** rwk,
  /usr/portage/packages/** rwk,
  /var/ rw,
  /var/** rwk, # FIX ME! exclude "/var/log" (allow only subfolder creation and .keep* files) with {*^}/{**^}, when this features will be available
  /tmp/* rw,
  
  # Noisy
  deny /root/ r,
  deny /home/** r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/python>
    #include <abstractions/nameservice>
    #include <abstractions/user-tmp>
    
    capability dac_override,
    capability chown,
    capability fowner,
    capability fsetid,
    
    /dev/tty rw,
    /dev/pts/[0-9]* rw,
    @{PROC}/@{pid}/fd/ r,
    @{PROC}/@{pid}/mounts r,
    
    /usr/sbin/useradd Px,
    
    /etc/portage/bin/** ixr,
    /bin/** ixr,
    /sbin/** ixr,
    /usr/bin/** ixr,
    /usr/sbin/** ixr,
    /usr/lib{,32,64}/** ixr,
    /usr/libexec/** ixr,
    /usr/x86_64-pc-linux-gnu/** ixr,
    
    /lib{,32,64}/ r,
    /etc/ld.so.cache* rw,
    
    /etc/profile.env r,
    /etc/wgetrc r,
    /etc/ld.so.conf r,
    /etc/ld.so.conf.d/ r,
    /etc/ld.so.conf.d/* r,
    /etc/conf.d/* r,
    /etc/env.d/python/** r,
    /etc/portage/** r,
    /usr/** r,
    /usr/portage/** rw,
    /usr/share/applications/** rw,
    /usr/share/icons/hicolor/** rw,
    /var/db/pkg/ r,
    /var/db/pkg/** rw,
    
    /var/tmp/portage/ rw,
    /var/tmp/portage/** rwk,
    /var/cache/edb/** r,
    /var/cache/ldconfig/aux-cache* rw,
    /var/lib/portage/* r,
    /var/lib/gentoo/news/* rwk,
    /var/lib/gentoo/gkeys/keyrings/gentoo/** rw,
    /var/lib/*/ w,
    /var/lib/*/.keep* w,
    
  }
  
  profile sandboxed_shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    #include <abstractions/user-tmp>
    
    capability dac_override,
    capability chown,
    capability fowner,
    capability fsetid,
    
    /dev/tty rw,
    /dev/null k,
    /dev/pts/[0-9]* rw,
    /dev/shm/* rwl,
    @{PROC}/@{pid}/fd/ r,
    /sys/devices/system/cpu/ r,
    
    /bin/** ixr,
    /sbin/** ixr,
    /usr/bin/** ixr,
    /usr/sbin/** ixr,
    /usr/lib{,32,64}/** ixr,
    /usr/libexec/** ixr,
    /usr/x86_64-pc-linux-gnu/** ixr,
    
    /etc/env.d/gcc/** r,
    /etc/sandbox.conf r,
    /etc/sandbox.d/ r,
    /etc/sandbox.d/* r,
    /etc/ld.so.conf r,
    /etc/ld.so.conf.d/ r,
    /etc/ld.so.conf.d/* r,
    /etc/xml/catalog r,
    /etc/xml/docbook r,
    /etc/terminfo/x/xterm r,
    /etc/portage/env/ r,
    /etc/portage/env/** r,
    /etc/portage/patches/ r,
    /etc/portage/patches/** r,
    /usr/** r,
    
    /var/ r,
    /var/tmp/ r,
    /var/tmp/portage/ rw,
    /var/tmp/portage/** rwklix,
    
    # Noisy
    deny / r,
  }
  
}
