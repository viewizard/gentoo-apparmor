#include <tunables/global>
profile portage.emerge /usr/lib{,32,64}/python-exec/python*/emerge flags=(complain) {
  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  
  
  capability dac_override,
  capability chown,
  capability fsetid,
  capability setuid,
  capability setgid,
  capability fowner,
  
  /dev/ptmx rw,
  /dev/pts/[0-9]* rw,
  @{PROC}/@{pid}/fd/ r,
  @{PROC}/@{pid}/mountinfo r,
  
  /bin/bash cx -> shell,
  /usr/bin/sandbox cx -> sandboxed_shell,
  /usr/bin/find ix,
  /usr/bin/id ix,
  /usr/bin/install-info ix,
  /usr/bin/wget ix,
  
  / r,
  /bin/ r,
  /bin/** rw,
  /etc/ r,
  /etc/** rw,
  /lib{,32,64}/ r,
  /lib{,32,64}/** r,
  /opt/ r,
  /opt/** rw,
  /sbin/ r,
  /sbin/** rw,
  /usr/ r,
  /usr/** rw,
  /usr/portage/distfiles/** rwk,
  /usr/portage/packages/** rwk,
  /var/ rw,
  /var/** rwk,
  /tmp/* rw,
  
  # Noisy
  deny /root/ r,
  deny /home/** r,
  
  
  profile shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/python>
    #include <abstractions/nameservice>
    #include <abstractions/user-tmp>
    
    capability dac_override,
    capability chown,
    capability fowner,
    capability fsetid,
    
    /dev/tty rw,
    /dev/pts/[0-9]* rw,
    
    /etc/portage/bin/** ixr,
    /bin/** ixr,
    /sbin/** ixr,
    /usr/bin/** ixr,
    /usr/sbin/** ixr,
    /usr/lib{,32,64}/** ixr,
    
    /lib{,32,64}/ r,
    /etc/ld.so.cache* rw,
    
    /etc/profile.env r,
    /etc/wgetrc r,
    /etc/ld.so.conf r,
    /etc/ld.so.conf.d/ r,
    /etc/ld.so.conf.d/* r,
    /etc/env.d/python/** r,
    /etc/portage/** r,
    /usr/** r,
    /usr/portage/** rw,
    /var/db/pkg/ r,
    /var/db/pkg/** rw,
    
    /var/tmp/portage/ rw,
    /var/tmp/portage/** rwk,
    /var/cache/ldconfig/aux-cache* rw,
    /var/lib/gentoo/gkeys/keyrings/gentoo/** rw,
    
  }
  
  profile sandboxed_shell flags=(complain) {
    #include <abstractions/base>
    #include <abstractions/nameservice>
    
    capability dac_override,
    capability chown,
    capability fowner,
    capability fsetid,
    
    /dev/tty rw,
    /dev/pts/[0-9]* rw,
    @{PROC}/@{pid}/fd/ r,
    /sys/devices/system/cpu/ r,
    
    /bin/** ixr,
    /sbin/** ixr,
    /usr/bin/** ixr,
    /usr/sbin/** ixr,
    /usr/lib{,32,64}/** ixr,
    /usr/libexec/** ixr,
    /usr/x86_64-pc-linux-gnu/** ixr,
    
    /etc/env.d/gcc/** r,
    /etc/sandbox.conf r,
    /etc/sandbox.d/ r,
    /etc/sandbox.d/* r,
    /etc/ld.so.conf r,
    /etc/ld.so.conf.d/ r,
    /etc/ld.so.conf.d/* r,
    /usr/** r,
    
    /var/tmp/portage/ rw,
    /var/tmp/portage/** rwklix,
    
    # Noisy
    deny / r,
  }
  
}
