  #include <abstractions/base>
  #include <abstractions/python>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>
  
  capability dac_override,
  capability setuid,
  capability setgid,
  capability chown,
  capability fowner,
  capability fsetid,
  
  /dev/pts/[0-9]* w,
  @{PROC}/@{pid}/fd/ r,
  
  /bin/bash Cxr -> shell,
  /usr/bin/sandbox cx -> sandboxed_shell,
  /usr/bin/git ix,
  /usr/bin/id ix,
  /usr/bin/wget ix,
  
  /etc/profile.env r,
  /etc/wgetrc r,
  /etc/terminfo/x/xterm r,
  /etc/portage/{,**} r,
  /usr/portage/{,**} r,
