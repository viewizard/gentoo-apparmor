#include <tunables/global>

profile teamspeak-client-bin.teamspeak /usr/bin/teamspeak3 {
  #include <abstractions/audio>
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/qt>
  #include <abstractions/nameservice>
  #include <abstractions/video>
  #include <abstractions/ssl_certs>
  #include <abstractions/X>
  #include <abstractions/dbus-session-strict>
  #include <abstractions/xdg-open>
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  owner /dev/shm/.org.chromium.Chromium.??????		rw,
  /sys/devices/system/cpu/				r,
  /sys/devices/pci[0-9]*/**/{resource,irq,vendor,device,class,config} r,
  
  # AUDIT PSEUDO ---------------------------------------
  deny @{PROC}/@{pid}/cmdline				r,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/teamspeak3					r,
  @{shell}						mr,
  /opt/teamspeak3-client/ts3client			ix,
  /opt/teamspeak3-client/QtWebEngineProcess		ix,
  /opt/teamspeak3-client/package_inst			ix,	# Установка плагинов @{HOME}/.ts3client/plugins/*.so
#  /opt/teamspeak3-client/error_report			ix,
#  /opt/teamspeak3-client/update			ix,
  
  # READS/WRITES ---------------------------------------
  /opt/teamspeak3-client/				r,
  /opt/teamspeak3-client/**				rk,
  /opt/teamspeak3-client/{,**/}*.so*			m,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.ts3client/				rw,
  owner @{HOME}/.ts3client/**				rwk,
  owner @{HOME}/.ts3client/plugins/*.so			m,	# FIX ME! Не будет работать с IMA/EVM.
  owner @{HOME}/.pki/nssdb/{,**}			rwk,
  
  # TEMP -----------------------------------------------
  /tmp/							r,
  owner/tmp/.gl*					rw,
  owner /tmp/TS3Client*					rw,
  owner /tmp/*.ts3_plugin				rw,
  owner /tmp/ts3import/{,**}				rw,
  /var/tmp/						r,
}
