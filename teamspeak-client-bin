#include <local/tunables.d/>

profile teamspeak-client-bin.teamspeak /usr/bin/teamspeak3 {
  #include <abstractions/audio>
  #include <abstractions/base>
  #include <abstractions/fonts>
  #include <abstractions/freedesktop.org>
  #include <abstractions/qt>
  #include <abstractions/nameservice>
  #include <abstractions/video>
  #include <abstractions/ssl-certs>
  #include <abstractions/X>
  #include <abstractions/dbus/system-strict>
  #include <abstractions/dbus/session-strict>
  #include <abstractions/dbus/accessibility-strict>
  #include <abstractions/dbus/networkmanager>
  #include <abstractions/xdg-open>
  #include <abstractions/fs/access-by-pattern-internet>		# Доступ к файлам для установки аватарки.
  
  # NETWORK --------------------------------------------
  network netlink raw,
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,
  
  # PSEUDO ---------------------------------------------
  /dev/tty						rw,
  /dev/tty[0-9]*					rw,
  /dev/pts/[0-9]*					rw,
  owner /dev/shm/.org.chromium.Chromium.@{TMP6}		rw,	# IMPROVE! Потом работать с xattr, чтобы ограничить только на процесс.
  @{sys}/devices/system/cpu/				r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/**/config		r,
  @{sys}/devices/pci@{PCI2}/@{PCI4}/{device,class,irq,resource,vendor} r,
  @{sys}/devices/pci@{PCI2}/**/@{PCI4}/{device,class,irq,resource,vendor} r,
  @{PROC}/						r,
  @{PROC}/sys/kernel/shmmax				r,
  deny @{PROC}/@{pids}/cmdline				r,
  deny @{PROC}/@{pids}/oom_score_adj			rw,
  
  # EXECUTABLES ----------------------------------------
  /usr/bin/teamspeak3					r,
  @{shell}						mr,
  /usr/lib{,32,64}/qt[0-9]*/libexec/QtWebEngineProcess	ix,
  /opt/teamspeak3-client/ts3client			ix,
  /opt/teamspeak3-client/QtWebEngineProcess		ix,
  /opt/teamspeak3-client/package_inst			ix,	# Установка плагинов @{HOME}/.ts3client/plugins/*.so
#  /opt/teamspeak3-client/error_report			ix,
  deny /opt/teamspeak3-client/update			x,	# Не разрешать обновления, используем portage.
  
  # READS/WRITES ---------------------------------------
  /opt/teamspeak3-client/{,**/}				r,
  /opt/teamspeak3-client/{,**/}*			rk,
  /opt/teamspeak3-client/{,**/}*.so{,.[0-9]*}		m,
  
  # USERS ----------------------------------------------
  owner @{HOME}/.ts3client/{,**/}			rw,
  owner @{HOME}/.ts3client/{,**/}*			rwk,
  owner @{HOME}/.ts3client/plugins/*.so			m,	# IMA! Требуется IMA digsig xattr или исключения по fowner в правилах IMA.
  owner @{HOME}/.pki/nssdb/*				rwk,
  
  # TEMP -----------------------------------------------
  /tmp/							r,
  owner /tmp/TS3Client@{TMP4}				rw,
  audit owner /tmp/*.ts3_plugin				rw,	# FIX ME! audit 25.11.2017
  audit owner /tmp/ts3import/{,**}			rw,	# FIX ME! audit 25.11.2017
  audit owner /tmp/qt_temp.??????			rw,	# FIX ME! audit 25.11.2017
  owner /tmp/avatar					rw,
  /var/tmp/						r,
  owner /var/tmp/@{TMP_SQLITE}				rw,
}
